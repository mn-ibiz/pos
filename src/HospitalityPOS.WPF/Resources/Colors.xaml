<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Primary Colors -->
    <Color x:Key="PrimaryColor">#4C9AFF</Color>
    <Color x:Key="PrimaryDarkColor">#2D7DD2</Color>
    <Color x:Key="PrimaryLightColor">#74B3FF</Color>

    <!-- Background Colors -->
    <Color x:Key="BackgroundDarkColor">#1E1E2E</Color>
    <Color x:Key="BackgroundMediumColor">#2D2D44</Color>
    <Color x:Key="BackgroundLightColor">#3D3D5C</Color>

    <!-- Text Colors -->
    <Color x:Key="TextPrimaryColor">#FFFFFF</Color>
    <Color x:Key="TextSecondaryColor">#8888AA</Color>
    <Color x:Key="TextMutedColor">#555577</Color>

    <!-- Accent Colors -->
    <Color x:Key="SuccessColor">#2ECC71</Color>
    <Color x:Key="WarningColor">#F39C12</Color>
    <Color x:Key="DangerColor">#E74C3C</Color>
    <Color x:Key="InfoColor">#3498DB</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}" />
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLightColor}" />

    <SolidColorBrush x:Key="BackgroundDarkBrush" Color="{StaticResource BackgroundDarkColor}" />
    <SolidColorBrush x:Key="BackgroundMediumBrush" Color="{StaticResource BackgroundMediumColor}" />
    <SolidColorBrush x:Key="BackgroundLightBrush" Color="{StaticResource BackgroundLightColor}" />

    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}" />
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMutedColor}" />

    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}" />
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}" />
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource DangerColor}" />
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}" />

</ResourceDictionary>
