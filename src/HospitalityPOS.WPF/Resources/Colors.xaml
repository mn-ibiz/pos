<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ========================================== -->
    <!-- ACCENT COLORS (Theme-Independent)          -->
    <!-- These colors don't change with theme       -->
    <!-- ========================================== -->

    <!-- Primary Brand Colors -->
    <Color x:Key="PrimaryColor">#4C9AFF</Color>
    <Color x:Key="PrimaryDarkColor">#2D7DD2</Color>
    <Color x:Key="PrimaryLightColor">#74B3FF</Color>

    <!-- Status/Semantic Colors -->
    <Color x:Key="SuccessColor">#2ECC71</Color>
    <Color x:Key="WarningColor">#F39C12</Color>
    <Color x:Key="DangerColor">#E74C3C</Color>
    <Color x:Key="InfoColor">#3498DB</Color>

    <!-- Accent Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}" />
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLightColor}" />

    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}" />
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}" />
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource DangerColor}" />
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}" />

    <!-- ========================================== -->
    <!-- LEGACY ALIASES (For Backward Compatibility)-->
    <!-- These reference theme-aware resources      -->
    <!-- ========================================== -->

    <!-- Background Colors (Legacy - now theme-aware) -->
    <Color x:Key="BackgroundDarkColor">#1E1E2E</Color>
    <Color x:Key="BackgroundMediumColor">#2D2D44</Color>
    <Color x:Key="BackgroundLightColor">#3D3D5C</Color>

    <!-- Text Colors (Legacy - now theme-aware) -->
    <Color x:Key="TextPrimaryColor">#FFFFFF</Color>
    <Color x:Key="TextSecondaryColor">#8888AA</Color>
    <Color x:Key="TextMutedColor">#555577</Color>

    <!-- Legacy Background Brushes (reference theme resources) -->
    <SolidColorBrush x:Key="BackgroundDarkBrush" Color="{DynamicResource ThemeBackgroundColor}" />
    <SolidColorBrush x:Key="BackgroundMediumBrush" Color="{DynamicResource ThemeBackgroundSecondaryColor}" />
    <SolidColorBrush x:Key="BackgroundLightBrush" Color="{DynamicResource ThemeBackgroundTertiaryColor}" />

    <!-- Legacy Text Brushes (reference theme resources) -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{DynamicResource ThemeTextPrimaryColor}" />
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{DynamicResource ThemeTextSecondaryColor}" />
    <SolidColorBrush x:Key="TextMutedBrush" Color="{DynamicResource ThemeTextMutedColor}" />

</ResourceDictionary>
