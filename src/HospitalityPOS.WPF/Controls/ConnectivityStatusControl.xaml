<UserControl x:Class="HospitalityPOS.WPF.Controls.ConnectivityStatusControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:HospitalityPOS.WPF.Converters"
             mc:Ignorable="d"
             d:DesignHeight="32" d:DesignWidth="120"
             x:Name="Root">

    <UserControl.Resources>
        <converters:ConnectivityStatusToColorConverter x:Key="StatusToColor"/>
        <converters:ConnectivityStatusToTextConverter x:Key="StatusToText"/>

        <!-- Pulse animation for offline status -->
        <Storyboard x:Key="PulseAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="StatusIndicator"
                           Storyboard.TargetProperty="Opacity"
                           From="1" To="0.3" Duration="0:0:0.8"
                           AutoReverse="True"/>
        </Storyboard>
    </UserControl.Resources>

    <Border Background="Transparent"
            Padding="4,2"
            Cursor="Hand"
            ToolTipService.ShowDuration="10000">
        <Border.ToolTip>
            <ToolTip>
                <StackPanel>
                    <TextBlock FontWeight="SemiBold"
                               Text="{Binding Status, ElementName=Root, Converter={StaticResource StatusToText}}"/>
                    <TextBlock Text="{Binding LastSyncText, ElementName=Root}"
                               Foreground="Gray"
                               Visibility="{Binding HasLastSync, ElementName=Root, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    <Separator Margin="0,4" Visibility="{Binding HasServiceDetails, ElementName=Root, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    <ItemsControl ItemsSource="{Binding ServiceStatuses, ElementName=Root}"
                                  Visibility="{Binding HasServiceDetails, ElementName=Root, Converter={StaticResource BoolToVisibilityConverter}}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0,1">
                                    <Ellipse Width="8" Height="8"
                                             Fill="{Binding IsReachable, Converter={StaticResource BoolToColorConverter}}"
                                             Margin="0,0,6,0"/>
                                    <TextBlock Text="{Binding ServiceName}" FontSize="11"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ToolTip>
        </Border.ToolTip>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <!-- Status Indicator Circle -->
            <Ellipse x:Name="StatusIndicator"
                     Width="12" Height="12"
                     Fill="{Binding Status, ElementName=Root, Converter={StaticResource StatusToColor}}"
                     Margin="0,0,6,0"
                     VerticalAlignment="Center">
                <Ellipse.Effect>
                    <DropShadowEffect Color="{Binding Status, ElementName=Root, Converter={StaticResource StatusToColor}, ConverterParameter=ShadowColor}"
                                      BlurRadius="4"
                                      ShadowDepth="0"
                                      Opacity="0.6"/>
                </Ellipse.Effect>
            </Ellipse>

            <!-- Status Text (optional) -->
            <TextBlock x:Name="StatusText"
                       Text="{Binding Status, ElementName=Root, Converter={StaticResource StatusToText}}"
                       Foreground="{Binding Status, ElementName=Root, Converter={StaticResource StatusToColor}}"
                       FontSize="11"
                       FontWeight="Medium"
                       VerticalAlignment="Center"
                       Visibility="{Binding ShowText, ElementName=Root, Converter={StaticResource BoolToVisibilityConverter}}"/>
        </StackPanel>
    </Border>
</UserControl>
