<Application x:Class="HospitalityPOS.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Theme resources (loaded dynamically by ThemeService, Dark is default) -->
                <ResourceDictionary Source="Resources/Themes/DarkTheme.xaml" />
                <!-- Base colors (accent colors that don't change with theme) -->
                <ResourceDictionary Source="Resources/Colors.xaml" />
                <!-- Styles that use theme resources -->
                <ResourceDictionary Source="Resources/Styles.xaml" />
                <!-- Converters -->
                <ResourceDictionary Source="Resources/Converters.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
