<Window x:Class="HospitalityPOS.WPF.Views.CustomerDisplayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Customer Display"
        WindowStyle="None"
        WindowState="Maximized"
        ResizeMode="NoResize"
        Topmost="True"
        ShowInTaskbar="False">
    <Window.Resources>
        <!-- Dark Theme Colors -->
        <SolidColorBrush x:Key="PrimaryBackground" Color="#1E1E2E"/>
        <SolidColorBrush x:Key="SecondaryBackground" Color="#16162B"/>
        <SolidColorBrush x:Key="CardBackground" Color="#2D2D44"/>
        <SolidColorBrush x:Key="PrimaryText" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SecondaryText" Color="#A0A0B0"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#22C55E"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#3B82F6"/>
        <SolidColorBrush x:Key="AccentYellow" Color="#F59E0B"/>
        <SolidColorBrush x:Key="AccentRed" Color="#EF4444"/>

        <!-- Bool to Visibility Converters -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>

        <!-- Animation Styles -->
        <Style x:Key="FadeInPanel" TargetType="StackPanel">
            <Style.Triggers>
                <Trigger Property="Visibility" Value="Visible">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                 From="0" To="1" Duration="0:0:0.3"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ItemPopAnimation" TargetType="Border">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsShowingItemAnimation}" Value="True">
                    <DataTrigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX"
                                                 From="1" To="1.05" Duration="0:0:0.15"
                                                 AutoReverse="True"/>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY"
                                                 From="1" To="1.05" Duration="0:0:0.15"
                                                 AutoReverse="True"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.EnterActions>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource PrimaryBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Logo -->
        <Border Grid.Row="0" Background="{StaticResource SecondaryBackground}"
                Padding="40,20">
            <Grid>
                <!-- Logo (optional) -->
                <Image Source="{Binding LogoPath}"
                       Height="80"
                       HorizontalAlignment="Left"
                       Visibility="{Binding ShowLogo, Converter={StaticResource BoolToVisibility}}"/>

                <!-- Store Name/Welcome -->
                <TextBlock Text="Welcome to Our Store"
                           FontSize="28"
                           FontWeight="Light"
                           Foreground="{StaticResource SecondaryText}"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" Margin="40">
            <!-- Welcome/Idle Screen -->
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Visibility="{Binding ShowWelcome, Converter={StaticResource BoolToVisibility}}"
                        Style="{StaticResource FadeInPanel}">
                <TextBlock Text="{Binding WelcomeMessage}"
                           FontSize="72"
                           FontWeight="Bold"
                           Foreground="{StaticResource PrimaryText}"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding WelcomeMessageLine2}"
                           FontSize="32"
                           Foreground="{StaticResource SecondaryText}"
                           HorizontalAlignment="Center"
                           Margin="0,16,0,0"/>
            </StackPanel>

            <!-- Item Display Screen -->
            <Grid Visibility="{Binding ShowItems, Converter={StaticResource BoolToVisibility}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Current Item -->
                <Border Grid.Row="0"
                        Background="{StaticResource CardBackground}"
                        CornerRadius="20"
                        Padding="40"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        MinWidth="600"
                        Style="{StaticResource ItemPopAnimation}">
                    <Border.RenderTransform>
                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                    </Border.RenderTransform>
                    <StackPanel>
                        <TextBlock Text="{Binding LastItemName}"
                                   FontSize="48"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource PrimaryText}"
                                   HorizontalAlignment="Center"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"/>

                        <!-- Weight info for weighed items -->
                        <TextBlock Text="{Binding WeightDisplay}"
                                   FontSize="24"
                                   Foreground="{StaticResource SecondaryText}"
                                   HorizontalAlignment="Center"
                                   Margin="0,8,0,0"
                                   Visibility="{Binding IsWeighedItem, Converter={StaticResource BoolToVisibility}}"/>

                        <!-- Quantity if > 1 -->
                        <TextBlock FontSize="24"
                                   Foreground="{StaticResource SecondaryText}"
                                   HorizontalAlignment="Center"
                                   Margin="0,8,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding LastItemQuantity}" Value="1">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                            <Run Text="Qty: "/><Run Text="{Binding LastItemQuantity}"/>
                        </TextBlock>

                        <TextBlock Text="{Binding FormattedLastItemPrice}"
                                   FontSize="56"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource AccentGreen}"
                                   HorizontalAlignment="Center"
                                   Margin="0,16,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Order Summary -->
                <Border Grid.Row="1"
                        Background="{StaticResource SecondaryBackground}"
                        CornerRadius="16"
                        Padding="32"
                        Margin="0,24,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Item Count -->
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock FontSize="24" Foreground="{StaticResource SecondaryText}">
                                <Run Text="{Binding ItemCount}"/>
                                <Run Text=" items"/>
                            </TextBlock>

                            <!-- Discount if any -->
                            <TextBlock FontSize="20"
                                       Foreground="{StaticResource AccentYellow}"
                                       Visibility="{Binding HasDiscount, Converter={StaticResource BoolToVisibility}}"
                                       Margin="0,8,0,0">
                                <Run Text="Discount: -"/>
                                <Run Text="{Binding CurrencySymbol}"/>
                                <Run Text=" "/>
                                <Run Text="{Binding DiscountAmount, StringFormat=N2}"/>
                            </TextBlock>
                        </StackPanel>

                        <!-- Running Total -->
                        <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                            <TextBlock Text="TOTAL"
                                       FontSize="24"
                                       Foreground="{StaticResource SecondaryText}"
                                       HorizontalAlignment="Right"/>
                            <TextBlock Text="{Binding FormattedTotal}"
                                       FontSize="72"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource PrimaryText}"
                                       HorizontalAlignment="Right"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- Payment Screen -->
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Visibility="{Binding ShowPayment, Converter={StaticResource BoolToVisibility}}"
                        Style="{StaticResource FadeInPanel}">
                <!-- Amount Due -->
                <Border Background="{StaticResource CardBackground}"
                        CornerRadius="20"
                        Padding="60,40"
                        MinWidth="600">
                    <StackPanel>
                        <TextBlock Text="Amount Due"
                                   FontSize="28"
                                   Foreground="{StaticResource SecondaryText}"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding FormattedAmountDue}"
                                   FontSize="80"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource PrimaryText}"
                                   HorizontalAlignment="Center"
                                   Margin="0,8,0,0"/>

                        <!-- Payment Method -->
                        <Border Background="{StaticResource SecondaryBackground}"
                                CornerRadius="12"
                                Padding="24,16"
                                Margin="0,24,0,0"
                                Visibility="{Binding AmountPaid, Converter={StaticResource BoolToVisibility}}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="{Binding PaymentMethod}"
                                           FontSize="24"
                                           Foreground="{StaticResource SecondaryText}"
                                           VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1"
                                           Text="{Binding FormattedAmountPaid}"
                                           FontSize="32"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource AccentGreen}"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- Change -->
                        <Border Background="{StaticResource AccentGreen}"
                                CornerRadius="12"
                                Padding="32,24"
                                Margin="0,24,0,0"
                                Visibility="{Binding ShowChange, Converter={StaticResource BoolToVisibility}}">
                            <StackPanel>
                                <TextBlock Text="Your Change"
                                           FontSize="24"
                                           Foreground="#FFFFFFCC"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding FormattedChange}"
                                           FontSize="56"
                                           FontWeight="Bold"
                                           Foreground="White"
                                           HorizontalAlignment="Center"
                                           Margin="0,8,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Thank You Screen -->
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Visibility="{Binding ShowThankYou, Converter={StaticResource BoolToVisibility}}"
                        Style="{StaticResource FadeInPanel}">
                <!-- Success Icon -->
                <Border Background="{StaticResource AccentGreen}"
                        CornerRadius="100"
                        Width="150" Height="150"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,32">
                    <TextBlock Text="âœ“"
                               FontSize="80"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>

                <TextBlock Text="{Binding ThankYouMessage}"
                           FontSize="72"
                           FontWeight="Bold"
                           Foreground="{StaticResource PrimaryText}"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding ThankYouMessageLine2}"
                           FontSize="32"
                           Foreground="{StaticResource SecondaryText}"
                           HorizontalAlignment="Center"
                           Margin="0,16,0,0"/>
            </StackPanel>

            <!-- Promotion Screen -->
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Visibility="{Binding ShowPromotion, Converter={StaticResource BoolToVisibility}}"
                        Style="{StaticResource FadeInPanel}">
                <Border Background="{StaticResource CardBackground}"
                        CornerRadius="20"
                        Padding="60,40"
                        MinWidth="600">
                    <StackPanel>
                        <!-- Promotion Badge -->
                        <Border Background="{StaticResource AccentYellow}"
                                CornerRadius="8"
                                Padding="20,8"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,24">
                            <TextBlock Text="SPECIAL OFFER"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="#1E1E2E"/>
                        </Border>

                        <TextBlock Text="{Binding PromotionTitle}"
                                   FontSize="48"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource PrimaryText}"
                                   HorizontalAlignment="Center"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"/>

                        <TextBlock Text="{Binding PromotionDescription}"
                                   FontSize="28"
                                   Foreground="{StaticResource SecondaryText}"
                                   HorizontalAlignment="Center"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   Margin="0,16,0,0"/>

                        <!-- Discount Badge if applicable -->
                        <Border Background="{StaticResource AccentGreen}"
                                CornerRadius="12"
                                Padding="24,12"
                                HorizontalAlignment="Center"
                                Margin="0,24,0,0"
                                Visibility="{Binding PromotionDiscount, Converter={StaticResource BoolToVisibility}}">
                            <TextBlock FontSize="32" FontWeight="Bold" Foreground="White">
                                <Run Text="Save "/>
                                <Run Text="{Binding PromotionDiscount}"/>
                                <Run Text="%"/>
                            </TextBlock>
                        </Border>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Error State -->
            <Border Background="#2D2020"
                    CornerRadius="16"
                    Padding="40"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Visibility="{Binding HasError, Converter={StaticResource BoolToVisibility}}">
                <StackPanel>
                    <TextBlock Text="Display Error"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="{StaticResource AccentRed}"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding StatusMessage}"
                               FontSize="18"
                               Foreground="{StaticResource SecondaryText}"
                               HorizontalAlignment="Center"
                               Margin="0,16,0,0"
                               TextWrapping="Wrap"
                               MaxWidth="500"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2"
                Background="{StaticResource SecondaryBackground}"
                Padding="40,16">
            <Grid>
                <TextBlock Text="Powered by HospitalityPOS"
                           FontSize="14"
                           Foreground="{StaticResource SecondaryText}"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"/>

                <TextBlock FontSize="14"
                           Foreground="{StaticResource SecondaryText}"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center">
                    <Run Text="{Binding Source={x:Static sys:DateTime.Now}, StringFormat='dddd, MMMM d, yyyy'}"
                         xmlns:sys="clr-namespace:System;assembly=mscorlib"/>
                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</Window>
