<UserControl x:Class="HospitalityPOS.WPF.Views.Marketing.SmsCampaignDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="800"
             d:DesignWidth="1200"
             Background="#1E1E2E">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />

        <!-- Stats Card Style -->
        <Style x:Key="StatsCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#252538"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
        </Style>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="16,8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="#3D3D5C"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#16162B" Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="&#xE72B;" FontFamily="Segoe MDL2 Assets"
                        Command="{Binding GoBackCommand}"
                        Background="Transparent" BorderThickness="0"
                        Foreground="#9CA3AF" FontSize="16" Padding="8"
                        Cursor="Hand" VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Margin="16,0">
                    <TextBlock Text="SMS Marketing" FontSize="24" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Manage campaigns, templates, and customer segments"
                               Foreground="#9CA3AF" FontSize="13" Margin="0,4,0,0"/>
                </StackPanel>

                <Button Grid.Column="2" Style="{StaticResource ModernButton}"
                        Background="#10B981" Content="New Campaign"
                        Command="{Binding CreateCampaignCommand}"/>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="24">
            <StackPanel>
                <!-- Error Message -->
                <Border Background="#7F1D1D" CornerRadius="8" Padding="16" Margin="0,0,0,16"
                        Visibility="{Binding ErrorMessage, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="{Binding ErrorMessage}" Foreground="#FCA5A5" TextWrapping="Wrap"/>
                </Border>

                <!-- Statistics Cards -->
                <Grid Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Total Campaigns -->
                    <Border Grid.Column="0" Style="{StaticResource StatsCardStyle}">
                        <StackPanel>
                            <TextBlock Text="&#xE8BD;" FontFamily="Segoe MDL2 Assets" FontSize="24"
                                       Foreground="#3B82F6" Margin="0,0,0,12"/>
                            <TextBlock Text="{Binding TotalCampaigns}" FontSize="32" FontWeight="Bold"
                                       Foreground="White"/>
                            <TextBlock Text="Total Campaigns" Foreground="#9CA3AF" FontSize="13"/>
                        </StackPanel>
                    </Border>

                    <!-- Active Campaigns -->
                    <Border Grid.Column="2" Style="{StaticResource StatsCardStyle}">
                        <StackPanel>
                            <TextBlock Text="&#xE724;" FontFamily="Segoe MDL2 Assets" FontSize="24"
                                       Foreground="#F59E0B" Margin="0,0,0,12"/>
                            <TextBlock Text="{Binding ActiveCampaigns}" FontSize="32" FontWeight="Bold"
                                       Foreground="White"/>
                            <TextBlock Text="Active/Sending" Foreground="#9CA3AF" FontSize="13"/>
                        </StackPanel>
                    </Border>

                    <!-- Messages Sent -->
                    <Border Grid.Column="4" Style="{StaticResource StatsCardStyle}">
                        <StackPanel>
                            <TextBlock Text="&#xE8C1;" FontFamily="Segoe MDL2 Assets" FontSize="24"
                                       Foreground="#10B981" Margin="0,0,0,12"/>
                            <TextBlock Text="{Binding TotalMessagesSent, StringFormat=N0}" FontSize="32" FontWeight="Bold"
                                       Foreground="White"/>
                            <TextBlock Text="Messages Sent" Foreground="#9CA3AF" FontSize="13"/>
                        </StackPanel>
                    </Border>

                    <!-- Delivery Rate -->
                    <Border Grid.Column="6" Style="{StaticResource StatsCardStyle}">
                        <StackPanel>
                            <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets" FontSize="24"
                                       Foreground="#EC4899" Margin="0,0,0,12"/>
                            <TextBlock Text="{Binding OverallDeliveryRate, StringFormat={}{0:N1}%}" FontSize="32" FontWeight="Bold"
                                       Foreground="White"/>
                            <TextBlock Text="Delivery Rate" Foreground="#9CA3AF" FontSize="13"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Quick Actions -->
                <Grid Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Templates Card -->
                    <Border Grid.Column="0" Background="#252538" CornerRadius="12" Padding="20"
                            Cursor="Hand">
                        <Border.InputBindings>
                            <MouseBinding MouseAction="LeftClick" Command="{Binding NavigateToTemplatesCommand}"/>
                        </Border.InputBindings>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="&#xE8C1;" FontFamily="Segoe MDL2 Assets" FontSize="20"
                                           Foreground="#F59E0B" Margin="0,0,0,8"/>
                                <TextBlock Text="SMS Templates" FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                                <TextBlock Foreground="#9CA3AF" FontSize="12" Margin="0,4,0,0">
                                    <Run Text="{Binding TotalTemplates}"/>
                                    <Run Text="templates available"/>
                                </TextBlock>
                            </StackPanel>
                            <TextBlock Grid.Column="1" Text="&#xE76C;" FontFamily="Segoe MDL2 Assets"
                                       FontSize="16" Foreground="#9CA3AF" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Segments Card -->
                    <Border Grid.Column="2" Background="#252538" CornerRadius="12" Padding="20"
                            Cursor="Hand">
                        <Border.InputBindings>
                            <MouseBinding MouseAction="LeftClick" Command="{Binding NavigateToSegmentsCommand}"/>
                        </Border.InputBindings>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="&#xE902;" FontFamily="Segoe MDL2 Assets" FontSize="20"
                                           Foreground="#3B82F6" Margin="0,0,0,8"/>
                                <TextBlock Text="Customer Segments" FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                                <TextBlock Foreground="#9CA3AF" FontSize="12" Margin="0,4,0,0">
                                    <Run Text="{Binding TotalSegments}"/>
                                    <Run Text="segments defined"/>
                                </TextBlock>
                            </StackPanel>
                            <TextBlock Grid.Column="1" Text="&#xE76C;" FontFamily="Segoe MDL2 Assets"
                                       FontSize="16" Foreground="#9CA3AF" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Scheduled Card -->
                    <Border Grid.Column="4" Background="#252538" CornerRadius="12" Padding="20">
                        <StackPanel>
                            <TextBlock Text="&#xE787;" FontFamily="Segoe MDL2 Assets" FontSize="20"
                                       Foreground="#10B981" Margin="0,0,0,8"/>
                            <TextBlock Text="Scheduled" FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                            <TextBlock Foreground="#9CA3AF" FontSize="12" Margin="0,4,0,0">
                                <Run Text="{Binding ScheduledCampaigns}"/>
                                <Run Text="campaigns pending"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Recent Campaigns -->
                <Border Background="#252538" CornerRadius="12" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Recent Campaigns" FontSize="18" FontWeight="SemiBold"
                                   Foreground="White" Margin="0,0,0,16"/>

                        <ItemsControl ItemsSource="{Binding RecentCampaigns}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#2D2D44" CornerRadius="8" Padding="16" Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Status Indicator -->
                                            <Border Grid.Column="0" Width="8" Height="8" CornerRadius="4"
                                                    VerticalAlignment="Center" Margin="0,0,12,0">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="#6B7280"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="Sending">
                                                                <Setter Property="Background" Value="#F59E0B"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Completed">
                                                                <Setter Property="Background" Value="#10B981"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Scheduled">
                                                                <Setter Property="Background" Value="#3B82F6"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Cancelled">
                                                                <Setter Property="Background" Value="#EF4444"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                            </Border>

                                            <!-- Campaign Info -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Foreground="White"/>
                                                <TextBlock Foreground="#9CA3AF" FontSize="12">
                                                    <Run Text="{Binding TargetCount}"/>
                                                    <Run Text="recipients |"/>
                                                    <Run Text="{Binding SentCount}"/>
                                                    <Run Text="sent"/>
                                                </TextBlock>
                                            </StackPanel>

                                            <!-- Status Badge -->
                                            <Border Grid.Column="2" Padding="8,4" CornerRadius="4"
                                                    VerticalAlignment="Center" Margin="8,0">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="#374151"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="Sending">
                                                                <Setter Property="Background" Value="#422006"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Completed">
                                                                <Setter Property="Background" Value="#052E16"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="{Binding Status}" FontSize="11" FontWeight="SemiBold">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="#9CA3AF"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Status}" Value="Sending">
                                                                    <Setter Property="Foreground" Value="#F59E0B"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="Completed">
                                                                    <Setter Property="Foreground" Value="#10B981"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>

                                            <!-- Delivery Rate -->
                                            <TextBlock Grid.Column="3" VerticalAlignment="Center"
                                                       Foreground="#9CA3AF" FontSize="12" Margin="8,0">
                                                <Run Text="{Binding DeliveryRate, StringFormat={}{0:N0}%}"/>
                                                <Run Text="delivered"/>
                                            </TextBlock>

                                            <!-- View Button -->
                                            <Button Grid.Column="4" Content="View"
                                                    Command="{Binding DataContext.ViewCampaignCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                    CommandParameter="{Binding}"
                                                    Background="#3D3D5C" Foreground="White"
                                                    Padding="12,6" FontSize="12" Cursor="Hand"
                                                    BorderThickness="0"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Empty State -->
                        <Border Visibility="{Binding RecentCampaigns.Count, Converter={StaticResource ZeroToVisibleConverter}, FallbackValue=Collapsed}"
                                Padding="40" HorizontalAlignment="Center">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="&#xE8BD;" FontFamily="Segoe MDL2 Assets" FontSize="48"
                                           Foreground="#3D3D5C" HorizontalAlignment="Center"/>
                                <TextBlock Text="No campaigns yet" Foreground="#6B7280" FontSize="16"
                                           HorizontalAlignment="Center" Margin="0,16,0,0"/>
                                <TextBlock Text="Create your first SMS campaign to engage customers"
                                           Foreground="#4B5563" FontSize="13" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="2" Background="#80000000"
                Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="4" Foreground="#F59E0B"/>
                <TextBlock Text="{Binding BusyMessage}" Foreground="White" FontSize="14"
                           HorizontalAlignment="Center" Margin="0,16,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
