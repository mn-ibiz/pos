<Window x:Class="HospitalityPOS.WPF.Views.WeightScaleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Weigh Product"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Width="500" Height="600">
    <Window.Resources>
        <!-- Dark Theme Colors -->
        <SolidColorBrush x:Key="PrimaryBackground" Color="#1E1E2E"/>
        <SolidColorBrush x:Key="SecondaryBackground" Color="#252538"/>
        <SolidColorBrush x:Key="CardBackground" Color="#2D2D44"/>
        <SolidColorBrush x:Key="PrimaryText" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SecondaryText" Color="#A0A0B0"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#3B82F6"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#22C55E"/>
        <SolidColorBrush x:Key="AccentYellow" Color="#F59E0B"/>
        <SolidColorBrush x:Key="AccentRed" Color="#EF4444"/>
        <SolidColorBrush x:Key="ScaleGreen" Color="#10B981"/>

        <!-- Button Styles -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentGreen}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#20C997"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#3D3D5C"/>
                    <Setter Property="Foreground" Value="#555577"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryText}"/>
            <Setter Property="BorderBrush" Value="{StaticResource SecondaryText}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#252538"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ScaleButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3D3D5C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Bool to Visibility Converter -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
    </Window.Resources>

    <Border Background="{StaticResource PrimaryBackground}" CornerRadius="16">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="{StaticResource ScaleGreen}"
                    CornerRadius="16,16,0,0" Padding="20,16">
                <Grid>
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="WEIGH PRODUCT"
                                   FontSize="18" FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding ProductName}"
                                   FontSize="14"
                                   Foreground="#FFFFFFCC"
                                   HorizontalAlignment="Center"
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- Close Button -->
                    <Button Content="X"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="18"
                            Width="30" Height="30"
                            Cursor="Hand"
                            Command="{Binding CancelCommand}"/>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="24">
                    <!-- Scale Status Indicator -->
                    <Border CornerRadius="8" Padding="12" Margin="0,0,0,20">
                        <Border.Background>
                            <SolidColorBrush Color="{Binding ScaleStatusColor, FallbackValue=#2D2D44}"/>
                        </Border.Background>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Status Icon -->
                            <Ellipse Grid.Column="0" Width="12" Height="12" Margin="0,0,10,0">
                                <Ellipse.Fill>
                                    <SolidColorBrush Color="{Binding ScaleStatusColor, FallbackValue=Gray}"/>
                                </Ellipse.Fill>
                            </Ellipse>

                            <TextBlock Grid.Column="1"
                                       Text="{Binding ScaleStatusText}"
                                       FontSize="14"
                                       Foreground="White"
                                       VerticalAlignment="Center"/>

                            <Button Grid.Column="2"
                                    Content="Retry"
                                    Command="{Binding RetryConnectionCommand}"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Padding="12,6"
                                    FontSize="12"
                                    Visibility="{Binding HasError, Converter={StaticResource BoolToVisibility}}"/>
                        </Grid>
                    </Border>

                    <!-- Weight Display -->
                    <Border Background="{StaticResource SecondaryBackground}"
                            CornerRadius="12" Padding="24" Margin="0,0,0,20">
                        <StackPanel>
                            <!-- Weight Reading -->
                            <TextBlock Text="Current Weight"
                                       FontSize="12"
                                       Foreground="{StaticResource SecondaryText}"
                                       HorizontalAlignment="Center"/>

                            <TextBlock Text="{Binding FormattedWeight}"
                                       FontSize="56" FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       Margin="0,8,0,0">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsStable}" Value="True">
                                                <Setter Property="Foreground" Value="{StaticResource AccentGreen}"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsInMotion}" Value="True">
                                                <Setter Property="Foreground" Value="{StaticResource AccentYellow}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <!-- Stability Indicator -->
                            <TextBlock HorizontalAlignment="Center" Margin="0,8,0,0"
                                       FontSize="12">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value=""/>
                                        <Setter Property="Foreground" Value="{StaticResource SecondaryText}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsStable}" Value="True">
                                                <Setter Property="Text" Value="STABLE"/>
                                                <Setter Property="Foreground" Value="{StaticResource AccentGreen}"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsInMotion}" Value="True">
                                                <Setter Property="Text" Value="STABILIZING..."/>
                                                <Setter Property="Foreground" Value="{StaticResource AccentYellow}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <!-- Status Message -->
                            <TextBlock Text="{Binding StatusMessage}"
                                       FontSize="14"
                                       Foreground="{StaticResource SecondaryText}"
                                       HorizontalAlignment="Center"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       Margin="0,12,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Price Information -->
                    <Border Background="{StaticResource CardBackground}"
                            CornerRadius="8" Padding="16" Margin="0,0,0,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Price per unit"
                                           FontSize="12"
                                           Foreground="{StaticResource SecondaryText}"/>
                                <TextBlock Text="{Binding FormattedPricePerUnit}"
                                           FontSize="18" FontWeight="SemiBold"
                                           Foreground="{StaticResource PrimaryText}"
                                           Margin="0,4,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                <TextBlock Text="Total Price"
                                           FontSize="12"
                                           Foreground="{StaticResource SecondaryText}"
                                           HorizontalAlignment="Right"/>
                                <TextBlock Text="{Binding FormattedTotalPrice}"
                                           FontSize="24" FontWeight="Bold"
                                           Foreground="{StaticResource AccentGreen}"
                                           HorizontalAlignment="Right"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Scale Control Buttons -->
                    <TextBlock Text="Scale Controls"
                               FontSize="12"
                               Foreground="{StaticResource SecondaryText}"
                               Margin="0,0,0,8"/>

                    <UniformGrid Columns="4" Margin="0,0,0,16">
                        <Button Content="Read"
                                Command="{Binding ReadWeightCommand}"
                                Style="{StaticResource ScaleButtonStyle}"
                                Margin="2"/>
                        <Button Content="Tare"
                                Command="{Binding TareCommand}"
                                Style="{StaticResource ScaleButtonStyle}"
                                Margin="2"/>
                        <Button Content="Zero"
                                Command="{Binding ZeroCommand}"
                                Style="{StaticResource ScaleButtonStyle}"
                                Margin="2"/>
                        <Button Content="Manual"
                                Command="{Binding ToggleManualEntryCommand}"
                                Style="{StaticResource ScaleButtonStyle}"
                                Margin="2"/>
                    </UniformGrid>

                    <!-- Manual Entry Section -->
                    <Border Background="{StaticResource SecondaryBackground}"
                            CornerRadius="8" Padding="16"
                            Margin="0,0,0,16"
                            Visibility="{Binding IsManualEntryEnabled, Converter={StaticResource BoolToVisibility}}">
                        <StackPanel>
                            <TextBlock Text="Manual Weight Entry"
                                       FontSize="14" FontWeight="SemiBold"
                                       Foreground="{StaticResource PrimaryText}"
                                       Margin="0,0,0,12"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Column="0"
                                         Text="{Binding ManualWeight, UpdateSourceTrigger=PropertyChanged}"
                                         FontSize="20"
                                         Background="{StaticResource CardBackground}"
                                         Foreground="{StaticResource PrimaryText}"
                                         BorderThickness="0"
                                         Padding="12"
                                         VerticalContentAlignment="Center"/>

                                <TextBlock Grid.Column="1"
                                           Text="kg"
                                           FontSize="16"
                                           Foreground="{StaticResource SecondaryText}"
                                           VerticalAlignment="Center"
                                           Margin="8,0"/>

                                <Button Grid.Column="2"
                                        Content="Apply"
                                        Command="{Binding ApplyManualWeightCommand}"
                                        Style="{StaticResource ScaleButtonStyle}"
                                        Background="{StaticResource AccentBlue}"
                                        Padding="16,12"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Error Message -->
                    <Border Background="#2D2020"
                            CornerRadius="8" Padding="12"
                            Margin="0,0,0,16"
                            Visibility="{Binding HasError, Converter={StaticResource BoolToVisibility}}">
                        <TextBlock Text="{Binding ErrorMessage}"
                                   FontSize="12"
                                   Foreground="{StaticResource AccentRed}"
                                   TextWrapping="Wrap"/>
                    </Border>

                    <!-- Receipt Preview -->
                    <Border Background="{StaticResource CardBackground}"
                            CornerRadius="8" Padding="16">
                        <StackPanel>
                            <TextBlock Text="Receipt Preview"
                                       FontSize="12"
                                       Foreground="{StaticResource SecondaryText}"
                                       Margin="0,0,0,8"/>

                            <TextBlock FontSize="13" FontFamily="Consolas"
                                       Foreground="{StaticResource PrimaryText}">
                                <Run Text="{Binding ProductName, Mode=OneWay}"/>
                                <LineBreak/>
                                <Run Text="  "/><Run Text="{Binding FormattedWeight, Mode=OneWay}"/>
                                <Run Text=" @ "/>
                                <Run Text="{Binding FormattedPricePerUnit, Mode=OneWay}"/>
                                <Run Text="      "/>
                                <Run Text="{Binding FormattedTotalPrice, Mode=OneWay}" FontWeight="Bold"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer Buttons -->
            <Border Grid.Row="2" Background="{StaticResource SecondaryBackground}"
                    CornerRadius="0,0,16,16" Padding="24,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="1"
                            Content="Cancel"
                            Command="{Binding CancelCommand}"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Margin="0,0,12,0"/>

                    <Button Grid.Column="2"
                            Content="Add to Order"
                            Command="{Binding AddToOrderCommand}"
                            Style="{StaticResource PrimaryButtonStyle}">
                        <Button.IsEnabled>
                            <MultiBinding Converter="{x:Null}">
                                <!-- In production, use converter to check weight > 0 -->
                            </MultiBinding>
                        </Button.IsEnabled>
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
