<Window x:Class="HospitalityPOS.WPF.Views.QrPaymentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Scan to Pay"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Width="450" Height="600">
    <Window.Resources>
        <!-- Dark Theme Colors -->
        <SolidColorBrush x:Key="PrimaryBackground" Color="#1E1E2E"/>
        <SolidColorBrush x:Key="SecondaryBackground" Color="#2D2D3D"/>
        <SolidColorBrush x:Key="CardBackground" Color="#363647"/>
        <SolidColorBrush x:Key="PrimaryText" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SecondaryText" Color="#A0A0B0"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#22C55E"/>
        <SolidColorBrush x:Key="AccentRed" Color="#EF4444"/>
        <SolidColorBrush x:Key="AccentYellow" Color="#F59E0B"/>
        <SolidColorBrush x:Key="MpesaGreen" Color="#00A651"/>

        <!-- Button Style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource MpesaGreen}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#00B85A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryText}"/>
            <Setter Property="BorderBrush" Value="{StaticResource SecondaryText}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2A2A3A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Bool to Visibility Converter -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
    </Window.Resources>

    <Border Background="{StaticResource PrimaryBackground}" CornerRadius="16">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="{StaticResource MpesaGreen}"
                    CornerRadius="16,16,0,0" Padding="20,16">
                <Grid>
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="SCAN TO PAY"
                                   FontSize="20" FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="M-Pesa"
                                   FontSize="14"
                                   Foreground="#FFFFFFCC"
                                   HorizontalAlignment="Center"
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- Close Button -->
                    <Button Content="X"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="18"
                            Width="30" Height="30"
                            Cursor="Hand"
                            Command="{Binding CancelCommand}"/>
                </Grid>
            </Border>

            <!-- Content -->
            <Grid Grid.Row="1" Margin="24">
                <!-- Normal State - QR Display -->
                <StackPanel Visibility="{Binding PaymentSuccessful, Converter={StaticResource BoolToVisibility}, ConverterParameter=Inverted, FallbackValue=Visible}">
                    <!-- Amount -->
                    <TextBlock Text="{Binding FormattedAmount}"
                               FontSize="36" FontWeight="Bold"
                               Foreground="{StaticResource PrimaryText}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"/>

                    <TextBlock Text="{Binding ReceiptReference}"
                               FontSize="14"
                               Foreground="{StaticResource SecondaryText}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>

                    <!-- QR Code Container -->
                    <Border Background="White" CornerRadius="12" Padding="16"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,20">
                        <Grid Width="260" Height="260">
                            <!-- QR Code Image -->
                            <Image Source="{Binding QrCodeImage}"
                                   Stretch="Uniform"
                                   Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisibility}, ConverterParameter=Inverted}"/>

                            <!-- Loading Indicator -->
                            <StackPanel Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisibility}}"
                                        VerticalAlignment="Center" HorizontalAlignment="Center">
                                <ProgressBar IsIndeterminate="True" Width="100" Height="4"/>
                                <TextBlock Text="Generating..."
                                           Foreground="{StaticResource SecondaryText}"
                                           HorizontalAlignment="Center"
                                           Margin="0,12,0,0"/>
                            </StackPanel>

                            <!-- Expired Overlay -->
                            <Border Visibility="{Binding IsExpired, Converter={StaticResource BoolToVisibility}}"
                                    Background="#CCFFFFFF" CornerRadius="8">
                                <TextBlock Text="EXPIRED"
                                           FontSize="24" FontWeight="Bold"
                                           Foreground="{StaticResource AccentRed}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Instructions -->
                    <TextBlock Text="{Binding Status}"
                               FontSize="14"
                               Foreground="{StaticResource SecondaryText}"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,16"/>

                    <!-- Timer -->
                    <Border Background="{StaticResource CardBackground}"
                            CornerRadius="8" Padding="16,12"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,16"
                            Visibility="{Binding IsExpired, Converter={StaticResource BoolToVisibility}, ConverterParameter=Inverted}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Time remaining: "
                                       FontSize="14"
                                       Foreground="{StaticResource SecondaryText}"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding TimeRemainingDisplay}"
                                       FontSize="18" FontWeight="Bold"
                                       VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SecondsRemaining}" Value="30">
                                                <Setter Property="Foreground" Value="{StaticResource AccentYellow}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Instructions List -->
                    <Border Background="{StaticResource SecondaryBackground}"
                            CornerRadius="8" Padding="16"
                            Margin="0,0,0,0">
                        <StackPanel>
                            <TextBlock Text="How to pay:" FontWeight="SemiBold"
                                       Foreground="{StaticResource PrimaryText}"
                                       Margin="0,0,0,8"/>
                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Text="1." Foreground="{StaticResource MpesaGreen}" FontWeight="Bold" Width="20"/>
                                <TextBlock Text="Open your M-Pesa app" Foreground="{StaticResource SecondaryText}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Text="2." Foreground="{StaticResource MpesaGreen}" FontWeight="Bold" Width="20"/>
                                <TextBlock Text="Tap 'Scan' or 'Lipa na M-Pesa'" Foreground="{StaticResource SecondaryText}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Text="3." Foreground="{StaticResource MpesaGreen}" FontWeight="Bold" Width="20"/>
                                <TextBlock Text="Scan this QR code" Foreground="{StaticResource SecondaryText}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Text="4." Foreground="{StaticResource MpesaGreen}" FontWeight="Bold" Width="20"/>
                                <TextBlock Text="Confirm payment with your PIN" Foreground="{StaticResource SecondaryText}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Success State -->
                <StackPanel Visibility="{Binding PaymentSuccessful, Converter={StaticResource BoolToVisibility}, FallbackValue=Collapsed}"
                            VerticalAlignment="Center">
                    <!-- Success Icon -->
                    <Border Width="100" Height="100"
                            Background="{StaticResource AccentGreen}"
                            CornerRadius="50"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,24">
                        <TextBlock Text="OK"
                                   FontSize="40" FontWeight="Bold"
                                   Foreground="White"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                    </Border>

                    <TextBlock Text="Payment Received!"
                               FontSize="24" FontWeight="Bold"
                               Foreground="{StaticResource AccentGreen}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"/>

                    <TextBlock Text="{Binding FormattedAmount}"
                               FontSize="32" FontWeight="Bold"
                               Foreground="{StaticResource PrimaryText}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,24"/>

                    <Border Background="{StaticResource CardBackground}"
                            CornerRadius="8" Padding="16"
                            HorizontalAlignment="Center">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Text="M-Pesa Receipt: " Foreground="{StaticResource SecondaryText}" Width="120"/>
                                <TextBlock Text="{Binding MpesaReceiptNumber}" Foreground="{StaticResource PrimaryText}" FontWeight="SemiBold"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                <TextBlock Text="Transaction ID: " Foreground="{StaticResource SecondaryText}" Width="120"/>
                                <TextBlock Text="{Binding TransactionId}" Foreground="{StaticResource PrimaryText}" FontWeight="SemiBold"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- Footer Buttons -->
            <Border Grid.Row="2" Background="{StaticResource SecondaryBackground}"
                    CornerRadius="0,0,16,16" Padding="24,16">
                <Grid>
                    <!-- Normal State Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"
                                Visibility="{Binding PaymentSuccessful, Converter={StaticResource BoolToVisibility}, ConverterParameter=Inverted}">
                        <Button Content="Regenerate QR"
                                Command="{Binding RegenerateQrCommand}"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Margin="0,0,16,0"
                                Visibility="{Binding IsExpired, Converter={StaticResource BoolToVisibility}}"/>
                        <Button Content="Cancel"
                                Command="{Binding CancelCommand}"
                                Style="{StaticResource SecondaryButtonStyle}"/>
                    </StackPanel>

                    <!-- Success State Buttons -->
                    <Button Content="Done"
                            Command="{Binding CloseSuccessCommand}"
                            Style="{StaticResource PrimaryButtonStyle}"
                            HorizontalAlignment="Center"
                            Visibility="{Binding PaymentSuccessful, Converter={StaticResource BoolToVisibility}}"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
