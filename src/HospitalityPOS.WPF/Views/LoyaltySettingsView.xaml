<UserControl x:Class="HospitalityPOS.WPF.Views.LoyaltySettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:HospitalityPOS.WPF.ViewModels"
             xmlns:converters="clr-namespace:HospitalityPOS.WPF.Converters"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="900"
             Background="#1E1E2E">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter" />
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVisConverter" />

        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Margin" Value="0,0,0,16" />
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Foreground" Value="#AAAACC" />
            <Setter Property="Margin" Value="0,0,0,6" />
        </Style>

        <Style x:Key="DescriptionStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11" />
            <Setter Property="Foreground" Value="#666688" />
            <Setter Property="Margin" Value="0,4,0,0" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>

        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#3D3D5C" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#4A4A6A" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="12,10" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#6B8DD6" />
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.6" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SettingsCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#2D2D44" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="24" />
            <Setter Property="Margin" Value="0,0,0,16" />
        </Style>

        <Style x:Key="ToggleSwitchStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="24,14" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Cursor" Value="Hand" />
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#5A5A7A" />
                    <Setter Property="Opacity" Value="0.6" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3D3D5C" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="20,12" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
    </UserControl.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="Back"
                    Command="{Binding GoBackCommand}"
                    Style="{StaticResource SecondaryButtonStyle}" />

            <StackPanel Grid.Column="1" Margin="24,0,0,0">
                <TextBlock Text="{Binding Title}"
                           FontSize="28"
                           FontWeight="SemiBold"
                           Foreground="White" />
                <TextBlock Text="Configure how points are earned, redeemed, and expire"
                           FontSize="14"
                           Foreground="#888888"
                           Margin="0,4,0,0" />
            </StackPanel>
        </Grid>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <StackPanel MaxWidth="700" HorizontalAlignment="Left">

                <!-- Points Earning Settings -->
                <Border Style="{StaticResource SettingsCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Points Earning" Style="{StaticResource SectionTitleStyle}" />

                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,12,0">
                                <TextBlock Text="Points per Currency Unit" Style="{StaticResource LabelStyle}" />
                                <TextBox Text="{Binding PointsPerCurrencyUnit, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource InputTextBoxStyle}"
                                         IsEnabled="{Binding CanEditSettings}" />
                                <TextBlock Text="Points earned per KES spent" Style="{StaticResource DescriptionStyle}" />
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                <TextBlock Text="Currency Units per Point" Style="{StaticResource LabelStyle}" />
                                <TextBox Text="{Binding CurrencyUnitsPerPoint, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource InputTextBoxStyle}"
                                         IsEnabled="{Binding CanEditSettings}" />
                                <TextBlock Text="KES spent to earn 1 point" Style="{StaticResource DescriptionStyle}" />
                            </StackPanel>
                        </Grid>

                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Minimum Earning Amount (KES)" Style="{StaticResource LabelStyle}" />
                            <TextBox Text="{Binding MinimumEarningAmount, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource InputTextBoxStyle}"
                                     Width="200"
                                     HorizontalAlignment="Left"
                                     IsEnabled="{Binding CanEditSettings}" />
                            <TextBlock Text="Minimum transaction amount to earn points" Style="{StaticResource DescriptionStyle}" />
                        </StackPanel>

                        <StackPanel Orientation="Vertical">
                            <CheckBox Content="Earn points on discounted items"
                                      IsChecked="{Binding EarnOnDiscountedItems}"
                                      Style="{StaticResource ToggleSwitchStyle}"
                                      IsEnabled="{Binding CanEditSettings}"
                                      Margin="0,0,0,12" />
                            <CheckBox Content="Earn points on tax amount"
                                      IsChecked="{Binding EarnOnTax}"
                                      Style="{StaticResource ToggleSwitchStyle}"
                                      IsEnabled="{Binding CanEditSettings}" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Points Redemption Settings -->
                <Border Style="{StaticResource SettingsCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Points Redemption" Style="{StaticResource SectionTitleStyle}" />

                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,12,0">
                                <TextBlock Text="Point Value (KES)" Style="{StaticResource LabelStyle}" />
                                <TextBox Text="{Binding PointValueInKes, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource InputTextBoxStyle}"
                                         IsEnabled="{Binding CanEditSettings}" />
                                <TextBlock Text="KES value of 1 point when redeemed" Style="{StaticResource DescriptionStyle}" />
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                <TextBlock Text="Minimum Redemption Points" Style="{StaticResource LabelStyle}" />
                                <TextBox Text="{Binding MinimumRedemptionPoints, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource InputTextBoxStyle}"
                                         IsEnabled="{Binding CanEditSettings}" />
                                <TextBlock Text="Minimum points required to redeem" Style="{StaticResource DescriptionStyle}" />
                            </StackPanel>
                        </Grid>

                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Maximum Redemption (%)" Style="{StaticResource LabelStyle}" />
                            <TextBox Text="{Binding MaximumRedemptionPercent, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource InputTextBoxStyle}"
                                     Width="200"
                                     HorizontalAlignment="Left"
                                     IsEnabled="{Binding CanEditSettings}" />
                            <TextBlock Text="Maximum % of order that can be paid with points" Style="{StaticResource DescriptionStyle}" />
                        </StackPanel>

                        <CheckBox Content="Allow partial redemption"
                                  IsChecked="{Binding AllowPartialRedemption}"
                                  Style="{StaticResource ToggleSwitchStyle}"
                                  IsEnabled="{Binding CanEditSettings}" />
                    </StackPanel>
                </Border>

                <!-- Points Expiry Settings -->
                <Border Style="{StaticResource SettingsCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Points Expiry" Style="{StaticResource SectionTitleStyle}" />

                        <CheckBox Content="Enable points expiry"
                                  IsChecked="{Binding EnablePointsExpiry}"
                                  Style="{StaticResource ToggleSwitchStyle}"
                                  IsEnabled="{Binding CanEditSettings}"
                                  Margin="0,0,0,20" />

                        <Grid Margin="0,0,0,20"
                              Visibility="{Binding EnablePointsExpiry, Converter={StaticResource BoolToVisConverter}}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,12,0">
                                <TextBlock Text="Expiry Period (Months)" Style="{StaticResource LabelStyle}" />
                                <TextBox Text="{Binding PointsExpiryMonths, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource InputTextBoxStyle}"
                                         IsEnabled="{Binding CanEditSettings}" />
                                <TextBlock Text="Points expire after this many months of inactivity" Style="{StaticResource DescriptionStyle}" />
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                <TextBlock Text="Warning Days Before Expiry" Style="{StaticResource LabelStyle}" />
                                <TextBox Text="{Binding ExpiryWarningDays, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource InputTextBoxStyle}"
                                         IsEnabled="{Binding CanEditSettings}" />
                                <TextBlock Text="Send notification this many days before expiry" Style="{StaticResource DescriptionStyle}" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- SMS Notification Settings -->
                <Border Style="{StaticResource SettingsCardStyle}">
                    <StackPanel>
                        <TextBlock Text="SMS Notifications" Style="{StaticResource SectionTitleStyle}" />

                        <CheckBox Content="Enable SMS notifications"
                                  IsChecked="{Binding EnableSmsNotifications}"
                                  Style="{StaticResource ToggleSwitchStyle}"
                                  IsEnabled="{Binding CanEditSettings}"
                                  Margin="0,0,0,20" />

                        <StackPanel Visibility="{Binding EnableSmsNotifications, Converter={StaticResource BoolToVisConverter}}">
                            <CheckBox Content="Send enrollment confirmation SMS"
                                      IsChecked="{Binding SendEnrollmentSms}"
                                      Style="{StaticResource ToggleSwitchStyle}"
                                      IsEnabled="{Binding CanEditSettings}"
                                      Margin="0,0,0,12" />
                            <CheckBox Content="Send SMS when points are earned"
                                      IsChecked="{Binding SendPointsEarnedSms}"
                                      Style="{StaticResource ToggleSwitchStyle}"
                                      IsEnabled="{Binding CanEditSettings}"
                                      Margin="0,0,0,12" />
                            <CheckBox Content="Send SMS when points are redeemed"
                                      IsChecked="{Binding SendRedemptionSms}"
                                      Style="{StaticResource ToggleSwitchStyle}"
                                      IsEnabled="{Binding CanEditSettings}"
                                      Margin="0,0,0,12" />
                            <CheckBox Content="Send SMS before points expire"
                                      IsChecked="{Binding SendExpiryWarningSms}"
                                      Style="{StaticResource ToggleSwitchStyle}"
                                      IsEnabled="{Binding CanEditSettings}" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Tier Configurations -->
                <Border Style="{StaticResource SettingsCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Membership Tiers" Style="{StaticResource SectionTitleStyle}" />

                        <ItemsControl ItemsSource="{Binding TierConfigurations}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#363654"
                                            CornerRadius="6"
                                            Padding="16"
                                            Margin="0,0,0,12">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Tier}"
                                                           FontSize="15"
                                                           FontWeight="SemiBold"
                                                           Foreground="White" />
                                                <TextBlock FontSize="12" Foreground="#AAAACC" Margin="0,4,0,0">
                                                    <Run Text="Spend threshold: KES " />
                                                    <Run Text="{Binding MinimumSpend, StringFormat=N0}" FontWeight="SemiBold" />
                                                </TextBlock>
                                                <TextBlock FontSize="12" Foreground="#AAAACC" Margin="0,2,0,0">
                                                    <Run Text="Points multiplier: " />
                                                    <Run Text="{Binding PointsMultiplier, StringFormat=0.0x}" FontWeight="SemiBold" />
                                                </TextBlock>
                                            </StackPanel>

                                            <Button Grid.Column="1"
                                                    Content="Edit"
                                                    Command="{Binding DataContext.EditTierCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource SecondaryButtonStyle}"
                                                    Padding="16,8"
                                                    FontSize="12"
                                                    VerticalAlignment="Center"
                                                    IsEnabled="{Binding DataContext.CanEditSettings, RelativeSource={RelativeSource AncestorType=ItemsControl}}" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer Actions -->
        <Border Grid.Row="2" Margin="0,16,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Error Message -->
                <Border Grid.Column="0"
                        Background="#3D1A1A"
                        CornerRadius="8"
                        Padding="16"
                        Margin="0,0,16,0"
                        Visibility="{Binding ErrorMessage, Converter={StaticResource BoolToVisConverter}}">
                    <TextBlock Text="{Binding ErrorMessage}"
                               Foreground="#FF6B6B"
                               FontSize="13"
                               TextWrapping="Wrap"
                               VerticalAlignment="Center" />
                </Border>

                <Button Grid.Column="1"
                        Content="Save Settings"
                        Command="{Binding SaveSettingsCommand}"
                        Style="{StaticResource ActionButtonStyle}"
                        Visibility="{Binding CanEditSettings, Converter={StaticResource BoolToVisConverter}}" />
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="3"
                Background="#80000000"
                Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisConverter}}"
                Panel.ZIndex="100">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True"
                             Width="200"
                             Height="4"
                             Foreground="#6B8DD6" />
                <TextBlock Text="{Binding BusyMessage}"
                           Foreground="White"
                           FontSize="16"
                           Margin="0,16,0,0"
                           HorizontalAlignment="Center" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
