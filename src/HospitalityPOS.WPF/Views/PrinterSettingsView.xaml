<UserControl x:Class="HospitalityPOS.WPF.Views.PrinterSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:HospitalityPOS.WPF.Converters"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="#1E1E2E">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility"/>

        <!-- Action Button Style -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="MinHeight" Value="44"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="16,8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.7"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="#4E4E6E"/>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="SettingsTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#3D3D5C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="BorderBrush" Value="#4E4E6E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          VerticalAlignment="Center"
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#22C55E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="SettingsComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#3D3D5C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#4E4E6E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- RadioButton Style -->
        <Style x:Key="SettingsRadioButton" TargetType="RadioButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border"
                                Background="#2D2D44"
                                BorderBrush="#4E4E6E"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="12,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border x:Name="radioBorder"
                                        Width="20" Height="20"
                                        CornerRadius="10"
                                        Background="#3D3D5C"
                                        BorderBrush="#4E4E6E"
                                        BorderThickness="2"
                                        VerticalAlignment="Center">
                                    <Ellipse x:Name="radioDot"
                                             Width="10" Height="10"
                                             Fill="#22C55E"
                                             Visibility="Collapsed"/>
                                </Border>
                                <ContentPresenter Grid.Column="1"
                                                  Margin="12,0,0,0"
                                                  VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#22C55E"/>
                                <Setter TargetName="border" Property="Background" Value="#1F3D2F"/>
                                <Setter TargetName="radioBorder" Property="BorderBrush" Value="#22C55E"/>
                                <Setter TargetName="radioDot" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3D3D5C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- CheckBox Style -->
        <Style x:Key="SettingsCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border x:Name="checkBorder"
                                    Width="24" Height="24"
                                    Background="#3D3D5C"
                                    BorderBrush="#4E4E6E"
                                    BorderThickness="2"
                                    CornerRadius="4"
                                    VerticalAlignment="Center">
                                <TextBlock x:Name="checkMark"
                                           Text="âœ“"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Foreground="White"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Visibility="Collapsed"/>
                            </Border>
                            <ContentPresenter Grid.Column="1"
                                              Margin="12,0,0,0"
                                              VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="checkBorder" Property="Background" Value="#22C55E"/>
                                <Setter TargetName="checkBorder" Property="BorderBrush" Value="#16A34A"/>
                                <Setter TargetName="checkMark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="checkBorder" Property="BorderBrush" Value="#6E6EAE"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ListView Item Style -->
        <Style x:Key="PrinterListViewItem" TargetType="ListViewItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="0"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}"
                                Margin="0,2">
                            <ContentPresenter HorizontalAlignment="Stretch"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#3D3D5C"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#22C55E"/>
                                <Setter TargetName="Bd" Property="BorderThickness" Value="1"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#353550"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="24">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.ColumnSpan="2" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="1"
                       Text="PRINTER CONFIGURATION"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#22C55E"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

            <Button Grid.Column="2"
                    Content="+ Add Printer"
                    Style="{StaticResource ActionButton}"
                    Background="#22C55E"
                    Command="{Binding AddPrinterCommand}"/>
        </Grid>

        <!-- Printer List Panel -->
        <Border Grid.Row="1" Grid.Column="0"
                Background="#2D2D44"
                CornerRadius="12"
                Margin="0,0,16,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- List Header -->
                <Border Grid.Row="0" Background="#3D3D5C" CornerRadius="12,12,0,0" Padding="16,12">
                    <TextBlock Text="Receipt Printers"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="White"/>
                </Border>

                <!-- Printer List -->
                <ListView Grid.Row="1"
                          ItemsSource="{Binding Printers}"
                          SelectedItem="{Binding SelectedPrinter, Mode=TwoWay}"
                          Background="Transparent"
                          BorderThickness="0"
                          ItemContainerStyle="{StaticResource PrinterListViewItem}"
                          Margin="8">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Printer Name -->
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Name}"
                                               FontSize="15"
                                               FontWeight="SemiBold"
                                               Foreground="White"/>
                                    <Border Background="#22C55E"
                                            CornerRadius="4"
                                            Padding="6,2"
                                            Margin="8,0,0,0"
                                            Visibility="{Binding IsDefault, Converter={StaticResource BoolToVisibility}}">
                                        <TextBlock Text="Default"
                                                   FontSize="10"
                                                   FontWeight="Bold"
                                                   Foreground="White"/>
                                    </Border>
                                </StackPanel>

                                <!-- Status -->
                                <Border Grid.Column="1"
                                        CornerRadius="4"
                                        Padding="6,2"
                                        VerticalAlignment="Center">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#6E6E8E"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Status}" Value="Online">
                                                    <Setter Property="Background" Value="#22C55E"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Offline">
                                                    <Setter Property="Background" Value="#EF4444"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Error">
                                                    <Setter Property="Background" Value="#F59E0B"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock Text="{Binding Status}"
                                               FontSize="10"
                                               FontWeight="Bold"
                                               Foreground="White"/>
                                </Border>

                                <!-- Connection Info -->
                                <TextBlock Grid.Row="1" Grid.ColumnSpan="2"
                                           FontSize="12"
                                           Foreground="#9CA3AF"
                                           Margin="0,4,0,0">
                                    <Run Text="{Binding ConnectionType, Mode=OneWay}"/>
                                    <Run Text=" - "/>
                                    <Run Text="{Binding PaperWidth, Mode=OneWay}"/>
                                    <Run Text="mm"/>
                                </TextBlock>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- List Actions -->
                <StackPanel Grid.Row="2" Margin="12">
                    <Button Content="Delete Printer"
                            Style="{StaticResource ActionButton}"
                            Background="#EF4444"
                            HorizontalAlignment="Stretch"
                            Command="{Binding DeletePrinterCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Printer Details Panel -->
        <ScrollViewer Grid.Row="1" Grid.Column="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <Border Background="#2D2D44"
                    CornerRadius="12"
                    Padding="24">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Section: Printer Details -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,24">
                        <TextBlock Text="PRINTER DETAILS"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="#22C55E"
                                   Margin="0,0,0,16"/>

                        <TextBlock Text="Printer Name"
                                   Foreground="#9CA3AF"
                                   FontSize="12"
                                   Margin="0,0,0,6"/>
                        <TextBox Text="{Binding PrinterName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource SettingsTextBox}"/>
                    </StackPanel>

                    <!-- Section: Connection Type -->
                    <StackPanel Grid.Row="1" Margin="0,0,0,24">
                        <TextBlock Text="CONNECTION TYPE"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="#22C55E"
                                   Margin="0,0,0,16"/>

                        <UniformGrid Columns="2" Margin="0,0,0,8">
                            <RadioButton Content="Windows Printer"
                                         Style="{StaticResource SettingsRadioButton}"
                                         IsChecked="{Binding IsWindowsDriver}"
                                         Command="{Binding SetConnectionTypeCommand}"
                                         CommandParameter="WindowsDriver"
                                         Margin="0,0,8,8"/>
                            <RadioButton Content="Network (TCP/IP)"
                                         Style="{StaticResource SettingsRadioButton}"
                                         IsChecked="{Binding IsNetwork}"
                                         Command="{Binding SetConnectionTypeCommand}"
                                         CommandParameter="Network"
                                         Margin="8,0,0,8"/>
                            <RadioButton Content="Serial Port"
                                         Style="{StaticResource SettingsRadioButton}"
                                         IsChecked="{Binding IsSerial}"
                                         Command="{Binding SetConnectionTypeCommand}"
                                         CommandParameter="Serial"
                                         Margin="0,0,8,0"/>
                            <RadioButton Content="USB Direct"
                                         Style="{StaticResource SettingsRadioButton}"
                                         IsChecked="{Binding IsUsb}"
                                         Command="{Binding SetConnectionTypeCommand}"
                                         CommandParameter="USB"
                                         Margin="8,0,0,0"/>
                        </UniformGrid>
                    </StackPanel>

                    <!-- Section: Connection Settings -->
                    <StackPanel Grid.Row="2" Margin="0,0,0,24">
                        <TextBlock Text="CONNECTION SETTINGS"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="#22C55E"
                                   Margin="0,0,0,16"/>

                        <!-- Windows Printer Selection -->
                        <StackPanel Visibility="{Binding IsWindowsDriver, Converter={StaticResource BoolToVisibility}}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Windows Printer"
                                           Foreground="#9CA3AF"
                                           FontSize="12"
                                           Margin="0,0,0,6"/>
                                <Button Grid.Column="1"
                                        Content="Detect"
                                        Style="{StaticResource ActionButton}"
                                        Background="#3B82F6"
                                        MinWidth="80"
                                        MinHeight="32"
                                        Command="{Binding DetectPrintersCommand}"/>
                            </Grid>
                            <ComboBox ItemsSource="{Binding AvailableWindowsPrinters}"
                                      SelectedValue="{Binding WindowsPrinterName, Mode=TwoWay}"
                                      Style="{StaticResource SettingsComboBox}"
                                      Height="44"/>
                        </StackPanel>

                        <!-- Network Settings -->
                        <StackPanel Visibility="{Binding IsNetwork, Converter={StaticResource BoolToVisibility}}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="IP Address"
                                               Foreground="#9CA3AF"
                                               FontSize="12"
                                               Margin="0,0,0,6"/>
                                    <TextBox Text="{Binding IpAddress, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource SettingsTextBox}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Port"
                                               Foreground="#9CA3AF"
                                               FontSize="12"
                                               Margin="0,0,0,6"/>
                                    <TextBox Text="{Binding Port, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource SettingsTextBox}"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>

                        <!-- Serial Port Settings -->
                        <StackPanel Visibility="{Binding IsSerial, Converter={StaticResource BoolToVisibility}}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Serial Port"
                                           Foreground="#9CA3AF"
                                           FontSize="12"
                                           Margin="0,0,0,6"/>
                                <Button Grid.Column="1"
                                        Content="Detect"
                                        Style="{StaticResource ActionButton}"
                                        Background="#3B82F6"
                                        MinWidth="80"
                                        MinHeight="32"
                                        Command="{Binding DetectPrintersCommand}"/>
                            </Grid>
                            <ComboBox ItemsSource="{Binding AvailableSerialPorts}"
                                      SelectedValue="{Binding SerialPort, Mode=TwoWay}"
                                      Style="{StaticResource SettingsComboBox}"
                                      Height="44"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Section: Paper Settings -->
                    <StackPanel Grid.Row="3" Margin="0,0,0,24">
                        <TextBlock Text="PAPER SETTINGS"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="#22C55E"
                                   Margin="0,0,0,16"/>

                        <TextBlock Text="Paper Width"
                                   Foreground="#9CA3AF"
                                   FontSize="12"
                                   Margin="0,0,0,8"/>
                        <UniformGrid Columns="2">
                            <RadioButton Content="80mm (48 chars)"
                                         Style="{StaticResource SettingsRadioButton}"
                                         IsChecked="{Binding PaperWidth, Converter={StaticResource BoolToVisibility}, ConverterParameter=80}"
                                         Command="{Binding SetPaperWidthCommand}"
                                         CommandParameter="80"
                                         Margin="0,0,8,0"/>
                            <RadioButton Content="58mm (32 chars)"
                                         Style="{StaticResource SettingsRadioButton}"
                                         Command="{Binding SetPaperWidthCommand}"
                                         CommandParameter="58"
                                         Margin="8,0,0,0"/>
                        </UniformGrid>
                    </StackPanel>

                    <!-- Section: Print Options -->
                    <StackPanel Grid.Row="4" Margin="0,0,0,24">
                        <TextBlock Text="PRINT OPTIONS"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="#22C55E"
                                   Margin="0,0,0,16"/>

                        <CheckBox Content="Auto-cut paper after printing"
                                  Style="{StaticResource SettingsCheckBox}"
                                  IsChecked="{Binding AutoCut}"/>
                        <CheckBox Content="Use partial cut (leave small portion attached)"
                                  Style="{StaticResource SettingsCheckBox}"
                                  IsChecked="{Binding PartialCut}"/>
                        <CheckBox Content="Open cash drawer on receipt print"
                                  Style="{StaticResource SettingsCheckBox}"
                                  IsChecked="{Binding OpenCashDrawer}"/>
                        <CheckBox Content="Print business logo"
                                  Style="{StaticResource SettingsCheckBox}"
                                  IsChecked="{Binding PrintLogo}"/>
                        <CheckBox Content="Beep on print complete"
                                  Style="{StaticResource SettingsCheckBox}"
                                  IsChecked="{Binding BeepOnPrint}"/>
                    </StackPanel>

                    <!-- Status Message -->
                    <Border Grid.Row="5"
                            CornerRadius="8"
                            Padding="16,12"
                            Margin="0,0,0,24"
                            Visibility="{Binding HasStatusMessage, Converter={StaticResource BoolToVisibility}}">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="#374151"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsStatusSuccess}" Value="True">
                                        <Setter Property="Background" Value="#166534"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsStatusSuccess}" Value="False">
                                        <Setter Property="Background" Value="#991B1B"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="{Binding StatusMessage}"
                                   Foreground="White"
                                   FontSize="14"
                                   TextWrapping="Wrap"/>
                    </Border>

                    <!-- Action Buttons -->
                    <Grid Grid.Row="6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                                Content="Test Print"
                                Style="{StaticResource ActionButton}"
                                Background="#6366F1"
                                Command="{Binding TestPrintCommand}"
                                Margin="0,0,8,0"/>
                        <Button Grid.Column="1"
                                Content="Check Status"
                                Style="{StaticResource ActionButton}"
                                Background="#0891B2"
                                Command="{Binding CheckStatusCommand}"
                                Margin="4,0"/>
                        <Button Grid.Column="2"
                                Content="Set as Default"
                                Style="{StaticResource ActionButton}"
                                Background="#F59E0B"
                                Command="{Binding SetAsDefaultCommand}"
                                Margin="4,0"/>
                        <Button Grid.Column="3"
                                Content="Save Settings"
                                Style="{StaticResource ActionButton}"
                                Background="#22C55E"
                                Command="{Binding SaveCommand}"
                                Margin="8,0,0,0"/>
                    </Grid>
                </Grid>
            </Border>
        </ScrollViewer>

        <!-- Loading Overlay -->
        <Border Grid.Row="1" Grid.ColumnSpan="2"
                Background="#80000000"
                CornerRadius="12"
                Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibility}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True"
                             Width="200"
                             Height="4"
                             Foreground="#22C55E"/>
                <TextBlock Text="{Binding BusyMessage}"
                           Foreground="White"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Margin="0,16,0,0"/>
            </StackPanel>
        </Border>

        <!-- Scanning Overlay -->
        <Border Grid.Row="1" Grid.ColumnSpan="2"
                Background="#80000000"
                CornerRadius="12"
                Visibility="{Binding IsScanning, Converter={StaticResource BoolToVisibility}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True"
                             Width="200"
                             Height="4"
                             Foreground="#3B82F6"/>
                <TextBlock Text="Scanning for printers..."
                           Foreground="White"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Margin="0,16,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
