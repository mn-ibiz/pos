<UserControl x:Class="HospitalityPOS.WPF.Views.FeatureSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:HospitalityPOS.WPF.ViewModels"
             d:DataContext="{d:DesignInstance Type=vm:FeatureSettingsViewModel}"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="#1a1a2e">

    <UserControl.Resources>
        <!-- Toggle switch style -->
        <Style x:Key="FeatureToggleSwitch" TargetType="ToggleButton">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="26"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Background"
                                CornerRadius="13"
                                Background="#3a3a5c"
                                Cursor="Hand">
                            <Ellipse x:Name="Knob"
                                     Width="20"
                                     Height="20"
                                     Fill="White"
                                     HorizontalAlignment="Left"
                                     Margin="3,0,0,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Background" Property="Background" Value="#6366F1"/>
                                <Setter TargetName="Knob" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="Knob" Property="Margin" Value="0,0,3,0"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Background" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Feature card style -->
        <Style x:Key="FeatureCard" TargetType="Border">
            <Setter Property="Background" Value="#252542"/>
            <Setter Property="BorderBrush" Value="#3a3a5c"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#16162a" Padding="24,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Feature Settings"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="White"/>
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <TextBlock Text="Current Mode:"
                                   Foreground="#888"
                                   VerticalAlignment="Center"/>
                        <Border Background="#6366F133"
                                BorderBrush="#6366F1"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="8,4"
                                Margin="8,0,0,0">
                            <TextBlock Text="{Binding CurrentModeDisplay}"
                                       Foreground="#6366F1"
                                       FontWeight="Medium"/>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <!-- Action buttons -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <Button Command="{Binding ResetToModeDefaultsCommand}"
                            Background="Transparent"
                            BorderBrush="#3a3a5c"
                            Foreground="#888"
                            Padding="16,10"
                            Margin="0,0,8,0"
                            Cursor="Hand"
                            ToolTip="Reset all features to current mode defaults">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE72C;"
                                       FontFamily="Segoe MDL2 Assets"
                                       VerticalAlignment="Center"
                                       Margin="0,0,6,0"/>
                            <TextBlock Text="Reset to Defaults"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <ItemsControl ItemsSource="{Binding FeatureCategories}"
                          Margin="24">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,0,0,24">
                            <StackPanel>
                                <!-- Category header -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                    <Border Width="4"
                                            Height="24"
                                            CornerRadius="2"
                                            Margin="0,0,12,0">
                                        <Border.Background>
                                            <SolidColorBrush Color="{Binding AccentColor, Converter={StaticResource HexToColorConverter}}"/>
                                        </Border.Background>
                                    </Border>
                                    <TextBlock Text="{Binding Name}"
                                               FontSize="18"
                                               FontWeight="SemiBold"
                                               Foreground="White"
                                               VerticalAlignment="Center"/>
                                </StackPanel>

                                <!-- Features -->
                                <ItemsControl ItemsSource="{Binding Features}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Style="{StaticResource FeatureCard}">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="{Binding Name}"
                                                                       FontSize="15"
                                                                       FontWeight="Medium"
                                                                       Foreground="White"/>

                                                            <!-- Required badge -->
                                                            <Border Background="#EF444433"
                                                                    BorderBrush="#EF4444"
                                                                    BorderThickness="1"
                                                                    CornerRadius="3"
                                                                    Padding="6,2"
                                                                    Margin="8,0,0,0"
                                                                    Visibility="{Binding IsRequired, Converter={StaticResource BoolToVisibilityConverter}}">
                                                                <TextBlock Text="Required"
                                                                           FontSize="10"
                                                                           Foreground="#EF4444"/>
                                                            </Border>

                                                            <!-- Dependency indicator -->
                                                            <Border Background="#F59E0B33"
                                                                    BorderBrush="#F59E0B"
                                                                    BorderThickness="1"
                                                                    CornerRadius="3"
                                                                    Padding="6,2"
                                                                    Margin="8,0,0,0"
                                                                    Visibility="{Binding DependsOn, Converter={StaticResource NullToVisibilityConverter}}">
                                                                <TextBlock FontSize="10"
                                                                           Foreground="#F59E0B">
                                                                    <Run Text="Depends on:"/>
                                                                    <Run Text="{Binding DependsOn}"/>
                                                                </TextBlock>
                                                            </Border>
                                                        </StackPanel>

                                                        <TextBlock Text="{Binding Description}"
                                                                   FontSize="13"
                                                                   Foreground="#888"
                                                                   Margin="0,4,0,0"
                                                                   TextWrapping="Wrap"/>
                                                    </StackPanel>

                                                    <ToggleButton Grid.Column="1"
                                                                  Style="{StaticResource FeatureToggleSwitch}"
                                                                  IsChecked="{Binding IsEnabled, Mode=TwoWay}"
                                                                  IsEnabled="{Binding IsRequired, Converter={StaticResource InverseBoolConverter}}"
                                                                  VerticalAlignment="Center"
                                                                  Margin="16,0,0,0"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#16162a" Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Status message -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="{Binding StatusMessage}"
                               Foreground="#888"
                               Visibility="{Binding StatusMessage, Converter={StaticResource NullToVisibilityConverter}}"/>

                    <Border Background="#F59E0B33"
                            BorderBrush="#F59E0B"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="12,6"
                            Visibility="{Binding HasUnsavedChanges, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE7BA;"
                                       FontFamily="Segoe MDL2 Assets"
                                       Foreground="#F59E0B"
                                       VerticalAlignment="Center"
                                       Margin="0,0,6,0"/>
                            <TextBlock Text="You have unsaved changes"
                                       Foreground="#F59E0B"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Action buttons -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button Command="{Binding DiscardChangesCommand}"
                            Visibility="{Binding HasUnsavedChanges, Converter={StaticResource BoolToVisibilityConverter}}"
                            Background="Transparent"
                            BorderBrush="#3a3a5c"
                            Foreground="White"
                            Padding="20,10"
                            Margin="0,0,12,0"
                            Cursor="Hand">
                        <TextBlock Text="Discard Changes"/>
                    </Button>

                    <Button Command="{Binding SaveChangesCommand}"
                            Padding="20,10"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#6366F1"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#818CF8"/>
                                    </Trigger>
                                    <DataTrigger Binding="{Binding HasUnsavedChanges}" Value="False">
                                        <Setter Property="Background" Value="#3a3a5c"/>
                                        <Setter Property="Foreground" Value="#666"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE74E;"
                                       FontFamily="Segoe MDL2 Assets"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0"/>
                            <TextBlock Text="Save Changes"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Loading overlay -->
        <Border Grid.RowSpan="3"
                Background="#AA1a1a2e"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True"
                             Width="200"
                             Height="4"
                             Background="#3a3a5c"
                             Foreground="#6366F1"/>
                <TextBlock Text="{Binding StatusMessage}"
                           Foreground="White"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Margin="0,12,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
