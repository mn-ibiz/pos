<UserControl x:Class="HospitalityPOS.WPF.Views.PaymentMethodsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:HospitalityPOS.WPF.Converters"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="900"
             Background="#1E1E2E">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility"/>
        <converters:HexColorToBrushConverter x:Key="HexToBrush"/>

        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="MinHeight" Value="44"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="16,8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.7"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="#4E4E6E"/>
        </Style>

        <Style x:Key="SmallActionButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!-- ListView Item Style -->
        <Style x:Key="PaymentMethodListViewItem" TargetType="ListViewItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="0"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}"
                                Margin="0,2">
                            <ContentPresenter HorizontalAlignment="Stretch"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#3D3D5C"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#6E6EAE"/>
                                <Setter TargetName="Bd" Property="BorderThickness" Value="1"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#353550"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="Back"
                    Style="{StaticResource ActionButton}"
                    Background="#4E4E6E"
                    Command="{Binding GoBackCommand}"/>

            <TextBlock Grid.Column="1"
                       Text="{Binding Title}"
                       FontSize="28"
                       FontWeight="SemiBold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

            <Button Grid.Column="2"
                    Content="+ New Method"
                    Style="{StaticResource ActionButton}"
                    Background="#4CAF50"
                    Command="{Binding CreateMethodCommand}"/>
        </Grid>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    Margin="0,0,0,16">
            <Button Content="Edit"
                    Style="{StaticResource ActionButton}"
                    Background="#2196F3"
                    Command="{Binding EditMethodCommand}"/>
            <Button Style="{StaticResource ActionButton}"
                    Command="{Binding ToggleActiveCommand}">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource ActionButton}">
                        <Setter Property="Content" Value="Deactivate"/>
                        <Setter Property="Background" Value="#9E9E9E"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedMethod.IsActive}" Value="False">
                                <Setter Property="Content" Value="Activate"/>
                                <Setter Property="Background" Value="#4CAF50"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="Delete"
                    Style="{StaticResource ActionButton}"
                    Background="#F44336"
                    Command="{Binding DeleteMethodCommand}"/>

            <!-- Spacer -->
            <Rectangle Width="24"/>

            <!-- Reorder Buttons -->
            <Button Content="Move Up"
                    Style="{StaticResource SmallActionButton}"
                    Background="#5D5D7E"
                    Command="{Binding MoveUpCommand}"/>
            <Button Content="Move Down"
                    Style="{StaticResource SmallActionButton}"
                    Background="#5D5D7E"
                    Command="{Binding MoveDownCommand}"/>

            <!-- Spacer -->
            <Rectangle Width="24"/>

            <Button Content="Refresh"
                    Style="{StaticResource ActionButton}"
                    Background="#4E4E6E"
                    Command="{Binding LoadPaymentMethodsCommand}"/>
        </StackPanel>

        <!-- Payment Methods List -->
        <Border Grid.Row="2"
                Background="#2D2D44"
                CornerRadius="12"
                Padding="16">
            <ListView ItemsSource="{Binding PaymentMethods}"
                      SelectedItem="{Binding SelectedMethod, Mode=TwoWay}"
                      Background="Transparent"
                      BorderThickness="0"
                      ItemContainerStyle="{StaticResource PaymentMethodListViewItem}"
                      VirtualizingStackPanel.IsVirtualizing="True"
                      VirtualizingStackPanel.VirtualizationMode="Recycling">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid MinHeight="56">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Order Badge -->
                            <Border Grid.Column="0"
                                    Width="32"
                                    Height="32"
                                    CornerRadius="16"
                                    Background="#3D3D5C"
                                    Margin="0,0,12,0"
                                    VerticalAlignment="Center">
                                <TextBlock Text="{Binding DisplayOrder}"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Foreground="#8888AA"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>

                            <!-- Color Preview -->
                            <Border Grid.Column="1"
                                    Width="48"
                                    Height="36"
                                    CornerRadius="6"
                                    Background="{Binding BackgroundColor, Converter={StaticResource HexToBrush}, FallbackValue=#4E4E6E}"
                                    Margin="0,0,16,0"
                                    VerticalAlignment="Center">
                                <TextBlock Text="{Binding Code}"
                                           FontSize="9"
                                           FontWeight="Bold"
                                           Foreground="White"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           TextTrimming="CharacterEllipsis"/>
                            </Border>

                            <!-- Method Details -->
                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Name}"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="White"/>
                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                    <TextBlock FontSize="12" Foreground="#6E6E8E">
                                        <Run Text="Type: "/>
                                        <Run Text="{Binding Type, Mode=OneWay}"/>
                                    </TextBlock>
                                    <TextBlock Text=" | " Foreground="#6E6E8E" FontSize="12"
                                               Visibility="{Binding RequiresReference, Converter={StaticResource BoolToVisibility}}"/>
                                    <TextBlock FontSize="12" Foreground="#FF9800"
                                               Visibility="{Binding RequiresReference, Converter={StaticResource BoolToVisibility}}">
                                        <Run Text="Requires "/>
                                        <Run Text="{Binding ReferenceLabel, Mode=OneWay, FallbackValue='Reference'}"/>
                                    </TextBlock>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                    <TextBlock FontSize="11" Foreground="#4CAF50"
                                               Visibility="{Binding SupportsChange, Converter={StaticResource BoolToVisibility}}"
                                               Text="Supports Change"
                                               Margin="0,0,8,0"/>
                                    <TextBlock FontSize="11" Foreground="#2196F3"
                                               Visibility="{Binding OpensDrawer, Converter={StaticResource BoolToVisibility}}"
                                               Text="Opens Drawer"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Status Badge -->
                            <Border Grid.Column="3"
                                    CornerRadius="4"
                                    Padding="8,4"
                                    Margin="8,0"
                                    VerticalAlignment="Center">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="#2E7D32"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                <Setter Property="Background" Value="#616161"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock FontSize="11" FontWeight="SemiBold" Foreground="White">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="Active"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                    <Setter Property="Text" Value="Inactive"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Border>

                            <!-- ID -->
                            <TextBlock Grid.Column="4"
                                       FontSize="12"
                                       Foreground="#6E6E8E"
                                       VerticalAlignment="Center"
                                       Margin="8,0,0,0">
                                <Run Text="ID: "/>
                                <Run Text="{Binding Id, Mode=OneWay}"/>
                            </TextBlock>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>

        <!-- Loading Indicator -->
        <Border Grid.Row="2"
                Background="#80000000"
                CornerRadius="12"
                Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibility}}">
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True"
                             Width="200"
                             Height="4"
                             Foreground="#4CAF50"/>
                <TextBlock Text="{Binding BusyMessage}"
                           Foreground="White"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Margin="0,16,0,0"/>
            </StackPanel>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="3"
                Background="#2D2D44"
                CornerRadius="8"
                Padding="16,8"
                Margin="0,16,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Foreground="#8888AA" FontSize="13">
                    <Run Text="Total Methods: "/>
                    <Run Text="{Binding TotalMethodCount, Mode=OneWay}"/>
                    <Run Text=" | Active: "/>
                    <Run Text="{Binding ActiveMethodCount, Mode=OneWay}"/>
                </TextBlock>

                <TextBlock Grid.Column="1" Foreground="#6E6E8E" FontSize="12"
                           Visibility="{Binding SelectedMethod, Converter={StaticResource BoolToVisibility}}">
                    <Run Text="Selected: "/>
                    <Run Text="{Binding SelectedMethod.Name, Mode=OneWay, FallbackValue='None'}"/>
                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</UserControl>
