<UserControl x:Class="HospitalityPOS.WPF.Views.PurchaseOrdersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:HospitalityPOS.WPF.ViewModels"
             xmlns:enums="clr-namespace:HospitalityPOS.Core.Enums;assembly=HospitalityPOS.Core"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1200"
             Background="#1E1E2E">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter" />

        <!-- Status Badge Style -->
        <Style x:Key="StatusBadgeStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="8,4" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Status}" Value="Draft">
                    <Setter Property="Background" Value="#4E4E6E" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Sent">
                    <Setter Property="Background" Value="#1976D2" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="PartiallyReceived">
                    <Setter Property="Background" Value="#F57C00" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Complete">
                    <Setter Property="Background" Value="#388E3C" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Cancelled">
                    <Setter Property="Background" Value="#D32F2F" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="Back"
                    Command="{Binding GoBackCommand}"
                    Background="#3D3D5C"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="16,12"
                    FontSize="14"
                    Cursor="Hand" />

            <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Purchase Orders"
                           FontSize="28"
                           FontWeight="SemiBold"
                           Foreground="White"
                           HorizontalAlignment="Center" />
                <TextBlock Visibility="{Binding FilterSupplier, Converter={StaticResource BoolToVisConverter}}"
                           HorizontalAlignment="Center"
                           Margin="0,4,0,0">
                    <TextBlock.Inlines>
                        <Run Text="Filtered by: " Foreground="#8888AA" FontSize="14" />
                        <Run Text="{Binding FilterSupplier.Name, FallbackValue=''}" Foreground="#4CAF50" FontSize="14" FontWeight="SemiBold" />
                        <Run Text=" " />
                    </TextBlock.Inlines>
                </TextBlock>
            </StackPanel>

            <Button Grid.Column="2"
                    Content="+ New Purchase Order"
                    Command="{Binding CreatePurchaseOrderCommand}"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="24,12"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Cursor="Hand" />
        </Grid>

        <!-- Statistics Bar -->
        <Border Grid.Row="1" Background="#2D2D44" CornerRadius="8" Padding="16" Margin="0,0,0,16">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <StackPanel Margin="0,0,48,0">
                    <TextBlock Text="Draft"
                               FontSize="12"
                               Foreground="#8888AA"
                               HorizontalAlignment="Center" />
                    <TextBlock Text="{Binding DraftCount}"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#6E6E8E"
                               HorizontalAlignment="Center" />
                </StackPanel>
                <StackPanel Margin="0,0,48,0">
                    <TextBlock Text="Sent"
                               FontSize="12"
                               Foreground="#8888AA"
                               HorizontalAlignment="Center" />
                    <TextBlock Text="{Binding SentCount}"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#2196F3"
                               HorizontalAlignment="Center" />
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Partially Received"
                               FontSize="12"
                               Foreground="#8888AA"
                               HorizontalAlignment="Center" />
                    <TextBlock Text="{Binding PartiallyReceivedCount}"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#FF9800"
                               HorizontalAlignment="Center" />
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Search and Filter Bar -->
        <Grid Grid.Row="2" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Search Box -->
            <Border Grid.Column="0"
                    Background="#2D2D44"
                    CornerRadius="8"
                    Padding="16,0"
                    Margin="0,0,16,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Search:"
                               FontSize="14"
                               Foreground="#888888"
                               VerticalAlignment="Center"
                               Margin="0,0,12,0" />

                    <TextBox Grid.Column="1"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             Background="Transparent"
                             Foreground="White"
                             BorderThickness="0"
                             FontSize="14"
                             VerticalAlignment="Center"
                             Height="48"
                             VerticalContentAlignment="Center" />
                </Grid>
            </Border>

            <!-- Status Filter -->
            <ComboBox Grid.Column="1"
                      ItemsSource="{Binding StatusOptions}"
                      SelectedItem="{Binding SelectedStatusFilter}"
                      Background="#2D2D44"
                      Foreground="White"
                      BorderThickness="0"
                      Padding="16,12"
                      FontSize="14"
                      Width="180"
                      Margin="0,0,16,0">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Converter={StaticResource BoolToVisConverter}}" Foreground="White">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="{Binding}" />
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <!-- Clear Supplier Filter -->
            <Button Grid.Column="2"
                    Content="Clear Filter"
                    Command="{Binding ClearSupplierFilterCommand}"
                    Visibility="{Binding FilterSupplier, Converter={StaticResource BoolToVisConverter}}"
                    Background="#FF9800"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="16,12"
                    FontSize="14"
                    Cursor="Hand"
                    Margin="0,0,16,0" />

            <!-- Refresh Button -->
            <Button Grid.Column="3"
                    Content="Refresh"
                    Command="{Binding LoadDataCommand}"
                    Background="#3D3D5C"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="16,12"
                    FontSize="14"
                    Cursor="Hand" />
        </Grid>

        <!-- Purchase Orders List -->
        <Border Grid.Row="3"
                Background="#2D2D44"
                CornerRadius="12">
            <Grid>
                <!-- Loading Overlay -->
                <Border Background="#80000000"
                        CornerRadius="12"
                        Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisConverter}}"
                        Panel.ZIndex="10">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <ProgressBar IsIndeterminate="True"
                                     Width="150"
                                     Height="4"
                                     Foreground="#4CAF50" />
                        <TextBlock Text="Loading purchase orders..."
                                   Foreground="White"
                                   FontSize="14"
                                   Margin="0,12,0,0"
                                   HorizontalAlignment="Center" />
                    </StackPanel>
                </Border>

                <DataGrid ItemsSource="{Binding PurchaseOrders}"
                          SelectedItem="{Binding SelectedPurchaseOrder}"
                          AutoGenerateColumns="False"
                          Background="Transparent"
                          Foreground="White"
                          BorderThickness="0"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="#3D3D5C"
                          RowBackground="#2D2D44"
                          AlternatingRowBackground="#353550"
                          SelectionMode="Single"
                          SelectionUnit="FullRow"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          CanUserResizeRows="False"
                          HeadersVisibility="Column"
                          FontSize="14"
                          RowHeight="52"
                          IsReadOnly="True">

                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#3D3D5C" />
                            <Setter Property="Foreground" Value="#AAAACC" />
                            <Setter Property="FontWeight" Value="SemiBold" />
                            <Setter Property="FontSize" Value="14" />
                            <Setter Property="Padding" Value="16,12" />
                            <Setter Property="BorderThickness" Value="0" />
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="Padding" Value="16,0" />
                            <Setter Property="VerticalContentAlignment" Value="Center" />
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#4A4A6A" />
                                    <Setter Property="Foreground" Value="White" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="PO Number"
                                            Binding="{Binding PONumber}"
                                            Width="150" />

                        <DataGridTextColumn Header="Supplier"
                                            Binding="{Binding Supplier.Name}"
                                            Width="200" />

                        <DataGridTextColumn Header="Order Date"
                                            Binding="{Binding OrderDate, StringFormat='{}{0:yyyy-MM-dd}'}"
                                            Width="120" />

                        <DataGridTextColumn Header="Expected"
                                            Binding="{Binding ExpectedDate, StringFormat='{}{0:yyyy-MM-dd}'}"
                                            Width="120" />

                        <DataGridTemplateColumn Header="Status" Width="140">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource StatusBadgeStyle}">
                                        <TextBlock Text="{Binding Status}"
                                                   FontSize="12"
                                                   Foreground="White" />
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Items"
                                            Binding="{Binding PurchaseOrderItems.Count}"
                                            Width="80" />

                        <DataGridTextColumn Header="Total (KSh)"
                                            Binding="{Binding TotalAmount, StringFormat='{}{0:N2}'}"
                                            Width="*" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Action Buttons -->
        <Border Grid.Row="4"
                Background="#2D2D44"
                CornerRadius="8"
                Padding="16"
                Margin="0,16,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="View Details"
                        Command="{Binding ViewPurchaseOrderCommand}"
                        IsEnabled="{Binding SelectedPurchaseOrder, Converter={StaticResource BoolToVisConverter}}"
                        Background="#3D3D5C"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="24,12"
                        FontSize="14"
                        Cursor="Hand"
                        Margin="0,0,12,0"
                        Width="140"
                        Height="48" />

                <Button Content="Send to Supplier"
                        Command="{Binding SendToSupplierCommand}"
                        IsEnabled="{Binding SelectedPurchaseOrder, Converter={StaticResource BoolToVisConverter}}"
                        Background="#2196F3"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="24,12"
                        FontSize="14"
                        Cursor="Hand"
                        Margin="0,0,12,0"
                        Width="160"
                        Height="48" />

                <Button Content="Cancel PO"
                        Command="{Binding CancelPurchaseOrderCommand}"
                        IsEnabled="{Binding SelectedPurchaseOrder, Converter={StaticResource BoolToVisConverter}}"
                        Background="#F44336"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="24,12"
                        FontSize="14"
                        Cursor="Hand"
                        Width="120"
                        Height="48" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
