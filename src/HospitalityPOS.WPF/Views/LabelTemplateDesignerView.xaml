<UserControl x:Class="HospitalityPOS.WPF.Views.LabelTemplateDesignerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:HospitalityPOS.WPF.Controls"
             mc:Ignorable="d"
             d:DesignHeight="800"
             d:DesignWidth="1400"
             Background="#1E1E2E">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />

        <!-- Form TextBox Style -->
        <Style x:Key="FormTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3D3D5C"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Form ComboBox Style -->
        <Style x:Key="FormComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3D3D5C"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- Form Label Style -->
        <Style x:Key="FormLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#9CA3AF"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>

        <!-- Toolbox Button Style -->
        <Style x:Key="ToolboxButton" TargetType="Button">
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="Foreground" Value="#9CA3AF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3D3D5C"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Placeholder Button Style -->
        <Style x:Key="PlaceholderButton" TargetType="Button">
            <Setter Property="Background" Value="#16162B"/>
            <Setter Property="Foreground" Value="#10B981"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,4,4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2D2D44"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Icon Button Style -->
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#9CA3AF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3D3D5C"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#252538" CornerRadius="8" Padding="16" Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Template Name -->
                <StackPanel Grid.Column="0" Margin="0,0,24,0">
                    <TextBlock Text="Template Name" Style="{StaticResource FormLabel}"/>
                    <TextBox Text="{Binding TemplateName, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource FormTextBox}" Width="200"/>
                </StackPanel>

                <!-- Label Size -->
                <StackPanel Grid.Column="1" Margin="0,0,24,0">
                    <TextBlock Text="Label Size" Style="{StaticResource FormLabel}"/>
                    <ComboBox ItemsSource="{Binding LabelSizes}"
                              SelectedItem="{Binding LabelSize}"
                              DisplayMemberPath="Name"
                              Style="{StaticResource FormComboBox}" Width="180"/>
                </StackPanel>

                <!-- Print Language -->
                <StackPanel Grid.Column="2" Margin="0,0,24,0">
                    <TextBlock Text="Language" Style="{StaticResource FormLabel}"/>
                    <ComboBox ItemsSource="{Binding PrintLanguages}"
                              SelectedItem="{Binding PrintLanguage}"
                              Style="{StaticResource FormComboBox}" Width="100"/>
                </StackPanel>

                <!-- Zoom -->
                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Bottom">
                    <Button Content="&#xE71E;" FontFamily="Segoe MDL2 Assets"
                            Style="{StaticResource IconButton}" Command="{Binding ZoomOutCommand}"
                            ToolTip="Zoom Out"/>
                    <TextBlock Text="{Binding ZoomLevel, StringFormat={}{0:P0}}"
                               Foreground="#9CA3AF" VerticalAlignment="Center"
                               Width="50" TextAlignment="Center"/>
                    <Button Content="&#xE8A3;" FontFamily="Segoe MDL2 Assets"
                            Style="{StaticResource IconButton}" Command="{Binding ZoomInCommand}"
                            ToolTip="Zoom In"/>
                </StackPanel>

                <!-- Actions -->
                <StackPanel Grid.Column="5" Orientation="Horizontal">
                    <Button Content="&#xE713;" FontFamily="Segoe MDL2 Assets"
                            Style="{StaticResource IconButton}" Command="{Binding ToggleCodeViewCommand}"
                            ToolTip="View Code"/>
                    <Button Content="Cancel"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Padding="16,8" Margin="8,0,0,0"
                            Command="{Binding CloseDesignerCommand}"/>
                    <Button Style="{StaticResource PrimaryButtonStyle}"
                            Padding="16,8" Margin="8,0,0,0"
                            Command="{Binding SaveTemplateCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE74E;" FontFamily="Segoe MDL2 Assets"
                                       VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBlock Text="Save"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="280"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Toolbox & Placeholders -->
            <Border Grid.Column="0" Background="#252538" CornerRadius="8" Margin="0,0,12,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="16">
                        <!-- Toolbox Header -->
                        <TextBlock Text="Toolbox" FontSize="14" FontWeight="SemiBold"
                                   Foreground="White" Margin="0,0,0,12"/>

                        <!-- Toolbox Items -->
                        <ItemsControl ItemsSource="{Binding ToolboxItems}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Style="{StaticResource ToolboxButton}"
                                            Command="{Binding DataContext.AddElementCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            ToolTip="{Binding Description}"
                                            Margin="0,0,0,4">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding IconChar}"
                                                       FontFamily="Segoe MDL2 Assets"
                                                       FontSize="16" Width="24"
                                                       VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding Name}"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Placeholders Header -->
                        <TextBlock Text="Placeholders" FontSize="14" FontWeight="SemiBold"
                                   Foreground="White" Margin="0,24,0,12"/>
                        <TextBlock Text="Click to insert into selected element"
                                   Foreground="#6B7280" FontSize="11" Margin="0,0,0,8"/>

                        <!-- Placeholder Items -->
                        <ItemsControl ItemsSource="{Binding Placeholders}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Content="{Binding}"
                                            Style="{StaticResource PlaceholderButton}"
                                            Command="{Binding DataContext.InsertPlaceholderCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Center: Design Canvas -->
            <Border Grid.Column="1" Background="#16162B" CornerRadius="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Canvas Toolbar -->
                    <Border Grid.Row="0" Background="#252538" Padding="12,8">
                        <StackPanel Orientation="Horizontal">
                            <CheckBox IsChecked="{Binding ShowGrid}" Margin="0,0,16,0">
                                <TextBlock Text="Grid" Foreground="#9CA3AF"/>
                            </CheckBox>
                            <CheckBox IsChecked="{Binding SnapToGrid}" Margin="0,0,16,0">
                                <TextBlock Text="Snap" Foreground="#9CA3AF"/>
                            </CheckBox>
                            <TextBlock Text="Grid Size:" Foreground="#6B7280" VerticalAlignment="Center"
                                       Margin="0,0,8,0"/>
                            <TextBox Text="{Binding GridSize, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource FormTextBox}" Width="50"/>
                            <Button Content="&#xE74D;" FontFamily="Segoe MDL2 Assets"
                                    Style="{StaticResource IconButton}" Command="{Binding ClearCanvasCommand}"
                                    ToolTip="Clear Canvas" Margin="16,0,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Canvas Area -->
                    <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto"
                                  VerticalScrollBarVisibility="Auto" Padding="24">
                        <Border Background="#FFFFFF" CornerRadius="4"
                                Width="{Binding CanvasWidth}" Height="{Binding CanvasHeight}"
                                HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="20" Opacity="0.3"/>
                            </Border.Effect>

                            <!-- Design Canvas -->
                            <controls:LabelDesignCanvas x:Name="DesignCanvas"
                                                        ShowGrid="{Binding ShowGrid}"
                                                        GridSize="{Binding GridSize}"
                                                        ViewModel="{Binding}">
                                <ItemsControl ItemsSource="{Binding Elements}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <Canvas/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <controls:LabelElementControl Element="{Binding}"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </controls:LabelDesignCanvas>
                        </Border>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Right Panel: Properties -->
            <Border Grid.Column="2" Background="#252538" CornerRadius="8" Margin="12,0,0,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="16">
                        <TextBlock Text="Properties" FontSize="14" FontWeight="SemiBold"
                                   Foreground="White" Margin="0,0,0,16"/>

                        <!-- No Selection -->
                        <TextBlock Text="Select an element to edit its properties"
                                   Foreground="#6B7280" FontStyle="Italic"
                                   Visibility="{Binding SelectedElement, Converter={StaticResource NullToVisibleConverter}, FallbackValue=Visible}"/>

                        <!-- Element Properties -->
                        <StackPanel Visibility="{Binding SelectedElement, Converter={StaticResource NullToCollapsedConverter}, FallbackValue=Collapsed}">
                            <!-- Element Type -->
                            <Border Background="#16162B" CornerRadius="6" Padding="12" Margin="0,0,0,16">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding SelectedElement.IconChar}"
                                               FontFamily="Segoe MDL2 Assets"
                                               Foreground="#3B82F6" FontSize="20"
                                               VerticalAlignment="Center" Margin="0,0,12,0"/>
                                    <TextBlock Text="{Binding SelectedElement.DisplayName}"
                                               Foreground="White" FontWeight="SemiBold"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Position -->
                            <TextBlock Text="Position" Foreground="#6B7280" FontSize="11"
                                       FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="X" Style="{StaticResource FormLabel}"/>
                                    <TextBox Text="{Binding ElementX, UpdateSourceTrigger=PropertyChanged, StringFormat=F0}"
                                             Style="{StaticResource FormTextBox}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Y" Style="{StaticResource FormLabel}"/>
                                    <TextBox Text="{Binding ElementY, UpdateSourceTrigger=PropertyChanged, StringFormat=F0}"
                                             Style="{StaticResource FormTextBox}"/>
                                </StackPanel>
                            </Grid>

                            <!-- Size -->
                            <TextBlock Text="Size" Foreground="#6B7280" FontSize="11"
                                       FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Width" Style="{StaticResource FormLabel}"/>
                                    <TextBox Text="{Binding ElementWidth, UpdateSourceTrigger=PropertyChanged, StringFormat=F0}"
                                             Style="{StaticResource FormTextBox}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Height" Style="{StaticResource FormLabel}"/>
                                    <TextBox Text="{Binding ElementHeight, UpdateSourceTrigger=PropertyChanged, StringFormat=F0}"
                                             Style="{StaticResource FormTextBox}"/>
                                </StackPanel>
                            </Grid>

                            <!-- Content (for text elements) -->
                            <StackPanel Margin="0,0,0,12">
                                <TextBlock Text="Content" Style="{StaticResource FormLabel}"/>
                                <TextBox Text="{Binding ElementContent, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource FormTextBox}"
                                         TextWrapping="Wrap" AcceptsReturn="True" Height="60"/>
                            </StackPanel>

                            <!-- Font Settings -->
                            <TextBlock Text="Font" Foreground="#6B7280" FontSize="11"
                                       FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Size" Style="{StaticResource FormLabel}"/>
                                    <TextBox Text="{Binding ElementFontSize, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource FormTextBox}"/>
                                </StackPanel>
                                <CheckBox Grid.Column="2" IsChecked="{Binding ElementIsBold}"
                                          VerticalAlignment="Bottom" Margin="0,0,0,8">
                                    <TextBlock Text="Bold" Foreground="#9CA3AF"/>
                                </CheckBox>
                            </Grid>

                            <!-- Text Alignment -->
                            <StackPanel Margin="0,0,0,12">
                                <TextBlock Text="Alignment" Style="{StaticResource FormLabel}"/>
                                <ComboBox ItemsSource="{Binding TextAlignments}"
                                          SelectedItem="{Binding ElementTextAlignment}"
                                          Style="{StaticResource FormComboBox}"/>
                            </StackPanel>

                            <!-- Rotation -->
                            <StackPanel Margin="0,0,0,12">
                                <TextBlock Text="Rotation" Style="{StaticResource FormLabel}"/>
                                <ComboBox ItemsSource="{Binding ElementRotations}"
                                          SelectedItem="{Binding ElementRotation}"
                                          Style="{StaticResource FormComboBox}"/>
                            </StackPanel>

                            <!-- Barcode Settings -->
                            <StackPanel Margin="0,0,0,12">
                                <TextBlock Text="Barcode Type" Style="{StaticResource FormLabel}"/>
                                <ComboBox ItemsSource="{Binding BarcodeTypes}"
                                          SelectedItem="{Binding ElementBarcodeType}"
                                          Style="{StaticResource FormComboBox}"/>
                            </StackPanel>

                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Bar Height" Style="{StaticResource FormLabel}"/>
                                    <TextBox Text="{Binding ElementBarcodeHeight, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource FormTextBox}"/>
                                </StackPanel>
                                <CheckBox Grid.Column="2" IsChecked="{Binding ElementShowBarcodeText}"
                                          VerticalAlignment="Bottom" Margin="0,0,0,8">
                                    <TextBlock Text="Show Text" Foreground="#9CA3AF"/>
                                </CheckBox>
                            </Grid>

                            <!-- Apply Button -->
                            <Button Content="Apply Changes"
                                    Command="{Binding ApplyPropertiesCommand}"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Padding="12,10" Margin="0,8,0,0"/>

                            <!-- Element Actions -->
                            <TextBlock Text="Actions" Foreground="#6B7280" FontSize="11"
                                       FontWeight="SemiBold" Margin="0,24,0,8"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <Button Content="&#xE74D;" FontFamily="Segoe MDL2 Assets"
                                        Style="{StaticResource IconButton}"
                                        Command="{Binding DeleteSelectedElementCommand}"
                                        ToolTip="Delete"/>
                                <Button Content="&#xE8C8;" FontFamily="Segoe MDL2 Assets"
                                        Style="{StaticResource IconButton}"
                                        Command="{Binding DuplicateSelectedElementCommand}"
                                        ToolTip="Duplicate"/>
                                <Button Content="&#xE110;" FontFamily="Segoe MDL2 Assets"
                                        Style="{StaticResource IconButton}"
                                        Command="{Binding BringToFrontCommand}"
                                        ToolTip="Bring to Front"/>
                                <Button Content="&#xE111;" FontFamily="Segoe MDL2 Assets"
                                        Style="{StaticResource IconButton}"
                                        Command="{Binding SendToBackCommand}"
                                        ToolTip="Send to Back"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#16162B" CornerRadius="8" Padding="16,10" Margin="0,12,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal"
                            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                    <ProgressBar IsIndeterminate="True" Width="100" Height="4" Margin="0,0,12,0"/>
                </StackPanel>

                <TextBlock Grid.Column="1" Text="{Binding StatusMessage}"
                           Foreground="#8888AA" VerticalAlignment="Center"/>

                <TextBlock Grid.Column="2" Foreground="#6B7280" VerticalAlignment="Center">
                    <Run Text="Elements: "/>
                    <Run Text="{Binding Elements.Count, Mode=OneWay}"/>
                    <Run Text=" | "/>
                    <Run Text="{Binding LabelSize.Name}"/>
                </TextBlock>
            </Grid>
        </Border>

        <!-- Code View Overlay -->
        <Border Grid.RowSpan="3" Background="#E0000000"
                Visibility="{Binding ShowCodeView, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Background="#1E1E2E" CornerRadius="12" Padding="24"
                    Width="700" MaxHeight="600" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                        <TextBlock Text="Generated Code" FontSize="18" FontWeight="SemiBold"
                                   Foreground="White" VerticalAlignment="Center"/>
                        <Border Background="#374151" CornerRadius="4" Padding="8,4" Margin="12,0,0,0">
                            <TextBlock Text="{Binding PrintLanguage}" FontSize="12" Foreground="#9CA3AF"/>
                        </Border>
                    </StackPanel>

                    <Border Grid.Row="1" Background="#16162B" CornerRadius="8" Padding="16">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                            <TextBox Text="{Binding GeneratedCode, Mode=OneWay}"
                                     IsReadOnly="True"
                                     Background="Transparent"
                                     Foreground="#10B981"
                                     FontFamily="Consolas"
                                     FontSize="12"
                                     BorderThickness="0"
                                     TextWrapping="NoWrap"
                                     AcceptsReturn="True"/>
                        </ScrollViewer>
                    </Border>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                        <Button Content="Copy"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Padding="20,10" Margin="0,0,8,0"/>
                        <Button Content="Close"
                                Command="{Binding ToggleCodeViewCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Padding="20,10"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>
    </Grid>
</UserControl>
