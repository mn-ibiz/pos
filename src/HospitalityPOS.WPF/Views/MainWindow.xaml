<Window x:Class="HospitalityPOS.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:HospitalityPOS.WPF.ViewModels"
        xmlns:views="clr-namespace:HospitalityPOS.WPF.Views"
        xmlns:inventoryViews="clr-namespace:HospitalityPOS.WPF.Views.Inventory"
        xmlns:expenseViews="clr-namespace:HospitalityPOS.WPF.Views.Expenses"
        xmlns:analyticsViews="clr-namespace:HospitalityPOS.WPF.Views.Analytics"
        xmlns:controls="clr-namespace:HospitalityPOS.WPF.Controls"
        mc:Ignorable="d"
        Title="{Binding ApplicationTitle}"
        Height="768"
        Width="1024"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        Background="#1E1E2E">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />

        <!-- Scrollbar Style for Sidebar -->
        <Style x:Key="DarkScrollBarThumb" TargetType="Thumb">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Border Background="#3D3D5C" CornerRadius="4" Margin="2"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DarkScrollBar" TargetType="ScrollBar">
            <Setter Property="Background" Value="#252538"/>
            <Setter Property="Width" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Background="{TemplateBinding Background}">
                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource DarkScrollBarThumb}"/>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DarkScrollViewer" TargetType="ScrollViewer">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollViewer">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ScrollContentPresenter Grid.Column="0"/>
                            <ScrollBar x:Name="PART_VerticalScrollBar"
                                       Grid.Column="1"
                                       Style="{StaticResource DarkScrollBar}"
                                       Value="{TemplateBinding VerticalOffset}"
                                       Maximum="{TemplateBinding ScrollableHeight}"
                                       ViewportSize="{TemplateBinding ViewportHeight}"
                                       Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ViewModel to View mappings -->
        <DataTemplate DataType="{x:Type vm:SetupWizardViewModel}">
            <views:SetupWizardView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ModeSelectionViewModel}">
            <views:ModeSelectionView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:LoginViewModel}">
            <views:LoginView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:AutoLogoutSettingsViewModel}">
            <views:AutoLogoutSettingsView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ChangePasswordViewModel}">
            <views:ChangePasswordView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:RoleManagementViewModel}">
            <views:RoleManagementView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:RoleEditorViewModel}">
            <views:RoleEditorView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:UserManagementViewModel}">
            <views:UserManagementView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:UserEditorViewModel}">
            <views:UserEditorView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:CategoryManagementViewModel}">
            <views:CategoryManagementView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ProductManagementViewModel}">
            <views:ProductManagementView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:VariantOptionsViewModel}">
            <views:VariantOptionsView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ModifierGroupsViewModel}">
            <views:ModifierGroupsView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:POSViewModel}">
            <views:POSView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SettlementViewModel}">
            <views:SettlementView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:PaymentMethodsViewModel}">
            <views:PaymentMethodsView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:InventoryViewModel}">
            <inventoryViews:InventoryView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SuppliersViewModel}">
            <views:SuppliersView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:EmployeesViewModel}">
            <views:EmployeesView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:EmployeeEditorViewModel}">
            <views:EmployeeEditorView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:AttendanceViewModel}">
            <views:AttendanceView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:PayrollViewModel}">
            <views:PayrollView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
            <views:DashboardView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SalesReportsViewModel}">
            <views:SalesReportsView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:InventoryReportsViewModel}">
            <views:InventoryReportsView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ZReportHistoryViewModel}">
            <views:ZReportHistoryView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:GoodsReceivingViewModel}">
            <views:GoodsReceivingView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:DirectReceivingViewModel}">
            <views:DirectReceivingView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:PurchaseOrdersViewModel}">
            <views:PurchaseOrdersView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:OrganizationSettingsViewModel}">
            <views:OrganizationSettingsView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:CashierShellViewModel}">
            <views:CashierShellView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ExpenseDashboardViewModel}">
            <expenseViews:ExpenseDashboardView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ExpenseListViewModel}">
            <expenseViews:ExpenseListView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ExpenseCategoryManagementViewModel}">
            <expenseViews:ExpenseCategoryManagementView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:AIInsightsDashboardViewModel}">
            <analyticsViews:AIInsightsDashboardView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:PrimeCostReportViewModel}">
            <analyticsViews:PrimeCostReportView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:MenuEngineeringViewModel}">
            <analyticsViews:MenuEngineeringView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:CustomerAnalyticsViewModel}">
            <analyticsViews:CustomerAnalyticsView />
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Border Grid.Row="0"
                Background="#16162B"
                Padding="0"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid Height="40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="260" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Brand/Logo Area -->
                <StackPanel Grid.Column="0"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Margin="16,0">
                    <TextBlock Text="PRONET"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBrush}"
                               VerticalAlignment="Center" />
                    <TextBlock Text="POS"
                               FontSize="18"
                               FontWeight="Light"
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="4,0,0,0" />
                </StackPanel>

                <!-- Center: Page Title / Breadcrumb -->
                <TextBlock Grid.Column="1"
                           Text="{Binding CurrentPageTitle}"
                           FontSize="14"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           VerticalAlignment="Center"
                           Margin="16,0" />

                <!-- Window Controls -->
                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button Content="&#xE949;"
                            FontFamily="Segoe MDL2 Assets"
                            Width="46"
                            Height="40"
                            Background="Transparent"
                            Foreground="#8888AA"
                            BorderThickness="0"
                            FontSize="10"
                            Cursor="Hand"
                            Click="MinimizeButton_Click" />
                    <Button x:Name="MaximizeButton"
                            Content="&#xE739;"
                            FontFamily="Segoe MDL2 Assets"
                            Width="46"
                            Height="40"
                            Background="Transparent"
                            Foreground="#8888AA"
                            BorderThickness="0"
                            FontSize="10"
                            Cursor="Hand"
                            Click="MaximizeButton_Click" />
                    <Button Content="&#xE106;"
                            FontFamily="Segoe MDL2 Assets"
                            Width="46"
                            Height="40"
                            Background="Transparent"
                            Foreground="#8888AA"
                            BorderThickness="0"
                            FontSize="10"
                            Cursor="Hand"
                            Click="CloseButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E81123" />
                                        <Setter Property="Foreground" Value="White" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area with Sidebar -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Sidebar Navigation -->
            <Border Grid.Column="0"
                    Background="#1A1A2E"
                    Width="260"
                    Visibility="{Binding ShowSidebar, Converter={StaticResource BoolToVisibilityConverter}}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Navigation Menu -->
                    <ScrollViewer Grid.Row="0"
                                  Style="{StaticResource DarkScrollViewer}"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <StackPanel>
                            <!-- Main Navigation Group -->
                            <TextBlock Text="MAIN"
                                       Style="{StaticResource SidebarGroupHeaderStyle}" />

                            <!-- Dashboard -->
                            <Button Style="{StaticResource SidebarMenuItemStyle}"
                                    Command="{Binding NavigateToDashboardCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE80F;" FontFamily="Segoe MDL2 Assets" FontSize="16" Width="24" />
                                    <TextBlock Text="Dashboard" Margin="12,0,0,0" VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>

                            <!-- Products Group -->
                            <TextBlock Text="PRODUCTS"
                                       Style="{StaticResource SidebarGroupHeaderStyle}" />

                            <!-- Products -->
                            <Button Style="{StaticResource SidebarMenuItemStyle}"
                                    Command="{Binding NavigateToProductManagementCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE7BF;" FontFamily="Segoe MDL2 Assets" FontSize="16" Width="24" />
                                    <TextBlock Text="Products" Margin="12,0,0,0" VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>

                            <!-- Categories -->
                            <Button Style="{StaticResource SidebarMenuItemStyle}"
                                    Command="{Binding NavigateToCategoryManagementCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE74C;" FontFamily="Segoe MDL2 Assets" FontSize="16" Width="24" />
                                    <TextBlock Text="Categories" Margin="12,0,0,0" VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>

                            <!-- Variant Options -->
                            <Button Style="{StaticResource SidebarMenuItemStyle}"
                                    Command="{Binding NavigateToVariantOptionsCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE8B3;" FontFamily="Segoe MDL2 Assets" FontSize="16" Width="24" />
                                    <TextBlock Text="Variant Options" Margin="12,0,0,0" VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>

                            <!-- Modifier Groups -->
                            <Button Style="{StaticResource SidebarMenuItemStyle}"
                                    Command="{Binding NavigateToModifierGroupsCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE71D;" FontFamily="Segoe MDL2 Assets" FontSize="16" Width="24" />
                                    <TextBlock Text="Modifier Groups" Margin="12,0,0,0" VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>

                            <!-- Inventory Group -->
                            <TextBlock Text="INVENTORY"
                                       Style="{StaticResource SidebarGroupHeaderStyle}" />

                            <!-- Stock Levels -->
                            <Button Style="{StaticResource SidebarMenuItemStyle}"
                                    Command="{Binding NavigateToInventoryCommand}">
                                <Grid>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE7B8;" FontFamily="Segoe MDL2 Assets" FontSize="16" Width="24" />
                                        <TextBlock Text="Stock Levels" Margin="12,0,0,0" VerticalAlignment="Center" />
                                    </StackPanel>
                                    <!-- Low Stock Badge -->
                                    <Border Style="{StaticResource MenuBadgeStyle}"
                                            Visibility="{Binding HasLowStockAlert, Converter={StaticResource BoolToVisibilityConverter}}"
                                            Margin="0,0,8,0">
                                        <TextBlock Text="{Binding LowStockCount}"
                                                   Foreground="White"
                                                   FontSize="11"
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Center" />
                                    </Border>
                                </Grid>
                            </Button>

                            <!-- Receive Stock -->
                            <Button Style="{StaticResource SidebarMenuItemStyle}"
                                    Command="{Binding NavigateToGoodsReceivingCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE7AC;" FontFamily="Segoe MDL2 Assets" FontSize="16" Width="24" />
                                    <TextBlock Text="Receive Stock" Margin="12,0,0,0" VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>

                            <!-- Purchase Orders -->
                            <Button Style="{StaticResource SidebarMenuItemStyle}"
                                    Command="{Binding NavigateToPurchaseOrdersCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE8A5;" FontFamily="Segoe MDL2 Assets" FontSize="16" Width="24" />
                                    <TextBlock Text="Purchase Orders" Margin="12,0,0,0" VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>

                            <!-- Suppliers -->
                            <Button Style="{StaticResource SidebarMenuItemStyle}"
                                    Command="{Binding NavigateToSuppliersCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE779;" FontFamily="Segoe MDL2 Assets" FontSize="16" Width="24" />
                                    <TextBlock Text="Suppliers" Margin="12,0,0,0" VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>

                            <!-- Workday Group -->
                            <TextBlock Text="WORKDAY"
                                       Style="{StaticResource SidebarGroupHeaderStyle}" />

                            <!-- Open/Close Day -->
                            <Button Style="{StaticResource SidebarMenuItemStyle}"
                                    Command="{Binding OpenWorkPeriodCommand}"
                                    Visibility="{Binding IsWorkPeriodClosed, Converter={StaticResource BoolToVisibilityConverter}}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE7E8;" FontFamily="Segoe MDL2 Assets" FontSize="16" Width="24" Foreground="{StaticResource SuccessBrush}" />
                                    <TextBlock Text="Open Day" Margin="12,0,0,0" VerticalAlignment="Center" Foreground="{StaticResource SuccessBrush}" />
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource SidebarMenuItemStyle}"
                                    Command="{Binding CloseWorkPeriodCommand}"
                                    Visibility="{Binding IsWorkPeriodOpen, Converter={StaticResource BoolToVisibilityConverter}}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE7E8;" FontFamily="Segoe MDL2 Assets" FontSize="16" Width="24" Foreground="{StaticResource WarningBrush}" />
                                    <TextBlock Text="Close Day" Margin="12,0,0,0" VerticalAlignment="Center" Foreground="{StaticResource WarningBrush}" />
                                </StackPanel>
                            </Button>

                            <!-- X-Report -->
                            <Button Style="{StaticResource SidebarMenuItemStyle}"
                                    Command="{Binding GenerateXReportCommand}"
                                    IsEnabled="{Binding IsWorkPeriodOpen}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE9F9;" FontFamily="Segoe MDL2 Assets" FontSize="16" Width="24" />
                                    <TextBlock Text="X-Report" Margin="12,0,0,0" VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>

                            <!-- Reports Group -->
                            <TextBlock Text="REPORTS"
                                       Style="{StaticResource SidebarGroupHeaderStyle}" />

                            <!-- Sales Reports -->
                            <Button Style="{StaticResource SidebarMenuItemStyle}"
                                    Command="{Binding NavigateToSalesReportsCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE9D2;" FontFamily="Segoe MDL2 Assets" FontSize="16" Width="24" />
                                    <TextBlock Text="Sales Reports" Margin="12,0,0,0" VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>

                            <!-- Inventory Reports -->
                            <Button Style="{StaticResource SidebarMenuItemStyle}"
                                    Command="{Binding NavigateToInventoryReportsCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE9F9;" FontFamily="Segoe MDL2 Assets" FontSize="16" Width="24" />
                                    <TextBlock Text="Inventory Reports" Margin="12,0,0,0" VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>

                            <!-- Z-Report History -->
                            <Button Style="{StaticResource SidebarMenuItemStyle}"
                                    Command="{Binding NavigateToZReportHistoryCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE749;" FontFamily="Segoe MDL2 Assets" FontSize="16" Width="24" />
                                    <TextBlock Text="Z-Report History" Margin="12,0,0,0" VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>

                            <!-- Finance Group -->
                            <TextBlock Text="FINANCE"
                                       Style="{StaticResource SidebarGroupHeaderStyle}" />

                            <!-- Expenses -->
                            <Button Style="{StaticResource SidebarMenuItemStyle}"
                                    Command="{Binding NavigateToExpensesCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE912;" FontFamily="Segoe MDL2 Assets" FontSize="16" Width="24" />
                                    <TextBlock Text="Expenses" Margin="12,0,0,0" VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>

                            <!-- Analytics Group -->
                            <TextBlock Text="ANALYTICS"
                                       Style="{StaticResource SidebarGroupHeaderStyle}" />

                            <!-- AI Insights -->
                            <Button Style="{StaticResource SidebarMenuItemStyle}"
                                    Command="{Binding NavigateToAIInsightsCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE99A;" FontFamily="Segoe MDL2 Assets" FontSize="16" Width="24" />
                                    <TextBlock Text="AI Insights" Margin="12,0,0,0" VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>

                            <!-- Prime Cost Report -->
                            <Button Style="{StaticResource SidebarMenuItemStyle}"
                                    Command="{Binding NavigateToPrimeCostCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE9D9;" FontFamily="Segoe MDL2 Assets" FontSize="16" Width="24" />
                                    <TextBlock Text="Prime Cost" Margin="12,0,0,0" VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>

                            <!-- Menu Engineering -->
                            <Button Style="{StaticResource SidebarMenuItemStyle}"
                                    Command="{Binding NavigateToMenuEngineeringCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xED56;" FontFamily="Segoe MDL2 Assets" FontSize="16" Width="24" />
                                    <TextBlock Text="Menu Engineering" Margin="12,0,0,0" VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>

                            <!-- Customer Analytics -->
                            <Button Style="{StaticResource SidebarMenuItemStyle}"
                                    Command="{Binding NavigateToCustomerAnalyticsCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE716;" FontFamily="Segoe MDL2 Assets" FontSize="16" Width="24" />
                                    <TextBlock Text="Customer Analytics" Margin="12,0,0,0" VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>

                            <!-- HR Group -->
                            <TextBlock Text="HR"
                                       Style="{StaticResource SidebarGroupHeaderStyle}" />

                            <!-- Employees -->
                            <Button Style="{StaticResource SidebarMenuItemStyle}"
                                    Command="{Binding NavigateToEmployeesCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE716;" FontFamily="Segoe MDL2 Assets" FontSize="16" Width="24" />
                                    <TextBlock Text="Employees" Margin="12,0,0,0" VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>

                            <!-- Attendance -->
                            <Button Style="{StaticResource SidebarMenuItemStyle}"
                                    Command="{Binding NavigateToAttendanceCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE787;" FontFamily="Segoe MDL2 Assets" FontSize="16" Width="24" />
                                    <TextBlock Text="Attendance" Margin="12,0,0,0" VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>

                            <!-- Payroll -->
                            <Button Style="{StaticResource SidebarMenuItemStyle}"
                                    Command="{Binding NavigateToPayrollCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE8C7;" FontFamily="Segoe MDL2 Assets" FontSize="16" Width="24" />
                                    <TextBlock Text="Payroll" Margin="12,0,0,0" VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>

                            <!-- Management Group -->
                            <TextBlock Text="MANAGEMENT"
                                       Style="{StaticResource SidebarGroupHeaderStyle}" />

                            <!-- Users -->
                            <Button Style="{StaticResource SidebarMenuItemStyle}"
                                    Command="{Binding NavigateToUserManagementCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE77B;" FontFamily="Segoe MDL2 Assets" FontSize="16" Width="24" />
                                    <TextBlock Text="Users" Margin="12,0,0,0" VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>

                            <!-- Roles -->
                            <Button Style="{StaticResource SidebarMenuItemStyle}"
                                    Command="{Binding NavigateToRoleManagementCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE8D7;" FontFamily="Segoe MDL2 Assets" FontSize="16" Width="24" />
                                    <TextBlock Text="Roles &amp; Permissions" Margin="12,0,0,0" VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>

                            <!-- Settings Group -->
                            <TextBlock Text="SETTINGS"
                                       Style="{StaticResource SidebarGroupHeaderStyle}" />

                            <!-- Payment Methods -->
                            <Button Style="{StaticResource SidebarMenuItemStyle}"
                                    Command="{Binding NavigateToPaymentMethodsCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE8C7;" FontFamily="Segoe MDL2 Assets" FontSize="16" Width="24" />
                                    <TextBlock Text="Payment Methods" Margin="12,0,0,0" VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>

                            <!-- Organization Settings -->
                            <Button Style="{StaticResource SidebarMenuItemStyle}"
                                    Command="{Binding NavigateToOrganizationSettingsCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE770;" FontFamily="Segoe MDL2 Assets" FontSize="16" Width="24" />
                                    <TextBlock Text="Organization" Margin="12,0,0,0" VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>

                        </StackPanel>
                    </ScrollViewer>

                    <!-- User Section at Bottom -->
                    <Border Grid.Row="1"
                            Background="#16162B"
                            Padding="16,12">
                        <StackPanel>
                            <!-- User Info Row -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <!-- User Avatar -->
                                <Border Grid.Column="0"
                                        Width="40"
                                        Height="40"
                                        CornerRadius="20"
                                        Background="{StaticResource PrimaryBrush}">
                                    <TextBlock Text="{Binding UserInitials}"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center" />
                                </Border>

                                <!-- User Info -->
                                <StackPanel Grid.Column="1" Margin="12,0" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding CurrentUserName}"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               FontSize="13"
                                               FontWeight="SemiBold"
                                               TextTrimming="CharacterEllipsis" />
                                    <TextBlock Text="{Binding CurrentUserRole}"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               FontSize="11" />
                                </StackPanel>
                            </Grid>

                            <!-- Sign Out Button - Clear and prominent -->
                            <Button Command="{Binding LogoutCommand}"
                                    Cursor="Hand"
                                    Height="40">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#2D2D44"/>
                                        <Setter Property="Foreground" Value="#8888AA"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Setter Property="BorderBrush" Value="#3D3D5C"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border x:Name="border"
                                                            Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="8"
                                                            Padding="12,8">
                                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                            <TextBlock Text="&#xF3B1;"
                                                                       FontFamily="Segoe MDL2 Assets"
                                                                       FontSize="16"
                                                                       VerticalAlignment="Center"
                                                                       Margin="0,0,10,0"/>
                                                            <TextBlock Text="Sign Out"
                                                                       FontSize="14"
                                                                       FontWeight="SemiBold"
                                                                       VerticalAlignment="Center"/>
                                                        </StackPanel>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="border" Property="Background" Value="#EF4444"/>
                                                            <Setter Property="Foreground" Value="White"/>
                                                            <Setter TargetName="border" Property="BorderBrush" Value="#EF4444"/>
                                                        </Trigger>
                                                        <Trigger Property="IsPressed" Value="True">
                                                            <Setter TargetName="border" Property="Background" Value="#DC2626"/>
                                                            <Setter Property="Foreground" Value="White"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Main Content Area -->
            <Grid Grid.Column="1" Background="#1E1E2E">
                <!-- ContentControl for navigation - displays the current ViewModel's view -->
                <ContentControl Content="{Binding CurrentView}" />

                <!-- Default welcome content (shown when CurrentView is null) -->
                <StackPanel x:Name="WelcomePanel"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentView}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                            <Setter Property="Visibility" Value="Collapsed" />
                        </Style>
                    </StackPanel.Style>
                    <TextBlock Text="Welcome to ProNet POS"
                               FontSize="32"
                               FontWeight="Light"
                               Foreground="#8888AA"
                               HorizontalAlignment="Center" />
                    <TextBlock Text="System Initializing..."
                               FontSize="16"
                               Foreground="#555577"
                               HorizontalAlignment="Center"
                               Margin="0,16,0,0" />
                </StackPanel>

                <!-- Busy Indicator Overlay -->
                <Border Background="#80000000"
                        Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                        <ProgressBar IsIndeterminate="True"
                                     Width="200"
                                     Height="4"
                                     Foreground="#4CAF50" />
                        <TextBlock Text="{Binding BusyMessage}"
                                   Foreground="White"
                                   FontSize="14"
                                   HorizontalAlignment="Center"
                                   Margin="0,16,0,0" />
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2"
                Background="#16162B"
                Padding="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Work Period Status with Indicator -->
                <Border Grid.Column="0"
                        CornerRadius="4"
                        Padding="10,6"
                        Margin="0,0,16,0"
                        VerticalAlignment="Center">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="#1E1E2E" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsWorkPeriodOpen}" Value="True">
                                    <Setter Property="Background" Value="#1B3D1B" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="8" Height="8" Margin="0,0,8,0" VerticalAlignment="Center">
                            <Ellipse.Style>
                                <Style TargetType="Ellipse">
                                    <Setter Property="Fill" Value="#666666" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsWorkPeriodOpen}" Value="True">
                                            <Setter Property="Fill" Value="#4CAF50" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Ellipse.Style>
                        </Ellipse>
                        <TextBlock VerticalAlignment="Center" FontSize="12">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#8888AA" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsWorkPeriodOpen}" Value="True">
                                            <Setter Property="Foreground" Value="#4CAF50" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                            <Run Text="Workday: " FontWeight="SemiBold" />
                            <Run Text="{Binding WorkPeriodStatus, Mode=OneWay}" />
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Connectivity Status Indicator -->
                <controls:ConnectivityStatusControl Grid.Column="1"
                                                    ShowText="True"
                                                    VerticalAlignment="Center"
                                                    Margin="0,0,16,0" />

                <!-- System Health Indicators -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,16,0">
                    <!-- Database Status -->
                    <Border CornerRadius="3" Padding="6,3" Margin="0,0,8,0" ToolTip="{Binding DatabaseLatencyMs, StringFormat='DB Latency: {0}ms'}">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="#1B3D1B"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsDatabaseConnected}" Value="False">
                                        <Setter Property="Background" Value="#3D1B1B"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="6" Height="6" VerticalAlignment="Center" Margin="0,0,4,0">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="#22C55E"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsDatabaseConnected}" Value="False">
                                                <Setter Property="Fill" Value="#EF4444"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                            <TextBlock Text="DB" Foreground="#555577" FontSize="10"/>
                        </StackPanel>
                    </Border>

                    <!-- Printer Status -->
                    <Border CornerRadius="3" Padding="6,3" Margin="0,0,8,0" ToolTip="{Binding PrinterStatus}">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="#1B3D1B"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsPrinterAvailable}" Value="False">
                                        <Setter Property="Background" Value="#3D3D1B"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="6" Height="6" VerticalAlignment="Center" Margin="0,0,4,0">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="#22C55E"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsPrinterAvailable}" Value="False">
                                                <Setter Property="Fill" Value="#F59E0B"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                            <TextBlock Text="&#xE749;" FontFamily="Segoe MDL2 Assets" Foreground="#555577" FontSize="10"/>
                        </StackPanel>
                    </Border>

                    <!-- Disk Space Warning -->
                    <Border CornerRadius="3" Padding="6,3" Background="#3D3D1B" Margin="0,0,8,0"
                            ToolTip="{Binding AvailableDiskSpaceGb, StringFormat='Available: {0:N1} GB'}"
                            Visibility="{Binding IsDiskSpaceLow, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE7BA;" FontFamily="Segoe MDL2 Assets" Foreground="#F59E0B" FontSize="10" Margin="0,0,4,0"/>
                            <TextBlock Text="Disk" Foreground="#F59E0B" FontSize="10"/>
                        </StackPanel>
                    </Border>

                    <!-- Memory Warning -->
                    <Border CornerRadius="3" Padding="6,3" Background="#3D3D1B"
                            ToolTip="{Binding MemoryUsagePercent, StringFormat='Memory: {0:N0}%'}"
                            Visibility="{Binding IsMemoryHigh, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE7F4;" FontFamily="Segoe MDL2 Assets" Foreground="#F59E0B" FontSize="10" Margin="0,0,4,0"/>
                            <TextBlock Text="Mem" Foreground="#F59E0B" FontSize="10"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Spacer -->
                <TextBlock Grid.Column="3" />

                <!-- Register Info -->
                <TextBlock Grid.Column="4"
                           Foreground="#8888AA"
                           VerticalAlignment="Center"
                           FontSize="12"
                           Margin="0,0,24,0">
                    <Run Text="Register: " />
                    <Run Text="{Binding RegisterName}" FontWeight="SemiBold" />
                </TextBlock>

                <!-- Current Time -->
                <TextBlock Grid.Column="5"
                           Text="{Binding CurrentTime, StringFormat='{}{0:ddd, MMM d | HH:mm:ss}'}"
                           Foreground="#8888AA"
                           VerticalAlignment="Center"
                           FontSize="12" />
            </Grid>
        </Border>
    </Grid>
</Window>
