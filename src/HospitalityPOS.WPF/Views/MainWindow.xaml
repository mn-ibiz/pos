<Window x:Class="HospitalityPOS.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:HospitalityPOS.WPF.ViewModels"
        xmlns:views="clr-namespace:HospitalityPOS.WPF.Views"
        xmlns:inventoryViews="clr-namespace:HospitalityPOS.WPF.Views.Inventory"
        xmlns:controls="clr-namespace:HospitalityPOS.WPF.Controls"
        mc:Ignorable="d"
        Title="{Binding ApplicationTitle}"
        Height="768"
        Width="1024"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#1E1E2E">

    <Window.Resources>
        <!-- <vm:ViewModelLocator x:Key="Locator" /> --> <!-- Excluded from compilation -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />

        <!-- ViewModel to View mappings -->
        <DataTemplate DataType="{x:Type vm:SetupWizardViewModel}">
            <views:SetupWizardView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:LoginViewModel}">
            <views:LoginView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:AutoLogoutSettingsViewModel}">
            <views:AutoLogoutSettingsView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ChangePasswordViewModel}">
            <views:ChangePasswordView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:RoleManagementViewModel}">
            <views:RoleManagementView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:RoleEditorViewModel}">
            <views:RoleEditorView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:UserManagementViewModel}">
            <views:UserManagementView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:UserEditorViewModel}">
            <views:UserEditorView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:CategoryManagementViewModel}">
            <views:CategoryManagementView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ProductManagementViewModel}">
            <views:ProductManagementView />
        </DataTemplate>
        <!-- POSViewModel and SettlementViewModel now enabled -->
        <DataTemplate DataType="{x:Type vm:POSViewModel}">
            <views:POSView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SettlementViewModel}">
            <views:SettlementView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:PaymentMethodsViewModel}">
            <views:PaymentMethodsView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:InventoryViewModel}">
            <inventoryViews:InventoryView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SuppliersViewModel}">
            <views:SuppliersView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:EmployeesViewModel}">
            <views:EmployeesView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:EmployeeEditorViewModel}">
            <views:EmployeeEditorView />
        </DataTemplate>
        <!-- JournalEntriesViewModel still excluded -->
        <!-- Loyalty ViewModels EXCLUDED - API mismatches with Customer entity -->
        <!--
        <DataTemplate DataType="{x:Type vm:CustomerEnrollmentViewModel}">
            <views:CustomerEnrollmentView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:CustomerListViewModel}">
            <views:CustomerListView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:LoyaltySettingsViewModel}">
            <views:LoyaltySettingsView />
        </DataTemplate>
        -->
    </Window.Resources>

    <!-- DataContext set in code-behind -->
    <!--
    <Window.DataContext>
        <Binding Source="{StaticResource Locator}" Path="Main" />
    </Window.DataContext>
    -->

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Border Grid.Row="0"
                Background="#2D2D44"
                Padding="16,8"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding ApplicationTitle}"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="White"
                           VerticalAlignment="Center" />

                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button Content="—"
                            Width="44"
                            Height="36"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="14"
                            Cursor="Hand"
                            Click="MinimizeButton_Click" />
                    <Button Content="✕"
                            Width="44"
                            Height="36"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="14"
                            Cursor="Hand"
                            Click="CloseButton_Click" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area - Hosts the current view -->
        <Grid Grid.Row="1" Background="#1E1E2E">
            <!-- ContentControl for navigation - displays the current ViewModel's view -->
            <ContentControl Content="{Binding CurrentView}" />

            <!-- Default welcome content (shown when CurrentView is null) -->
            <StackPanel x:Name="WelcomePanel"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                <StackPanel.Style>
                    <Style TargetType="StackPanel">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentView}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                        <Setter Property="Visibility" Value="Collapsed" />
                    </Style>
                </StackPanel.Style>
                <TextBlock Text="Welcome to Hospitality POS"
                           FontSize="32"
                           FontWeight="Light"
                           Foreground="#8888AA"
                           HorizontalAlignment="Center" />
                <TextBlock Text="System Initializing..."
                           FontSize="16"
                           Foreground="#666688"
                           HorizontalAlignment="Center"
                           Margin="0,16,0,0" />
            </StackPanel>

            <!-- Busy Indicator Overlay -->
            <Border Background="#80000000"
                    Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                    <ProgressBar IsIndeterminate="True"
                                 Width="200"
                                 Height="4"
                                 Foreground="#4CAF50" />
                    <TextBlock Text="{Binding BusyMessage}"
                               Foreground="White"
                               FontSize="14"
                               HorizontalAlignment="Center"
                               Margin="0,16,0,0" />
                </StackPanel>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2"
                Background="#2D2D44"
                Padding="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Work Period Status with Indicator -->
                <Border Grid.Column="0"
                        CornerRadius="4"
                        Padding="8,4"
                        Margin="0,0,16,0"
                        VerticalAlignment="Center">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="#1E1E2E" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsWorkPeriodOpen}" Value="True">
                                    <Setter Property="Background" Value="#1B3D1B" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="10" Height="10" Margin="0,0,8,0" VerticalAlignment="Center">
                            <Ellipse.Style>
                                <Style TargetType="Ellipse">
                                    <Setter Property="Fill" Value="#666666" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsWorkPeriodOpen}" Value="True">
                                            <Setter Property="Fill" Value="#4CAF50" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Ellipse.Style>
                        </Ellipse>
                        <TextBlock VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#8888AA" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsWorkPeriodOpen}" Value="True">
                                            <Setter Property="Foreground" Value="#4CAF50" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                            <Run Text="Work Period: " FontWeight="SemiBold" />
                            <Run Text="{Binding WorkPeriodStatus, Mode=OneWay}" />
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Connectivity Status Indicator -->
                <controls:ConnectivityStatusControl Grid.Column="1"
                                                    ShowText="True"
                                                    VerticalAlignment="Center"
                                                    Margin="0,0,16,0" />

                <!-- Spacer -->
                <TextBlock Grid.Column="2" />

                <TextBlock Grid.Column="3"
                           Foreground="#8888AA"
                           VerticalAlignment="Center"
                           Margin="0,0,24,0">
                    <Run Text="User: " />
                    <Run Text="{Binding CurrentUserName}" />
                </TextBlock>

                <TextBlock Grid.Column="4"
                           Text="{Binding CurrentTime, StringFormat='{}{0:HH:mm:ss}'}"
                           Foreground="#8888AA"
                           VerticalAlignment="Center" />
            </Grid>
        </Border>
    </Grid>
</Window>
