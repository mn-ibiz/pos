<Window x:Class="HospitalityPOS.WPF.Views.DatabaseConfigurationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Database Connection Setup"
        Height="520" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Background="#F5F5F5">

    <Window.Resources>
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Margin" Value="0,10,0,8"/>
        </Style>

        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>

        <Style x:Key="InputField" TargetType="TextBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style x:Key="ComboField" TargetType="ComboBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style x:Key="PasswordField" TargetType="PasswordBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1D4ED8"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#94A3B8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#E5E7EB"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D1D5DB"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#F3F4F6"/>
                                <Setter Property="Foreground" Value="#9CA3AF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SuccessButton" TargetType="Button">
            <Setter Property="Background" Value="#10B981"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#059669"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#94A3B8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2563EB" Padding="20,15">
            <StackPanel>
                <TextBlock Text="Database Connection Setup"
                           FontSize="18" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Configure the connection to your SQL Server database"
                           FontSize="12" Foreground="#BFDBFE" Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel>
                <!-- SQL Server Selection -->
                <TextBlock Text="SQL Server" Style="{StaticResource SectionHeader}"/>

                <TextBlock Text="Server Name" Style="{StaticResource FieldLabel}"/>
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <ComboBox x:Name="ServerComboBox"
                              Style="{StaticResource ComboField}"
                              IsEditable="True"
                              SelectionChanged="ServerComboBox_SelectionChanged">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold"/>
                                    <TextBlock Text=" - " Foreground="#999"/>
                                    <TextBlock Text="{Binding Source}" Foreground="#999" FontSize="11"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <Button x:Name="ScanButton"
                            Grid.Column="1"
                            Content="ðŸ” Scan Network"
                            Style="{StaticResource SecondaryButton}"
                            Margin="8,0,0,0"
                            Click="ScanButton_Click"/>
                </Grid>

                <!-- Scanning indicator -->
                <StackPanel x:Name="ScanningPanel" Orientation="Horizontal" Visibility="Collapsed" Margin="0,0,0,12">
                    <TextBlock Text="â³" FontSize="14" Margin="0,0,8,0"/>
                    <TextBlock Text="Scanning network for SQL Server instances..."
                               Foreground="#666" FontStyle="Italic"/>
                </StackPanel>

                <!-- Database Name -->
                <TextBlock Text="Database Name" Style="{StaticResource FieldLabel}"/>
                <ComboBox x:Name="DatabaseComboBox"
                          Style="{StaticResource ComboField}"
                          IsEditable="True"
                          Text="HospitalityPOS"
                          Margin="0,0,0,12"/>

                <!-- Authentication -->
                <TextBlock Text="Authentication" Style="{StaticResource SectionHeader}"/>

                <RadioButton x:Name="WindowsAuthRadio"
                             Content="Windows Authentication (Integrated Security)"
                             IsChecked="True"
                             Margin="0,0,0,8"
                             Checked="AuthenticationChanged"/>
                <RadioButton x:Name="SqlAuthRadio"
                             Content="SQL Server Authentication"
                             Margin="0,0,0,12"
                             Checked="AuthenticationChanged"/>

                <!-- SQL Auth Fields -->
                <StackPanel x:Name="SqlAuthPanel" Visibility="Collapsed">
                    <TextBlock Text="Username" Style="{StaticResource FieldLabel}"/>
                    <TextBox x:Name="UsernameTextBox"
                             Style="{StaticResource InputField}"
                             Margin="0,0,0,12"/>

                    <TextBlock Text="Password" Style="{StaticResource FieldLabel}"/>
                    <PasswordBox x:Name="PasswordBox"
                                 Style="{StaticResource PasswordField}"
                                 Margin="0,0,0,12"/>
                </StackPanel>

                <!-- Connection Test Result -->
                <Border x:Name="TestResultBorder"
                        Visibility="Collapsed"
                        CornerRadius="4"
                        Padding="12"
                        Margin="0,8,0,0">
                    <StackPanel>
                        <TextBlock x:Name="TestResultIcon" FontSize="20" Margin="0,0,0,4"/>
                        <TextBlock x:Name="TestResultText" TextWrapping="Wrap"/>
                        <TextBlock x:Name="TestResultDetails"
                                   FontSize="11" Foreground="#666"
                                   TextWrapping="Wrap" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer Buttons -->
        <Border Grid.Row="2" Background="White" Padding="20,15"
                BorderBrush="#E5E7EB" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="TestButton"
                        Grid.Column="1"
                        Content="Test Connection"
                        Style="{StaticResource SecondaryButton}"
                        Click="TestButton_Click"/>

                <Button x:Name="SaveButton"
                        Grid.Column="2"
                        Content="Save &amp; Connect"
                        Style="{StaticResource SuccessButton}"
                        Margin="10,0,0,0"
                        IsEnabled="False"
                        Click="SaveButton_Click"/>

                <Button x:Name="CancelButton"
                        Grid.Column="3"
                        Content="Cancel"
                        Style="{StaticResource SecondaryButton}"
                        Margin="10,0,0,0"
                        Click="CancelButton_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
