<UserControl x:Class="HospitalityPOS.WPF.Views.FloorManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:HospitalityPOS.WPF.Converters"
             xmlns:controls="clr-namespace:HospitalityPOS.WPF.Controls"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1200"
             Background="#1E1E2E">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility"/>
        <converters:TableStatusColorConverter x:Key="TableStatusColor"/>
        <converters:TableShapeRadiusConverter x:Key="TableShapeRadius"/>

        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="MinHeight" Value="44"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="16,8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.7"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="#4E4E6E"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#4CAF50"/>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#F44336"/>
        </Style>

        <Style x:Key="SmallButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="MinWidth" Value="36"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>

        <Style x:Key="FloorListItem" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#3E3E5E"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#4E4E8E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2E2E4E" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Content="Back"
                        Command="{Binding GoBackCommand}"
                        Style="{StaticResource ActionButton}"
                        Width="80"/>

                <TextBlock Grid.Column="1"
                           Text="{Binding Title}"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="Save Layout"
                            Command="{Binding SaveLayoutCommand}"
                            Style="{StaticResource PrimaryButton}"
                            IsEnabled="{Binding HasUnsavedChanges}"
                            Margin="0,0,8,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="280"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Floors List -->
            <Border Grid.Column="0" Background="#2E2E4E" CornerRadius="8" Margin="0,0,8,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Floors Header -->
                    <Border Grid.Row="0" Background="#3E3E5E" CornerRadius="8,8,0,0" Padding="12">
                        <Grid>
                            <TextBlock Text="Floors"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                            <Button Content="+"
                                    Command="{Binding AddFloorCommand}"
                                    Style="{StaticResource SmallButton}"
                                    HorizontalAlignment="Right"
                                    ToolTip="Add Floor"/>
                        </Grid>
                    </Border>

                    <!-- Floors List -->
                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding Floors}"
                             SelectedItem="{Binding SelectedFloor}"
                             ItemContainerStyle="{StaticResource FloorListItem}"
                             Background="Transparent"
                             BorderThickness="0"
                             Padding="8">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Name}"
                                                   FontSize="14"
                                                   FontWeight="SemiBold"
                                                   Foreground="White"/>
                                        <TextBlock Foreground="#8888AA" FontSize="12">
                                            <Run Text="{Binding Tables.Count, Mode=OneWay}"/>
                                            <Run Text=" tables"/>
                                        </TextBlock>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                        <Button Content="Edit"
                                                Command="{Binding DataContext.EditFloorCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                Style="{StaticResource SmallButton}"
                                                Margin="0,0,4,0"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Floor Actions -->
                    <Border Grid.Row="2" Background="#3E3E5E" CornerRadius="0,0,8,8" Padding="12">
                        <Button Content="Delete Floor"
                                Command="{Binding DeleteFloorCommand}"
                                Style="{StaticResource DangerButton}"
                                IsEnabled="{Binding SelectedFloor, Converter={StaticResource NullToVisibility}}"
                                HorizontalAlignment="Stretch"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Center Panel - Floor Grid -->
            <Border Grid.Column="1" Background="#2E2E4E" CornerRadius="8" Margin="8,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Grid Header -->
                    <Border Grid.Row="0" Background="#3E3E5E" CornerRadius="8,8,0,0" Padding="12">
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding SelectedFloor.Name, FallbackValue='Select a Floor'}"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="White"/>
                                <TextBlock Foreground="#8888AA" FontSize="14" Margin="16,0,0,0" VerticalAlignment="Center">
                                    <Run Text="{Binding TableCount, Mode=OneWay}"/>
                                    <Run Text=" tables,"/>
                                    <Run Text="{Binding TotalCapacity, Mode=OneWay}"/>
                                    <Run Text=" seats"/>
                                </TextBlock>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="Add Table"
                                        Command="{Binding AddTableCommand}"
                                        Style="{StaticResource PrimaryButton}"
                                        Margin="0,0,8,0"/>
                                <Button Content="Add Section"
                                        Command="{Binding AddSectionCommand}"
                                        Style="{StaticResource ActionButton}"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Floor Grid Canvas -->
                    <controls:FloorGridControl Grid.Row="1"
                                               Tables="{Binding Tables}"
                                               Sections="{Binding Sections}"
                                               SelectedTable="{Binding SelectedTable, Mode=TwoWay}"
                                               GridWidth="{Binding SelectedFloor.GridWidth, FallbackValue=10}"
                                               GridHeight="{Binding SelectedFloor.GridHeight, FallbackValue=10}"
                                               Visibility="{Binding SelectedFloor, Converter={StaticResource NullToVisibility}}"/>

                    <!-- No Floor Selected Message -->
                    <TextBlock Grid.Row="1"
                               Text="Select a floor to view and manage tables"
                               FontSize="16"
                               Foreground="#8888AA"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Visibility="{Binding SelectedFloor, Converter={StaticResource InverseNullToVisibility}}"/>
                </Grid>
            </Border>

            <!-- Right Panel - Table/Section Details -->
            <Border Grid.Column="2" Background="#2E2E4E" CornerRadius="8" Margin="8,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Tables Header -->
                    <Border Grid.Row="0" Background="#3E3E5E" CornerRadius="8,8,0,0" Padding="12">
                        <TextBlock Text="Tables"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="White"/>
                    </Border>

                    <!-- Tables List -->
                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding Tables}"
                             SelectedItem="{Binding SelectedTable}"
                             ItemContainerStyle="{StaticResource FloorListItem}"
                             Background="Transparent"
                             BorderThickness="0"
                             Padding="8">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0"
                                            Width="32" Height="32"
                                            CornerRadius="{Binding Shape, Converter={StaticResource TableShapeRadius}}"
                                            Background="{Binding Status, Converter={StaticResource TableStatusColor}}"
                                            Margin="0,0,8,0">
                                        <TextBlock Text="{Binding TableNumber}"
                                                   FontSize="11"
                                                   FontWeight="Bold"
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock FontSize="13" Foreground="White">
                                            <Run Text="Table"/>
                                            <Run Text="{Binding TableNumber}"/>
                                        </TextBlock>
                                        <TextBlock Foreground="#8888AA" FontSize="11">
                                            <Run Text="{Binding Capacity}"/>
                                            <Run Text=" seats"/>
                                        </TextBlock>
                                    </StackPanel>
                                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                                        <Button Content="Edit"
                                                Command="{Binding DataContext.EditTableCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource SmallButton}"
                                                Margin="0,0,4,0"/>
                                        <Button Content="X"
                                                Command="{Binding DataContext.DeleteTableCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource SmallButton}"
                                                Background="#F44336"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Sections Header -->
                    <Border Grid.Row="2" Background="#3E3E5E" Padding="12">
                        <TextBlock Text="Sections"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="White"/>
                    </Border>

                    <!-- Sections List -->
                    <ListBox Grid.Row="3"
                             ItemsSource="{Binding Sections}"
                             SelectedItem="{Binding SelectedSection}"
                             ItemContainerStyle="{StaticResource FloorListItem}"
                             Background="Transparent"
                             BorderThickness="0"
                             Padding="8">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0"
                                            Width="24" Height="24"
                                            CornerRadius="4"
                                            Margin="0,0,8,0">
                                        <Border.Background>
                                            <SolidColorBrush Color="{Binding ColorCode, Converter={StaticResource HexToColor}}"/>
                                        </Border.Background>
                                    </Border>
                                    <TextBlock Grid.Column="1"
                                               Text="{Binding Name}"
                                               FontSize="13"
                                               Foreground="White"
                                               VerticalAlignment="Center"/>
                                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                                        <Button Content="Edit"
                                                Command="{Binding DataContext.EditSectionCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource SmallButton}"
                                                Margin="0,0,4,0"/>
                                        <Button Content="X"
                                                Command="{Binding DataContext.DeleteSectionCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource SmallButton}"
                                                Background="#F44336"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
        </Grid>

        <!-- Footer / Status Bar -->
        <Border Grid.Row="2" Background="#2E2E4E" Padding="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Error Message -->
                <TextBlock Grid.Column="0"
                           Text="{Binding ErrorMessage}"
                           Foreground="#F44336"
                           FontSize="14"
                           Visibility="{Binding HasError, Converter={StaticResource BoolToVisibility}}"
                           VerticalAlignment="Center"/>

                <!-- Legend -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Border Width="16" Height="16" CornerRadius="2" Background="#4CAF50" Margin="0,0,4,0"/>
                    <TextBlock Text="Available" Foreground="#8888AA" FontSize="12" Margin="0,0,16,0" VerticalAlignment="Center"/>
                    <Border Width="16" Height="16" CornerRadius="2" Background="#F44336" Margin="0,0,4,0"/>
                    <TextBlock Text="Occupied" Foreground="#8888AA" FontSize="12" Margin="0,0,16,0" VerticalAlignment="Center"/>
                    <Border Width="16" Height="16" CornerRadius="2" Background="#FFC107" Margin="0,0,4,0"/>
                    <TextBlock Text="Reserved" Foreground="#8888AA" FontSize="12" Margin="0,0,16,0" VerticalAlignment="Center"/>
                    <Border Width="16" Height="16" CornerRadius="2" Background="#9E9E9E" Margin="0,0,4,0"/>
                    <TextBlock Text="Unavailable" Foreground="#8888AA" FontSize="12" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <Grid Grid.RowSpan="3"
              Background="#80000000"
              Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibility}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True"
                             Width="200"
                             Height="4"
                             Foreground="#4CAF50"/>
                <TextBlock Text="{Binding BusyMessage}"
                           Foreground="White"
                           FontSize="14"
                           Margin="0,12,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
