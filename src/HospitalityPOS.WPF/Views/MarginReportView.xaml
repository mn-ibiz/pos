<UserControl x:Class="HospitalityPOS.WPF.Views.MarginReportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="#1E1E2E">
    <UserControl.Resources>
        <!-- Dark Theme Colors -->
        <SolidColorBrush x:Key="PrimaryBackground" Color="#1E1E2E"/>
        <SolidColorBrush x:Key="SecondaryBackground" Color="#2D2D3D"/>
        <SolidColorBrush x:Key="CardBackground" Color="#363647"/>
        <SolidColorBrush x:Key="PrimaryText" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SecondaryText" Color="#A0A0B0"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#3B82F6"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#22C55E"/>
        <SolidColorBrush x:Key="AccentRed" Color="#EF4444"/>
        <SolidColorBrush x:Key="AccentYellow" Color="#F59E0B"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#4A4A5A"/>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="8"/>
        </Style>

        <!-- Button Style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4B92F7"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource AccentBlue}"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentBlue}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1A3B82F6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Quick Range Button Style -->
        <Style x:Key="QuickRangeButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SecondaryBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryText}"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentBlue}"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataGrid Style -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowBackground" Value="Transparent"/>
            <Setter Property="AlternatingRowBackground" Value="#2A2A3A"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="IsReadOnly" Value="True"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource SecondaryBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryText}"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#3B82F620"/>
                    <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource SecondaryBackground}" Padding="20,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="Back"
                            Command="{Binding NavigateBackCommand}"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Margin="0,0,16,0"/>
                    <TextBlock Text="Profit Margin Report"
                               FontSize="24" FontWeight="Bold"
                               Foreground="{StaticResource PrimaryText}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="{Binding LastRefreshDisplay}"
                               Foreground="{StaticResource SecondaryText}"
                               VerticalAlignment="Center"
                               Margin="0,0,16,0"/>
                    <Button Content="Refresh"
                            Command="{Binding RefreshCommand}"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Margin="0,0,8,0"/>
                    <Button Content="Export to Excel"
                            Command="{Binding ExportToExcelCommand}"
                            Style="{StaticResource PrimaryButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Filters Section -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Date Range -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="From:" Foreground="{StaticResource SecondaryText}"
                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <DatePicker SelectedDate="{Binding StartDate}"
                                Background="{StaticResource SecondaryBackground}"
                                Foreground="{StaticResource PrimaryText}"
                                Width="120"/>
                    <TextBlock Text="To:" Foreground="{StaticResource SecondaryText}"
                               VerticalAlignment="Center" Margin="16,0,8,0"/>
                    <DatePicker SelectedDate="{Binding EndDate}"
                                Background="{StaticResource SecondaryBackground}"
                                Foreground="{StaticResource PrimaryText}"
                                Width="120"/>
                    <Button Content="Apply"
                            Command="{Binding ApplyCustomDateRangeCommand}"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Margin="16,0,0,0"/>
                </StackPanel>

                <!-- Quick Date Ranges -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="24,0,0,0">
                    <Button Content="7D" Style="{StaticResource QuickRangeButtonStyle}"
                            Command="{Binding ApplyQuickDateRangeCommand}" CommandParameter="Last7Days"/>
                    <Button Content="30D" Style="{StaticResource QuickRangeButtonStyle}"
                            Command="{Binding ApplyQuickDateRangeCommand}" CommandParameter="Last30Days"/>
                    <Button Content="MTD" Style="{StaticResource QuickRangeButtonStyle}"
                            Command="{Binding ApplyQuickDateRangeCommand}" CommandParameter="ThisMonth"/>
                    <Button Content="QTD" Style="{StaticResource QuickRangeButtonStyle}"
                            Command="{Binding ApplyQuickDateRangeCommand}" CommandParameter="ThisQuarter"/>
                    <Button Content="YTD" Style="{StaticResource QuickRangeButtonStyle}"
                            Command="{Binding ApplyQuickDateRangeCommand}" CommandParameter="ThisYear"/>
                </StackPanel>

                <!-- Threshold Setting -->
                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Min Margin:" Foreground="{StaticResource SecondaryText}"
                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBox Text="{Binding MinimumMarginThreshold, UpdateSourceTrigger=PropertyChanged}"
                             Width="50" Background="{StaticResource SecondaryBackground}"
                             Foreground="{StaticResource PrimaryText}"
                             Padding="8,4" BorderThickness="0"/>
                    <TextBlock Text="%" Foreground="{StaticResource SecondaryText}"
                               VerticalAlignment="Center" Margin="4,0,8,0"/>
                    <Button Content="Set"
                            Command="{Binding UpdateThresholdCommand}"
                            Style="{StaticResource SecondaryButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Summary KPIs -->
        <Grid Grid.Row="2" Margin="8,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Gross Profit -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="GROSS PROFIT" FontSize="11" FontWeight="SemiBold"
                               Foreground="{StaticResource SecondaryText}" Margin="0,0,0,8"/>
                    <TextBlock Text="{Binding GrossProfitSummary.FormattedGrossProfit, FallbackValue='KSh 0'}"
                               FontSize="20" FontWeight="Bold"
                               Foreground="{StaticResource AccentGreen}"/>
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <TextBlock Text="Revenue: KSh " Foreground="{StaticResource SecondaryText}" FontSize="12"/>
                        <TextBlock Text="{Binding GrossProfitSummary.TotalRevenue, StringFormat=N0, FallbackValue='0'}"
                                   Foreground="{StaticResource PrimaryText}" FontSize="12"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Average Margin -->
            <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="AVG MARGIN %" FontSize="11" FontWeight="SemiBold"
                               Foreground="{StaticResource SecondaryText}" Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding GrossProfitSummary.AverageMarginPercent, StringFormat='{}{0:N1}%', FallbackValue='0%'}"
                                   FontSize="20" FontWeight="Bold"
                                   Foreground="{StaticResource AccentBlue}"/>
                    </StackPanel>
                    <TextBlock Text="Weighted by sales" Foreground="{StaticResource SecondaryText}"
                               FontSize="12" Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <!-- Low Margin Count -->
            <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="LOW MARGIN PRODUCTS" FontSize="11" FontWeight="SemiBold"
                               Foreground="{StaticResource SecondaryText}" Margin="0,0,0,8"/>
                    <TextBlock Text="{Binding LowMarginCount, StringFormat='{}{0:N0}', FallbackValue='0'}"
                               FontSize="20" FontWeight="Bold"
                               Foreground="{StaticResource AccentRed}"/>
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <TextBlock Text="Below " Foreground="{StaticResource SecondaryText}" FontSize="12"/>
                        <TextBlock Text="{Binding MinimumMarginThreshold, StringFormat='{}{0:N0}%'}"
                                   Foreground="{StaticResource AccentYellow}" FontSize="12"/>
                        <TextBlock Text=" threshold" Foreground="{StaticResource SecondaryText}" FontSize="12"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Potential Profit Loss -->
            <Border Grid.Column="3" Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="POTENTIAL PROFIT LOSS" FontSize="11" FontWeight="SemiBold"
                               Foreground="{StaticResource SecondaryText}" Margin="0,0,0,8"/>
                    <TextBlock Text="{Binding PotentialProfitLoss, StringFormat='KSh {0:N0}', FallbackValue='KSh 0'}"
                               FontSize="20" FontWeight="Bold"
                               Foreground="{StaticResource AccentRed}"/>
                    <TextBlock Text="From low-margin items (30d)" Foreground="{StaticResource SecondaryText}"
                               FontSize="12" Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <!-- Cost Price Coverage -->
            <Border Grid.Column="4" Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="COST PRICE COVERAGE" FontSize="11" FontWeight="SemiBold"
                               Foreground="{StaticResource SecondaryText}" Margin="0,0,0,8"/>
                    <TextBlock Text="{Binding CostPriceCoverage, StringFormat='{}{0:N1}%', FallbackValue='0%'}"
                               FontSize="20" FontWeight="Bold"
                               Foreground="{StaticResource AccentBlue}"/>
                    <TextBlock Text="Products with cost data" Foreground="{StaticResource SecondaryText}"
                               FontSize="12" Margin="0,4,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Main Content Area -->
        <Grid Grid.Row="3" Margin="8,0,8,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Tables -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Category Margins -->
                <Border Grid.Row="0" Style="{StaticResource CardStyle}" MaxHeight="200">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="CATEGORY MARGINS" FontSize="14" FontWeight="SemiBold"
                                   Foreground="{StaticResource PrimaryText}" Margin="0,0,0,12"/>

                        <DataGrid Grid.Row="1" ItemsSource="{Binding CategoryMargins}"
                                  MaxHeight="150" VerticalScrollBarVisibility="Auto">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Category" Binding="{Binding CategoryName}" Width="*"/>
                                <DataGridTextColumn Header="Revenue" Binding="{Binding TotalRevenue, StringFormat=N0}" Width="100"/>
                                <DataGridTextColumn Header="Cost" Binding="{Binding TotalCost, StringFormat=N0}" Width="100"/>
                                <DataGridTextColumn Header="Profit" Binding="{Binding TotalProfit, StringFormat=N0}" Width="100"/>
                                <DataGridTemplateColumn Header="Margin %" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding WeightedMarginPercent, StringFormat='{}{0:N1}%'}"
                                                       Foreground="{Binding HealthColor}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Rank" Binding="{Binding ProfitabilityRank}" Width="50"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>

                <!-- Product Margins -->
                <Border Grid.Row="1" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="PRODUCT MARGINS" FontSize="14" FontWeight="SemiBold"
                                       Foreground="{StaticResource PrimaryText}"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <TextBlock Text="Sort by:" Foreground="{StaticResource SecondaryText}"
                                           VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <Button Content="Profit" Style="{StaticResource QuickRangeButtonStyle}"
                                        Command="{Binding SortProductsCommand}" CommandParameter="TotalProfit"/>
                                <Button Content="Margin %" Style="{StaticResource QuickRangeButtonStyle}"
                                        Command="{Binding SortProductsCommand}" CommandParameter="MarginPercent"/>
                                <Button Content="Revenue" Style="{StaticResource QuickRangeButtonStyle}"
                                        Command="{Binding SortProductsCommand}" CommandParameter="TotalRevenue"/>
                            </StackPanel>
                        </Grid>

                        <DataGrid Grid.Row="1" ItemsSource="{Binding ProductMargins}"
                                  SelectedItem="{Binding SelectedProduct}"
                                  VerticalScrollBarVisibility="Auto">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Code" Binding="{Binding ProductCode}" Width="80"/>
                                <DataGridTextColumn Header="Product" Binding="{Binding ProductName}" Width="*"/>
                                <DataGridTextColumn Header="Category" Binding="{Binding CategoryName}" Width="100"/>
                                <DataGridTextColumn Header="Sell Price" Binding="{Binding SellingPrice, StringFormat=N0}" Width="80"/>
                                <DataGridTextColumn Header="Cost" Binding="{Binding CostPrice, StringFormat=N0}" Width="70"/>
                                <DataGridTemplateColumn Header="Margin" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding FormattedMargin}"
                                                       Foreground="{Binding HealthColor}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Sold" Binding="{Binding UnitsSold, StringFormat=N0}" Width="60"/>
                                <DataGridTextColumn Header="Revenue" Binding="{Binding TotalRevenue, StringFormat=N0}" Width="90"/>
                                <DataGridTextColumn Header="Profit" Binding="{Binding TotalProfit, StringFormat=N0}" Width="90"/>
                                <DataGridTemplateColumn Header="" Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Details"
                                                    Command="{Binding DataContext.ViewProductDetailsCommand,
                                                             RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource SecondaryButtonStyle}"
                                                    Padding="8,4" FontSize="11"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </Grid>

            <!-- Right Panel - Alerts -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Low Margin Alerts -->
                <Border Grid.Row="0" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Margin="0,0,0,12">
                            <TextBlock Text="LOW MARGIN ALERTS" FontSize="14" FontWeight="SemiBold"
                                       Foreground="{StaticResource AccentRed}"/>
                            <TextBlock Text="{Binding MinimumMarginThreshold, StringFormat='Products below {0:N0}% margin'}"
                                       FontSize="12" Foreground="{StaticResource SecondaryText}" Margin="0,4,0,0"/>
                        </StackPanel>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding LowMarginAlerts}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource SecondaryBackground}"
                                                CornerRadius="6" Padding="12" Margin="0,0,0,8">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <Grid Grid.Row="0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" Text="{Binding ProductName}"
                                                               FontWeight="SemiBold" Foreground="{StaticResource PrimaryText}"
                                                               TextTrimming="CharacterEllipsis"/>
                                                    <Border Grid.Column="1" CornerRadius="4" Padding="6,2"
                                                            Background="{StaticResource AccentRed}">
                                                        <TextBlock Text="{Binding CurrentMarginPercent, StringFormat='{}{0:N1}%'}"
                                                                   FontSize="11" FontWeight="Bold" Foreground="White"/>
                                                    </Border>
                                                </Grid>

                                                <TextBlock Grid.Row="1" Text="{Binding CategoryName}"
                                                           FontSize="11" Foreground="{StaticResource SecondaryText}"
                                                           Margin="0,4,0,0"/>

                                                <Grid Grid.Row="2" Margin="0,8,0,0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock FontSize="11" Foreground="{StaticResource SecondaryText}">
                                                            <Run Text="Suggested: KSh "/>
                                                            <Run Text="{Binding SuggestedPrice, StringFormat=N0}"
                                                                 Foreground="{StaticResource AccentGreen}"/>
                                                            <Run Text=" (+KSh "/>
                                                            <Run Text="{Binding PriceIncreaseNeeded, StringFormat=N0}"/>
                                                            <Run Text=")"/>
                                                        </TextBlock>
                                                    </StackPanel>
                                                    <Button Grid.Column="1" Content="View"
                                                            Command="{Binding DataContext.ViewAlertDetailsCommand,
                                                                     RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource SecondaryButtonStyle}"
                                                            Padding="8,4" FontSize="11"/>
                                                </Grid>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <!-- Declining Margins -->
                <Border Grid.Row="1" Style="{StaticResource CardStyle}" MaxHeight="200">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Margin="0,0,0,12">
                            <TextBlock Text="DECLINING MARGINS" FontSize="14" FontWeight="SemiBold"
                                       Foreground="{StaticResource AccentYellow}"/>
                            <TextBlock Text="Products with margin drop"
                                       FontSize="12" Foreground="{StaticResource SecondaryText}" Margin="0,4,0,0"/>
                        </StackPanel>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding DecliningMarginProducts}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource SecondaryBackground}"
                                                CornerRadius="6" Padding="10" Margin="0,0,0,6">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding ProductName}"
                                                               FontWeight="SemiBold" FontSize="12"
                                                               Foreground="{StaticResource PrimaryText}"
                                                               TextTrimming="CharacterEllipsis"/>
                                                    <TextBlock FontSize="11" Foreground="{StaticResource SecondaryText}" Margin="0,2,0,0">
                                                        <Run Text="Cost: KSh "/>
                                                        <Run Text="{Binding PreviousCostPrice, StringFormat=N0}"/>
                                                        <Run Text=" -> "/>
                                                        <Run Text="{Binding CurrentCostPrice, StringFormat=N0}"
                                                             Foreground="{StaticResource AccentRed}"/>
                                                    </TextBlock>
                                                </StackPanel>

                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding MarginChange, StringFormat='{}{0:+0.0;-0.0}%'}"
                                                               FontWeight="Bold" FontSize="14"
                                                               Foreground="{StaticResource AccentRed}"
                                                               HorizontalAlignment="Right"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="4" Background="#AA1E1E2E"
                Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="4"/>
                <TextBlock Text="{Binding StatusMessage, FallbackValue='Loading...'}"
                           Foreground="{StaticResource PrimaryText}"
                           FontSize="14" Margin="0,16,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
