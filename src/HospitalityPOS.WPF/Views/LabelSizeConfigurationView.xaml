<UserControl x:Class="HospitalityPOS.WPF.Views.LabelSizeConfigurationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="700"
             d:DesignWidth="1000"
             Background="#1E1E2E">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />

        <!-- Form TextBox Style -->
        <Style x:Key="FormTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3D3D5C"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Form ComboBox Style -->
        <Style x:Key="FormComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3D3D5C"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Form Label Style -->
        <Style x:Key="FormLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#9CA3AF"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <!-- Size Card Style -->
        <Style x:Key="SizeCard" TargetType="Border">
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- Action Button Style -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3D3D5C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,24">
                <TextBlock Text="Label Size Configuration"
                           FontSize="28" FontWeight="SemiBold" Foreground="White"/>
                <TextBlock Text="Manage label dimensions and DPI settings for your printers"
                           FontSize="14" Foreground="#8888AA" Margin="0,4,0,0"/>
            </StackPanel>

            <!-- Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="320"/>
                </Grid.ColumnDefinitions>

                <!-- Sizes List -->
                <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Margin="0,0,16,0">
                    <StackPanel>
                        <!-- Standard Sizes Section -->
                        <Border Background="#252538" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="Standard Sizes" FontSize="16" FontWeight="SemiBold"
                                           Foreground="White" Margin="0,0,0,16"/>
                                <TextBlock Text="Pre-configured sizes optimized for common label printers"
                                           Foreground="#6B7280" FontSize="12" Margin="0,0,0,16"/>

                                <ItemsControl ItemsSource="{Binding StandardSizes}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Style="{StaticResource SizeCard}">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel Grid.Column="0">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold"
                                                                       Foreground="White" FontSize="14"/>
                                                            <Border Background="#374151" CornerRadius="3"
                                                                    Padding="6,2" Margin="8,0,0,0">
                                                                <TextBlock Text="Built-in" FontSize="10"
                                                                           Foreground="#9CA3AF"/>
                                                            </Border>
                                                        </StackPanel>
                                                        <TextBlock Text="{Binding DimensionsDisplay}"
                                                                   Foreground="#6B7280" FontSize="12" Margin="0,4,0,0"/>
                                                        <TextBlock Text="{Binding Description}"
                                                                   Foreground="#555577" FontSize="11" Margin="0,2,0,0"/>
                                                    </StackPanel>

                                                    <TextBlock Grid.Column="1" VerticalAlignment="Center"
                                                               Foreground="#9CA3AF" FontSize="12" Margin="16,0">
                                                        <Run Text="{Binding ApproxDpi}"/>
                                                        <Run Text=" DPI"/>
                                                    </TextBlock>

                                                    <Border Grid.Column="2" Background="#1E3A5F" CornerRadius="4"
                                                            Padding="8,4" VerticalAlignment="Center" Margin="0,0,8,0">
                                                        <TextBlock Foreground="#3B82F6" FontSize="12">
                                                            <Run Text="{Binding TemplateCount}"/>
                                                            <Run Text=" templates"/>
                                                        </TextBlock>
                                                    </Border>

                                                    <Button Grid.Column="3" Content="&#xE8BA;"
                                                            Style="{StaticResource ActionButton}"
                                                            Foreground="#10B981" ToolTip="Use in calculator"
                                                            Command="{Binding DataContext.ApplyToCalculatorCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                            CommandParameter="{Binding}"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>

                        <!-- Custom Sizes Section -->
                        <Border Background="#252538" CornerRadius="8" Padding="16">
                            <StackPanel>
                                <Grid Margin="0,0,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel>
                                        <TextBlock Text="Custom Sizes" FontSize="16" FontWeight="SemiBold"
                                                   Foreground="White"/>
                                        <TextBlock Text="Your custom label sizes for specific requirements"
                                                   Foreground="#6B7280" FontSize="12" Margin="0,4,0,0"/>
                                    </StackPanel>

                                    <Button Grid.Column="1" Content="+ Add Custom Size"
                                            Command="{Binding ShowAddFormCommand}"
                                            Style="{StaticResource PrimaryButtonStyle}"
                                            Padding="16,10"/>
                                </Grid>

                                <ItemsControl ItemsSource="{Binding CustomSizes}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Style="{StaticResource SizeCard}">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold"
                                                                   Foreground="White" FontSize="14"/>
                                                        <TextBlock Text="{Binding DimensionsDisplay}"
                                                                   Foreground="#6B7280" FontSize="12" Margin="0,4,0,0"/>
                                                        <TextBlock Text="{Binding Description}"
                                                                   Foreground="#555577" FontSize="11" Margin="0,2,0,0"
                                                                   Visibility="{Binding Description, Converter={StaticResource NullToCollapsedConverter}, FallbackValue=Collapsed}"/>
                                                    </StackPanel>

                                                    <TextBlock Grid.Column="1" VerticalAlignment="Center"
                                                               Foreground="#9CA3AF" FontSize="12" Margin="16,0">
                                                        <Run Text="{Binding ApproxDpi}"/>
                                                        <Run Text=" DPI"/>
                                                    </TextBlock>

                                                    <Border Grid.Column="2" Background="#1E3A5F" CornerRadius="4"
                                                            Padding="8,4" VerticalAlignment="Center" Margin="0,0,8,0">
                                                        <TextBlock Foreground="#3B82F6" FontSize="12">
                                                            <Run Text="{Binding TemplateCount}"/>
                                                            <Run Text=" templates"/>
                                                        </TextBlock>
                                                    </Border>

                                                    <StackPanel Grid.Column="3" Orientation="Horizontal">
                                                        <Button Content="&#xE8BA;" Style="{StaticResource ActionButton}"
                                                                Foreground="#10B981" ToolTip="Use in calculator"
                                                                Command="{Binding DataContext.ApplyToCalculatorCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                                CommandParameter="{Binding}"/>
                                                        <Button Content="&#xE70F;" Style="{StaticResource ActionButton}"
                                                                Foreground="#3B82F6" ToolTip="Edit"
                                                                Command="{Binding DataContext.ShowEditFormCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                                CommandParameter="{Binding}"/>
                                                        <Button Content="&#xE74D;" Style="{StaticResource ActionButton}"
                                                                Foreground="#EF4444" ToolTip="Delete"
                                                                Command="{Binding DataContext.DeleteSizeCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                                CommandParameter="{Binding}"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Empty State -->
                                <Border Background="#2D2D44" CornerRadius="8" Padding="24"
                                        Visibility="{Binding CustomSizes.Count, Converter={StaticResource ZeroToVisibilityConverter}, FallbackValue=Collapsed}">
                                    <TextBlock Text="No custom sizes yet. Click 'Add Custom Size' to create one."
                                               Foreground="#6B7280" FontStyle="Italic"
                                               HorizontalAlignment="Center"/>
                                </Border>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <!-- Right Panel - Calculator & Form -->
                <StackPanel Grid.Column="1">
                    <!-- Size Calculator -->
                    <Border Background="#252538" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="Size Calculator" FontSize="16" FontWeight="SemiBold"
                                       Foreground="White" Margin="0,0,0,16"/>

                            <!-- Width -->
                            <TextBlock Text="Width" Style="{StaticResource FormLabel}"/>
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Text="{Binding CalcWidthMm, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource FormTextBox}"/>
                                <TextBlock Grid.Column="1" Text="mm" Foreground="#6B7280"
                                           VerticalAlignment="Center" Margin="8,0"/>
                                <TextBlock Grid.Column="2" Text="{Binding CalcWidthInches, StringFormat=N2}"
                                           Foreground="#9CA3AF" VerticalAlignment="Center"
                                           HorizontalAlignment="Right"/>
                                <TextBlock Grid.Column="3" Text="in" Foreground="#6B7280"
                                           VerticalAlignment="Center" Margin="4,0,0,0"/>
                            </Grid>

                            <!-- Height -->
                            <TextBlock Text="Height" Style="{StaticResource FormLabel}"/>
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Text="{Binding CalcHeightMm, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource FormTextBox}"/>
                                <TextBlock Grid.Column="1" Text="mm" Foreground="#6B7280"
                                           VerticalAlignment="Center" Margin="8,0"/>
                                <TextBlock Grid.Column="2" Text="{Binding CalcHeightInches, StringFormat=N2}"
                                           Foreground="#9CA3AF" VerticalAlignment="Center"
                                           HorizontalAlignment="Right"/>
                                <TextBlock Grid.Column="3" Text="in" Foreground="#6B7280"
                                           VerticalAlignment="Center" Margin="4,0,0,0"/>
                            </Grid>

                            <!-- DPI -->
                            <TextBlock Text="DPI" Style="{StaticResource FormLabel}"/>
                            <ComboBox ItemsSource="{Binding DpiPresets}"
                                      SelectedItem="{Binding CalcDpi}"
                                      Style="{StaticResource FormComboBox}" Margin="0,0,0,16"/>

                            <!-- Results -->
                            <Border Background="#16162B" CornerRadius="8" Padding="16">
                                <StackPanel>
                                    <TextBlock Text="Resolution" Foreground="#6B7280" FontSize="12"/>
                                    <TextBlock Foreground="White" FontSize="16" FontWeight="SemiBold" Margin="0,4,0,0">
                                        <Run Text="{Binding CalcWidthDots}"/>
                                        <Run Text=" x "/>
                                        <Run Text="{Binding CalcHeightDots}"/>
                                        <Run Text=" dots"/>
                                    </TextBlock>

                                    <Border Background="#3D3D5C" Height="1" Margin="0,12"/>

                                    <TextBlock Text="Print Area" Foreground="#6B7280" FontSize="12"/>
                                    <TextBlock Foreground="#10B981" FontSize="20" FontWeight="Bold" Margin="0,4,0,0">
                                        <Run Text="{Binding CalcTotalDots, StringFormat=N0}"/>
                                        <Run Text=" total dots" FontSize="14" FontWeight="Normal"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Add/Edit Form -->
                    <Border Background="#252538" CornerRadius="8" Padding="16"
                            Visibility="{Binding IsFormVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel>
                            <TextBlock FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,16">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="Add Custom Size"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsEditMode}" Value="True">
                                                <Setter Property="Text" Value="Edit Size"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <TextBlock Text="Name" Style="{StaticResource FormLabel}"/>
                            <TextBox Text="{Binding FormName, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource FormTextBox}" Margin="0,0,0,12"/>

                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel>
                                    <TextBlock Text="Width (mm)" Style="{StaticResource FormLabel}"/>
                                    <TextBox Text="{Binding FormWidthMm, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource FormTextBox}"/>
                                    <TextBlock Foreground="#6B7280" FontSize="11" Margin="0,4,0,0">
                                        <Run Text="= "/>
                                        <Run Text="{Binding FormWidthInches, StringFormat=N2}"/>
                                        <Run Text=" inches"/>
                                    </TextBlock>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Height (mm)" Style="{StaticResource FormLabel}"/>
                                    <TextBox Text="{Binding FormHeightMm, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource FormTextBox}"/>
                                    <TextBlock Foreground="#6B7280" FontSize="11" Margin="0,4,0,0">
                                        <Run Text="= "/>
                                        <Run Text="{Binding FormHeightInches, StringFormat=N2}"/>
                                        <Run Text=" inches"/>
                                    </TextBlock>
                                </StackPanel>
                            </Grid>

                            <TextBlock Text="DPI" Style="{StaticResource FormLabel}"/>
                            <ComboBox ItemsSource="{Binding DpiPresets}"
                                      SelectedItem="{Binding FormDpi}"
                                      Style="{StaticResource FormComboBox}" Margin="0,0,0,12"/>

                            <TextBlock Text="Description (optional)" Style="{StaticResource FormLabel}"/>
                            <TextBox Text="{Binding FormDescription, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource FormTextBox}" Margin="0,0,0,16"
                                     TextWrapping="Wrap" AcceptsReturn="True" Height="60"/>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="Cancel"
                                        Command="{Binding CancelFormCommand}"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Padding="16,8" Margin="0,0,8,0"/>
                                <Button Content="Save"
                                        Command="{Binding SaveSizeCommand}"
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        Padding="16,8"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- Status Bar -->
            <Border Grid.Row="2" Background="#16162B" CornerRadius="8" Padding="16,10" Margin="0,16,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal"
                                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                        <ProgressBar IsIndeterminate="True" Width="100" Height="4" Margin="0,0,12,0"/>
                    </StackPanel>

                    <TextBlock Grid.Column="1" Text="{Binding StatusMessage}"
                               Foreground="#8888AA" VerticalAlignment="Center"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Loading Overlay -->
        <Border Background="#80000000"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="4" Foreground="#F59E0B"/>
                <TextBlock Text="{Binding StatusMessage}" Foreground="White" FontSize="14"
                           HorizontalAlignment="Center" Margin="0,16,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
