<Window x:Class="HospitalityPOS.WPF.Views.CombinedZReportView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:HospitalityPOS.WPF.ViewModels"
        xmlns:converters="clr-namespace:HospitalityPOS.WPF.Converters"
        xmlns:local="clr-namespace:HospitalityPOS.WPF.Views"
        mc:Ignorable="d"
        Title="Combined Z-Report Preview - All Terminals"
        Width="1000"
        Height="800"
        WindowStartupLocation="CenterOwner"
        Background="#0F0F1A">

    <Window.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
        <converters:PositiveToVisibilityConverter x:Key="PositiveToVisibilityConverter" />
        <local:BoolToColorConverter x:Key="BoolToColorConverter" />
        <local:BoolToReadyTextConverter x:Key="BoolToReadyTextConverter" />
        <local:BoolToOpacityConverter x:Key="BoolToOpacityConverter" />

        <!-- Styles -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#4CAF50" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,16,0,8" />
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#8888AA" />
            <Setter Property="FontSize" Value="13" />
        </Style>

        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="FontFamily" Value="Consolas" />
            <Setter Property="HorizontalAlignment" Value="Right" />
        </Style>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#1A1A2E" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="16" />
            <Setter Property="Margin" Value="0,0,0,12" />
        </Style>

        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#252538" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="16,12" />
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="36" />
            <Setter Property="Padding" Value="16,0" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#1A1A2E" Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="COMBINED Z-REPORT PREVIEW"
                               Foreground="#FFD700"
                               FontSize="22"
                               FontWeight="Bold" />
                    <TextBlock Foreground="#8888AA" FontSize="12" Margin="0,4,0,0">
                        <Run Text="All Terminals - " />
                        <Run Text="{Binding CompletedZReportCount}" />
                        <Run Text=" of " />
                        <Run Text="{Binding TerminalCount}" />
                        <Run Text=" completed" />
                    </TextBlock>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Refresh"
                            Style="{StaticResource ActionButtonStyle}"
                            Background="#3D3D5C"
                            Foreground="White"
                            Command="{Binding RefreshCommand}"
                            Margin="0,0,8,0" />
                    <Button Content="Print"
                            Style="{StaticResource ActionButtonStyle}"
                            Background="#3D3D5C"
                            Foreground="White"
                            Command="{Binding PrintReportCommand}"
                            Margin="0,0,8,0" />
                    <Button Content="Export"
                            Style="{StaticResource ActionButtonStyle}"
                            Background="#4CAF50"
                            Foreground="White"
                            Command="{Binding ExportReportCommand}" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="24,16">
            <StackPanel>
                <!-- Status Overview -->
                <UniformGrid Columns="4" Margin="0,0,0,16">
                    <Border Style="{StaticResource StatCardStyle}" Margin="0,0,8,0">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="{Binding TerminalCount}" Foreground="White" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" />
                            <TextBlock Text="Terminals" Foreground="#8888AA" FontSize="11" HorizontalAlignment="Center" />
                        </StackPanel>
                    </Border>
                    <Border Style="{StaticResource StatCardStyle}" Margin="0,0,8,0">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="{Binding CompletedZReportCount}" Foreground="#4CAF50" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" />
                            <TextBlock Text="Completed" Foreground="#8888AA" FontSize="11" HorizontalAlignment="Center" />
                        </StackPanel>
                    </Border>
                    <Border Style="{StaticResource StatCardStyle}" Margin="0,0,8,0">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="{Binding PendingZReportCount}" Foreground="#FFB347" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" />
                            <TextBlock Text="Pending" Foreground="#8888AA" FontSize="11" HorizontalAlignment="Center" />
                        </StackPanel>
                    </Border>
                    <Border Style="{StaticResource StatCardStyle}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="{Binding TotalTransactionCount}" Foreground="White" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" />
                            <TextBlock Text="Transactions" Foreground="#8888AA" FontSize="11" HorizontalAlignment="Center" />
                        </StackPanel>
                    </Border>
                </UniformGrid>

                <!-- Validation Warnings -->
                <Border Background="#332211" CornerRadius="8" Padding="16" Margin="0,0,0,16"
                        Visibility="{Binding TotalUnsettledReceipts, Converter={StaticResource PositiveToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="Warnings" Foreground="#FFB347" FontSize="14" FontWeight="SemiBold" />
                        <TextBlock Foreground="#FFB347" FontSize="12" Margin="0,4,0,0">
                            <Run Text="Unsettled Receipts: " />
                            <Run Text="{Binding TotalUnsettledReceipts}" FontWeight="Bold" />
                        </TextBlock>
                        <TextBlock Foreground="#FFB347" FontSize="12" Margin="0,2,0,0"
                                   Visibility="{Binding TotalOpenOrders, Converter={StaticResource PositiveToVisibilityConverter}}">
                            <Run Text="Open Orders: " />
                            <Run Text="{Binding TotalOpenOrders}" FontWeight="Bold" />
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Validation Issues -->
                <Border Background="#331111" CornerRadius="8" Padding="16" Margin="0,0,0,16"
                        Visibility="{Binding ValidationIssues.Count, Converter={StaticResource PositiveToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="Terminal Issues" Foreground="#FF6B6B" FontSize="14" FontWeight="SemiBold" />
                        <ItemsControl ItemsSource="{Binding ValidationIssues}" Margin="0,8,0,0">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="0,2">
                                        <TextBlock Foreground="#FF6B6B" FontSize="12">
                                            <Run Text="{Binding TerminalCode}" FontWeight="SemiBold" />
                                            <Run Text=": " />
                                            <Run Text="{Binding Issues}" />
                                        </TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="16" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Left Column - Terminal Breakdown -->
                    <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="TERMINAL Z-REPORT STATUS" Style="{StaticResource SectionHeaderStyle}" Margin="0,0,0,12" />
                            <ItemsControl ItemsSource="{Binding TerminalBreakdown}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#252538" CornerRadius="6" Margin="0,0,0,8" Padding="12">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>

                                                <!-- Terminal Header -->
                                                <Grid Grid.Row="0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>
                                                    <Border Grid.Column="0" Background="{Binding StatusColor}" CornerRadius="3" Padding="6,2" Margin="0,0,8,0" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding StatusText}" Foreground="White" FontSize="10" FontWeight="SemiBold" />
                                                    </Border>
                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Text="{Binding TerminalCode}" Foreground="White" FontWeight="SemiBold" FontSize="13" />
                                                        <TextBlock Text="{Binding TerminalName}" Foreground="#8888AA" FontSize="11" />
                                                    </StackPanel>
                                                    <Button Grid.Column="2"
                                                            Content="View"
                                                            Background="#3D3D5C"
                                                            Foreground="White"
                                                            Padding="12,4"
                                                            FontSize="11"
                                                            BorderThickness="0"
                                                            Cursor="Hand"
                                                            IsEnabled="{Binding HasZReport}"
                                                            Opacity="{Binding HasZReport, Converter={StaticResource BoolToOpacityConverter}}"
                                                            Command="{Binding DataContext.ViewTerminalZReportCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                            CommandParameter="{Binding}">
                                                        <Button.Template>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}" Opacity="{TemplateBinding Opacity}">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Button.Template>
                                                    </Button>
                                                </Grid>

                                                <!-- Terminal Stats -->
                                                <Grid Grid.Row="1" Margin="0,8,0,0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                    </Grid.RowDefinitions>
                                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Transactions:" Foreground="#8888AA" FontSize="11" />
                                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding TransactionCount}" Foreground="White" FontSize="11" HorizontalAlignment="Right" />
                                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Grand Total:" Foreground="#8888AA" FontSize="11" />
                                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding GrandTotal, StringFormat='KSh {0:N2}'}" Foreground="#4CAF50" FontFamily="Consolas" FontSize="11" HorizontalAlignment="Right" />
                                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Expected Cash:" Foreground="#8888AA" FontSize="11" />
                                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding ExpectedCash, StringFormat='KSh {0:N2}'}" Foreground="White" FontFamily="Consolas" FontSize="11" HorizontalAlignment="Right" />
                                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Variance:" Foreground="#8888AA" FontSize="11" />
                                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding VarianceDisplay}" Foreground="{Binding VarianceColor}" FontFamily="Consolas" FontSize="11" HorizontalAlignment="Right" />
                                                </Grid>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- Right Column - Combined Totals -->
                    <StackPanel Grid.Column="2">
                        <!-- Combined Sales -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="COMBINED TOTALS" Style="{StaticResource SectionHeaderStyle}" Margin="0,0,0,12" />
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="8" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Gross Sales:" Style="{StaticResource LabelStyle}" />
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding TotalGrossSales, StringFormat='KSh {0:N2}'}" Style="{StaticResource ValueStyle}" />
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Net Sales:" Style="{StaticResource LabelStyle}" />
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding TotalNetSales, StringFormat='KSh {0:N2}'}" Style="{StaticResource ValueStyle}" />
                                    <Border Grid.Row="2" Grid.ColumnSpan="2" Background="#4A4A6A" Height="1" />
                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="GRAND TOTAL:" Foreground="White" FontSize="15" FontWeight="Bold" />
                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding TotalGrandTotal, StringFormat='KSh {0:N2}'}" Foreground="#4CAF50" FontFamily="Consolas" FontSize="15" FontWeight="Bold" HorizontalAlignment="Right" />
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Combined Cash Drawer -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="COMBINED CASH DRAWER" Style="{StaticResource SectionHeaderStyle}" Margin="0,0,0,12" />
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="8" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Expected Cash:" Style="{StaticResource LabelStyle}" />
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding TotalExpectedCash, StringFormat='KSh {0:N2}'}" Style="{StaticResource ValueStyle}" />
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Actual Cash:" Style="{StaticResource LabelStyle}" />
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding TotalActualCash, StringFormat='KSh {0:N2}'}" Style="{StaticResource ValueStyle}" />
                                    <Border Grid.Row="2" Grid.ColumnSpan="2" Background="#4A4A6A" Height="1" />
                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="TOTAL VARIANCE:" Foreground="White" FontWeight="Bold" />
                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding TotalVariance, StringFormat='KSh {0:N2}'}" Foreground="#FFD700" FontFamily="Consolas" FontSize="15" FontWeight="Bold" HorizontalAlignment="Right" />
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Work Period Info -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="WORK PERIOD" Style="{StaticResource SectionHeaderStyle}" Margin="0,0,0,12" />
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Started:" Style="{StaticResource LabelStyle}" />
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding WorkPeriodStart, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}" Style="{StaticResource ValueStyle}" />
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Duration:" Style="{StaticResource LabelStyle}" />
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding WorkPeriodDuration}" Style="{StaticResource ValueStyle}" />
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#1A1A2E" Padding="24,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Status Indicator -->
                <Border Grid.Column="0"
                        Background="{Binding AllTerminalsReady, Converter={StaticResource BoolToColorConverter}}"
                        CornerRadius="4"
                        Padding="12,6"
                        Margin="0,0,16,0">
                    <TextBlock Text="{Binding AllTerminalsReady, Converter={StaticResource BoolToReadyTextConverter}}"
                               Foreground="White"
                               FontWeight="SemiBold"
                               FontSize="12" />
                </Border>

                <TextBlock Grid.Column="1" VerticalAlignment="Center" Foreground="#8888AA" FontSize="11">
                    <Run Text="This is a preview. Individual terminals must generate their own Z-Reports." />
                </TextBlock>

                <Button Grid.Column="2"
                        Content="Close"
                        Style="{StaticResource ActionButtonStyle}"
                        Background="#4CAF50"
                        Foreground="White"
                        Width="100"
                        Click="CloseButton_Click" />
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="3"
                Background="#80000000"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Loading Preview..."
                           Foreground="White"
                           FontSize="16"
                           HorizontalAlignment="Center" />
            </StackPanel>
        </Border>

        <!-- Error Message -->
        <Border Grid.RowSpan="3"
                Background="#80000000"
                Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}">
            <Border Background="#1A1A2E"
                    CornerRadius="8"
                    Padding="24"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    MaxWidth="400">
                <StackPanel>
                    <TextBlock Text="{Binding ErrorMessage}"
                               Foreground="#FF6B6B"
                               FontSize="14"
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center" />
                    <Button Content="Retry"
                            Style="{StaticResource ActionButtonStyle}"
                            Background="#4CAF50"
                            Foreground="White"
                            Command="{Binding RefreshCommand}"
                            HorizontalAlignment="Center"
                            Margin="0,16,0,0" />
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</Window>
