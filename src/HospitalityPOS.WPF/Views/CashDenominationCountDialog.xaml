<Window x:Class="HospitalityPOS.WPF.Views.CashDenominationCountDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:vm="clr-namespace:HospitalityPOS.WPF.ViewModels"
        xmlns:converters="clr-namespace:HospitalityPOS.WPF.Converters"
        mc:Ignorable="d"
        Title="{Binding Title}"
        Height="700" Width="550"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter" />
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVisConverter" />

        <Style x:Key="DenominationRowStyle" TargetType="Border">
            <Setter Property="Background" Value="#2D2D44" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="Margin" Value="0,2" />
            <Setter Property="CornerRadius" Value="4" />
        </Style>

        <Style x:Key="QuantityInputStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#3D3D5C" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#4A4A6A" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="8,6" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="Width" Value="70" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="#8888AA" />
            <Setter Property="Margin" Value="0,12,0,6" />
        </Style>

        <Style x:Key="TotalRowStyle" TargetType="Border">
            <Setter Property="Background" Value="#363654" />
            <Setter Property="Padding" Value="12,10" />
            <Setter Property="CornerRadius" Value="4" />
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="24,12" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3D3D5C" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="16,10" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
    </Window.Resources>

    <Border Background="#1E1E2E" CornerRadius="12" BorderBrush="#3D3D5C" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#16162B" CornerRadius="12,12,0,0" Padding="20,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="{Binding Title}"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="White" />
                        <TextBlock Text="Enter the quantity for each denomination"
                                   FontSize="12"
                                   Foreground="#8888AA"
                                   Margin="0,4,0,0" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top">
                        <Button Content="Apply Recommended"
                                Command="{Binding ApplyRecommendedFloatCommand}"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Visibility="{Binding IsClosingCount, Converter={StaticResource InverseBoolToVisConverter}}"
                                Margin="0,0,8,0" />
                        <Button Content="Clear All"
                                Command="{Binding ClearAllCommand}"
                                Style="{StaticResource SecondaryButtonStyle}" />
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Denomination Entries -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20,0">
                <StackPanel>
                    <!-- Notes Section -->
                    <TextBlock Text="NOTES" Style="{StaticResource SectionHeaderStyle}" />

                    <ItemsControl ItemsSource="{Binding DenominationEntries}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource DenominationRowStyle}"
                                        Visibility="{Binding Type, Converter={StaticResource BoolToVisConverter}, ConverterParameter=Note}">
                                    <Border.Style>
                                        <Style TargetType="Border" BasedOn="{StaticResource DenominationRowStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Type}" Value="Coin">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="100" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding DisplayName}"
                                                   Foreground="White"
                                                   FontSize="14"
                                                   VerticalAlignment="Center" />

                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding RecommendedQuantity, StringFormat='Rec: {0}'}"
                                                   Foreground="#666688"
                                                   FontSize="11"
                                                   VerticalAlignment="Center"
                                                   Visibility="{Binding RecommendedQuantity, Converter={StaticResource BoolToVisConverter}}" />

                                        <TextBox Grid.Column="2"
                                                 Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}"
                                                 Style="{StaticResource QuantityInputStyle}" />

                                        <TextBlock Grid.Column="3"
                                                   Text="{Binding LineTotal, StringFormat='= {0:N2}'}"
                                                   Foreground="#4CAF50"
                                                   FontSize="14"
                                                   FontWeight="SemiBold"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Right" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Notes Subtotal -->
                    <Border Style="{StaticResource TotalRowStyle}" Margin="0,4,0,0">
                        <Grid>
                            <TextBlock Text="Notes Subtotal"
                                       Foreground="#AAAACC"
                                       FontSize="13"
                                       VerticalAlignment="Center" />
                            <TextBlock Text="{Binding TotalNotes, StringFormat='KES {0:N2}'}"
                                       Foreground="White"
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center" />
                        </Grid>
                    </Border>

                    <!-- Coins Section -->
                    <TextBlock Text="COINS" Style="{StaticResource SectionHeaderStyle}" />

                    <ItemsControl ItemsSource="{Binding DenominationEntries}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource DenominationRowStyle}">
                                    <Border.Style>
                                        <Style TargetType="Border" BasedOn="{StaticResource DenominationRowStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Type}" Value="Note">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="100" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding DisplayName}"
                                                   Foreground="White"
                                                   FontSize="14"
                                                   VerticalAlignment="Center" />

                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding RecommendedQuantity, StringFormat='Rec: {0}'}"
                                                   Foreground="#666688"
                                                   FontSize="11"
                                                   VerticalAlignment="Center"
                                                   Visibility="{Binding RecommendedQuantity, Converter={StaticResource BoolToVisConverter}}" />

                                        <TextBox Grid.Column="2"
                                                 Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}"
                                                 Style="{StaticResource QuantityInputStyle}" />

                                        <TextBlock Grid.Column="3"
                                                   Text="{Binding LineTotal, StringFormat='= {0:N2}'}"
                                                   Foreground="#4CAF50"
                                                   FontSize="14"
                                                   FontWeight="SemiBold"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Right" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Coins Subtotal -->
                    <Border Style="{StaticResource TotalRowStyle}" Margin="0,4,0,0">
                        <Grid>
                            <TextBlock Text="Coins Subtotal"
                                       Foreground="#AAAACC"
                                       FontSize="13"
                                       VerticalAlignment="Center" />
                            <TextBlock Text="{Binding TotalCoins, StringFormat='KES {0:N2}'}"
                                       Foreground="White"
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center" />
                        </Grid>
                    </Border>

                    <!-- Notes Input -->
                    <TextBlock Text="NOTES (OPTIONAL)" Style="{StaticResource SectionHeaderStyle}" />
                    <TextBox Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}"
                             Background="#2D2D44"
                             Foreground="White"
                             BorderBrush="#4A4A6A"
                             Padding="12"
                             Height="60"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto" />
                </StackPanel>
            </ScrollViewer>

            <!-- Totals and Variance Section -->
            <Border Grid.Row="2" Background="#16162B" Padding="20,16">
                <StackPanel>
                    <!-- Grand Total -->
                    <Border Background="#1B3D1B" CornerRadius="6" Padding="16,12" Margin="0,0,0,12">
                        <Grid>
                            <TextBlock Text="GRAND TOTAL"
                                       Foreground="#4CAF50"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center" />
                            <TextBlock Text="{Binding GrandTotal, StringFormat='KES {0:N2}'}"
                                       Foreground="#4CAF50"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center" />
                        </Grid>
                    </Border>

                    <!-- Variance Section (Closing Only) -->
                    <StackPanel Visibility="{Binding IsClosingCount, Converter={StaticResource BoolToVisConverter}}">
                        <Grid Margin="0,0,0,8">
                            <TextBlock Text="Expected Cash:"
                                       Foreground="#8888AA"
                                       FontSize="13"
                                       VerticalAlignment="Center" />
                            <TextBlock Text="{Binding ExpectedCash, StringFormat='KES {0:N2}'}"
                                       Foreground="White"
                                       FontSize="14"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center" />
                        </Grid>

                        <Border CornerRadius="6" Padding="12,10" Margin="0,0,0,12">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="#1B3D1B" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Variance, Converter={StaticResource BoolToVisConverter}}" Value="True">
                                            <Setter Property="Background" Value="#3D3D1B" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Grid>
                                <TextBlock Text="VARIANCE"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#4CAF50" />
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBlock Text="{Binding VarianceDisplay}"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#4CAF50" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RequiresExplanation}" Value="True">
                                                    <Setter Property="Foreground" Value="#FFA500" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Border>

                        <!-- Variance Explanation -->
                        <StackPanel Visibility="{Binding RequiresExplanation, Converter={StaticResource BoolToVisConverter}}">
                            <TextBlock Text="VARIANCE EXPLANATION (REQUIRED)"
                                       FontSize="11"
                                       FontWeight="SemiBold"
                                       Foreground="#FFA500"
                                       Margin="0,0,0,4" />
                            <TextBox Text="{Binding VarianceExplanation, UpdateSourceTrigger=PropertyChanged}"
                                     Background="#2D2D44"
                                     Foreground="White"
                                     BorderBrush="#FFA500"
                                     Padding="12"
                                     Height="50"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap" />
                        </StackPanel>
                    </StackPanel>

                    <!-- Error Message -->
                    <Border Background="#3D1A1A"
                            CornerRadius="4"
                            Padding="12,8"
                            Margin="0,8,0,0"
                            Visibility="{Binding ErrorMessage, Converter={StaticResource BoolToVisConverter}}">
                        <TextBlock Text="{Binding ErrorMessage}"
                                   Foreground="#FF6B6B"
                                   FontSize="12"
                                   TextWrapping="Wrap" />
                    </Border>
                </StackPanel>
            </Border>

            <!-- Action Buttons -->
            <Border Grid.Row="3" Background="#16162B" CornerRadius="0,0,12,12" Padding="20,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="1"
                            Content="Cancel"
                            Command="{Binding CancelCommand}"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Margin="0,0,12,0" />

                    <Button Grid.Column="2"
                            Content="Confirm Count"
                            Command="{Binding ConfirmCommand}"
                            Style="{StaticResource ActionButtonStyle}" />
                </Grid>
            </Border>

            <!-- Loading Overlay -->
            <Border Grid.RowSpan="4"
                    Background="#80000000"
                    CornerRadius="12"
                    Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisConverter}}">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <ProgressBar IsIndeterminate="True"
                                 Width="200"
                                 Height="4"
                                 Foreground="#4CAF50" />
                    <TextBlock Text="{Binding BusyMessage}"
                               Foreground="White"
                               FontSize="14"
                               Margin="0,12,0,0"
                               HorizontalAlignment="Center" />
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
