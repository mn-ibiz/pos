<UserControl x:Class="HospitalityPOS.WPF.Views.JournalEntriesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:HospitalityPOS.WPF.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:JournalEntriesViewModel}"
             d:DesignHeight="700" d:DesignWidth="1200">

    <Grid Background="#1E1E2E">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#16162B" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Journal Entries" FontSize="28" FontWeight="Bold" Foreground="White"/>
                    <TextBlock FontSize="14" Foreground="#8888AA" Margin="0,5,0,0">
                        <Run Text="Current Period: "/>
                        <Run Text="{Binding CurrentPeriod.Name, FallbackValue='No open period'}"/>
                    </TextBlock>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="Create Period" Command="{Binding CreatePeriodCommand}"
                            Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,10,0"/>
                    <Button Content="Close Period" Command="{Binding ClosePeriodCommand}"
                            Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,10,0"/>
                    <Button Content="+ New Entry" Command="{Binding NewEntryCommand}"
                            Style="{StaticResource PrimaryButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Filter Bar -->
        <Border Grid.Row="1" Background="#2D2D44" Padding="15" BorderBrush="#3D3D5C" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="From:" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="White"/>
                <DatePicker Grid.Column="1" SelectedDate="{Binding StartDate}" Margin="0,0,15,0"/>

                <TextBlock Grid.Column="2" Text="To:" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="White"/>
                <DatePicker Grid.Column="3" SelectedDate="{Binding EndDate}" Margin="0,0,15,0"/>

                <Button Grid.Column="4" Content="Load Entries" Command="{Binding LoadEntriesCommand}"
                        Style="{StaticResource PrimaryButtonStyle}"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2" Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverse}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>

            <!-- Entries List -->
            <Border Grid.Column="0" Margin="15" Background="#2D2D44" CornerRadius="8" BorderBrush="#3D3D5C" BorderThickness="1">
                <DataGrid ItemsSource="{Binding JournalEntries}"
                          SelectedItem="{Binding SelectedEntry}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          BorderThickness="0"
                          RowHeight="45"
                          Background="#2D2D44"
                          Foreground="White"
                          RowBackground="#2D2D44"
                          AlternatingRowBackground="#252538"
                          HorizontalGridLinesBrush="#3D3D5C">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Entry #" Binding="{Binding EntryNumber}" Width="100"/>
                        <DataGridTextColumn Header="Date" Binding="{Binding EntryDate, StringFormat=d}" Width="100"/>
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                        <DataGridTextColumn Header="Reference" Binding="{Binding Reference}" Width="120"/>
                        <DataGridTemplateColumn Header="Status" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Padding="5,2" CornerRadius="3"
                                            Background="{Binding IsPosted, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#22C55E|#F59E0B'}">
                                        <TextBlock Text="{Binding IsPosted, Converter={StaticResource BoolToTextConverter}, ConverterParameter='Posted|Draft'}"
                                                   Foreground="White" FontSize="11"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- Entry Details Panel -->
            <Border Grid.Column="1" Margin="0,15,15,15" Background="#2D2D44" CornerRadius="8" BorderBrush="#3D3D5C" BorderThickness="1">
                <Grid>
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  Visibility="{Binding SelectedEntry, Converter={StaticResource NullToVisibilityConverter}}">
                        <StackPanel Margin="20">
                            <TextBlock Text="Entry Details" FontSize="18" FontWeight="SemiBold" Foreground="#6366F1" Margin="0,0,0,20"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel>
                                    <TextBlock Text="Entry Number" FontSize="12" Foreground="#8888AA"/>
                                    <TextBlock Text="{Binding SelectedEntry.EntryNumber}" FontSize="14" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,10"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Date" FontSize="12" Foreground="#8888AA"/>
                                    <TextBlock Text="{Binding SelectedEntry.EntryDate, StringFormat=d}" FontSize="14" Foreground="White" Margin="0,0,0,10"/>
                                </StackPanel>
                            </Grid>

                            <TextBlock Text="Description" FontSize="12" Foreground="#8888AA"/>
                            <TextBlock Text="{Binding SelectedEntry.Description}" FontSize="14" TextWrapping="Wrap" Foreground="White" Margin="0,0,0,10"/>

                            <TextBlock Text="Reference" FontSize="12" Foreground="#8888AA"/>
                            <TextBlock Text="{Binding SelectedEntry.Reference, TargetNullValue='-'}" FontSize="14" Foreground="White" Margin="0,0,0,15"/>

                            <TextBlock Text="Journal Lines" FontSize="14" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,10"/>

                            <DataGrid ItemsSource="{Binding EntryLines}"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      HeadersVisibility="Column"
                                      BorderThickness="1"
                                      BorderBrush="#3D3D5C"
                                      RowHeight="35"
                                      MaxHeight="250"
                                      Background="#252538"
                                      Foreground="White"
                                      RowBackground="#252538"
                                      AlternatingRowBackground="#2D2D44"
                                      HorizontalGridLinesBrush="#3D3D5C">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Account" Binding="{Binding Account.AccountName}" Width="*"/>
                                    <DataGridTextColumn Header="Debit" Binding="{Binding DebitAmount, StringFormat=N2}" Width="80"/>
                                    <DataGridTextColumn Header="Credit" Binding="{Binding CreditAmount, StringFormat=N2}" Width="80"/>
                                </DataGrid.Columns>
                            </DataGrid>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                                <Button Content="Post" Command="{Binding PostEntryCommand}"
                                        Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,10,0"
                                        IsEnabled="{Binding SelectedEntry.IsPosted, Converter={StaticResource InverseBoolConverter}}"/>
                                <Button Content="Reverse" Command="{Binding ReverseEntryCommand}"
                                        Style="{StaticResource DangerButtonStyle}"
                                        IsEnabled="{Binding SelectedEntry.IsPosted}"/>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

                    <TextBlock Text="Select an entry to view details"
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               Foreground="#555577" FontSize="14"
                               Visibility="{Binding SelectedEntry, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}"/>
                </Grid>
            </Border>
        </Grid>

        <!-- New Entry Form -->
        <Border Grid.Row="2" Margin="15" Background="#2D2D44" CornerRadius="8" BorderBrush="#3D3D5C" BorderThickness="1"
                Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="New Journal Entry" FontSize="20" FontWeight="SemiBold" Foreground="#6366F1" Margin="0,0,0,20"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Margin="0,0,15,0">
                            <TextBlock Text="Entry Number" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding EditEntryNumber}" Padding="10" IsReadOnly="True"
                                    Background="#252538" Foreground="#8888AA" BorderBrush="#3D3D5C"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="0,0,15,0">
                            <TextBlock Text="Entry Date" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,5"/>
                            <DatePicker SelectedDate="{Binding EditEntryDate}" Padding="5"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Margin="0,0,15,0">
                            <TextBlock Text="Description" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding EditDescription, UpdateSourceTrigger=PropertyChanged}"
                                    Padding="10" Background="#1E1E2E" Foreground="White" BorderBrush="#3D3D5C"/>
                        </StackPanel>

                        <StackPanel Grid.Column="3">
                            <TextBlock Text="Reference" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding EditReference, UpdateSourceTrigger=PropertyChanged}"
                                    Padding="10" Background="#1E1E2E" Foreground="White" BorderBrush="#3D3D5C"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="Journal Lines" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,20,0,10"/>

                    <ItemsControl ItemsSource="{Binding EditLines}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="40"/>
                                    </Grid.ColumnDefinitions>

                                    <ComboBox ItemsSource="{Binding DataContext.Accounts, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                              SelectedValue="{Binding AccountId}"
                                              SelectedValuePath="Id"
                                              DisplayMemberPath="AccountName"
                                              Padding="10" Margin="0,0,10,0"
                                              Background="#1E1E2E" Foreground="White"/>

                                    <TextBox Grid.Column="1" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                                             Padding="10" Margin="0,0,10,0"
                                             Background="#1E1E2E" Foreground="White" BorderBrush="#3D3D5C"/>

                                    <TextBox Grid.Column="2" Text="{Binding Amount, UpdateSourceTrigger=PropertyChanged}"
                                             Padding="10" Margin="0,0,10,0"
                                             Background="#1E1E2E" Foreground="White" BorderBrush="#3D3D5C"/>

                                    <ComboBox Grid.Column="3" SelectedIndex="{Binding IsDebit, Converter={StaticResource BoolToIndexConverter}}"
                                              Padding="10" Margin="0,0,10,0"
                                              Background="#1E1E2E" Foreground="White">
                                        <ComboBoxItem Content="Debit"/>
                                        <ComboBoxItem Content="Credit"/>
                                    </ComboBox>

                                    <Button Grid.Column="4" Content="X"
                                            Command="{Binding DataContext.RemoveLineCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource DangerButtonStyle}"
                                            Width="35" Height="35"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Button Content="+ Add Line" Command="{Binding AddLineCommand}"
                            Style="{StaticResource SecondaryButtonStyle}"
                            HorizontalAlignment="Left" Margin="0,10,0,0"/>

                    <!-- Totals -->
                    <Border Background="#252538" CornerRadius="5" Padding="15" Margin="0,20,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="1" Margin="0,0,30,0">
                                <TextBlock Text="Total Debits" FontSize="12" Foreground="#8888AA"/>
                                <TextBlock Text="{Binding TotalDebits, StringFormat=N2}" FontSize="18" FontWeight="SemiBold" Foreground="White"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Margin="0,0,30,0">
                                <TextBlock Text="Total Credits" FontSize="12" Foreground="#8888AA"/>
                                <TextBlock Text="{Binding TotalCredits, StringFormat=N2}" FontSize="18" FontWeight="SemiBold" Foreground="White"/>
                            </StackPanel>

                            <StackPanel Grid.Column="3">
                                <TextBlock Text="Status" FontSize="12" Foreground="#8888AA"/>
                                <TextBlock FontSize="18" FontWeight="SemiBold"
                                           Foreground="{Binding IsBalanced, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#22C55E|#EF4444'}">
                                    <TextBlock.Text>
                                        <Binding Path="IsBalanced" Converter="{StaticResource BoolToTextConverter}" ConverterParameter="Balanced|Unbalanced"/>
                                    </TextBlock.Text>
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                        <Button Content="Cancel" Command="{Binding CancelEditCommand}"
                                Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,10,0"/>
                        <Button Content="Save Entry" Command="{Binding SaveEntryCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                IsEnabled="{Binding IsBalanced}"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="3" Background="#80000000"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="4"/>
                <TextBlock Text="Loading..." Foreground="White" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
