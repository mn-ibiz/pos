<UserControl x:Class="HospitalityPOS.WPF.Views.FinancialReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:HospitalityPOS.WPF.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:FinancialReportsViewModel}"
             d:DesignHeight="700" d:DesignWidth="1200">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#7B1FA2" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Financial Reports" FontSize="28" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Generate financial statements and reports" FontSize="14" Foreground="#B3FFFFFF" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="Export HTML" Command="{Binding ExportToHtmlCommand}"
                            Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,10,0"/>
                    <Button Content="Print" Command="{Binding PrintReportCommand}"
                            Style="{StaticResource PrimaryButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Tab Control -->
        <TabControl Grid.Row="1" SelectedIndex="{Binding SelectedReportIndex}" Margin="15">
            <!-- Trial Balance Tab -->
            <TabItem Header="Trial Balance">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Parameters -->
                    <Border Background="#F5F5F5" Padding="15" CornerRadius="5" Margin="0,0,0,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="As of Date:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <DatePicker Grid.Column="1" SelectedDate="{Binding AsOfDate}" Margin="0,0,15,0"/>

                            <Button Grid.Column="2" Content="Generate Report" Command="{Binding GenerateTrialBalanceCommand}"
                                    Style="{StaticResource PrimaryButtonStyle}"/>
                        </Grid>
                    </Border>

                    <!-- Report Content -->
                    <Border Grid.Row="1" Background="White" CornerRadius="8">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                        </Border.Effect>

                        <Grid>
                            <DataGrid ItemsSource="{Binding TrialBalanceLines}"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      GridLinesVisibility="Horizontal"
                                      HeadersVisibility="Column"
                                      BorderThickness="0"
                                      RowHeight="40"
                                      Visibility="{Binding TrialBalance, Converter={StaticResource NullToVisibilityConverter}}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Account Code" Binding="{Binding AccountCode}" Width="120"/>
                                    <DataGridTextColumn Header="Account Name" Binding="{Binding AccountName}" Width="*"/>
                                    <DataGridTextColumn Header="Type" Binding="{Binding AccountType}" Width="100"/>
                                    <DataGridTextColumn Header="Debit" Binding="{Binding Debit, StringFormat=N2}" Width="120">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                                <Setter Property="Margin" Value="0,0,10,0"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Credit" Binding="{Binding Credit, StringFormat=N2}" Width="120">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                                <Setter Property="Margin" Value="0,0,10,0"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>

                            <TextBlock Text="Click 'Generate Report' to view trial balance"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Foreground="Gray" FontSize="14"
                                       Visibility="{Binding TrialBalance, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}"/>
                        </Grid>
                    </Border>

                    <!-- Totals -->
                    <Border Grid.Row="1" Background="#2E7D32" CornerRadius="5" Padding="15"
                            VerticalAlignment="Bottom" Margin="0,0,0,10"
                            Visibility="{Binding TrialBalance, Converter={StaticResource NullToVisibilityConverter}}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="TOTALS" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>

                            <TextBlock Grid.Column="1" Margin="0,0,50,0" Foreground="White">
                                <Run Text="Debits: "/>
                                <Run Text="{Binding TrialBalance.TotalDebits, StringFormat=N2}" FontWeight="Bold"/>
                            </TextBlock>

                            <TextBlock Grid.Column="2" Margin="0,0,50,0" Foreground="White">
                                <Run Text="Credits: "/>
                                <Run Text="{Binding TrialBalance.TotalCredits, StringFormat=N2}" FontWeight="Bold"/>
                            </TextBlock>

                            <TextBlock Grid.Column="3" Foreground="White">
                                <Run Text="Status: "/>
                                <Run Text="{Binding TrialBalance.IsBalanced, Converter={StaticResource BoolToTextConverter}, ConverterParameter='BALANCED|UNBALANCED'}" FontWeight="Bold"/>
                            </TextBlock>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Income Statement Tab -->
            <TabItem Header="Income Statement">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Parameters -->
                    <Border Background="#F5F5F5" Padding="15" CornerRadius="5" Margin="0,0,0,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="From:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <DatePicker Grid.Column="1" SelectedDate="{Binding StartDate}" Margin="0,0,15,0"/>

                            <TextBlock Grid.Column="2" Text="To:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <DatePicker Grid.Column="3" SelectedDate="{Binding EndDate}" Margin="0,0,15,0"/>

                            <Button Grid.Column="4" Content="Generate Report" Command="{Binding GenerateIncomeStatementCommand}"
                                    Style="{StaticResource PrimaryButtonStyle}"/>
                        </Grid>
                    </Border>

                    <!-- Report Content -->
                    <Border Grid.Row="1" Background="White" CornerRadius="8">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                        </Border.Effect>

                        <Grid>
                            <ListView ItemsSource="{Binding IncomeStatementLines}"
                                      BorderThickness="0"
                                      Visibility="{Binding IncomeStatement, Converter={StaticResource NullToVisibilityConverter}}">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="150"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="{Binding DisplayText}" Margin="10,5">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsHeader}" Value="True">
                                                                <Setter Property="FontWeight" Value="Bold"/>
                                                                <Setter Property="FontSize" Value="16"/>
                                                                <Setter Property="Margin" Value="10,15,10,5"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsSection}" Value="True">
                                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                                                <Setter Property="Margin" Value="20,10,10,5"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsSubtotal}" Value="True">
                                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                                                <Setter Property="FontStyle" Value="Italic"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsTotal}" Value="True">
                                                                <Setter Property="FontWeight" Value="Bold"/>
                                                                <Setter Property="FontSize" Value="14"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>

                                            <TextBlock Grid.Column="1" Text="{Binding Amount, StringFormat=N2}"
                                                       HorizontalAlignment="Right" Margin="10,5"
                                                       Visibility="{Binding Amount, Converter={StaticResource NotZeroToVisibilityConverter}}">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsTotal}" Value="True">
                                                                <Setter Property="FontWeight" Value="Bold"/>
                                                                <Setter Property="FontSize" Value="14"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsSubtotal}" Value="True">
                                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                            <TextBlock Text="Click 'Generate Report' to view income statement"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Foreground="Gray" FontSize="14"
                                       Visibility="{Binding IncomeStatement, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}"/>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Balance Sheet Tab -->
            <TabItem Header="Balance Sheet">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Parameters -->
                    <Border Background="#F5F5F5" Padding="15" CornerRadius="5" Margin="0,0,0,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="As of Date:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <DatePicker Grid.Column="1" SelectedDate="{Binding AsOfDate}" Margin="0,0,15,0"/>

                            <Button Grid.Column="2" Content="Generate Report" Command="{Binding GenerateBalanceSheetCommand}"
                                    Style="{StaticResource PrimaryButtonStyle}"/>
                        </Grid>
                    </Border>

                    <!-- Report Content -->
                    <Border Grid.Row="1" Background="White" CornerRadius="8">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                        </Border.Effect>

                        <Grid>
                            <ListView ItemsSource="{Binding BalanceSheetLines}"
                                      BorderThickness="0"
                                      Visibility="{Binding BalanceSheet, Converter={StaticResource NullToVisibilityConverter}}">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="150"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="{Binding DisplayText}" Margin="10,5">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsHeader}" Value="True">
                                                                <Setter Property="FontWeight" Value="Bold"/>
                                                                <Setter Property="FontSize" Value="16"/>
                                                                <Setter Property="Margin" Value="10,15,10,5"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsSection}" Value="True">
                                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                                                <Setter Property="Margin" Value="20,10,10,5"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsSubtotal}" Value="True">
                                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                                                <Setter Property="FontStyle" Value="Italic"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsTotal}" Value="True">
                                                                <Setter Property="FontWeight" Value="Bold"/>
                                                                <Setter Property="FontSize" Value="14"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>

                                            <TextBlock Grid.Column="1" Text="{Binding Amount, StringFormat=N2}"
                                                       HorizontalAlignment="Right" Margin="10,5"
                                                       Visibility="{Binding Amount, Converter={StaticResource NotZeroToVisibilityConverter}}">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsTotal}" Value="True">
                                                                <Setter Property="FontWeight" Value="Bold"/>
                                                                <Setter Property="FontSize" Value="14"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsSubtotal}" Value="True">
                                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                            <TextBlock Text="Click 'Generate Report' to view balance sheet"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Foreground="Gray" FontSize="14"
                                       Visibility="{Binding BalanceSheet, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}"/>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Account Ledger Tab -->
            <TabItem Header="Account Ledger">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Parameters -->
                    <Border Background="#F5F5F5" Padding="15" CornerRadius="5" Margin="0,0,0,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="300"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <ComboBox ItemsSource="{Binding Accounts}"
                                      SelectedItem="{Binding SelectedAccount}"
                                      DisplayMemberPath="AccountName"
                                      Padding="10" Margin="0,0,15,0"/>

                            <TextBlock Grid.Column="1" Text="From:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <DatePicker Grid.Column="2" SelectedDate="{Binding StartDate}" Margin="0,0,15,0"/>

                            <TextBlock Grid.Column="3" Text="To:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <DatePicker Grid.Column="4" SelectedDate="{Binding EndDate}" Margin="0,0,15,0"/>

                            <Button Grid.Column="5" Content="Generate Ledger" Command="{Binding GenerateAccountLedgerCommand}"
                                    Style="{StaticResource PrimaryButtonStyle}"/>
                        </Grid>
                    </Border>

                    <!-- Report Content -->
                    <Border Grid.Row="1" Background="White" CornerRadius="8">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                        </Border.Effect>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Account Info -->
                            <Border Background="#F5F5F5" Padding="15"
                                    Visibility="{Binding AccountLedger, Converter={StaticResource NullToVisibilityConverter}}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel>
                                        <TextBlock FontSize="16" FontWeight="SemiBold">
                                            <Run Text="{Binding AccountLedger.AccountCode}"/>
                                            <Run Text=" - "/>
                                            <Run Text="{Binding AccountLedger.AccountName}"/>
                                        </TextBlock>
                                        <TextBlock Text="{Binding AccountLedger.AccountType}" Foreground="Gray"/>
                                    </StackPanel>

                                    <TextBlock Grid.Column="1" VerticalAlignment="Center">
                                        <Run Text="Opening Balance: " Foreground="Gray"/>
                                        <Run Text="{Binding AccountLedger.OpeningBalance, StringFormat=N2}" FontWeight="SemiBold"/>
                                    </TextBlock>
                                </Grid>
                            </Border>

                            <!-- Ledger Lines -->
                            <DataGrid Grid.Row="1" ItemsSource="{Binding LedgerLines}"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      GridLinesVisibility="Horizontal"
                                      HeadersVisibility="Column"
                                      BorderThickness="0"
                                      RowHeight="40"
                                      Visibility="{Binding AccountLedger, Converter={StaticResource NullToVisibilityConverter}}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat=d}" Width="100"/>
                                    <DataGridTextColumn Header="Entry #" Binding="{Binding EntryNumber}" Width="100"/>
                                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                                    <DataGridTextColumn Header="Debit" Binding="{Binding Debit, StringFormat=N2}" Width="100">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Credit" Binding="{Binding Credit, StringFormat=N2}" Width="100">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Balance" Binding="{Binding Balance, StringFormat=N2}" Width="120">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>

                            <!-- Closing Balance -->
                            <Border Grid.Row="2" Background="#7B1FA2" Padding="15"
                                    Visibility="{Binding AccountLedger, Converter={StaticResource NullToVisibilityConverter}}">
                                <TextBlock Foreground="White" HorizontalAlignment="Right" FontSize="16">
                                    <Run Text="Closing Balance: "/>
                                    <Run Text="{Binding AccountLedger.ClosingBalance, StringFormat=N2}" FontWeight="Bold"/>
                                </TextBlock>
                            </Border>

                            <TextBlock Text="Select an account and click 'Generate Ledger' to view transactions"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Foreground="Gray" FontSize="14" Grid.RowSpan="3"
                                       Visibility="{Binding AccountLedger, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}"/>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="2" Background="#80000000"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="4"/>
                <TextBlock Text="Generating report..." Foreground="White" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
