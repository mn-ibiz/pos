<UserControl x:Class="HospitalityPOS.WPF.Views.PurchaseOrderReviewView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:HospitalityPOS.WPF.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1400"
             Background="#1E1E2E">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter" />
    </UserControl.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="Back"
                    Command="{Binding GoBackCommand}"
                    Background="#3D3D5C"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="16,12"
                    FontSize="14"
                    Cursor="Hand" />

            <TextBlock Grid.Column="1"
                       Text="Manager PO Review Dashboard"
                       FontSize="28"
                       FontWeight="SemiBold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />

            <Button Grid.Column="2"
                    Content="Refresh"
                    Command="{Binding LoadDataCommand}"
                    Background="#2196F3"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="24,12"
                    FontSize="14"
                    Cursor="Hand" />
        </Grid>

        <!-- Statistics Bar -->
        <Border Grid.Row="1" Background="#2D2D44" CornerRadius="8" Padding="20" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="Pending Suggestions"
                               FontSize="12"
                               Foreground="#8888AA"
                               HorizontalAlignment="Center" />
                    <TextBlock Text="{Binding PendingSuggestionCount}"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#FF9800"
                               HorizontalAlignment="Center" />
                </StackPanel>

                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="Pending POs"
                               FontSize="12"
                               Foreground="#8888AA"
                               HorizontalAlignment="Center" />
                    <TextBlock Text="{Binding PendingPOCount}"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#2196F3"
                               HorizontalAlignment="Center" />
                </StackPanel>

                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock Text="Pending Value"
                               FontSize="12"
                               Foreground="#8888AA"
                               HorizontalAlignment="Center" />
                    <TextBlock Text="{Binding TotalPendingValue, StringFormat='KSh {0:N0}'}"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center" />
                </StackPanel>

                <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                    <TextBlock Text="Approved Today"
                               FontSize="12"
                               Foreground="#8888AA"
                               HorizontalAlignment="Center" />
                    <TextBlock Text="{Binding ApprovedTodayCount}"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#4CAF50"
                               HorizontalAlignment="Center" />
                </StackPanel>

                <StackPanel Grid.Column="4" HorizontalAlignment="Center">
                    <TextBlock Text="Today's Value"
                               FontSize="12"
                               Foreground="#8888AA"
                               HorizontalAlignment="Center" />
                    <TextBlock Text="{Binding TotalApprovedTodayValue, StringFormat='KSh {0:N0}'}"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#4CAF50"
                               HorizontalAlignment="Center" />
                </StackPanel>

                <StackPanel Grid.Column="5" HorizontalAlignment="Center">
                    <TextBlock Text="Overdue POs"
                               FontSize="12"
                               Foreground="#8888AA"
                               HorizontalAlignment="Center" />
                    <TextBlock Text="{Binding OverdueCount}"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#F44336"
                               HorizontalAlignment="Center" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Tabs Content -->
        <TabControl Grid.Row="2"
                    SelectedIndex="{Binding SelectedTabIndex}"
                    Background="Transparent"
                    BorderThickness="0">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Background" Value="#2D2D44" />
                    <Setter Property="Foreground" Value="#8888AA" />
                    <Setter Property="Padding" Value="16,10" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border"
                                        Background="{TemplateBinding Background}"
                                        BorderThickness="0"
                                        Padding="{TemplateBinding Padding}"
                                        Margin="0,0,4,0"
                                        CornerRadius="8,8,0,0">
                                    <ContentPresenter ContentSource="Header"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#3D3D5C" />
                                        <Setter Property="Foreground" Value="White" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

            <!-- Pending Suggestions Tab -->
            <TabItem Header="Pending Suggestions">
                <Border Background="#2D2D44" CornerRadius="0,8,8,8" Padding="16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                            <Button Content="Approve All"
                                    Command="{Binding ApproveAllSuggestionsCommand}"
                                    Background="#4CAF50"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Padding="16,10"
                                    Margin="0,0,8,0"
                                    Cursor="Hand" />
                            <Button Content="Create Consolidated POs"
                                    Command="{Binding CreateConsolidatedPOsCommand}"
                                    Background="#2196F3"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Padding="16,10"
                                    Cursor="Hand" />
                        </StackPanel>

                        <DataGrid Grid.Row="1"
                                  ItemsSource="{Binding PendingSuggestions}"
                                  SelectedItem="{Binding SelectedSuggestion}"
                                  AutoGenerateColumns="False"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  RowBackground="#3D3D5C"
                                  AlternatingRowBackground="#353550"
                                  Foreground="White"
                                  GridLinesVisibility="None"
                                  HeadersVisibility="Column"
                                  SelectionMode="Single"
                                  IsReadOnly="True"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Product" Binding="{Binding Product.Name}" Width="*" />
                                <DataGridTextColumn Header="Current Stock" Binding="{Binding CurrentStock, StringFormat=N0}" Width="100" />
                                <DataGridTextColumn Header="Reorder Point" Binding="{Binding ReorderPoint, StringFormat=N0}" Width="100" />
                                <DataGridTextColumn Header="Suggested Qty" Binding="{Binding SuggestedQuantity, StringFormat=N0}" Width="100" />
                                <DataGridTextColumn Header="Est. Cost" Binding="{Binding EstimatedCost, StringFormat=KSh {0:N0}}" Width="120" />
                                <DataGridTextColumn Header="Priority" Binding="{Binding Priority}" Width="80" />
                                <DataGridTextColumn Header="Supplier" Binding="{Binding Supplier.Name}" Width="150" />
                                <DataGridTemplateColumn Header="Actions" Width="150">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="Approve"
                                                        Command="{Binding DataContext.ApproveSuggestionCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        CommandParameter="{Binding}"
                                                        Background="#4CAF50"
                                                        Foreground="White"
                                                        BorderThickness="0"
                                                        Padding="8,4"
                                                        Margin="0,0,4,0"
                                                        FontSize="11"
                                                        Cursor="Hand" />
                                                <Button Content="Reject"
                                                        Command="{Binding DataContext.RejectSuggestionCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        CommandParameter="{Binding}"
                                                        Background="#F44336"
                                                        Foreground="White"
                                                        BorderThickness="0"
                                                        Padding="8,4"
                                                        FontSize="11"
                                                        Cursor="Hand" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </TabItem>

            <!-- Pending POs Tab -->
            <TabItem Header="Pending POs">
                <Border Background="#2D2D44" CornerRadius="0,8,8,8" Padding="16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                            <Button Content="Send All to Suppliers"
                                    Command="{Binding SendAllPendingPOsCommand}"
                                    Background="#4CAF50"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Padding="16,10"
                                    Cursor="Hand" />
                        </StackPanel>

                        <DataGrid Grid.Row="1"
                                  ItemsSource="{Binding PendingPurchaseOrders}"
                                  SelectedItem="{Binding SelectedPurchaseOrder}"
                                  AutoGenerateColumns="False"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  RowBackground="#3D3D5C"
                                  AlternatingRowBackground="#353550"
                                  Foreground="White"
                                  GridLinesVisibility="None"
                                  HeadersVisibility="Column"
                                  SelectionMode="Single"
                                  IsReadOnly="True"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="PO Number" Binding="{Binding PONumber}" Width="150" />
                                <DataGridTextColumn Header="Supplier" Binding="{Binding Supplier.Name}" Width="*" />
                                <DataGridTextColumn Header="Items" Binding="{Binding PurchaseOrderItems.Count}" Width="60" />
                                <DataGridTextColumn Header="Total" Binding="{Binding TotalAmount, StringFormat=KSh {0:N0}}" Width="120" />
                                <DataGridTextColumn Header="Created" Binding="{Binding CreatedAt, StringFormat=yyyy-MM-dd}" Width="100" />
                                <DataGridTextColumn Header="Priority" Binding="{Binding Priority}" Width="80" />
                                <DataGridTemplateColumn Header="Actions" Width="250">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="View"
                                                        Command="{Binding DataContext.ViewPurchaseOrderCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        CommandParameter="{Binding}"
                                                        Background="#2196F3"
                                                        Foreground="White"
                                                        BorderThickness="0"
                                                        Padding="8,4"
                                                        Margin="0,0,4,0"
                                                        FontSize="11"
                                                        Cursor="Hand" />
                                                <Button Content="Send"
                                                        Command="{Binding DataContext.SendPurchaseOrderCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        CommandParameter="{Binding}"
                                                        Background="#4CAF50"
                                                        Foreground="White"
                                                        BorderThickness="0"
                                                        Padding="8,4"
                                                        Margin="0,0,4,0"
                                                        FontSize="11"
                                                        Cursor="Hand" />
                                                <Button Content="Archive"
                                                        Command="{Binding DataContext.ArchivePurchaseOrderCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        CommandParameter="{Binding}"
                                                        Background="#FF9800"
                                                        Foreground="White"
                                                        BorderThickness="0"
                                                        Padding="8,4"
                                                        Margin="0,0,4,0"
                                                        FontSize="11"
                                                        Cursor="Hand" />
                                                <Button Content="Delete"
                                                        Command="{Binding DataContext.DeletePurchaseOrderCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        CommandParameter="{Binding}"
                                                        Background="#F44336"
                                                        Foreground="White"
                                                        BorderThickness="0"
                                                        Padding="8,4"
                                                        FontSize="11"
                                                        Cursor="Hand" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </TabItem>

            <!-- Supplier Groups Tab -->
            <TabItem Header="By Supplier">
                <Border Background="#2D2D44" CornerRadius="0,8,8,8" Padding="16">
                    <DataGrid ItemsSource="{Binding SupplierGroups}"
                              AutoGenerateColumns="False"
                              Background="Transparent"
                              BorderThickness="0"
                              RowBackground="#3D3D5C"
                              AlternatingRowBackground="#353550"
                              Foreground="White"
                              GridLinesVisibility="None"
                              HeadersVisibility="Column"
                              SelectionMode="Single"
                              IsReadOnly="True"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Supplier" Binding="{Binding SupplierName}" Width="*" />
                            <DataGridTextColumn Header="Items" Binding="{Binding ItemCount}" Width="80" />
                            <DataGridTextColumn Header="Est. Cost" Binding="{Binding TotalEstimatedCost, StringFormat=KSh {0:N0}}" Width="150" />
                            <DataGridTextColumn Header="Projected POs" Binding="{Binding ProjectedPOCount}" Width="100" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </TabItem>

            <!-- Recent Activity Tab -->
            <TabItem Header="Recent Activity">
                <Border Background="#2D2D44" CornerRadius="0,8,8,8" Padding="16">
                    <DataGrid ItemsSource="{Binding RecentPurchaseOrders}"
                              AutoGenerateColumns="False"
                              Background="Transparent"
                              BorderThickness="0"
                              RowBackground="#3D3D5C"
                              AlternatingRowBackground="#353550"
                              Foreground="White"
                              GridLinesVisibility="None"
                              HeadersVisibility="Column"
                              SelectionMode="Single"
                              IsReadOnly="True"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="PO Number" Binding="{Binding PONumber}" Width="150" />
                            <DataGridTextColumn Header="Supplier" Binding="{Binding Supplier.Name}" Width="*" />
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120" />
                            <DataGridTextColumn Header="Total" Binding="{Binding TotalAmount, StringFormat=KSh {0:N0}}" Width="120" />
                            <DataGridTextColumn Header="Updated" Binding="{Binding UpdatedAt, StringFormat=yyyy-MM-dd HH:mm}" Width="150" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </TabItem>
        </TabControl>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="3"
                Background="#80000000"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Loading..."
                           FontSize="18"
                           Foreground="White"
                           HorizontalAlignment="Center" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
