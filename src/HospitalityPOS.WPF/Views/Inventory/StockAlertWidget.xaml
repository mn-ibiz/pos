<UserControl x:Class="HospitalityPOS.WPF.Views.Inventory.StockAlertWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:HospitalityPOS.WPF.Converters"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="350"
             Background="Transparent">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility"/>

        <!-- Widget Header Button Style -->
        <Style x:Key="WidgetHeaderButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4E4E6E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#5E5E7E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Alert Item Style -->
        <Style x:Key="AlertItemBorder" TargetType="Border">
            <Setter Property="Background" Value="#353550"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0,4,0,0"/>
        </Style>
    </UserControl.Resources>

    <Border Background="#2D2D44"
            CornerRadius="12"
            Padding="16">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Icon and Title -->
                <TextBlock Grid.Column="0"
                           Text="STOCK ALERTS"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="White"
                           VerticalAlignment="Center"/>

                <!-- Alert Count Badge -->
                <Border Grid.Column="1"
                        Background="#EF4444"
                        CornerRadius="10"
                        Padding="8,2"
                        Margin="12,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Visibility="{Binding HasAlerts, Converter={StaticResource BoolToVisibility}}">
                    <TextBlock Text="{Binding TotalAlerts}"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="White"/>
                </Border>

                <!-- Refresh Button -->
                <Button Grid.Column="2"
                        Content="Refresh"
                        Style="{StaticResource WidgetHeaderButton}"
                        Command="{Binding RefreshCommand}"
                        Margin="0,0,8,0"/>

                <!-- View All Button -->
                <Button Grid.Column="3"
                        Content="View All"
                        Style="{StaticResource WidgetHeaderButton}"
                        Background="#4CAF50"
                        Command="{Binding ViewInventoryCommand}"/>
            </Grid>

            <!-- Summary Counts -->
            <Grid Grid.Row="1" Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Low Stock Count -->
                <Border Grid.Column="0"
                        Background="#F59E0B"
                        CornerRadius="8"
                        Padding="12,8"
                        Margin="0,0,6,0">
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center">
                        <TextBlock Text="!"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>
                        <StackPanel>
                            <TextBlock Text="{Binding LowStockCount}"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Low Stock"
                                       FontSize="11"
                                       Foreground="#FFFFFFCC"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Out of Stock Count -->
                <Border Grid.Column="1"
                        Background="#EF4444"
                        CornerRadius="8"
                        Padding="12,8"
                        Margin="6,0,0,0">
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center">
                        <TextBlock Text="X"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>
                        <StackPanel>
                            <TextBlock Text="{Binding OutOfStockCount}"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Out of Stock"
                                       FontSize="11"
                                       Foreground="#FFFFFFCC"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Alert Lists -->
            <ScrollViewer Grid.Row="2"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <StackPanel>
                    <!-- Low Stock Section -->
                    <StackPanel Visibility="{Binding LowStockItems.Count, Converter={StaticResource BoolToVisibility}}">
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="!"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="#F59E0B"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0"/>
                            <TextBlock Grid.Column="1"
                                       Text="LOW STOCK"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="#F59E0B"
                                       VerticalAlignment="Center"/>
                        </Grid>

                        <ItemsControl ItemsSource="{Binding LowStockItems}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource AlertItemBorder}"
                                            BorderBrush="#F59E0B"
                                            BorderThickness="0,0,0,2">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding ProductName}"
                                                           FontSize="14"
                                                           FontWeight="Medium"
                                                           Foreground="White"
                                                           TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Text="{Binding CategoryName}"
                                                           FontSize="11"
                                                           Foreground="#8888AA"
                                                           Margin="0,2,0,0"/>
                                            </StackPanel>
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding RemainingText}"
                                                       FontSize="12"
                                                       FontWeight="SemiBold"
                                                       Foreground="#F59E0B"
                                                       VerticalAlignment="Center"
                                                       Margin="12,0,0,0"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!-- Out of Stock Section -->
                    <StackPanel Margin="0,16,0,0"
                                Visibility="{Binding OutOfStockItems.Count, Converter={StaticResource BoolToVisibility}}">
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="X"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="#EF4444"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0"/>
                            <TextBlock Grid.Column="1"
                                       Text="OUT OF STOCK"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="#EF4444"
                                       VerticalAlignment="Center"/>
                        </Grid>

                        <ItemsControl ItemsSource="{Binding OutOfStockItems}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource AlertItemBorder}"
                                            BorderBrush="#EF4444"
                                            BorderThickness="0,0,0,2">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding ProductName}"
                                                           FontSize="14"
                                                           FontWeight="Medium"
                                                           Foreground="White"
                                                           TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Text="{Binding CategoryName}"
                                                           FontSize="11"
                                                           Foreground="#8888AA"
                                                           Margin="0,2,0,0"/>
                                            </StackPanel>
                                            <Border Grid.Column="1"
                                                    Background="#EF4444"
                                                    CornerRadius="4"
                                                    Padding="8,4"
                                                    VerticalAlignment="Center"
                                                    Margin="12,0,0,0">
                                                <TextBlock Text="OUT"
                                                           FontSize="10"
                                                           FontWeight="Bold"
                                                           Foreground="White"/>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!-- No Alerts Message -->
                    <StackPanel VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Margin="0,40,0,0"
                                Visibility="{Binding HasAlerts, Converter={StaticResource InverseBoolToVisibility}}">
                        <TextBlock Text="All stock levels OK"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="#22C55E"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="No low stock or out-of-stock items"
                                   FontSize="12"
                                   Foreground="#8888AA"
                                   HorizontalAlignment="Center"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <!-- Loading Indicator -->
            <Border Grid.Row="2"
                    Background="#80000000"
                    CornerRadius="8"
                    Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibility}}">
                <StackPanel VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                    <ProgressBar IsIndeterminate="True"
                                 Width="120"
                                 Height="4"
                                 Foreground="#4CAF50"/>
                    <TextBlock Text="{Binding BusyMessage}"
                               Foreground="White"
                               FontSize="12"
                               HorizontalAlignment="Center"
                               Margin="0,12,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</UserControl>
