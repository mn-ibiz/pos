<UserControl x:Class="HospitalityPOS.WPF.Views.Inventory.InventoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:HospitalityPOS.WPF.Converters"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1200"
             Background="#1E1E2E">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility"/>

        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="MinHeight" Value="44"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="16,8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.7"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="#4E4E6E"/>
        </Style>

        <Style x:Key="SearchTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="BorderBrush" Value="#4E4E6E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          VerticalAlignment="Center"
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#6E6EAE"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="FilterComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#4E4E6E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="44"/>
        </Style>

        <Style x:Key="FilterCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="12,0,0,0"/>
        </Style>

        <Style x:Key="QuickFilterButton" TargetType="Button">
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="12,6">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="#4E4E6E"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="Back"
                    Style="{StaticResource ActionButton}"
                    Background="#4E4E6E"
                    Command="{Binding GoBackCommand}"/>

            <TextBlock Grid.Column="1"
                       Text="{Binding Title}"
                       FontSize="28"
                       FontWeight="SemiBold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

            <Button Grid.Column="2"
                    Content="Refresh"
                    Style="{StaticResource ActionButton}"
                    Background="#4CAF50"
                    Command="{Binding RefreshCommand}"/>
        </Grid>

        <!-- Summary Cards -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total Products Card -->
            <Border Grid.Column="0"
                    Background="#2D2D44"
                    CornerRadius="12"
                    Padding="16"
                    Margin="0,0,8,0">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="{Binding TotalProductCount}"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Total Products"
                               FontSize="13"
                               Foreground="#8888AA"
                               HorizontalAlignment="Center"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <!-- In Stock Card -->
            <Border Grid.Column="1"
                    Background="#1B4332"
                    CornerRadius="12"
                    Padding="16"
                    Margin="4,0">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="{Binding InStockCount}"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="#22C55E"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="In Stock"
                               FontSize="13"
                               Foreground="#22C55E"
                               Opacity="0.8"
                               HorizontalAlignment="Center"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <!-- Low Stock Card -->
            <Border Grid.Column="2"
                    Background="#422006"
                    CornerRadius="12"
                    Padding="16"
                    Margin="4,0"
                    Cursor="Hand"
                    MouseLeftButtonDown="LowStockCard_Click">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="{Binding LowStockCount}"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="#F59E0B"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Low Stock"
                               FontSize="13"
                               Foreground="#F59E0B"
                               Opacity="0.8"
                               HorizontalAlignment="Center"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <!-- Out of Stock Card -->
            <Border Grid.Column="3"
                    Background="#450A0A"
                    CornerRadius="12"
                    Padding="16"
                    Margin="8,0,0,0"
                    Cursor="Hand"
                    MouseLeftButtonDown="OutOfStockCard_Click">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="{Binding OutOfStockCount}"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="#EF4444"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Out of Stock"
                               FontSize="13"
                               Foreground="#EF4444"
                               Opacity="0.8"
                               HorizontalAlignment="Center"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Search and Filter Bar -->
        <Border Grid.Row="2"
                Background="#2D2D44"
                CornerRadius="12"
                Padding="16"
                Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search Box -->
                <Grid Grid.Column="0" Margin="0,0,16,0">
                    <TextBox Style="{StaticResource SearchTextBox}"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged, Delay=300}"/>
                    <TextBlock Text="Search by name, code, or category..."
                               FontSize="14"
                               Foreground="#6E6E8E"
                               IsHitTestVisible="False"
                               VerticalAlignment="Center"
                               Margin="16,0,0,0"
                               Visibility="{Binding SearchText.Length, Converter={StaticResource InverseBoolToVisibility}}"/>
                    <Button Content="X"
                            Width="30"
                            Height="30"
                            HorizontalAlignment="Right"
                            Margin="0,0,8,0"
                            Background="Transparent"
                            Foreground="#8888AA"
                            BorderThickness="0"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Command="{Binding ClearSearchCommand}"
                            Visibility="{Binding SearchText.Length, Converter={StaticResource BoolToVisibility}}"/>
                </Grid>

                <!-- Category Filter -->
                <TextBlock Grid.Column="1"
                           Text="Category:"
                           Foreground="#A0A0B0"
                           FontSize="14"
                           VerticalAlignment="Center"
                           Margin="0,0,8,0"/>

                <ComboBox Grid.Column="2"
                          Style="{StaticResource FilterComboBox}"
                          ItemsSource="{Binding Categories}"
                          SelectedItem="{Binding SelectedCategory}"
                          DisplayMemberPath="Name"
                          Margin="0,0,8,0"/>

                <Button Grid.Column="3"
                        Content="Clear"
                        Style="{StaticResource ActionButton}"
                        Background="#4E4E6E"
                        MinWidth="70"
                        Command="{Binding ClearCategoryFilterCommand}"/>
            </Grid>
        </Border>

        <!-- Filter Checkboxes and Quick Filters -->
        <Border Grid.Row="3"
                Background="#2D2D44"
                CornerRadius="12"
                Padding="16"
                Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Status Filter Checkboxes -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Show:"
                               Foreground="#A0A0B0"
                               FontSize="13"
                               VerticalAlignment="Center"/>
                    <CheckBox Style="{StaticResource FilterCheckBox}"
                              IsChecked="{Binding ShowInStock}">
                        <StackPanel Orientation="Horizontal">
                            <Border Background="#22C55E"
                                    Width="12"
                                    Height="12"
                                    CornerRadius="2"
                                    Margin="0,0,6,0"/>
                            <TextBlock Text="In Stock" VerticalAlignment="Center"/>
                        </StackPanel>
                    </CheckBox>
                    <CheckBox Style="{StaticResource FilterCheckBox}"
                              IsChecked="{Binding ShowLowStock}">
                        <StackPanel Orientation="Horizontal">
                            <Border Background="#F59E0B"
                                    Width="12"
                                    Height="12"
                                    CornerRadius="2"
                                    Margin="0,0,6,0"/>
                            <TextBlock Text="Low Stock" VerticalAlignment="Center"/>
                        </StackPanel>
                    </CheckBox>
                    <CheckBox Style="{StaticResource FilterCheckBox}"
                              IsChecked="{Binding ShowOutOfStock}">
                        <StackPanel Orientation="Horizontal">
                            <Border Background="#EF4444"
                                    Width="12"
                                    Height="12"
                                    CornerRadius="2"
                                    Margin="0,0,6,0"/>
                            <TextBlock Text="Out of Stock" VerticalAlignment="Center"/>
                        </StackPanel>
                    </CheckBox>
                </StackPanel>

                <!-- Quick Filter Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="Low Stock Only"
                            Style="{StaticResource QuickFilterButton}"
                            Background="#F59E0B"
                            Command="{Binding ShowOnlyLowStockCommand}"/>
                    <Button Content="Out of Stock Only"
                            Style="{StaticResource QuickFilterButton}"
                            Background="#EF4444"
                            Command="{Binding ShowOnlyOutOfStockCommand}"/>
                    <Button Content="All Issues"
                            Style="{StaticResource QuickFilterButton}"
                            Background="#8B5CF6"
                            Command="{Binding ShowAllIssuesCommand}"/>
                    <Button Content="Clear Filters"
                            Style="{StaticResource QuickFilterButton}"
                            Background="#4E4E6E"
                            Command="{Binding ClearFiltersCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Product List -->
        <Border Grid.Row="4"
                Background="#2D2D44"
                CornerRadius="12"
                Padding="0">
            <DataGrid ItemsSource="{Binding Products}"
                      SelectedItem="{Binding SelectedProduct}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      Background="Transparent"
                      BorderThickness="0"
                      RowBackground="#2D2D44"
                      AlternatingRowBackground="#353550"
                      Foreground="White"
                      GridLinesVisibility="Horizontal"
                      HorizontalGridLinesBrush="#3E3E5E"
                      HeadersVisibility="Column"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      SelectionMode="Single"
                      SelectionUnit="FullRow"
                      RowHeight="52"
                      FontSize="14">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#252538"/>
                        <Setter Property="Foreground" Value="#A0A0B0"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="FontSize" Value="13"/>
                        <Setter Property="Padding" Value="16,12"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="#3E3E5E"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="16,8"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#3D3D5C"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.CellStyle>
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#353550"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#3D3D5C"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.Columns>
                    <!-- Status Icon Column -->
                    <DataGridTemplateColumn Header="" Width="50">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding StatusIcon}"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#22C55E"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsLowStock}" Value="True">
                                                    <Setter Property="Foreground" Value="#F59E0B"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsOutOfStock}" Value="True">
                                                    <Setter Property="Foreground" Value="#EF4444"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="Code" Binding="{Binding ProductCode}" Width="100"/>
                    <DataGridTextColumn Header="Product" Binding="{Binding ProductName}" Width="*"/>
                    <DataGridTextColumn Header="Category" Binding="{Binding CategoryName}" Width="150"/>

                    <!-- Current Stock Column -->
                    <DataGridTemplateColumn Header="Current Stock" Width="130">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding StockDisplay}"
                                           VerticalAlignment="Center"
                                           FontWeight="SemiBold">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#22C55E"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsLowStock}" Value="True">
                                                    <Setter Property="Foreground" Value="#F59E0B"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsOutOfStock}" Value="True">
                                                    <Setter Property="Foreground" Value="#EF4444"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="Min Level" Binding="{Binding MinDisplay}" Width="90"/>
                    <DataGridTextColumn Header="Max Level" Binding="{Binding MaxDisplay}" Width="90"/>

                    <!-- Status Badge Column -->
                    <DataGridTemplateColumn Header="Status" Width="90">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border CornerRadius="4"
                                        Padding="8,4"
                                        HorizontalAlignment="Left"
                                        Background="{Binding StatusBackground}">
                                    <TextBlock Text="{Binding StatusText}"
                                               FontSize="11"
                                               FontWeight="Bold"
                                               Foreground="White"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Loading Indicator -->
        <Border Grid.Row="4"
                Background="#80000000"
                CornerRadius="12"
                Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibility}}">
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True"
                             Width="200"
                             Height="4"
                             Foreground="#4CAF50"/>
                <TextBlock Text="{Binding BusyMessage}"
                           Foreground="White"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Margin="0,16,0,0"/>
            </StackPanel>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="5"
                Background="#2D2D44"
                CornerRadius="8"
                Padding="16,8"
                Margin="0,16,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Foreground="#8888AA" FontSize="13">
                    <Run Text="Showing: "/>
                    <Run Text="{Binding Products.Count, Mode=OneWay}"/>
                    <Run Text=" of "/>
                    <Run Text="{Binding TotalProductCount, Mode=OneWay}"/>
                    <Run Text=" tracked products"/>
                    <Run Text="  |  "/>
                    <Run Text="In Stock: " Foreground="#22C55E"/>
                    <Run Text="{Binding InStockCount, Mode=OneWay}" Foreground="#22C55E"/>
                    <Run Text="  |  "/>
                    <Run Text="Low: " Foreground="#F59E0B"/>
                    <Run Text="{Binding LowStockCount, Mode=OneWay}" Foreground="#F59E0B"/>
                    <Run Text="  |  "/>
                    <Run Text="Out: " Foreground="#EF4444"/>
                    <Run Text="{Binding OutOfStockCount, Mode=OneWay}" Foreground="#EF4444"/>
                </TextBlock>

                <TextBlock Grid.Column="1" Foreground="#6E6E8E" FontSize="12">
                    <Run Text="Selected: "/>
                    <Run Text="{Binding SelectedProduct.ProductName, Mode=OneWay, FallbackValue='None'}"/>
                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</UserControl>
