<UserControl x:Class="HospitalityPOS.WPF.Views.POSView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:HospitalityPOS.WPF.Converters"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1280"
             Background="#1E1E2E"
             Focusable="True">

    <!-- Keyboard Shortcuts (Microsoft RMS Style) -->
    <UserControl.InputBindings>
        <!-- F1 = Item Lookup / Search -->
        <KeyBinding Key="F1" Command="{Binding FocusBarcodeInputCommand}"/>
        <!-- F2 = Apply Discount -->
        <KeyBinding Key="F2" Command="{Binding ApplyOrderDiscountAsyncCommand}"/>
        <!-- F3 = Hold Order -->
        <KeyBinding Key="F3" Command="{Binding HoldOrderAsyncCommand}"/>
        <!-- F4 = Recall Held Orders -->
        <KeyBinding Key="F4" Command="{Binding ShowHeldOrdersAsyncCommand}"/>
        <!-- F5 = Cash Payment -->
        <KeyBinding Key="F5" Command="{Binding SubmitOrderAsyncCommand}"/>
        <!-- F6 = M-Pesa Payment -->
        <KeyBinding Key="F6" Command="{Binding InitiateMpesaPaymentAsyncCommand}"/>
        <!-- F7 = Card Payment -->
        <KeyBinding Key="F7" Command="{Binding CardPaymentCommand}"/>
        <!-- F8 = Clear/New Transaction -->
        <KeyBinding Key="F8" Command="{Binding ClearOrderCommand}"/>
        <!-- F9 = General Payment (same as Cash) -->
        <KeyBinding Key="F9" Command="{Binding SubmitOrderAsyncCommand}"/>
        <!-- F10 = Void Last Item -->
        <KeyBinding Key="F10" Command="{Binding VoidLastItemCommand}"/>
        <!-- F11 = Print Receipt -->
        <KeyBinding Key="F11" Command="{Binding PrintOrderAsyncCommand}"/>
        <!-- F12 = Customer/Loyalty Lookup -->
        <KeyBinding Key="F12" Command="{Binding ShowLoyaltyPanelCommand}"/>
        <!-- Escape = Cancel/Back -->
        <KeyBinding Key="Escape" Command="{Binding GoBackCommand}"/>
        <!-- Delete = Remove selected item -->
        <KeyBinding Key="Delete" Command="{Binding RemoveSelectedItemCommand}"/>
        <!-- Plus = Increase quantity -->
        <KeyBinding Key="OemPlus" Command="{Binding IncreaseSelectedQuantityCommand}"/>
        <KeyBinding Key="Add" Command="{Binding IncreaseSelectedQuantityCommand}"/>
        <!-- Minus = Decrease quantity -->
        <KeyBinding Key="OemMinus" Command="{Binding DecreaseSelectedQuantityCommand}"/>
        <KeyBinding Key="Subtract" Command="{Binding DecreaseSelectedQuantityCommand}"/>
        <!-- ? = Show Keyboard Shortcuts Help -->
        <KeyBinding Key="OemQuestion" Modifiers="Shift" Command="{Binding ShowKeyboardShortcutsCommand}"/>
    </UserControl.InputBindings>

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility"/>
        <converters:IsCurrentPageConverter x:Key="IsCurrentPageConverter"/>

        <!-- Category Button Style -->
        <Style x:Key="CategoryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderThickness="3,0,0,0"
                                BorderBrush="Transparent">
                            <ContentPresenter VerticalAlignment="Center"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#22C55E"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#16A34A"/>
                            </DataTrigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#374151"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Product Tile Button Style -->
        <Style x:Key="ProductTileButton" TargetType="Button">
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="BorderBrush" Value="#3D3D5C"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4D4D6C"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#22C55E"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Page Tab Button Style -->
        <Style x:Key="PageTabButton" TargetType="Button">
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="Foreground" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="44"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#22C55E"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Order Item Action Button -->
        <Style x:Key="OrderItemActionButton" TargetType="Button">
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Action Button Style -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="MinHeight" Value="50"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <!-- ==================== RETAIL/SUPERMARKET MODE LAYOUT (3-Column RMS Style) ==================== -->
        <Grid Visibility="{Binding IsSupermarketMode, Converter={StaticResource BoolToVisibility}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Main 3-Column Layout -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180" MinWidth="160"/>
                    <ColumnDefinition Width="*" MinWidth="400"/>
                    <ColumnDefinition Width="380" MinWidth="340"/>
                </Grid.ColumnDefinitions>

                <!-- ========== LEFT COLUMN: Categories + Quick Keys ========== -->
                <Border Grid.Column="0" Background="#1A1A2E" BorderBrush="#3D3D5C" BorderThickness="0,0,1,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Categories Header -->
                        <Border Grid.Row="0" Background="#252538" Padding="10,12">
                            <TextBlock Text="CATEGORIES" Foreground="#9CA3AF" FontSize="11" FontWeight="Bold" HorizontalAlignment="Center"/>
                        </Border>

                        <!-- Categories List -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                            <ItemsControl ItemsSource="{Binding Categories}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Style="{StaticResource CategoryButtonStyle}"
                                                Command="{Binding DataContext.SelectCategoryCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}"
                                                Height="48">
                                            <TextBlock Text="{Binding Name}" TextTrimming="CharacterEllipsis" FontSize="12"/>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <!-- Quick Keys Section -->
                        <Border Grid.Row="2" Background="#252538" Padding="6">
                            <StackPanel>
                                <TextBlock Text="QUICK KEYS" Foreground="#6B7280" FontSize="9" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,4,0,8"/>
                                <Button Content="% DISC" Background="#F59E0B" Foreground="White" Height="40" FontSize="11" FontWeight="SemiBold"
                                        BorderThickness="0" Margin="2" Cursor="Hand" ToolTip="Apply Discount (F2)"
                                        Command="{Binding ApplyOrderDiscountAsyncCommand}">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <Button Content="VOID" Background="#EF4444" Foreground="White" Height="40" FontSize="11" FontWeight="SemiBold"
                                        BorderThickness="0" Margin="2" Cursor="Hand" ToolTip="Void Last Item (F6)"
                                        Command="{Binding VoidLastItemCommand}">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <Button Content="HOLD" Background="#8B5CF6" Foreground="White" Height="40" FontSize="11" FontWeight="SemiBold"
                                        BorderThickness="0" Margin="2" Cursor="Hand" ToolTip="Hold Order (F3)"
                                        Command="{Binding HoldOrderAsyncCommand}">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <Button Background="#06B6D4" Foreground="White" Height="40" FontSize="11" FontWeight="SemiBold"
                                        BorderThickness="0" Margin="2" Cursor="Hand" ToolTip="Recall Held Orders (F4)"
                                        Command="{Binding ShowHeldOrdersAsyncCommand}">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="RECALL"/>
                                        <TextBlock Text="{Binding HeldOrders.Count, StringFormat=' ({0})'}"
                                                   Visibility="{Binding HeldOrders.Count, Converter={StaticResource BoolToVisibility}}"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <!-- ========== CENTER COLUMN: Product Grid + Numpad ========== -->
                <Border Grid.Column="1" Background="#1E1E2E">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Search Bar with Real-Time Dropdown -->
                        <Border Grid.Row="0" Background="#252538" Padding="12,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Barcode Icon -->
                                <TextBlock Text="&#xE8B7;" FontFamily="Segoe MDL2 Assets" FontSize="20"
                                           Foreground="#22C55E" VerticalAlignment="Center" Margin="0,0,10,0"/>

                                <!-- Search Input with Dropdown -->
                                <Grid Grid.Column="1">
                                    <TextBox x:Name="RetailBarcodeInput"
                                             Text="{Binding BarcodeInput, UpdateSourceTrigger=PropertyChanged}"
                                             Background="#2D2D44"
                                             Foreground="White"
                                             CaretBrush="White"
                                             BorderBrush="#22C55E"
                                             BorderThickness="2"
                                             Padding="12,8"
                                             FontSize="16"
                                             FontWeight="Medium"
                                             VerticalContentAlignment="Center"
                                             PreviewKeyDown="SearchInput_PreviewKeyDown">
                                        <TextBox.InputBindings>
                                            <KeyBinding Key="Enter" Command="{Binding ProcessSearchEnterCommand}"/>
                                            <KeyBinding Key="Escape" Command="{Binding CloseSearchDropdownCommand}"/>
                                        </TextBox.InputBindings>
                                    </TextBox>
                                    <TextBlock Text="Scan barcode or type product name (F1)..."
                                               Foreground="#6B7280"
                                               FontSize="13"
                                               VerticalAlignment="Center"
                                               Margin="16,0,0,0"
                                               IsHitTestVisible="False">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding BarcodeInput}" Value="">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <!-- Search Results Dropdown -->
                                    <Popup x:Name="SearchDropdown"
                                           PlacementTarget="{Binding ElementName=RetailBarcodeInput}"
                                           Placement="Bottom"
                                           StaysOpen="False"
                                           AllowsTransparency="True"
                                           PopupAnimation="Fade"
                                           IsOpen="{Binding IsSearchDropdownOpen, Mode=TwoWay}">
                                        <Border Background="#2D2D44"
                                                BorderBrush="#22C55E"
                                                BorderThickness="1"
                                                CornerRadius="0,0,8,8"
                                                Width="{Binding ElementName=RetailBarcodeInput, Path=ActualWidth}"
                                                MaxHeight="320">
                                            <Grid>
                                                <!-- Loading Indicator -->
                                                <StackPanel Orientation="Horizontal" Margin="12,10"
                                                            Visibility="{Binding IsSearching, Converter={StaticResource BoolToVisibility}}">
                                                    <ProgressBar IsIndeterminate="True" Width="100" Height="3" Foreground="#22C55E"/>
                                                    <TextBlock Text="Searching..." Foreground="#9CA3AF" FontSize="12" Margin="8,0,0,0" VerticalAlignment="Center"/>
                                                </StackPanel>

                                                <!-- Results List -->
                                                <ListBox x:Name="SearchResultsList"
                                                         ItemsSource="{Binding SearchResults}"
                                                         SelectedItem="{Binding SelectedSearchResult, Mode=TwoWay}"
                                                         Background="Transparent"
                                                         BorderThickness="0"
                                                         MaxHeight="300"
                                                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                         Visibility="{Binding IsSearching, Converter={StaticResource InverseBoolToVisibility}}"
                                                         PreviewMouseLeftButtonUp="SearchResultsList_PreviewMouseLeftButtonUp">
                                                    <ListBox.ItemContainerStyle>
                                                        <Style TargetType="ListBoxItem">
                                                            <Setter Property="Background" Value="Transparent"/>
                                                            <Setter Property="Padding" Value="10,8"/>
                                                            <Setter Property="Cursor" Value="Hand"/>
                                                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="ListBoxItem">
                                                                        <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                                                                Padding="{TemplateBinding Padding}"
                                                                                BorderBrush="#3D3D5C" BorderThickness="0,0,0,1">
                                                                            <ContentPresenter/>
                                                                        </Border>
                                                                        <ControlTemplate.Triggers>
                                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                                <Setter TargetName="Bd" Property="Background" Value="#3D3D5C"/>
                                                                            </Trigger>
                                                                            <Trigger Property="IsSelected" Value="True">
                                                                                <Setter TargetName="Bd" Property="Background" Value="#22C55E"/>
                                                                            </Trigger>
                                                                        </ControlTemplate.Triggers>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </Style>
                                                    </ListBox.ItemContainerStyle>
                                                    <ListBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="44"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="55"/>
                                                                    <ColumnDefinition Width="75"/>
                                                                </Grid.ColumnDefinitions>

                                                                <!-- Product Image Thumbnail -->
                                                                <Border Width="36" Height="36" CornerRadius="4" Background="#3D3D5C" Margin="0,0,8,0">
                                                                    <Grid>
                                                                        <TextBlock Text="&#xE8B9;" FontFamily="Segoe MDL2 Assets"
                                                                                   FontSize="14" Foreground="#6B7280"
                                                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                        <Image Source="{Binding ImagePath}" Stretch="UniformToFill"
                                                                               Visibility="{Binding HasImage, Converter={StaticResource BoolToVisibility}}"/>
                                                                        <!-- Out of Stock indicator -->
                                                                        <Border Background="#CC000000" CornerRadius="4"
                                                                                Visibility="{Binding IsOutOfStock, Converter={StaticResource BoolToVisibility}}">
                                                                            <TextBlock Text="OUT" Foreground="#EF4444" FontSize="8" FontWeight="Bold"
                                                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                        </Border>
                                                                    </Grid>
                                                                </Border>

                                                                <!-- Product Info -->
                                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                                    <TextBlock Text="{Binding Name}" Foreground="White" FontSize="13"
                                                                               FontWeight="Medium" TextTrimming="CharacterEllipsis"/>
                                                                    <TextBlock Text="{Binding Code}" Foreground="#9CA3AF" FontSize="10"/>
                                                                </StackPanel>

                                                                <!-- Stock -->
                                                                <TextBlock Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="11">
                                                                    <TextBlock.Style>
                                                                        <Style TargetType="TextBlock">
                                                                            <Setter Property="Text" Value="{Binding CurrentStock, StringFormat='{}{0:N0}'}"/>
                                                                            <Setter Property="Foreground" Value="#22C55E"/>
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding IsOutOfStock}" Value="True">
                                                                                    <Setter Property="Text" Value="OUT"/>
                                                                                    <Setter Property="Foreground" Value="#EF4444"/>
                                                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                                                </DataTrigger>
                                                                                <DataTrigger Binding="{Binding IsLowStock}" Value="True">
                                                                                    <Setter Property="Foreground" Value="#F59E0B"/>
                                                                                </DataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </TextBlock.Style>
                                                                </TextBlock>

                                                                <!-- Price -->
                                                                <TextBlock Grid.Column="3" Text="{Binding Price, StringFormat='KSh {0:N0}'}"
                                                                           Foreground="#F59E0B" FontSize="12" FontWeight="SemiBold"
                                                                           VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                                            </Grid>
                                                        </DataTemplate>
                                                    </ListBox.ItemTemplate>
                                                </ListBox>

                                                <!-- No Results Message -->
                                                <TextBlock Text="No products found" Foreground="#6B7280" FontSize="13"
                                                           HorizontalAlignment="Center" Margin="12,16"
                                                           Visibility="{Binding HasNoSearchResults, Converter={StaticResource BoolToVisibility}}"/>
                                            </Grid>
                                        </Border>
                                    </Popup>
                                </Grid>

                                <!-- Search Button -->
                                <Button Grid.Column="2"
                                        Content="&#xE721;"
                                        FontFamily="Segoe MDL2 Assets"
                                        FontSize="16"
                                        Background="#22C55E"
                                        Foreground="White"
                                        Width="44"
                                        Height="38"
                                        BorderThickness="0"
                                        Margin="8,0,0,0"
                                        Command="{Binding ProcessSearchEnterCommand}"
                                        Cursor="Hand"
                                        ToolTip="Search / Lookup (Enter)">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>

                                <!-- Keyboard Shortcuts Help Button -->
                                <Button Grid.Column="3"
                                        Content="&#xE897;"
                                        FontFamily="Segoe MDL2 Assets"
                                        FontSize="16"
                                        Background="#3D3D5C"
                                        Foreground="#9CA3AF"
                                        Width="38"
                                        Height="38"
                                        BorderThickness="0"
                                        Margin="4,0,0,0"
                                        Command="{Binding ShowKeyboardShortcutsCommand}"
                                        Cursor="Hand"
                                        ToolTip="Keyboard Shortcuts (Shift+?)">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="4">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#4D4D6C"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Grid>
                        </Border>

                        <!-- Favorites Panel (Collapsible) -->
                        <Border Grid.Row="1" Background="#1A1A2E" BorderBrush="#3D3D5C" BorderThickness="0,0,0,1"
                                Visibility="{Binding HasFavorites, Converter={StaticResource BoolToVisibility}}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Favorites Header (Clickable to toggle) -->
                                <Border Grid.Row="0" Background="#252538" Padding="10,6" Cursor="Hand"
                                        MouseLeftButtonUp="FavoritesHeader_Click">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="&#xE735;" FontFamily="Segoe MDL2 Assets" Foreground="#F59E0B"
                                                   FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <TextBlock Grid.Column="1" Text="QUICK FAVORITES" Foreground="#9CA3AF"
                                                   FontSize="11" FontWeight="Bold" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="2" FontFamily="Segoe MDL2 Assets" Foreground="#6B7280" FontSize="12"
                                                   VerticalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="&#xE70D;"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsFavoritesPanelExpanded}" Value="False">
                                                            <Setter Property="Text" Value="&#xE70E;"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </Border>

                                <!-- Favorites Items -->
                                <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled"
                                              Visibility="{Binding IsFavoritesPanelExpanded, Converter={StaticResource BoolToVisibility}}"
                                              MaxHeight="100">
                                    <ItemsControl ItemsSource="{Binding Favorites}" Margin="6,6">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Button Margin="3" Cursor="Hand"
                                                        Command="{Binding DataContext.AddFavoriteToOrderAsyncCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                        CommandParameter="{Binding}"
                                                        IsEnabled="{Binding IsInStock}">
                                                    <Button.Template>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border x:Name="border" Background="#2D2D44" BorderBrush="#F59E0B"
                                                                    BorderThickness="2" CornerRadius="8" Padding="6">
                                                                <Grid Width="70" Height="60">
                                                                    <Grid.RowDefinitions>
                                                                        <RowDefinition Height="36"/>
                                                                        <RowDefinition Height="*"/>
                                                                    </Grid.RowDefinitions>
                                                                    <!-- Product Image -->
                                                                    <Border Grid.Row="0" Background="#3D3D5C" CornerRadius="4" ClipToBounds="True">
                                                                        <Grid>
                                                                            <TextBlock Text="&#xE8B9;" FontFamily="Segoe MDL2 Assets"
                                                                                       FontSize="16" Foreground="#6B7280"
                                                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                            <Image Source="{Binding ImagePath}" Stretch="UniformToFill"
                                                                                   Visibility="{Binding HasImage, Converter={StaticResource BoolToVisibility}}"/>
                                                                            <!-- Out of Stock -->
                                                                            <Border Background="#CC000000" CornerRadius="4"
                                                                                    Visibility="{Binding IsOutOfStock, Converter={StaticResource BoolToVisibility}}">
                                                                                <TextBlock Text="OUT" Foreground="#EF4444" FontSize="8" FontWeight="Bold"
                                                                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                            </Border>
                                                                        </Grid>
                                                                    </Border>
                                                                    <!-- Product Name -->
                                                                    <TextBlock Grid.Row="1" Text="{Binding Name}" Foreground="White"
                                                                               FontSize="9" FontWeight="Medium" TextTrimming="CharacterEllipsis"
                                                                               TextWrapping="Wrap" MaxHeight="20" VerticalAlignment="Center"
                                                                               HorizontalAlignment="Center" TextAlignment="Center" Margin="0,2,0,0"/>
                                                                </Grid>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsPressed" Value="True">
                                                                    <Setter TargetName="border" Property="Background" Value="#4D4D6C"/>
                                                                </Trigger>
                                                                <Trigger Property="IsEnabled" Value="False">
                                                                    <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Button.Template>
                                                </Button>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Grid>
                        </Border>

                        <!-- Product Grid with Pagination -->
                        <Grid Grid.Row="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Pagination Tabs -->
                            <Border Grid.Row="0" Background="#1A1A2E" Padding="8,6">
                                <ItemsControl ItemsSource="{Binding PageNumbers}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button Content="{Binding}" Margin="0,0,6,0"
                                                    Command="{Binding DataContext.GoToPageCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                    CommandParameter="{Binding}">
                                                <Button.Style>
                                                    <Style TargetType="Button" BasedOn="{StaticResource PageTabButton}">
                                                        <Style.Triggers>
                                                            <DataTrigger Value="True">
                                                                <DataTrigger.Binding>
                                                                    <MultiBinding Converter="{StaticResource IsCurrentPageConverter}">
                                                                        <Binding Path="."/>
                                                                        <Binding Path="DataContext.CurrentPageNumber" RelativeSource="{RelativeSource AncestorType=ItemsControl}"/>
                                                                    </MultiBinding>
                                                                </DataTrigger.Binding>
                                                                <Setter Property="Background" Value="#22C55E"/>
                                                                <Setter Property="Foreground" Value="White"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Border>

                            <!-- Product Grid -->
                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                                <ItemsControl ItemsSource="{Binding Products}" Margin="6">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button Style="{StaticResource ProductTileButton}"
                                                    IsEnabled="{Binding IsInStock}"
                                                    Command="{Binding DataContext.AddToOrderAsyncCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                    CommandParameter="{Binding}">
                                                <Grid Width="100" Height="115">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="70"/>
                                                        <RowDefinition Height="*"/>
                                                    </Grid.RowDefinitions>

                                                    <!-- Product Image or Placeholder -->
                                                    <Border Grid.Row="0" Background="#3D3D5C" CornerRadius="6,6,0,0" ClipToBounds="True">
                                                        <Grid>
                                                            <!-- Placeholder Icon (shows when no image) -->
                                                            <TextBlock Text="&#xE8B9;" FontFamily="Segoe MDL2 Assets" FontSize="24"
                                                                       Foreground="#6B7280" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            <!-- Product Image -->
                                                            <Image Source="{Binding ImagePath}" Stretch="UniformToFill"
                                                                   RenderOptions.BitmapScalingMode="HighQuality"
                                                                   Visibility="{Binding HasImage, Converter={StaticResource BoolToVisibility}}"/>
                                                            <!-- Offer Badge -->
                                                            <Border Background="#EF4444" CornerRadius="0,6,0,4" Padding="3,1"
                                                                    HorizontalAlignment="Right" VerticalAlignment="Top"
                                                                    Visibility="{Binding HasActiveOffer, Converter={StaticResource BoolToVisibility}}">
                                                                <TextBlock Text="OFFER" Foreground="White" FontWeight="Bold" FontSize="8"/>
                                                            </Border>
                                                            <!-- Low Stock Warning Badge -->
                                                            <Border Background="#F59E0B" CornerRadius="4,0,4,0" Padding="3,1"
                                                                    HorizontalAlignment="Left" VerticalAlignment="Top"
                                                                    Visibility="{Binding IsLowStock, Converter={StaticResource BoolToVisibility}}">
                                                                <TextBlock Text="LOW" Foreground="White" FontWeight="Bold" FontSize="7"/>
                                                            </Border>
                                                            <!-- Out of Stock Overlay -->
                                                            <Border Background="#CC000000" CornerRadius="6,6,0,0"
                                                                    Visibility="{Binding IsOutOfStock, Converter={StaticResource BoolToVisibility}}">
                                                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                                                    <TextBlock Text="&#xE711;" FontFamily="Segoe MDL2 Assets"
                                                                               FontSize="16" Foreground="#EF4444" HorizontalAlignment="Center"/>
                                                                    <TextBlock Text="OUT" Foreground="#EF4444" FontWeight="Bold" FontSize="10"/>
                                                                </StackPanel>
                                                            </Border>
                                                            <!-- Favorite Toggle Button -->
                                                            <Button HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="2,0,0,2"
                                                                    Width="20" Height="20" Cursor="Hand"
                                                                    Command="{Binding DataContext.ToggleFavoriteAsyncCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                                    CommandParameter="{Binding}" ToolTip="Toggle Favorite">
                                                                <Button.Template>
                                                                    <ControlTemplate TargetType="Button">
                                                                        <Border Background="#80000000" CornerRadius="3">
                                                                            <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="12"
                                                                                       HorizontalAlignment="Center" VerticalAlignment="Center">
                                                                                <TextBlock.Style>
                                                                                    <Style TargetType="TextBlock">
                                                                                        <Setter Property="Text" Value="&#xE734;"/>
                                                                                        <Setter Property="Foreground" Value="#9CA3AF"/>
                                                                                        <Style.Triggers>
                                                                                            <DataTrigger Binding="{Binding IsFavorite}" Value="True">
                                                                                                <Setter Property="Text" Value="&#xE735;"/>
                                                                                                <Setter Property="Foreground" Value="#F59E0B"/>
                                                                                            </DataTrigger>
                                                                                        </Style.Triggers>
                                                                                    </Style>
                                                                                </TextBlock.Style>
                                                                            </TextBlock>
                                                                        </Border>
                                                                    </ControlTemplate>
                                                                </Button.Template>
                                                            </Button>
                                                            <!-- Profit Margin Badge -->
                                                            <Border Background="#80000000" CornerRadius="3" Padding="3,1" Margin="0,0,2,2"
                                                                    HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                                                    ToolTip="Profit Margin"
                                                                    Visibility="{Binding HasCostPrice, Converter={StaticResource BoolToVisibility}}">
                                                                <TextBlock FontSize="8" FontWeight="Bold">
                                                                    <TextBlock.Style>
                                                                        <Style TargetType="TextBlock">
                                                                            <Setter Property="Text" Value="{Binding ProfitMarginPercent, StringFormat='{}{0:N0}%'}"/>
                                                                            <Setter Property="Foreground" Value="#22C55E"/>
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding IsProfitable}" Value="False">
                                                                                    <Setter Property="Foreground" Value="#EF4444"/>
                                                                                </DataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </TextBlock.Style>
                                                                </TextBlock>
                                                            </Border>
                                                        </Grid>
                                                    </Border>

                                                    <!-- Product Info -->
                                                    <StackPanel Grid.Row="1" VerticalAlignment="Center" Margin="5,3">
                                                        <TextBlock Text="{Binding Name}" Foreground="White" FontSize="11" FontWeight="Medium"
                                                                   TextTrimming="CharacterEllipsis" MaxHeight="28" TextWrapping="Wrap"/>
                                                        <TextBlock Text="{Binding Price, StringFormat='KSh {0:N0}'}"
                                                                   Foreground="#22C55E" FontSize="11" FontWeight="SemiBold" Margin="0,2,0,0"
                                                                   Visibility="{Binding HasActiveOffer, Converter={StaticResource InverseBoolToVisibility}}"/>
                                                        <!-- Offer Price -->
                                                        <StackPanel Visibility="{Binding HasActiveOffer, Converter={StaticResource BoolToVisibility}}" Orientation="Horizontal" Margin="0,2,0,0">
                                                            <TextBlock Text="{Binding OfferPrice, StringFormat='KSh {0:N0}'}"
                                                                       Foreground="#22C55E" FontSize="11" FontWeight="Bold"/>
                                                            <TextBlock Text="{Binding SavingsPercent, StringFormat=' -{0}%'}"
                                                                       Foreground="#EF4444" FontSize="9" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </Grid>
                                            </Button>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>

                        <!-- Numeric Keypad (Bottom of Center Column) -->
                        <Border Grid.Row="3" Background="#252538" Padding="8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Numpad Grid -->
                                <Grid Grid.Column="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="48"/>
                                        <RowDefinition Height="48"/>
                                        <RowDefinition Height="48"/>
                                        <RowDefinition Height="48"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="60"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Row 1 -->
                                    <Button Grid.Row="0" Grid.Column="0" Content="7" Background="#374151" Foreground="White" FontSize="20" FontWeight="SemiBold" Margin="2" BorderThickness="0" Cursor="Hand"
                                            Command="{Binding KeypadDigitCommand}" CommandParameter="7">
                                        <Button.Template><ControlTemplate TargetType="Button"><Border Background="{TemplateBinding Background}" CornerRadius="6"><ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/></Border></ControlTemplate></Button.Template>
                                    </Button>
                                    <Button Grid.Row="0" Grid.Column="1" Content="8" Background="#374151" Foreground="White" FontSize="20" FontWeight="SemiBold" Margin="2" BorderThickness="0" Cursor="Hand"
                                            Command="{Binding KeypadDigitCommand}" CommandParameter="8">
                                        <Button.Template><ControlTemplate TargetType="Button"><Border Background="{TemplateBinding Background}" CornerRadius="6"><ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/></Border></ControlTemplate></Button.Template>
                                    </Button>
                                    <Button Grid.Row="0" Grid.Column="2" Content="9" Background="#374151" Foreground="White" FontSize="20" FontWeight="SemiBold" Margin="2" BorderThickness="0" Cursor="Hand"
                                            Command="{Binding KeypadDigitCommand}" CommandParameter="9">
                                        <Button.Template><ControlTemplate TargetType="Button"><Border Background="{TemplateBinding Background}" CornerRadius="6"><ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/></Border></ControlTemplate></Button.Template>
                                    </Button>
                                    <Button Grid.Row="0" Grid.Column="3" Grid.RowSpan="2" Content="QTY" Background="#F59E0B" Foreground="White" FontSize="14" FontWeight="Bold" Margin="2" BorderThickness="0" Cursor="Hand"
                                            Command="{Binding ApplyQuantityCommand}" ToolTip="Apply quantity to next item">
                                        <Button.Template><ControlTemplate TargetType="Button"><Border Background="{TemplateBinding Background}" CornerRadius="6"><ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/></Border></ControlTemplate></Button.Template>
                                    </Button>

                                    <!-- Row 2 -->
                                    <Button Grid.Row="1" Grid.Column="0" Content="4" Background="#374151" Foreground="White" FontSize="20" FontWeight="SemiBold" Margin="2" BorderThickness="0" Cursor="Hand"
                                            Command="{Binding KeypadDigitCommand}" CommandParameter="4">
                                        <Button.Template><ControlTemplate TargetType="Button"><Border Background="{TemplateBinding Background}" CornerRadius="6"><ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/></Border></ControlTemplate></Button.Template>
                                    </Button>
                                    <Button Grid.Row="1" Grid.Column="1" Content="5" Background="#374151" Foreground="White" FontSize="20" FontWeight="SemiBold" Margin="2" BorderThickness="0" Cursor="Hand"
                                            Command="{Binding KeypadDigitCommand}" CommandParameter="5">
                                        <Button.Template><ControlTemplate TargetType="Button"><Border Background="{TemplateBinding Background}" CornerRadius="6"><ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/></Border></ControlTemplate></Button.Template>
                                    </Button>
                                    <Button Grid.Row="1" Grid.Column="2" Content="6" Background="#374151" Foreground="White" FontSize="20" FontWeight="SemiBold" Margin="2" BorderThickness="0" Cursor="Hand"
                                            Command="{Binding KeypadDigitCommand}" CommandParameter="6">
                                        <Button.Template><ControlTemplate TargetType="Button"><Border Background="{TemplateBinding Background}" CornerRadius="6"><ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/></Border></ControlTemplate></Button.Template>
                                    </Button>

                                    <!-- Row 3 -->
                                    <Button Grid.Row="2" Grid.Column="0" Content="1" Background="#374151" Foreground="White" FontSize="20" FontWeight="SemiBold" Margin="2" BorderThickness="0" Cursor="Hand"
                                            Command="{Binding KeypadDigitCommand}" CommandParameter="1">
                                        <Button.Template><ControlTemplate TargetType="Button"><Border Background="{TemplateBinding Background}" CornerRadius="6"><ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/></Border></ControlTemplate></Button.Template>
                                    </Button>
                                    <Button Grid.Row="2" Grid.Column="1" Content="2" Background="#374151" Foreground="White" FontSize="20" FontWeight="SemiBold" Margin="2" BorderThickness="0" Cursor="Hand"
                                            Command="{Binding KeypadDigitCommand}" CommandParameter="2">
                                        <Button.Template><ControlTemplate TargetType="Button"><Border Background="{TemplateBinding Background}" CornerRadius="6"><ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/></Border></ControlTemplate></Button.Template>
                                    </Button>
                                    <Button Grid.Row="2" Grid.Column="2" Content="3" Background="#374151" Foreground="White" FontSize="20" FontWeight="SemiBold" Margin="2" BorderThickness="0" Cursor="Hand"
                                            Command="{Binding KeypadDigitCommand}" CommandParameter="3">
                                        <Button.Template><ControlTemplate TargetType="Button"><Border Background="{TemplateBinding Background}" CornerRadius="6"><ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/></Border></ControlTemplate></Button.Template>
                                    </Button>
                                    <Button Grid.Row="2" Grid.Column="3" Grid.RowSpan="2" Content="CLR" Background="#EF4444" Foreground="White" FontSize="14" FontWeight="Bold" Margin="2" BorderThickness="0" Cursor="Hand"
                                            Command="{Binding KeypadClearCommand}" ToolTip="Clear quantity input">
                                        <Button.Template><ControlTemplate TargetType="Button"><Border Background="{TemplateBinding Background}" CornerRadius="6"><ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/></Border></ControlTemplate></Button.Template>
                                    </Button>

                                    <!-- Row 4 -->
                                    <Button Grid.Row="3" Grid.Column="0" Content="0" Background="#374151" Foreground="White" FontSize="20" FontWeight="SemiBold" Margin="2" BorderThickness="0" Cursor="Hand"
                                            Command="{Binding KeypadDigitCommand}" CommandParameter="0">
                                        <Button.Template><ControlTemplate TargetType="Button"><Border Background="{TemplateBinding Background}" CornerRadius="6"><ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/></Border></ControlTemplate></Button.Template>
                                    </Button>
                                    <Button Grid.Row="3" Grid.Column="1" Content="." Background="#374151" Foreground="White" FontSize="20" FontWeight="SemiBold" Margin="2" BorderThickness="0" Cursor="Hand"
                                            Command="{Binding KeypadDigitCommand}" CommandParameter=".">
                                        <Button.Template><ControlTemplate TargetType="Button"><Border Background="{TemplateBinding Background}" CornerRadius="6"><ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/></Border></ControlTemplate></Button.Template>
                                    </Button>
                                    <Button Grid.Row="3" Grid.Column="2" Content="&#xE750;" FontFamily="Segoe MDL2 Assets" Background="#374151" Foreground="White" FontSize="16" Margin="2" BorderThickness="0" Cursor="Hand"
                                            Command="{Binding KeypadBackspaceCommand}" ToolTip="Backspace">
                                        <Button.Template><ControlTemplate TargetType="Button"><Border Background="{TemplateBinding Background}" CornerRadius="6"><ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/></Border></ControlTemplate></Button.Template>
                                    </Button>
                                </Grid>

                                <!-- Keypad Display -->
                                <Border Grid.Column="1" Background="#1A1A2E" CornerRadius="6" Padding="12,8" Margin="8,0,0,0" MinWidth="80">
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="QTY" Foreground="#6B7280" FontSize="10" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding KeypadInput, FallbackValue='1'}" Foreground="#22C55E" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

                <!-- ========== RIGHT COLUMN: Order Summary + Payments ========== -->
                <Border Grid.Column="2" Background="#252538" BorderBrush="#3D3D5C" BorderThickness="1,0,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Order Header -->
                        <Border Grid.Row="0" Background="#1E1E2E" Padding="12,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="CURRENT ORDER" Foreground="White" FontSize="14" FontWeight="Bold" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="{Binding OrderItems.Count, StringFormat='{}{0} items'}" Foreground="#9CA3AF" FontSize="12" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                <Button Grid.Column="2" Content="&#xE74D;" FontFamily="Segoe MDL2 Assets" Background="#6B7280" Foreground="White" Width="32" Height="32" FontSize="14" BorderThickness="0" Cursor="Hand"
                                        Command="{Binding ClearOrderCommand}" ToolTip="Clear All (F8)">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Grid>
                        </Border>

                        <!-- Customer Section (Between Header and Items) -->
                        <Border Grid.Row="0" Background="#252538" Padding="8,6" Margin="0,0,0,0"
                                VerticalAlignment="Bottom" Height="36">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Customer Icon/Button -->
                                <Button Content="&#xE77B;" FontFamily="Segoe MDL2 Assets" FontSize="14"
                                        Background="Transparent" BorderThickness="0" Cursor="Hand"
                                        Command="{Binding ToggleLoyaltyPanelAsyncCommand}" ToolTip="Search Customer (F12)"
                                        VerticalAlignment="Center">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Foreground" Value="#6B7280"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasLoyaltyMember}" Value="True">
                                                    <Setter Property="Foreground" Value="#22C55E"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <!-- Customer Info or "Add Customer" Text -->
                                <Grid Grid.Column="1" Margin="8,0">
                                    <!-- No Customer -->
                                    <TextBlock Text="No customer assigned" Foreground="#6B7280" FontSize="11"
                                               VerticalAlignment="Center"
                                               Visibility="{Binding HasLoyaltyMember, Converter={StaticResource InverseBoolToVisibility}}"/>
                                    <!-- Customer Assigned -->
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center"
                                                Visibility="{Binding HasLoyaltyMember, Converter={StaticResource BoolToVisibility}}">
                                        <TextBlock Text="{Binding AttachedLoyaltyMember.Name, FallbackValue='Customer'}"
                                                   Foreground="White" FontSize="11" FontWeight="SemiBold"/>
                                        <TextBlock Text=" | " Foreground="#4B5563" FontSize="11"/>
                                        <TextBlock Text="{Binding AttachedLoyaltyMember.PointsBalance, StringFormat='{}{0:N0} pts'}"
                                                   Foreground="#22C55E" FontSize="11"/>
                                    </StackPanel>
                                </Grid>

                                <!-- Clear Customer Button -->
                                <Button Grid.Column="2" Content="&#xE711;" FontFamily="Segoe MDL2 Assets"
                                        Background="Transparent" Foreground="#6B7280" FontSize="10"
                                        BorderThickness="0" Cursor="Hand" Width="24" Height="24"
                                        Command="{Binding DetachLoyaltyMemberCommand}" ToolTip="Clear Customer"
                                        Visibility="{Binding HasLoyaltyMember, Converter={StaticResource BoolToVisibility}}">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="Transparent" CornerRadius="4">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Foreground" Value="#EF4444"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Grid>
                        </Border>

                        <!-- Order Items List -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                            <Grid>
                                <!-- Items List -->
                                <ItemsControl ItemsSource="{Binding OrderItems}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#2D2D44" BorderBrush="#3D3D5C" BorderThickness="0,0,0,1" Padding="10,8">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>

                                                    <!-- Product Name with Note Indicator -->
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding ProductName}" Foreground="White" FontSize="13" FontWeight="Medium" TextTrimming="CharacterEllipsis"/>
                                                        <!-- Note Indicator -->
                                                        <TextBlock Text="&#xE70B;" FontFamily="Segoe MDL2 Assets" FontSize="10" Foreground="#F59E0B"
                                                                   Margin="6,0,0,0" VerticalAlignment="Center" ToolTip="{Binding Notes}"
                                                                   Visibility="{Binding HasNotes, Converter={StaticResource BoolToVisibility}}"/>
                                                    </StackPanel>

                                                    <!-- Note Button -->
                                                    <Button Grid.Column="1" Content="&#xE70B;" FontFamily="Segoe MDL2 Assets"
                                                            Foreground="#9CA3AF" Width="24" Height="24" FontSize="11" BorderThickness="0" Cursor="Hand"
                                                            Command="{Binding DataContext.EditItemNotesCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}" VerticalAlignment="Center" Margin="4,0" ToolTip="Add/Edit Notes">
                                                        <Button.Template>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border x:Name="border" Background="Transparent" CornerRadius="4">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter TargetName="border" Property="Background" Value="#3D3D5C"/>
                                                                        <Setter Property="Foreground" Value="#F59E0B"/>
                                                                    </Trigger>
                                                                    <DataTrigger Binding="{Binding HasNotes}" Value="True">
                                                                        <Setter Property="Foreground" Value="#F59E0B"/>
                                                                    </DataTrigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Button.Template>
                                                    </Button>

                                                    <!-- Delete Button -->
                                                    <Button Grid.Column="2" Grid.RowSpan="2" Content="&#xE74D;" FontFamily="Segoe MDL2 Assets"
                                                            Background="#EF4444" Foreground="White" Width="28" Height="28" FontSize="11" BorderThickness="0" Cursor="Hand"
                                                            Command="{Binding DataContext.RemoveOrderItemCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}" VerticalAlignment="Center" Margin="4,0,0,0">
                                                        <Button.Template>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Button.Template>
                                                    </Button>

                                                    <!-- Price and Quantity Row -->
                                                    <Grid Grid.Row="1" Margin="0,6,0,0">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <!-- Quantity Controls -->
                                                        <StackPanel Orientation="Horizontal">
                                                            <Button Content="-" Background="#4B5563" Foreground="White" Width="26" Height="26" FontWeight="Bold" FontSize="14" BorderThickness="0" Cursor="Hand"
                                                                    Command="{Binding DataContext.DecreaseQuantityCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                    CommandParameter="{Binding}">
                                                                <Button.Template>
                                                                    <ControlTemplate TargetType="Button">
                                                                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                        </Border>
                                                                    </ControlTemplate>
                                                                </Button.Template>
                                                            </Button>
                                                            <TextBlock Text="{Binding Quantity}" Foreground="White" FontSize="14" FontWeight="SemiBold" Width="32" TextAlignment="Center" VerticalAlignment="Center"/>
                                                            <Button Content="+" Background="#22C55E" Foreground="White" Width="26" Height="26" FontWeight="Bold" FontSize="14" BorderThickness="0" Cursor="Hand"
                                                                    Command="{Binding DataContext.IncreaseQuantityCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                    CommandParameter="{Binding}">
                                                                <Button.Template>
                                                                    <ControlTemplate TargetType="Button">
                                                                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                        </Border>
                                                                    </ControlTemplate>
                                                                </Button.Template>
                                                            </Button>
                                                        </StackPanel>

                                                        <!-- Unit Price -->
                                                        <TextBlock Grid.Column="1" Text="{Binding Price, StringFormat='@ {0:N0}'}" Foreground="#9CA3AF" FontSize="11" VerticalAlignment="Center" Margin="8,0,0,0"/>

                                                        <!-- Line Total -->
                                                        <TextBlock Grid.Column="2" Text="{Binding LineTotal, StringFormat='KSh {0:N2}'}" Foreground="#22C55E" FontSize="13" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                                    </Grid>

                                                    <!-- Notes Display Row -->
                                                    <Border Grid.Row="2" Grid.ColumnSpan="3" Background="#1E1E2E" CornerRadius="4" Padding="6,4" Margin="0,6,0,0"
                                                            Visibility="{Binding HasNotes, Converter={StaticResource BoolToVisibility}}">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>
                                                            <TextBlock Text="&#xE70B;" FontFamily="Segoe MDL2 Assets" FontSize="10"
                                                                       Foreground="#F59E0B" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                                            <TextBlock Grid.Column="1" Text="{Binding Notes}" Foreground="#D1D5DB"
                                                                       FontSize="11" FontStyle="Italic" TextTrimming="CharacterEllipsis"
                                                                       VerticalAlignment="Center"/>
                                                        </Grid>
                                                    </Border>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Empty State -->
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                                            Visibility="{Binding OrderItems.Count, Converter={StaticResource InverseBoolToVisibility}}">
                                    <TextBlock Text="&#xE7BF;" FontFamily="Segoe MDL2 Assets" FontSize="48" Foreground="#4B5563" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Scan items or select products" Foreground="#6B7280" FontSize="13" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                                </StackPanel>
                            </Grid>
                        </ScrollViewer>

                        <!-- Totals Summary -->
                        <Border Grid.Row="2" Background="#1E1E2E" Padding="12,10">
                            <StackPanel>
                                <Grid Margin="0,3">
                                    <TextBlock Text="Subtotal:" Foreground="#9CA3AF" FontSize="13"/>
                                    <TextBlock Text="{Binding OrderSubtotal, StringFormat='KSh {0:N2}'}" Foreground="White" FontSize="13" HorizontalAlignment="Right"/>
                                </Grid>
                                <Grid Margin="0,3">
                                    <TextBlock Text="VAT (16%):" Foreground="#9CA3AF" FontSize="13"/>
                                    <TextBlock Text="{Binding OrderTax, StringFormat='KSh {0:N2}'}" Foreground="White" FontSize="13" HorizontalAlignment="Right"/>
                                </Grid>
                                <Grid Margin="0,3" Visibility="{Binding HasOrderDiscount, Converter={StaticResource BoolToVisibility}}">
                                    <TextBlock Text="Discount:" Foreground="#EF4444" FontSize="13"/>
                                    <TextBlock Text="{Binding OrderDiscount, StringFormat='-KSh {0:N2}'}" Foreground="#EF4444" FontSize="13" HorizontalAlignment="Right"/>
                                </Grid>
                                <Border Height="1" Background="#3D3D5C" Margin="0,8"/>
                                <Grid>
                                    <TextBlock Text="TOTAL:" Foreground="White" FontSize="16" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding OrderTotal, StringFormat='KSh {0:N2}'}" Foreground="#22C55E" FontSize="22" FontWeight="Bold" HorizontalAlignment="Right"/>
                                </Grid>
                                <!-- Profit Margin (visible when cost data available) -->
                                <Grid Margin="0,6,0,0" Visibility="{Binding HasOrderProfit, Converter={StaticResource BoolToVisibility}}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE9D9;" FontFamily="Segoe MDL2 Assets" Foreground="#6366F1" FontSize="11" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                        <TextBlock Text="Margin:" Foreground="#6366F1" FontSize="11"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock Text="{Binding OrderProfit, StringFormat='KSh {0:N2}'}" Foreground="#6366F1" FontSize="11" FontWeight="Medium"/>
                                        <TextBlock Text=" (" Foreground="#6B7280" FontSize="10"/>
                                        <TextBlock Text="{Binding OrderProfitPercent, StringFormat='{}{0:N1}%'}" Foreground="#6366F1" FontSize="10" FontWeight="Medium"/>
                                        <TextBlock Text=")" Foreground="#6B7280" FontSize="10"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Payment Buttons -->
                        <Border Grid.Row="3" Background="#252538" Padding="10">
                            <StackPanel>
                                <!-- Cash Button -->
                                <Button Background="#22C55E" Foreground="White" Height="52" Margin="0,0,0,8" FontSize="16" FontWeight="Bold" BorderThickness="0" Cursor="Hand"
                                        Command="{Binding SubmitOrderAsyncCommand}" ToolTip="Pay with Cash (F5)">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE8C7;" FontFamily="Segoe MDL2 Assets" FontSize="18" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                        <TextBlock Text="CASH (F5)" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <!-- M-Pesa and Card Buttons -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Button Grid.Column="0" Background="#16A34A" Foreground="White" Height="44" Margin="0,0,4,0" FontSize="13" FontWeight="Bold" BorderThickness="0" Cursor="Hand"
                                            Command="{Binding InitiateMpesaPaymentAsyncCommand}" ToolTip="M-Pesa Payment (F6)">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                        <TextBlock Text="M-PESA (F6)" VerticalAlignment="Center"/>
                                    </Button>
                                    <Button Grid.Column="1" Background="#3B82F6" Foreground="White" Height="44" Margin="4,0,0,0" FontSize="13" FontWeight="Bold" BorderThickness="0" Cursor="Hand"
                                            Command="{Binding CardPaymentCommand}" ToolTip="Card Payment (F7)">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                        <TextBlock Text="CARD (F7)" VerticalAlignment="Center"/>
                                    </Button>
                                </Grid>

                                <!-- Split Payment Button -->
                                <Button Background="#6366F1" Foreground="White" Height="40" Margin="0,8,0,0" FontSize="12" FontWeight="SemiBold" BorderThickness="0" Cursor="Hand"
                                        Command="{Binding OpenSplitPaymentCommand}" ToolTip="Split Payment - Pay with multiple methods">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE8AB;" FontFamily="Segoe MDL2 Assets" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <TextBlock Text="SPLIT PAYMENT" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </Grid>

            <!-- Status Bar -->
            <Border Grid.Row="1" Background="#1A1A2E" Padding="12,6">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="F1-Search | F2-Discount | F3-Hold | F4-Recall | F5/F9-Cash | F6-M-Pesa | F7-Card | F8-Clear | F10-Void"
                               Foreground="#6B7280" FontSize="10"/>
                    <TextBlock Grid.Column="2" Text="{Binding CurrentTime, StringFormat='{}{0:HH:mm}'}" Foreground="#9CA3AF" FontSize="11" Margin="0,0,16,0"/>
                    <StackPanel Grid.Column="3" Orientation="Horizontal">
                        <TextBlock Text="Cashier: " Foreground="#6B7280" FontSize="11"/>
                        <TextBlock Text="{Binding CurrentCashierName}" Foreground="#9CA3AF" FontSize="11"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- ==================== RESTAURANT MODE LAYOUT (Commented - Not for Supermarket) ==================== -->
        <Grid Visibility="{Binding IsSupermarketMode, Converter={StaticResource InverseBoolToVisibility}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="380"/>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT: Order Summary for Restaurant -->
            <Border Grid.Column="0" Background="#1E1E2E">
                <TextBlock Text="Restaurant Mode" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Border>

            <!-- MIDDLE: Category Panel for Restaurant -->
            <Border Grid.Column="1" Background="#1A1A2E">
                <TextBlock Text="Categories" Foreground="#6B7280" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Border>

            <!-- RIGHT: Product Grid for Restaurant -->
            <Border Grid.Column="2" Background="#1E1E2E">
                <TextBlock Text="Products" Foreground="#6B7280" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Border>
        </Grid>

        <!-- Held Orders Panel Overlay -->
        <Border Background="#80000000"
                Visibility="{Binding IsHeldOrdersPanelVisible, Converter={StaticResource BoolToVisibility}}"
                MouseDown="HeldOrdersOverlay_MouseDown">
            <Border Background="#252538"
                    CornerRadius="12"
                    Width="400"
                    MaxHeight="500"
                    Margin="0,50"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    MouseDown="HeldOrdersPanel_MouseDown">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Held Orders Header -->
                    <Border Grid.Row="0" Background="#1E1E2E" CornerRadius="12,12,0,0" Padding="16,12">
                        <Grid>
                            <TextBlock Text="Held Orders" Foreground="White" FontSize="16" FontWeight="Bold"/>
                            <Button Content="&#xE711;" FontFamily="Segoe MDL2 Assets" Background="Transparent" Foreground="#9CA3AF"
                                    HorizontalAlignment="Right" Width="32" Height="32" BorderThickness="0" Cursor="Hand"
                                    Command="{Binding ShowHeldOrdersAsyncCommand}">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Held Orders List -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" MaxHeight="350">
                        <ItemsControl ItemsSource="{Binding HeldOrders}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#2D2D44" BorderBrush="#3D3D5C" BorderThickness="0,0,0,1" Padding="12,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel>
                                                <TextBlock Text="{Binding OrderNumber}" Foreground="White" FontSize="14" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding HoldTime, StringFormat='Held at {0:HH:mm}'}" Foreground="#9CA3AF" FontSize="11"/>
                                                <TextBlock Text="{Binding ItemCount, StringFormat='{}{0} items'}" Foreground="#6B7280" FontSize="11"/>
                                            </StackPanel>
                                            <Button Grid.Column="1" Content="Recall" Background="#22C55E" Foreground="White" Height="32" Padding="12,0" FontSize="12" FontWeight="SemiBold" BorderThickness="0" Cursor="Hand"
                                                    Command="{Binding DataContext.RecallHeldOrderCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Empty State for Held Orders -->
                    <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"
                                Visibility="{Binding HeldOrders.Count, Converter={StaticResource InverseBoolToVisibility}}">
                        <TextBlock Text="&#xE74E;" FontFamily="Segoe MDL2 Assets" FontSize="32" Foreground="#4B5563" HorizontalAlignment="Center"/>
                        <TextBlock Text="No held orders" Foreground="#6B7280" FontSize="12" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>

        <!-- Customer Search Panel Overlay -->
        <Border Background="#80000000"
                Visibility="{Binding IsLoyaltyPanelVisible, Converter={StaticResource BoolToVisibility}}"
                MouseDown="CustomerSearchOverlay_MouseDown">
            <Border Background="#252538"
                    CornerRadius="12"
                    Width="420"
                    MaxHeight="450"
                    Margin="0,80"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    MouseDown="CustomerSearchPanel_MouseDown">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" Background="#1E1E2E" CornerRadius="12,12,0,0" Padding="16,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="&#xE77B;" FontFamily="Segoe MDL2 Assets" FontSize="18" Foreground="#22C55E"
                                       VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBlock Grid.Column="1" Text="Search Customer" Foreground="White" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
                            <Button Grid.Column="2" Content="&#xE711;" FontFamily="Segoe MDL2 Assets" Background="Transparent" Foreground="#9CA3AF"
                                    Width="32" Height="32" BorderThickness="0" Cursor="Hand"
                                    Command="{Binding ToggleLoyaltyPanelAsyncCommand}">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Search Box -->
                    <Border Grid.Row="1" Background="#2D2D44" Padding="12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Text="{Binding LoyaltySearchPhone, UpdateSourceTrigger=PropertyChanged}"
                                     Background="#1E1E2E" Foreground="White" CaretBrush="White"
                                     BorderThickness="0" Padding="10,8" FontSize="14"
                                     VerticalAlignment="Center">
                                <TextBox.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="6,0,0,6"/>
                                    </Style>
                                </TextBox.Resources>
                                <TextBox.InputBindings>
                                    <KeyBinding Key="Return" Command="{Binding SearchLoyaltyMemberAsyncCommand}"/>
                                </TextBox.InputBindings>
                            </TextBox>
                            <Button Grid.Column="1" Content="Search" Background="#22C55E" Foreground="White"
                                    Padding="16,8" FontSize="13" FontWeight="SemiBold" BorderThickness="0" Cursor="Hand"
                                    Command="{Binding SearchLoyaltyMemberAsyncCommand}">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="0,6,6,0" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#16A34A"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Search Results -->
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" MaxHeight="280">
                        <ItemsControl ItemsSource="{Binding LoyaltySearchResults}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#2D2D44" BorderBrush="#3D3D5C" BorderThickness="0,0,0,1" Padding="12,10" Cursor="Hand">
                                        <Border.InputBindings>
                                            <MouseBinding MouseAction="LeftClick"
                                                          Command="{Binding DataContext.AttachLoyaltyMemberAsyncCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                          CommandParameter="{Binding}"/>
                                        </Border.InputBindings>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Name, TargetNullValue='Unknown Customer'}" Foreground="White" FontSize="14" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding PhoneNumber}" Foreground="#9CA3AF" FontSize="11"/>
                                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                    <Border Background="#22C55E" CornerRadius="3" Padding="6,2" Margin="0,0,6,0">
                                                        <TextBlock Text="{Binding TierName}" Foreground="White" FontSize="9" FontWeight="Bold"/>
                                                    </Border>
                                                    <TextBlock Text="{Binding PointsBalance, StringFormat='{}{0:N0} points'}" Foreground="#F59E0B" FontSize="11" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </StackPanel>
                                            <TextBlock Grid.Column="1" Text="&#xE76C;" FontFamily="Segoe MDL2 Assets" FontSize="14"
                                                       Foreground="#22C55E" VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Empty State for Search Results -->
                    <StackPanel Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center"
                                Visibility="{Binding LoyaltySearchResults.Count, Converter={StaticResource InverseBoolToVisibility}}">
                        <TextBlock Text="&#xE721;" FontFamily="Segoe MDL2 Assets" FontSize="32" Foreground="#4B5563" HorizontalAlignment="Center"/>
                        <TextBlock Text="Search by name or phone" Foreground="#6B7280" FontSize="12" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>

        <!-- Phone Prompt Dialog Overlay -->
        <Grid Visibility="{Binding ShowPhonePromptDialog, Converter={StaticResource BoolToVisibility}}"
              Background="#80000000"
              Panel.ZIndex="100">
            <Border Background="{DynamicResource ThemeSurface}"
                    CornerRadius="12"
                    Padding="32"
                    MaxWidth="400"
                    MaxHeight="400"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="4" Opacity="0.3"/>
                </Border.Effect>
                <StackPanel>
                    <!-- Header -->
                    <TextBlock Text="&#xE716;" FontFamily="Segoe MDL2 Assets" FontSize="36"
                               Foreground="#22C55E" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                    <TextBlock Text="Earn Loyalty Points"
                               FontSize="24"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource ThemeTextPrimary}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"/>

                    <TextBlock Text="Enter customer phone number to earn points"
                               FontSize="14"
                               Foreground="{DynamicResource ThemeTextSecondary}"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               Margin="0,0,0,24"/>

                    <!-- Phone Input -->
                    <TextBox Text="{Binding PhonePromptInput, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="24"
                             Height="56"
                             Padding="16,12"
                             Margin="0,0,0,8"
                             MaxLength="13"
                             HorizontalContentAlignment="Center"
                             Background="{DynamicResource ThemeInputBackground}"
                             Foreground="{DynamicResource ThemeTextPrimary}"
                             BorderBrush="{DynamicResource ThemeBorder}"
                             BorderThickness="1">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding SubmitPhonePromptCommand}"/>
                            <KeyBinding Key="Escape" Command="{Binding SkipPhonePromptCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>

                    <TextBlock Text="Format: 0712 345 678"
                               FontSize="12"
                               Foreground="{DynamicResource ThemeTextMuted}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"/>

                    <!-- Error Message -->
                    <TextBlock Text="{Binding PhonePromptError}"
                               Foreground="#EF4444"
                               FontSize="13"
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center"
                               Visibility="{Binding PhonePromptError, Converter={StaticResource NullToVisibility}}"
                               Margin="0,0,0,16"/>

                    <!-- Buttons -->
                    <Grid Margin="0,16,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                                Content="Skip"
                                Command="{Binding SkipPhonePromptCommand}"
                                Height="48"
                                FontSize="16"
                                Background="Transparent"
                                Foreground="{DynamicResource ThemeTextSecondary}"
                                BorderBrush="{DynamicResource ThemeBorder}"
                                BorderThickness="1"
                                Cursor="Hand"/>

                        <Button Grid.Column="2"
                                Height="48"
                                FontSize="16"
                                Background="#10B981"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                Command="{Binding SubmitPhonePromptCommand}"
                                IsEnabled="{Binding IsProcessingPhonePrompt, Converter={StaticResource InverseBoolConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE72A;" FontFamily="Segoe MDL2 Assets" FontSize="14"
                                           Margin="0,0,8,0" VerticalAlignment="Center"
                                           Visibility="{Binding IsProcessingPhonePrompt, Converter={StaticResource InverseBoolToVisibility}}"/>
                                <TextBlock Text="&#xE895;" FontFamily="Segoe MDL2 Assets" FontSize="14"
                                           Margin="0,0,8,0" VerticalAlignment="Center"
                                           Visibility="{Binding IsProcessingPhonePrompt, Converter={StaticResource BoolToVisibility}}"/>
                                <TextBlock VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="Submit"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsProcessingPhonePrompt}" Value="True">
                                                    <Setter Property="Text" Value="Processing..."/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Button>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
