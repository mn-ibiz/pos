<UserControl x:Class="HospitalityPOS.WPF.Views.POSView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:HospitalityPOS.WPF.Converters"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1280"
             Background="#1E1E2E"
             Focusable="True">

    <!-- Keyboard Shortcuts (Microsoft RMS Style) -->
    <UserControl.InputBindings>
        <!-- F1 = Item Lookup / Search -->
        <KeyBinding Key="F1" Command="{Binding FocusBarcodeInputCommand}"/>
        <!-- F2 = Apply Discount -->
        <KeyBinding Key="F2" Command="{Binding ApplyOrderDiscountAsyncCommand}"/>
        <!-- F3 = Hold Order -->
        <KeyBinding Key="F3" Command="{Binding HoldOrderAsyncCommand}"/>
        <!-- F4 = Recall Held Orders -->
        <KeyBinding Key="F4" Command="{Binding ShowHeldOrdersCommand}"/>
        <!-- F5 = Customer/Loyalty Lookup -->
        <KeyBinding Key="F5" Command="{Binding ShowLoyaltyPanelCommand}"/>
        <!-- F6 = Void Last Item -->
        <KeyBinding Key="F6" Command="{Binding VoidLastItemCommand}"/>
        <!-- F7 = Price Check (placeholder) -->
        <KeyBinding Key="F7" Command="{Binding PriceCheckCommand}"/>
        <!-- F8 = Clear/New Transaction -->
        <KeyBinding Key="F8" Command="{Binding ClearOrderCommand}"/>
        <!-- F11 = Cash Payment -->
        <KeyBinding Key="F11" Command="{Binding PrintOrderAsyncCommand}"/>
        <!-- F12 = Card Payment (placeholder) -->
        <KeyBinding Key="F12" Command="{Binding CardPaymentCommand}"/>
        <!-- Escape = Cancel/Back -->
        <KeyBinding Key="Escape" Command="{Binding GoBackCommand}"/>
        <!-- Delete = Remove selected item -->
        <KeyBinding Key="Delete" Command="{Binding RemoveSelectedItemCommand}"/>
        <!-- Plus = Increase quantity -->
        <KeyBinding Key="OemPlus" Command="{Binding IncreaseSelectedQuantityCommand}"/>
        <KeyBinding Key="Add" Command="{Binding IncreaseSelectedQuantityCommand}"/>
        <!-- Minus = Decrease quantity -->
        <KeyBinding Key="OemMinus" Command="{Binding DecreaseSelectedQuantityCommand}"/>
        <KeyBinding Key="Subtract" Command="{Binding DecreaseSelectedQuantityCommand}"/>
    </UserControl.InputBindings>

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility"/>
        <converters:IsCurrentPageConverter x:Key="IsCurrentPageConverter"/>

        <!-- Category Button Style -->
        <Style x:Key="CategoryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderThickness="3,0,0,0"
                                BorderBrush="Transparent">
                            <ContentPresenter VerticalAlignment="Center"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#22C55E"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#16A34A"/>
                            </DataTrigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#374151"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Product Tile Button Style -->
        <Style x:Key="ProductTileButton" TargetType="Button">
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="BorderBrush" Value="#3D3D5C"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4D4D6C"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#22C55E"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Page Tab Button Style -->
        <Style x:Key="PageTabButton" TargetType="Button">
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="Foreground" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="44"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#22C55E"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Order Item Action Button -->
        <Style x:Key="OrderItemActionButton" TargetType="Button">
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Action Button Style -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="MinHeight" Value="50"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <!-- ==================== RETAIL/SUPERMARKET MODE LAYOUT (3-Column RMS Style) ==================== -->
        <Grid Visibility="{Binding IsSupermarketMode, Converter={StaticResource BoolToVisibility}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Main 3-Column Layout -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140" MinWidth="120"/>
                    <ColumnDefinition Width="*" MinWidth="400"/>
                    <ColumnDefinition Width="380" MinWidth="340"/>
                </Grid.ColumnDefinitions>

                <!-- ========== LEFT COLUMN: Categories + Quick Keys ========== -->
                <Border Grid.Column="0" Background="#1A1A2E" BorderBrush="#3D3D5C" BorderThickness="0,0,1,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Categories Header -->
                        <Border Grid.Row="0" Background="#252538" Padding="10,12">
                            <TextBlock Text="CATEGORIES" Foreground="#9CA3AF" FontSize="11" FontWeight="Bold" HorizontalAlignment="Center"/>
                        </Border>

                        <!-- Categories List -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                            <ItemsControl ItemsSource="{Binding Categories}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Style="{StaticResource CategoryButtonStyle}"
                                                Command="{Binding DataContext.SelectCategoryCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}"
                                                Height="48">
                                            <TextBlock Text="{Binding Name}" TextTrimming="CharacterEllipsis" FontSize="12"/>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <!-- Quick Keys Section -->
                        <Border Grid.Row="2" Background="#252538" Padding="6">
                            <StackPanel>
                                <TextBlock Text="QUICK KEYS" Foreground="#6B7280" FontSize="9" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,4,0,8"/>
                                <Button Content="% DISC" Background="#F59E0B" Foreground="White" Height="40" FontSize="11" FontWeight="SemiBold"
                                        BorderThickness="0" Margin="2" Cursor="Hand" ToolTip="Apply Discount (F2)"
                                        Command="{Binding ApplyOrderDiscountAsyncCommand}">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <Button Content="VOID" Background="#EF4444" Foreground="White" Height="40" FontSize="11" FontWeight="SemiBold"
                                        BorderThickness="0" Margin="2" Cursor="Hand" ToolTip="Void Last Item (F6)"
                                        Command="{Binding VoidLastItemCommand}">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <Button Content="HOLD" Background="#8B5CF6" Foreground="White" Height="40" FontSize="11" FontWeight="SemiBold"
                                        BorderThickness="0" Margin="2" Cursor="Hand" ToolTip="Hold Order (F3)"
                                        Command="{Binding HoldOrderAsyncCommand}">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <Button Background="#06B6D4" Foreground="White" Height="40" FontSize="11" FontWeight="SemiBold"
                                        BorderThickness="0" Margin="2" Cursor="Hand" ToolTip="Recall Held Orders (F4)"
                                        Command="{Binding ShowHeldOrdersAsyncCommand}">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="RECALL"/>
                                        <TextBlock Text="{Binding HeldOrders.Count, StringFormat=' ({0})'}"
                                                   Visibility="{Binding HeldOrders.Count, Converter={StaticResource BoolToVisibility}}"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <!-- ========== CENTER COLUMN: Product Grid + Numpad ========== -->
                <Border Grid.Column="1" Background="#1E1E2E">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Search Bar -->
                        <Border Grid.Row="0" Background="#252538" Padding="12,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Barcode Icon -->
                                <TextBlock Text="&#xE8B7;" FontFamily="Segoe MDL2 Assets" FontSize="20"
                                           Foreground="#22C55E" VerticalAlignment="Center" Margin="0,0,10,0"/>

                                <!-- Search Input -->
                                <Grid Grid.Column="1">
                                    <TextBox x:Name="RetailBarcodeInput"
                                             Text="{Binding BarcodeInput, UpdateSourceTrigger=PropertyChanged}"
                                             Background="#2D2D44"
                                             Foreground="White"
                                             CaretBrush="White"
                                             BorderBrush="#22C55E"
                                             BorderThickness="2"
                                             Padding="12,8"
                                             FontSize="16"
                                             FontWeight="Medium"
                                             VerticalContentAlignment="Center">
                                        <TextBox.InputBindings>
                                            <KeyBinding Key="Enter" Command="{Binding SearchBarcodeCommand}"/>
                                        </TextBox.InputBindings>
                                    </TextBox>
                                    <TextBlock Text="Scan barcode or type product name (F1)..."
                                               Foreground="#6B7280"
                                               FontSize="13"
                                               VerticalAlignment="Center"
                                               Margin="16,0,0,0"
                                               IsHitTestVisible="False">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding BarcodeInput}" Value="">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>

                                <!-- Search Button -->
                                <Button Grid.Column="2"
                                        Content="&#xE721;"
                                        FontFamily="Segoe MDL2 Assets"
                                        FontSize="16"
                                        Background="#22C55E"
                                        Foreground="White"
                                        Width="44"
                                        Height="38"
                                        BorderThickness="0"
                                        Margin="8,0,0,0"
                                        Command="{Binding SearchBarcodeCommand}"
                                        Cursor="Hand"
                                        ToolTip="Search / Lookup (Enter)">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Grid>
                        </Border>

                        <!-- Product Grid with Pagination -->
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Pagination Tabs -->
                            <Border Grid.Row="0" Background="#1A1A2E" Padding="8,6">
                                <ItemsControl ItemsSource="{Binding PageNumbers}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button Content="{Binding}" Margin="0,0,6,0"
                                                    Command="{Binding DataContext.GoToPageCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                    CommandParameter="{Binding}">
                                                <Button.Style>
                                                    <Style TargetType="Button" BasedOn="{StaticResource PageTabButton}">
                                                        <Style.Triggers>
                                                            <DataTrigger Value="True">
                                                                <DataTrigger.Binding>
                                                                    <MultiBinding Converter="{StaticResource IsCurrentPageConverter}">
                                                                        <Binding Path="."/>
                                                                        <Binding Path="DataContext.CurrentPageNumber" RelativeSource="{RelativeSource AncestorType=ItemsControl}"/>
                                                                    </MultiBinding>
                                                                </DataTrigger.Binding>
                                                                <Setter Property="Background" Value="#22C55E"/>
                                                                <Setter Property="Foreground" Value="White"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Border>

                            <!-- Product Grid -->
                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                                <ItemsControl ItemsSource="{Binding Products}" Margin="6">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button Style="{StaticResource ProductTileButton}"
                                                    IsEnabled="{Binding IsInStock}"
                                                    Command="{Binding DataContext.AddToOrderAsyncCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                    CommandParameter="{Binding}">
                                                <Grid Width="100" Height="115">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="70"/>
                                                        <RowDefinition Height="*"/>
                                                    </Grid.RowDefinitions>

                                                    <!-- Product Image or Placeholder -->
                                                    <Border Grid.Row="0" Background="#3D3D5C" CornerRadius="6,6,0,0">
                                                        <Grid>
                                                            <TextBlock Text="&#xE8B9;" FontFamily="Segoe MDL2 Assets" FontSize="24"
                                                                       Foreground="#6B7280" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            <Image Source="{Binding ImagePath}" Stretch="UniformToFill"
                                                                   Visibility="{Binding ImagePath.Length, Converter={StaticResource BoolToVisibility}}"/>
                                                            <!-- Offer Badge -->
                                                            <Border Background="#EF4444" CornerRadius="0,6,0,4" Padding="3,1"
                                                                    HorizontalAlignment="Right" VerticalAlignment="Top"
                                                                    Visibility="{Binding HasActiveOffer, Converter={StaticResource BoolToVisibility}}">
                                                                <TextBlock Text="OFFER" Foreground="White" FontWeight="Bold" FontSize="8"/>
                                                            </Border>
                                                            <!-- Out of Stock Overlay -->
                                                            <Border Background="#CC000000" CornerRadius="6,6,0,0"
                                                                    Visibility="{Binding IsOutOfStock, Converter={StaticResource BoolToVisibility}}">
                                                                <TextBlock Text="OUT" Foreground="#EF4444" FontWeight="Bold" FontSize="14"
                                                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </Grid>
                                                    </Border>

                                                    <!-- Product Info -->
                                                    <StackPanel Grid.Row="1" VerticalAlignment="Center" Margin="5,3">
                                                        <TextBlock Text="{Binding Name}" Foreground="White" FontSize="11" FontWeight="Medium"
                                                                   TextTrimming="CharacterEllipsis" MaxHeight="28" TextWrapping="Wrap"/>
                                                        <TextBlock Text="{Binding Price, StringFormat='KSh {0:N0}'}"
                                                                   Foreground="#22C55E" FontSize="11" FontWeight="SemiBold" Margin="0,2,0,0"
                                                                   Visibility="{Binding HasActiveOffer, Converter={StaticResource InverseBoolToVisibility}}"/>
                                                        <!-- Offer Price -->
                                                        <StackPanel Visibility="{Binding HasActiveOffer, Converter={StaticResource BoolToVisibility}}" Orientation="Horizontal" Margin="0,2,0,0">
                                                            <TextBlock Text="{Binding OfferPrice, StringFormat='KSh {0:N0}'}"
                                                                       Foreground="#22C55E" FontSize="11" FontWeight="Bold"/>
                                                            <TextBlock Text="{Binding SavingsPercent, StringFormat=' -{0}%'}"
                                                                       Foreground="#EF4444" FontSize="9" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </Grid>
                                            </Button>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>

                        <!-- Numeric Keypad (Bottom of Center Column) -->
                        <Border Grid.Row="2" Background="#252538" Padding="8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Numpad Grid -->
                                <Grid Grid.Column="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="48"/>
                                        <RowDefinition Height="48"/>
                                        <RowDefinition Height="48"/>
                                        <RowDefinition Height="48"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="60"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Row 1 -->
                                    <Button Grid.Row="0" Grid.Column="0" Content="7" Background="#374151" Foreground="White" FontSize="20" FontWeight="SemiBold" Margin="2" BorderThickness="0" Cursor="Hand"
                                            Command="{Binding KeypadDigitCommand}" CommandParameter="7">
                                        <Button.Template><ControlTemplate TargetType="Button"><Border Background="{TemplateBinding Background}" CornerRadius="6"><ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/></Border></ControlTemplate></Button.Template>
                                    </Button>
                                    <Button Grid.Row="0" Grid.Column="1" Content="8" Background="#374151" Foreground="White" FontSize="20" FontWeight="SemiBold" Margin="2" BorderThickness="0" Cursor="Hand"
                                            Command="{Binding KeypadDigitCommand}" CommandParameter="8">
                                        <Button.Template><ControlTemplate TargetType="Button"><Border Background="{TemplateBinding Background}" CornerRadius="6"><ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/></Border></ControlTemplate></Button.Template>
                                    </Button>
                                    <Button Grid.Row="0" Grid.Column="2" Content="9" Background="#374151" Foreground="White" FontSize="20" FontWeight="SemiBold" Margin="2" BorderThickness="0" Cursor="Hand"
                                            Command="{Binding KeypadDigitCommand}" CommandParameter="9">
                                        <Button.Template><ControlTemplate TargetType="Button"><Border Background="{TemplateBinding Background}" CornerRadius="6"><ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/></Border></ControlTemplate></Button.Template>
                                    </Button>
                                    <Button Grid.Row="0" Grid.Column="3" Grid.RowSpan="2" Content="QTY" Background="#F59E0B" Foreground="White" FontSize="14" FontWeight="Bold" Margin="2" BorderThickness="0" Cursor="Hand"
                                            Command="{Binding ApplyQuantityCommand}" ToolTip="Apply quantity to next item">
                                        <Button.Template><ControlTemplate TargetType="Button"><Border Background="{TemplateBinding Background}" CornerRadius="6"><ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/></Border></ControlTemplate></Button.Template>
                                    </Button>

                                    <!-- Row 2 -->
                                    <Button Grid.Row="1" Grid.Column="0" Content="4" Background="#374151" Foreground="White" FontSize="20" FontWeight="SemiBold" Margin="2" BorderThickness="0" Cursor="Hand"
                                            Command="{Binding KeypadDigitCommand}" CommandParameter="4">
                                        <Button.Template><ControlTemplate TargetType="Button"><Border Background="{TemplateBinding Background}" CornerRadius="6"><ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/></Border></ControlTemplate></Button.Template>
                                    </Button>
                                    <Button Grid.Row="1" Grid.Column="1" Content="5" Background="#374151" Foreground="White" FontSize="20" FontWeight="SemiBold" Margin="2" BorderThickness="0" Cursor="Hand"
                                            Command="{Binding KeypadDigitCommand}" CommandParameter="5">
                                        <Button.Template><ControlTemplate TargetType="Button"><Border Background="{TemplateBinding Background}" CornerRadius="6"><ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/></Border></ControlTemplate></Button.Template>
                                    </Button>
                                    <Button Grid.Row="1" Grid.Column="2" Content="6" Background="#374151" Foreground="White" FontSize="20" FontWeight="SemiBold" Margin="2" BorderThickness="0" Cursor="Hand"
                                            Command="{Binding KeypadDigitCommand}" CommandParameter="6">
                                        <Button.Template><ControlTemplate TargetType="Button"><Border Background="{TemplateBinding Background}" CornerRadius="6"><ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/></Border></ControlTemplate></Button.Template>
                                    </Button>

                                    <!-- Row 3 -->
                                    <Button Grid.Row="2" Grid.Column="0" Content="1" Background="#374151" Foreground="White" FontSize="20" FontWeight="SemiBold" Margin="2" BorderThickness="0" Cursor="Hand"
                                            Command="{Binding KeypadDigitCommand}" CommandParameter="1">
                                        <Button.Template><ControlTemplate TargetType="Button"><Border Background="{TemplateBinding Background}" CornerRadius="6"><ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/></Border></ControlTemplate></Button.Template>
                                    </Button>
                                    <Button Grid.Row="2" Grid.Column="1" Content="2" Background="#374151" Foreground="White" FontSize="20" FontWeight="SemiBold" Margin="2" BorderThickness="0" Cursor="Hand"
                                            Command="{Binding KeypadDigitCommand}" CommandParameter="2">
                                        <Button.Template><ControlTemplate TargetType="Button"><Border Background="{TemplateBinding Background}" CornerRadius="6"><ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/></Border></ControlTemplate></Button.Template>
                                    </Button>
                                    <Button Grid.Row="2" Grid.Column="2" Content="3" Background="#374151" Foreground="White" FontSize="20" FontWeight="SemiBold" Margin="2" BorderThickness="0" Cursor="Hand"
                                            Command="{Binding KeypadDigitCommand}" CommandParameter="3">
                                        <Button.Template><ControlTemplate TargetType="Button"><Border Background="{TemplateBinding Background}" CornerRadius="6"><ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/></Border></ControlTemplate></Button.Template>
                                    </Button>
                                    <Button Grid.Row="2" Grid.Column="3" Grid.RowSpan="2" Content="CLR" Background="#EF4444" Foreground="White" FontSize="14" FontWeight="Bold" Margin="2" BorderThickness="0" Cursor="Hand"
                                            Command="{Binding KeypadClearCommand}" ToolTip="Clear quantity input">
                                        <Button.Template><ControlTemplate TargetType="Button"><Border Background="{TemplateBinding Background}" CornerRadius="6"><ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/></Border></ControlTemplate></Button.Template>
                                    </Button>

                                    <!-- Row 4 -->
                                    <Button Grid.Row="3" Grid.Column="0" Content="0" Background="#374151" Foreground="White" FontSize="20" FontWeight="SemiBold" Margin="2" BorderThickness="0" Cursor="Hand"
                                            Command="{Binding KeypadDigitCommand}" CommandParameter="0">
                                        <Button.Template><ControlTemplate TargetType="Button"><Border Background="{TemplateBinding Background}" CornerRadius="6"><ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/></Border></ControlTemplate></Button.Template>
                                    </Button>
                                    <Button Grid.Row="3" Grid.Column="1" Content="." Background="#374151" Foreground="White" FontSize="20" FontWeight="SemiBold" Margin="2" BorderThickness="0" Cursor="Hand"
                                            Command="{Binding KeypadDigitCommand}" CommandParameter=".">
                                        <Button.Template><ControlTemplate TargetType="Button"><Border Background="{TemplateBinding Background}" CornerRadius="6"><ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/></Border></ControlTemplate></Button.Template>
                                    </Button>
                                    <Button Grid.Row="3" Grid.Column="2" Content="&#xE750;" FontFamily="Segoe MDL2 Assets" Background="#374151" Foreground="White" FontSize="16" Margin="2" BorderThickness="0" Cursor="Hand"
                                            Command="{Binding KeypadBackspaceCommand}" ToolTip="Backspace">
                                        <Button.Template><ControlTemplate TargetType="Button"><Border Background="{TemplateBinding Background}" CornerRadius="6"><ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/></Border></ControlTemplate></Button.Template>
                                    </Button>
                                </Grid>

                                <!-- Keypad Display -->
                                <Border Grid.Column="1" Background="#1A1A2E" CornerRadius="6" Padding="12,8" Margin="8,0,0,0" MinWidth="80">
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="QTY" Foreground="#6B7280" FontSize="10" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding KeypadInput, FallbackValue='1'}" Foreground="#22C55E" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

                <!-- ========== RIGHT COLUMN: Order Summary + Payments ========== -->
                <Border Grid.Column="2" Background="#252538" BorderBrush="#3D3D5C" BorderThickness="1,0,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Order Header -->
                        <Border Grid.Row="0" Background="#1E1E2E" Padding="12,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="CURRENT ORDER" Foreground="White" FontSize="14" FontWeight="Bold" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="{Binding OrderItems.Count, StringFormat='{}{0} items'}" Foreground="#9CA3AF" FontSize="12" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                <Button Grid.Column="2" Content="&#xE74D;" FontFamily="Segoe MDL2 Assets" Background="#6B7280" Foreground="White" Width="32" Height="32" FontSize="14" BorderThickness="0" Cursor="Hand"
                                        Command="{Binding ClearOrderCommand}" ToolTip="Clear All (F8)">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Grid>
                        </Border>

                        <!-- Order Items List -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                            <Grid>
                                <!-- Items List -->
                                <ItemsControl ItemsSource="{Binding OrderItems}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#2D2D44" BorderBrush="#3D3D5C" BorderThickness="0,0,0,1" Padding="10,8">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>

                                                    <!-- Product Name -->
                                                    <TextBlock Text="{Binding ProductName}" Foreground="White" FontSize="13" FontWeight="Medium" TextTrimming="CharacterEllipsis"/>

                                                    <!-- Delete Button -->
                                                    <Button Grid.Column="1" Grid.RowSpan="2" Content="&#xE74D;" FontFamily="Segoe MDL2 Assets"
                                                            Background="#EF4444" Foreground="White" Width="28" Height="28" FontSize="11" BorderThickness="0" Cursor="Hand"
                                                            Command="{Binding DataContext.RemoveOrderItemCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}" VerticalAlignment="Center" Margin="8,0,0,0">
                                                        <Button.Template>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Button.Template>
                                                    </Button>

                                                    <!-- Price and Quantity Row -->
                                                    <Grid Grid.Row="1" Margin="0,6,0,0">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <!-- Quantity Controls -->
                                                        <StackPanel Orientation="Horizontal">
                                                            <Button Content="-" Background="#4B5563" Foreground="White" Width="26" Height="26" FontWeight="Bold" FontSize="14" BorderThickness="0" Cursor="Hand"
                                                                    Command="{Binding DataContext.DecreaseQuantityCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                    CommandParameter="{Binding}">
                                                                <Button.Template>
                                                                    <ControlTemplate TargetType="Button">
                                                                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                        </Border>
                                                                    </ControlTemplate>
                                                                </Button.Template>
                                                            </Button>
                                                            <TextBlock Text="{Binding Quantity}" Foreground="White" FontSize="14" FontWeight="SemiBold" Width="32" TextAlignment="Center" VerticalAlignment="Center"/>
                                                            <Button Content="+" Background="#22C55E" Foreground="White" Width="26" Height="26" FontWeight="Bold" FontSize="14" BorderThickness="0" Cursor="Hand"
                                                                    Command="{Binding DataContext.IncreaseQuantityCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                    CommandParameter="{Binding}">
                                                                <Button.Template>
                                                                    <ControlTemplate TargetType="Button">
                                                                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                        </Border>
                                                                    </ControlTemplate>
                                                                </Button.Template>
                                                            </Button>
                                                        </StackPanel>

                                                        <!-- Unit Price -->
                                                        <TextBlock Grid.Column="1" Text="{Binding Price, StringFormat='@ {0:N0}'}" Foreground="#9CA3AF" FontSize="11" VerticalAlignment="Center" Margin="8,0,0,0"/>

                                                        <!-- Line Total -->
                                                        <TextBlock Grid.Column="2" Text="{Binding LineTotal, StringFormat='KSh {0:N2}'}" Foreground="#22C55E" FontSize="13" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                                    </Grid>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Empty State -->
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                                            Visibility="{Binding OrderItems.Count, Converter={StaticResource InverseBoolToVisibility}}">
                                    <TextBlock Text="&#xE7BF;" FontFamily="Segoe MDL2 Assets" FontSize="48" Foreground="#4B5563" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Scan items or select products" Foreground="#6B7280" FontSize="13" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                                </StackPanel>
                            </Grid>
                        </ScrollViewer>

                        <!-- Totals Summary -->
                        <Border Grid.Row="2" Background="#1E1E2E" Padding="12,10">
                            <StackPanel>
                                <Grid Margin="0,3">
                                    <TextBlock Text="Subtotal:" Foreground="#9CA3AF" FontSize="13"/>
                                    <TextBlock Text="{Binding OrderSubtotal, StringFormat='KSh {0:N2}'}" Foreground="White" FontSize="13" HorizontalAlignment="Right"/>
                                </Grid>
                                <Grid Margin="0,3">
                                    <TextBlock Text="VAT (16%):" Foreground="#9CA3AF" FontSize="13"/>
                                    <TextBlock Text="{Binding OrderTax, StringFormat='KSh {0:N2}'}" Foreground="White" FontSize="13" HorizontalAlignment="Right"/>
                                </Grid>
                                <Grid Margin="0,3" Visibility="{Binding HasOrderDiscount, Converter={StaticResource BoolToVisibility}}">
                                    <TextBlock Text="Discount:" Foreground="#EF4444" FontSize="13"/>
                                    <TextBlock Text="{Binding OrderDiscount, StringFormat='-KSh {0:N2}'}" Foreground="#EF4444" FontSize="13" HorizontalAlignment="Right"/>
                                </Grid>
                                <Border Height="1" Background="#3D3D5C" Margin="0,8"/>
                                <Grid>
                                    <TextBlock Text="TOTAL:" Foreground="White" FontSize="16" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding OrderTotal, StringFormat='KSh {0:N2}'}" Foreground="#22C55E" FontSize="22" FontWeight="Bold" HorizontalAlignment="Right"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Payment Buttons -->
                        <Border Grid.Row="3" Background="#252538" Padding="10">
                            <StackPanel>
                                <!-- Cash Button -->
                                <Button Background="#22C55E" Foreground="White" Height="52" Margin="0,0,0,8" FontSize="16" FontWeight="Bold" BorderThickness="0" Cursor="Hand"
                                        Command="{Binding SubmitOrderAsyncCommand}" ToolTip="Pay with Cash (F5)">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE8C7;" FontFamily="Segoe MDL2 Assets" FontSize="18" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                        <TextBlock Text="CASH (F5)" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <!-- M-Pesa and Card Buttons -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Button Grid.Column="0" Background="#16A34A" Foreground="White" Height="44" Margin="0,0,4,0" FontSize="13" FontWeight="Bold" BorderThickness="0" Cursor="Hand"
                                            Command="{Binding InitiateMpesaPaymentAsyncCommand}" ToolTip="M-Pesa Payment (F6)">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                        <TextBlock Text="M-PESA (F6)" VerticalAlignment="Center"/>
                                    </Button>
                                    <Button Grid.Column="1" Background="#3B82F6" Foreground="White" Height="44" Margin="4,0,0,0" FontSize="13" FontWeight="Bold" BorderThickness="0" Cursor="Hand"
                                            Command="{Binding CardPaymentCommand}" ToolTip="Card Payment (F7)">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                        <TextBlock Text="CARD (F7)" VerticalAlignment="Center"/>
                                    </Button>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </Grid>

            <!-- Status Bar -->
            <Border Grid.Row="1" Background="#1A1A2E" Padding="12,6">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="F1-Search | F2-Discount | F3-Hold | F4-Recall | F5-Cash | F6-M-Pesa | F7-Card | F8-Clear"
                               Foreground="#6B7280" FontSize="10"/>
                    <TextBlock Grid.Column="2" Text="{Binding CurrentTime, StringFormat='{}{0:HH:mm}'}" Foreground="#9CA3AF" FontSize="11" Margin="0,0,16,0"/>
                    <StackPanel Grid.Column="3" Orientation="Horizontal">
                        <TextBlock Text="Cashier: " Foreground="#6B7280" FontSize="11"/>
                        <TextBlock Text="{Binding CurrentCashierName}" Foreground="#9CA3AF" FontSize="11"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- ==================== RESTAURANT MODE LAYOUT (Commented - Not for Supermarket) ==================== -->
        <Grid Visibility="{Binding IsSupermarketMode, Converter={StaticResource InverseBoolToVisibility}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="380"/>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT: Order Summary for Restaurant -->
            <Border Grid.Column="0" Background="#1E1E2E">
                <TextBlock Text="Restaurant Mode" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Border>

            <!-- MIDDLE: Category Panel for Restaurant -->
            <Border Grid.Column="1" Background="#1A1A2E">
                <TextBlock Text="Categories" Foreground="#6B7280" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Border>

            <!-- RIGHT: Product Grid for Restaurant -->
            <Border Grid.Column="2" Background="#1E1E2E">
                <TextBlock Text="Products" Foreground="#6B7280" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Border>
        </Grid>

        <!-- Held Orders Panel Overlay -->
        <Border Background="#80000000"
                Visibility="{Binding IsHeldOrdersPanelVisible, Converter={StaticResource BoolToVisibility}}"
                MouseDown="HeldOrdersOverlay_MouseDown">
            <Border Background="#252538"
                    CornerRadius="12"
                    Width="400"
                    MaxHeight="500"
                    Margin="0,50"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    MouseDown="HeldOrdersPanel_MouseDown">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Held Orders Header -->
                    <Border Grid.Row="0" Background="#1E1E2E" CornerRadius="12,12,0,0" Padding="16,12">
                        <Grid>
                            <TextBlock Text="Held Orders" Foreground="White" FontSize="16" FontWeight="Bold"/>
                            <Button Content="&#xE711;" FontFamily="Segoe MDL2 Assets" Background="Transparent" Foreground="#9CA3AF"
                                    HorizontalAlignment="Right" Width="32" Height="32" BorderThickness="0" Cursor="Hand"
                                    Command="{Binding ShowHeldOrdersAsyncCommand}">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Held Orders List -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" MaxHeight="350">
                        <ItemsControl ItemsSource="{Binding HeldOrders}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#2D2D44" BorderBrush="#3D3D5C" BorderThickness="0,0,0,1" Padding="12,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel>
                                                <TextBlock Text="{Binding OrderNumber}" Foreground="White" FontSize="14" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding HoldTime, StringFormat='Held at {0:HH:mm}'}" Foreground="#9CA3AF" FontSize="11"/>
                                                <TextBlock Text="{Binding ItemCount, StringFormat='{}{0} items'}" Foreground="#6B7280" FontSize="11"/>
                                            </StackPanel>
                                            <Button Grid.Column="1" Content="Recall" Background="#22C55E" Foreground="White" Height="32" Padding="12,0" FontSize="12" FontWeight="SemiBold" BorderThickness="0" Cursor="Hand"
                                                    Command="{Binding DataContext.RecallHeldOrderCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Empty State for Held Orders -->
                    <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"
                                Visibility="{Binding HeldOrders.Count, Converter={StaticResource InverseBoolToVisibility}}">
                        <TextBlock Text="&#xE74E;" FontFamily="Segoe MDL2 Assets" FontSize="32" Foreground="#4B5563" HorizontalAlignment="Center"/>
                        <TextBlock Text="No held orders" Foreground="#6B7280" FontSize="12" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>
    </Grid>
</UserControl>
