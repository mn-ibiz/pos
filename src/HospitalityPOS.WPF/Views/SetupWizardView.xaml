<UserControl x:Class="HospitalityPOS.WPF.Views.SetupWizardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:HospitalityPOS.WPF.ViewModels"
             d:DataContext="{d:DesignInstance Type=vm:SetupWizardViewModel}"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="#1a1a2e">

    <UserControl.Resources>
        <!-- Step indicator style -->
        <Style x:Key="StepIndicator" TargetType="Border">
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="CornerRadius" Value="18"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>

        <!-- Mode card style -->
        <Style x:Key="ModeCard" TargetType="Border">
            <Setter Property="Background" Value="#252542"/>
            <Setter Property="BorderBrush" Value="#3a3a5c"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#6366F1"/>
                    <Setter Property="Background" Value="#2d2d4f"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Selected mode card -->
        <Style x:Key="SelectedModeCard" TargetType="Border" BasedOn="{StaticResource ModeCard}">
            <Setter Property="BorderBrush" Value="#6366F1"/>
            <Setter Property="Background" Value="#2d2d4f"/>
        </Style>

        <!-- Input style -->
        <Style x:Key="WizardTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#252542"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3a3a5c"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#6366F1"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with logo and step indicator -->
        <Border Grid.Row="0" Background="#16162a" Padding="32,24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo and title -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="HOSPITALITY POS"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#6366F1"/>
                    <TextBlock Text="Initial Setup Wizard"
                               FontSize="14"
                               Foreground="#888"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Step indicators -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Step 1 -->
                    <StackPanel Orientation="Horizontal">
                        <Border Style="{StaticResource StepIndicator}"
                                Background="{Binding CurrentStep, Converter={StaticResource StepToColorConverter}, ConverterParameter=1}"
                                BorderBrush="{Binding CurrentStep, Converter={StaticResource StepToBorderConverter}, ConverterParameter=1}">
                            <TextBlock Text="1"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                        </Border>
                        <TextBlock Text="Business Type"
                                   Foreground="#888"
                                   VerticalAlignment="Center"
                                   Margin="8,0,0,0"/>
                    </StackPanel>

                    <!-- Connector -->
                    <Border Width="40" Height="2" Background="#3a3a5c" Margin="16,0"/>

                    <!-- Step 2 -->
                    <StackPanel Orientation="Horizontal">
                        <Border Style="{StaticResource StepIndicator}"
                                Background="{Binding CurrentStep, Converter={StaticResource StepToColorConverter}, ConverterParameter=2}"
                                BorderBrush="{Binding CurrentStep, Converter={StaticResource StepToBorderConverter}, ConverterParameter=2}">
                            <TextBlock Text="2"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                        </Border>
                        <TextBlock Text="Details"
                                   Foreground="#888"
                                   VerticalAlignment="Center"
                                   Margin="8,0,0,0"/>
                    </StackPanel>

                    <!-- Connector -->
                    <Border Width="40" Height="2" Background="#3a3a5c" Margin="16,0"/>

                    <!-- Step 3 -->
                    <StackPanel Orientation="Horizontal">
                        <Border Style="{StaticResource StepIndicator}"
                                Background="{Binding CurrentStep, Converter={StaticResource StepToColorConverter}, ConverterParameter=3}"
                                BorderBrush="{Binding CurrentStep, Converter={StaticResource StepToBorderConverter}, ConverterParameter=3}">
                            <TextBlock Text="3"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                        </Border>
                        <TextBlock Text="Complete"
                                   Foreground="#888"
                                   VerticalAlignment="Center"
                                   Margin="8,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content area -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <Grid Margin="48,32">
                <!-- Step 1: Business Type Selection -->
                <StackPanel Visibility="{Binding CurrentStep, Converter={StaticResource StepToVisibilityConverter}, ConverterParameter=1}">
                    <TextBlock Text="{Binding StepTitle}"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="White"/>
                    <TextBlock Text="{Binding StepDescription}"
                               FontSize="16"
                               Foreground="#888"
                               Margin="0,8,0,32"/>

                    <!-- Mode cards -->
                    <ItemsControl ItemsSource="{Binding ModeOptions}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="3" HorizontalAlignment="Left"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,0,16,0"
                                        Width="280"
                                        MouseLeftButtonDown="ModeCard_Click">
                                    <Border.Style>
                                        <Style TargetType="Border" BasedOn="{StaticResource ModeCard}">
                                            <Style.Triggers>
                                                <DataTrigger Value="True">
                                                    <DataTrigger.Binding>
                                                        <MultiBinding Converter="{StaticResource EqualityConverter}">
                                                            <Binding Path="Mode"/>
                                                            <Binding Path="DataContext.SelectedMode" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                                        </MultiBinding>
                                                    </DataTrigger.Binding>
                                                    <Setter Property="BorderBrush" Value="#6366F1"/>
                                                    <Setter Property="Background" Value="#2d2d4f"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <StackPanel>
                                        <!-- Icon -->
                                        <TextBlock Text="{Binding Icon}"
                                                   FontFamily="Segoe MDL2 Assets"
                                                   FontSize="48"
                                                   Foreground="#6366F1"
                                                   HorizontalAlignment="Center"/>

                                        <!-- Title -->
                                        <TextBlock Text="{Binding Title}"
                                                   FontSize="18"
                                                   FontWeight="SemiBold"
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,16,0,8"/>

                                        <!-- Description -->
                                        <TextBlock Text="{Binding Description}"
                                                   FontSize="13"
                                                   Foreground="#888"
                                                   TextWrapping="Wrap"
                                                   TextAlignment="Center"
                                                   Margin="0,0,0,16"/>

                                        <!-- Features -->
                                        <ItemsControl ItemsSource="{Binding Features}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal" Margin="0,4">
                                                        <TextBlock Text="&#xE73E;"
                                                                   FontFamily="Segoe MDL2 Assets"
                                                                   FontSize="12"
                                                                   Foreground="#10B981"
                                                                   VerticalAlignment="Center"/>
                                                        <TextBlock Text="{Binding}"
                                                                   FontSize="12"
                                                                   Foreground="#aaa"
                                                                   Margin="8,0,0,0"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <!-- Step 2: Business Details -->
                <StackPanel Visibility="{Binding CurrentStep, Converter={StaticResource StepToVisibilityConverter}, ConverterParameter=2}"
                            MaxWidth="600"
                            HorizontalAlignment="Left">
                    <TextBlock Text="{Binding StepTitle}"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="White"/>
                    <TextBlock Text="{Binding StepDescription}"
                               FontSize="16"
                               Foreground="#888"
                               Margin="0,8,0,32"/>

                    <!-- Business Name -->
                    <TextBlock Text="Business Name *"
                               Foreground="#aaa"
                               FontSize="13"
                               Margin="0,0,0,6"/>
                    <TextBox Text="{Binding BusinessName, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource WizardTextBox}"
                             Margin="0,0,0,20"/>

                    <!-- Business Address -->
                    <TextBlock Text="Business Address"
                               Foreground="#aaa"
                               FontSize="13"
                               Margin="0,0,0,6"/>
                    <TextBox Text="{Binding BusinessAddress, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource WizardTextBox}"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             Height="60"
                             Margin="0,0,0,20"/>

                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Phone -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Phone Number"
                                       Foreground="#aaa"
                                       FontSize="13"
                                       Margin="0,0,0,6"/>
                            <TextBox Text="{Binding BusinessPhone, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource WizardTextBox}"/>
                        </StackPanel>

                        <!-- Email -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Email Address"
                                       Foreground="#aaa"
                                       FontSize="13"
                                       Margin="0,0,0,6"/>
                            <TextBox Text="{Binding BusinessEmail, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource WizardTextBox}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Currency Selection -->
                    <TextBlock Text="Currency"
                               Foreground="#aaa"
                               FontSize="13"
                               Margin="0,0,0,6"/>
                    <ComboBox ItemsSource="{Binding CurrencyOptions}"
                              SelectedValue="{Binding CurrencyCode}"
                              SelectedValuePath="Code"
                              DisplayMemberPath="Display"
                              Background="#252542"
                              Foreground="White"
                              BorderBrush="#3a3a5c"
                              Padding="12,10"
                              FontSize="14"/>
                </StackPanel>

                <!-- Step 3: Review and Complete -->
                <StackPanel Visibility="{Binding CurrentStep, Converter={StaticResource StepToVisibilityConverter}, ConverterParameter=3}"
                            MaxWidth="600"
                            HorizontalAlignment="Left">
                    <TextBlock Text="{Binding StepTitle}"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="White"/>
                    <TextBlock Text="{Binding StepDescription}"
                               FontSize="16"
                               Foreground="#888"
                               Margin="0,8,0,32"/>

                    <!-- Summary Card -->
                    <Border Background="#252542"
                            BorderBrush="#3a3a5c"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="24">
                        <StackPanel>
                            <TextBlock Text="Configuration Summary"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       Margin="0,0,0,20"/>

                            <!-- Business Mode -->
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Business Type:"
                                           Foreground="#888"
                                           Grid.Column="0"/>
                                <TextBlock Text="{Binding SelectedModeOption.Title}"
                                           Foreground="White"
                                           FontWeight="Medium"
                                           Grid.Column="1"/>
                            </Grid>

                            <!-- Business Name -->
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Business Name:"
                                           Foreground="#888"
                                           Grid.Column="0"/>
                                <TextBlock Text="{Binding BusinessName}"
                                           Foreground="White"
                                           Grid.Column="1"/>
                            </Grid>

                            <!-- Address -->
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Address:"
                                           Foreground="#888"
                                           Grid.Column="0"/>
                                <TextBlock Text="{Binding BusinessAddress, TargetNullValue='Not provided'}"
                                           Foreground="White"
                                           Grid.Column="1"
                                           TextWrapping="Wrap"/>
                            </Grid>

                            <!-- Phone -->
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Phone:"
                                           Foreground="#888"
                                           Grid.Column="0"/>
                                <TextBlock Text="{Binding BusinessPhone, TargetNullValue='Not provided'}"
                                           Foreground="White"
                                           Grid.Column="1"/>
                            </Grid>

                            <!-- Currency -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Currency:"
                                           Foreground="#888"
                                           Grid.Column="0"/>
                                <TextBlock Foreground="White" Grid.Column="1">
                                    <Run Text="{Binding CurrencyCode}"/>
                                    <Run Text="(" Foreground="#888"/>
                                    <Run Text="{Binding CurrencySymbol}"/>
                                    <Run Text=")" Foreground="#888"/>
                                </TextBlock>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Features that will be enabled -->
                    <Border Background="#252542"
                            BorderBrush="#3a3a5c"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="24"
                            Margin="0,16,0,0">
                        <StackPanel>
                            <TextBlock Text="Features Enabled"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       Margin="0,0,0,16"/>

                            <ItemsControl ItemsSource="{Binding SelectedModeOption.Features}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#10B98133"
                                                BorderBrush="#10B981"
                                                BorderThickness="1"
                                                CornerRadius="4"
                                                Padding="12,6"
                                                Margin="0,0,8,8">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="&#xE73E;"
                                                           FontFamily="Segoe MDL2 Assets"
                                                           FontSize="12"
                                                           Foreground="#10B981"
                                                           VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding}"
                                                           Foreground="#10B981"
                                                           FontSize="13"
                                                           Margin="6,0,0,0"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Footer with navigation buttons -->
        <Border Grid.Row="2" Background="#16162a" Padding="32,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Status message -->
                <TextBlock Text="{Binding StatusMessage}"
                           Foreground="#888"
                           VerticalAlignment="Center"
                           Visibility="{Binding StatusMessage, Converter={StaticResource NullToVisibilityConverter}}"/>

                <!-- Navigation buttons -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <!-- Back button -->
                    <Button Command="{Binding GoBackCommand}"
                            Visibility="{Binding CanGoBack, Converter={StaticResource BoolToVisibilityConverter}}"
                            Background="Transparent"
                            BorderBrush="#3a3a5c"
                            Foreground="White"
                            Padding="24,12"
                            Margin="0,0,12,0"
                            Cursor="Hand">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE76B;"
                                       FontFamily="Segoe MDL2 Assets"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0"/>
                            <TextBlock Text="Back"/>
                        </StackPanel>
                    </Button>

                    <!-- Next/Complete button -->
                    <Button Command="{Binding GoNextCommand}"
                            IsEnabled="{Binding CanGoNext}"
                            Padding="24,12"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#6366F1"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#818CF8"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="#3a3a5c"/>
                                        <Setter Property="Foreground" Value="#666"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding IsLastStep, Converter={StaticResource BoolToTextConverter}, ConverterParameter='Complete Setup|Next'}"/>
                            <TextBlock Text="&#xE76C;"
                                       FontFamily="Segoe MDL2 Assets"
                                       VerticalAlignment="Center"
                                       Margin="8,0,0,0"
                                       Visibility="{Binding IsLastStep, Converter={StaticResource BoolToVisibilityInverseConverter}}"/>
                            <TextBlock Text="&#xE73E;"
                                       FontFamily="Segoe MDL2 Assets"
                                       VerticalAlignment="Center"
                                       Margin="8,0,0,0"
                                       Visibility="{Binding IsLastStep, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Loading overlay -->
        <Border Grid.RowSpan="3"
                Background="#AA1a1a2e"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True"
                             Width="200"
                             Height="4"
                             Background="#3a3a5c"
                             Foreground="#6366F1"/>
                <TextBlock Text="{Binding StatusMessage}"
                           Foreground="White"
                           FontSize="16"
                           HorizontalAlignment="Center"
                           Margin="0,16,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
