<UserControl x:Class="HospitalityPOS.WPF.Views.ZReportHistoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:HospitalityPOS.WPF.Converters"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="#0F0F1A">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility"/>

        <!-- Gradient Brushes -->
        <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#6366F1" Offset="0"/>
            <GradientStop Color="#8B5CF6" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="SuccessGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#10B981" Offset="0"/>
            <GradientStop Color="#34D399" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="DangerGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#EF4444" Offset="0"/>
            <GradientStop Color="#F87171" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="WarningGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#F59E0B" Offset="0"/>
            <GradientStop Color="#FBBF24" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="CardGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#1A1A2E" Offset="0"/>
            <GradientStop Color="#16162A" Offset="1"/>
        </LinearGradientBrush>

        <!-- Modern Action Button Style -->
        <Style x:Key="ModernActionButton" TargetType="Button">
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="MinWidth" Value="110"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="16,10"
                                BorderThickness="1"
                                BorderBrush="#2D2D44">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="-1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="#2D2D44"/>
        </Style>

        <!-- Icon Button Style -->
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="#9CA3AF"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2D2D44"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3D3D54"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Stat Card Style -->
        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardGradient}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20,16"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#2D2D44"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Back Button -->
            <Button Grid.Column="0"
                    Style="{StaticResource IconButton}"
                    Command="{Binding GoBackCommand}"
                    ToolTip="Go Back (Esc)">
                <Path Data="M 12 0 L 0 10 L 12 20"
                      Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                      StrokeThickness="2"
                      Width="12" Height="20"/>
            </Button>

            <!-- Title and Subtitle -->
            <StackPanel Grid.Column="1" Margin="16,0,0,0" VerticalAlignment="Center">
                <TextBlock Text="{Binding Title}"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="White"/>
                <TextBlock Text="Browse and reprint historical Z-Reports by cashier"
                           FontSize="13"
                           Foreground="#6B7280"
                           Margin="0,4,0,0"/>
            </StackPanel>

            <!-- Refresh Button -->
            <Button Grid.Column="2"
                    Style="{StaticResource ModernActionButton}"
                    Background="{StaticResource PrimaryGradient}"
                    Command="{Binding RefreshCommand}"
                    ToolTip="Refresh (F5)">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&#xE72C;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <TextBlock Text="Refresh" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- Stats Row -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total Reports Card -->
            <Border Grid.Column="0" Style="{StaticResource StatCard}" Margin="0,0,8,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Width="48" Height="48" CornerRadius="10" Background="#1F1F33" Margin="0,0,16,0">
                        <TextBlock Text="&#xE9F9;" FontFamily="Segoe MDL2 Assets" FontSize="20"
                                   Foreground="#6366F1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding TotalCount}" FontSize="28" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="Z-Reports in Range" FontSize="12" Foreground="#6B7280"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Total Closing Cash Card -->
            <Border Grid.Column="1" Style="{StaticResource StatCard}" Margin="8,0,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Width="48" Height="48" CornerRadius="10" Background="#0D2818" Margin="0,0,16,0">
                        <TextBlock Text="&#xE8EC;" FontFamily="Segoe MDL2 Assets" FontSize="20"
                                   Foreground="#10B981" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock FontSize="28" FontWeight="Bold" Foreground="#10B981">
                            <Run Text="KSh "/>
                            <Run Text="{Binding TotalSales, StringFormat=N0}"/>
                        </TextBlock>
                        <TextBlock Text="Total Closing Cash" FontSize="12" Foreground="#6B7280"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Filter Bar -->
        <Border Grid.Row="2" Background="{StaticResource CardGradient}" CornerRadius="12"
                Padding="16" Margin="0,0,0,16" BorderThickness="1" BorderBrush="#2D2D44">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Date Range -->
                <TextBlock Grid.Column="0" Text="From:" Foreground="#9CA3AF" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <DatePicker Grid.Column="1" SelectedDate="{Binding StartDate}" Width="130"
                            Background="#1A1A2E" Foreground="White" BorderBrush="#2D2D44"/>

                <TextBlock Grid.Column="2" Text="To:" Foreground="#9CA3AF" VerticalAlignment="Center" Margin="16,0,8,0"/>
                <DatePicker Grid.Column="3" SelectedDate="{Binding EndDate}" Width="130"
                            Background="#1A1A2E" Foreground="White" BorderBrush="#2D2D44"/>

                <!-- Cashier Filter -->
                <TextBlock Grid.Column="4" Text="Cashier:" Foreground="#9CA3AF" VerticalAlignment="Center" Margin="24,0,8,0"/>
                <ComboBox Grid.Column="5" ItemsSource="{Binding Cashiers}" SelectedItem="{Binding SelectedCashier}"
                          DisplayMemberPath="FullName" Width="200" Margin="0,0,8,0"
                          Background="#1A1A2E" Foreground="White" BorderBrush="#2D2D44"/>

                <Button Grid.Column="6" Style="{StaticResource IconButton}"
                        Command="{Binding ClearCashierFilterCommand}"
                        ToolTip="Clear Filter">
                    <TextBlock Text="&#xE711;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                </Button>
            </Grid>
        </Border>

        <!-- Z-Report List -->
        <Border Grid.Row="3"
                Background="{StaticResource CardGradient}"
                CornerRadius="12"
                BorderThickness="1"
                BorderBrush="#2D2D44">
            <Grid>
                <DataGrid ItemsSource="{Binding WorkPeriods}"
                          SelectedItem="{Binding SelectedWorkPeriod}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          Background="Transparent"
                          BorderThickness="0"
                          RowBackground="Transparent"
                          AlternatingRowBackground="#0A0A14"
                          Foreground="White"
                          GridLinesVisibility="None"
                          HeadersVisibility="Column"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          SelectionMode="Single"
                          SelectionUnit="FullRow"
                          RowHeight="56"
                          FontSize="13"
                          Visibility="{Binding WorkPeriods.Count, Converter={StaticResource BoolToVisibility}}">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#6B7280"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="FontSize" Value="12"/>
                            <Setter Property="Padding" Value="16,14"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="#2D2D44"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="16,8"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Focusable" Value="False"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#1E1E38"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="#1A1A2E"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#141428"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#1E1E38"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.Columns>
                        <!-- Z-Report Number -->
                        <DataGridTemplateColumn Header="Z-REPORT #" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource PrimaryGradient}" CornerRadius="6" Padding="10,5" HorizontalAlignment="Left">
                                        <TextBlock Text="{Binding ZReportDisplay}" FontSize="12" FontWeight="Bold" Foreground="White"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Date -->
                        <DataGridTextColumn Header="DATE" Binding="{Binding DateDisplay}" Width="110"/>

                        <!-- Time -->
                        <DataGridTextColumn Header="TIME" Binding="{Binding TimeDisplay}" Width="120"/>

                        <!-- Duration -->
                        <DataGridTextColumn Header="DURATION" Binding="{Binding DurationDisplay}" Width="100"/>

                        <!-- Closed By -->
                        <DataGridTextColumn Header="CLOSED BY" Binding="{Binding ClosedByName}" Width="150"/>

                        <!-- Closing Cash -->
                        <DataGridTemplateColumn Header="CLOSING CASH" Width="140">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock FontWeight="SemiBold" Foreground="#10B981">
                                        <Run Text="KSh "/>
                                        <Run Text="{Binding ClosingCash, StringFormat=N2}"/>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Variance -->
                        <DataGridTemplateColumn Header="VARIANCE" Width="130">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock FontWeight="SemiBold" Margin="0,0,8,0">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#10B981"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsShort}" Value="True">
                                                            <Setter Property="Foreground" Value="#EF4444"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsOver}" Value="True">
                                                            <Setter Property="Foreground" Value="#F59E0B"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                            <Run Text="KSh "/>
                                            <Run Text="{Binding Variance, StringFormat=N2}"/>
                                        </TextBlock>
                                        <Border CornerRadius="4" Padding="6,2">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#0D2818"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsShort}" Value="True">
                                                            <Setter Property="Background" Value="#1F1414"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsOver}" Value="True">
                                                            <Setter Property="Background" Value="#1F1A10"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding VarianceStatus}" FontSize="10" FontWeight="Bold">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="#10B981"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsShort}" Value="True">
                                                                <Setter Property="Foreground" Value="#EF4444"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsOver}" Value="True">
                                                                <Setter Property="Foreground" Value="#F59E0B"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Actions -->
                        <DataGridTemplateColumn Header="ACTIONS" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Style="{StaticResource ModernActionButton}"
                                                Background="#2563EB"
                                                MinWidth="80"
                                                Command="{Binding DataContext.ViewZReportCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                ToolTip="View Z-Report">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="&#xE890;" FontFamily="Segoe MDL2 Assets" FontSize="12" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                                <TextBlock Text="View"/>
                                            </StackPanel>
                                        </Button>
                                        <Button Style="{StaticResource ModernActionButton}"
                                                Background="{StaticResource SuccessGradient}"
                                                MinWidth="90"
                                                Command="{Binding DataContext.ReprintZReportCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                ToolTip="Reprint Z-Report">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="&#xE749;" FontFamily="Segoe MDL2 Assets" FontSize="12" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                                <TextBlock Text="Reprint"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Empty State -->
                <StackPanel VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Visibility="{Binding WorkPeriods.Count, Converter={StaticResource InverseBoolToVisibility}}">
                    <Border Width="80" Height="80" CornerRadius="40" Background="#1F1F33" Margin="0,0,0,16">
                        <TextBlock Text="&#xE9F9;" FontFamily="Segoe MDL2 Assets" FontSize="32"
                                   Foreground="#4B5563" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="No Z-Reports Found"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="White"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Try adjusting your date range or cashier filter"
                               FontSize="13"
                               Foreground="#6B7280"
                               HorizontalAlignment="Center"
                               Margin="0,8,0,0"/>
                </StackPanel>

                <!-- Loading Overlay -->
                <Border Background="#CC0F0F1A"
                        CornerRadius="12"
                        Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibility}}">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <ProgressBar IsIndeterminate="True"
                                     Width="160"
                                     Height="4"
                                     Foreground="#6366F1"
                                     Background="#1F1F33"/>
                        <TextBlock Text="{Binding BusyMessage}"
                                   Foreground="#9CA3AF"
                                   FontSize="13"
                                   HorizontalAlignment="Center"
                                   Margin="0,12,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
