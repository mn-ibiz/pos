<UserControl x:Class="HospitalityPOS.WPF.Views.SmsSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="800"
             d:DesignWidth="900"
             Background="#1E1E2E">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="BorderBrush" Value="#3D3D5C"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          VerticalAlignment="Center"
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#F59E0B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Password Box Style -->
        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="BorderBrush" Value="#3D3D5C"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="44"/>
        </Style>

        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3D3D5C"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="44"/>
        </Style>

        <!-- Toggle Switch Style -->
        <Style x:Key="ToggleSwitchStyle" TargetType="CheckBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal">
                            <Border x:Name="SwitchBorder"
                                    Width="48" Height="24"
                                    CornerRadius="12"
                                    Background="#3D3D5C"
                                    Cursor="Hand">
                                <Ellipse x:Name="SwitchKnob"
                                         Width="18" Height="18"
                                         Fill="White"
                                         HorizontalAlignment="Left"
                                         Margin="3,0,0,0"/>
                            </Border>
                            <ContentPresenter Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="SwitchBorder" Property="Background" Value="#10B981"/>
                                <Setter TargetName="SwitchKnob" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="SwitchKnob" Property="Margin" Value="0,0,3,0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="MinHeight" Value="44"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="20,10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="#3D3D5C"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#16162B" Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="&#xE72B;" FontFamily="Segoe MDL2 Assets"
                        Command="{Binding GoBackCommand}"
                        Background="Transparent" BorderThickness="0"
                        Foreground="#9CA3AF" FontSize="16" Padding="8"
                        Cursor="Hand" VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Margin="16,0">
                    <TextBlock Text="SMS Settings" FontSize="24" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Configure SMS provider for loyalty notifications"
                               Foreground="#9CA3AF" FontSize="13" Margin="0,4,0,0"/>
                </StackPanel>

                <Button Grid.Column="2" Style="{StaticResource ModernButton}"
                        Background="#10B981" Content="Save Settings"
                        Command="{Binding SaveConfigurationCommand}"/>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="24">
            <StackPanel MaxWidth="800">

                <!-- Error/Success Messages -->
                <Border Background="#7F1D1D" CornerRadius="8" Padding="16" Margin="0,0,0,16"
                        Visibility="{Binding ErrorMessage, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="{Binding ErrorMessage}" Foreground="#FCA5A5" TextWrapping="Wrap"/>
                </Border>

                <Border Background="#14532D" CornerRadius="8" Padding="16" Margin="0,0,0,16"
                        Visibility="{Binding SuccessMessage, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="{Binding SuccessMessage}" Foreground="#86EFAC" TextWrapping="Wrap"/>
                </Border>

                <!-- Provider Configuration Card -->
                <Border Background="#252538" CornerRadius="12" Padding="24" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Provider Configuration" FontSize="18" FontWeight="SemiBold"
                                   Foreground="White" Margin="0,0,0,16"/>

                        <!-- Provider Selection -->
                        <TextBlock Text="SMS Provider" Foreground="#9CA3AF" FontSize="12" Margin="0,0,0,6"/>
                        <ComboBox Style="{StaticResource ModernComboBox}"
                                  ItemsSource="{Binding Providers}"
                                  SelectedItem="{Binding SelectedProvider}"/>

                        <!-- Username -->
                        <TextBlock Text="Username / Account ID" Foreground="#9CA3AF" FontSize="12" Margin="0,16,0,6"/>
                        <TextBox Style="{StaticResource ModernTextBox}"
                                 Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>

                        <!-- API Key -->
                        <TextBlock Text="API Key" Foreground="#9CA3AF" FontSize="12" Margin="0,16,0,6"/>
                        <TextBox Style="{StaticResource ModernTextBox}"
                                 Text="{Binding ApiKey, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBlock Text="Your API key is stored securely." Foreground="#6B7280" FontSize="11" Margin="0,4,0,0"/>

                        <!-- Sender ID -->
                        <TextBlock Text="Sender ID (Optional)" Foreground="#9CA3AF" FontSize="12" Margin="0,16,0,6"/>
                        <TextBox Style="{StaticResource ModernTextBox}"
                                 Text="{Binding SenderId, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBlock Text="Alphanumeric sender ID or shortcode. Leave empty for default."
                                   Foreground="#6B7280" FontSize="11" Margin="0,4,0,0"/>

                        <!-- Business Name -->
                        <TextBlock Text="Business Name (for SMS)" Foreground="#9CA3AF" FontSize="12" Margin="0,16,0,6"/>
                        <TextBox Style="{StaticResource ModernTextBox}"
                                 Text="{Binding BusinessName, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                </Border>

                <!-- Settings Card -->
                <Border Background="#252538" CornerRadius="12" Padding="24" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Settings" FontSize="18" FontWeight="SemiBold"
                                   Foreground="White" Margin="0,0,0,16"/>

                        <!-- Enable SMS -->
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Enable SMS Notifications" Foreground="White" FontWeight="SemiBold"/>
                                <TextBlock Text="When enabled, SMS will be sent for loyalty program events"
                                           Foreground="#9CA3AF" FontSize="12"/>
                            </StackPanel>
                            <CheckBox Grid.Column="1" Style="{StaticResource ToggleSwitchStyle}"
                                      IsChecked="{Binding IsEnabled}" VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Sandbox Mode -->
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Sandbox Mode (Testing)" Foreground="White" FontWeight="SemiBold"/>
                                <TextBlock Text="Use sandbox environment for testing without charges"
                                           Foreground="#9CA3AF" FontSize="12"/>
                            </StackPanel>
                            <CheckBox Grid.Column="1" Style="{StaticResource ToggleSwitchStyle}"
                                      IsChecked="{Binding UseSandbox}" VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Daily Limit -->
                        <TextBlock Text="Daily SMS Limit" Foreground="#9CA3AF" FontSize="12" Margin="0,0,0,6"/>
                        <TextBox Style="{StaticResource ModernTextBox}" Width="200" HorizontalAlignment="Left"
                                 Text="{Binding DailyLimit, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBlock Text="Maximum SMS messages per day to prevent runaway costs"
                                   Foreground="#6B7280" FontSize="11" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Test SMS Card -->
                <Border Background="#252538" CornerRadius="12" Padding="24" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Test SMS" FontSize="18" FontWeight="SemiBold"
                                   Foreground="White" Margin="0,0,0,16"/>

                        <TextBlock Text="Test Phone Number" Foreground="#9CA3AF" FontSize="12" Margin="0,0,0,6"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0" Style="{StaticResource ModernTextBox}"
                                     Text="{Binding TestPhoneNumber, UpdateSourceTrigger=PropertyChanged}"
                                     Margin="0,0,12,0"/>

                            <Button Grid.Column="1" Style="{StaticResource ModernButton}"
                                    Background="#3B82F6" Content="Send Test SMS"
                                    Command="{Binding TestSmsCommand}"
                                    IsEnabled="{Binding IsTesting, Converter={StaticResource InverseBoolConverter}}"/>
                        </Grid>
                        <TextBlock Text="Enter a phone number to receive a test SMS (format: 07XXXXXXXX or 254XXXXXXXXX)"
                                   Foreground="#6B7280" FontSize="11" Margin="0,4,0,0"/>

                        <!-- Test Result -->
                        <Border Margin="0,16,0,0" CornerRadius="8" Padding="12"
                                Visibility="{Binding TestResult, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="#14532D"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding TestSuccessful}" Value="False">
                                            <Setter Property="Background" Value="#7F1D1D"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <TextBlock TextWrapping="Wrap">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#86EFAC"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding TestSuccessful}" Value="False">
                                                <Setter Property="Foreground" Value="#FCA5A5"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                                <Run Text="{Binding TestResult}"/>
                            </TextBlock>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Usage Statistics Card -->
                <Border Background="#252538" CornerRadius="12" Padding="24" Margin="0,0,0,16">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Usage Statistics" FontSize="18" FontWeight="SemiBold"
                                       Foreground="White"/>

                            <Button Grid.Column="1" Style="{StaticResource ModernButton}"
                                    Background="#6B7280" Content="Reset Counter" MinWidth="100"
                                    Command="{Binding ResetDailyCounterCommand}"/>
                        </Grid>

                        <Grid Margin="0,16,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Today's Count -->
                            <Border Grid.Column="0" Background="#2D2D44" CornerRadius="8" Padding="16" Margin="0,0,8,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding TodayCount}" FontSize="28" FontWeight="Bold"
                                               Foreground="#F59E0B" HorizontalAlignment="Center"/>
                                    <TextBlock Text="SMS Today" Foreground="#9CA3AF" FontSize="12"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Daily Limit -->
                            <Border Grid.Column="1" Background="#2D2D44" CornerRadius="8" Padding="16" Margin="4,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding DailyLimit}" FontSize="28" FontWeight="Bold"
                                               Foreground="#3B82F6" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Daily Limit" Foreground="#9CA3AF" FontSize="12"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Last Test -->
                            <Border Grid.Column="2" Background="#2D2D44" CornerRadius="8" Padding="16" Margin="8,0,0,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock FontSize="16" FontWeight="Bold" HorizontalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#6B7280"/>
                                                <Setter Property="Text" Value="Never"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding LastTestSuccessful}" Value="True">
                                                        <Setter Property="Foreground" Value="#10B981"/>
                                                        <Setter Property="Text" Value="Passed"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding LastTestSuccessful}" Value="False">
                                                        <Setter Property="Foreground" Value="#EF4444"/>
                                                        <Setter Property="Text" Value="Failed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock Text="Last Test" Foreground="#9CA3AF" FontSize="12"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- Last Test Error -->
                        <Border Background="#7F1D1D" CornerRadius="8" Padding="12" Margin="0,16,0,0"
                                Visibility="{Binding LastTestError, Converter={StaticResource BoolToVisibilityConverter}}">
                            <TextBlock Text="{Binding LastTestError}" Foreground="#FCA5A5" TextWrapping="Wrap"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Help Info Card -->
                <Border Background="#1E3A5F" CornerRadius="12" Padding="24" Margin="0,0,0,24">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <TextBlock Text="&#xE946;" FontFamily="Segoe MDL2 Assets" FontSize="20"
                                       Foreground="#3B82F6" VerticalAlignment="Center" Margin="0,0,12,0"/>
                            <TextBlock Text="Africa's Talking Setup" FontSize="16" FontWeight="SemiBold"
                                       Foreground="White"/>
                        </StackPanel>

                        <TextBlock Foreground="#9CA3AF" TextWrapping="Wrap" LineHeight="22">
                            <Run Text="1. Sign up at"/>
                            <Run Text=" africastalking.com" Foreground="#3B82F6"/>
                            <LineBreak/>
                            <Run Text="2. Create a new application"/>
                            <LineBreak/>
                            <Run Text="3. Generate an API key from Settings > API Key"/>
                            <LineBreak/>
                            <Run Text="4. Use 'sandbox' as username for testing"/>
                            <LineBreak/>
                            <Run Text="5. Enable sandbox mode above for free testing"/>
                            <LineBreak/>
                            <LineBreak/>
                            <Run Text="Cost: ~KES 0.8 per SMS in production mode" FontWeight="SemiBold"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="2" Background="#80000000"
                Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="4" Foreground="#F59E0B"/>
                <TextBlock Text="{Binding BusyMessage}" Foreground="White" FontSize="14"
                           HorizontalAlignment="Center" Margin="0,16,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
