<UserControl x:Class="HospitalityPOS.WPF.Views.ModeSelectionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="#0F0F1A">

    <UserControl.Resources>
        <!-- Mode Card Button Style -->
        <Style x:Key="ModeCardButton" TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="CardBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="24"
                                Padding="40,50"
                                BorderThickness="2"
                                BorderBrush="#2D2D44"
                                Width="320"
                                Height="400">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" BlurRadius="30" ShadowDepth="5" Opacity="0.4"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="CardBorder" Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="-8"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="CardBorder" Property="BorderBrush" Value="#6366F1"/>
                                <Setter TargetName="CardBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#6366F1" BlurRadius="40" ShadowDepth="0" Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="CardBorder" Property="Opacity" Value="0.9"/>
                                <Setter TargetName="CardBorder" Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="-4"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,0,0,50">
            <!-- Logo -->
            <Border Width="90" Height="90" CornerRadius="20" Margin="0,0,0,24">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#6366F1" Offset="0"/>
                        <GradientStop Color="#8B5CF6" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <TextBlock Text="&#xE7BF;"
                           FontFamily="Segoe MDL2 Assets"
                           FontSize="42"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>

            <!-- Title -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="ProNet"
                           FontSize="36"
                           FontWeight="Bold"
                           Foreground="#6366F1"/>
                <TextBlock Text=" POS"
                           FontSize="36"
                           FontWeight="Light"
                           Foreground="White"/>
            </StackPanel>

            <!-- Subtitle -->
            <TextBlock Text="Select your login mode to continue"
                       FontSize="16"
                       Foreground="#6B7280"
                       HorizontalAlignment="Center"
                       Margin="0,12,0,0"/>
        </StackPanel>

        <!-- Mode Selection Cards -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top">

            <!-- Supermarket Mode -->
            <Button Style="{StaticResource ModeCardButton}"
                    Command="{Binding SelectSupermarketCommand}"
                    Margin="20,0">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#1E1E38" Offset="0"/>
                        <GradientStop Color="#16162A" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
                <StackPanel HorizontalAlignment="Center">
                    <!-- Icon -->
                    <Border Width="100" Height="100" CornerRadius="50" Margin="0,0,0,24">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#10B981" Offset="0"/>
                                <GradientStop Color="#34D399" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock Text="&#xE7BF;"
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="44"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <!-- Title -->
                    <TextBlock Text="Supermarket"
                               FontSize="26"
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"/>

                    <!-- Description -->
                    <TextBlock Text="Retail POS with barcode scanning"
                               FontSize="14"
                               Foreground="#6B7280"
                               HorizontalAlignment="Center"
                               Margin="0,8,0,0"
                               TextWrapping="Wrap"
                               TextAlignment="Center"/>

                    <!-- Features -->
                    <StackPanel Margin="0,20,0,0">
                        <StackPanel Orientation="Horizontal" Margin="0,4">
                            <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets" FontSize="12" Foreground="#10B981" Margin="0,0,8,0"/>
                            <TextBlock Text="Barcode scanning" FontSize="12" Foreground="#9CA3AF"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,4">
                            <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets" FontSize="12" Foreground="#10B981" Margin="0,0,8,0"/>
                            <TextBlock Text="Keyboard shortcuts" FontSize="12" Foreground="#9CA3AF"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,4">
                            <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets" FontSize="12" Foreground="#10B981" Margin="0,0,8,0"/>
                            <TextBlock Text="Fast checkout" FontSize="12" Foreground="#9CA3AF"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Button>

            <!-- Restaurant Mode -->
            <Button Style="{StaticResource ModeCardButton}"
                    Command="{Binding SelectRestaurantCommand}"
                    Margin="20,0">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#1E1E38" Offset="0"/>
                        <GradientStop Color="#16162A" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
                <StackPanel HorizontalAlignment="Center">
                    <!-- Icon -->
                    <Border Width="100" Height="100" CornerRadius="50" Margin="0,0,0,24">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#F59E0B" Offset="0"/>
                                <GradientStop Color="#FBBF24" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock Text="&#xE8A4;"
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="44"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <!-- Title -->
                    <TextBlock Text="Restaurant"
                               FontSize="26"
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"/>

                    <!-- Description -->
                    <TextBlock Text="Table service with categories"
                               FontSize="14"
                               Foreground="#6B7280"
                               HorizontalAlignment="Center"
                               Margin="0,8,0,0"
                               TextWrapping="Wrap"
                               TextAlignment="Center"/>

                    <!-- Features -->
                    <StackPanel Margin="0,20,0,0">
                        <StackPanel Orientation="Horizontal" Margin="0,4">
                            <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets" FontSize="12" Foreground="#F59E0B" Margin="0,0,8,0"/>
                            <TextBlock Text="PIN-based login" FontSize="12" Foreground="#9CA3AF"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,4">
                            <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets" FontSize="12" Foreground="#F59E0B" Margin="0,0,8,0"/>
                            <TextBlock Text="Category tiles" FontSize="12" Foreground="#9CA3AF"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,4">
                            <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets" FontSize="12" Foreground="#F59E0B" Margin="0,0,8,0"/>
                            <TextBlock Text="Table management" FontSize="12" Foreground="#9CA3AF"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Button>

            <!-- Admin Mode -->
            <Button Style="{StaticResource ModeCardButton}"
                    Command="{Binding SelectAdminCommand}"
                    Margin="20,0">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#1E1E38" Offset="0"/>
                        <GradientStop Color="#16162A" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
                <StackPanel HorizontalAlignment="Center">
                    <!-- Icon -->
                    <Border Width="100" Height="100" CornerRadius="50" Margin="0,0,0,24">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#6366F1" Offset="0"/>
                                <GradientStop Color="#8B5CF6" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock Text="&#xE770;"
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="44"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <!-- Title -->
                    <TextBlock Text="Admin"
                               FontSize="26"
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"/>

                    <!-- Description -->
                    <TextBlock Text="Full system administration"
                               FontSize="14"
                               Foreground="#6B7280"
                               HorizontalAlignment="Center"
                               Margin="0,8,0,0"
                               TextWrapping="Wrap"
                               TextAlignment="Center"/>

                    <!-- Features -->
                    <StackPanel Margin="0,20,0,0">
                        <StackPanel Orientation="Horizontal" Margin="0,4">
                            <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets" FontSize="12" Foreground="#6366F1" Margin="0,0,8,0"/>
                            <TextBlock Text="Dashboard &amp; reports" FontSize="12" Foreground="#9CA3AF"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,4">
                            <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets" FontSize="12" Foreground="#6366F1" Margin="0,0,8,0"/>
                            <TextBlock Text="Inventory control" FontSize="12" Foreground="#9CA3AF"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,4">
                            <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets" FontSize="12" Foreground="#6366F1" Margin="0,0,8,0"/>
                            <TextBlock Text="User management" FontSize="12" Foreground="#9CA3AF"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- Footer -->
        <StackPanel Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,30">
            <TextBlock Text="Version 1.0.0"
                       FontSize="12"
                       Foreground="#4B5563"
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
