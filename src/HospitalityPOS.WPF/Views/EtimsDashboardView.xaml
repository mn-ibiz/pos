<UserControl x:Class="HospitalityPOS.WPF.Views.EtimsDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:HospitalityPOS.WPF.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:EtimsDashboardViewModel}"
             d:DesignHeight="700" d:DesignWidth="1200">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#00695C" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Kenya eTIMS Dashboard" FontSize="28" FontWeight="Bold" Foreground="White"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <Ellipse Width="12" Height="12" Fill="{Binding StatusColor}" Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding StatusMessage}" FontSize="14" Foreground="#B3FFFFFF"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="Test Connection" Command="{Binding TestConnectionCommand}"
                            Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,10,0"/>
                    <Button Content="Process Queue" Command="{Binding ProcessQueueCommand}"
                            Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,10,0"/>
                    <Button Content="Refresh" Command="{Binding RefreshDashboardCommand}"
                            Style="{StaticResource PrimaryButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Stats Cards -->
        <Border Grid.Row="1" Background="#F5F5F5" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Today Submitted -->
                <Border Grid.Column="0" Background="White" CornerRadius="8" Margin="0,0,10,0" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Today Submitted" FontSize="12" Foreground="Gray"/>
                        <TextBlock Text="{Binding DashboardData.TodayInvoicesSubmitted, FallbackValue=0}"
                                   FontSize="32" FontWeight="Bold" Foreground="#4CAF50"/>
                        <TextBlock Text="invoices" FontSize="11" Foreground="Gray"/>
                    </StackPanel>
                </Border>

                <!-- Today Pending -->
                <Border Grid.Column="1" Background="White" CornerRadius="8" Margin="0,0,10,0" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Pending" FontSize="12" Foreground="Gray"/>
                        <TextBlock Text="{Binding DashboardData.TodayInvoicesPending, FallbackValue=0}"
                                   FontSize="32" FontWeight="Bold" Foreground="#FF9800"/>
                        <TextBlock Text="in queue" FontSize="11" Foreground="Gray"/>
                    </StackPanel>
                </Border>

                <!-- Failed -->
                <Border Grid.Column="2" Background="White" CornerRadius="8" Margin="0,0,10,0" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Failed" FontSize="12" Foreground="Gray"/>
                        <TextBlock Text="{Binding DashboardData.FailedCount, FallbackValue=0}"
                                   FontSize="32" FontWeight="Bold" Foreground="#F44336"/>
                        <TextBlock Text="need retry" FontSize="11" Foreground="Gray"/>
                    </StackPanel>
                </Border>

                <!-- Today Sales -->
                <Border Grid.Column="3" Background="White" CornerRadius="8" Margin="0,0,10,0" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Today Sales" FontSize="12" Foreground="Gray"/>
                        <TextBlock FontSize="24" FontWeight="Bold" Foreground="#1976D2">
                            <Run Text="KES "/>
                            <Run Text="{Binding DashboardData.TodayTotalAmount, StringFormat=N0, FallbackValue=0}"/>
                        </TextBlock>
                        <TextBlock FontSize="11" Foreground="Gray">
                            <Run Text="VAT: KES "/>
                            <Run Text="{Binding DashboardData.TodayTaxAmount, StringFormat=N0, FallbackValue=0}"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Month Total -->
                <Border Grid.Column="4" Background="White" CornerRadius="8" Padding="15">
                    <StackPanel>
                        <TextBlock Text="This Month" FontSize="12" Foreground="Gray"/>
                        <TextBlock FontSize="24" FontWeight="Bold" Foreground="#7B1FA2">
                            <Run Text="KES "/>
                            <Run Text="{Binding DashboardData.MonthTotalSales, StringFormat=N0, FallbackValue=0}"/>
                        </TextBlock>
                        <TextBlock FontSize="11" Foreground="Gray">
                            <Run Text="{Binding DashboardData.MonthInvoiceCount, FallbackValue=0}"/>
                            <Run Text=" invoices"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2" Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <!-- Recent Invoices -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" Margin="0,0,15,0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Today's Invoices" FontSize="18" FontWeight="SemiBold"
                               Margin="15,15,15,10"/>

                    <DataGrid Grid.Row="1" ItemsSource="{Binding RecentInvoices}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              BorderThickness="0"
                              RowHeight="40">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Invoice #" Binding="{Binding InvoiceNumber}" Width="180"/>
                            <DataGridTextColumn Header="Time" Binding="{Binding InvoiceDate, StringFormat=HH:mm}" Width="60"/>
                            <DataGridTextColumn Header="Customer" Binding="{Binding CustomerName}" Width="*"/>
                            <DataGridTextColumn Header="Amount" Binding="{Binding TotalAmount, StringFormat=N2}" Width="100">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTemplateColumn Header="Status" Width="90">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Padding="5,2" CornerRadius="3" HorizontalAlignment="Center">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#9E9E9E"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="Accepted">
                                                            <Setter Property="Background" Value="#4CAF50"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Pending">
                                                            <Setter Property="Background" Value="#FF9800"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Failed">
                                                            <Setter Property="Background" Value="#F44336"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Rejected">
                                                            <Setter Property="Background" Value="#F44336"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding Status}" Foreground="White" FontSize="11"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Right Panel -->
            <StackPanel Grid.Column="1">
                <!-- Device Info -->
                <Border Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                    </Border.Effect>

                    <StackPanel>
                        <TextBlock Text="Device Status" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>

                        <Grid Visibility="{Binding IsDeviceSetup, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Serial:" Foreground="Gray" Margin="0,0,10,5"/>
                            <TextBlock Grid.Column="1" Text="{Binding DashboardData.DeviceSerialNumber, FallbackValue=N/A}"
                                       FontWeight="SemiBold"/>

                            <TextBlock Grid.Row="1" Text="Status:" Foreground="Gray" Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding DashboardData.DeviceStatus}"
                                       FontWeight="SemiBold"/>

                            <TextBlock Grid.Row="2" Text="Last Sync:" Foreground="Gray" Margin="0,0,10,0"/>
                            <TextBlock Grid.Row="2" Grid.Column="1"
                                       Text="{Binding DashboardData.LastCommunication, StringFormat=g, FallbackValue=Never}"/>
                        </Grid>

                        <TextBlock Text="No eTIMS device configured. Please set up a device in Settings."
                                   Foreground="#F44336" TextWrapping="Wrap"
                                   Visibility="{Binding IsDeviceSetup, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverse}"/>
                    </StackPanel>
                </Border>

                <!-- Queue Stats -->
                <Border Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                    </Border.Effect>

                    <StackPanel>
                        <TextBlock Text="Queue Status" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel>
                                <TextBlock Text="Pending" FontSize="12" Foreground="Gray"/>
                                <TextBlock Text="{Binding QueueStats.TotalPending, FallbackValue=0}"
                                           FontSize="24" FontWeight="Bold" Foreground="#FF9800"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Failed" FontSize="12" Foreground="Gray"/>
                                <TextBlock Text="{Binding QueueStats.TotalFailed, FallbackValue=0}"
                                           FontSize="24" FontWeight="Bold" Foreground="#F44336"/>
                            </StackPanel>
                        </Grid>

                        <Button Content="Retry Failed Submissions" Command="{Binding RetryFailedCommand}"
                                Style="{StaticResource SecondaryButtonStyle}"
                                HorizontalAlignment="Stretch" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Failed Invoices -->
                <Border Background="White" CornerRadius="8" Padding="15"
                        Visibility="{Binding FailedInvoices.Count, Converter={StaticResource NotZeroToVisibilityConverter}}">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                    </Border.Effect>

                    <StackPanel>
                        <TextBlock Text="Failed Submissions" FontSize="16" FontWeight="SemiBold"
                                   Foreground="#F44336" Margin="0,0,0,10"/>

                        <ItemsControl ItemsSource="{Binding FailedInvoices}" MaxHeight="200">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="0,5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel>
                                                <TextBlock Text="{Binding InvoiceNumber}" FontWeight="SemiBold" FontSize="12"/>
                                                <TextBlock Text="{Binding ErrorMessage}" Foreground="#F44336"
                                                           FontSize="11" TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>

                                            <TextBlock Grid.Column="1" Text="{Binding TotalAmount, StringFormat=N2}"
                                                       VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="3" Background="#80000000"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="4"/>
                <TextBlock Text="Loading eTIMS data..." Foreground="White" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
