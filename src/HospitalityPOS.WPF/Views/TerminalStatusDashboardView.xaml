<UserControl x:Class="HospitalityPOS.WPF.Views.TerminalStatusDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:HospitalityPOS.WPF.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1200"
             Background="#1E1E2E">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter" />

        <!-- Status Card Style -->
        <Style x:Key="StatusCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#2D2D44" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Padding" Value="20" />
            <Setter Property="Margin" Value="8" />
        </Style>
    </UserControl.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="Back"
                    Command="{Binding GoBackCommand}"
                    Background="#3D3D5C"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="16,12"
                    FontSize="14"
                    Cursor="Hand" />

            <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Terminal Status Dashboard"
                           FontSize="28"
                           FontWeight="SemiBold"
                           Foreground="White"
                           HorizontalAlignment="Center" />
                <TextBlock FontSize="14"
                           Foreground="#8888AA"
                           HorizontalAlignment="Center"
                           Margin="0,4,0,0">
                    <Run Text="Last check: " />
                    <Run Text="{Binding LastCheckTime, StringFormat='{}{0:HH:mm:ss}'}" />
                </TextBlock>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <CheckBox Content="Auto-refresh"
                          IsChecked="{Binding AutoRefreshEnabled}"
                          Foreground="White"
                          FontSize="14"
                          VerticalAlignment="Center"
                          Margin="0,0,16,0" />
                <Button Content="Refresh"
                        Command="{Binding RefreshCommand}"
                        Background="#3D3D5C"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="16,12"
                        FontSize="14"
                        Cursor="Hand"
                        Margin="0,0,8,0" />
                <Button Content="Run Health Check"
                        Command="{Binding RunHealthCheckCommand}"
                        Background="#4CAF50"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="16,12"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand" />
            </StackPanel>
        </Grid>

        <!-- Summary Cards -->
        <Grid Grid.Row="1" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Health Status Card -->
            <Border Grid.Column="0" Style="{StaticResource StatusCardStyle}">
                <StackPanel>
                    <TextBlock Text="OVERALL HEALTH"
                               FontSize="12"
                               Foreground="#8888AA"
                               FontWeight="SemiBold" />
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <TextBlock Text="{Binding HealthPercentage, StringFormat='{}{0:F0}%'}"
                                   FontSize="36"
                                   FontWeight="Bold"
                                   Foreground="{Binding OverallStatusColor}" />
                    </StackPanel>
                    <TextBlock Text="{Binding OverallStatus}"
                               FontSize="16"
                               Foreground="{Binding OverallStatusColor}"
                               Margin="0,4,0,0" />
                </StackPanel>
            </Border>

            <!-- Online Card -->
            <Border Grid.Column="1" Style="{StaticResource StatusCardStyle}">
                <StackPanel>
                    <TextBlock Text="ONLINE"
                               FontSize="12"
                               Foreground="#8888AA"
                               FontWeight="SemiBold" />
                    <TextBlock Text="{Binding OnlineTerminals}"
                               FontSize="36"
                               FontWeight="Bold"
                               Foreground="#4CAF50"
                               Margin="0,8,0,0" />
                    <TextBlock Text="terminals"
                               FontSize="14"
                               Foreground="#8888AA"
                               Margin="0,4,0,0" />
                </StackPanel>
            </Border>

            <!-- Offline Card -->
            <Border Grid.Column="2" Style="{StaticResource StatusCardStyle}">
                <StackPanel>
                    <TextBlock Text="OFFLINE"
                               FontSize="12"
                               Foreground="#8888AA"
                               FontWeight="SemiBold" />
                    <TextBlock Text="{Binding OfflineTerminals}"
                               FontSize="36"
                               FontWeight="Bold"
                               Foreground="#FF6B6B"
                               Margin="0,8,0,0" />
                    <TextBlock Text="terminals"
                               FontSize="14"
                               Foreground="#8888AA"
                               Margin="0,4,0,0" />
                </StackPanel>
            </Border>

            <!-- Warnings Card -->
            <Border Grid.Column="3" Style="{StaticResource StatusCardStyle}">
                <StackPanel>
                    <TextBlock Text="WARNINGS"
                               FontSize="12"
                               Foreground="#8888AA"
                               FontWeight="SemiBold" />
                    <TextBlock Text="{Binding TerminalsWithWarnings}"
                               FontSize="36"
                               FontWeight="Bold"
                               Foreground="#FFB347"
                               Margin="0,8,0,0" />
                    <TextBlock Text="terminals"
                               FontSize="14"
                               Foreground="#8888AA"
                               Margin="0,4,0,0" />
                </StackPanel>
            </Border>

            <!-- Total Card -->
            <Border Grid.Column="4" Style="{StaticResource StatusCardStyle}">
                <StackPanel>
                    <TextBlock Text="TOTAL"
                               FontSize="12"
                               Foreground="#8888AA"
                               FontWeight="SemiBold" />
                    <TextBlock Text="{Binding TotalTerminals}"
                               FontSize="36"
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,8,0,0" />
                    <TextBlock Text="terminals"
                               FontSize="14"
                               Foreground="#8888AA"
                               Margin="0,4,0,0" />
                </StackPanel>
            </Border>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="300" />
            </Grid.ColumnDefinitions>

            <!-- Terminal List -->
            <Border Grid.Column="0"
                    Background="#2D2D44"
                    CornerRadius="12"
                    Margin="0,0,16,0">
                <Grid>
                    <!-- Loading Overlay -->
                    <Border Background="#80000000"
                            CornerRadius="12"
                            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisConverter}}"
                            Panel.ZIndex="10">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <ProgressBar IsIndeterminate="True"
                                         Width="150"
                                         Height="4"
                                         Foreground="#4CAF50" />
                            <TextBlock Text="Loading..."
                                       Foreground="White"
                                       FontSize="14"
                                       Margin="0,12,0,0"
                                       HorizontalAlignment="Center" />
                        </StackPanel>
                    </Border>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- List Header -->
                        <Border Grid.Row="0" Background="#3D3D5C" Padding="16,12">
                            <TextBlock Text="All Terminals"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="White" />
                        </Border>

                        <!-- Terminal DataGrid -->
                        <DataGrid Grid.Row="1"
                                  ItemsSource="{Binding Terminals}"
                                  SelectedItem="{Binding SelectedTerminal}"
                                  AutoGenerateColumns="False"
                                  Background="Transparent"
                                  Foreground="White"
                                  BorderThickness="0"
                                  GridLinesVisibility="Horizontal"
                                  HorizontalGridLinesBrush="#3D3D5C"
                                  RowBackground="#2D2D44"
                                  AlternatingRowBackground="#353550"
                                  SelectionMode="Single"
                                  SelectionUnit="FullRow"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  CanUserResizeRows="False"
                                  HeadersVisibility="Column"
                                  FontSize="14"
                                  RowHeight="48"
                                  IsReadOnly="True">

                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#3D3D5C" />
                                    <Setter Property="Foreground" Value="#AAAACC" />
                                    <Setter Property="FontWeight" Value="SemiBold" />
                                    <Setter Property="FontSize" Value="13" />
                                    <Setter Property="Padding" Value="12,8" />
                                    <Setter Property="BorderThickness" Value="0" />
                                </Style>
                            </DataGrid.ColumnHeaderStyle>

                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="BorderThickness" Value="0" />
                                    <Setter Property="Padding" Value="12,0" />
                                    <Setter Property="VerticalContentAlignment" Value="Center" />
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#4A4A6A" />
                                            <Setter Property="Foreground" Value="White" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.CellStyle>

                            <DataGrid.Columns>
                                <!-- Status Indicator -->
                                <DataGridTemplateColumn Header="" Width="16">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Ellipse Width="10" Height="10" Fill="{Binding StatusColor}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTextColumn Header="Code" Binding="{Binding Code}" Width="80" />
                                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="120" />
                                <DataGridTextColumn Header="Type" Binding="{Binding TerminalTypeName}" Width="100" />
                                <DataGridTextColumn Header="Status" Binding="{Binding StatusText}" Width="80" />
                                <DataGridTextColumn Header="Last Seen" Binding="{Binding LastSeenText}" Width="80" />
                                <DataGridTextColumn Header="IP Address" Binding="{Binding IpAddress}" Width="110" />
                                <DataGridTextColumn Header="User" Binding="{Binding CurrentUserName}" Width="*" />
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Actions -->
                        <Border Grid.Row="2" Background="#3D3D5C" Padding="16,12">
                            <StackPanel Orientation="Horizontal">
                                <Button Content="View Details"
                                        Command="{Binding ViewTerminalDetailsCommand}"
                                        Background="#4A4A6A"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Padding="16,8"
                                        FontSize="13"
                                        Cursor="Hand"
                                        Margin="0,0,8,0" />
                                <Button Content="Manage Terminals"
                                        Command="{Binding ManageTerminalsCommand}"
                                        Background="#4A4A6A"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Padding="16,8"
                                        FontSize="13"
                                        Cursor="Hand" />
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </Border>

            <!-- Side Panel - Alerts -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Offline Terminals Panel -->
                <Border Grid.Row="0"
                        Background="#2D2D44"
                        CornerRadius="12"
                        Margin="0,0,0,8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Background="#5A2D2D" Padding="16,12" CornerRadius="12,12,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="OFFLINE TERMINALS"
                                           FontSize="13"
                                           FontWeight="SemiBold"
                                           Foreground="#FF6B6B" />
                                <Border Background="#FF6B6B"
                                        CornerRadius="10"
                                        Padding="8,2"
                                        Margin="8,0,0,0">
                                    <TextBlock Text="{Binding OfflineTerminals}"
                                               FontSize="12"
                                               FontWeight="Bold"
                                               Foreground="White" />
                                </Border>
                            </StackPanel>
                        </Border>

                        <ListBox Grid.Row="1"
                                 ItemsSource="{Binding OfflineTerminalsList}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#3D3D5C"
                                            CornerRadius="8"
                                            Padding="12"
                                            Margin="8,4">
                                        <StackPanel>
                                            <TextBlock FontWeight="SemiBold" Foreground="White">
                                                <Run Text="{Binding Code}" />
                                                <Run Text=" - " />
                                                <Run Text="{Binding Name}" />
                                            </TextBlock>
                                            <TextBlock Text="{Binding TimeSinceText, StringFormat='Last seen: {0} ago'}"
                                                       FontSize="12"
                                                       Foreground="#8888AA"
                                                       Margin="0,4,0,0" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>

                <!-- Warnings Panel -->
                <Border Grid.Row="1"
                        Background="#2D2D44"
                        CornerRadius="12"
                        Margin="0,8,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Background="#5A4A2D" Padding="16,12" CornerRadius="12,12,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="WARNINGS"
                                           FontSize="13"
                                           FontWeight="SemiBold"
                                           Foreground="#FFB347" />
                                <Border Background="#FFB347"
                                        CornerRadius="10"
                                        Padding="8,2"
                                        Margin="8,0,0,0">
                                    <TextBlock Text="{Binding TerminalsWithWarnings}"
                                               FontSize="12"
                                               FontWeight="Bold"
                                               Foreground="White" />
                                </Border>
                            </StackPanel>
                        </Border>

                        <ListBox Grid.Row="1"
                                 ItemsSource="{Binding WarningTerminalsList}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#3D3D5C"
                                            CornerRadius="8"
                                            Padding="12"
                                            Margin="8,4">
                                        <StackPanel>
                                            <TextBlock FontWeight="SemiBold" Foreground="White">
                                                <Run Text="{Binding Code}" />
                                                <Run Text=" - " />
                                                <Run Text="{Binding Name}" />
                                            </TextBlock>
                                            <ItemsControl ItemsSource="{Binding Warnings}" Margin="0,4,0,0">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding}"
                                                                   FontSize="12"
                                                                   Foreground="#FFB347"
                                                                   TextWrapping="Wrap" />
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
