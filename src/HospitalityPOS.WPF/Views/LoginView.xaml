<UserControl x:Class="HospitalityPOS.WPF.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:HospitalityPOS.WPF.Converters"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1024"
             Background="#1E1E2E">

    <UserControl.Resources>
        <!-- Touch-friendly button style -->
        <Style x:Key="TouchButton" TargetType="Button">
            <Setter Property="MinHeight" Value="50"/>
            <Setter Property="MinWidth" Value="50"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3E3E5E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#5E5E7E"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="#2E2E4E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#4E4E6E"/>
        </Style>

        <!-- Numeric keypad button style -->
        <Style x:Key="NumPadButton" TargetType="Button" BasedOn="{StaticResource TouchButton}">
            <Setter Property="Width" Value="70"/>
            <Setter Property="Height" Value="70"/>
            <Setter Property="FontSize" Value="24"/>
        </Style>

        <!-- Primary action button style -->
        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource TouchButton}">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="MinHeight" Value="56"/>
        </Style>

        <!-- Text input style -->
        <Style x:Key="InputTextBox" TargetType="TextBox">
            <Setter Property="MinHeight" Value="50"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Background" Value="#2E2E4E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#4E4E6E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#6C63FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Password input style -->
        <Style x:Key="InputPasswordBox" TargetType="PasswordBox">
            <Setter Property="MinHeight" Value="50"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Background" Value="#2E2E4E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#4E4E6E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CaretBrush" Value="White"/>
        </Style>

        <!-- Quick login user button style -->
        <Style x:Key="UserAvatarButton" TargetType="Button" BasedOn="{StaticResource TouchButton}">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="100"/>
            <Setter Property="Margin" Value="8"/>
        </Style>

        <!-- BoolToVisibility Converter -->
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
    </UserControl.Resources>

    <Grid>
        <!-- Loading overlay -->
        <Border x:Name="LoadingOverlay"
                Background="#80000000"
                Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibility}}"
                Panel.ZIndex="100">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="4"/>
                <TextBlock Text="{Binding BusyMessage}"
                           Foreground="White"
                           FontSize="16"
                           Margin="0,16,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Main content -->
        <Grid MaxWidth="500" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Logo and Title -->
            <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,40">
                <Border Width="100" Height="100"
                        Background="#6C63FF"
                        CornerRadius="50"
                        Margin="0,0,0,20">
                    <TextBlock Text="POS"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>
                <TextBlock Text="ProNet POS"
                           FontSize="24"
                           FontWeight="SemiBold"
                           Foreground="White"
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Username/Password Mode -->
            <StackPanel Grid.Row="1"
                        Visibility="{Binding IsPinMode, Converter={StaticResource BoolToVisibility}, ConverterParameter=Invert}">
                <!-- Username -->
                <TextBlock Text="Username"
                           Foreground="#A0A0B0"
                           FontSize="14"
                           Margin="0,0,0,8"/>
                <TextBox Style="{StaticResource InputTextBox}"
                         Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                         KeyDown="UsernameTextBox_KeyDown"/>

                <!-- Password -->
                <TextBlock Text="Password"
                           Foreground="#A0A0B0"
                           FontSize="14"
                           Margin="0,20,0,8"/>
                <PasswordBox x:Name="PasswordBox"
                             Style="{StaticResource InputPasswordBox}"
                             PasswordChanged="PasswordBox_PasswordChanged"
                             KeyDown="PasswordBox_KeyDown"/>

                <!-- Login Button -->
                <Button Style="{StaticResource PrimaryButton}"
                        Content="LOGIN"
                        Margin="0,30,0,0"
                        Command="{Binding LoginCommand}"/>

                <!-- Error message -->
                <TextBlock Text="{Binding ErrorMessage}"
                           Foreground="#FF6B6B"
                           FontSize="14"
                           TextWrapping="Wrap"
                           Margin="0,16,0,0"
                           Visibility="{Binding HasError, Converter={StaticResource BoolToVisibility}}"/>

                <!-- Switch to PIN mode -->
                <Button Style="{StaticResource TouchButton}"
                        Content="Use PIN Instead"
                        Background="Transparent"
                        BorderThickness="0"
                        Margin="0,20,0,0"
                        Command="{Binding ToggleModeCommand}"/>

                <!-- Test credentials button (dev only) -->
                <Button Style="{StaticResource TouchButton}"
                        Content="Fill Test Credentials"
                        Background="#4B5563"
                        BorderThickness="0"
                        FontSize="12"
                        MinHeight="36"
                        Margin="0,8,0,0"
                        Click="FillTestCredentials_Click"
                        ToolTip="Fills admin / Admin@123"/>
            </StackPanel>

            <!-- PIN Mode -->
            <StackPanel Grid.Row="1"
                        Visibility="{Binding IsPinMode, Converter={StaticResource BoolToVisibility}}">

                <!-- Quick Login Users -->
                <ItemsControl ItemsSource="{Binding QuickLoginUsers}"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,20">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel HorizontalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource UserAvatarButton}"
                                    Command="{Binding DataContext.SelectUserCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}">
                                <StackPanel>
                                    <Border Width="50" Height="50"
                                            Background="#4E4E6E"
                                            CornerRadius="25"
                                            Margin="0,0,0,8">
                                        <TextBlock Text="{Binding FullName[0]}"
                                                   FontSize="20"
                                                   FontWeight="Bold"
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="{Binding FullName}"
                                               FontSize="12"
                                               Foreground="White"
                                               TextTrimming="CharacterEllipsis"
                                               MaxWidth="70"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- PIN Display -->
                <TextBlock Text="Enter PIN"
                           Foreground="#A0A0B0"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8"/>
                <Border Background="#2E2E4E"
                        CornerRadius="8"
                        Padding="20,10"
                        HorizontalAlignment="Center"
                        MinWidth="200">
                    <TextBlock Text="{Binding PinDisplay}"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               MinWidth="120"
                               TextAlignment="Center"/>
                </Border>

                <!-- Numeric Keypad -->
                <Grid HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Row 1: 1, 2, 3 -->
                    <Button Grid.Row="0" Grid.Column="0" Style="{StaticResource NumPadButton}" Content="1"
                            Command="{Binding AddPinDigitCommand}" CommandParameter="1"/>
                    <Button Grid.Row="0" Grid.Column="1" Style="{StaticResource NumPadButton}" Content="2"
                            Command="{Binding AddPinDigitCommand}" CommandParameter="2"/>
                    <Button Grid.Row="0" Grid.Column="2" Style="{StaticResource NumPadButton}" Content="3"
                            Command="{Binding AddPinDigitCommand}" CommandParameter="3"/>

                    <!-- Row 2: 4, 5, 6 -->
                    <Button Grid.Row="1" Grid.Column="0" Style="{StaticResource NumPadButton}" Content="4"
                            Command="{Binding AddPinDigitCommand}" CommandParameter="4"/>
                    <Button Grid.Row="1" Grid.Column="1" Style="{StaticResource NumPadButton}" Content="5"
                            Command="{Binding AddPinDigitCommand}" CommandParameter="5"/>
                    <Button Grid.Row="1" Grid.Column="2" Style="{StaticResource NumPadButton}" Content="6"
                            Command="{Binding AddPinDigitCommand}" CommandParameter="6"/>

                    <!-- Row 3: 7, 8, 9 -->
                    <Button Grid.Row="2" Grid.Column="0" Style="{StaticResource NumPadButton}" Content="7"
                            Command="{Binding AddPinDigitCommand}" CommandParameter="7"/>
                    <Button Grid.Row="2" Grid.Column="1" Style="{StaticResource NumPadButton}" Content="8"
                            Command="{Binding AddPinDigitCommand}" CommandParameter="8"/>
                    <Button Grid.Row="2" Grid.Column="2" Style="{StaticResource NumPadButton}" Content="9"
                            Command="{Binding AddPinDigitCommand}" CommandParameter="9"/>

                    <!-- Row 4: CLR, 0, OK -->
                    <Button Grid.Row="3" Grid.Column="0" Style="{StaticResource NumPadButton}" Content="CLR"
                            FontSize="16" Background="#E74C3C"
                            Command="{Binding ClearPinCommand}"/>
                    <Button Grid.Row="3" Grid.Column="1" Style="{StaticResource NumPadButton}" Content="0"
                            Command="{Binding AddPinDigitCommand}" CommandParameter="0"/>
                    <Button Grid.Row="3" Grid.Column="2" Style="{StaticResource NumPadButton}" Content="OK"
                            FontSize="16" Background="#4CAF50"
                            Command="{Binding LoginByPinCommand}"/>
                </Grid>

                <!-- Error message -->
                <TextBlock Text="{Binding ErrorMessage}"
                           Foreground="#FF6B6B"
                           FontSize="14"
                           TextWrapping="Wrap"
                           Margin="0,16,0,0"
                           HorizontalAlignment="Center"
                           Visibility="{Binding HasError, Converter={StaticResource BoolToVisibility}}"/>

                <!-- Switch to username/password mode -->
                <Button Style="{StaticResource TouchButton}"
                        Content="Use Username/Password Instead"
                        Background="Transparent"
                        BorderThickness="0"
                        Margin="0,20,0,0"
                        Command="{Binding ToggleModeCommand}"/>
            </StackPanel>

            <!-- Version info -->
            <TextBlock Grid.Row="2"
                       Text="Version 1.0.0"
                       Foreground="#606070"
                       FontSize="12"
                       HorizontalAlignment="Center"
                       Margin="0,40,0,0"/>
        </Grid>
    </Grid>
</UserControl>
