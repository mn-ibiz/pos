<Window x:Class="HospitalityPOS.WPF.Views.Dialogs.OrderItemNoteDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Special Instructions"
        Width="400" Height="280"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1E1E2E"
        WindowStyle="None"
        AllowsTransparency="True">

    <Border Background="#252538" CornerRadius="12" BorderBrush="#3D3D5C" BorderThickness="1">
        <Grid Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#1E1E2E" CornerRadius="12,12,0,0" Padding="16,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Special Instructions" Foreground="White" FontSize="16" FontWeight="Bold"/>
                        <TextBlock x:Name="ProductNameText" Foreground="#9CA3AF" FontSize="12" Margin="0,4,0,0"/>
                    </StackPanel>
                    <Button Grid.Column="1" Content="&#xE711;" FontFamily="Segoe MDL2 Assets"
                            Background="Transparent" Foreground="#9CA3AF" Width="32" Height="32"
                            BorderThickness="0" Cursor="Hand" Click="CancelButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

            <!-- Content -->
            <Grid Grid.Row="1" Margin="16,12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Add special instructions for this item:" Foreground="#9CA3AF" FontSize="12" Margin="0,0,0,8"/>

                <TextBox x:Name="NotesTextBox" Grid.Row="1"
                         Background="#2D2D44" Foreground="White" CaretBrush="White"
                         BorderBrush="#3D3D5C" BorderThickness="1"
                         Padding="10" FontSize="14"
                         AcceptsReturn="True" TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         MaxLength="200">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </Grid>

            <!-- Quick Notes -->
            <Border Grid.Row="1" VerticalAlignment="Bottom" Margin="16,0,16,8">
                <WrapPanel>
                    <Button Content="No Salt" Tag="No Salt" Click="QuickNote_Click" Style="{StaticResource QuickNoteButton}"/>
                    <Button Content="Extra Spicy" Tag="Extra Spicy" Click="QuickNote_Click" Style="{StaticResource QuickNoteButton}"/>
                    <Button Content="No Onion" Tag="No Onion" Click="QuickNote_Click" Style="{StaticResource QuickNoteButton}"/>
                    <Button Content="Allergies" Tag="Allergies - " Click="QuickNote_Click" Style="{StaticResource QuickNoteButton}"/>
                    <Button Content="To Go" Tag="To Go" Click="QuickNote_Click" Style="{StaticResource QuickNoteButton}"/>
                </WrapPanel>
            </Border>

            <!-- Footer Buttons -->
            <Border Grid.Row="2" Background="#1E1E2E" CornerRadius="0,0,12,12" Padding="16,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Content="Clear" Background="#6B7280" Foreground="White"
                            Height="40" Margin="0,0,6,0" FontWeight="SemiBold" BorderThickness="0"
                            Cursor="Hand" Click="ClearButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Grid.Column="1" Content="Save" Background="#22C55E" Foreground="White"
                            Height="40" Margin="6,0,0,0" FontWeight="SemiBold" BorderThickness="0"
                            Cursor="Hand" Click="SaveButton_Click" IsDefault="True">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Border>

    <Window.Resources>
        <Style x:Key="QuickNoteButton" TargetType="Button">
            <Setter Property="Background" Value="#3D3D5C"/>
            <Setter Property="Foreground" Value="#D1D5DB"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,0,4,4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#22C55E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
</Window>
