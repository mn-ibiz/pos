<Window x:Class="HospitalityPOS.WPF.Views.Dialogs.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding Title, RelativeSource={RelativeSource Self}}"
        Width="400"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        Background="#2D2D44">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Prompt -->
        <TextBlock Grid.Row="0"
                   Text="{Binding Prompt, RelativeSource={RelativeSource AncestorType=Window}}"
                   Foreground="White"
                   FontSize="14"
                   TextWrapping="Wrap"
                   Margin="0,0,0,16" />

        <!-- Input Field (TextBox or PasswordBox controlled by code-behind) -->
        <Grid Grid.Row="1">
            <TextBox x:Name="InputTextBox"
                     FontSize="16"
                     Padding="12,8"
                     Background="#1E1E2E"
                     Foreground="White"
                     BorderBrush="#4A4A6A"
                     BorderThickness="1"
                     CaretBrush="White" />

            <PasswordBox x:Name="PasswordInputBox"
                         FontSize="16"
                         Padding="12,8"
                         Background="#1E1E2E"
                         Foreground="White"
                         BorderBrush="#4A4A6A"
                         BorderThickness="1"
                         Visibility="Collapsed" />
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="Cancel"
                    Width="100"
                    Height="40"
                    Margin="0,0,8,0"
                    Background="#4A4A6A"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="CancelButton_Click" />
            <Button Content="OK"
                    Width="100"
                    Height="40"
                    Background="#22C55E"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    IsDefault="True"
                    Click="OkButton_Click" />
        </StackPanel>
    </Grid>
</Window>
