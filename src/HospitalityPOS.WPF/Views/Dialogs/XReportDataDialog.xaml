<Window x:Class="HospitalityPOS.WPF.Views.Dialogs.XReportDataDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="X Report"
        Width="600"
        Height="750"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        ResizeMode="CanResize"
        MinWidth="500"
        MinHeight="600"
        Background="#0F0F1A">

    <Window.Resources>
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#3B82F6" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,16,0,8" />
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#9CA3AF" />
            <Setter Property="FontSize" Value="13" />
        </Style>

        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="FontFamily" Value="Consolas" />
            <Setter Property="HorizontalAlignment" Value="Right" />
        </Style>

        <Style x:Key="TotalValueStyle" TargetType="TextBlock" BasedOn="{StaticResource ValueStyle}">
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="15" />
        </Style>

        <Style x:Key="DividerStyle" TargetType="Border">
            <Setter Property="Background" Value="#2D2D44" />
            <Setter Property="Height" Value="1" />
            <Setter Property="Margin" Value="0,12,0,12" />
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="44" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Scrollable Content -->
        <ScrollViewer Grid.Row="0"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="24,16,24,8">
            <StackPanel>
                <!-- Report Header -->
                <StackPanel HorizontalAlignment="Center" Margin="0,0,0,16">
                    <TextBlock x:Name="BusinessNameText"
                               Text="HOSPITALITY POS"
                               Foreground="White"
                               FontSize="18"
                               FontWeight="Bold"
                               HorizontalAlignment="Center" />
                    <TextBlock x:Name="BusinessAddressText"
                               Text=""
                               Foreground="#6B7280"
                               FontSize="12"
                               HorizontalAlignment="Center"
                               Visibility="Collapsed" />
                    <TextBlock x:Name="BusinessPhoneText"
                               Text=""
                               Foreground="#6B7280"
                               FontSize="12"
                               HorizontalAlignment="Center"
                               Visibility="Collapsed" />
                </StackPanel>

                <Border Style="{StaticResource DividerStyle}" />

                <!-- Report Title and Terminal Info -->
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="X REPORT"
                               Foreground="#3B82F6"
                               FontSize="22"
                               FontWeight="Bold"
                               HorizontalAlignment="Center" />
                    <TextBlock x:Name="TerminalInfoText"
                               Text="Terminal: REG-001"
                               Foreground="#9CA3AF"
                               FontSize="12"
                               HorizontalAlignment="Center"
                               Margin="0,4,0,0" />
                </StackPanel>

                <Grid Margin="0,12,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Report #:" Style="{StaticResource LabelStyle}" />
                        <TextBlock x:Name="ReportNumberText" Text="X-2024-001-0001" Foreground="White" FontSize="14" FontWeight="SemiBold" />
                    </StackPanel>
                    <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                        <TextBlock x:Name="GeneratedAtText" Text="2025-01-25 14:35" Style="{StaticResource LabelStyle}" HorizontalAlignment="Right" />
                        <TextBlock x:Name="GeneratedByText" Text="Generated by: Manager" Style="{StaticResource LabelStyle}" HorizontalAlignment="Right" />
                    </StackPanel>
                </Grid>

                <Border Style="{StaticResource DividerStyle}" />

                <!-- Shift Info -->
                <TextBlock Text="SHIFT INFORMATION" Style="{StaticResource SectionHeaderStyle}" Margin="0,0,0,8" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Shift Started:" Style="{StaticResource LabelStyle}" />
                    <TextBlock x:Name="ShiftStartedText" Grid.Row="0" Grid.Column="1" Text="2025-01-25 08:00" Style="{StaticResource ValueStyle}" />
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Current Time:" Style="{StaticResource LabelStyle}" />
                    <TextBlock x:Name="CurrentTimeText" Grid.Row="1" Grid.Column="1" Text="2025-01-25 14:35" Style="{StaticResource ValueStyle}" />
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Duration:" Style="{StaticResource LabelStyle}" />
                    <TextBlock x:Name="DurationText" Grid.Row="2" Grid.Column="1" Text="6h 35m" Style="{StaticResource ValueStyle}" />
                </Grid>

                <Border Style="{StaticResource DividerStyle}" />

                <!-- Cashier Sessions -->
                <TextBlock Text="CASHIER SESSIONS" Style="{StaticResource SectionHeaderStyle}" Margin="0,0,0,8" />
                <ItemsControl x:Name="CashierSessionsItems">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#1A1A2E" CornerRadius="6" Padding="12" Margin="0,4">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Row="0" Grid.Column="0">
                                        <TextBlock Text="{Binding CashierName}" Foreground="White" FontWeight="SemiBold" FontSize="13"/>
                                        <TextBlock Foreground="#6B7280" FontSize="11">
                                            <Run Text="{Binding StartTime, StringFormat='HH:mm'}"/>
                                            <Run Text=" - "/>
                                            <Run Text="{Binding EndTime, StringFormat='HH:mm', TargetNullValue='Active'}"/>
                                            <Run Text=" ("/>
                                            <Run Text="{Binding DurationFormatted}"/>
                                            <Run Text=")"/>
                                        </TextBlock>
                                    </StackPanel>
                                    <StackPanel Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right">
                                        <TextBlock Foreground="#10B981" FontWeight="Bold" FontFamily="Consolas">
                                            <Run Text="KSh "/>
                                            <Run Text="{Binding SalesTotal, StringFormat='N2'}"/>
                                        </TextBlock>
                                        <TextBlock Foreground="#6B7280" FontSize="11" HorizontalAlignment="Right">
                                            <Run Text="{Binding TransactionCount}"/>
                                            <Run Text=" transactions"/>
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <TextBlock x:Name="NoCashierSessionsText"
                           Text="No cashier sessions recorded"
                           Style="{StaticResource LabelStyle}"
                           FontStyle="Italic"
                           Visibility="Collapsed" />

                <Border Style="{StaticResource DividerStyle}" />

                <!-- Sales Summary -->
                <TextBlock Text="SALES SUMMARY" Style="{StaticResource SectionHeaderStyle}" Margin="0,0,0,8" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Gross Sales:" Style="{StaticResource LabelStyle}" />
                    <TextBlock x:Name="GrossSalesText" Grid.Row="0" Grid.Column="1" Text="KSh 0.00" Style="{StaticResource ValueStyle}" />
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Discounts:" Style="{StaticResource LabelStyle}" />
                    <TextBlock x:Name="DiscountsText" Grid.Row="1" Grid.Column="1" Text="-KSh 0.00" Foreground="#EF4444" FontFamily="Consolas" FontSize="13" HorizontalAlignment="Right" />
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Refunds:" Style="{StaticResource LabelStyle}" />
                    <TextBlock x:Name="RefundsText" Grid.Row="2" Grid.Column="1" Text="-KSh 0.00" Foreground="#EF4444" FontFamily="Consolas" FontSize="13" HorizontalAlignment="Right" />
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Net Sales:" Style="{StaticResource LabelStyle}" />
                    <TextBlock x:Name="NetSalesText" Grid.Row="3" Grid.Column="1" Text="KSh 0.00" Style="{StaticResource ValueStyle}" />
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Tax:" Style="{StaticResource LabelStyle}" />
                    <TextBlock x:Name="TaxText" Grid.Row="4" Grid.Column="1" Text="KSh 0.00" Style="{StaticResource ValueStyle}" />
                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Tips:" Style="{StaticResource LabelStyle}" />
                    <TextBlock x:Name="TipsText" Grid.Row="5" Grid.Column="1" Text="KSh 0.00" Style="{StaticResource ValueStyle}" />
                    <Border Grid.Row="6" Grid.ColumnSpan="2" Background="#2D2D44" Height="1" />
                    <TextBlock Grid.Row="7" Grid.Column="0" Text="GRAND TOTAL:" Foreground="White" FontSize="14" FontWeight="Bold" />
                    <TextBlock x:Name="GrandTotalText" Grid.Row="7" Grid.Column="1" Text="KSh 0.00" Style="{StaticResource TotalValueStyle}" Foreground="#10B981" />
                </Grid>

                <Border Style="{StaticResource DividerStyle}" />

                <!-- Payment Breakdown -->
                <TextBlock Text="PAYMENT BREAKDOWN" Style="{StaticResource SectionHeaderStyle}" Margin="0,0,0,8" />
                <ItemsControl x:Name="PaymentBreakdownItems">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Style="{StaticResource LabelStyle}">
                                    <Run Text="{Binding PaymentMethodName}" />
                                    <Run Text=" (" /><Run Text="{Binding TransactionCount}" /><Run Text=")" />
                                </TextBlock>
                                <TextBlock Grid.Column="1" Text="{Binding Amount, StringFormat='KSh {0:N2}'}" Style="{StaticResource ValueStyle}" />
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <TextBlock x:Name="NoPaymentBreakdownText"
                           Text="No payments recorded"
                           Style="{StaticResource LabelStyle}"
                           FontStyle="Italic"
                           Visibility="Collapsed" />

                <Border Style="{StaticResource DividerStyle}" />

                <!-- Statistics -->
                <TextBlock Text="STATISTICS" Style="{StaticResource SectionHeaderStyle}" Margin="0,0,0,8" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Total Transactions:" Style="{StaticResource LabelStyle}" />
                    <TextBlock x:Name="TransactionCountText" Grid.Row="0" Grid.Column="1" Text="0" Style="{StaticResource ValueStyle}" />
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Average Transaction:" Style="{StaticResource LabelStyle}" />
                    <TextBlock x:Name="AverageTransactionText" Grid.Row="1" Grid.Column="1" Text="KSh 0.00" Style="{StaticResource ValueStyle}" />
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Void Count:" Style="{StaticResource LabelStyle}" />
                    <TextBlock x:Name="VoidCountText" Grid.Row="2" Grid.Column="1" Text="0" Foreground="#EF4444" FontFamily="Consolas" FontSize="13" HorizontalAlignment="Right" />
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Refund Count:" Style="{StaticResource LabelStyle}" />
                    <TextBlock x:Name="RefundCountText" Grid.Row="3" Grid.Column="1" Text="0" Foreground="#F59E0B" FontFamily="Consolas" FontSize="13" HorizontalAlignment="Right" />
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Discount Count:" Style="{StaticResource LabelStyle}" />
                    <TextBlock x:Name="DiscountCountText" Grid.Row="4" Grid.Column="1" Text="0" Style="{StaticResource ValueStyle}" />
                </Grid>

                <Border Style="{StaticResource DividerStyle}" />

                <!-- Cash Drawer -->
                <TextBlock Text="CASH DRAWER" Style="{StaticResource SectionHeaderStyle}" Margin="0,0,0,8" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Opening Float:" Style="{StaticResource LabelStyle}" />
                    <TextBlock x:Name="OpeningFloatText" Grid.Row="0" Grid.Column="1" Text="KSh 0.00" Style="{StaticResource ValueStyle}" />
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Cash Received:" Style="{StaticResource LabelStyle}" />
                    <TextBlock x:Name="CashReceivedText" Grid.Row="1" Grid.Column="1" Text="KSh 0.00" Style="{StaticResource ValueStyle}" />
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Cash Refunds:" Style="{StaticResource LabelStyle}" />
                    <TextBlock x:Name="CashRefundsText" Grid.Row="2" Grid.Column="1" Text="-KSh 0.00" Foreground="#EF4444" FontFamily="Consolas" FontSize="13" HorizontalAlignment="Right" />
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Cash Payouts:" Style="{StaticResource LabelStyle}" />
                    <TextBlock x:Name="CashPayoutsText" Grid.Row="3" Grid.Column="1" Text="-KSh 0.00" Foreground="#F59E0B" FontFamily="Consolas" FontSize="13" HorizontalAlignment="Right" />
                    <Border Grid.Row="4" Grid.ColumnSpan="2" Background="#2D2D44" Height="1" />
                    <TextBlock Grid.Row="5" Grid.Column="0" Text="EXPECTED CASH:" Foreground="White" FontWeight="Bold" />
                    <TextBlock x:Name="ExpectedCashText" Grid.Row="5" Grid.Column="1" Text="KSh 0.00" Style="{StaticResource TotalValueStyle}" Foreground="#F59E0B" />
                </Grid>

                <Border Style="{StaticResource DividerStyle}" />

                <!-- Footer -->
                <TextBlock Text="** END OF X REPORT **"
                           Foreground="#6B7280"
                           FontSize="12"
                           HorizontalAlignment="Center"
                           Margin="0,8,0,16" />
                <TextBlock Text="Mid-shift examination report - Non-destructive"
                           Foreground="#4B5563"
                           FontSize="10"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,16" />
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Border Grid.Row="1" Background="#1A1A2E" Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="16" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        x:Name="PrintButton"
                        Content="Print Report"
                        Background="#2D2D44"
                        Foreground="White"
                        Style="{StaticResource ActionButtonStyle}"
                        Click="PrintButton_Click" />

                <Button Grid.Column="2"
                        Content="Close"
                        Background="#3B82F6"
                        Foreground="White"
                        Style="{StaticResource ActionButtonStyle}"
                        Click="CloseButton_Click" />
            </Grid>
        </Border>
    </Grid>
</Window>
