<Window x:Class="HospitalityPOS.WPF.Views.Dialogs.RecurringExpenseEditorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="Recurring Expense"
        Width="520" Height="680"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E2E"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="BorderBrush" Value="#3D3D5C"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          VerticalAlignment="Center"
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#F59E0B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3D3D5C"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="44"/>
        </Style>

        <!-- Modern DatePicker Style -->
        <Style x:Key="ModernDatePicker" TargetType="DatePicker">
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3D3D5C"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="44"/>
        </Style>

        <!-- Modern CheckBox Style -->
        <Style x:Key="ModernCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#9CA3AF"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,8,0,0"/>
        </Style>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="MinHeight" Value="44"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="20,10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="#3D3D5C"/>
        </Style>
    </Window.Resources>

    <Border Background="#1E1E2E" CornerRadius="12" BorderBrush="#3D3D5C" BorderThickness="1">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock x:Name="TitleText" FontSize="20" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Set up automatic expense generation" Foreground="#9CA3AF" FontSize="13" Margin="0,4,0,0"/>
                </StackPanel>

                <Button Grid.Column="1" Content="&#xE8BB;" FontFamily="Segoe MDL2 Assets"
                        Click="CloseButton_Click"
                        Background="Transparent" BorderThickness="0"
                        Foreground="#9CA3AF" FontSize="16" Padding="8"
                        Cursor="Hand" VerticalAlignment="Top"/>
            </Grid>

            <!-- Form Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Name -->
                    <TextBlock Text="Name *" Foreground="#9CA3AF" FontSize="12" Margin="0,0,0,6"/>
                    <TextBox x:Name="NameTextBox" Style="{StaticResource ModernTextBox}"
                             MaxLength="100"/>

                    <!-- Description -->
                    <TextBlock Text="Description" Foreground="#9CA3AF" FontSize="12" Margin="0,16,0,6"/>
                    <TextBox x:Name="DescriptionTextBox" Style="{StaticResource ModernTextBox}"
                             Height="60" TextWrapping="Wrap" AcceptsReturn="True"
                             VerticalContentAlignment="Top" MaxLength="500"/>

                    <!-- Amount and Category Row -->
                    <Grid Margin="0,16,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Amount (KES) *" Foreground="#9CA3AF" FontSize="12" Margin="0,0,0,6"/>
                            <TextBox x:Name="AmountTextBox" Style="{StaticResource ModernTextBox}"
                                     PreviewTextInput="NumberOnly_PreviewTextInput"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Category *" Foreground="#9CA3AF" FontSize="12" Margin="0,0,0,6"/>
                            <ComboBox x:Name="CategoryComboBox" Style="{StaticResource ModernComboBox}"
                                      DisplayMemberPath="Name"/>
                        </StackPanel>
                    </Grid>

                    <!-- Frequency and Day Row -->
                    <Grid Margin="0,16,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Frequency *" Foreground="#9CA3AF" FontSize="12" Margin="0,0,0,6"/>
                            <ComboBox x:Name="FrequencyComboBox" Style="{StaticResource ModernComboBox}"
                                      SelectionChanged="FrequencyComboBox_SelectionChanged"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" x:Name="DayOfMonthPanel">
                            <TextBlock Text="Day of Month" Foreground="#9CA3AF" FontSize="12" Margin="0,0,0,6"/>
                            <ComboBox x:Name="DayOfMonthComboBox" Style="{StaticResource ModernComboBox}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Start Date and End Date Row -->
                    <Grid Margin="0,16,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Start Date *" Foreground="#9CA3AF" FontSize="12" Margin="0,0,0,6"/>
                            <DatePicker x:Name="StartDatePicker" Style="{StaticResource ModernDatePicker}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="End Date (Optional)" Foreground="#9CA3AF" FontSize="12" Margin="0,0,0,6"/>
                            <DatePicker x:Name="EndDatePicker" Style="{StaticResource ModernDatePicker}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Supplier -->
                    <TextBlock Text="Supplier (Optional)" Foreground="#9CA3AF" FontSize="12" Margin="0,16,0,6"/>
                    <ComboBox x:Name="SupplierComboBox" Style="{StaticResource ModernComboBox}"
                              DisplayMemberPath="Name"/>

                    <!-- Payment Method -->
                    <TextBlock Text="Payment Method (Optional)" Foreground="#9CA3AF" FontSize="12" Margin="0,16,0,6"/>
                    <ComboBox x:Name="PaymentMethodComboBox" Style="{StaticResource ModernComboBox}"
                              DisplayMemberPath="Name"/>

                    <!-- Options -->
                    <Border Background="#2D2D44" CornerRadius="8" Padding="16" Margin="0,16,0,0">
                        <StackPanel>
                            <TextBlock Text="Options" Foreground="White" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>

                            <CheckBox x:Name="AutoGenerateCheckBox" Style="{StaticResource ModernCheckBox}"
                                      Content="Auto-generate expenses when due" IsChecked="True"/>

                            <CheckBox x:Name="AutoApproveCheckBox" Style="{StaticResource ModernCheckBox}"
                                      Content="Auto-approve generated expenses"/>

                            <CheckBox x:Name="IsEstimatedCheckBox" Style="{StaticResource ModernCheckBox}"
                                      Content="Amount is estimated (may vary)"/>

                            <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                <TextBlock Text="Reminder days before:" Foreground="#9CA3AF" FontSize="13" VerticalAlignment="Center"/>
                                <TextBox x:Name="ReminderDaysTextBox" Style="{StaticResource ModernTextBox}"
                                         Width="60" Height="36" Margin="8,0,0,0" Text="3"
                                         PreviewTextInput="NumberOnly_PreviewTextInput"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Notes -->
                    <TextBlock Text="Notes" Foreground="#9CA3AF" FontSize="12" Margin="0,16,0,6"/>
                    <TextBox x:Name="NotesTextBox" Style="{StaticResource ModernTextBox}"
                             Height="60" TextWrapping="Wrap" AcceptsReturn="True"
                             VerticalContentAlignment="Top" MaxLength="1000"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Action Buttons -->
            <Grid Grid.Row="2" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="ErrorText" Foreground="#EF4444" FontSize="12"
                           VerticalAlignment="Center" TextWrapping="Wrap" MaxWidth="250"/>

                <Button Grid.Column="1" Content="Cancel" Style="{StaticResource ModernButton}"
                        Click="CancelButton_Click" Margin="0,0,12,0"/>

                <Button Grid.Column="2" x:Name="SaveButton" Content="Save" Style="{StaticResource ModernButton}"
                        Background="#10B981" Click="SaveButton_Click"/>
            </Grid>
        </Grid>
    </Border>
</Window>
