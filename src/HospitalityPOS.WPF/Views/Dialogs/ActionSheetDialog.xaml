<Window x:Class="HospitalityPOS.WPF.Views.Dialogs.ActionSheetDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Action"
        Width="350"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        Background="#1E1E2E">
    <Window.Resources>
        <Style TargetType="Button" x:Key="ActionButton">
            <Setter Property="Background" Value="#313244"/>
            <Setter Property="Foreground" Value="#CDD6F4"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Margin" Value="0,4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45475A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Button" x:Key="DestructiveButton" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#F38BA8"/>
            <Setter Property="Foreground" Value="#1E1E2E"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#EBA0AC"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="Button" x:Key="CancelButton" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#6C7086"/>
        </Style>
    </Window.Resources>

    <StackPanel Margin="20">
        <TextBlock x:Name="TitleText"
                   Text="Select Action"
                   FontSize="18"
                   FontWeight="SemiBold"
                   Foreground="#CDD6F4"
                   Margin="0,0,0,8"/>

        <TextBlock x:Name="MessageText"
                   TextWrapping="Wrap"
                   Foreground="#A6ADC8"
                   Margin="0,0,0,16"
                   Visibility="Collapsed"/>

        <ItemsControl x:Name="OptionsPanel">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Content="{Binding}"
                            Style="{StaticResource ActionButton}"
                            Click="Option_Click"
                            HorizontalAlignment="Stretch"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <Button x:Name="CancelBtn"
                Content="Cancel"
                Style="{StaticResource CancelButton}"
                Click="Cancel_Click"
                Margin="0,12,0,0"
                HorizontalAlignment="Stretch"/>
    </StackPanel>
</Window>
