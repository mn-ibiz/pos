<Window x:Class="HospitalityPOS.WPF.Views.Dialogs.HtmlPreviewDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="Preview"
        Width="700" Height="850"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E2E"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip">

    <Border Background="#1E1E2E" CornerRadius="12" BorderBrush="#3D3D5C" BorderThickness="1">
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header with close button -->
            <Grid Grid.Row="0" Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock x:Name="TitleText" FontSize="20" FontWeight="Bold" Foreground="White"/>
                    <TextBlock x:Name="SubtitleText" Foreground="#9CA3AF" FontSize="13" Margin="0,4,0,0"/>
                </StackPanel>

                <Button Grid.Column="1" Content="&#xE8BB;" FontFamily="Segoe MDL2 Assets"
                        Click="CloseButton_Click"
                        Background="Transparent" BorderThickness="0"
                        Foreground="#9CA3AF" FontSize="16" Padding="8"
                        Cursor="Hand" VerticalAlignment="Top"/>
            </Grid>

            <!-- WebBrowser for HTML Preview -->
            <Border Grid.Row="1" Background="White" CornerRadius="8">
                <WebBrowser x:Name="PreviewBrowser" Margin="1"/>
            </Border>

            <!-- Action Buttons -->
            <Border Grid.Row="2" Background="#2D2D44" CornerRadius="8" Padding="16" Margin="0,16,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="InfoText" Foreground="#9CA3AF" VerticalAlignment="Center" FontSize="13"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button x:Name="PrintButton" Content="&#xE749; Print" Click="Print_Click"
                                Background="#059669" Foreground="White" BorderThickness="0"
                                Padding="20,10" FontSize="14" FontFamily="Segoe MDL2 Assets"
                                Cursor="Hand" Margin="0,0,8,0"/>

                        <Button x:Name="ExportButton" Content="&#xE896; Export PDF" Click="ExportPdf_Click"
                                Background="#0284C7" Foreground="White" BorderThickness="0"
                                Padding="20,10" FontSize="14" FontFamily="Segoe MDL2 Assets"
                                Cursor="Hand" Margin="0,0,8,0"/>

                        <Button Content="Close" Click="CloseButton_Click"
                                Background="#3D3D5C" Foreground="White" BorderThickness="0"
                                Padding="20,10" FontSize="14"
                                Cursor="Hand"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
