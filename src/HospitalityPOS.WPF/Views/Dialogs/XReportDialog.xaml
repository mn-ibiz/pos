<Window x:Class="HospitalityPOS.WPF.Views.Dialogs.XReportDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="X Report"
        Width="550"
        Height="700"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        ResizeMode="CanResize"
        MinWidth="450"
        MinHeight="500"
        Background="#2D2D44">

    <Window.Resources>
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#4CAF50" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,16,0,8" />
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#8888AA" />
            <Setter Property="FontSize" Value="13" />
        </Style>

        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="FontFamily" Value="Consolas" />
            <Setter Property="HorizontalAlignment" Value="Right" />
        </Style>

        <Style x:Key="TotalValueStyle" TargetType="TextBlock" BasedOn="{StaticResource ValueStyle}">
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="15" />
        </Style>

        <Style x:Key="DividerStyle" TargetType="Border">
            <Setter Property="Background" Value="#4A4A6A" />
            <Setter Property="Height" Value="1" />
            <Setter Property="Margin" Value="0,12,0,12" />
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="44" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Scrollable Content -->
        <ScrollViewer Grid.Row="0"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="24,16,24,8">
            <StackPanel>
                <!-- Report Header -->
                <StackPanel HorizontalAlignment="Center" Margin="0,0,0,16">
                    <TextBlock x:Name="BusinessNameText"
                               Text="HOSPITALITY POS"
                               Foreground="White"
                               FontSize="18"
                               FontWeight="Bold"
                               HorizontalAlignment="Center" />
                    <TextBlock x:Name="BusinessAddressText"
                               Text=""
                               Foreground="#8888AA"
                               FontSize="12"
                               HorizontalAlignment="Center"
                               Visibility="Collapsed" />
                    <TextBlock x:Name="BusinessPhoneText"
                               Text=""
                               Foreground="#8888AA"
                               FontSize="12"
                               HorizontalAlignment="Center"
                               Visibility="Collapsed" />
                </StackPanel>

                <Border Style="{StaticResource DividerStyle}" />

                <!-- Report Title -->
                <TextBlock Text="X REPORT"
                           Foreground="#4CAF50"
                           FontSize="20"
                           FontWeight="Bold"
                           HorizontalAlignment="Center" />

                <Grid Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Report #:" Style="{StaticResource LabelStyle}" />
                        <TextBlock x:Name="ReportNumberText" Text="X-0001" Foreground="White" FontSize="14" FontWeight="SemiBold" />
                    </StackPanel>
                    <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                        <TextBlock x:Name="GeneratedAtText" Text="2025-12-30 14:35" Style="{StaticResource LabelStyle}" HorizontalAlignment="Right" />
                        <TextBlock x:Name="GeneratedByText" Text="Generated by: Manager" Style="{StaticResource LabelStyle}" HorizontalAlignment="Right" />
                    </StackPanel>
                </Grid>

                <Border Style="{StaticResource DividerStyle}" />

                <!-- Work Period Info -->
                <TextBlock Text="WORK PERIOD" Style="{StaticResource SectionHeaderStyle}" Margin="0,0,0,8" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Opened:" Style="{StaticResource LabelStyle}" />
                    <TextBlock x:Name="OpenedAtText" Grid.Row="0" Grid.Column="1" Text="2025-12-30 08:00" Style="{StaticResource ValueStyle}" />
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Opened By:" Style="{StaticResource LabelStyle}" />
                    <TextBlock x:Name="OpenedByText" Grid.Row="1" Grid.Column="1" Text="Admin" Style="{StaticResource ValueStyle}" />
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Duration:" Style="{StaticResource LabelStyle}" />
                    <TextBlock x:Name="DurationText" Grid.Row="2" Grid.Column="1" Text="6h 35m" Style="{StaticResource ValueStyle}" />
                </Grid>

                <Border Style="{StaticResource DividerStyle}" />

                <!-- Sales Summary -->
                <TextBlock Text="SALES SUMMARY" Style="{StaticResource SectionHeaderStyle}" Margin="0,0,0,8" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Gross Sales:" Style="{StaticResource LabelStyle}" />
                    <TextBlock x:Name="GrossSalesText" Grid.Row="0" Grid.Column="1" Text="KSh 0.00" Style="{StaticResource ValueStyle}" />
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Discounts:" Style="{StaticResource LabelStyle}" />
                    <TextBlock x:Name="DiscountsText" Grid.Row="1" Grid.Column="1" Text="-KSh 0.00" Foreground="#FF6B6B" FontFamily="Consolas" FontSize="13" HorizontalAlignment="Right" />
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Net Sales:" Style="{StaticResource LabelStyle}" />
                    <TextBlock x:Name="NetSalesText" Grid.Row="2" Grid.Column="1" Text="KSh 0.00" Style="{StaticResource ValueStyle}" />
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Tax:" Style="{StaticResource LabelStyle}" />
                    <TextBlock x:Name="TaxText" Grid.Row="3" Grid.Column="1" Text="KSh 0.00" Style="{StaticResource ValueStyle}" />
                    <Border Grid.Row="4" Grid.ColumnSpan="2" Background="#4A4A6A" Height="1" />
                    <TextBlock Grid.Row="5" Grid.Column="0" Text="GRAND TOTAL:" Foreground="White" FontSize="14" FontWeight="Bold" />
                    <TextBlock x:Name="GrandTotalText" Grid.Row="5" Grid.Column="1" Text="KSh 0.00" Style="{StaticResource TotalValueStyle}" Foreground="#4CAF50" />
                </Grid>

                <Border Style="{StaticResource DividerStyle}" />

                <!-- Sales by Category -->
                <TextBlock Text="SALES BY CATEGORY" Style="{StaticResource SectionHeaderStyle}" Margin="0,0,0,8" />
                <ItemsControl x:Name="CategorySalesItems">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Style="{StaticResource LabelStyle}">
                                    <Run Text="{Binding CategoryName}" />
                                    <Run Text=" (" /><Run Text="{Binding ItemCount}" /><Run Text=")" />
                                </TextBlock>
                                <TextBlock Grid.Column="1" Text="{Binding TotalAmount, StringFormat='KSh {0:N2}'}" Style="{StaticResource ValueStyle}" />
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <TextBlock x:Name="NoCategorySalesText"
                           Text="No sales recorded"
                           Style="{StaticResource LabelStyle}"
                           FontStyle="Italic"
                           Visibility="Collapsed" />

                <Border Style="{StaticResource DividerStyle}" />

                <!-- Sales by Payment Method -->
                <TextBlock Text="SALES BY PAYMENT METHOD" Style="{StaticResource SectionHeaderStyle}" Margin="0,0,0,8" />
                <ItemsControl x:Name="PaymentMethodItems">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Style="{StaticResource LabelStyle}">
                                    <Run Text="{Binding PaymentMethod}" />
                                    <Run Text=" (" /><Run Text="{Binding TransactionCount}" /><Run Text=")" />
                                </TextBlock>
                                <TextBlock Grid.Column="1" Text="{Binding TotalAmount, StringFormat='KSh {0:N2}'}" Style="{StaticResource ValueStyle}" />
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <TextBlock x:Name="NoPaymentSalesText"
                           Text="No payments recorded"
                           Style="{StaticResource LabelStyle}"
                           FontStyle="Italic"
                           Visibility="Collapsed" />

                <Border Style="{StaticResource DividerStyle}" />

                <!-- Sales by Cashier -->
                <TextBlock Text="SALES BY CASHIER" Style="{StaticResource SectionHeaderStyle}" Margin="0,0,0,8" />
                <ItemsControl x:Name="UserSalesItems">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Style="{StaticResource LabelStyle}">
                                    <Run Text="{Binding UserName}" />
                                    <Run Text=" (" /><Run Text="{Binding TransactionCount}" /><Run Text=")" />
                                </TextBlock>
                                <TextBlock Grid.Column="1" Text="{Binding TotalAmount, StringFormat='KSh {0:N2}'}" Style="{StaticResource ValueStyle}" />
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <TextBlock x:Name="NoUserSalesText"
                           Text="No sales by user recorded"
                           Style="{StaticResource LabelStyle}"
                           FontStyle="Italic"
                           Visibility="Collapsed" />

                <Border Style="{StaticResource DividerStyle}" />

                <!-- Transaction Statistics -->
                <TextBlock Text="TRANSACTION STATISTICS" Style="{StaticResource SectionHeaderStyle}" Margin="0,0,0,8" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Total Transactions:" Style="{StaticResource LabelStyle}" />
                    <TextBlock x:Name="TransactionCountText" Grid.Row="0" Grid.Column="1" Text="0" Style="{StaticResource ValueStyle}" />
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Average Value:" Style="{StaticResource LabelStyle}" />
                    <TextBlock x:Name="AverageValueText" Grid.Row="1" Grid.Column="1" Text="KSh 0.00" Style="{StaticResource ValueStyle}" />
                </Grid>

                <Border Style="{StaticResource DividerStyle}" />

                <!-- Voids Summary -->
                <TextBlock x:Name="VoidsSectionHeader" Style="{StaticResource SectionHeaderStyle}" Margin="0,0,0,8">
                    <Run Text="VOIDS (" /><Run x:Name="VoidCountRun" Text="0" /><Run Text=")" />
                </TextBlock>
                <ItemsControl x:Name="VoidsItems">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding ReceiptNumber}" Foreground="#FF6B6B" FontSize="12" FontWeight="SemiBold" />
                                    <TextBlock Text="{Binding Reason}" Style="{StaticResource LabelStyle}" FontSize="11" TextTrimming="CharacterEllipsis" />
                                </StackPanel>
                                <TextBlock Grid.Column="1" Text="{Binding Amount, StringFormat='KSh {0:N2}'}" Foreground="#FF6B6B" FontFamily="Consolas" FontSize="13" HorizontalAlignment="Right" VerticalAlignment="Center" />
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <TextBlock x:Name="NoVoidsText"
                           Text="No voids recorded"
                           Style="{StaticResource LabelStyle}"
                           FontStyle="Italic"
                           Visibility="Collapsed" />
                <Grid x:Name="VoidTotalGrid" Margin="0,8,0,0" Visibility="Collapsed">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Void Total:" Foreground="#FF6B6B" FontWeight="SemiBold" />
                    <TextBlock x:Name="VoidTotalText" Grid.Column="1" Text="KSh 0.00" Foreground="#FF6B6B" FontFamily="Consolas" FontWeight="Bold" HorizontalAlignment="Right" />
                </Grid>

                <Border Style="{StaticResource DividerStyle}" />

                <!-- Cash Position -->
                <TextBlock Text="CASH POSITION" Style="{StaticResource SectionHeaderStyle}" Margin="0,0,0,8" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Opening Float:" Style="{StaticResource LabelStyle}" />
                    <TextBlock x:Name="OpeningFloatText" Grid.Row="0" Grid.Column="1" Text="KSh 0.00" Style="{StaticResource ValueStyle}" />
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Expected Cash:" Foreground="White" FontWeight="SemiBold" />
                    <TextBlock x:Name="ExpectedCashText" Grid.Row="1" Grid.Column="1" Text="KSh 0.00" Style="{StaticResource TotalValueStyle}" Foreground="#4CAF50" />
                </Grid>

                <Border Style="{StaticResource DividerStyle}" />

                <!-- Footer -->
                <TextBlock Text="** END OF X REPORT **"
                           Foreground="#8888AA"
                           FontSize="12"
                           HorizontalAlignment="Center"
                           Margin="0,8,0,16" />
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Border Grid.Row="1" Background="#1E1E2E" Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="16" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        x:Name="PrintButton"
                        Content="Print Report"
                        Background="#3D3D5C"
                        Foreground="White"
                        Style="{StaticResource ActionButtonStyle}"
                        Click="PrintButton_Click" />

                <Button Grid.Column="2"
                        Content="Close"
                        Background="#4CAF50"
                        Foreground="White"
                        Style="{StaticResource ActionButtonStyle}"
                        Click="CloseButton_Click" />
            </Grid>
        </Border>
    </Grid>
</Window>
