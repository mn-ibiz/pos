<Window x:Class="HospitalityPOS.WPF.Views.Dialogs.MpesaPaymentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="M-Pesa Payment"
        Height="620" Width="420"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False">

    <Window.Resources>
        <!-- Numpad Button Style -->
        <Style x:Key="NumpadButton" TargetType="Button">
            <Setter Property="Background" Value="#374151"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4B5563"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Status Indicator Style -->
        <Style x:Key="StatusIndicator" TargetType="Ellipse">
            <Setter Property="Width" Value="16"/>
            <Setter Property="Height" Value="16"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Fill" Value="#4B5563"/>
        </Style>

        <!-- Action Button Style -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#1E1E2E" CornerRadius="12" BorderBrush="#3D3D5C" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" Background="#252538" CornerRadius="12,12,0,0" Padding="16,12">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="&#xE8C7;" FontFamily="Segoe MDL2 Assets" FontSize="24"
                                   Foreground="#22C55E" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <TextBlock Text="M-PESA PAYMENT" FontSize="18" FontWeight="Bold"
                                   Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button Content="&#xE711;" FontFamily="Segoe MDL2 Assets" FontSize="14"
                            Background="Transparent" Foreground="#9CA3AF"
                            HorizontalAlignment="Right" VerticalAlignment="Center"
                            Width="32" Height="32" BorderThickness="0" Cursor="Hand"
                            Click="CloseButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <!-- Amount Display -->
                    <Border Background="#252538" CornerRadius="8" Padding="16" Margin="0,0,0,20">
                        <Grid>
                            <TextBlock Text="Amount Due:" Foreground="#9CA3AF" FontSize="14"/>
                            <TextBlock x:Name="AmountDisplay" Text="KES 0.00"
                                       Foreground="#22C55E" FontSize="28" FontWeight="Bold"
                                       HorizontalAlignment="Right"/>
                        </Grid>
                    </Border>

                    <!-- Phone Number Input -->
                    <TextBlock Text="Customer Phone Number" Foreground="#D1D5DB"
                               FontSize="14" FontWeight="Medium" Margin="0,0,0,8"/>
                    <Border Background="#2D2D44" CornerRadius="8" Padding="4" Margin="0,0,0,16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Background="#374151" CornerRadius="6,0,0,6" Padding="12,10">
                                <TextBlock Text="254" Foreground="#22C55E" FontSize="18" FontWeight="SemiBold"/>
                            </Border>
                            <TextBox x:Name="PhoneNumberInput" Grid.Column="1"
                                     Background="Transparent"
                                     Foreground="White"
                                     CaretBrush="White"
                                     BorderThickness="0"
                                     FontSize="18"
                                     FontWeight="Medium"
                                     Padding="12,10"
                                     MaxLength="9"
                                     VerticalContentAlignment="Center"
                                     TextChanged="PhoneNumberInput_TextChanged"/>
                        </Grid>
                    </Border>

                    <!-- Phone Validation Message -->
                    <TextBlock x:Name="PhoneValidationMessage"
                               Foreground="#F59E0B" FontSize="12"
                               Margin="0,0,0,12" Visibility="Collapsed"/>

                    <!-- Numeric Keypad -->
                    <Grid Margin="0,0,0,20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60"/>
                            <RowDefinition Height="60"/>
                            <RowDefinition Height="60"/>
                            <RowDefinition Height="60"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Row 1 -->
                        <Button Grid.Row="0" Grid.Column="0" Content="1" Style="{StaticResource NumpadButton}" Click="NumpadButton_Click"/>
                        <Button Grid.Row="0" Grid.Column="1" Content="2" Style="{StaticResource NumpadButton}" Click="NumpadButton_Click"/>
                        <Button Grid.Row="0" Grid.Column="2" Content="3" Style="{StaticResource NumpadButton}" Click="NumpadButton_Click"/>

                        <!-- Row 2 -->
                        <Button Grid.Row="1" Grid.Column="0" Content="4" Style="{StaticResource NumpadButton}" Click="NumpadButton_Click"/>
                        <Button Grid.Row="1" Grid.Column="1" Content="5" Style="{StaticResource NumpadButton}" Click="NumpadButton_Click"/>
                        <Button Grid.Row="1" Grid.Column="2" Content="6" Style="{StaticResource NumpadButton}" Click="NumpadButton_Click"/>

                        <!-- Row 3 -->
                        <Button Grid.Row="2" Grid.Column="0" Content="7" Style="{StaticResource NumpadButton}" Click="NumpadButton_Click"/>
                        <Button Grid.Row="2" Grid.Column="1" Content="8" Style="{StaticResource NumpadButton}" Click="NumpadButton_Click"/>
                        <Button Grid.Row="2" Grid.Column="2" Content="9" Style="{StaticResource NumpadButton}" Click="NumpadButton_Click"/>

                        <!-- Row 4 -->
                        <Button Grid.Row="3" Grid.Column="0" Content="C" Style="{StaticResource NumpadButton}"
                                Background="#EF4444" Click="ClearButton_Click"/>
                        <Button Grid.Row="3" Grid.Column="1" Content="0" Style="{StaticResource NumpadButton}" Click="NumpadButton_Click"/>
                        <Button Grid.Row="3" Grid.Column="2" Content="&#xE750;" FontFamily="Segoe MDL2 Assets"
                                Style="{StaticResource NumpadButton}" FontSize="18" Click="BackspaceButton_Click"/>
                    </Grid>

                    <!-- Send STK Push Button -->
                    <Button x:Name="SendStkPushButton" Style="{StaticResource ActionButton}"
                            Background="#22C55E" Height="56" Margin="0,0,0,20"
                            Click="SendStkPushButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE8C7;" FontFamily="Segoe MDL2 Assets" FontSize="20"
                                       VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBlock Text="SEND STK PUSH" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Status Section -->
                    <Border x:Name="StatusSection" Background="#252538" CornerRadius="8"
                            Padding="16" Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock Text="Payment Status" Foreground="#9CA3AF"
                                       FontSize="12" FontWeight="Medium" Margin="0,0,0,12"/>

                            <!-- Status Message -->
                            <TextBlock x:Name="StatusMessage" Text="Waiting..."
                                       Foreground="White" FontSize="14" FontWeight="Medium"
                                       Margin="0,0,0,16" TextWrapping="Wrap"/>

                            <!-- Progress Indicators -->
                            <StackPanel x:Name="ProgressIndicators">
                                <!-- Step 1: STK Push Sent -->
                                <StackPanel Orientation="Horizontal" Margin="0,4">
                                    <Ellipse x:Name="Step1Indicator" Style="{StaticResource StatusIndicator}"/>
                                    <TextBlock Text="STK Push Sent" Foreground="#D1D5DB" FontSize="13"/>
                                </StackPanel>

                                <!-- Step 2: Awaiting PIN Entry -->
                                <StackPanel Orientation="Horizontal" Margin="0,4">
                                    <Ellipse x:Name="Step2Indicator" Style="{StaticResource StatusIndicator}"/>
                                    <TextBlock Text="Awaiting PIN Entry" Foreground="#D1D5DB" FontSize="13"/>
                                </StackPanel>

                                <!-- Step 3: Processing Payment -->
                                <StackPanel Orientation="Horizontal" Margin="0,4">
                                    <Ellipse x:Name="Step3Indicator" Style="{StaticResource StatusIndicator}"/>
                                    <TextBlock Text="Processing Payment" Foreground="#D1D5DB" FontSize="13"/>
                                </StackPanel>

                                <!-- Step 4: Payment Confirmed -->
                                <StackPanel Orientation="Horizontal" Margin="0,4">
                                    <Ellipse x:Name="Step4Indicator" Style="{StaticResource StatusIndicator}"/>
                                    <TextBlock Text="Payment Confirmed" Foreground="#D1D5DB" FontSize="13"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- M-Pesa Receipt Number (shown on success) -->
                            <Border x:Name="ReceiptSection" Background="#1E1E2E" CornerRadius="6"
                                    Padding="12" Margin="0,16,0,0" Visibility="Collapsed">
                                <Grid>
                                    <TextBlock Text="M-Pesa Receipt:" Foreground="#9CA3AF" FontSize="12"/>
                                    <TextBlock x:Name="MpesaReceiptText" Text=""
                                               Foreground="#22C55E" FontSize="14" FontWeight="Bold"
                                               HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Bottom Actions -->
                    <Grid Margin="0,20,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="CancelButton" Content="Cancel"
                                Style="{StaticResource ActionButton}" Background="#6B7280"
                                Grid.Column="0" Margin="0,0,6,0"
                                Click="CancelButton_Click"/>

                        <Button x:Name="UseCashButton" Content="Use Cash"
                                Style="{StaticResource ActionButton}" Background="#3B82F6"
                                Grid.Column="1" Margin="6,0,0,0"
                                Click="UseCashButton_Click"/>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
