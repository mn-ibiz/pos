<Window x:Class="HospitalityPOS.WPF.Views.Dialogs.CloseWorkPeriodDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Close Work Period"
        Width="500"
        Height="600"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        Background="#2D2D44">

    <Window.Resources>
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#4CAF50" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,16,0,8" />
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#8888AA" />
            <Setter Property="FontSize" Value="13" />
        </Style>

        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="FontFamily" Value="Consolas" />
            <Setter Property="HorizontalAlignment" Value="Right" />
        </Style>

        <Style x:Key="WarningBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="#3D2D2D" />
            <Setter Property="BorderBrush" Value="#FF6B6B" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Padding" Value="12" />
            <Setter Property="Margin" Value="0,8,0,8" />
        </Style>

        <Style x:Key="DividerStyle" TargetType="Border">
            <Setter Property="Background" Value="#4A4A6A" />
            <Setter Property="Height" Value="1" />
            <Setter Property="Margin" Value="0,12,0,12" />
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="44" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CashInputStyle" TargetType="TextBox">
            <Setter Property="Height" Value="50" />
            <Setter Property="FontSize" Value="24" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontFamily" Value="Consolas" />
            <Setter Property="Background" Value="#1E1E2E" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#4A4A6A" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="HorizontalContentAlignment" Value="Right" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Scrollable Content -->
        <ScrollViewer Grid.Row="0"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="24,16,24,8">
            <StackPanel>
                <!-- Title -->
                <TextBlock Text="CLOSE WORK PERIOD"
                           Foreground="White"
                           FontSize="18"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8" />

                <!-- Unsettled Receipts Warning -->
                <Border x:Name="UnsettledWarningBorder"
                        Style="{StaticResource WarningBorderStyle}"
                        Visibility="Collapsed">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="&#x26A0;" Foreground="#FF6B6B" FontSize="16" Margin="0,0,8,0" />
                            <TextBlock x:Name="UnsettledCountText"
                                       Text="0 receipts pending settlement"
                                       Foreground="#FF6B6B"
                                       FontWeight="SemiBold"
                                       FontSize="14" />
                        </StackPanel>
                        <ItemsControl x:Name="UnsettledReceiptsList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Foreground="#CCCCCC" FontSize="12">
                                            <Run Text="{Binding ReceiptNumber}" />
                                            <Run Text=" - " />
                                            <Run Text="{Binding TableInfo}" />
                                        </TextBlock>
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding TotalAmount, StringFormat='KSh {0:N2}'}"
                                                   Foreground="#FF6B6B"
                                                   FontFamily="Consolas"
                                                   FontSize="12" />
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <TextBlock Text="You can still close the work period with pending receipts."
                                   Foreground="#AAAAAA"
                                   FontSize="11"
                                   FontStyle="Italic"
                                   Margin="0,8,0,0" />
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource DividerStyle}" />

                <!-- Cash Drawer Reconciliation -->
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="CASH DRAWER RECONCILIATION" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>

                    <!-- Blind Count Toggle -->
                    <ToggleButton x:Name="BlindCountToggle"
                                  Grid.Column="1"
                                  IsChecked="False"
                                  Cursor="Hand"
                                  Click="BlindCountToggle_Click">
                        <ToggleButton.Style>
                            <Style TargetType="ToggleButton">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ToggleButton">
                                            <Border x:Name="border"
                                                    Background="#3D3D5C"
                                                    CornerRadius="4"
                                                    Padding="12,6">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock x:Name="icon"
                                                               Text="&#xE7B3;"
                                                               FontFamily="Segoe MDL2 Assets"
                                                               FontSize="12"
                                                               Foreground="#8888AA"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,6,0"/>
                                                    <TextBlock x:Name="text"
                                                               Text="Blind Count"
                                                               Foreground="#8888AA"
                                                               FontSize="11"/>
                                                </StackPanel>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#F59E0B"/>
                                                    <Setter TargetName="icon" Property="Foreground" Value="White"/>
                                                    <Setter TargetName="icon" Property="Text" Value="&#xE890;"/>
                                                    <Setter TargetName="text" Property="Foreground" Value="White"/>
                                                    <Setter TargetName="text" Property="Text" Value="Blind Count ON"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ToggleButton.Style>
                    </ToggleButton>
                </Grid>

                <!-- Expected Cash Breakdown (Hidden in Blind Count Mode) -->
                <Grid x:Name="ExpectedCashSection">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Opening Float:" Style="{StaticResource LabelStyle}" />
                    <TextBlock x:Name="OpeningFloatText" Grid.Row="0" Grid.Column="1" Text="KSh 0.00" Style="{StaticResource ValueStyle}" />

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="+ Cash Sales:" Style="{StaticResource LabelStyle}" />
                    <TextBlock x:Name="CashSalesText" Grid.Row="1" Grid.Column="1" Text="KSh 0.00" Foreground="#4CAF50" FontFamily="Consolas" FontSize="13" HorizontalAlignment="Right" />

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="- Cash Payouts:" Style="{StaticResource LabelStyle}" />
                    <TextBlock x:Name="CashPayoutsText" Grid.Row="2" Grid.Column="1" Text="KSh 0.00" Foreground="#FF6B6B" FontFamily="Consolas" FontSize="13" HorizontalAlignment="Right" />

                    <Border Grid.Row="3" Grid.ColumnSpan="2" Background="#4A4A6A" Height="1" />

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="EXPECTED CASH:" Foreground="White" FontWeight="Bold" FontSize="14" />
                    <TextBlock x:Name="ExpectedCashText" Grid.Row="4" Grid.Column="1" Text="KSh 0.00" Foreground="#4CAF50" FontWeight="Bold" FontFamily="Consolas" FontSize="15" HorizontalAlignment="Right" />
                </Grid>

                <Border Style="{StaticResource DividerStyle}" />

                <!-- Cash Count Entry -->
                <TextBlock Text="ACTUAL CASH COUNT" Style="{StaticResource SectionHeaderStyle}" Margin="0,0,0,8" />

                <!-- Denomination Counting Toggle -->
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Count by denomination for accuracy:"
                               Style="{StaticResource LabelStyle}"/>
                    <Button x:Name="ToggleDenominationsButton"
                            Grid.Column="1"
                            Content="Show Counter"
                            Background="#3D3D5C"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="12,4"
                            FontSize="11"
                            Cursor="Hand"
                            Click="ToggleDenominations_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>

                <!-- Denomination Counting Grid (Initially Collapsed) -->
                <Border x:Name="DenominationGrid"
                        Background="#1E1E2E"
                        CornerRadius="6"
                        Padding="12"
                        Margin="0,0,0,12"
                        Visibility="Collapsed">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="24"/>
                            <RowDefinition Height="36"/>
                            <RowDefinition Height="36"/>
                            <RowDefinition Height="36"/>
                            <RowDefinition Height="36"/>
                            <RowDefinition Height="36"/>
                            <RowDefinition Height="36"/>
                            <RowDefinition Height="36"/>
                            <RowDefinition Height="36"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Headers -->
                        <TextBlock Text="NOTE/COIN" Foreground="#6B7280" FontSize="10" FontWeight="Bold" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="COUNT" Foreground="#6B7280" FontSize="10" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="2" Text="SUBTOTAL" Foreground="#6B7280" FontSize="10" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Center"/>

                        <!-- KSh 1,000 -->
                        <TextBlock Grid.Row="1" Text="KSh 1,000" Foreground="White" FontSize="12" VerticalAlignment="Center"/>
                        <TextBox x:Name="D1000Count" Grid.Row="1" Grid.Column="1" Text="0" TextChanged="DenominationChanged"
                                 Background="#2D2D44" Foreground="White" BorderThickness="0" Width="60" Height="28"
                                 HorizontalAlignment="Center" TextAlignment="Center" FontSize="14" VerticalContentAlignment="Center"/>
                        <TextBlock x:Name="D1000Total" Grid.Row="1" Grid.Column="2" Text="0" Foreground="#22C55E" FontSize="12"
                                   HorizontalAlignment="Right" VerticalAlignment="Center" FontFamily="Consolas"/>

                        <!-- KSh 500 -->
                        <TextBlock Grid.Row="2" Text="KSh 500" Foreground="White" FontSize="12" VerticalAlignment="Center"/>
                        <TextBox x:Name="D500Count" Grid.Row="2" Grid.Column="1" Text="0" TextChanged="DenominationChanged"
                                 Background="#2D2D44" Foreground="White" BorderThickness="0" Width="60" Height="28"
                                 HorizontalAlignment="Center" TextAlignment="Center" FontSize="14" VerticalContentAlignment="Center"/>
                        <TextBlock x:Name="D500Total" Grid.Row="2" Grid.Column="2" Text="0" Foreground="#22C55E" FontSize="12"
                                   HorizontalAlignment="Right" VerticalAlignment="Center" FontFamily="Consolas"/>

                        <!-- KSh 200 -->
                        <TextBlock Grid.Row="3" Text="KSh 200" Foreground="White" FontSize="12" VerticalAlignment="Center"/>
                        <TextBox x:Name="D200Count" Grid.Row="3" Grid.Column="1" Text="0" TextChanged="DenominationChanged"
                                 Background="#2D2D44" Foreground="White" BorderThickness="0" Width="60" Height="28"
                                 HorizontalAlignment="Center" TextAlignment="Center" FontSize="14" VerticalContentAlignment="Center"/>
                        <TextBlock x:Name="D200Total" Grid.Row="3" Grid.Column="2" Text="0" Foreground="#22C55E" FontSize="12"
                                   HorizontalAlignment="Right" VerticalAlignment="Center" FontFamily="Consolas"/>

                        <!-- KSh 100 -->
                        <TextBlock Grid.Row="4" Text="KSh 100" Foreground="White" FontSize="12" VerticalAlignment="Center"/>
                        <TextBox x:Name="D100Count" Grid.Row="4" Grid.Column="1" Text="0" TextChanged="DenominationChanged"
                                 Background="#2D2D44" Foreground="White" BorderThickness="0" Width="60" Height="28"
                                 HorizontalAlignment="Center" TextAlignment="Center" FontSize="14" VerticalContentAlignment="Center"/>
                        <TextBlock x:Name="D100Total" Grid.Row="4" Grid.Column="2" Text="0" Foreground="#22C55E" FontSize="12"
                                   HorizontalAlignment="Right" VerticalAlignment="Center" FontFamily="Consolas"/>

                        <!-- KSh 50 -->
                        <TextBlock Grid.Row="5" Text="KSh 50" Foreground="White" FontSize="12" VerticalAlignment="Center"/>
                        <TextBox x:Name="D50Count" Grid.Row="5" Grid.Column="1" Text="0" TextChanged="DenominationChanged"
                                 Background="#2D2D44" Foreground="White" BorderThickness="0" Width="60" Height="28"
                                 HorizontalAlignment="Center" TextAlignment="Center" FontSize="14" VerticalContentAlignment="Center"/>
                        <TextBlock x:Name="D50Total" Grid.Row="5" Grid.Column="2" Text="0" Foreground="#22C55E" FontSize="12"
                                   HorizontalAlignment="Right" VerticalAlignment="Center" FontFamily="Consolas"/>

                        <!-- KSh 20 -->
                        <TextBlock Grid.Row="6" Text="KSh 20" Foreground="White" FontSize="12" VerticalAlignment="Center"/>
                        <TextBox x:Name="D20Count" Grid.Row="6" Grid.Column="1" Text="0" TextChanged="DenominationChanged"
                                 Background="#2D2D44" Foreground="White" BorderThickness="0" Width="60" Height="28"
                                 HorizontalAlignment="Center" TextAlignment="Center" FontSize="14" VerticalContentAlignment="Center"/>
                        <TextBlock x:Name="D20Total" Grid.Row="6" Grid.Column="2" Text="0" Foreground="#22C55E" FontSize="12"
                                   HorizontalAlignment="Right" VerticalAlignment="Center" FontFamily="Consolas"/>

                        <!-- KSh 10 -->
                        <TextBlock Grid.Row="7" Text="KSh 10" Foreground="White" FontSize="12" VerticalAlignment="Center"/>
                        <TextBox x:Name="D10Count" Grid.Row="7" Grid.Column="1" Text="0" TextChanged="DenominationChanged"
                                 Background="#2D2D44" Foreground="White" BorderThickness="0" Width="60" Height="28"
                                 HorizontalAlignment="Center" TextAlignment="Center" FontSize="14" VerticalContentAlignment="Center"/>
                        <TextBlock x:Name="D10Total" Grid.Row="7" Grid.Column="2" Text="0" Foreground="#22C55E" FontSize="12"
                                   HorizontalAlignment="Right" VerticalAlignment="Center" FontFamily="Consolas"/>

                        <!-- Coins -->
                        <TextBlock Grid.Row="8" Text="Coins" Foreground="White" FontSize="12" VerticalAlignment="Center"/>
                        <TextBox x:Name="CoinsAmount" Grid.Row="8" Grid.Column="1" Text="0" TextChanged="DenominationChanged"
                                 Background="#2D2D44" Foreground="White" BorderThickness="0" Width="60" Height="28"
                                 HorizontalAlignment="Center" TextAlignment="Center" FontSize="14" VerticalContentAlignment="Center"/>
                        <TextBlock Grid.Row="8" Grid.Column="2" Text="(amount)" Foreground="#6B7280" FontSize="10"
                                   HorizontalAlignment="Right" VerticalAlignment="Center"/>

                        <!-- Grand Total from Denominations -->
                        <Border Grid.Row="9" Grid.ColumnSpan="3" Background="#252538" CornerRadius="4" Padding="8" Margin="0,8,0,0">
                            <Grid>
                                <TextBlock Text="COUNTED TOTAL" Foreground="White" FontWeight="Bold" FontSize="12" VerticalAlignment="Center"/>
                                <TextBlock x:Name="DenominationGrandTotal" Text="KSh 0" Foreground="#22C55E"
                                           FontSize="16" FontWeight="Bold" FontFamily="Consolas"
                                           HorizontalAlignment="Right" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

                <!-- Direct Cash Entry (always visible) -->
                <TextBlock Text="Or enter total directly:"
                           Style="{StaticResource LabelStyle}"
                           Margin="0,0,0,8" />

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               Text="KSh"
                               Foreground="White"
                               FontSize="20"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0" />
                    <TextBox x:Name="CashCountInput"
                             Grid.Column="1"
                             Style="{StaticResource CashInputStyle}"
                             Text="0.00"
                             TextChanged="CashCountInput_TextChanged" />
                </Grid>

                <Border Style="{StaticResource DividerStyle}" />

                <!-- Variance Display -->
                <Grid x:Name="VarianceGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="VARIANCE:" Foreground="White" FontWeight="Bold" FontSize="14" />
                    <TextBlock x:Name="VarianceText" Grid.Row="0" Grid.Column="1" Text="KSh 0.00" FontWeight="Bold" FontFamily="Consolas" FontSize="15" HorizontalAlignment="Right" />

                    <Border x:Name="VarianceStatusBorder"
                            Grid.Row="1" Grid.ColumnSpan="2"
                            CornerRadius="4"
                            Padding="8,4"
                            Margin="0,8,0,0"
                            HorizontalAlignment="Center"
                            Visibility="Collapsed">
                        <TextBlock x:Name="VarianceStatusText"
                                   Text="EXACT"
                                   FontWeight="Bold"
                                   FontSize="12"
                                   HorizontalAlignment="Center" />
                    </Border>
                </Grid>

                <Border Style="{StaticResource DividerStyle}" />

                <!-- Notes -->
                <TextBlock Text="CLOSING NOTES (Optional)" Style="{StaticResource SectionHeaderStyle}" Margin="0,0,0,8" />
                <TextBox x:Name="NotesInput"
                         Height="80"
                         Background="#1E1E2E"
                         Foreground="White"
                         BorderBrush="#4A4A6A"
                         BorderThickness="1"
                         Padding="8"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto" />
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Border Grid.Row="1" Background="#1E1E2E" Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="16" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Content="Cancel"
                        Background="#3D3D5C"
                        Foreground="White"
                        Style="{StaticResource ActionButtonStyle}"
                        Click="CancelButton_Click" />

                <Button Grid.Column="2"
                        x:Name="CloseButton"
                        Content="Close Period"
                        Background="#4CAF50"
                        Foreground="White"
                        Style="{StaticResource ActionButtonStyle}"
                        Click="CloseButton_Click" />
            </Grid>
        </Border>
    </Grid>
</Window>
