<Window x:Class="HospitalityPOS.WPF.Views.Dialogs.SupplierInvoiceEditorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Supplier Invoice"
        Height="450" Width="450"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Border Background="#2D2D44" CornerRadius="12" BorderBrush="#4F46E5" BorderThickness="1">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="Create Supplier Invoice"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="White"/>
                <TextBlock x:Name="SupplierNameText"
                           Text="Supplier Name"
                           FontSize="14"
                           Foreground="#9CA3AF"
                           Margin="0,4,0,0"/>
            </StackPanel>

            <!-- Invoice Details -->
            <StackPanel Grid.Row="1">
                <!-- Invoice Number -->
                <TextBlock Text="Invoice Number" Foreground="#9CA3AF" FontSize="12" Margin="0,0,0,4"/>
                <TextBox x:Name="InvoiceNumberTextBox"
                         Background="#3D3D5C"
                         Foreground="White"
                         FontSize="14"
                         BorderThickness="1"
                         BorderBrush="#4F46E5"
                         Padding="12,10"
                         Margin="0,0,0,16"/>

                <!-- Invoice Date -->
                <TextBlock Text="Invoice Date" Foreground="#9CA3AF" FontSize="12" Margin="0,0,0,4"/>
                <DatePicker x:Name="InvoiceDatePicker"
                            SelectedDate="{x:Static sys:DateTime.Today}"
                            Background="#3D3D5C"
                            Foreground="White"
                            FontSize="14"
                            Padding="8"
                            Margin="0,0,0,16"
                            xmlns:sys="clr-namespace:System;assembly=mscorlib"/>

                <!-- Due Date -->
                <TextBlock Text="Due Date" Foreground="#9CA3AF" FontSize="12" Margin="0,0,0,4"/>
                <DatePicker x:Name="DueDatePicker"
                            Background="#3D3D5C"
                            Foreground="White"
                            FontSize="14"
                            Padding="8"
                            Margin="0,0,0,16"/>

                <!-- Amount -->
                <TextBlock Text="Total Amount" Foreground="#9CA3AF" FontSize="12" Margin="0,0,0,4"/>
                <TextBox x:Name="AmountTextBox"
                         Text="0.00"
                         Background="#3D3D5C"
                         Foreground="White"
                         FontSize="18"
                         FontWeight="Bold"
                         BorderThickness="1"
                         BorderBrush="#4F46E5"
                         Padding="12,10"
                         Margin="0,0,0,16"
                         PreviewTextInput="AmountTextBox_PreviewTextInput"/>

                <!-- Notes -->
                <TextBlock Text="Notes (optional)" Foreground="#9CA3AF" FontSize="12" Margin="0,0,0,4"/>
                <TextBox x:Name="NotesTextBox"
                         Background="#3D3D5C"
                         Foreground="White"
                         FontSize="14"
                         BorderThickness="1"
                         BorderBrush="#4F46E5"
                         Padding="12,10"
                         Height="60"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"/>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Cancel"
                        Click="Cancel_Click"
                        Background="#3D3D5C"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="24,12"
                        FontSize="14"
                        Cursor="Hand"
                        Margin="0,0,12,0"/>

                <Button Content="Save Invoice"
                        Click="Save_Click"
                        Background="#4F46E5"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="24,12"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
