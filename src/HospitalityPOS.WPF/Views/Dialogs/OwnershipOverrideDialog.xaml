<Window x:Class="HospitalityPOS.WPF.Views.Dialogs.OwnershipOverrideDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Authorization Required"
        Width="420"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        Background="#2D2D44">

    <Window.Resources>
        <Style x:Key="NumpadButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="56" />
            <Setter Property="Height" Value="48" />
            <Setter Property="Margin" Value="2" />
            <Setter Property="FontSize" Value="24" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Background" Value="#3D3D5C" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4D4D7C" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#5D5D8C" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="NumpadClearButtonStyle" TargetType="Button" BasedOn="{StaticResource NumpadButtonStyle}">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Background" Value="#664444" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#885555" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#AA6666" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="NumpadOkButtonStyle" TargetType="Button" BasedOn="{StaticResource NumpadButtonStyle}">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Background" Value="#4CAF50" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5CBF60" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#6CCF70" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Authorization Required"
                   Foreground="#FF6B6B"
                   FontSize="18"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,16" />

        <!-- Owner Information -->
        <Border Grid.Row="1"
                Background="#3D2D2D"
                BorderBrush="#FF6B6B"
                BorderThickness="1"
                CornerRadius="4"
                Padding="12"
                Margin="0,0,0,12">
            <StackPanel>
                <TextBlock Text="This receipt belongs to:"
                           Foreground="#AAA"
                           FontSize="12" />
                <TextBlock x:Name="OwnerNameText"
                           Text="Unknown User"
                           Foreground="#FF6B6B"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Margin="0,4,0,0" />
            </StackPanel>
        </Border>

        <!-- Action Description -->
        <Border Grid.Row="2"
                Background="#1E1E2E"
                BorderBrush="#4A4A6A"
                BorderThickness="1"
                CornerRadius="4"
                Padding="12"
                Margin="0,0,0,12">
            <StackPanel>
                <TextBlock Text="Requested Action:"
                           Foreground="#888"
                           FontSize="12" />
                <TextBlock x:Name="ActionDescriptionText"
                           Text="Modify Receipt"
                           Foreground="White"
                           FontSize="14"
                           TextWrapping="Wrap"
                           Margin="0,4,0,0" />
            </StackPanel>
        </Border>

        <!-- Reason Input -->
        <StackPanel Grid.Row="3" Margin="0,0,0,12">
            <TextBlock Text="Reason for override:"
                       Foreground="#AAA"
                       FontSize="12"
                       Margin="0,0,0,4" />
            <TextBox x:Name="ReasonTextBox"
                     Background="#1E1E2E"
                     Foreground="White"
                     BorderBrush="#4A4A6A"
                     BorderThickness="1"
                     Padding="8"
                     FontSize="14"
                     MaxLength="200"
                     TextWrapping="Wrap"
                     AcceptsReturn="False"
                     Height="60" />
        </StackPanel>

        <!-- Instructions -->
        <TextBlock Grid.Row="4"
                   Text="Enter manager PIN to authorize:"
                   Foreground="White"
                   FontSize="14"
                   HorizontalAlignment="Center"
                   Margin="0,4,0,12" />

        <!-- PIN Display -->
        <Border Grid.Row="5"
                Background="#1E1E2E"
                BorderBrush="#4A4A6A"
                BorderThickness="1"
                CornerRadius="4"
                Padding="16,12"
                Margin="0,0,0,8">
            <TextBlock x:Name="PinDisplay"
                       Text=""
                       Foreground="White"
                       FontSize="28"
                       FontFamily="Consolas"
                       HorizontalAlignment="Center"
                       MinWidth="120" />
        </Border>

        <!-- Error Message -->
        <TextBlock x:Name="ErrorMessageText"
                   Grid.Row="6"
                   Text=""
                   Foreground="#FF6B6B"
                   FontSize="12"
                   HorizontalAlignment="Center"
                   TextWrapping="Wrap"
                   Margin="0,0,0,8"
                   Visibility="Collapsed" />

        <!-- Numeric Keypad and Buttons -->
        <StackPanel Grid.Row="7">
            <!-- Numeric Keypad -->
            <Grid HorizontalAlignment="Center" Margin="0,0,0,12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="52" />
                    <RowDefinition Height="52" />
                    <RowDefinition Height="52" />
                    <RowDefinition Height="52" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="62" />
                    <ColumnDefinition Width="62" />
                    <ColumnDefinition Width="62" />
                </Grid.ColumnDefinitions>

                <!-- Row 1: 1, 2, 3 -->
                <Button Grid.Row="0" Grid.Column="0" Content="1" Style="{StaticResource NumpadButtonStyle}" Click="NumpadButton_Click" />
                <Button Grid.Row="0" Grid.Column="1" Content="2" Style="{StaticResource NumpadButtonStyle}" Click="NumpadButton_Click" />
                <Button Grid.Row="0" Grid.Column="2" Content="3" Style="{StaticResource NumpadButtonStyle}" Click="NumpadButton_Click" />

                <!-- Row 2: 4, 5, 6 -->
                <Button Grid.Row="1" Grid.Column="0" Content="4" Style="{StaticResource NumpadButtonStyle}" Click="NumpadButton_Click" />
                <Button Grid.Row="1" Grid.Column="1" Content="5" Style="{StaticResource NumpadButtonStyle}" Click="NumpadButton_Click" />
                <Button Grid.Row="1" Grid.Column="2" Content="6" Style="{StaticResource NumpadButtonStyle}" Click="NumpadButton_Click" />

                <!-- Row 3: 7, 8, 9 -->
                <Button Grid.Row="2" Grid.Column="0" Content="7" Style="{StaticResource NumpadButtonStyle}" Click="NumpadButton_Click" />
                <Button Grid.Row="2" Grid.Column="1" Content="8" Style="{StaticResource NumpadButtonStyle}" Click="NumpadButton_Click" />
                <Button Grid.Row="2" Grid.Column="2" Content="9" Style="{StaticResource NumpadButtonStyle}" Click="NumpadButton_Click" />

                <!-- Row 4: CLR, 0, OK -->
                <Button Grid.Row="3" Grid.Column="0" Content="CLR" Style="{StaticResource NumpadClearButtonStyle}" Click="ClearButton_Click" />
                <Button Grid.Row="3" Grid.Column="1" Content="0" Style="{StaticResource NumpadButtonStyle}" Click="NumpadButton_Click" />
                <Button Grid.Row="3" Grid.Column="2" Content="OK" Style="{StaticResource NumpadOkButtonStyle}" Click="OkButton_Click" />
            </Grid>

            <!-- Cancel Button -->
            <Button Content="Cancel"
                    Width="180"
                    Height="40"
                    HorizontalAlignment="Center"
                    Background="#4A4A6A"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="CancelButton_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</Window>
