<Window x:Class="HospitalityPOS.WPF.Views.Dialogs.ZReportDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Z Report"
        Width="600"
        Height="800"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        ResizeMode="CanResize"
        MinWidth="500"
        MinHeight="600"
        Background="#2D2D44">

    <Window.Resources>
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#4CAF50" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,16,0,8" />
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#8888AA" />
            <Setter Property="FontSize" Value="13" />
        </Style>

        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="FontFamily" Value="Consolas" />
            <Setter Property="HorizontalAlignment" Value="Right" />
        </Style>

        <Style x:Key="TotalValueStyle" TargetType="TextBlock" BasedOn="{StaticResource ValueStyle}">
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="15" />
        </Style>

        <Style x:Key="DividerStyle" TargetType="Border">
            <Setter Property="Background" Value="#4A4A6A" />
            <Setter Property="Height" Value="1" />
            <Setter Property="Margin" Value="0,12,0,12" />
        </Style>

        <Style x:Key="DoubleDividerStyle" TargetType="Border">
            <Setter Property="Background" Value="#4CAF50" />
            <Setter Property="Height" Value="2" />
            <Setter Property="Margin" Value="0,12,0,12" />
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="44" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Scrollable Content -->
        <ScrollViewer Grid.Row="0"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="24,16,24,8">
            <StackPanel>
                <!-- Report Header -->
                <StackPanel HorizontalAlignment="Center" Margin="0,0,0,8">
                    <TextBlock x:Name="BusinessNameText"
                               Text="HOSPITALITY POS"
                               Foreground="White"
                               FontSize="18"
                               FontWeight="Bold"
                               HorizontalAlignment="Center" />
                    <TextBlock x:Name="BusinessAddressText"
                               Text=""
                               Foreground="#8888AA"
                               FontSize="12"
                               HorizontalAlignment="Center"
                               Visibility="Collapsed" />
                </StackPanel>

                <Border Style="{StaticResource DoubleDividerStyle}" />

                <!-- Z-Report Title -->
                <TextBlock Text="*** Z REPORT ***"
                           Foreground="#FFD700"
                           FontSize="22"
                           FontWeight="Bold"
                           HorizontalAlignment="Center" />

                <TextBlock x:Name="ZReportNumberText"
                           Text="Z-Report #: Z-0001"
                           Foreground="#FFD700"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Margin="0,4,0,0" />

                <Border Style="{StaticResource DoubleDividerStyle}" />

                <!-- Work Period Info -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Period Open:" Style="{StaticResource LabelStyle}" />
                    <TextBlock x:Name="OpenedAtText" Grid.Row="0" Grid.Column="1" Text="" Style="{StaticResource ValueStyle}" />
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Opened By:" Style="{StaticResource LabelStyle}" />
                    <TextBlock x:Name="OpenedByText" Grid.Row="1" Grid.Column="1" Text="" Style="{StaticResource ValueStyle}" />
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Period Close:" Style="{StaticResource LabelStyle}" />
                    <TextBlock x:Name="ClosedAtText" Grid.Row="2" Grid.Column="1" Text="" Style="{StaticResource ValueStyle}" />
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Closed By:" Style="{StaticResource LabelStyle}" />
                    <TextBlock x:Name="ClosedByText" Grid.Row="3" Grid.Column="1" Text="" Style="{StaticResource ValueStyle}" />
                </Grid>

                <TextBlock x:Name="DurationText"
                           Text="Duration: 0h 00m"
                           Foreground="White"
                           FontSize="13"
                           HorizontalAlignment="Center"
                           Margin="0,8,0,0" />

                <Border Style="{StaticResource DoubleDividerStyle}" />

                <!-- Sales Summary -->
                <TextBlock Text="SALES SUMMARY" Style="{StaticResource SectionHeaderStyle}" Margin="0,0,0,8" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Gross Sales:" Style="{StaticResource LabelStyle}" />
                    <TextBlock x:Name="GrossSalesText" Grid.Row="0" Grid.Column="1" Text="KSh 0.00" Style="{StaticResource ValueStyle}" />
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Discounts:" Style="{StaticResource LabelStyle}" />
                    <TextBlock x:Name="DiscountsText" Grid.Row="1" Grid.Column="1" Text="-KSh 0.00" Foreground="#FF6B6B" FontFamily="Consolas" FontSize="13" HorizontalAlignment="Right" />
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Net Sales:" Style="{StaticResource LabelStyle}" />
                    <TextBlock x:Name="NetSalesText" Grid.Row="2" Grid.Column="1" Text="KSh 0.00" Style="{StaticResource ValueStyle}" />
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Tax:" Style="{StaticResource LabelStyle}" />
                    <TextBlock x:Name="TaxText" Grid.Row="3" Grid.Column="1" Text="KSh 0.00" Style="{StaticResource ValueStyle}" />
                    <Border Grid.Row="4" Grid.ColumnSpan="2" Background="#4A4A6A" Height="1" />
                    <TextBlock Grid.Row="5" Grid.Column="0" Text="GRAND TOTAL:" Foreground="White" FontSize="14" FontWeight="Bold" />
                    <TextBlock x:Name="GrandTotalText" Grid.Row="5" Grid.Column="1" Text="KSh 0.00" Style="{StaticResource TotalValueStyle}" Foreground="#4CAF50" />
                </Grid>

                <Border Style="{StaticResource DividerStyle}" />

                <!-- Sales by Cashier -->
                <TextBlock Text="SALES BY CASHIER" Style="{StaticResource SectionHeaderStyle}" Margin="0,0,0,8" />
                <ItemsControl x:Name="UserSalesItems">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,4,0,8">
                                <TextBlock Text="{Binding UserName}" Foreground="White" FontWeight="SemiBold" FontSize="13" />
                                <Grid Margin="16,2,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Transactions:" Style="{StaticResource LabelStyle}" />
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding TransactionCount}" Style="{StaticResource ValueStyle}" />
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Total:" Style="{StaticResource LabelStyle}" />
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding TotalAmount, StringFormat='KSh {0:N2}'}" Style="{StaticResource ValueStyle}" />
                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Average:" Style="{StaticResource LabelStyle}" />
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding AverageTransaction, StringFormat='KSh {0:N2}'}" Style="{StaticResource ValueStyle}" />
                                </Grid>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Border Style="{StaticResource DividerStyle}" />

                <!-- Payment Methods -->
                <TextBlock Text="PAYMENT METHODS" Style="{StaticResource SectionHeaderStyle}" Margin="0,0,0,8" />
                <ItemsControl x:Name="PaymentMethodItems">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Style="{StaticResource LabelStyle}">
                                    <Run Text="{Binding PaymentMethod}" />
                                    <Run Text=" (" /><Run Text="{Binding TransactionCount}" /><Run Text=")" />
                                </TextBlock>
                                <TextBlock Grid.Column="1" Text="{Binding TotalAmount, StringFormat='KSh {0:N2}'}" Style="{StaticResource ValueStyle}" />
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Border Style="{StaticResource DividerStyle}" />

                <!-- Receipts Summary -->
                <TextBlock Text="RECEIPTS" Style="{StaticResource SectionHeaderStyle}" Margin="0,0,0,8" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource LabelStyle}">
                        <Run Text="Settled (" /><Run x:Name="SettledCountRun" Text="0" /><Run Text="):" />
                    </TextBlock>
                    <TextBlock x:Name="SettledTotalText" Grid.Row="0" Grid.Column="1" Text="KSh 0.00" Foreground="#4CAF50" FontFamily="Consolas" FontSize="13" HorizontalAlignment="Right" />
                    <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource LabelStyle}">
                        <Run Text="Pending (" /><Run x:Name="PendingCountRun" Text="0" /><Run Text="):" />
                    </TextBlock>
                    <TextBlock x:Name="PendingTotalText" Grid.Row="1" Grid.Column="1" Text="KSh 0.00" Foreground="#FFB347" FontFamily="Consolas" FontSize="13" HorizontalAlignment="Right" />
                    <TextBlock Grid.Row="2" Grid.Column="0" Style="{StaticResource LabelStyle}">
                        <Run Text="Voided (" /><Run x:Name="VoidedCountRun" Text="0" /><Run Text="):" />
                    </TextBlock>
                    <TextBlock x:Name="VoidedTotalText" Grid.Row="2" Grid.Column="1" Text="KSh 0.00" Foreground="#FF6B6B" FontFamily="Consolas" FontSize="13" HorizontalAlignment="Right" />
                </Grid>

                <Border Style="{StaticResource DoubleDividerStyle}" />

                <!-- Cash Drawer -->
                <TextBlock Text="CASH DRAWER" Style="{StaticResource SectionHeaderStyle}" Margin="0,0,0,8" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Opening Float:" Style="{StaticResource LabelStyle}" />
                    <TextBlock x:Name="OpeningFloatText" Grid.Row="0" Grid.Column="1" Text="KSh 0.00" Style="{StaticResource ValueStyle}" />
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="+ Cash Sales:" Style="{StaticResource LabelStyle}" />
                    <TextBlock x:Name="CashSalesText" Grid.Row="1" Grid.Column="1" Text="KSh 0.00" Foreground="#4CAF50" FontFamily="Consolas" FontSize="13" HorizontalAlignment="Right" />
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="- Cash Payouts:" Style="{StaticResource LabelStyle}" />
                    <TextBlock x:Name="CashPayoutsText" Grid.Row="2" Grid.Column="1" Text="KSh 0.00" Foreground="#FF6B6B" FontFamily="Consolas" FontSize="13" HorizontalAlignment="Right" />
                    <Border Grid.Row="3" Grid.ColumnSpan="2" Background="#4A4A6A" Height="1" />
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="EXPECTED:" Foreground="White" FontWeight="SemiBold" />
                    <TextBlock x:Name="ExpectedCashText" Grid.Row="4" Grid.Column="1" Text="KSh 0.00" Style="{StaticResource TotalValueStyle}" />
                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Actual Count:" Style="{StaticResource LabelStyle}" />
                    <TextBlock x:Name="ActualCashText" Grid.Row="6" Grid.Column="1" Text="KSh 0.00" Style="{StaticResource ValueStyle}" />
                    <Border Grid.Row="7" Grid.ColumnSpan="2" Background="#4A4A6A" Height="1" />
                    <TextBlock Grid.Row="8" Grid.Column="0" Text="VARIANCE:" Foreground="White" FontWeight="Bold" />
                    <TextBlock x:Name="VarianceText" Grid.Row="8" Grid.Column="1" Text="KSh 0.00" Style="{StaticResource TotalValueStyle}" />
                </Grid>

                <Border x:Name="VarianceStatusBorder"
                        CornerRadius="4"
                        Padding="12,6"
                        Margin="0,12,0,0"
                        HorizontalAlignment="Center">
                    <TextBlock x:Name="VarianceStatusText"
                               Text=""
                               FontWeight="Bold"
                               FontSize="14"
                               HorizontalAlignment="Center" />
                </Border>

                <Border Style="{StaticResource DividerStyle}" />

                <!-- Top Selling Items -->
                <TextBlock Text="TOP SELLING ITEMS" Style="{StaticResource SectionHeaderStyle}" Margin="0,0,0,8" />
                <ItemsControl x:Name="TopSellingItems">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="{Binding Index}" Foreground="#8888AA" FontSize="12" Margin="0,0,8,0" />
                                <TextBlock Grid.Column="1" Style="{StaticResource LabelStyle}">
                                    <Run Text="{Binding ProductName}" />
                                    <Run Text=" (" /><Run Text="{Binding QuantitySold}" /><Run Text=")" />
                                </TextBlock>
                                <TextBlock Grid.Column="2" Text="{Binding TotalValue, StringFormat='KSh {0:N2}'}" Style="{StaticResource ValueStyle}" />
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Border Style="{StaticResource DoubleDividerStyle}" />

                <!-- Footer -->
                <StackPanel HorizontalAlignment="Center" Margin="0,0,0,16">
                    <TextBlock Text="*** END OF Z REPORT ***"
                               Foreground="#FFD700"
                               FontSize="14"
                               FontWeight="Bold"
                               HorizontalAlignment="Center" />
                    <TextBlock Text="This is an official document"
                               Foreground="#8888AA"
                               FontSize="11"
                               HorizontalAlignment="Center" />
                    <TextBlock Text="Do not discard"
                               Foreground="#8888AA"
                               FontSize="11"
                               HorizontalAlignment="Center" />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Border Grid.Row="1" Background="#1E1E2E" Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="16" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        x:Name="PrintButton"
                        Content="Print Report"
                        Background="#3D3D5C"
                        Foreground="White"
                        Style="{StaticResource ActionButtonStyle}"
                        Click="PrintButton_Click" />

                <Button Grid.Column="2"
                        Content="Close"
                        Background="#4CAF50"
                        Foreground="White"
                        Style="{StaticResource ActionButtonStyle}"
                        Click="CloseButton_Click" />
            </Grid>
        </Border>
    </Grid>
</Window>
