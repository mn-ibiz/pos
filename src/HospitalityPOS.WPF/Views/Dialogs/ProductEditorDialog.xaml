<Window x:Class="HospitalityPOS.WPF.Views.Dialogs.ProductEditorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Product Editor"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Width="1100"
        Height="750"
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- Compact Input TextBox -->
        <Style x:Key="InputTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#1A1A2E"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="CaretBrush" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#4E4E6E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          VerticalAlignment="Center"
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#6366F1"/>
                                <Setter Property="Background" Value="#252538"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Compact ComboBox - inherits dark theme template from global style -->
        <Style x:Key="InputComboBox" TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
            <Setter Property="Background" Value="#1A1A2E"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#4E4E6E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="38"/>
        </Style>

        <!-- Multiline TextBox for Description -->
        <Style x:Key="MultilineTextBox" TargetType="TextBox" BasedOn="{StaticResource InputTextBox}">
            <Setter Property="Height" Value="Auto"/>
            <Setter Property="MinHeight" Value="80"/>
            <Setter Property="MaxHeight" Value="120"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="VerticalContentAlignment" Value="Top"/>
            <Setter Property="Padding" Value="10,8"/>
        </Style>

        <!-- Compact Action Button -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="MinHeight" Value="34"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="16,8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.7"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Compact CheckBox -->
        <Style x:Key="ModernCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal">
                            <Border x:Name="CheckBorder"
                                    Width="18"
                                    Height="18"
                                    CornerRadius="3"
                                    Background="#2D2D44"
                                    BorderBrush="#4E4E6E"
                                    BorderThickness="1"
                                    Margin="0,0,8,0">
                                <Path x:Name="CheckMark"
                                      Data="M 2 6 L 5 9 L 11 2"
                                      Stroke="White"
                                      StrokeThickness="1.5"
                                      Visibility="Collapsed"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Border>
                            <ContentPresenter VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckBorder" Property="Background" Value="#4CAF50"/>
                                <Setter TargetName="CheckBorder" Property="BorderBrush" Value="#4CAF50"/>
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="CheckBorder" Property="BorderBrush" Value="#6E6EAE"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Compact Section Header -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#8B8BA7"/>
            <Setter Property="Margin" Value="0,12,0,8"/>
        </Style>

        <!-- Compact Field Label -->
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Foreground" Value="#B0B0C0"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
    </Window.Resources>

    <Border Background="#1E1E2E"
            CornerRadius="12"
            BorderBrush="#3E3E5E"
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Compact Header -->
            <Border Grid.Row="0" Background="#252538" CornerRadius="12,12,0,0" Padding="20,14">
                <Grid>
                    <StackPanel HorizontalAlignment="Left">
                        <TextBlock x:Name="TitleTextBlock"
                                   Text="Create Product"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="White"/>
                        <TextBlock x:Name="SubtitleTextBlock"
                                   Text="Add a new product to the catalog"
                                   FontSize="12"
                                   Foreground="#9CA3AF"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                    <!-- Close Button -->
                    <Button x:Name="CloseButton"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Width="32"
                            Height="32"
                            Cursor="Hand"
                            Click="CloseButton_Click"
                            ToolTip="Close">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border"
                                        Background="Transparent"
                                        CornerRadius="6">
                                    <Path Data="M 8,8 L 16,16 M 16,8 L 8,16"
                                          Stroke="#9CA3AF"
                                          StrokeThickness="2"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#3D3D52"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

            <!-- Form Fields - Two Column Layout -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Padding="28,12,28,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="32"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Column -->
                    <StackPanel Grid.Column="0">
                        <!-- Basic Information Section -->
                        <TextBlock Text="BASIC INFORMATION" Style="{StaticResource SectionHeader}" Margin="0,4,0,10"/>

                        <!-- Product Code and Barcode Row -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Product Code *" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="CodeTextBox"
                                         AutomationProperties.AutomationId="CodeTextBox"
                                         Style="{StaticResource InputTextBox}"
                                         Height="38"
                                         MaxLength="50"
                                         CharacterCasing="Upper"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Barcode" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="BarcodeTextBox"
                                         AutomationProperties.AutomationId="BarcodeTextBox"
                                         Style="{StaticResource InputTextBox}"
                                         Height="38"
                                         MaxLength="50"/>
                            </StackPanel>
                        </Grid>

                        <!-- Product Name -->
                        <StackPanel Margin="0,14,0,0">
                            <TextBlock Text="Product Name *" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="NameTextBox"
                                     AutomationProperties.AutomationId="NameTextBox"
                                     Style="{StaticResource InputTextBox}"
                                     Height="38"
                                     MaxLength="200"/>
                        </StackPanel>

                        <!-- Category with Search and Quick Add -->
                        <StackPanel Margin="0,14,0,0">
                            <TextBlock Text="Category *" Style="{StaticResource FieldLabel}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ComboBox x:Name="CategoryComboBox"
                                          AutomationProperties.AutomationId="CategoryComboBox"
                                          Style="{StaticResource InputComboBox}"
                                          IsEditable="True"
                                          IsTextSearchEnabled="True"
                                          TextSearch.TextPath="Name"
                                          StaysOpenOnEdit="True"
                                          TextBoxBase.TextChanged="CategoryComboBox_TextChanged"
                                          SelectionChanged="CategoryComboBox_SelectionChanged">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Name}"/>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                                <Button x:Name="AddCategoryButton"
                                        AutomationProperties.AutomationId="AddCategoryButton"
                                        Grid.Column="1"
                                        Content="+ Add"
                                        Background="#4E4E6E"
                                        Foreground="White"
                                        FontSize="12"
                                        Margin="8,0,0,0"
                                        Padding="12,8"
                                        Cursor="Hand"
                                        Visibility="Collapsed"
                                        Click="AddCategoryButton_Click"
                                        ToolTip="Add new category">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border"
                                                    Background="{TemplateBinding Background}"
                                                    CornerRadius="5"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#10B981"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Grid>
                            <TextBlock x:Name="CategoryHintText"
                                       Text="Type to search or add new category"
                                       FontSize="10"
                                       Foreground="#6E6E8E"
                                       Margin="2,4,0,0"/>
                        </StackPanel>

                        <!-- Description -->
                        <StackPanel Margin="0,14,0,0">
                            <TextBlock Text="Description" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="DescriptionTextBox"
                                     Style="{StaticResource MultilineTextBox}"
                                     MaxLength="500"/>
                        </StackPanel>

                        <!-- Image Section -->
                        <TextBlock Text="PRODUCT IMAGE" Style="{StaticResource SectionHeader}" Margin="0,20,0,10"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Image Preview -->
                            <Border Grid.Column="0"
                                    Width="100"
                                    Height="100"
                                    CornerRadius="8"
                                    Background="#2D2D44"
                                    BorderBrush="#4E4E6E"
                                    BorderThickness="1">
                                <Grid>
                                    <TextBlock x:Name="NoImageText"
                                               Text="No Image"
                                               FontSize="11"
                                               Foreground="#6E6E8E"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                    <Image x:Name="ImagePreview"
                                           Stretch="Uniform"
                                           Margin="4"
                                           Visibility="Collapsed"/>
                                </Grid>
                            </Border>

                            <!-- Image Buttons -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="16,0,0,0">
                                <Button Content="Browse Image"
                                        Background="#4E4E6E"
                                        Foreground="White"
                                        FontSize="12"
                                        Padding="16,8"
                                        Cursor="Hand"
                                        Click="BrowseButton_Click">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="5"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <Button Content="Clear"
                                        Background="#3D3D52"
                                        Foreground="#9CA3AF"
                                        FontSize="12"
                                        Padding="16,8"
                                        Margin="0,8,0,0"
                                        Cursor="Hand"
                                        Click="ClearImageButton_Click">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="5"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <!-- Right Column -->
                    <StackPanel Grid.Column="2">
                        <!-- Pricing Section -->
                        <TextBlock Text="PRICING" Style="{StaticResource SectionHeader}" Margin="0,4,0,10"/>

                        <!-- Selling Price and Cost Price Row -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Selling Price (KSh) *" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="SellingPriceTextBox"
                                         AutomationProperties.AutomationId="SellingPriceTextBox"
                                         Style="{StaticResource InputTextBox}"
                                         Height="38"
                                         PreviewTextInput="DecimalTextBox_PreviewTextInput"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Cost Price (KSh)" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="CostPriceTextBox"
                                         Style="{StaticResource InputTextBox}"
                                         Height="38"
                                         PreviewTextInput="DecimalTextBox_PreviewTextInput"/>
                            </StackPanel>
                        </Grid>

                        <!-- Tax Rate and Unit of Measure Row -->
                        <Grid Margin="0,14,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Tax %" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="TaxRateTextBox"
                                         Style="{StaticResource InputTextBox}"
                                         Height="38"
                                         Text="16"
                                         PreviewTextInput="DecimalTextBox_PreviewTextInput"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Unit of Measure" Style="{StaticResource FieldLabel}"/>
                                <ComboBox x:Name="UnitOfMeasureComboBox"
                                          Style="{StaticResource InputComboBox}"/>
                            </StackPanel>
                        </Grid>

                        <!-- Inventory Section -->
                        <TextBlock Text="INVENTORY LEVELS" Style="{StaticResource SectionHeader}" Margin="0,20,0,10"/>

                        <!-- Reorder Point -->
                        <StackPanel>
                            <TextBlock Text="Reorder Point" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="MinStockTextBox"
                                     Style="{StaticResource InputTextBox}"
                                     Height="38"
                                     PreviewTextInput="DecimalTextBox_PreviewTextInput"/>
                            <TextBlock Text="Stock level that triggers low stock alert"
                                       FontSize="10"
                                       Foreground="#6E6E8E"
                                       Margin="2,4,0,0"/>
                        </StackPanel>

                        <!-- Max Stock and Initial Stock Row -->
                        <Grid Margin="0,14,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Max Stock" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="MaxStockTextBox"
                                         Style="{StaticResource InputTextBox}"
                                         Height="38"
                                         PreviewTextInput="DecimalTextBox_PreviewTextInput"/>
                                <TextBlock Text="Maximum inventory to hold"
                                           FontSize="10"
                                           Foreground="#6E6E8E"
                                           Margin="2,4,0,0"/>
                            </StackPanel>

                            <StackPanel x:Name="InitialStockPanel" Grid.Column="2">
                                <TextBlock Text="Initial Stock" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="InitialStockTextBox"
                                         Style="{StaticResource InputTextBox}"
                                         Height="38"
                                         Text="0"
                                         PreviewTextInput="DecimalTextBox_PreviewTextInput"/>
                                <TextBlock Text="Opening stock for new product"
                                           FontSize="10"
                                           Foreground="#6E6E8E"
                                           Margin="2,4,0,0"/>
                            </StackPanel>
                        </Grid>

                        <!-- Status Section -->
                        <TextBlock Text="STATUS" Style="{StaticResource SectionHeader}" Margin="0,20,0,10"/>
                        <Border Background="#2D2D44"
                                CornerRadius="8"
                                Padding="16,12">
                            <CheckBox x:Name="IsActiveCheckBox"
                                      Content="Product is Active"
                                      Style="{StaticResource ModernCheckBox}"
                                      IsChecked="True"/>
                        </Border>
                        <TextBlock Text="Inactive products won't appear in POS"
                                   FontSize="10"
                                   Foreground="#6E6E8E"
                                   Margin="2,6,0,0"/>

                        <!-- Error Message -->
                        <Border x:Name="ErrorBorder"
                                Background="#3D2030"
                                CornerRadius="6"
                                Padding="14,12"
                                Margin="0,20,0,0"
                                Visibility="Collapsed">
                            <TextBlock x:Name="ErrorTextBlock"
                                       Foreground="#E74C3C"
                                       FontSize="12"
                                       TextWrapping="Wrap"/>
                        </Border>
                    </StackPanel>
                </Grid>
            </ScrollViewer>

            <!-- Compact Action Buttons -->
            <Border Grid.Row="2" Background="#252538" CornerRadius="0,0,12,12" Padding="20,12">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Cancel"
                            Style="{StaticResource ActionButton}"
                            Background="#4E4E6E"
                            Margin="0"
                            Click="CancelButton_Click"/>
                    <Button x:Name="SaveButton"
                            AutomationProperties.AutomationId="SaveButton"
                            Content="Save Product"
                            Style="{StaticResource ActionButton}"
                            Background="#10B981"
                            Click="SaveButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
