<Window x:Class="HospitalityPOS.WPF.Views.Dialogs.ProductEditorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Product Editor"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        SizeToContent="Height"
        Width="680"
        MaxHeight="720"
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- Compact Input TextBox -->
        <Style x:Key="InputTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#1A1A2E"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="CaretBrush" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#4E4E6E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          VerticalAlignment="Center"
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#6366F1"/>
                                <Setter Property="Background" Value="#252538"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Compact ComboBox - inherits dark theme template from global style -->
        <Style x:Key="InputComboBox" TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
            <Setter Property="Background" Value="#1A1A2E"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#4E4E6E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="34"/>
        </Style>

        <!-- Compact Action Button -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="MinHeight" Value="34"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="16,8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.7"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Compact CheckBox -->
        <Style x:Key="ModernCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal">
                            <Border x:Name="CheckBorder"
                                    Width="18"
                                    Height="18"
                                    CornerRadius="3"
                                    Background="#2D2D44"
                                    BorderBrush="#4E4E6E"
                                    BorderThickness="1"
                                    Margin="0,0,8,0">
                                <Path x:Name="CheckMark"
                                      Data="M 2 6 L 5 9 L 11 2"
                                      Stroke="White"
                                      StrokeThickness="1.5"
                                      Visibility="Collapsed"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Border>
                            <ContentPresenter VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckBorder" Property="Background" Value="#4CAF50"/>
                                <Setter TargetName="CheckBorder" Property="BorderBrush" Value="#4CAF50"/>
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="CheckBorder" Property="BorderBrush" Value="#6E6EAE"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Compact Section Header -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#8B8BA7"/>
            <Setter Property="Margin" Value="0,12,0,8"/>
        </Style>

        <!-- Compact Field Label -->
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Foreground" Value="#B0B0C0"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
    </Window.Resources>

    <Border Background="#1E1E2E"
            CornerRadius="12"
            BorderBrush="#3E3E5E"
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Compact Header -->
            <Border Grid.Row="0" Background="#252538" CornerRadius="12,12,0,0" Padding="20,14">
                <Grid>
                    <StackPanel HorizontalAlignment="Left">
                        <TextBlock x:Name="TitleTextBlock"
                                   Text="Create Product"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="White"/>
                        <TextBlock x:Name="SubtitleTextBlock"
                                   Text="Add a new product to the catalog"
                                   FontSize="12"
                                   Foreground="#9CA3AF"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Form Fields - Compact Layout -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Padding="20,8,20,12">
                <StackPanel>
                    <!-- Row 1: Code, Barcode, Category -->
                    <TextBlock Text="BASIC INFORMATION" Style="{StaticResource SectionHeader}" Margin="0,4,0,8"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="1.2*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Product Code *" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="CodeTextBox"
                                     Style="{StaticResource InputTextBox}"
                                     MaxLength="50"
                                     CharacterCasing="Upper"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Barcode" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="BarcodeTextBox"
                                     Style="{StaticResource InputTextBox}"
                                     MaxLength="50"/>
                        </StackPanel>

                        <StackPanel Grid.Column="4">
                            <TextBlock Text="Category *" Style="{StaticResource FieldLabel}"/>
                            <ComboBox x:Name="CategoryComboBox"
                                      Style="{StaticResource InputComboBox}"
                                      DisplayMemberPath="Name"/>
                        </StackPanel>
                    </Grid>

                    <!-- Row 2: Name and Description side by side -->
                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Product Name *" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="NameTextBox"
                                     Style="{StaticResource InputTextBox}"
                                     MaxLength="200"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Description" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="DescriptionTextBox"
                                     Style="{StaticResource InputTextBox}"
                                     MaxLength="500"/>
                        </StackPanel>
                    </Grid>

                    <!-- Pricing Section -->
                    <TextBlock Text="PRICING" Style="{StaticResource SectionHeader}"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Selling Price (KSh) *" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="SellingPriceTextBox"
                                     Style="{StaticResource InputTextBox}"
                                     PreviewTextInput="DecimalTextBox_PreviewTextInput"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Cost Price (KSh)" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="CostPriceTextBox"
                                     Style="{StaticResource InputTextBox}"
                                     PreviewTextInput="DecimalTextBox_PreviewTextInput"/>
                        </StackPanel>

                        <StackPanel Grid.Column="4">
                            <TextBlock Text="Tax %" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="TaxRateTextBox"
                                     Style="{StaticResource InputTextBox}"
                                     Text="16"
                                     PreviewTextInput="DecimalTextBox_PreviewTextInput"/>
                        </StackPanel>
                    </Grid>

                    <!-- Inventory Section -->
                    <TextBlock Text="INVENTORY" Style="{StaticResource SectionHeader}"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Unit of Measure" Style="{StaticResource FieldLabel}"/>
                            <ComboBox x:Name="UnitOfMeasureComboBox"
                                      Style="{StaticResource InputComboBox}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Min Stock" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="MinStockTextBox"
                                     Style="{StaticResource InputTextBox}"
                                     PreviewTextInput="DecimalTextBox_PreviewTextInput"/>
                        </StackPanel>

                        <StackPanel Grid.Column="4">
                            <TextBlock Text="Max Stock" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="MaxStockTextBox"
                                     Style="{StaticResource InputTextBox}"
                                     PreviewTextInput="DecimalTextBox_PreviewTextInput"/>
                        </StackPanel>

                        <!-- Initial Stock inline -->
                        <StackPanel x:Name="InitialStockPanel" Grid.Column="6">
                            <TextBlock Text="Initial Stock" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="InitialStockTextBox"
                                     Style="{StaticResource InputTextBox}"
                                     Text="0"
                                     PreviewTextInput="DecimalTextBox_PreviewTextInput"/>
                        </StackPanel>
                    </Grid>

                    <!-- Image and Status Row -->
                    <TextBlock Text="IMAGE &amp; STATUS" Style="{StaticResource SectionHeader}"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Compact Image Preview -->
                        <Border Grid.Column="0"
                                Width="56"
                                Height="56"
                                CornerRadius="6"
                                Background="#2D2D44"
                                BorderBrush="#4E4E6E"
                                BorderThickness="1">
                            <Grid>
                                <TextBlock x:Name="NoImageText"
                                           Text="No Image"
                                           FontSize="9"
                                           Foreground="#6E6E8E"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                                <Image x:Name="ImagePreview"
                                       Stretch="Uniform"
                                       Margin="3"
                                       Visibility="Collapsed"/>
                            </Grid>
                        </Border>

                        <!-- Image Buttons -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="12,0,0,0">
                            <Button Content="Browse"
                                    Background="#4E4E6E"
                                    Foreground="White"
                                    FontSize="12"
                                    Padding="12,6"
                                    Cursor="Hand"
                                    Click="BrowseButton_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="4"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            <Button Content="Clear"
                                    Background="#3D3D52"
                                    Foreground="#9CA3AF"
                                    FontSize="12"
                                    Padding="12,6"
                                    Margin="8,0,0,0"
                                    Cursor="Hand"
                                    Click="ClearImageButton_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="4"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>

                        <!-- Active Status aligned right -->
                        <CheckBox x:Name="IsActiveCheckBox"
                                  Grid.Column="2"
                                  Content="Active"
                                  Style="{StaticResource ModernCheckBox}"
                                  IsChecked="True"
                                  VerticalAlignment="Center"/>
                    </Grid>

                    <!-- Error Message -->
                    <Border x:Name="ErrorBorder"
                            Background="#3D2030"
                            CornerRadius="6"
                            Padding="12,10"
                            Margin="0,12,0,0"
                            Visibility="Collapsed">
                        <TextBlock x:Name="ErrorTextBlock"
                                   Foreground="#E74C3C"
                                   FontSize="12"
                                   TextWrapping="Wrap"/>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Compact Action Buttons -->
            <Border Grid.Row="2" Background="#252538" CornerRadius="0,0,12,12" Padding="20,12">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Cancel"
                            Style="{StaticResource ActionButton}"
                            Background="#4E4E6E"
                            Margin="0"
                            Click="CancelButton_Click"/>
                    <Button x:Name="SaveButton"
                            Content="Save Product"
                            Style="{StaticResource ActionButton}"
                            Background="#10B981"
                            Click="SaveButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
