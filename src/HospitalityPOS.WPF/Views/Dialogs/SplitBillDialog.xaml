<Window x:Class="HospitalityPOS.WPF.Views.Dialogs.SplitBillDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Split Bill"
        Width="500"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        Background="#2D2D44">

    <Window.Resources>
        <!-- Tab Button Style -->
        <Style x:Key="SplitTypeTabStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="#3D3D5C"/>
            <Setter Property="Foreground" Value="#9CA3AF"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="#4A4A6A"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#22C55E"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#16A34A"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4D4D6C"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsChecked" Value="True"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="border" Property="Background" Value="#16A34A"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Quantity Button Style -->
        <Style x:Key="QuantityButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="48"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#3D3D5C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4D4D6C"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#5D5D8C"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Item Checkbox Style -->
        <Style x:Key="ItemCheckboxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Border x:Name="border"
                                Background="#1E1E2E"
                                BorderBrush="#4A4A6A"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="12,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border x:Name="checkBorder"
                                        Width="20"
                                        Height="20"
                                        Background="#3D3D5C"
                                        BorderBrush="#4A4A6A"
                                        BorderThickness="2"
                                        CornerRadius="4"
                                        VerticalAlignment="Center">
                                    <TextBlock x:Name="checkMark"
                                               Text="âœ“"
                                               FontSize="14"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Visibility="Collapsed"/>
                                </Border>
                                <ContentPresenter Grid.Column="1"
                                                  Margin="12,0,0,0"
                                                  VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="checkBorder" Property="Background" Value="#22C55E"/>
                                <Setter TargetName="checkBorder" Property="BorderBrush" Value="#16A34A"/>
                                <Setter TargetName="checkMark" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#22C55E"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#252538"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Action Button Style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="44"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="Split Bill"
                       Foreground="White"
                       FontSize="20"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
            <TextBlock x:Name="ReceiptInfoText"
                       Text="Receipt #R-2025-001 - KSh 5,000.00"
                       Foreground="#9CA3AF"
                       FontSize="14"
                       HorizontalAlignment="Center"
                       Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Split Type Selection -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <RadioButton x:Name="EqualSplitRadio"
                         Content="Equal Split"
                         Style="{StaticResource SplitTypeTabStyle}"
                         IsChecked="True"
                         Checked="SplitTypeChanged"/>
            <RadioButton x:Name="ItemSplitRadio"
                         Grid.Column="2"
                         Content="By Items"
                         Style="{StaticResource SplitTypeTabStyle}"
                         Checked="SplitTypeChanged"/>
        </Grid>

        <!-- Equal Split Panel -->
        <Border x:Name="EqualSplitPanel"
                Grid.Row="2"
                Background="#1E1E2E"
                BorderBrush="#4A4A6A"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20"
                Margin="0,0,0,16">
            <StackPanel>
                <TextBlock Text="Split into how many parts?"
                           Foreground="White"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,16"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="DecreaseSplitButton"
                            Content="-"
                            Style="{StaticResource QuantityButtonStyle}"
                            Click="DecreaseSplit_Click"/>
                    <Border Background="#3D3D5C"
                            CornerRadius="6"
                            Margin="16,0"
                            Padding="24,0"
                            MinWidth="80">
                        <TextBlock x:Name="SplitCountText"
                                   Text="2"
                                   Foreground="White"
                                   FontSize="32"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                    <Button x:Name="IncreaseSplitButton"
                            Content="+"
                            Style="{StaticResource QuantityButtonStyle}"
                            Click="IncreaseSplit_Click"/>
                </StackPanel>

                <TextBlock x:Name="AmountPerSplitText"
                           Text="Each split: KSh 2,500.00"
                           Foreground="#22C55E"
                           FontSize="16"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           Margin="0,16,0,0"/>
            </StackPanel>
        </Border>

        <!-- Item Split Panel -->
        <Border x:Name="ItemSplitPanel"
                Grid.Row="3"
                Background="#1E1E2E"
                BorderBrush="#4A4A6A"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20"
                Margin="0,0,0,16"
                Visibility="Collapsed"
                MaxHeight="300">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Select items to move to new receipt:"
                           Foreground="White"
                           FontSize="14"
                           Margin="0,0,0,12"/>

                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              MaxHeight="200">
                    <StackPanel x:Name="ItemsPanel">
                        <!-- Items will be added programmatically -->
                    </StackPanel>
                </ScrollViewer>

                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,12,0,0">
                    <TextBlock Text="Selected total: "
                               Foreground="#9CA3AF"
                               FontSize="14"
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="SelectedTotalText"
                               Text="KSh 0.00"
                               Foreground="#22C55E"
                               FontSize="14"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Error Message -->
        <TextBlock x:Name="ErrorMessageText"
                   Grid.Row="4"
                   Text=""
                   Foreground="#EF4444"
                   FontSize="12"
                   HorizontalAlignment="Center"
                   TextWrapping="Wrap"
                   Margin="0,0,0,8"
                   Visibility="Collapsed"/>

        <!-- Action Buttons -->
        <Grid Grid.Row="5" Margin="0,8,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Content="Cancel"
                    Background="#4A4A6A"
                    Style="{StaticResource ActionButtonStyle}"
                    Click="CancelButton_Click"/>
            <Button x:Name="ConfirmButton"
                    Grid.Column="2"
                    Content="Split Bill"
                    Background="#22C55E"
                    Style="{StaticResource ActionButtonStyle}"
                    Click="ConfirmButton_Click"/>
        </Grid>
    </Grid>
</Window>
