<Window x:Class="HospitalityPOS.WPF.Views.Dialogs.VariantOptionEditorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:entities="clr-namespace:HospitalityPOS.Core.Entities;assembly=HospitalityPOS.Core"
        mc:Ignorable="d"
        Title="{Binding DialogTitle}"
        Height="720" Width="560"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Apple-inspired Color Palette (Dark Mode) -->
        <Color x:Key="SurfaceColor">#1C1C1E</Color>
        <Color x:Key="SurfaceSecondaryColor">#2C2C2E</Color>
        <Color x:Key="SurfaceTertiaryColor">#3A3A3C</Color>
        <Color x:Key="SurfaceElevatedColor">#252528</Color>
        <Color x:Key="AccentColor">#0A84FF</Color>
        <Color x:Key="AccentHoverColor">#409CFF</Color>
        <Color x:Key="SuccessColor">#30D158</Color>
        <Color x:Key="ErrorColor">#FF453A</Color>
        <Color x:Key="LabelPrimaryColor">#FFFFFF</Color>
        <Color x:Key="LabelSecondaryColor">#EBEBF5</Color>
        <Color x:Key="LabelTertiaryColor">#8E8E93</Color>
        <Color x:Key="SeparatorColor">#38383A</Color>
        <Color x:Key="FillColor">#1F1F23</Color>

        <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
        <SolidColorBrush x:Key="SurfaceSecondaryBrush" Color="{StaticResource SurfaceSecondaryColor}"/>
        <SolidColorBrush x:Key="SurfaceTertiaryBrush" Color="{StaticResource SurfaceTertiaryColor}"/>
        <SolidColorBrush x:Key="SurfaceElevatedBrush" Color="{StaticResource SurfaceElevatedColor}"/>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
        <SolidColorBrush x:Key="LabelPrimaryBrush" Color="{StaticResource LabelPrimaryColor}"/>
        <SolidColorBrush x:Key="LabelSecondaryBrush" Color="{StaticResource LabelSecondaryColor}"/>
        <SolidColorBrush x:Key="LabelTertiaryBrush" Color="{StaticResource LabelTertiaryColor}"/>
        <SolidColorBrush x:Key="SeparatorBrush" Color="{StaticResource SeparatorColor}"/>
        <SolidColorBrush x:Key="FillBrush" Color="{StaticResource FillColor}"/>

        <!-- Apple-style TextBox -->
        <Style x:Key="AppleTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource FillBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource LabelPrimaryBrush}"/>
            <Setter Property="CaretBrush" Value="{StaticResource AccentBrush}"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="14,12"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Padding="{TemplateBinding Padding}"
                                          VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Apple-style ComboBox -->
        <Style x:Key="AppleComboBox" TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
            <Setter Property="Background" Value="{StaticResource FillBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource LabelPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="14,12"/>
            <Setter Property="FontSize" Value="15"/>
        </Style>

        <!-- Primary Button -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{StaticResource AccentHoverColor}"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.35"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button -->
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="{StaticResource SurfaceTertiaryBrush}"/>
        </Style>

        <!-- Small Button -->
        <Style x:Key="SmallButton" TargetType="Button" BasedOn="{StaticResource SecondaryButton}">
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- Close Button -->
        <Style x:Key="CloseButton" TargetType="Button">
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="#48484A"
                                CornerRadius="14">
                            <TextBlock Text="&#xE711;"
                                       FontFamily="Segoe MDL2 Assets"
                                       FontSize="10"
                                       Foreground="#AEAEB2"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#636366"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Icon Button -->
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="Transparent"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource SurfaceTertiaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Apple-style CheckBox -->
        <Style x:Key="AppleCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource LabelSecondaryBrush}"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal">
                            <Border x:Name="checkBorder"
                                    Width="22" Height="22"
                                    CornerRadius="6"
                                    Background="{StaticResource FillBrush}"
                                    BorderBrush="Transparent"
                                    BorderThickness="0">
                                <Path x:Name="checkMark"
                                      Data="M 3 6 L 6 9 L 12 3"
                                      Stroke="White"
                                      StrokeThickness="2"
                                      StrokeLineJoin="Round"
                                      Visibility="Collapsed"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Width="12" Height="10"
                                      Margin="0,1,0,0"/>
                            </Border>
                            <ContentPresenter Margin="12,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="checkBorder" Property="Background" Value="{StaticResource AccentBrush}"/>
                                <Setter TargetName="checkMark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="checkBorder" Property="Opacity" Value="0.85"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Main Container -->
    <Border Background="{StaticResource SurfaceBrush}"
            CornerRadius="14">
        <Border.Effect>
            <DropShadowEffect Color="#000000" BlurRadius="40" ShadowDepth="0" Opacity="0.4"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Padding="24,20,24,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="{Binding DialogTitle}"
                                   FontSize="22"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource LabelPrimaryBrush}"/>
                        <TextBlock Text="Define variant option template with values"
                                   FontSize="15"
                                   Foreground="{StaticResource LabelTertiaryBrush}"
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <Button Grid.Column="1"
                            Style="{StaticResource CloseButton}"
                            Click="CloseButton_Click"
                            VerticalAlignment="Top"/>
                </Grid>
            </Border>

            <!-- Separator -->
            <Rectangle Grid.Row="0" Height="0.5" Fill="{StaticResource SeparatorBrush}"
                       VerticalAlignment="Bottom" Margin="24,0"/>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="24,20">
                <StackPanel>
                    <!-- Name Field -->
                    <TextBlock Text="NAME" FontSize="12" FontWeight="SemiBold"
                               Foreground="{StaticResource LabelTertiaryBrush}"
                               Margin="0,0,0,8"/>
                    <TextBox x:Name="NameTextBox"
                             Style="{StaticResource AppleTextBox}"
                             Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,0,20"/>

                    <!-- Display Name Field -->
                    <TextBlock Text="DISPLAY NAME" FontSize="12" FontWeight="SemiBold"
                               Foreground="{StaticResource LabelTertiaryBrush}"
                               Margin="0,0,0,8"/>
                    <TextBox Style="{StaticResource AppleTextBox}"
                             Text="{Binding DisplayName, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,0,20"/>

                    <!-- Option Type -->
                    <TextBlock Text="OPTION TYPE" FontSize="12" FontWeight="SemiBold"
                               Foreground="{StaticResource LabelTertiaryBrush}"
                               Margin="0,0,0,8"/>
                    <ComboBox Style="{StaticResource AppleComboBox}"
                              ItemsSource="{Binding OptionTypes}"
                              SelectedItem="{Binding SelectedOptionType}"
                              Margin="0,0,0,20"/>

                    <!-- Description Field -->
                    <TextBlock Text="DESCRIPTION" FontSize="12" FontWeight="SemiBold"
                               Foreground="{StaticResource LabelTertiaryBrush}"
                               Margin="0,0,0,8"/>
                    <TextBox Style="{StaticResource AppleTextBox}"
                             Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             Height="72"
                             VerticalContentAlignment="Top"
                             Margin="0,0,0,20"/>

                    <!-- Display Order Field -->
                    <TextBlock Text="DISPLAY ORDER" FontSize="12" FontWeight="SemiBold"
                               Foreground="{StaticResource LabelTertiaryBrush}"
                               Margin="0,0,0,8"/>
                    <TextBox Style="{StaticResource AppleTextBox}"
                             Text="{Binding DisplayOrder, UpdateSourceTrigger=PropertyChanged}"
                             Width="100"
                             HorizontalAlignment="Left"
                             Margin="0,0,0,20"/>

                    <!-- Global Checkbox -->
                    <CheckBox Style="{StaticResource AppleCheckBox}"
                              Content="Global option (available for all products)"
                              IsChecked="{Binding IsGlobal}"
                              Margin="0,0,0,24"/>

                    <!-- Values Section -->
                    <Border Background="{StaticResource SurfaceSecondaryBrush}"
                            CornerRadius="12"
                            Padding="16">
                        <StackPanel>
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Option Values"
                                           FontSize="17"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource LabelPrimaryBrush}"
                                           VerticalAlignment="Center"/>
                                <Button Grid.Column="1"
                                        Content="+ Add Value"
                                        Style="{StaticResource SmallButton}"
                                        Click="AddValue_Click"/>
                            </Grid>

                            <!-- Values List -->
                            <ItemsControl ItemsSource="{Binding Values}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource SurfaceTertiaryBrush}"
                                                CornerRadius="10"
                                                Padding="14,12"
                                                Margin="0,0,0,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Value}"
                                                               FontSize="15"
                                                               FontWeight="SemiBold"
                                                               Foreground="{StaticResource LabelPrimaryBrush}"/>
                                                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                        <TextBlock Text="SKU: "
                                                                   FontSize="13"
                                                                   Foreground="{StaticResource LabelTertiaryBrush}"/>
                                                        <TextBlock Text="{Binding SkuSuffix, TargetNullValue='—'}"
                                                                   FontSize="13"
                                                                   Foreground="{StaticResource LabelSecondaryBrush}"/>
                                                        <TextBlock Text="  •  Price: "
                                                                   FontSize="13"
                                                                   Foreground="{StaticResource LabelTertiaryBrush}"/>
                                                        <TextBlock Text="{Binding PriceAdjustment, StringFormat='+{0:N0}'}"
                                                                   FontSize="13"
                                                                   Foreground="{StaticResource SuccessBrush}"/>
                                                    </StackPanel>
                                                </StackPanel>
                                                <Button Grid.Column="1"
                                                        Style="{StaticResource IconButton}"
                                                        Click="EditValue_Click"
                                                        Tag="{Binding}">
                                                    <TextBlock Text="&#xE70F;"
                                                               FontFamily="Segoe MDL2 Assets"
                                                               FontSize="14"
                                                               Foreground="{StaticResource LabelTertiaryBrush}"/>
                                                </Button>
                                                <Button Grid.Column="2"
                                                        Style="{StaticResource IconButton}"
                                                        Click="DeleteValue_Click"
                                                        Tag="{Binding}">
                                                    <TextBlock Text="&#xE74D;"
                                                               FontFamily="Segoe MDL2 Assets"
                                                               FontSize="14"
                                                               Foreground="{StaticResource ErrorBrush}"/>
                                                </Button>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Empty State -->
                            <Border Background="{StaticResource SurfaceTertiaryBrush}"
                                    CornerRadius="10"
                                    Padding="24"
                                    Visibility="{Binding HasValues, Converter={StaticResource InverseBoolToVisibility}, FallbackValue=Visible}">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="&#xE721;"
                                               FontFamily="Segoe MDL2 Assets"
                                               FontSize="24"
                                               Foreground="{StaticResource LabelTertiaryBrush}"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,8"/>
                                    <TextBlock Text="No values added yet"
                                               FontSize="15"
                                               Foreground="{StaticResource LabelTertiaryBrush}"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Click 'Add Value' to create option values"
                                               FontSize="13"
                                               Foreground="{StaticResource LabelTertiaryBrush}"
                                               HorizontalAlignment="Center"
                                               Opacity="0.7"
                                               Margin="0,4,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="2"
                    Background="{StaticResource SurfaceElevatedBrush}"
                    CornerRadius="0,0,14,14"
                    Padding="24,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            Content="Cancel"
                            Style="{StaticResource SecondaryButton}"
                            Click="CancelButton_Click"/>

                    <Button Grid.Column="2"
                            Content="Save"
                            Style="{StaticResource PrimaryButton}"
                            Click="SaveButton_Click"
                            IsEnabled="{Binding CanSave}"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
