<Window x:Class="HospitalityPOS.WPF.Views.Dialogs.StockAdjustmentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Stock Adjustment"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="NoResize"
        Width="500"
        Height="700"
        Background="#1E1E2E"
        AllowsTransparency="True">

    <Window.Resources>
        <Style x:Key="ReasonRadioButton" TargetType="RadioButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,4,0,4"/>
            <Setter Property="Padding" Value="8,8,8,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="RootBorder"
                                Background="#2D2D44"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}"
                                Cursor="Hand">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="24"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Ellipse x:Name="OuterCircle"
                                         Width="18" Height="18"
                                         Stroke="#6B7280"
                                         StrokeThickness="2"
                                         Fill="Transparent"/>
                                <Ellipse x:Name="InnerCircle"
                                         Width="10" Height="10"
                                         Fill="#3B82F6"
                                         Visibility="Collapsed"/>
                                <ContentPresenter Grid.Column="1"
                                                  VerticalAlignment="Center"
                                                  Margin="8,0,0,0"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="OuterCircle" Property="Stroke" Value="#3B82F6"/>
                                <Setter TargetName="InnerCircle" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="RootBorder" Property="Background" Value="#3D3D5C"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="RootBorder" Property="Background" Value="#3D3D5C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="AdjustButton" TargetType="Button">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="16,8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2563EB"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#4B5563"/>
                                <Setter Property="Foreground" Value="#9CA3AF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CancelButton" TargetType="Button">
            <Setter Property="Background" Value="#374151"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="16,8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4B5563"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="IncrementButton" TargetType="Button">
            <Setter Property="Background" Value="#374151"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Width" Value="44"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4B5563"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1F2937"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="InputTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="BorderBrush" Value="#4E4E6E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          VerticalAlignment="Center"
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#3B82F6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="AdjustmentTypeRadioButton" TargetType="RadioButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <StackPanel Orientation="Horizontal">
                            <Border x:Name="RadioBorder"
                                    Width="20" Height="20"
                                    CornerRadius="10"
                                    Background="#2D2D44"
                                    BorderBrush="#4E4E6E"
                                    BorderThickness="2">
                                <Ellipse x:Name="RadioDot"
                                         Width="10" Height="10"
                                         Fill="#3B82F6"
                                         Visibility="Collapsed"/>
                            </Border>
                            <ContentPresenter Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="RadioBorder" Property="BorderBrush" Value="#3B82F6"/>
                                <Setter TargetName="RadioDot" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="RadioBorder" Property="BorderBrush" Value="#6B7280"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DirectionToggleButton" TargetType="ToggleButton">
            <Setter Property="Width" Value="44"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="ToggleBorder"
                                Background="#22C55E"
                                CornerRadius="6">
                            <TextBlock x:Name="ToggleText"
                                       Text="+"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="ToggleBorder" Property="Background" Value="#EF4444"/>
                                <Setter TargetName="ToggleText" Property="Text" Value="-"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ToggleBorder" Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border BorderBrush="#3D3D5C" BorderThickness="1" CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#2D2D44" CornerRadius="8,8,0,0">
                <StackPanel Margin="20,16">
                    <TextBlock Text="STOCK ADJUSTMENT"
                               Foreground="#3B82F6"
                               FontSize="20"
                               FontWeight="Bold"/>
                    <TextBlock x:Name="ProductNameText"
                               Text="Product Name"
                               Foreground="White"
                               FontSize="16"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20,16">
                    <!-- Product Info -->
                    <Border Background="#2D2D44" CornerRadius="6" Padding="12" Margin="0,0,0,16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Row="0" Grid.Column="0">
                                <TextBlock Text="Category" Foreground="#6B7280" FontSize="11"/>
                                <TextBlock x:Name="CategoryText" Text="Category" Foreground="White" FontSize="14"/>
                            </StackPanel>
                            <StackPanel Grid.Row="0" Grid.Column="1">
                                <TextBlock Text="Unit" Foreground="#6B7280" FontSize="11"/>
                                <TextBlock x:Name="UnitText" Text="Each" Foreground="White" FontSize="14"/>
                            </StackPanel>
                            <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Margin="0,12,0,0">
                                <TextBlock Text="Current Stock" Foreground="#6B7280" FontSize="11"/>
                                <TextBlock x:Name="CurrentStockText" Text="0" Foreground="#22C55E" FontSize="24" FontWeight="Bold"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Separator -->
                    <Border Height="1" Background="#3D3D5C" Margin="0,0,0,16"/>

                    <!-- Adjustment Type Selection -->
                    <TextBlock Text="Adjustment Type:"
                               Foreground="White"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>

                    <StackPanel Margin="0,0,0,16">
                        <RadioButton x:Name="SetExactRadio"
                                     Content="Set Exact Quantity"
                                     Style="{StaticResource AdjustmentTypeRadioButton}"
                                     GroupName="AdjustmentType"
                                     Checked="AdjustmentType_Changed"/>
                        <RadioButton x:Name="AdjustByRadio"
                                     Content="Adjust By Amount"
                                     Style="{StaticResource AdjustmentTypeRadioButton}"
                                     GroupName="AdjustmentType"
                                     IsChecked="True"
                                     Checked="AdjustmentType_Changed"/>
                    </StackPanel>

                    <!-- Adjustment Input -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Direction Toggle (only for Adjust By Amount) -->
                        <ToggleButton x:Name="DirectionToggle"
                                      Grid.Column="0"
                                      Style="{StaticResource DirectionToggleButton}"
                                      Margin="0,0,12,0"
                                      Click="DirectionToggle_Click"/>

                        <!-- Quantity Input Panel -->
                        <Grid Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0"
                                    Content="-"
                                    Style="{StaticResource IncrementButton}"
                                    Click="DecrementButton_Click"/>

                            <TextBox x:Name="AdjustmentTextBox"
                                     Grid.Column="1"
                                     Style="{StaticResource InputTextBox}"
                                     Text="0"
                                     TextAlignment="Center"
                                     FontSize="20"
                                     FontWeight="Bold"
                                     Margin="8,0"
                                     TextChanged="AdjustmentTextBox_TextChanged"
                                     PreviewTextInput="AdjustmentTextBox_PreviewTextInput"/>

                            <Button Grid.Column="2"
                                    Content="+"
                                    Style="{StaticResource IncrementButton}"
                                    Click="IncrementButton_Click"/>
                        </Grid>
                    </Grid>

                    <!-- New Stock Preview -->
                    <Border Background="#1F2937" CornerRadius="6" Padding="12" Margin="0,0,0,16">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="New Stock: "
                                       Foreground="#9CA3AF"
                                       FontSize="16"
                                       VerticalAlignment="Center"/>
                            <TextBlock x:Name="NewStockText"
                                       Text="0"
                                       Foreground="#3B82F6"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Separator -->
                    <Border Height="1" Background="#3D3D5C" Margin="0,0,0,16"/>

                    <!-- Reason Selection -->
                    <TextBlock Text="Reason (Required):"
                               Foreground="White"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>

                    <StackPanel x:Name="ReasonsPanel" Margin="0,0,0,16">
                        <!-- Reasons populated programmatically -->
                    </StackPanel>

                    <!-- Additional Notes -->
                    <TextBlock x:Name="NotesLabel"
                               Text="Additional Notes:"
                               Foreground="#9CA3AF"
                               FontSize="12"
                               Margin="0,0,0,8"/>
                    <TextBox x:Name="NotesTextBox"
                             Height="80"
                             Background="#2D2D44"
                             Foreground="White"
                             BorderBrush="#3D3D5C"
                             BorderThickness="1"
                             Padding="12"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             FontSize="14"/>

                    <!-- Error Message -->
                    <TextBlock x:Name="ErrorMessageText"
                               Foreground="#EF4444"
                               FontSize="12"
                               Visibility="Collapsed"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer Buttons -->
            <Border Grid.Row="2" Background="#2D2D44" CornerRadius="0,0,8,8" Padding="20,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            Content="Cancel"
                            Style="{StaticResource CancelButton}"
                            Click="CancelButton_Click"/>

                    <Button x:Name="ApplyButton"
                            Grid.Column="2"
                            Content="Apply Adjustment"
                            Style="{StaticResource AdjustButton}"
                            Click="ApplyButton_Click"
                            IsEnabled="False"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
