<Window x:Class="HospitalityPOS.WPF.Views.Dialogs.ProductSearchDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Product Lookup"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        Width="700"
        Height="500"
        MinWidth="500"
        MinHeight="350"
        Background="#1E1E2E"
        ShowInTaskbar="False">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
    </Window.Resources>

    <Border BorderBrush="#3D3D5C" BorderThickness="1" CornerRadius="4">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="44"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" Background="#252538" CornerRadius="4,4,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Margin="16,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="&#xE721;" FontFamily="Segoe MDL2 Assets" FontSize="18"
                                   Foreground="#22C55E" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Product Lookup (F1)" FontSize="16" FontWeight="SemiBold"
                                   Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button Content="âœ•" HorizontalAlignment="Right" VerticalAlignment="Center"
                            Background="Transparent" Foreground="#9CA3AF" BorderThickness="0"
                            Width="32" Height="32" FontSize="14" Cursor="Hand"
                            Click="CloseButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

            <!-- Search Input -->
            <Border Grid.Row="1" Background="#252538" Padding="16,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="SearchInput"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             Background="#2D2D44"
                             Foreground="White"
                             CaretBrush="White"
                             BorderBrush="#3D3D5C"
                             BorderThickness="1"
                             Padding="12,10"
                             FontSize="16"
                             VerticalContentAlignment="Center"
                             TextChanged="SearchInput_TextChanged"
                             KeyDown="SearchInput_KeyDown"/>

                    <TextBlock Grid.Column="0"
                               Text="Search by code, barcode, or name..."
                               Foreground="#6B7280"
                               FontSize="14"
                               VerticalAlignment="Center"
                               Margin="14,0,0,0"
                               IsHitTestVisible="False"
                               x:Name="SearchPlaceholder"/>

                    <Button Grid.Column="1" Content="Search"
                            Background="#22C55E" Foreground="White"
                            Padding="20,10" FontSize="14" FontWeight="SemiBold"
                            BorderThickness="0" Cursor="Hand" Margin="8,0,0,0"
                            Click="SearchButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

            <!-- Results Grid -->
            <Border Grid.Row="2" Background="#1A1A2E" Margin="1,0,1,0">
                <Grid>
                    <!-- Column Headers -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#252538" Padding="12,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="CODE" Foreground="#9CA3AF" FontSize="11" FontWeight="SemiBold"/>
                            <TextBlock Grid.Column="1" Text="DESCRIPTION" Foreground="#9CA3AF" FontSize="11" FontWeight="SemiBold"/>
                            <TextBlock Grid.Column="2" Text="STOCK" Foreground="#9CA3AF" FontSize="11" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="3" Text="PRICE" Foreground="#9CA3AF" FontSize="11" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                        </Grid>
                    </Border>

                    <!-- Results List -->
                    <ListBox Grid.Row="1" x:Name="ResultsListBox"
                             Background="Transparent"
                             BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             SelectionMode="Single"
                             MouseDoubleClick="ResultsListBox_MouseDoubleClick"
                             KeyDown="ResultsListBox_KeyDown">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Padding" Value="12,10"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="BorderBrush" Value="#3D3D5C"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#2D2D44"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter Property="Background" Value="#3B82F6"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding Code}" Foreground="#9CA3AF" FontSize="13" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Name}" Foreground="White" FontSize="14"
                                               FontWeight="Medium" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="{Binding CurrentStock, StringFormat='{}{0:N0}'}"/>
                                                <Setter Property="Foreground" Value="#22C55E"/>
                                                <Setter Property="FontSize" Value="13"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsOutOfStock}" Value="True">
                                                        <Setter Property="Text" Value="OUT"/>
                                                        <Setter Property="Foreground" Value="#EF4444"/>
                                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock Grid.Column="3" Text="{Binding Price, StringFormat='KSh {0:N2}'}"
                                               Foreground="#F59E0B" FontSize="14" FontWeight="SemiBold"
                                               VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Empty State -->
                    <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"
                                x:Name="EmptyState" Visibility="Collapsed">
                        <TextBlock Text="&#xE773;" FontFamily="Segoe MDL2 Assets" FontSize="48"
                                   Foreground="#4B5563" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="EmptyStateText" Text="Type to search for products"
                                   Foreground="#6B7280" FontSize="14" HorizontalAlignment="Center" Margin="0,12,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Footer -->
            <Border Grid.Row="3" Background="#252538" Padding="16,12" CornerRadius="0,0,4,4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="ResultCountText" Text="0 items found"
                               Foreground="#9CA3AF" FontSize="12" VerticalAlignment="Center"/>

                    <Button Grid.Column="1" Content="Cancel"
                            Background="#4B5563" Foreground="White"
                            Padding="20,10" FontSize="13" FontWeight="Medium"
                            BorderThickness="0" Cursor="Hand" Margin="0,0,8,0"
                            Click="CancelButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Grid.Column="2" Content="Select" x:Name="SelectButton"
                            Background="#22C55E" Foreground="White"
                            Padding="24,10" FontSize="13" FontWeight="SemiBold"
                            BorderThickness="0" Cursor="Hand" IsEnabled="False"
                            Click="SelectButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="4"
                                        Opacity="{TemplateBinding Opacity}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Opacity" Value="0.5"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
