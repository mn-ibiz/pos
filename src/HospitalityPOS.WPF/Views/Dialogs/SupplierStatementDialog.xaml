<Window x:Class="HospitalityPOS.WPF.Views.Dialogs.SupplierStatementDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="Supplier Statement"
        Width="950" Height="700"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E2E"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter" />
    </Window.Resources>

    <Border Background="#1E1E2E" CornerRadius="12" BorderBrush="#3D3D5C" BorderThickness="1">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header with close button -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Supplier Statement" FontSize="24" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Transaction history and balance summary" Foreground="#9CA3AF" FontSize="14" Margin="0,4,0,0"/>
                </StackPanel>

                <Button Grid.Column="1" Content="&#xE8BB;" FontFamily="Segoe MDL2 Assets"
                        Click="CloseButton_Click"
                        Background="Transparent" BorderThickness="0"
                        Foreground="#9CA3AF" FontSize="16" Padding="8"
                        Cursor="Hand" VerticalAlignment="Top"/>
            </Grid>

            <!-- Supplier Info Card -->
            <Border Grid.Row="1" Background="#2D2D44" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock x:Name="SupplierNameText" FontSize="18" FontWeight="SemiBold" Foreground="White"/>
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <TextBlock Text="Code: " Foreground="#9CA3AF"/>
                            <TextBlock x:Name="SupplierCodeText" Foreground="White"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <TextBlock Text="&#xE8BD;" FontFamily="Segoe MDL2 Assets" Foreground="#9CA3AF" Margin="0,0,8,0" FontSize="12"/>
                            <TextBlock x:Name="SupplierContactText" Foreground="#9CA3AF"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <TextBlock Text="&#xE715;" FontFamily="Segoe MDL2 Assets" Foreground="#9CA3AF" Margin="0,0,8,0" FontSize="12"/>
                            <TextBlock x:Name="SupplierEmailText" Foreground="#9CA3AF"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                        <TextBlock Text="Current Balance" Foreground="#9CA3AF" FontSize="12" HorizontalAlignment="Right"/>
                        <TextBlock x:Name="CurrentBalanceText" FontSize="24" FontWeight="Bold" Foreground="#FF9800" HorizontalAlignment="Right"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,4,0,0">
                            <TextBlock Text="Credit Limit: " Foreground="#9CA3AF" FontSize="12"/>
                            <TextBlock x:Name="CreditLimitText" Foreground="#9CA3AF" FontSize="12"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Date Range Filter -->
            <Border Grid.Row="2" Background="#2D2D44" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="From:" Foreground="#9CA3AF" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <DatePicker x:Name="StartDatePicker" Width="130" Background="#3D3D5C"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="20,0,0,0">
                        <TextBlock Text="To:" Foreground="#9CA3AF" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <DatePicker x:Name="EndDatePicker" Width="130" Background="#3D3D5C"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="20,0,0,0">
                        <Button Content="Last 30 Days" Click="Last30Days_Click"
                                Background="#3D3D5C" Foreground="White" BorderThickness="0"
                                Padding="12,6" FontSize="12" Cursor="Hand" Margin="0,0,8,0"/>
                        <Button Content="Last 90 Days" Click="Last90Days_Click"
                                Background="#3D3D5C" Foreground="White" BorderThickness="0"
                                Padding="12,6" FontSize="12" Cursor="Hand" Margin="0,0,8,0"/>
                        <Button Content="YTD" Click="YTD_Click"
                                Background="#3D3D5C" Foreground="White" BorderThickness="0"
                                Padding="12,6" FontSize="12" Cursor="Hand"/>
                    </StackPanel>

                    <Button Grid.Column="5" Content="&#xE72C; Load Statement" Click="LoadStatement_Click"
                            Background="#4F46E5" Foreground="White" BorderThickness="0"
                            Padding="16,8" FontSize="14" FontFamily="Segoe MDL2 Assets"
                            Cursor="Hand"/>
                </Grid>
            </Border>

            <!-- Summary Cards -->
            <Grid Grid.Row="3" Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Background="#2D2D44" CornerRadius="8" Padding="12" Margin="0,0,4,0">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Opening Balance" Foreground="#9CA3AF" FontSize="11" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="OpeningBalanceText" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Background="#2D2D44" CornerRadius="8" Padding="12" Margin="4,0">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Total Invoices" Foreground="#9CA3AF" FontSize="11" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="TotalInvoicesText" FontSize="18" FontWeight="Bold" Foreground="#F44336" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Background="#2D2D44" CornerRadius="8" Padding="12" Margin="4,0">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Total Payments" Foreground="#9CA3AF" FontSize="11" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="TotalPaymentsText" FontSize="18" FontWeight="Bold" Foreground="#4CAF50" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="3" Background="#2D2D44" CornerRadius="8" Padding="12" Margin="4,0,0,0">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Closing Balance" Foreground="#9CA3AF" FontSize="11" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="ClosingBalanceText" FontSize="18" FontWeight="Bold" Foreground="#FF9800" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Transactions DataGrid -->
            <Border Grid.Row="4" Background="#2D2D44" CornerRadius="12">
                <Grid>
                    <Border x:Name="LoadingOverlay" Background="#80000000"
                            CornerRadius="12" Panel.ZIndex="10" Visibility="Collapsed">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <ProgressBar IsIndeterminate="True" Width="150" Height="4" Foreground="#4F46E5"/>
                            <TextBlock Text="Loading statement..." Foreground="White" FontSize="14" Margin="0,12,0,0" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <DataGrid x:Name="TransactionsGrid"
                              AutoGenerateColumns="False"
                              Background="Transparent"
                              Foreground="White"
                              BorderThickness="0"
                              GridLinesVisibility="Horizontal"
                              HorizontalGridLinesBrush="#3D3D5C"
                              RowBackground="#2D2D44"
                              AlternatingRowBackground="#353550"
                              SelectionMode="Single"
                              SelectionUnit="FullRow"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              HeadersVisibility="Column"
                              FontSize="13"
                              RowHeight="40"
                              IsReadOnly="True">

                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#3D3D5C"/>
                                <Setter Property="Foreground" Value="#AAAACC"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="FontSize" Value="13"/>
                                <Setter Property="Padding" Value="12,10"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>

                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#4A4A6A"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.CellStyle>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat='d'}" Width="90"/>
                            <DataGridTextColumn Header="Reference" Binding="{Binding Reference}" Width="100"/>
                            <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                            <DataGridTemplateColumn Header="Type" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="4" Padding="6,2" HorizontalAlignment="Center">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#F44336"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Type}" Value="Payment">
                                                            <Setter Property="Background" Value="#4CAF50"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding Type}" Foreground="White" FontSize="11"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Debit" Binding="{Binding Debit, StringFormat='KSh {0:N2}'}" Width="110">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#F44336"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="8,0"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Credit" Binding="{Binding Credit, StringFormat='KSh {0:N2}'}" Width="110">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#4CAF50"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="8,0"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Balance" Binding="{Binding RunningBalance, StringFormat='KSh {0:N2}'}" Width="120">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="8,0"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Empty State -->
            <Border x:Name="EmptyState" Grid.Row="4" Background="#2D2D44" CornerRadius="12" Visibility="Collapsed">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="&#xE8B7;" FontFamily="Segoe MDL2 Assets" FontSize="48" Foreground="#6B7280" HorizontalAlignment="Center"/>
                    <TextBlock Text="No transactions found" FontSize="16" Foreground="#9CA3AF" Margin="0,12,0,4" HorizontalAlignment="Center"/>
                    <TextBlock Text="Select a date range and click Load Statement" FontSize="13" Foreground="#6B7280" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Action Buttons -->
            <Border Grid.Row="6" Background="#2D2D44" CornerRadius="8" Padding="16" Margin="0,16,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="TransactionCountText" Foreground="#9CA3AF" VerticalAlignment="Center" FontSize="13"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Content="&#xE749; Print" Click="Print_Click"
                                Background="#059669" Foreground="White" BorderThickness="0"
                                Padding="20,10" FontSize="14" FontFamily="Segoe MDL2 Assets"
                                Cursor="Hand" Margin="0,0,8,0"/>

                        <Button Content="&#xE896; Export PDF" Click="ExportPdf_Click"
                                Background="#0284C7" Foreground="White" BorderThickness="0"
                                Padding="20,10" FontSize="14" FontFamily="Segoe MDL2 Assets"
                                Cursor="Hand" Margin="0,0,8,0"/>

                        <Button Content="Close" Click="CloseButton_Click"
                                Background="#3D3D5C" Foreground="White" BorderThickness="0"
                                Padding="20,10" FontSize="14"
                                Cursor="Hand"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
