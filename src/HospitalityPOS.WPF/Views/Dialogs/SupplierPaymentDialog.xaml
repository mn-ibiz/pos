<Window x:Class="HospitalityPOS.WPF.Views.Dialogs.SupplierPaymentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Make Payment to Supplier"
        Height="500" Width="500"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Border Background="#2D2D44" CornerRadius="12" BorderBrush="#4F46E5" BorderThickness="1">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="Make Payment to Supplier"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="White"/>
                <TextBlock x:Name="SupplierNameText"
                           Text="Supplier Name"
                           FontSize="14"
                           Foreground="#9CA3AF"
                           Margin="0,4,0,0"/>
            </StackPanel>

            <!-- Current Balance -->
            <Border Grid.Row="1" Background="#3D3D5C" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Current Balance Owed" Foreground="#9CA3AF" FontSize="14" VerticalAlignment="Center"/>
                    <TextBlock x:Name="CurrentBalanceText"
                               Grid.Column="1"
                               Text="KSh 0.00"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#FF9800"/>
                </Grid>
            </Border>

            <!-- Payment Details -->
            <StackPanel Grid.Row="2">
                <!-- Amount -->
                <TextBlock Text="Payment Amount" Foreground="#9CA3AF" FontSize="12" Margin="0,0,0,4"/>
                <TextBox x:Name="AmountTextBox"
                         Text="0.00"
                         Background="#3D3D5C"
                         Foreground="White"
                         FontSize="18"
                         FontWeight="Bold"
                         BorderThickness="1"
                         BorderBrush="#4F46E5"
                         Padding="12,10"
                         Margin="0,0,0,16"
                         PreviewTextInput="AmountTextBox_PreviewTextInput"/>

                <!-- Payment Method -->
                <TextBlock Text="Payment Method" Foreground="#9CA3AF" FontSize="12" Margin="0,0,0,4"/>
                <ComboBox x:Name="PaymentMethodCombo"
                          Background="#3D3D5C"
                          Foreground="White"
                          FontSize="14"
                          Padding="12,10"
                          Margin="0,0,0,16">
                    <ComboBoxItem Content="Cash" IsSelected="True"/>
                    <ComboBoxItem Content="Bank Transfer"/>
                    <ComboBoxItem Content="Cheque"/>
                    <ComboBoxItem Content="M-Pesa"/>
                </ComboBox>

                <!-- Reference -->
                <TextBlock Text="Reference Number (optional)" Foreground="#9CA3AF" FontSize="12" Margin="0,0,0,4"/>
                <TextBox x:Name="ReferenceTextBox"
                         Background="#3D3D5C"
                         Foreground="White"
                         FontSize="14"
                         BorderThickness="1"
                         BorderBrush="#4F46E5"
                         Padding="12,10"
                         Margin="0,0,0,16"/>

                <!-- Notes -->
                <TextBlock Text="Notes (optional)" Foreground="#9CA3AF" FontSize="12" Margin="0,0,0,4"/>
                <TextBox x:Name="NotesTextBox"
                         Background="#3D3D5C"
                         Foreground="White"
                         FontSize="14"
                         BorderThickness="1"
                         BorderBrush="#4F46E5"
                         Padding="12,10"
                         Height="60"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"/>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Cancel"
                        Click="Cancel_Click"
                        Background="#3D3D5C"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="24,12"
                        FontSize="14"
                        Cursor="Hand"
                        Margin="0,0,12,0"/>

                <Button Content="Record Payment"
                        Click="Save_Click"
                        Background="#4CAF50"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="24,12"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
