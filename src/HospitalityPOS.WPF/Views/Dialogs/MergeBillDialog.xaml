<Window x:Class="HospitalityPOS.WPF.Views.Dialogs.MergeBillDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Merge Bills"
        Width="550"
        Height="500"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        Background="#2D2D44">

    <Window.Resources>
        <!-- Receipt Item Checkbox Style -->
        <Style x:Key="ReceiptCheckboxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Border x:Name="border"
                                Background="#1E1E2E"
                                BorderBrush="#4A4A6A"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="12,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border x:Name="checkBorder"
                                        Width="22"
                                        Height="22"
                                        Background="#3D3D5C"
                                        BorderBrush="#4A4A6A"
                                        BorderThickness="2"
                                        CornerRadius="4"
                                        VerticalAlignment="Center">
                                    <TextBlock x:Name="checkMark"
                                               Text="âœ“"
                                               FontSize="14"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Visibility="Collapsed"/>
                                </Border>
                                <ContentPresenter Grid.Column="1"
                                                  Margin="12,0,0,0"
                                                  VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="checkBorder" Property="Background" Value="#22C55E"/>
                                <Setter TargetName="checkBorder" Property="BorderBrush" Value="#16A34A"/>
                                <Setter TargetName="checkMark" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#22C55E"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#252538"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Action Button Style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="44"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="Merge Bills"
                       Foreground="White"
                       FontSize="20"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Select 2 or more receipts to merge into one"
                       Foreground="#9CA3AF"
                       FontSize="14"
                       HorizontalAlignment="Center"
                       Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Instruction Label -->
        <TextBlock Grid.Row="1"
                   Text="Available Receipts:"
                   Foreground="White"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Margin="0,0,0,8"/>

        <!-- Receipt List -->
        <Border Grid.Row="2"
                Background="#1E1E2E"
                BorderBrush="#4A4A6A"
                BorderThickness="1"
                CornerRadius="8"
                Padding="8">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="ReceiptsPanel">
                    <!-- Receipts will be added programmatically -->
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Empty State -->
        <TextBlock x:Name="EmptyStateText"
                   Grid.Row="2"
                   Text="No pending receipts available for merging"
                   Foreground="#6B7280"
                   FontSize="14"
                   FontStyle="Italic"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Visibility="Collapsed"/>

        <!-- Selection Summary -->
        <Border Grid.Row="3"
                Background="#252538"
                CornerRadius="6"
                Padding="16,12"
                Margin="0,16,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock Text="Selected receipts:"
                               Foreground="#9CA3AF"
                               FontSize="12"/>
                    <TextBlock x:Name="SelectedCountText"
                               Text="0 receipts"
                               Foreground="White"
                               FontSize="14"
                               FontWeight="SemiBold"/>
                </StackPanel>
                <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                    <TextBlock Text="Combined total:"
                               Foreground="#9CA3AF"
                               FontSize="12"
                               HorizontalAlignment="Right"/>
                    <TextBlock x:Name="CombinedTotalText"
                               Text="KSh 0.00"
                               Foreground="#22C55E"
                               FontSize="18"
                               FontWeight="Bold"
                               HorizontalAlignment="Right"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Error Message -->
        <TextBlock x:Name="ErrorMessageText"
                   Grid.Row="4"
                   Text=""
                   Foreground="#EF4444"
                   FontSize="12"
                   HorizontalAlignment="Center"
                   TextWrapping="Wrap"
                   Margin="0,8,0,0"
                   Visibility="Collapsed"/>

        <!-- Action Buttons -->
        <Grid Grid.Row="5" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Content="Cancel"
                    Background="#4A4A6A"
                    Style="{StaticResource ActionButtonStyle}"
                    Click="CancelButton_Click"/>
            <Button x:Name="MergeButton"
                    Grid.Column="2"
                    Content="Merge Selected"
                    Background="#F59E0B"
                    Style="{StaticResource ActionButtonStyle}"
                    IsEnabled="False"
                    Click="MergeButton_Click"/>
        </Grid>
    </Grid>
</Window>
