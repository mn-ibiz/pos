<UserControl x:Class="HospitalityPOS.WPF.Views.AuditReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:HospitalityPOS.WPF.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1000"
             d:DataContext="{d:DesignInstance vm:AuditReportsViewModel}">

    <Grid Background="#1E1E2E">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#16162B" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Content="Back"
                        Command="{Binding GoBackCommand}"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Width="80"/>

                <TextBlock Grid.Column="1"
                           Text="{Binding Title}"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Report Selection and Filters -->
        <Border Grid.Row="1" Background="#2D2D44" Padding="20" BorderThickness="0,0,0,1" BorderBrush="#3D3D5C">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Report Type -->
                <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,20,0">
                    <TextBlock Text="Report Type" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding ReportTypes}"
                              SelectedItem="{Binding SelectedReportType}"
                              DisplayMemberPath="DisplayName"
                              Width="200"
                              Height="35"
                              Background="#1E1E2E"
                              Foreground="White"/>
                </StackPanel>

                <!-- From Date -->
                <StackPanel Grid.Column="1" Grid.Row="0" Margin="0,0,20,0">
                    <TextBlock Text="From Date" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,5"/>
                    <DatePicker SelectedDate="{Binding FromDate}"
                                Width="140"
                                Height="35"/>
                </StackPanel>

                <!-- To Date -->
                <StackPanel Grid.Column="2" Grid.Row="0" Margin="0,0,20,0">
                    <TextBlock Text="To Date" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,5"/>
                    <DatePicker SelectedDate="{Binding ToDate}"
                                Width="140"
                                Height="35"/>
                </StackPanel>

                <!-- User Filter -->
                <StackPanel Grid.Column="3" Grid.Row="0" Margin="0,0,20,0">
                    <TextBlock Text="Filter by User" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <ComboBox Grid.Column="0"
                                  ItemsSource="{Binding Users}"
                                  SelectedItem="{Binding SelectedUser}"
                                  DisplayMemberPath="FullName"
                                  Width="150"
                                  Height="35"
                                  Background="#1E1E2E"
                                  Foreground="White"/>
                        <Button Grid.Column="1"
                                Content="X"
                                Command="{Binding ClearUserFilterCommand}"
                                Width="30"
                                Height="35"
                                Margin="5,0,0,0"
                                ToolTip="Clear user filter"
                                Background="#3D3D5C"
                                Foreground="White"
                                BorderThickness="0"/>
                    </Grid>
                </StackPanel>

                <!-- Action Filter -->
                <StackPanel Grid.Column="4" Grid.Row="0" Margin="0,0,20,0">
                    <TextBlock Text="Filter by Action" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <ComboBox Grid.Column="0"
                                  ItemsSource="{Binding AvailableActions}"
                                  SelectedItem="{Binding SelectedAction}"
                                  Width="150"
                                  Height="35"
                                  Background="#1E1E2E"
                                  Foreground="White"/>
                        <Button Grid.Column="1"
                                Content="X"
                                Command="{Binding ClearActionFilterCommand}"
                                Width="30"
                                Height="35"
                                Margin="5,0,0,0"
                                ToolTip="Clear action filter"
                                Background="#3D3D5C"
                                Foreground="White"
                                BorderThickness="0"/>
                    </Grid>
                </StackPanel>

                <!-- Generate Button -->
                <Button Grid.Column="6" Grid.Row="0"
                        Content="Generate Report"
                        Command="{Binding GenerateReportCommand}"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Width="140"
                        Height="40"
                        VerticalAlignment="Bottom"/>

                <!-- Quick Date Buttons -->
                <StackPanel Grid.Column="0" Grid.ColumnSpan="7" Grid.Row="2" Orientation="Horizontal">
                    <TextBlock Text="Quick: " VerticalAlignment="Center" Margin="0,0,10,0" Foreground="White"/>
                    <Button Content="Today" Command="{Binding SetTodayCommand}" Margin="0,0,5,0" Padding="10,5"
                           Background="#3D3D5C" Foreground="White" BorderThickness="0"/>
                    <Button Content="This Week" Command="{Binding SetThisWeekCommand}" Margin="0,0,5,0" Padding="10,5"
                           Background="#3D3D5C" Foreground="White" BorderThickness="0"/>
                    <Button Content="This Month" Command="{Binding SetThisMonthCommand}" Margin="0,0,5,0" Padding="10,5"
                           Background="#3D3D5C" Foreground="White" BorderThickness="0"/>
                    <Button Content="Last 30 Days" Command="{Binding SetLast30DaysCommand}" Padding="10,5"
                           Background="#3D3D5C" Foreground="White" BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Report Content Area -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Padding="20">
            <Grid>
                <!-- Loading Indicator -->
                <Border Background="#2D2D44" CornerRadius="8" Padding="20" BorderBrush="#3D3D5C" BorderThickness="1"
                        Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="Generating report..." FontSize="16" Foreground="White" Margin="0,0,0,10"/>
                        <ProgressBar IsIndeterminate="True" Width="200" Height="20"/>
                    </StackPanel>
                </Border>

                <!-- No Report Message -->
                <Border Background="#2D2D44" CornerRadius="8" Padding="40" BorderBrush="#3D3D5C" BorderThickness="1"
                        Visibility="{Binding HasReport, Converter={StaticResource BoolToInverseVisibilityConverter}}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                                Visibility="{Binding IsBusy, Converter={StaticResource BoolToInverseVisibilityConverter}}">
                        <TextBlock Text="Select a report type and date range, then click Generate Report"
                                   FontSize="16" Foreground="#555577" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding SelectedReportType.Description}"
                                   FontSize="14" Foreground="#555577" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Report Results -->
                <Grid Visibility="{Binding HasReport, Converter={StaticResource BoolToVisibilityConverter}}">
                    <!-- All Activity Report -->
                    <Border Background="#2D2D44" CornerRadius="8" Padding="20" BorderBrush="#3D3D5C" BorderThickness="1"
                            Visibility="{Binding ShowAllActivityReport, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="All Activity Audit Trail" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,0,0,15"/>

                            <!-- Summary Cards -->
                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20">
                                <Border Background="#252538" CornerRadius="8" Padding="20" Margin="0,0,15,0" BorderBrush="#3D3D5C" BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock Text="Total Actions" FontSize="12" Foreground="#8888AA"/>
                                        <TextBlock Text="{Binding AuditTrailReport.TotalActions, StringFormat=N0}" FontSize="24" FontWeight="Bold" Foreground="#6366F1"/>
                                    </StackPanel>
                                </Border>
                                <Border Background="#252538" CornerRadius="8" Padding="20" Margin="0,0,15,0" BorderBrush="#3D3D5C" BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock Text="Unique Users" FontSize="12" Foreground="#8888AA"/>
                                        <TextBlock Text="{Binding AuditTrailReport.UniqueUsers, StringFormat=N0}" FontSize="24" FontWeight="Bold" Foreground="#22C55E"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <DataGrid Grid.Row="2" ItemsSource="{Binding AuditTrailItems}"
                                      AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False"
                                      GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                                      MaxHeight="400"
                                      Background="#2D2D44" Foreground="White" RowBackground="#2D2D44" AlternatingRowBackground="#252538"
                                      HorizontalGridLinesBrush="#3D3D5C">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Timestamp" Binding="{Binding Timestamp, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}" Width="150"/>
                                    <DataGridTextColumn Header="User" Binding="{Binding UserName}" Width="120"/>
                                    <DataGridTextColumn Header="Action" Binding="{Binding ActionDisplayName}" Width="150"/>
                                    <DataGridTextColumn Header="Entity Type" Binding="{Binding EntityType}" Width="100"/>
                                    <DataGridTextColumn Header="Entity ID" Binding="{Binding EntityId}" Width="80"/>
                                    <DataGridTextColumn Header="Machine" Binding="{Binding MachineName}" Width="120"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>

                    <!-- User Activity Report -->
                    <Border Background="#2D2D44" CornerRadius="8" Padding="20" BorderBrush="#3D3D5C" BorderThickness="1"
                            Visibility="{Binding ShowUserActivityReport, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="User Activity Log" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,0,0,15"/>

                            <!-- Summary Cards -->
                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20">
                                <Border Background="#252538" CornerRadius="8" Padding="20" Margin="0,0,15,0" BorderBrush="#3D3D5C" BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock Text="Total Actions" FontSize="12" Foreground="#8888AA"/>
                                        <TextBlock Text="{Binding UserActivityReport.TotalActions, StringFormat=N0}" FontSize="24" FontWeight="Bold" Foreground="#6366F1"/>
                                    </StackPanel>
                                </Border>
                                <Border Background="#252538" CornerRadius="8" Padding="20" Margin="0,0,15,0" BorderBrush="#3D3D5C" BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock Text="Logins" FontSize="12" Foreground="#8888AA"/>
                                        <TextBlock Text="{Binding UserActivityReport.LoginCount, StringFormat=N0}" FontSize="24" FontWeight="Bold" Foreground="#22C55E"/>
                                    </StackPanel>
                                </Border>
                                <Border Background="#252538" CornerRadius="8" Padding="20" Margin="0,0,15,0" BorderBrush="#3D3D5C" BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock Text="Logouts" FontSize="12" Foreground="#8888AA"/>
                                        <TextBlock Text="{Binding UserActivityReport.LogoutCount, StringFormat=N0}" FontSize="24" FontWeight="Bold" Foreground="#F59E0B"/>
                                    </StackPanel>
                                </Border>
                                <Border Background="#252538" CornerRadius="8" Padding="20" BorderBrush="#3D3D5C" BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock Text="Failed Logins" FontSize="12" Foreground="#8888AA"/>
                                        <TextBlock Text="{Binding UserActivityReport.FailedLoginCount, StringFormat=N0}" FontSize="24" FontWeight="Bold" Foreground="#EF4444"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <DataGrid Grid.Row="2" ItemsSource="{Binding UserActivityItems}"
                                      AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False"
                                      GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                                      MaxHeight="400"
                                      Background="#2D2D44" Foreground="White" RowBackground="#2D2D44" AlternatingRowBackground="#252538"
                                      HorizontalGridLinesBrush="#3D3D5C">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Timestamp" Binding="{Binding Timestamp, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}" Width="150"/>
                                    <DataGridTextColumn Header="User" Binding="{Binding UserName}" Width="150"/>
                                    <DataGridTextColumn Header="Action" Binding="{Binding ActionDisplayName}" Width="150"/>
                                    <DataGridTextColumn Header="Machine" Binding="{Binding MachineName}" Width="150"/>
                                    <DataGridTextColumn Header="IP Address" Binding="{Binding IpAddress}" Width="120"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>

                    <!-- Transaction Log Report -->
                    <Border Background="#2D2D44" CornerRadius="8" Padding="20" BorderBrush="#3D3D5C" BorderThickness="1"
                            Visibility="{Binding ShowTransactionLogReport, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Transaction Log" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,0,0,15"/>

                            <!-- Summary Cards -->
                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20">
                                <Border Background="#252538" CornerRadius="8" Padding="20" Margin="0,0,15,0" BorderBrush="#3D3D5C" BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock Text="Total Transactions" FontSize="12" Foreground="#8888AA"/>
                                        <TextBlock Text="{Binding TransactionLogReport.TotalTransactions, StringFormat=N0}" FontSize="24" FontWeight="Bold" Foreground="#6366F1"/>
                                    </StackPanel>
                                </Border>
                                <Border Background="#252538" CornerRadius="8" Padding="20" Margin="0,0,15,0" BorderBrush="#3D3D5C" BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock Text="Orders" FontSize="12" Foreground="#8888AA"/>
                                        <TextBlock Text="{Binding TransactionLogReport.OrderCount, StringFormat=N0}" FontSize="24" FontWeight="Bold" Foreground="#22C55E"/>
                                    </StackPanel>
                                </Border>
                                <Border Background="#252538" CornerRadius="8" Padding="20" BorderBrush="#3D3D5C" BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock Text="Settlements" FontSize="12" Foreground="#8888AA"/>
                                        <TextBlock Text="{Binding TransactionLogReport.SettlementCount, StringFormat=N0}" FontSize="24" FontWeight="Bold" Foreground="#F59E0B"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <DataGrid Grid.Row="2" ItemsSource="{Binding TransactionLogItems}"
                                      AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False"
                                      GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                                      MaxHeight="400"
                                      Background="#2D2D44" Foreground="White" RowBackground="#2D2D44" AlternatingRowBackground="#252538"
                                      HorizontalGridLinesBrush="#3D3D5C">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Timestamp" Binding="{Binding Timestamp, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}" Width="150"/>
                                    <DataGridTextColumn Header="User" Binding="{Binding UserName}" Width="120"/>
                                    <DataGridTextColumn Header="Action" Binding="{Binding ActionDisplayName}" Width="150"/>
                                    <DataGridTextColumn Header="Entity" Binding="{Binding EntityType}" Width="100"/>
                                    <DataGridTextColumn Header="ID" Binding="{Binding EntityId}" Width="80"/>
                                    <DataGridTextColumn Header="Amount" Binding="{Binding Amount, StringFormat='{}{0:N2}'}" Width="100"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>

                    <!-- Void/Refund Log Report -->
                    <Border Background="#2D2D44" CornerRadius="8" Padding="20" BorderBrush="#3D3D5C" BorderThickness="1"
                            Visibility="{Binding ShowVoidRefundLogReport, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Void/Refund Log" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,0,0,15"/>

                            <!-- Summary Cards -->
                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20">
                                <Border Background="#252538" CornerRadius="8" Padding="20" Margin="0,0,15,0" BorderBrush="#3D3D5C" BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock Text="Total Voids" FontSize="12" Foreground="#8888AA"/>
                                        <TextBlock Text="{Binding VoidRefundLogReport.TotalVoids, StringFormat=N0}" FontSize="24" FontWeight="Bold" Foreground="#EF4444"/>
                                    </StackPanel>
                                </Border>
                                <Border Background="#252538" CornerRadius="8" Padding="20" BorderBrush="#3D3D5C" BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock Text="Total Value" FontSize="12" Foreground="#8888AA"/>
                                        <TextBlock Text="{Binding VoidRefundLogReport.TotalVoidValue, StringFormat='KSh {0:N2}'}" FontSize="24" FontWeight="Bold" Foreground="#EC4899"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <DataGrid Grid.Row="2" ItemsSource="{Binding VoidRefundLogItems}"
                                      AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False"
                                      GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                                      MaxHeight="400"
                                      Background="#2D2D44" Foreground="White" RowBackground="#2D2D44" AlternatingRowBackground="#252538"
                                      HorizontalGridLinesBrush="#3D3D5C">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Timestamp" Binding="{Binding Timestamp, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}" Width="150"/>
                                    <DataGridTextColumn Header="Requested By" Binding="{Binding RequestedByUser}" Width="120"/>
                                    <DataGridTextColumn Header="Authorized By" Binding="{Binding AuthorizedByUser}" Width="120"/>
                                    <DataGridTextColumn Header="Receipt #" Binding="{Binding ReceiptNumber}" Width="100"/>
                                    <DataGridTextColumn Header="Reason" Binding="{Binding VoidReason}" Width="150"/>
                                    <DataGridTextColumn Header="Amount" Binding="{Binding VoidedAmount, StringFormat='KSh {0:N2}'}" Width="100"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>

                    <!-- Price Change Log Report -->
                    <Border Background="#2D2D44" CornerRadius="8" Padding="20" BorderBrush="#3D3D5C" BorderThickness="1"
                            Visibility="{Binding ShowPriceChangeLogReport, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Price Change Log" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,0,0,15"/>

                            <!-- Summary Cards -->
                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20">
                                <Border Background="#252538" CornerRadius="8" Padding="20" Margin="0,0,15,0" BorderBrush="#3D3D5C" BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock Text="Total Changes" FontSize="12" Foreground="#8888AA"/>
                                        <TextBlock Text="{Binding PriceChangeLogReport.TotalPriceChanges, StringFormat=N0}" FontSize="24" FontWeight="Bold" Foreground="#6366F1"/>
                                    </StackPanel>
                                </Border>
                                <Border Background="#252538" CornerRadius="8" Padding="20" BorderBrush="#3D3D5C" BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock Text="Products Affected" FontSize="12" Foreground="#8888AA"/>
                                        <TextBlock Text="{Binding PriceChangeLogReport.ProductsAffected, StringFormat=N0}" FontSize="24" FontWeight="Bold" Foreground="#F59E0B"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <DataGrid Grid.Row="2" ItemsSource="{Binding PriceChangeLogItems}"
                                      AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False"
                                      GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                                      MaxHeight="400"
                                      Background="#2D2D44" Foreground="White" RowBackground="#2D2D44" AlternatingRowBackground="#252538"
                                      HorizontalGridLinesBrush="#3D3D5C">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Timestamp" Binding="{Binding Timestamp, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}" Width="150"/>
                                    <DataGridTextColumn Header="Changed By" Binding="{Binding UserName}" Width="120"/>
                                    <DataGridTextColumn Header="Product" Binding="{Binding ProductName}" Width="150"/>
                                    <DataGridTextColumn Header="Old Price" Binding="{Binding OldPrice, StringFormat='KSh {0:N2}'}" Width="100"/>
                                    <DataGridTextColumn Header="New Price" Binding="{Binding NewPrice, StringFormat='KSh {0:N2}'}" Width="100"/>
                                    <DataGridTextColumn Header="Change %" Binding="{Binding ChangePercentage, StringFormat='{}{0:+0.00;-0.00}%'}" Width="80"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>

                    <!-- Permission Override Log Report -->
                    <Border Background="#2D2D44" CornerRadius="8" Padding="20" BorderBrush="#3D3D5C" BorderThickness="1"
                            Visibility="{Binding ShowPermissionOverrideLogReport, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Permission Override Log" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,0,0,15"/>

                            <!-- Summary Cards -->
                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20">
                                <Border Background="#252538" CornerRadius="8" Padding="20" BorderBrush="#3D3D5C" BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock Text="Total Overrides" FontSize="12" Foreground="#8888AA"/>
                                        <TextBlock Text="{Binding PermissionOverrideLogReport.TotalOverrides, StringFormat=N0}" FontSize="24" FontWeight="Bold" Foreground="#F59E0B"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <DataGrid Grid.Row="2" ItemsSource="{Binding PermissionOverrideLogItems}"
                                      AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False"
                                      GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                                      MaxHeight="400"
                                      Background="#2D2D44" Foreground="White" RowBackground="#2D2D44" AlternatingRowBackground="#252538"
                                      HorizontalGridLinesBrush="#3D3D5C">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Timestamp" Binding="{Binding Timestamp, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}" Width="150"/>
                                    <DataGridTextColumn Header="Requested By" Binding="{Binding RequestedByUser}" Width="120"/>
                                    <DataGridTextColumn Header="Authorized By" Binding="{Binding AuthorizedByUser}" Width="120"/>
                                    <DataGridTextColumn Header="Permission" Binding="{Binding PermissionDisplayName}" Width="150"/>
                                    <DataGridTextColumn Header="Entity" Binding="{Binding EntityReference}" Width="120"/>
                                    <DataGridTextColumn Header="Reason" Binding="{Binding Reason}" Width="150"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </ScrollViewer>

        <!-- Footer with actions -->
        <Border Grid.Row="3" Background="#2D2D44" Padding="20" BorderThickness="0,1,0,0" BorderBrush="#3D3D5C"
                Visibility="{Binding HasReport, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding SelectedReportType.Description}"
                           VerticalAlignment="Center"
                           Foreground="#8888AA"/>

                <Button Grid.Column="1"
                        Content="Export CSV"
                        Command="{Binding ExportCsvCommand}"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Width="120"
                        Margin="0,0,10,0"/>

                <Button Grid.Column="2"
                        Content="Print Report"
                        Command="{Binding PrintReportCommand}"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Width="120"/>
            </Grid>
        </Border>

        <!-- Error Message -->
        <Border Grid.Row="2"
                Background="#3D1E1E"
                CornerRadius="8"
                Padding="15"
                Margin="20"
                BorderBrush="#EF4444"
                BorderThickness="1"
                VerticalAlignment="Top"
                Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}">
            <TextBlock Text="{Binding ErrorMessage}" Foreground="#EF4444" TextWrapping="Wrap"/>
        </Border>
    </Grid>
</UserControl>
