<UserControl x:Class="HospitalityPOS.WPF.Views.TerminalManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:HospitalityPOS.WPF.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1200"
             Background="#1E1E2E">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter" />

        <!-- Status Badge Style -->
        <Style x:Key="StatusBadgeStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="8,4" />
        </Style>

        <!-- Online Status Badge -->
        <Style x:Key="OnlineStatusBadgeStyle" TargetType="Border" BasedOn="{StaticResource StatusBadgeStyle}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsActive}" Value="False">
                    <Setter Property="Background" Value="#5A2D2D" />
                </DataTrigger>
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding IsActive}" Value="True" />
                        <Condition Binding="{Binding IsOnline}" Value="True" />
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Background" Value="#2D5A3D" />
                </MultiDataTrigger>
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding IsActive}" Value="True" />
                        <Condition Binding="{Binding IsOnline}" Value="False" />
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Background" Value="#5A4A2D" />
                </MultiDataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Assignment Badge Style -->
        <Style x:Key="AssignmentBadgeStyle" TargetType="Border" BasedOn="{StaticResource StatusBadgeStyle}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsAssigned}" Value="True">
                    <Setter Property="Background" Value="#2D5A3D" />
                </DataTrigger>
                <DataTrigger Binding="{Binding IsAssigned}" Value="False">
                    <Setter Property="Background" Value="#3D3D5C" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="Back"
                    Command="{Binding GoBackCommand}"
                    Background="#3D3D5C"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="16,12"
                    FontSize="14"
                    Cursor="Hand" />

            <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Terminal Management"
                           FontSize="28"
                           FontWeight="SemiBold"
                           Foreground="White"
                           HorizontalAlignment="Center" />
                <TextBlock Text="Manage POS terminals and their configurations"
                           FontSize="14"
                           Foreground="#8888AA"
                           HorizontalAlignment="Center"
                           Margin="0,4,0,0" />
            </StackPanel>

            <Button Grid.Column="2"
                    Content="+ New Terminal"
                    Command="{Binding CreateTerminalCommand}"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="24,12"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Cursor="Hand" />
        </Grid>

        <!-- Search and Filter Bar -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Search Box -->
            <Border Grid.Column="0"
                    Background="#2D2D44"
                    CornerRadius="8"
                    Padding="16,0"
                    Margin="0,0,16,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Search:"
                               FontSize="14"
                               Foreground="#888888"
                               VerticalAlignment="Center"
                               Margin="0,0,12,0" />

                    <TextBox Grid.Column="1"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             Background="Transparent"
                             Foreground="White"
                             BorderThickness="0"
                             FontSize="16"
                             VerticalAlignment="Center"
                             Height="52"
                             VerticalContentAlignment="Center" />
                </Grid>
            </Border>

            <!-- Terminal Type Filter -->
            <Border Grid.Column="1"
                    Background="#2D2D44"
                    CornerRadius="8"
                    Padding="12,0"
                    Margin="0,0,16,0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Type:"
                               FontSize="14"
                               Foreground="#888888"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0" />
                    <ComboBox ItemsSource="{Binding TerminalTypeOptions}"
                              SelectedValue="{Binding FilterTerminalType}"
                              SelectedValuePath="Type"
                              DisplayMemberPath="DisplayName"
                              Background="#3D3D5C"
                              Foreground="White"
                              BorderThickness="0"
                              FontSize="14"
                              Width="150"
                              Height="36"
                              VerticalContentAlignment="Center" />
                </StackPanel>
            </Border>

            <!-- Show Inactive Checkbox -->
            <CheckBox Grid.Column="2"
                      Content="Show Inactive"
                      IsChecked="{Binding ShowInactiveTerminals}"
                      Foreground="White"
                      FontSize="14"
                      VerticalAlignment="Center"
                      Margin="0,0,16,0" />

            <!-- Refresh Button -->
            <Button Grid.Column="3"
                    Content="Refresh"
                    Command="{Binding LoadTerminalsCommand}"
                    Background="#3D3D5C"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="16,12"
                    FontSize="14"
                    Cursor="Hand" />
        </Grid>

        <!-- Terminal List -->
        <Border Grid.Row="2"
                Background="#2D2D44"
                CornerRadius="12">
            <Grid>
                <!-- Loading Overlay -->
                <Border Background="#80000000"
                        CornerRadius="12"
                        Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisConverter}}"
                        Panel.ZIndex="10">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <ProgressBar IsIndeterminate="True"
                                     Width="150"
                                     Height="4"
                                     Foreground="#4CAF50" />
                        <TextBlock Text="Loading terminals..."
                                   Foreground="White"
                                   FontSize="14"
                                   Margin="0,12,0,0"
                                   HorizontalAlignment="Center" />
                    </StackPanel>
                </Border>

                <DataGrid ItemsSource="{Binding Terminals}"
                          SelectedItem="{Binding SelectedTerminal}"
                          AutoGenerateColumns="False"
                          Background="Transparent"
                          Foreground="White"
                          BorderThickness="0"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="#3D3D5C"
                          RowBackground="#2D2D44"
                          AlternatingRowBackground="#353550"
                          SelectionMode="Single"
                          SelectionUnit="FullRow"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          CanUserResizeRows="False"
                          HeadersVisibility="Column"
                          FontSize="14"
                          RowHeight="56"
                          IsReadOnly="True">

                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#3D3D5C" />
                            <Setter Property="Foreground" Value="#AAAACC" />
                            <Setter Property="FontWeight" Value="SemiBold" />
                            <Setter Property="FontSize" Value="14" />
                            <Setter Property="Padding" Value="16,12" />
                            <Setter Property="BorderThickness" Value="0" />
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="Padding" Value="16,0" />
                            <Setter Property="VerticalContentAlignment" Value="Center" />
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#4A4A6A" />
                                    <Setter Property="Foreground" Value="White" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>

                    <DataGrid.Columns>
                        <!-- Code -->
                        <DataGridTextColumn Header="Code"
                                            Binding="{Binding Code}"
                                            Width="100" />

                        <!-- Name -->
                        <DataGridTextColumn Header="Name"
                                            Binding="{Binding Name}"
                                            Width="150" />

                        <!-- Type -->
                        <DataGridTextColumn Header="Type"
                                            Binding="{Binding TerminalTypeName}"
                                            Width="130" />

                        <!-- Mode -->
                        <DataGridTextColumn Header="Mode"
                                            Binding="{Binding BusinessModeName}"
                                            Width="100" />

                        <!-- Assignment Status -->
                        <DataGridTemplateColumn Header="Assignment" Width="110">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource AssignmentBadgeStyle}">
                                        <TextBlock Text="{Binding AssignmentText}"
                                                   FontSize="12"
                                                   Foreground="White" />
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Online Status -->
                        <DataGridTemplateColumn Header="Status" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource OnlineStatusBadgeStyle}">
                                        <TextBlock Text="{Binding StatusText}"
                                                   FontSize="12"
                                                   Foreground="White" />
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- IP Address -->
                        <DataGridTextColumn Header="IP Address"
                                            Binding="{Binding IpAddress}"
                                            Width="120" />

                        <!-- Last Heartbeat -->
                        <DataGridTextColumn Header="Last Seen"
                                            Binding="{Binding LastHeartbeat, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}"
                                            Width="140" />

                        <!-- Main Register -->
                        <DataGridTemplateColumn Header="Main" Width="60">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding IsMainRegister}"
                                               FontSize="12"
                                               Foreground="#8888AA">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsMainRegister}" Value="True">
                                                        <Setter Property="Text" Value="Yes" />
                                                        <Setter Property="Foreground" Value="#4CAF50" />
                                                        <Setter Property="FontWeight" Value="SemiBold" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsMainRegister}" Value="False">
                                                        <Setter Property="Text" Value="-" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Action Buttons -->
        <Border Grid.Row="3"
                Background="#2D2D44"
                CornerRadius="8"
                Padding="16"
                Margin="0,16,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Left Actions -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Content="Edit"
                            Command="{Binding EditTerminalCommand}"
                            Background="#3D3D5C"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="24,12"
                            FontSize="14"
                            Cursor="Hand"
                            Margin="0,0,12,0"
                            Width="100"
                            Height="48" />

                    <Button Content="Configure"
                            Command="{Binding ConfigureTerminalCommand}"
                            Background="#9C27B0"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="24,12"
                            FontSize="14"
                            Cursor="Hand"
                            Margin="0,0,12,0"
                            Width="110"
                            Height="48"
                            ToolTip="Configure terminal hardware and settings" />

                    <Button Content="View Status"
                            Command="{Binding ViewTerminalStatusCommand}"
                            Background="#2196F3"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="24,12"
                            FontSize="14"
                            Cursor="Hand"
                            Margin="0,0,12,0"
                            Width="120"
                            Height="48" />

                    <Button Content="Unbind Machine"
                            Command="{Binding UnbindMachineCommand}"
                            Background="#FF9800"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="24,12"
                            FontSize="14"
                            Cursor="Hand"
                            Margin="0,0,12,0"
                            Width="140"
                            Height="48" />

                    <Button Command="{Binding ToggleActiveStatusCommand}"
                            BorderThickness="0"
                            Padding="24,12"
                            FontSize="14"
                            Cursor="Hand"
                            Width="120"
                            Height="48">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#F44336" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="Content" Value="Deactivate" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedTerminal.IsActive}" Value="False">
                                        <Setter Property="Background" Value="#4CAF50" />
                                        <Setter Property="Content" Value="Reactivate" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

                <!-- Right Info -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Total Terminals: "
                               Foreground="#8888AA"
                               FontSize="14"
                               VerticalAlignment="Center" />
                    <TextBlock Text="{Binding Terminals.Count}"
                               Foreground="White"
                               FontSize="14"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
