<UserControl x:Class="HospitalityPOS.WPF.Views.LabelPrinterConfigurationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="700"
             d:DesignWidth="1200"
             Background="#1E1E2E"
             Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="Label Printer Configuration"
                       FontSize="28"
                       FontWeight="SemiBold"
                       Foreground="White" />
            <TextBlock Text="Configure label printers, design templates, and manage label sizes"
                       FontSize="14"
                       Foreground="#8888AA"
                       Margin="0,4,0,0" />
        </StackPanel>

        <!-- Tab Control -->
        <TabControl Grid.Row="1"
                    SelectedIndex="{Binding SelectedTabIndex}"
                    Background="Transparent"
                    BorderThickness="0">

            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border x:Name="Border"
                                        Background="#252538"
                                        BorderThickness="0"
                                        Padding="20,12"
                                        Margin="0,0,4,0"
                                        CornerRadius="8,8,0,0"
                                        Cursor="Hand">
                                    <ContentPresenter x:Name="ContentSite"
                                                      ContentSource="Header"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#2D2D44" />
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#3D3D5C" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Foreground" Value="#8888AA" />
                    <Setter Property="FontSize" Value="14" />
                </Style>
            </TabControl.Resources>

            <!-- Printers Tab -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE749;" FontFamily="Segoe MDL2 Assets" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center" />
                        <TextBlock Text="Printers" VerticalAlignment="Center" />
                    </StackPanel>
                </TabItem.Header>
                <Border Background="#252538" CornerRadius="0,8,8,8" Padding="24">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!-- Toolbar -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                            <Button Content="+ Add Printer"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Padding="16,10"
                                    Margin="0,0,8,0" />
                            <Button Content="Refresh"
                                    Command="{Binding RefreshDataCommand}"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Padding="16,10"
                                    Margin="0,0,8,0" />
                            <Button Content="Test Connection"
                                    Command="{Binding TestPrinterConnectionCommand}"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Padding="16,10"
                                    Margin="0,0,8,0" />
                            <Button Content="Print Test Label"
                                    Command="{Binding PrintTestLabelCommand}"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Padding="16,10" />
                        </StackPanel>

                        <!-- Printers List -->
                        <DataGrid Grid.Row="1"
                                  ItemsSource="{Binding Printers}"
                                  SelectedItem="{Binding SelectedPrinter}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  Background="#2D2D44"
                                  Foreground="White"
                                  BorderThickness="0"
                                  GridLinesVisibility="Horizontal"
                                  HorizontalGridLinesBrush="#3D3D5C"
                                  RowBackground="#2D2D44"
                                  AlternatingRowBackground="#252538">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="200" />
                                <DataGridTextColumn Header="Type" Binding="{Binding PrinterType}" Width="100" />
                                <DataGridTextColumn Header="Language" Binding="{Binding PrintLanguage}" Width="100" />
                                <DataGridTextColumn Header="Connection" Binding="{Binding ConnectionString}" Width="200" />
                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100" />
                                <DataGridCheckBoxColumn Header="Default" Binding="{Binding IsDefault}" Width="80" />
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Empty State -->
                        <StackPanel Grid.Row="1"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Visibility="{Binding Printers.Count, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=inverse}">
                            <TextBlock Text="&#xE749;"
                                       FontFamily="Segoe MDL2 Assets"
                                       FontSize="64"
                                       Foreground="#3D3D5C"
                                       HorizontalAlignment="Center" />
                            <TextBlock Text="No label printers configured"
                                       FontSize="18"
                                       Foreground="#8888AA"
                                       HorizontalAlignment="Center"
                                       Margin="0,16,0,8" />
                            <TextBlock Text="Click 'Add Printer' to configure your first label printer"
                                       FontSize="14"
                                       Foreground="#555577"
                                       HorizontalAlignment="Center" />
                        </StackPanel>
                    </Grid>
                </Border>
            </TabItem>

            <!-- Templates Tab -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE8F1;" FontFamily="Segoe MDL2 Assets" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center" />
                        <TextBlock Text="Templates" VerticalAlignment="Center" />
                    </StackPanel>
                </TabItem.Header>
                <Border Background="#252538" CornerRadius="0,8,8,8" Padding="24">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!-- Toolbar -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                            <Button Content="+ New Template"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Padding="16,10"
                                    Margin="0,0,8,0" />
                            <Button Content="Import from Library"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Padding="16,10"
                                    Margin="0,0,8,0" />
                            <Button Content="Export"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Padding="16,10" />
                        </StackPanel>

                        <!-- Templates List -->
                        <DataGrid Grid.Row="1"
                                  ItemsSource="{Binding Templates}"
                                  SelectedItem="{Binding SelectedTemplate}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  Background="#2D2D44"
                                  Foreground="White"
                                  BorderThickness="0"
                                  GridLinesVisibility="Horizontal"
                                  HorizontalGridLinesBrush="#3D3D5C"
                                  RowBackground="#2D2D44"
                                  AlternatingRowBackground="#252538">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="200" />
                                <DataGridTextColumn Header="Label Size" Binding="{Binding LabelSizeName}" Width="120" />
                                <DataGridTextColumn Header="Language" Binding="{Binding PrintLanguage}" Width="100" />
                                <DataGridTextColumn Header="Version" Binding="{Binding Version}" Width="80" />
                                <DataGridCheckBoxColumn Header="Default" Binding="{Binding IsDefault}" Width="80" />
                                <DataGridCheckBoxColumn Header="Promo" Binding="{Binding IsPromoTemplate}" Width="80" />
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Empty State -->
                        <StackPanel Grid.Row="1"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Visibility="{Binding Templates.Count, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=inverse}">
                            <TextBlock Text="&#xE8F1;"
                                       FontFamily="Segoe MDL2 Assets"
                                       FontSize="64"
                                       Foreground="#3D3D5C"
                                       HorizontalAlignment="Center" />
                            <TextBlock Text="No label templates configured"
                                       FontSize="18"
                                       Foreground="#8888AA"
                                       HorizontalAlignment="Center"
                                       Margin="0,16,0,8" />
                            <TextBlock Text="Click 'New Template' to create your first label template"
                                       FontSize="14"
                                       Foreground="#555577"
                                       HorizontalAlignment="Center" />
                        </StackPanel>
                    </Grid>
                </Border>
            </TabItem>

            <!-- Label Sizes Tab -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE799;" FontFamily="Segoe MDL2 Assets" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center" />
                        <TextBlock Text="Label Sizes" VerticalAlignment="Center" />
                    </StackPanel>
                </TabItem.Header>
                <Border Background="#252538" CornerRadius="0,8,8,8" Padding="24">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!-- Toolbar -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                            <Button Content="+ Add Custom Size"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Padding="16,10" />
                        </StackPanel>

                        <!-- Label Sizes List -->
                        <DataGrid Grid.Row="1"
                                  ItemsSource="{Binding LabelSizes}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  Background="#2D2D44"
                                  Foreground="White"
                                  BorderThickness="0"
                                  GridLinesVisibility="Horizontal"
                                  HorizontalGridLinesBrush="#3D3D5C"
                                  RowBackground="#2D2D44"
                                  AlternatingRowBackground="#252538">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="200" />
                                <DataGridTextColumn Header="Width (mm)" Binding="{Binding WidthMm}" Width="100" />
                                <DataGridTextColumn Header="Height (mm)" Binding="{Binding HeightMm}" Width="100" />
                                <DataGridTextColumn Header="DPI" Binding="{Binding DotsPerMm, StringFormat='{}{0} dots/mm'}" Width="100" />
                                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <Border Grid.Row="2"
                Background="#16162B"
                CornerRadius="8"
                Padding="16,10"
                Margin="0,16,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Loading Indicator -->
                <StackPanel Grid.Column="0"
                            Orientation="Horizontal"
                            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                    <ProgressBar IsIndeterminate="True"
                                 Width="100"
                                 Height="4"
                                 Margin="0,0,12,0" />
                </StackPanel>

                <!-- Status Message -->
                <TextBlock Grid.Column="1"
                           Text="{Binding StatusMessage}"
                           Foreground="#8888AA"
                           VerticalAlignment="Center" />
            </Grid>
        </Border>
    </Grid>
</UserControl>
