<UserControl x:Class="HospitalityPOS.WPF.Views.GoodsReceivingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:HospitalityPOS.WPF.Converters"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1200"
             Background="#1E1E2E">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility"/>

        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="MinHeight" Value="44"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="16,8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.7"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="#3D3D5C"/>
        </Style>

        <Style x:Key="FormTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="BorderBrush" Value="#3D3D5C"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          VerticalAlignment="Center"
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#6366F1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="FormComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3D3D5C"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="44"/>
        </Style>

        <Style x:Key="FormLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#8888AA"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>

        <Style x:Key="QuantityTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#252538"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="BorderBrush" Value="#3D3D5C"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Width" Value="80"/>
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="Back"
                    Style="{StaticResource ActionButton}"
                    Background="#3D3D5C"
                    Command="{Binding GoBackCommand}"/>

            <TextBlock Grid.Column="1"
                       Text="{Binding Title}"
                       FontSize="28"
                       FontWeight="SemiBold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

            <Button Grid.Column="2"
                    Content="Refresh"
                    Style="{StaticResource ActionButton}"
                    Background="#3D3D5C"
                    Command="{Binding LoadDataCommand}"/>
        </Grid>

        <!-- PO Selection and Delivery Note -->
        <Border Grid.Row="1"
                Background="#2D2D44"
                CornerRadius="12"
                Padding="20"
                Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- PO Selection -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Select Purchase Order" Style="{StaticResource FormLabel}"/>
                    <ComboBox Style="{StaticResource FormComboBox}"
                              ItemsSource="{Binding PendingPurchaseOrders}"
                              SelectedItem="{Binding SelectedPurchaseOrder}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding PONumber}" FontWeight="SemiBold"/>
                                    <TextBlock Text=" - " Foreground="#888"/>
                                    <TextBlock Text="{Binding Supplier.Name}" Foreground="#AAA"/>
                                    <TextBlock Text=" (" Foreground="#666"/>
                                    <TextBlock Text="{Binding Status}" Foreground="#6366F1"/>
                                    <TextBlock Text=")" Foreground="#666"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>

                <!-- Delivery Note -->
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Supplier Delivery Note #" Style="{StaticResource FormLabel}"/>
                    <TextBox Style="{StaticResource FormTextBox}"
                             Text="{Binding DeliveryNoteNumber, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- PO Details (shown when PO is selected) -->
        <Border Grid.Row="2"
                Background="#252538"
                CornerRadius="12"
                Padding="20"
                Margin="0,0,0,16"
                Visibility="{Binding SelectedPurchaseOrder, Converter={StaticResource BoolToVisibility}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- PO Info Row -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Supplier" Style="{StaticResource FormLabel}"/>
                        <TextBlock Text="{Binding SelectedPurchaseOrder.Supplier.Name}"
                                   FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Order Date" Style="{StaticResource FormLabel}"/>
                        <TextBlock Text="{Binding SelectedPurchaseOrder.OrderDate, StringFormat='dd MMM yyyy'}"
                                   FontSize="14" Foreground="White"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Expected Date" Style="{StaticResource FormLabel}"/>
                        <TextBlock Text="{Binding SelectedPurchaseOrder.ExpectedDate, StringFormat='dd MMM yyyy', TargetNullValue='Not specified'}"
                                   FontSize="14" Foreground="White"/>
                    </StackPanel>

                    <Button Grid.Column="3"
                            Content="Receive All"
                            Style="{StaticResource ActionButton}"
                            Background="#2196F3"
                            Command="{Binding ReceiveAllCommand}"
                            Margin="8,0"/>

                    <Button Grid.Column="4"
                            Content="Clear All"
                            Style="{StaticResource ActionButton}"
                            Background="#3D3D5C"
                            Command="{Binding ClearAllCommand}"/>
                </Grid>

                <!-- Barcode Scanning Row -->
                <Border Grid.Row="1"
                        Background="#1E1E2E"
                        CornerRadius="8"
                        Padding="16"
                        Margin="0,16,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Scan Mode Toggle -->
                        <ToggleButton Grid.Column="0"
                                      IsChecked="{Binding IsScanModeEnabled}"
                                      Command="{Binding ToggleScanModeCommand}"
                                      MinWidth="120"
                                      MinHeight="44"
                                      Margin="0,0,16,0"
                                      Cursor="Hand">
                            <ToggleButton.Style>
                                <Style TargetType="ToggleButton">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <Border x:Name="border"
                                                        Background="#3D3D5C"
                                                        CornerRadius="8"
                                                        Padding="16,8">
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                        <TextBlock x:Name="icon"
                                                                   Text="&#xE894;"
                                                                   FontFamily="Segoe MDL2 Assets"
                                                                   FontSize="16"
                                                                   Foreground="White"
                                                                   VerticalAlignment="Center"
                                                                   Margin="0,0,8,0"/>
                                                        <TextBlock x:Name="text"
                                                                   Text="Scan OFF"
                                                                   Foreground="White"
                                                                   FontWeight="SemiBold"/>
                                                    </StackPanel>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#22C55E"/>
                                                        <Setter TargetName="text" Property="Text" Value="Scan ON"/>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ToggleButton.Style>
                        </ToggleButton>

                        <!-- Barcode Input -->
                        <Grid Grid.Column="1" Margin="0,0,16,0">
                            <TextBox x:Name="BarcodeInputBox"
                                     Style="{StaticResource FormTextBox}"
                                     Text="{Binding BarcodeInput, UpdateSourceTrigger=PropertyChanged}"
                                     IsEnabled="{Binding IsScanModeEnabled}">
                                <TextBox.InputBindings>
                                    <KeyBinding Key="Enter" Command="{Binding ProcessBarcodeCommand}"/>
                                </TextBox.InputBindings>
                            </TextBox>
                            <TextBlock Text="Scan or enter barcode..."
                                       Foreground="#666"
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       Margin="16,0,0,0"
                                       IsHitTestVisible="False"
                                       Visibility="{Binding BarcodeInput, Converter={StaticResource InverseBoolToVisibility}}"/>
                        </Grid>

                        <!-- Scan Status -->
                        <Border Grid.Column="2"
                                MinWidth="300"
                                Padding="12,8"
                                CornerRadius="8"
                                Margin="0,0,16,0">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="#252538"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding LastScanSuccess}" Value="True">
                                            <Setter Property="Background" Value="#1B5E20"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding LastScanSuccess}" Value="False">
                                            <Setter Property="Background" Value="#252538"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <TextBlock Text="{Binding ScanStatusMessage, TargetNullValue='Ready to scan'}"
                                       Foreground="White"
                                       FontSize="14"
                                       VerticalAlignment="Center"/>
                        </Border>

                        <!-- Scan Icon -->
                        <Border Grid.Column="3"
                                Background="#2196F3"
                                CornerRadius="8"
                                Width="44"
                                Height="44"
                                Cursor="Hand">
                            <TextBlock Text="&#xE894;"
                                       FontFamily="Segoe MDL2 Assets"
                                       FontSize="20"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Items Grid -->
        <Border Grid.Row="3"
                Background="#2D2D44"
                CornerRadius="12"
                Padding="0">
            <DataGrid ItemsSource="{Binding Items}"
                      AutoGenerateColumns="False"
                      Background="Transparent"
                      BorderThickness="0"
                      RowBackground="#2D2D44"
                      AlternatingRowBackground="#252538"
                      Foreground="White"
                      GridLinesVisibility="Horizontal"
                      HorizontalGridLinesBrush="#3D3D5C"
                      HeadersVisibility="Column"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      SelectionMode="Single"
                      SelectionUnit="FullRow"
                      RowHeight="52"
                      FontSize="14">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#252538"/>
                        <Setter Property="Foreground" Value="#8888AA"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="FontSize" Value="13"/>
                        <Setter Property="Padding" Value="16,12"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="#3D3D5C"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="16,8"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.CellStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Code" Binding="{Binding ProductCode}" Width="90" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Barcode" Binding="{Binding Barcode}" Width="110" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Product" Binding="{Binding ProductName}" Width="*" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Ordered" Width="90" IsReadOnly="True">
                        <DataGridTextColumn.Binding>
                            <Binding Path="OrderedQuantity" StringFormat="{}{0:N0}"/>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Prev Recv" Width="90" IsReadOnly="True">
                        <DataGridTextColumn.Binding>
                            <Binding Path="PreviouslyReceived" StringFormat="{}{0:N0}"/>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Remaining" Width="90" IsReadOnly="True">
                        <DataGridTextColumn.Binding>
                            <Binding Path="RemainingQuantity" StringFormat="{}{0:N0}"/>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>
                    <DataGridTemplateColumn Header="Receive" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Style="{StaticResource QuantityTextBox}"
                                         Text="{Binding ReceivedQuantity, UpdateSourceTrigger=PropertyChanged, StringFormat=N0}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Unit Cost" Width="110">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Style="{StaticResource QuantityTextBox}"
                                         Text="{Binding UnitCost, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Total" Width="110" IsReadOnly="True">
                        <DataGridTextColumn.Binding>
                            <Binding Path="TotalCost" StringFormat="KSh {0:N2}"/>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Notes Section -->
        <Border Grid.Row="4"
                Background="#2D2D44"
                CornerRadius="12"
                Padding="20"
                Margin="0,16,0,0">
            <StackPanel>
                <TextBlock Text="Notes" Style="{StaticResource FormLabel}"/>
                <TextBox Style="{StaticResource FormTextBox}"
                         Height="60"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalContentAlignment="Top"
                         Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
        </Border>

        <!-- Footer -->
        <Border Grid.Row="5"
                Background="#252538"
                CornerRadius="12"
                Padding="20"
                Margin="0,16,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Items to receive: " Foreground="#888" FontSize="14"/>
                    <TextBlock Text="{Binding ItemsToReceiveCount}" Foreground="White" FontSize="14" FontWeight="SemiBold"/>
                    <TextBlock Text="     Total: " Foreground="#888" FontSize="14" Margin="20,0,0,0"/>
                    <TextBlock Foreground="#22C55E" FontSize="18" FontWeight="Bold">
                        <TextBlock.Text>
                            <Binding Path="TotalAmount" StringFormat="KSh {0:N2}"/>
                        </TextBlock.Text>
                    </TextBlock>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="Cancel"
                        Style="{StaticResource ActionButton}"
                        Background="#3D3D5C"
                        Command="{Binding GoBackCommand}"
                        Margin="0,0,8,0"/>

                <Button Grid.Column="2"
                        Content="Receive and Update Stock"
                        Style="{StaticResource ActionButton}"
                        Background="#22C55E"
                        MinWidth="200"
                        Command="{Binding ReceiveGoodsCommand}"/>
            </Grid>
        </Border>

        <!-- Loading Indicator -->
        <Border Grid.Row="0" Grid.RowSpan="6"
                Background="#80000000"
                CornerRadius="12"
                Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibility}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True"
                             Width="200"
                             Height="4"
                             Foreground="#22C55E"/>
                <TextBlock Text="{Binding BusyMessage}"
                           Foreground="White"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Margin="0,16,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
