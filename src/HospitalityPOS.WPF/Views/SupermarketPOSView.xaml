<UserControl x:Class="HospitalityPOS.WPF.Views.SupermarketPOSView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:HospitalityPOS.WPF.Converters"
             mc:Ignorable="d"
             d:DesignHeight="720" d:DesignWidth="1366"
             Background="#1E1E2E"
             Focusable="True"
             Loaded="UserControl_Loaded">

    <!-- Keyboard Shortcuts (Microsoft RMS Style - Optimized for Retail) -->
    <UserControl.InputBindings>
        <!-- F1 = Help -->
        <KeyBinding Key="F1" Command="{Binding ShowKeyboardShortcutsCommand}"/>
        <!-- F2 = Apply Discount -->
        <KeyBinding Key="F2" Command="{Binding ApplyOrderDiscountAsyncCommand}"/>
        <!-- F3 = Price Check -->
        <KeyBinding Key="F3" Command="{Binding FocusBarcodeInputCommand}"/>
        <!-- F4 = Void Last Item -->
        <KeyBinding Key="F4" Command="{Binding VoidLastItemCommand}"/>
        <!-- F5 = Cash Payment (Complete Sale) -->
        <KeyBinding Key="F5" Command="{Binding SubmitOrderAsyncCommand}"/>
        <!-- F6 = M-Pesa Payment -->
        <KeyBinding Key="F6" Command="{Binding InitiateMpesaPaymentAsyncCommand}"/>
        <!-- F7 = Product Search (Focus) -->
        <KeyBinding Key="F7" Command="{Binding FocusBarcodeInputCommand}"/>
        <!-- F8 = Card Payment -->
        <KeyBinding Key="F8" Command="{Binding CardPaymentCommand}"/>
        <!-- F9 = Hold Transaction -->
        <KeyBinding Key="F9" Command="{Binding HoldOrderAsyncCommand}"/>
        <!-- F10 = Void Transaction -->
        <KeyBinding Key="F10" Command="{Binding ClearOrderAsyncCommand}"/>
        <!-- F11 = Recall Held -->
        <KeyBinding Key="F11" Command="{Binding ShowHeldOrdersAsyncCommand}"/>
        <!-- Escape = Cancel/Clear Search -->
        <KeyBinding Key="Escape" Command="{Binding CloseSearchDropdownCommand}"/>
        <!-- Delete = Remove selected item -->
        <KeyBinding Key="Delete" Command="{Binding RemoveSelectedItemCommand}"/>
        <!-- Plus = Increase quantity -->
        <KeyBinding Key="OemPlus" Command="{Binding IncreaseSelectedQuantityCommand}"/>
        <KeyBinding Key="Add" Command="{Binding IncreaseSelectedQuantityCommand}"/>
        <!-- Minus = Decrease quantity -->
        <KeyBinding Key="OemMinus" Command="{Binding DecreaseSelectedQuantityCommand}"/>
        <KeyBinding Key="Subtract" Command="{Binding DecreaseSelectedQuantityCommand}"/>
    </UserControl.InputBindings>

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility"/>

        <!-- Transaction List Item Style -->
        <Style x:Key="TransactionItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#2D2D44"/>
            <Setter Property="Foreground" Value="#E5E7EB"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#22C55E"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2D2D44"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Search Result Item Style -->
        <Style x:Key="SearchResultItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#3D3D5C"/>
            <Setter Property="Foreground" Value="#E5E7EB"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#22C55E"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#374151"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Payment Button Style -->
        <Style x:Key="PaymentButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="60"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Function Button Style (Smaller) -->
        <Style x:Key="FunctionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="44"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#374151"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4B5563"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Quantity Button Style -->
        <Style x:Key="QuantityButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Left: Transaction List (60%) -->
            <ColumnDefinition Width="6*"/>
            <!-- Right: Search + Categories + Payment (40%) -->
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>

        <!-- ==================== LEFT PANEL: TRANSACTION LIST ==================== -->
        <Grid Grid.Column="0" Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>  <!-- Header -->
                <RowDefinition Height="*"/>     <!-- Items List -->
                <RowDefinition Height="Auto"/>  <!-- Totals -->
            </Grid.RowDefinitions>

            <!-- Transaction Header -->
            <Border Grid.Row="0" Background="#16162B" CornerRadius="8,8,0,0" Padding="16,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="Current Sale"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding OrderItems.Count, StringFormat=' ({0} items)'}"
                                   FontSize="14"
                                   Foreground="#9CA3AF"
                                   VerticalAlignment="Center"
                                   Margin="8,0,0,0"/>
                    </StackPanel>

                    <!-- Pending Quantity Display -->
                    <Border Grid.Column="1"
                            Background="#F59E0B"
                            CornerRadius="4"
                            Padding="12,6"
                            Visibility="{Binding HasPendingQuantity, Converter={StaticResource BoolToVisibility}}">
                        <TextBlock Text="{Binding PendingQuantityDisplay}"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="White"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Transaction Items List -->
            <Border Grid.Row="1" Background="#1A1A2E">
                <ListBox x:Name="TransactionList"
                         ItemsSource="{Binding OrderItems}"
                         SelectedItem="{Binding SelectedOrderItem}"
                         ItemContainerStyle="{StaticResource TransactionItemStyle}"
                         Background="Transparent"
                         BorderThickness="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         VirtualizingPanel.IsVirtualizing="True"
                         VirtualizingPanel.VirtualizationMode="Recycling">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>   <!-- Qty -->
                                    <ColumnDefinition Width="*"/>    <!-- Product Name -->
                                    <ColumnDefinition Width="100"/>  <!-- Unit Price -->
                                    <ColumnDefinition Width="100"/>  <!-- Line Total -->
                                    <ColumnDefinition Width="80"/>   <!-- Actions -->
                                </Grid.ColumnDefinitions>

                                <!-- Quantity with +/- buttons -->
                                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Quantity}"
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ListBoxItem}}"
                                               Width="30"
                                               TextAlignment="Center"/>
                                </StackPanel>

                                <!-- Product Name -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="8,0">
                                    <TextBlock Text="{Binding ProductName}"
                                               FontSize="14"
                                               FontWeight="Medium"
                                               Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ListBoxItem}}"
                                               TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="{Binding Barcode}"
                                               FontSize="11"
                                               Foreground="#6B7280"
                                               Visibility="{Binding Barcode, Converter={StaticResource BoolToVisibility}}"/>
                                </StackPanel>

                                <!-- Unit Price -->
                                <TextBlock Grid.Column="2"
                                           Text="{Binding UnitPrice, StringFormat='KES {0:N2}'}"
                                           FontSize="13"
                                           Foreground="#9CA3AF"
                                           VerticalAlignment="Center"
                                           TextAlignment="Right"/>

                                <!-- Line Total -->
                                <TextBlock Grid.Column="3"
                                           Text="{Binding LineTotal, StringFormat='KES {0:N2}'}"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ListBoxItem}}"
                                           VerticalAlignment="Center"
                                           TextAlignment="Right"/>

                                <!-- Action Buttons -->
                                <StackPanel Grid.Column="4" Orientation="Horizontal"
                                            HorizontalAlignment="Right" VerticalAlignment="Center">
                                    <Button Style="{StaticResource QuantityButtonStyle}"
                                            Background="#374151"
                                            Content="-"
                                            Command="{Binding DataContext.DecreaseQuantityCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                            CommandParameter="{Binding}"
                                            Margin="0,0,4,0"/>
                                    <Button Style="{StaticResource QuantityButtonStyle}"
                                            Background="#374151"
                                            Content="+"
                                            Command="{Binding DataContext.IncreaseQuantityCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                            CommandParameter="{Binding}"
                                            Margin="0,0,4,0"/>
                                    <Button Style="{StaticResource QuantityButtonStyle}"
                                            Background="#EF4444"
                                            Command="{Binding DataContext.RemoveOrderItemCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                            CommandParameter="{Binding}">
                                        <TextBlock Text="&#xE74D;" FontFamily="Segoe MDL2 Assets" FontSize="12"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>

            <!-- Totals Section -->
            <Border Grid.Row="2" Background="#16162B" CornerRadius="0,0,8,8" Padding="16,12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Subtotal -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Subtotal"
                               FontSize="14" Foreground="#9CA3AF"/>
                    <TextBlock Grid.Row="0" Grid.Column="1"
                               Text="{Binding OrderSubtotal, StringFormat='KES {0:N2}'}"
                               FontSize="14" Foreground="#9CA3AF" FontWeight="Medium"/>

                    <!-- Discount (if any) -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Discount"
                               FontSize="14" Foreground="#F59E0B"
                               Visibility="{Binding HasOrderDiscount, Converter={StaticResource BoolToVisibility}}"/>
                    <TextBlock Grid.Row="1" Grid.Column="1"
                               Text="{Binding OrderDiscount, StringFormat='-KES {0:N2}'}"
                               FontSize="14" Foreground="#F59E0B" FontWeight="Medium"
                               Visibility="{Binding HasOrderDiscount, Converter={StaticResource BoolToVisibility}}"/>

                    <!-- Tax -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="VAT (16%)"
                               FontSize="14" Foreground="#9CA3AF" Margin="0,4,0,0"/>
                    <TextBlock Grid.Row="2" Grid.Column="1"
                               Text="{Binding OrderTax, StringFormat='KES {0:N2}'}"
                               FontSize="14" Foreground="#9CA3AF" FontWeight="Medium" Margin="0,4,0,0"/>

                    <!-- Total -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="TOTAL"
                               FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,8,0,0"/>
                    <TextBlock Grid.Row="3" Grid.Column="1"
                               Text="{Binding OrderTotal, StringFormat='KES {0:N2}'}"
                               FontSize="24" FontWeight="Bold" Foreground="#22C55E" Margin="0,8,0,0"/>
                </Grid>
            </Border>
        </Grid>

        <!-- ==================== RIGHT PANEL: SEARCH + PAYMENT ==================== -->
        <Grid Grid.Column="1" Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>  <!-- Search Box -->
                <RowDefinition Height="*"/>     <!-- Search Results / Quick Categories -->
                <RowDefinition Height="Auto"/>  <!-- Function Keys -->
                <RowDefinition Height="Auto"/>  <!-- Payment Buttons -->
            </Grid.RowDefinitions>

            <!-- Search Box -->
            <Border Grid.Row="0" Background="#2D2D44" CornerRadius="8" Padding="4" Margin="0,0,0,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Search Icon -->
                    <TextBlock Grid.Column="0"
                               Text="&#xE721;"
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="18"
                               Foreground="#6B7280"
                               VerticalAlignment="Center"
                               Margin="12,0,8,0"/>

                    <!-- Search TextBox -->
                    <TextBox x:Name="SearchBox"
                             Grid.Column="1"
                             Text="{Binding BarcodeInput, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="16"
                             Background="Transparent"
                             Foreground="White"
                             CaretBrush="White"
                             BorderThickness="0"
                             VerticalContentAlignment="Center"
                             Height="44"
                             KeyDown="SearchBox_KeyDown"
                             TextChanged="SearchBox_TextChanged">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Grid>
                                                <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center"/>
                                                <TextBlock x:Name="placeholder"
                                                           Text="Scan barcode or type product name (F7)"
                                                           Foreground="#6B7280"
                                                           VerticalAlignment="Center"
                                                           IsHitTestVisible="False"
                                                           Visibility="Collapsed"/>
                                            </Grid>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="Text" Value="">
                                                    <Setter TargetName="placeholder" Property="Visibility" Value="Visible"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <!-- Clear Button -->
                    <Button Grid.Column="2"
                            Command="{Binding CloseSearchDropdownCommand}"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Width="40"
                            Visibility="{Binding BarcodeInput.Length, Converter={StaticResource BoolToVisibility}}">
                        <TextBlock Text="&#xE711;"
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="14"
                                   Foreground="#6B7280"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Search Results Dropdown / Quick Categories -->
            <Grid Grid.Row="1">
                <!-- Search Results (shown when searching) -->
                <Border Background="#2D2D44"
                        CornerRadius="8"
                        Visibility="{Binding IsSearchDropdownOpen, Converter={StaticResource BoolToVisibility}}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Search Results Header -->
                        <Border Grid.Row="0" Background="#374151" Padding="12,8">
                            <TextBlock FontSize="12" Foreground="#9CA3AF">
                                <Run Text="Found "/>
                                <Run Text="{Binding SearchResults.Count, Mode=OneWay}"/>
                                <Run Text=" results - Use "/>
                                <Run Text="↑↓" FontWeight="Bold"/>
                                <Run Text=" to navigate, "/>
                                <Run Text="Enter" FontWeight="Bold"/>
                                <Run Text=" to select"/>
                            </TextBlock>
                        </Border>

                        <!-- Results List -->
                        <ListBox x:Name="SearchResultsList"
                                 Grid.Row="1"
                                 ItemsSource="{Binding SearchResults}"
                                 SelectedItem="{Binding SelectedSearchResult}"
                                 ItemContainerStyle="{StaticResource SearchResultItemStyle}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 MouseDoubleClick="SearchResultsList_MouseDoubleClick"
                                 KeyDown="SearchResultsList_KeyDown">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Product Name -->
                                        <TextBlock Grid.Row="0" Grid.Column="0"
                                                   Text="{Binding Name}"
                                                   FontSize="14"
                                                   FontWeight="Medium"
                                                   Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ListBoxItem}}"
                                                   TextTrimming="CharacterEllipsis"/>

                                        <!-- Price -->
                                        <TextBlock Grid.Row="0" Grid.Column="1"
                                                   Text="{Binding Price, StringFormat='KES {0:N2}'}"
                                                   FontSize="14"
                                                   FontWeight="SemiBold"
                                                   Foreground="#22C55E"
                                                   Margin="8,0,0,0"/>

                                        <!-- Barcode + Stock -->
                                        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                                    Orientation="Horizontal" Margin="0,2,0,0">
                                            <TextBlock Text="{Binding Barcode}"
                                                       FontSize="11"
                                                       Foreground="#6B7280"/>
                                            <TextBlock Text=" | "
                                                       FontSize="11"
                                                       Foreground="#4B5563"
                                                       Visibility="{Binding Barcode, Converter={StaticResource BoolToVisibility}}"/>
                                            <TextBlock FontSize="11">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="#22C55E"/>
                                                        <Setter Property="Text" Value="{Binding CurrentStock, StringFormat='In Stock: {0:N0}'}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsLowStock}" Value="True">
                                                                <Setter Property="Foreground" Value="#F59E0B"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsOutOfStock}" Value="True">
                                                                <Setter Property="Foreground" Value="#EF4444"/>
                                                                <Setter Property="Text" Value="Out of Stock"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>

                <!-- No Results Message -->
                <Border Background="#2D2D44"
                        CornerRadius="8"
                        Visibility="{Binding HasNoSearchResults, Converter={StaticResource BoolToVisibility}}">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="&#xE773;"
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="48"
                                   Foreground="#4B5563"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="No products found"
                                   FontSize="16"
                                   Foreground="#6B7280"
                                   HorizontalAlignment="Center"
                                   Margin="0,8,0,0"/>
                        <TextBlock Text="Try a different search term"
                                   FontSize="12"
                                   Foreground="#4B5563"
                                   HorizontalAlignment="Center"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Quick Categories (shown when not searching) -->
                <Border Background="#2D2D44"
                        CornerRadius="8"
                        Visibility="{Binding IsSearchDropdownOpen, Converter={StaticResource InverseBoolToVisibility}}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Categories Header -->
                        <Border Grid.Row="0" Background="#374151" Padding="12,8" CornerRadius="8,8,0,0">
                            <TextBlock Text="Quick Categories" FontSize="12" Foreground="#9CA3AF" FontWeight="Medium"/>
                        </Border>

                        <!-- Categories Grid -->
                        <ItemsControl Grid.Row="1"
                                      ItemsSource="{Binding Categories}"
                                      Margin="8">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Width="110"
                                            Height="50"
                                            Margin="4"
                                            Command="{Binding DataContext.SelectCategoryCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding}"
                                            Cursor="Hand">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Background" Value="#374151"/>
                                                <Setter Property="Foreground" Value="#D1D5DB"/>
                                                <Setter Property="BorderThickness" Value="0"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border x:Name="border"
                                                                    Background="{TemplateBinding Background}"
                                                                    CornerRadius="6">
                                                                <TextBlock Text="{Binding Name}"
                                                                           FontSize="12"
                                                                           FontWeight="Medium"
                                                                           TextAlignment="Center"
                                                                           TextWrapping="Wrap"
                                                                           VerticalAlignment="Center"
                                                                           HorizontalAlignment="Center"
                                                                           Margin="4"/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                                    <Setter TargetName="border" Property="Background" Value="#22C55E"/>
                                                                    <Setter Property="Foreground" Value="White"/>
                                                                </DataTrigger>
                                                                <Trigger Property="IsPressed" Value="True">
                                                                    <Setter TargetName="border" Property="Background" Value="#4B5563"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>
            </Grid>

            <!-- Function Keys Row -->
            <Grid Grid.Row="2" Margin="0,8,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Style="{StaticResource FunctionButtonStyle}"
                        Command="{Binding ApplyOrderDiscountAsyncCommand}">
                    <StackPanel>
                        <TextBlock Text="Discount" FontSize="12" HorizontalAlignment="Center"/>
                        <TextBlock Text="F2" FontSize="10" Foreground="#6B7280" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Grid.Column="1" Style="{StaticResource FunctionButtonStyle}"
                        Command="{Binding HoldOrderAsyncCommand}">
                    <StackPanel>
                        <TextBlock Text="Hold" FontSize="12" HorizontalAlignment="Center"/>
                        <TextBlock Text="F9" FontSize="10" Foreground="#6B7280" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Grid.Column="2" Style="{StaticResource FunctionButtonStyle}"
                        Command="{Binding ShowHeldOrdersAsyncCommand}">
                    <StackPanel>
                        <TextBlock Text="Recall" FontSize="12" HorizontalAlignment="Center"/>
                        <TextBlock Text="F11" FontSize="10" Foreground="#6B7280" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Grid.Column="3" Style="{StaticResource FunctionButtonStyle}"
                        Command="{Binding ClearOrderAsyncCommand}"
                        Background="#7F1D1D">
                    <StackPanel>
                        <TextBlock Text="Void" FontSize="12" HorizontalAlignment="Center"/>
                        <TextBlock Text="F10" FontSize="10" Foreground="#FCA5A5" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>

            <!-- Payment Buttons -->
            <Grid Grid.Row="3" Margin="0,8,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Cash Button (Large) -->
                <Button Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                        Style="{StaticResource PaymentButtonStyle}"
                        Background="#22C55E"
                        Height="70"
                        Command="{Binding SubmitOrderAsyncCommand}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE8C7;" FontFamily="Segoe MDL2 Assets" FontSize="24" VerticalAlignment="Center"/>
                        <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="PAY / CASH" FontSize="16" FontWeight="Bold"/>
                            <TextBlock Text="F5" FontSize="11" Foreground="#BBF7D0"/>
                        </StackPanel>
                    </StackPanel>
                </Button>

                <!-- M-Pesa Button -->
                <Button Grid.Row="1" Grid.Column="0"
                        Style="{StaticResource PaymentButtonStyle}"
                        Background="#059669"
                        Command="{Binding InitiateMpesaPaymentAsyncCommand}">
                    <StackPanel>
                        <TextBlock Text="M-PESA" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                        <TextBlock Text="F6" FontSize="10" Foreground="#A7F3D0" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Card Button -->
                <Button Grid.Row="1" Grid.Column="1"
                        Style="{StaticResource PaymentButtonStyle}"
                        Background="#3B82F6"
                        Command="{Binding CardPaymentCommand}">
                    <StackPanel>
                        <TextBlock Text="CARD" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                        <TextBlock Text="F8" FontSize="10" Foreground="#BFDBFE" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
