<UserControl x:Class="HospitalityPOS.WPF.Views.Expenses.RecurringExpenseListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:HospitalityPOS.WPF.Converters"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="1400"
             Background="#0F0F1A">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility"/>

        <!-- Gradient Brushes -->
        <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#F59E0B" Offset="0"/>
            <GradientStop Color="#FBBF24" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="SuccessGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#10B981" Offset="0"/>
            <GradientStop Color="#34D399" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="DangerGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#EF4444" Offset="0"/>
            <GradientStop Color="#F87171" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="InfoGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#3B82F6" Offset="0"/>
            <GradientStop Color="#60A5FA" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="CardGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#1A1A2E" Offset="0"/>
            <GradientStop Color="#16162A" Offset="1"/>
        </LinearGradientBrush>

        <!-- Modern Action Button Style -->
        <Style x:Key="ModernActionButton" TargetType="Button">
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="MinWidth" Value="110"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="16,10"
                                BorderThickness="1"
                                BorderBrush="#2D2D44">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="-1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="#2D2D44"/>
        </Style>

        <!-- Icon Button Style -->
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="#9CA3AF"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2D2D44"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3D3D54"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Stat Card Style -->
        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardGradient}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16,14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#2D2D44"/>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="FilterComboBox" TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
            <Setter Property="Background" Value="#1A1A2E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#2D2D44"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="MinWidth" Value="140"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Back Button -->
            <Button Grid.Column="0" Style="{StaticResource IconButton}"
                    Command="{Binding GoBackCommand}" ToolTip="Go Back (Esc)">
                <Path Data="M 12 0 L 0 10 L 12 20"
                      Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                      StrokeThickness="2" Width="12" Height="20"/>
            </Button>

            <!-- Title and Subtitle -->
            <StackPanel Grid.Column="1" Margin="16,0,0,0" VerticalAlignment="Center">
                <TextBlock Text="Recurring Expenses" FontSize="26" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Manage automatic expense generation schedules"
                           FontSize="13" Foreground="#6B7280" Margin="0,4,0,0"/>
            </StackPanel>

            <!-- Primary Actions -->
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <Button Style="{StaticResource ModernActionButton}"
                        Background="{StaticResource InfoGradient}"
                        Command="{Binding ProcessAllDueCommand}"
                        ToolTip="Process all due recurring expenses now">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE768;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Process Due" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource ModernActionButton}"
                        Background="{StaticResource SuccessGradient}"
                        Command="{Binding AddRecurringExpenseCommand}" ToolTip="Create New Recurring Expense (Ctrl+N)">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="+" FontSize="18" FontWeight="Bold" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Text="New Recurring" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Stats Row -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total Card -->
            <Border Grid.Column="0" Style="{StaticResource StatCard}" Margin="0,0,6,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Width="44" Height="44" CornerRadius="10" Background="#1F1A10" Margin="0,0,12,0">
                        <TextBlock Text="&#xE823;" FontFamily="Segoe MDL2 Assets" FontSize="18"
                                   Foreground="#F59E0B" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding TotalCount}" FontSize="24" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="Total Recurring" FontSize="11" Foreground="#6B7280"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Active Card -->
            <Border Grid.Column="1" Style="{StaticResource StatCard}" Margin="6,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Width="44" Height="44" CornerRadius="10" Background="#0D2818" Margin="0,0,12,0">
                        <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets" FontSize="18"
                                   Foreground="#10B981" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding ActiveCount}" FontSize="24" FontWeight="Bold" Foreground="#10B981"/>
                        <TextBlock Text="Active" FontSize="11" Foreground="#6B7280"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Monthly Projection Card -->
            <Border Grid.Column="2" Style="{StaticResource StatCard}" Margin="6,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Width="44" Height="44" CornerRadius="10" Background="#1F1F33" Margin="0,0,12,0">
                        <TextBlock Text="&#xE9D9;" FontFamily="Segoe MDL2 Assets" FontSize="18"
                                   Foreground="#3B82F6" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding MonthlyProjection, StringFormat='KES {0:N0}'}"
                                   FontSize="20" FontWeight="Bold" Foreground="#3B82F6"/>
                        <TextBlock Text="Monthly Projection" FontSize="11" Foreground="#6B7280"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Due This Week Card -->
            <Border Grid.Column="3" Style="{StaticResource StatCard}" Margin="6,0,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Width="44" Height="44" CornerRadius="10" Background="#1F1010" Margin="0,0,12,0">
                        <TextBlock Text="&#xE787;" FontFamily="Segoe MDL2 Assets" FontSize="18"
                                   Foreground="#EF4444" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock FontSize="20" FontWeight="Bold" Foreground="#EF4444">
                            <Run Text="{Binding DueThisWeek}"/>
                            <Run Text=" Due"/>
                        </TextBlock>
                        <TextBlock Text="{Binding DueThisWeekAmount, StringFormat='KES {0:N0} this week'}"
                                   FontSize="11" Foreground="#6B7280"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Filters and Actions Bar -->
        <Border Grid.Row="2" Background="{StaticResource CardGradient}" CornerRadius="12"
                Padding="16" Margin="0,0,0,16" BorderThickness="1" BorderBrush="#2D2D44">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Show Paused Toggle -->
                <CheckBox Grid.Column="0" Content="Show Paused" Foreground="#9CA3AF" FontSize="13"
                          IsChecked="{Binding ShowPausedExpenses}" VerticalAlignment="Center"
                          Margin="0,0,16,0"/>

                <!-- Frequency Filter -->
                <ComboBox Grid.Column="1" Style="{StaticResource FilterComboBox}"
                          ItemsSource="{Binding FrequencyOptions}"
                          SelectedItem="{Binding SelectedFrequencyOption}"
                          DisplayMemberPath="DisplayName"
                          Margin="0,0,16,0">
                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Foreground" Value="White"/>
                        </Style>
                    </ComboBox.ItemContainerStyle>
                </ComboBox>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="3" Orientation="Horizontal">
                    <Button Style="{StaticResource ModernActionButton}"
                            Background="#2563EB"
                            Command="{Binding EditRecurringExpenseCommand}"
                            IsEnabled="{Binding SelectedExpense, Converter={StaticResource BoolToVisibility}}"
                            ToolTip="Edit Selected">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE70F;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Edit"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource ModernActionButton}"
                            Background="#8B5CF6"
                            Command="{Binding TogglePauseCommand}"
                            ToolTip="Pause/Resume Selected">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE769;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Pause/Resume"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource ModernActionButton}"
                            Background="#059669"
                            Command="{Binding GenerateNowCommand}"
                            ToolTip="Generate Expense Now">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE768;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Generate Now"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource ModernActionButton}"
                            Background="{StaticResource DangerGradient}"
                            Command="{Binding DeleteRecurringExpenseCommand}"
                            ToolTip="Delete Selected">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE74D;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Delete"/>
                        </StackPanel>
                    </Button>

                    <Rectangle Width="1" Fill="#2D2D44" Margin="8,4"/>

                    <Button Style="{StaticResource IconButton}"
                            Command="{Binding RefreshCommand}" ToolTip="Refresh (F5)">
                        <TextBlock Text="&#xE72C;" FontFamily="Segoe MDL2 Assets" FontSize="16"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- DataGrid -->
        <Border Grid.Row="3" Background="{StaticResource CardGradient}"
                CornerRadius="12" BorderThickness="1" BorderBrush="#2D2D44">
            <Grid>
                <DataGrid ItemsSource="{Binding RecurringExpenses}"
                          SelectedItem="{Binding SelectedExpense}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          Background="Transparent"
                          BorderThickness="0"
                          RowBackground="Transparent"
                          AlternatingRowBackground="#0A0A14"
                          Foreground="White"
                          GridLinesVisibility="None"
                          HeadersVisibility="Column"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          SelectionMode="Single"
                          SelectionUnit="FullRow"
                          RowHeight="60"
                          FontSize="13"
                          Visibility="{Binding RecurringExpenses.Count, Converter={StaticResource BoolToVisibility}}">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#6B7280"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="FontSize" Value="12"/>
                            <Setter Property="Padding" Value="16,14"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="#2D2D44"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="16,8"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Focusable" Value="False"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#1E1E38"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="#1A1A2E"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#141428"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#1E1E38"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.Columns>
                        <!-- Name & Description -->
                        <DataGridTemplateColumn Header="EXPENSE" Width="*" MinWidth="200">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="SemiBold" Foreground="White"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding Description}" FontSize="11" Foreground="#6B7280"
                                                   TextTrimming="CharacterEllipsis" Margin="0,2,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Category -->
                        <DataGridTemplateColumn Header="CATEGORY" Width="140">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="#1F1F33" CornerRadius="6" Padding="8,4" HorizontalAlignment="Left">
                                        <TextBlock Text="{Binding ExpenseCategory.Name}" FontSize="12" Foreground="#9CA3AF"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Amount -->
                        <DataGridTemplateColumn Header="AMOUNT" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Amount, StringFormat='KES {0:N0}'}"
                                                   FontSize="14" FontWeight="SemiBold" Foreground="White"/>
                                        <TextBlock FontSize="10" Foreground="#6B7280" Margin="0,2,0,0"
                                                   Visibility="{Binding IsEstimatedAmount, Converter={StaticResource BoolToVisibility}}">
                                            (Estimated)
                                        </TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Frequency -->
                        <DataGridTemplateColumn Header="FREQUENCY" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock FontSize="13" Foreground="#9CA3AF">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Frequency}" Value="Daily">
                                                        <Setter Property="Text" Value="Daily"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Frequency}" Value="Weekly">
                                                        <Setter Property="Text" Value="Weekly"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Frequency}" Value="BiWeekly">
                                                        <Setter Property="Text" Value="Bi-Weekly"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Frequency}" Value="Monthly">
                                                        <Setter Property="Text" Value="Monthly"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Frequency}" Value="Quarterly">
                                                        <Setter Property="Text" Value="Quarterly"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Frequency}" Value="Annually">
                                                        <Setter Property="Text" Value="Annually"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Next Due Date -->
                        <DataGridTemplateColumn Header="NEXT DUE" Width="110">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="{Binding NextDueDate, StringFormat='MMM dd'}"
                                                   FontSize="13" Foreground="White"/>
                                        <TextBlock FontSize="10" Margin="0,2,0,0">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#6B7280"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsDue}" Value="True">
                                                            <Setter Property="Foreground" Value="#EF4444"/>
                                                            <Setter Property="Text" Value="Due Today!"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsUpcoming}" Value="True">
                                                            <Setter Property="Foreground" Value="#F59E0B"/>
                                                            <Setter Property="Text" Value="Upcoming"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Auto-Approve -->
                        <DataGridTemplateColumn Header="AUTO" Width="70">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock FontSize="16" HorizontalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="&#xE711;"/>
                                                <Setter Property="Foreground" Value="#4B5563"/>
                                                <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding AutoApprove}" Value="True">
                                                        <Setter Property="Text" Value="&#xE73E;"/>
                                                        <Setter Property="Foreground" Value="#10B981"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Status -->
                        <DataGridTemplateColumn Header="STATUS" Width="90">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="6" Padding="10,5" HorizontalAlignment="Left">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#0D2818"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                        <Setter Property="Background" Value="#1F1F33"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock FontSize="11" FontWeight="SemiBold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="Active"/>
                                                    <Setter Property="Foreground" Value="#10B981"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                            <Setter Property="Text" Value="Paused"/>
                                                            <Setter Property="Foreground" Value="#6B7280"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Generated Count -->
                        <DataGridTemplateColumn Header="GENERATED" Width="90">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding OccurrenceCount, StringFormat='{}{0} times'}"
                                               FontSize="12" Foreground="#6B7280"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Empty State -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                            Visibility="{Binding RecurringExpenses.Count, Converter={StaticResource InverseBoolToVisibility}}">
                    <Border Width="80" Height="80" CornerRadius="40" Background="#1F1F33" Margin="0,0,0,16">
                        <TextBlock Text="&#xE823;" FontFamily="Segoe MDL2 Assets" FontSize="32"
                                   Foreground="#4B5563" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="No Recurring Expenses" FontSize="18" FontWeight="SemiBold"
                               Foreground="White" HorizontalAlignment="Center"/>
                    <TextBlock Text="Set up automatic expense generation to save time"
                               FontSize="13" Foreground="#6B7280" HorizontalAlignment="Center" Margin="0,8,0,20"/>
                    <Button Style="{StaticResource ModernActionButton}"
                            Background="{StaticResource PrimaryGradient}"
                            Command="{Binding AddRecurringExpenseCommand}" HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="+" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Create First Recurring Expense"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Loading Overlay -->
                <Border Background="#CC0F0F1A" CornerRadius="12"
                        Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibility}}">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <ProgressBar IsIndeterminate="True" Width="160" Height="4"
                                     Foreground="#F59E0B" Background="#1F1F33"/>
                        <TextBlock Text="{Binding BusyMessage}" Foreground="#9CA3AF"
                                   FontSize="13" HorizontalAlignment="Center" Margin="0,12,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
