<UserControl x:Class="HospitalityPOS.WPF.Views.Expenses.ExpenseReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:HospitalityPOS.WPF.Converters"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="#0F0F1A">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility"/>

        <!-- Stat Card Style -->
        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#1A1A2E" Offset="0"/>
                        <GradientStop Color="#16162A" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#2D2D44"/>
        </Style>

        <!-- Action Button Style -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="16,10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="#2D2D44"/>
        </Style>

        <!-- Icon Button Style -->
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="#9CA3AF"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2D2D44"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Back Button -->
            <Button Grid.Column="0"
                    Style="{StaticResource IconButton}"
                    Command="{Binding GoBackCommand}"
                    ToolTip="Go Back">
                <Path Data="M 12 0 L 0 10 L 12 20"
                      Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                      StrokeThickness="2"
                      Width="12" Height="20"/>
            </Button>

            <!-- Title -->
            <StackPanel Grid.Column="1" Margin="16,0,0,0" VerticalAlignment="Center">
                <TextBlock Text="Expense Reports &amp; Analytics"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="White"/>
                <TextBlock Text="View trends, breakdowns, and cost analysis"
                           FontSize="13"
                           Foreground="#6B7280"
                           Margin="0,4,0,0"/>
            </StackPanel>

            <!-- Action Buttons -->
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <Button Style="{StaticResource ActionButton}"
                        Background="#10B981"
                        Command="{Binding ExportToExcelCommand}"
                        ToolTip="Export to Excel">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE8A5;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Export"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource IconButton}"
                        Command="{Binding RefreshCommand}"
                        ToolTip="Refresh">
                    <TextBlock Text="&#xE72C;" FontFamily="Segoe MDL2 Assets" FontSize="16"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Report Selection and Filters -->
        <Border Grid.Row="1" Style="{StaticResource StatCard}" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Report Type -->
                <StackPanel Grid.Column="0" Margin="0,0,24,0">
                    <TextBlock Text="Report Type" FontSize="12" Foreground="#6B7280" Margin="0,0,0,4"/>
                    <ComboBox ItemsSource="{Binding ReportTypes}"
                              SelectedItem="{Binding SelectedReportType}"
                              Width="180"
                              Height="36"
                              Background="#2D2D44"
                              Foreground="White"
                              BorderBrush="#4E4E6E"/>
                </StackPanel>

                <!-- Start Date -->
                <StackPanel Grid.Column="1" Margin="0,0,16,0">
                    <TextBlock Text="Start Date" FontSize="12" Foreground="#6B7280" Margin="0,0,0,4"/>
                    <DatePicker SelectedDate="{Binding StartDate}"
                                Width="140"
                                Height="36"
                                Background="#2D2D44"
                                Foreground="White"
                                BorderBrush="#4E4E6E"/>
                </StackPanel>

                <!-- End Date -->
                <StackPanel Grid.Column="2" Margin="0,0,24,0">
                    <TextBlock Text="End Date" FontSize="12" Foreground="#6B7280" Margin="0,0,0,4"/>
                    <DatePicker SelectedDate="{Binding EndDate}"
                                Width="140"
                                Height="36"
                                Background="#2D2D44"
                                Foreground="White"
                                BorderBrush="#4E4E6E"/>
                </StackPanel>

                <!-- Grouping Interval (for Trends) -->
                <StackPanel Grid.Column="3"
                            Visibility="{Binding ShowTrendsReport, Converter={StaticResource BoolToVisibility}}">
                    <TextBlock Text="Group By" FontSize="12" Foreground="#6B7280" Margin="0,0,0,4"/>
                    <ComboBox ItemsSource="{Binding GroupingIntervals}"
                              SelectedItem="{Binding SelectedInterval}"
                              Width="120"
                              Height="36"
                              Background="#2D2D44"
                              Foreground="White"
                              BorderBrush="#4E4E6E"/>
                </StackPanel>

                <!-- Generate Button -->
                <Button Grid.Column="5"
                        Style="{StaticResource ActionButton}"
                        Background="#6366F1"
                        Command="{Binding GenerateReportCommand}"
                        VerticalAlignment="Bottom">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE768;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Generate"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- Summary Cards -->
        <Grid Grid.Row="2" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total Expenses -->
            <Border Grid.Column="0" Style="{StaticResource StatCard}" Margin="0,0,8,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Width="48" Height="48" CornerRadius="10" Background="#1F1A30" Margin="0,0,16,0">
                        <TextBlock Text="&#xE7BF;" FontFamily="Segoe MDL2 Assets" FontSize="20"
                                   Foreground="#8B5CF6" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Total Expenses" FontSize="12" Foreground="#6B7280"/>
                        <TextBlock FontSize="24" FontWeight="Bold" Foreground="White">
                            <Run Text="KSh "/>
                            <Run Text="{Binding TotalExpenses, StringFormat=N0}"/>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Transactions -->
            <Border Grid.Column="1" Style="{StaticResource StatCard}" Margin="8,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Width="48" Height="48" CornerRadius="10" Background="#1F1F33" Margin="0,0,16,0">
                        <TextBlock Text="&#xE8B7;" FontFamily="Segoe MDL2 Assets" FontSize="20"
                                   Foreground="#6366F1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Transactions" FontSize="12" Foreground="#6B7280"/>
                        <TextBlock Text="{Binding TotalTransactions}" FontSize="24" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Average -->
            <Border Grid.Column="2" Style="{StaticResource StatCard}" Margin="8,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Width="48" Height="48" CornerRadius="10" Background="#1F1A10" Margin="0,0,16,0">
                        <TextBlock Text="&#xE9D9;" FontFamily="Segoe MDL2 Assets" FontSize="20"
                                   Foreground="#F59E0B" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Average/Transaction" FontSize="12" Foreground="#6B7280"/>
                        <TextBlock FontSize="24" FontWeight="Bold" Foreground="White">
                            <Run Text="KSh "/>
                            <Run Text="{Binding AverageExpense, StringFormat=N0}"/>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Change -->
            <Border Grid.Column="3" Style="{StaticResource StatCard}" Margin="8,0,0,0"
                    Visibility="{Binding ShowTrendsReport, Converter={StaticResource BoolToVisibility}}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Width="48" Height="48" CornerRadius="10" Margin="0,0,16,0">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="#0D2818"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsChangePositive}" Value="True">
                                        <Setter Property="Background" Value="#3D2030"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="20"
                                   HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="&#xE70D;"/>
                                    <Setter Property="Foreground" Value="#10B981"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsChangePositive}" Value="True">
                                            <Setter Property="Text" Value="&#xE70E;"/>
                                            <Setter Property="Foreground" Value="#EF4444"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Border>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="vs Previous Period" FontSize="12" Foreground="#6B7280"/>
                        <TextBlock FontSize="24" FontWeight="Bold">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#10B981"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsChangePositive}" Value="True">
                                            <Setter Property="Foreground" Value="#EF4444"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                            <Run Text="{Binding ChangePercent, StringFormat=+0.0;-0.0;0}"/>
                            <Run Text="%"/>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Prime Cost % (for Prime Cost report) -->
            <Border Grid.Column="3" Style="{StaticResource StatCard}" Margin="8,0,0,0"
                    Visibility="{Binding ShowPrimeCostReport, Converter={StaticResource BoolToVisibility}}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Width="48" Height="48" CornerRadius="10" Margin="0,0,16,0">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="#0D2818"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding PrimeCostPercent}" Value="0">
                                        <Setter Property="Background" Value="#1F1F33"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="&#xE9D2;" FontFamily="Segoe MDL2 Assets" FontSize="20"
                                   Foreground="#10B981" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Prime Cost %" FontSize="12" Foreground="#6B7280"/>
                        <TextBlock FontSize="24" FontWeight="Bold" Foreground="#10B981">
                            <Run Text="{Binding PrimeCostPercent, StringFormat=N1}"/>
                            <Run Text="%"/>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Report Content -->
        <Border Grid.Row="3" Style="{StaticResource StatCard}">
            <Grid>
                <!-- Trends Report -->
                <DataGrid ItemsSource="{Binding TrendData}"
                          Visibility="{Binding ShowTrendsReport, Converter={StaticResource BoolToVisibility}}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          Background="Transparent"
                          BorderThickness="0"
                          RowBackground="Transparent"
                          AlternatingRowBackground="#0A0A14"
                          Foreground="White"
                          GridLinesVisibility="None"
                          HeadersVisibility="Column"
                          CanUserAddRows="False"
                          RowHeight="50"
                          FontSize="13">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#6B7280"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="FontSize" Value="12"/>
                            <Setter Property="Padding" Value="16,14"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="#2D2D44"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="16,8"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <Border Background="{TemplateBinding Background}"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.CellStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="PERIOD" Binding="{Binding PeriodLabel}" Width="*"/>
                        <DataGridTemplateColumn Header="AMOUNT" Width="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Foreground="White" FontWeight="SemiBold">
                                        <Run Text="KSh "/>
                                        <Run Text="{Binding Total, StringFormat=N0}"/>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="TRANSACTIONS" Binding="{Binding Count}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Category Breakdown -->
                <DataGrid ItemsSource="{Binding CategoryBreakdown}"
                          Visibility="{Binding ShowCategoryReport, Converter={StaticResource BoolToVisibility}}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          Background="Transparent"
                          BorderThickness="0"
                          RowBackground="Transparent"
                          AlternatingRowBackground="#0A0A14"
                          Foreground="White"
                          GridLinesVisibility="None"
                          HeadersVisibility="Column"
                          CanUserAddRows="False"
                          RowHeight="50"
                          FontSize="13">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#6B7280"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="FontSize" Value="12"/>
                            <Setter Property="Padding" Value="16,14"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="#2D2D44"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="16,8"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <Border Background="{TemplateBinding Background}"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.CellStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="CATEGORY" Binding="{Binding CategoryName}" Width="*"/>
                        <DataGridTemplateColumn Header="AMOUNT" Width="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Foreground="White" FontWeight="SemiBold">
                                        <Run Text="KSh "/>
                                        <Run Text="{Binding Total, StringFormat=N0}"/>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="TRANSACTIONS" Binding="{Binding Count}" Width="120"/>
                        <DataGridTemplateColumn Header="% OF TOTAL" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Border Background="#1F1F33" CornerRadius="4" Height="20">
                                            <Border Background="#6366F1" CornerRadius="4" HorizontalAlignment="Left"
                                                    Width="{Binding Percentage, Converter={StaticResource BoolToVisibility}}"/>
                                        </Border>
                                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                                                   Foreground="White" FontSize="11" FontWeight="SemiBold">
                                            <Run Text="{Binding Percentage, StringFormat=N1}"/>
                                            <Run Text="%"/>
                                        </TextBlock>
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Supplier Breakdown -->
                <DataGrid ItemsSource="{Binding SupplierBreakdown}"
                          Visibility="{Binding ShowSupplierReport, Converter={StaticResource BoolToVisibility}}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          Background="Transparent"
                          BorderThickness="0"
                          RowBackground="Transparent"
                          AlternatingRowBackground="#0A0A14"
                          Foreground="White"
                          GridLinesVisibility="None"
                          HeadersVisibility="Column"
                          CanUserAddRows="False"
                          RowHeight="50"
                          FontSize="13">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#6B7280"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="FontSize" Value="12"/>
                            <Setter Property="Padding" Value="16,14"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="#2D2D44"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="16,8"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <Border Background="{TemplateBinding Background}"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.CellStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="SUPPLIER" Binding="{Binding SupplierName}" Width="*"/>
                        <DataGridTemplateColumn Header="AMOUNT" Width="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Foreground="White" FontWeight="SemiBold">
                                        <Run Text="KSh "/>
                                        <Run Text="{Binding Total, StringFormat=N0}"/>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="TRANSACTIONS" Binding="{Binding Count}" Width="120"/>
                        <DataGridTemplateColumn Header="% OF TOTAL" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock HorizontalAlignment="Center" Foreground="White" FontWeight="SemiBold">
                                        <Run Text="{Binding Percentage, StringFormat=N1}"/>
                                        <Run Text="%"/>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Prime Cost Analysis -->
                <StackPanel Visibility="{Binding ShowPrimeCostReport, Converter={StaticResource BoolToVisibility}}"
                            VerticalAlignment="Top" Margin="0,0,0,20">
                    <TextBlock Text="Prime Cost Breakdown" FontSize="18" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,20"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- COGS -->
                        <Border Grid.Column="0" Background="#1F1F33" CornerRadius="12" Padding="24" Margin="0,0,8,0">
                            <StackPanel>
                                <TextBlock Text="Cost of Goods Sold (COGS)" FontSize="14" Foreground="#6B7280" Margin="0,0,0,8"/>
                                <TextBlock FontSize="28" FontWeight="Bold" Foreground="#F59E0B">
                                    <Run Text="KSh "/>
                                    <Run Text="{Binding CogsTotal, StringFormat=N0}"/>
                                </TextBlock>
                                <TextBlock Text="Food, beverages, ingredients" FontSize="12" Foreground="#4B5563" Margin="0,8,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Labor -->
                        <Border Grid.Column="1" Background="#1F1F33" CornerRadius="12" Padding="24" Margin="8,0">
                            <StackPanel>
                                <TextBlock Text="Labor Costs" FontSize="14" Foreground="#6B7280" Margin="0,0,0,8"/>
                                <TextBlock FontSize="28" FontWeight="Bold" Foreground="#8B5CF6">
                                    <Run Text="KSh "/>
                                    <Run Text="{Binding LaborCostTotal, StringFormat=N0}"/>
                                </TextBlock>
                                <TextBlock Text="Wages, salaries, benefits" FontSize="12" Foreground="#4B5563" Margin="0,8,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Total Prime Cost -->
                        <Border Grid.Column="2" Background="#0D2818" CornerRadius="12" Padding="24" Margin="8,0,0,0">
                            <StackPanel>
                                <TextBlock Text="Total Prime Cost" FontSize="14" Foreground="#6B7280" Margin="0,0,0,8"/>
                                <TextBlock FontSize="28" FontWeight="Bold" Foreground="#10B981">
                                    <Run Text="KSh "/>
                                    <Run Text="{Binding PrimeCostTotal, StringFormat=N0}"/>
                                </TextBlock>
                                <TextBlock FontSize="12" Foreground="#4B5563" Margin="0,8,0,0">
                                    <Run Text="{Binding PrimeCostPercent, StringFormat=N1}"/>
                                    <Run Text="% of Revenue (KSh "/>
                                    <Run Text="{Binding Revenue, StringFormat=N0}"/>
                                    <Run Text=")"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Prime Cost Guidance -->
                    <Border Background="#1A1A2E" CornerRadius="12" Padding="20" Margin="0,20,0,0">
                        <StackPanel>
                            <TextBlock Text="Industry Benchmarks" FontSize="14" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,12"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Full Service Restaurant" FontSize="12" Foreground="#6B7280"/>
                                    <TextBlock Text="55-65%" FontSize="16" FontWeight="SemiBold" Foreground="#10B981"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Quick Service" FontSize="12" Foreground="#6B7280"/>
                                    <TextBlock Text="60-70%" FontSize="16" FontWeight="SemiBold" Foreground="#F59E0B"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Food Cost Target" FontSize="12" Foreground="#6B7280"/>
                                    <TextBlock Text="28-35%" FontSize="16" FontWeight="SemiBold" Foreground="#6366F1"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Loading Overlay -->
                <Border Background="#CC0F0F1A"
                        CornerRadius="12"
                        Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibility}}">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <ProgressBar IsIndeterminate="True"
                                     Width="160"
                                     Height="4"
                                     Foreground="#6366F1"
                                     Background="#1F1F33"/>
                        <TextBlock Text="{Binding BusyMessage}"
                                   Foreground="#9CA3AF"
                                   FontSize="13"
                                   HorizontalAlignment="Center"
                                   Margin="0,12,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
