<UserControl x:Class="HospitalityPOS.WPF.Views.Expenses.ExpenseDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:HospitalityPOS.WPF.Converters"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="1600"
             Background="#0F0F1A">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility"/>

        <!-- Gradient Brushes -->
        <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#F59E0B" Offset="0"/>
            <GradientStop Color="#FBBF24" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="SuccessGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#10B981" Offset="0"/>
            <GradientStop Color="#34D399" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="DangerGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#EF4444" Offset="0"/>
            <GradientStop Color="#F87171" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="InfoGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#3B82F6" Offset="0"/>
            <GradientStop Color="#60A5FA" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="PurpleGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#8B5CF6" Offset="0"/>
            <GradientStop Color="#A78BFA" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="CardGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#1A1A2E" Offset="0"/>
            <GradientStop Color="#16162A" Offset="1"/>
        </LinearGradientBrush>

        <!-- Modern Action Button Style -->
        <Style x:Key="ModernActionButton" TargetType="Button">
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="MinWidth" Value="110"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="16,10"
                                BorderThickness="1"
                                BorderBrush="#2D2D44">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="-1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="#2D2D44"/>
        </Style>

        <!-- Icon Button Style -->
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="#9CA3AF"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2D2D44"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3D3D54"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Stat Card Style -->
        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardGradient}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20,16"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#2D2D44"/>
        </Style>

        <!-- Navigation Card Style -->
        <Style x:Key="NavCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardGradient}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#2D2D44"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="360"/>
        </Grid.ColumnDefinitions>

        <!-- Main Content Area -->
        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
            <Grid Margin="24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Grid.Row="0" Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Back Button -->
                    <Button Grid.Column="0"
                            Style="{StaticResource IconButton}"
                            Command="{Binding GoBackCommand}"
                            ToolTip="Go Back">
                        <Path Data="M 12 0 L 0 10 L 12 20"
                              Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                              StrokeThickness="2"
                              Width="12" Height="20"/>
                    </Button>

                    <!-- Title and Subtitle -->
                    <StackPanel Grid.Column="1" Margin="16,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="Expense Management"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="White"/>
                        <TextBlock Text="Track, manage, and analyze your business expenses"
                                   FontSize="13"
                                   Foreground="#6B7280"
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- Primary Actions -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <Button Style="{StaticResource ModernActionButton}"
                                Background="{StaticResource SuccessGradient}"
                                Command="{Binding AddExpenseCommand}"
                                ToolTip="Record New Expense">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="+" FontSize="18" FontWeight="Bold" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="New Expense" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- Period Selector -->
                <Border Grid.Row="1" Background="{StaticResource CardGradient}" CornerRadius="10"
                        Padding="16,12" Margin="0,0,0,20" BorderThickness="1" BorderBrush="#2D2D44">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Period:" FontSize="13" Foreground="#9CA3AF"
                                   VerticalAlignment="Center" Margin="0,0,12,0"/>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <RadioButton Content="Today" GroupName="Period" IsChecked="{Binding IsTodaySelected}"
                                         Foreground="White" Margin="0,0,16,0"/>
                            <RadioButton Content="This Week" GroupName="Period" IsChecked="{Binding IsWeekSelected}"
                                         Foreground="White" Margin="0,0,16,0"/>
                            <RadioButton Content="This Month" GroupName="Period" IsChecked="{Binding IsMonthSelected}"
                                         Foreground="White" Margin="0,0,16,0"/>
                            <RadioButton Content="Custom" GroupName="Period" IsChecked="{Binding IsCustomSelected}"
                                         Foreground="White"/>
                        </StackPanel>

                        <Button Grid.Column="2"
                                Style="{StaticResource IconButton}"
                                Command="{Binding RefreshCommand}"
                                ToolTip="Refresh Data">
                            <TextBlock Text="&#xE72C;" FontFamily="Segoe MDL2 Assets" FontSize="16"/>
                        </Button>
                    </Grid>
                </Border>

                <!-- Stats Row -->
                <Grid Grid.Row="2" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Total Expenses Card -->
                    <Border Grid.Column="0" Style="{StaticResource StatCard}" Margin="0,0,8,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Width="48" Height="48" CornerRadius="12"
                                    Background="#1F1A10" Margin="0,0,14,0">
                                <TextBlock Text="&#xE7BF;" FontFamily="Segoe MDL2 Assets" FontSize="20"
                                           Foreground="#F59E0B" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding TotalExpenses, StringFormat='KES {0:N0}'}"
                                           FontSize="22" FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text="Total Expenses" FontSize="12" Foreground="#6B7280" Margin="0,2,0,0"/>
                                <TextBlock FontSize="11" Margin="0,4,0,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#10B981"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsExpenseTrendPositive}" Value="False">
                                                    <Setter Property="Foreground" Value="#EF4444"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                    <Run Text="{Binding ExpenseTrendPercent, StringFormat='{}{0:+0.0;-0.0}%'}"/>
                                    <Run Text=" vs last period" Foreground="#6B7280"/>
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Pending Approval Card -->
                    <Border Grid.Column="1" Style="{StaticResource StatCard}" Margin="8,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Width="48" Height="48" CornerRadius="12"
                                    Background="#1F1F33" Margin="0,0,14,0">
                                <TextBlock Text="&#xE823;" FontFamily="Segoe MDL2 Assets" FontSize="20"
                                           Foreground="#3B82F6" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding PendingCount}"
                                               FontSize="22" FontWeight="Bold" Foreground="#3B82F6"/>
                                    <TextBlock Text="{Binding PendingAmount, StringFormat=' ({0:N0})'}"
                                               FontSize="14" Foreground="#6B7280" VerticalAlignment="Bottom" Margin="0,0,0,2"/>
                                </StackPanel>
                                <TextBlock Text="Pending Approval" FontSize="12" Foreground="#6B7280" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- This Month's Budget Card -->
                    <Border Grid.Column="2" Style="{StaticResource StatCard}" Margin="8,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Width="48" Height="48" CornerRadius="12"
                                    Background="#0D2818" Margin="0,0,14,0">
                                <TextBlock Text="&#xE9D9;" FontFamily="Segoe MDL2 Assets" FontSize="20"
                                           Foreground="#10B981" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding BudgetUtilization, StringFormat='{}{0:0}%'}"
                                           FontSize="22" FontWeight="Bold">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#10B981"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsBudgetOverThreshold}" Value="True">
                                                    <Setter Property="Foreground" Value="#F59E0B"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsBudgetExceeded}" Value="True">
                                                    <Setter Property="Foreground" Value="#EF4444"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBlock Text="Budget Used" FontSize="12" Foreground="#6B7280" Margin="0,2,0,0"/>
                                <TextBlock Text="{Binding BudgetRemaining, StringFormat='KES {0:N0} remaining'}"
                                           FontSize="11" Foreground="#6B7280" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Recurring Expenses Card -->
                    <Border Grid.Column="3" Style="{StaticResource StatCard}" Margin="8,0,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Width="48" Height="48" CornerRadius="12"
                                    Background="#1F1F33" Margin="0,0,14,0">
                                <TextBlock Text="&#xE8EE;" FontFamily="Segoe MDL2 Assets" FontSize="20"
                                           Foreground="#8B5CF6" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding UpcomingRecurringCount}"
                                           FontSize="22" FontWeight="Bold" Foreground="#8B5CF6"/>
                                <TextBlock Text="Due This Week" FontSize="12" Foreground="#6B7280" Margin="0,2,0,0"/>
                                <TextBlock Text="{Binding RecurringAmount, StringFormat='~KES {0:N0}'}"
                                           FontSize="11" Foreground="#6B7280" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Quick Navigation Cards -->
                <TextBlock Grid.Row="3" Text="Expense Management" FontSize="16" FontWeight="SemiBold"
                           Foreground="White" Margin="0,0,0,12"/>

                <Grid Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- All Expenses -->
                    <Border Grid.Column="0" Grid.Row="0" Style="{StaticResource NavCard}" Margin="0,0,8,12">
                        <Border.InputBindings>
                            <MouseBinding MouseAction="LeftClick" Command="{Binding NavigateToExpenseListCommand}"/>
                        </Border.InputBindings>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" Width="56" Height="56" CornerRadius="14" HorizontalAlignment="Left"
                                    Background="{StaticResource PrimaryGradient}" Margin="0,0,0,12">
                                <TextBlock Text="&#xE7BF;" FontFamily="Segoe MDL2 Assets" FontSize="24"
                                           Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Grid.Row="1" Text="All Expenses" FontSize="16" FontWeight="SemiBold"
                                       Foreground="White"/>
                            <TextBlock Grid.Row="2" Text="View, filter, and manage all expense records"
                                       FontSize="12" Foreground="#6B7280" TextWrapping="Wrap" Margin="0,4,0,0"/>
                        </Grid>
                    </Border>

                    <!-- Categories -->
                    <Border Grid.Column="1" Grid.Row="0" Style="{StaticResource NavCard}" Margin="8,0,8,12">
                        <Border.InputBindings>
                            <MouseBinding MouseAction="LeftClick" Command="{Binding NavigateToCategoriesCommand}"/>
                        </Border.InputBindings>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" Width="56" Height="56" CornerRadius="14" HorizontalAlignment="Left"
                                    Background="{StaticResource InfoGradient}" Margin="0,0,0,12">
                                <TextBlock Text="&#xE8EC;" FontFamily="Segoe MDL2 Assets" FontSize="24"
                                           Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Grid.Row="1" Text="Categories" FontSize="16" FontWeight="SemiBold"
                                       Foreground="White"/>
                            <TextBlock Grid.Row="2" Text="Organize expenses with custom categories"
                                       FontSize="12" Foreground="#6B7280" TextWrapping="Wrap" Margin="0,4,0,0"/>
                        </Grid>
                    </Border>

                    <!-- Vendors/Suppliers -->
                    <Border Grid.Column="2" Grid.Row="0" Style="{StaticResource NavCard}" Margin="8,0,0,12">
                        <Border.InputBindings>
                            <MouseBinding MouseAction="LeftClick" Command="{Binding NavigateToVendorsCommand}"/>
                        </Border.InputBindings>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" Width="56" Height="56" CornerRadius="14" HorizontalAlignment="Left"
                                    Background="{StaticResource SuccessGradient}" Margin="0,0,0,12">
                                <TextBlock Text="&#xE77B;" FontFamily="Segoe MDL2 Assets" FontSize="24"
                                           Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Grid.Row="1" Text="Vendors" FontSize="16" FontWeight="SemiBold"
                                       Foreground="White"/>
                            <TextBlock Grid.Row="2" Text="Manage vendor relationships and payments"
                                       FontSize="12" Foreground="#6B7280" TextWrapping="Wrap" Margin="0,4,0,0"/>
                        </Grid>
                    </Border>

                    <!-- Recurring Expenses -->
                    <Border Grid.Column="0" Grid.Row="1" Style="{StaticResource NavCard}" Margin="0,0,8,12">
                        <Border.InputBindings>
                            <MouseBinding MouseAction="LeftClick" Command="{Binding NavigateToRecurringCommand}"/>
                        </Border.InputBindings>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" Width="56" Height="56" CornerRadius="14" HorizontalAlignment="Left"
                                    Background="{StaticResource PurpleGradient}" Margin="0,0,0,12">
                                <TextBlock Text="&#xE8EE;" FontFamily="Segoe MDL2 Assets" FontSize="24"
                                           Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Grid.Row="1" Text="Recurring Expenses" FontSize="16" FontWeight="SemiBold"
                                       Foreground="White"/>
                            <TextBlock Grid.Row="2" Text="Automate bills, rent, and regular payments"
                                       FontSize="12" Foreground="#6B7280" TextWrapping="Wrap" Margin="0,4,0,0"/>
                        </Grid>
                    </Border>

                    <!-- Budgets -->
                    <Border Grid.Column="1" Grid.Row="1" Style="{StaticResource NavCard}" Margin="8,0,8,12">
                        <Border.InputBindings>
                            <MouseBinding MouseAction="LeftClick" Command="{Binding NavigateToBudgetsCommand}"/>
                        </Border.InputBindings>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" Width="56" Height="56" CornerRadius="14" HorizontalAlignment="Left"
                                    Background="{StaticResource DangerGradient}" Margin="0,0,0,12">
                                <TextBlock Text="&#xE9D9;" FontFamily="Segoe MDL2 Assets" FontSize="24"
                                           Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Grid.Row="1" Text="Budgets" FontSize="16" FontWeight="SemiBold"
                                       Foreground="White"/>
                            <TextBlock Grid.Row="2" Text="Set spending limits and track utilization"
                                       FontSize="12" Foreground="#6B7280" TextWrapping="Wrap" Margin="0,4,0,0"/>
                        </Grid>
                    </Border>

                    <!-- Reports -->
                    <Border Grid.Column="2" Grid.Row="1" Style="{StaticResource NavCard}" Margin="8,0,0,12">
                        <Border.InputBindings>
                            <MouseBinding MouseAction="LeftClick" Command="{Binding NavigateToReportsCommand}"/>
                        </Border.InputBindings>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" Width="56" Height="56" CornerRadius="14" HorizontalAlignment="Left">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#06B6D4" Offset="0"/>
                                        <GradientStop Color="#22D3EE" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <TextBlock Text="&#xE9F9;" FontFamily="Segoe MDL2 Assets" FontSize="24"
                                           Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Grid.Row="1" Text="Reports" FontSize="16" FontWeight="SemiBold"
                                       Foreground="White"/>
                            <TextBlock Grid.Row="2" Text="Analytics, trends, and Prime Cost reports"
                                       FontSize="12" Foreground="#6B7280" TextWrapping="Wrap" Margin="0,4,0,0"/>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </ScrollViewer>

        <!-- Right Sidebar - Quick Info Panel -->
        <Border Grid.Column="1"
                Background="{StaticResource CardGradient}"
                BorderThickness="1,0,0,0"
                BorderBrush="#2D2D44">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Panel Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock Text="Quick Overview"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="White"/>
                    <TextBlock Text="Expense breakdown by category"
                               FontSize="12"
                               Foreground="#6B7280"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Category Breakdown -->
                <Border Grid.Row="1" Background="#1F1F33" CornerRadius="10" Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="TOP CATEGORIES" FontSize="11" FontWeight="SemiBold"
                                   Foreground="#6B7280" Margin="0,0,0,12"/>
                        <ItemsControl ItemsSource="{Binding TopCategories}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Category Icon -->
                                        <Border Grid.Column="0" Grid.RowSpan="2" Width="32" Height="32"
                                                CornerRadius="8" Background="{Binding Color}" Margin="0,0,10,0">
                                            <TextBlock Text="{Binding Icon}" FontFamily="Segoe MDL2 Assets"
                                                       FontSize="14" Foreground="White"
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>

                                        <!-- Category Name -->
                                        <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding Name}"
                                                   FontSize="13" Foreground="White" FontWeight="SemiBold"/>

                                        <!-- Amount -->
                                        <TextBlock Grid.Column="2" Grid.Row="0"
                                                   Text="{Binding Amount, StringFormat='KES {0:N0}'}"
                                                   FontSize="13" Foreground="White" FontWeight="SemiBold"/>

                                        <!-- Progress Bar -->
                                        <Border Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2"
                                                Background="#2D2D44" CornerRadius="2" Height="4" Margin="0,4,0,0">
                                            <Border Background="{Binding Color}" CornerRadius="2"
                                                    HorizontalAlignment="Left"
                                                    Width="{Binding PercentageWidth}"/>
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Prime Cost Widget -->
                <Border Grid.Row="2" Background="#1F1F33" CornerRadius="10" Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="PRIME COST" FontSize="11" FontWeight="SemiBold"
                                       Foreground="#6B7280"/>
                            <TextBlock Grid.Column="1" Text="{Binding PrimeCostPercent, StringFormat='{}{0:0.0}%'}"
                                       FontSize="14" FontWeight="Bold">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#10B981"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsPrimeCostHealthy}" Value="False">
                                                <Setter Property="Foreground" Value="#EF4444"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>

                        <!-- COGS -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Food Cost (COGS)" FontSize="12" Foreground="#9CA3AF"/>
                            <TextBlock Grid.Column="1" Text="{Binding FoodCostPercent, StringFormat='{}{0:0.0}%'}"
                                       FontSize="12" Foreground="White" FontWeight="SemiBold"/>
                        </Grid>

                        <!-- Labor -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Labor Cost" FontSize="12" Foreground="#9CA3AF"/>
                            <TextBlock Grid.Column="1" Text="{Binding LaborCostPercent, StringFormat='{}{0:0.0}%'}"
                                       FontSize="12" Foreground="White" FontWeight="SemiBold"/>
                        </Grid>

                        <!-- Target -->
                        <Border Background="#0D2818" CornerRadius="6" Padding="10,8" Margin="0,12,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Industry Target" FontSize="11" Foreground="#6B7280"/>
                                <TextBlock Grid.Column="1" Text="55-65%" FontSize="11" Foreground="#10B981" FontWeight="SemiBold"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Recent Expenses -->
                <Border Grid.Row="3" Background="#1F1F33" CornerRadius="10" Padding="16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="RECENT EXPENSES" FontSize="11" FontWeight="SemiBold"
                                       Foreground="#6B7280"/>
                            <Button Grid.Column="1" Style="{StaticResource IconButton}"
                                    Width="24" Height="24" Command="{Binding NavigateToExpenseListCommand}"
                                    ToolTip="View All">
                                <TextBlock Text="&#xE76C;" FontFamily="Segoe MDL2 Assets" FontSize="12"/>
                            </Button>
                        </Grid>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding RecentExpenses}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#2D2D44" CornerRadius="8" Padding="12" Margin="0,0,0,8"
                                                Cursor="Hand">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <TextBlock Grid.Column="0" Grid.Row="0" Text="{Binding Description}"
                                                           FontSize="13" Foreground="White" FontWeight="SemiBold"
                                                           TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Grid.Column="1" Grid.Row="0"
                                                           Text="{Binding TotalAmount, StringFormat='KES {0:N0}'}"
                                                           FontSize="13" Foreground="White" FontWeight="SemiBold"/>

                                                <TextBlock Grid.Column="0" Grid.Row="1" Margin="0,4,0,0">
                                                    <Run Text="{Binding CategoryName}" Foreground="#6B7280"/>
                                                    <Run Text=" - " Foreground="#4B5563"/>
                                                    <Run Text="{Binding ExpenseDate, StringFormat='MMM dd'}" Foreground="#6B7280"/>
                                                </TextBlock>

                                                <!-- Status Badge -->
                                                <Border Grid.Column="1" Grid.Row="1" CornerRadius="4"
                                                        Padding="6,2" Margin="0,4,0,0" HorizontalAlignment="Right">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Background" Value="#0D2818"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Status}" Value="Pending">
                                                                    <Setter Property="Background" Value="#1F1F33"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="Rejected">
                                                                    <Setter Property="Background" Value="#1F1010"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <TextBlock FontSize="10" FontWeight="SemiBold">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Text" Value="Paid"/>
                                                                <Setter Property="Foreground" Value="#10B981"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Pending">
                                                                        <Setter Property="Text" Value="Pending"/>
                                                                        <Setter Property="Foreground" Value="#6B7280"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Approved">
                                                                        <Setter Property="Text" Value="Approved"/>
                                                                        <Setter Property="Foreground" Value="#3B82F6"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Rejected">
                                                                        <Setter Property="Text" Value="Rejected"/>
                                                                        <Setter Property="Foreground" Value="#EF4444"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <!-- Empty State -->
                        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"
                                    Visibility="{Binding HasNoRecentExpenses, Converter={StaticResource BoolToVisibility}}">
                            <TextBlock Text="&#xE7BF;" FontFamily="Segoe MDL2 Assets" FontSize="32"
                                       Foreground="#4B5563" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                            <TextBlock Text="No recent expenses" FontSize="12" Foreground="#6B7280"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.ColumnSpan="2" Background="#CC0F0F1A"
                Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibility}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True"
                             Width="200"
                             Height="4"
                             Foreground="#F59E0B"
                             Background="#1F1F33"/>
                <TextBlock Text="{Binding BusyMessage}"
                           Foreground="#9CA3AF"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Margin="0,16,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
