<UserControl x:Class="HospitalityPOS.WPF.Views.Expenses.ExpenseListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:HospitalityPOS.WPF.Converters"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="1600"
             Background="#0F0F1A">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility"/>

        <!-- Gradient Brushes -->
        <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#F59E0B" Offset="0"/>
            <GradientStop Color="#FBBF24" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="SuccessGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#10B981" Offset="0"/>
            <GradientStop Color="#34D399" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="DangerGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#EF4444" Offset="0"/>
            <GradientStop Color="#F87171" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="InfoGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#3B82F6" Offset="0"/>
            <GradientStop Color="#60A5FA" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="CardGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#1A1A2E" Offset="0"/>
            <GradientStop Color="#16162A" Offset="1"/>
        </LinearGradientBrush>

        <!-- Modern Action Button Style -->
        <Style x:Key="ModernActionButton" TargetType="Button">
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="MinWidth" Value="110"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="16,10"
                                BorderThickness="1"
                                BorderBrush="#2D2D44">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="-1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="#2D2D44"/>
        </Style>

        <!-- Icon Button Style -->
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="#9CA3AF"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2D2D44"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3D3D54"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Search TextBox Style -->
        <Style x:Key="SearchTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#1A1A2E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="BorderBrush" Value="#2D2D44"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="40,12,12,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          VerticalAlignment="Center"
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#F59E0B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="FilterComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#1A1A2E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#2D2D44"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="MinWidth" Value="140"/>
        </Style>

        <!-- Stat Card Style -->
        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardGradient}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16,14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#2D2D44"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="340"/>
        </Grid.ColumnDefinitions>

        <!-- Main Content Area -->
        <Grid Grid.Column="0" Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Back Button -->
                <Button Grid.Column="0" Style="{StaticResource IconButton}"
                        Command="{Binding GoBackCommand}" ToolTip="Go Back (Esc)">
                    <Path Data="M 12 0 L 0 10 L 12 20"
                          Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                          StrokeThickness="2" Width="12" Height="20"/>
                </Button>

                <!-- Title and Subtitle -->
                <StackPanel Grid.Column="1" Margin="16,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="All Expenses" FontSize="26" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="View, filter, and manage expense records"
                               FontSize="13" Foreground="#6B7280" Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Primary Action -->
                <Button Grid.Column="2" Style="{StaticResource ModernActionButton}"
                        Background="{StaticResource SuccessGradient}"
                        Command="{Binding AddExpenseCommand}" ToolTip="Record New Expense (Ctrl+N)">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="+" FontSize="18" FontWeight="Bold" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Text="New Expense" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>

            <!-- Stats Row -->
            <Grid Grid.Row="1" Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Card -->
                <Border Grid.Column="0" Style="{StaticResource StatCard}" Margin="0,0,6,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Width="44" Height="44" CornerRadius="10" Background="#1F1A10" Margin="0,0,12,0">
                            <TextBlock Text="&#xE7BF;" FontFamily="Segoe MDL2 Assets" FontSize="18"
                                       Foreground="#F59E0B" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding TotalAmount, StringFormat='KES {0:N0}'}"
                                       FontSize="20" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="Total" FontSize="11" Foreground="#6B7280"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Pending Card -->
                <Border Grid.Column="1" Style="{StaticResource StatCard}" Margin="6,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Width="44" Height="44" CornerRadius="10" Background="#1F1F33" Margin="0,0,12,0">
                            <TextBlock Text="&#xE823;" FontFamily="Segoe MDL2 Assets" FontSize="18"
                                       Foreground="#3B82F6" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding PendingAmount, StringFormat='KES {0:N0}'}"
                                       FontSize="20" FontWeight="Bold" Foreground="#3B82F6"/>
                            <TextBlock FontSize="11" Foreground="#6B7280">
                                <Run Text="{Binding PendingCount}"/>
                                <Run Text=" Pending"/>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Approved Card -->
                <Border Grid.Column="2" Style="{StaticResource StatCard}" Margin="6,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Width="44" Height="44" CornerRadius="10" Background="#0D2818" Margin="0,0,12,0">
                            <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets" FontSize="18"
                                       Foreground="#10B981" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding ApprovedAmount, StringFormat='KES {0:N0}'}"
                                       FontSize="20" FontWeight="Bold" Foreground="#10B981"/>
                            <TextBlock FontSize="11" Foreground="#6B7280">
                                <Run Text="{Binding ApprovedCount}"/>
                                <Run Text=" Approved"/>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Paid Card -->
                <Border Grid.Column="3" Style="{StaticResource StatCard}" Margin="6,0,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Width="44" Height="44" CornerRadius="10" Background="#1F1F33" Margin="0,0,12,0">
                            <TextBlock Text="&#xE8C7;" FontFamily="Segoe MDL2 Assets" FontSize="18"
                                       Foreground="#8B5CF6" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding PaidAmount, StringFormat='KES {0:N0}'}"
                                       FontSize="20" FontWeight="Bold" Foreground="#8B5CF6"/>
                            <TextBlock FontSize="11" Foreground="#6B7280">
                                <Run Text="{Binding PaidCount}"/>
                                <Run Text=" Paid"/>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- Search and Filters Bar -->
            <Border Grid.Row="2" Background="{StaticResource CardGradient}" CornerRadius="12"
                    Padding="16" Margin="0,0,0,16" BorderThickness="1" BorderBrush="#2D2D44">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Search Box -->
                    <Grid Grid.Column="0" Margin="0,0,16,0">
                        <TextBox Style="{StaticResource SearchTextBox}"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged, Delay=300}"/>
                        <TextBlock Text="&#xE721;" FontFamily="Segoe MDL2 Assets" FontSize="16"
                                   Foreground="#6B7280" IsHitTestVisible="False"
                                   VerticalAlignment="Center" Margin="14,0,0,0"/>
                        <TextBlock Text="Search expenses..."
                                   FontSize="14" Foreground="#4B5563" IsHitTestVisible="False"
                                   VerticalAlignment="Center" Margin="44,0,0,0"
                                   Visibility="{Binding SearchText.Length, Converter={StaticResource InverseBoolToVisibility}}"/>
                    </Grid>

                    <!-- Category Filter -->
                    <ComboBox Grid.Column="1" Style="{StaticResource FilterComboBox}"
                              ItemsSource="{Binding Categories}"
                              SelectedItem="{Binding SelectedCategory}"
                              Margin="0,0,8,0">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" Foreground="White"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- Status Filter -->
                    <ComboBox Grid.Column="2" Style="{StaticResource FilterComboBox}"
                              ItemsSource="{Binding StatusOptions}"
                              SelectedItem="{Binding SelectedStatus}"
                              Margin="0,0,8,0"/>

                    <!-- Date Range -->
                    <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="0,0,8,0">
                        <DatePicker SelectedDate="{Binding StartDate}" Width="120"
                                    Background="#1A1A2E" Foreground="White" BorderBrush="#2D2D44"/>
                        <TextBlock Text="to" Foreground="#6B7280" VerticalAlignment="Center" Margin="8,0"/>
                        <DatePicker SelectedDate="{Binding EndDate}" Width="120"
                                    Background="#1A1A2E" Foreground="White" BorderBrush="#2D2D44"/>
                    </StackPanel>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Column="4" Orientation="Horizontal">
                        <Button Style="{StaticResource ModernActionButton}"
                                Background="#2563EB"
                                Command="{Binding EditExpenseCommand}"
                                ToolTip="Edit Selected (Enter)">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE70F;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Edit"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource ModernActionButton}"
                                Background="{StaticResource DangerGradient}"
                                Command="{Binding DeleteExpenseCommand}"
                                ToolTip="Delete Selected (Del)">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE74D;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Delete"/>
                            </StackPanel>
                        </Button>

                        <Rectangle Width="1" Fill="#2D2D44" Margin="8,4"/>

                        <Button Style="{StaticResource IconButton}"
                                Command="{Binding RefreshCommand}" ToolTip="Refresh (F5)">
                            <TextBlock Text="&#xE72C;" FontFamily="Segoe MDL2 Assets" FontSize="16"/>
                        </Button>

                        <Button Style="{StaticResource IconButton}"
                                Command="{Binding ExportCommand}" ToolTip="Export to Excel">
                            <TextBlock Text="&#xE78C;" FontFamily="Segoe MDL2 Assets" FontSize="16"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Expenses DataGrid -->
            <Border Grid.Row="3" Background="{StaticResource CardGradient}"
                    CornerRadius="12" BorderThickness="1" BorderBrush="#2D2D44">
                <Grid>
                    <DataGrid ItemsSource="{Binding Expenses}"
                              SelectedItem="{Binding SelectedExpense}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              Background="Transparent"
                              BorderThickness="0"
                              RowBackground="Transparent"
                              AlternatingRowBackground="#0A0A14"
                              Foreground="White"
                              GridLinesVisibility="None"
                              HeadersVisibility="Column"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              SelectionMode="Single"
                              SelectionUnit="FullRow"
                              RowHeight="56"
                              FontSize="13"
                              Visibility="{Binding Expenses.Count, Converter={StaticResource BoolToVisibility}}">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="#6B7280"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="FontSize" Value="12"/>
                                <Setter Property="Padding" Value="16,14"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="BorderBrush" Value="#2D2D44"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Padding" Value="16,8"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Focusable" Value="False"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGridCell">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#1E1E38"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.CellStyle>
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="BorderBrush" Value="#1A1A2E"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#141428"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#1E1E38"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.Columns>
                            <!-- Expense Number & Description -->
                            <DataGridTemplateColumn Header="EXPENSE" Width="*" MinWidth="250">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Description}" FontSize="14" FontWeight="SemiBold" Foreground="White"
                                                       TextTrimming="CharacterEllipsis"/>
                                            <TextBlock FontSize="11" Foreground="#6B7280" Margin="0,2,0,0">
                                                <Run Text="{Binding ExpenseNumber}"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Category -->
                            <DataGridTemplateColumn Header="CATEGORY" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Background="#1F1F33" CornerRadius="6" Padding="8,4" HorizontalAlignment="Left">
                                            <TextBlock Text="{Binding ExpenseCategory.Name}" FontSize="12" Foreground="#9CA3AF"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Vendor/Supplier -->
                            <DataGridTemplateColumn Header="VENDOR" Width="140">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Supplier.Name, TargetNullValue='â€”'}"
                                                   FontSize="13" Foreground="#9CA3AF"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Date -->
                            <DataGridTemplateColumn Header="DATE" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ExpenseDate, StringFormat='MMM dd, yyyy'}"
                                                   FontSize="13" Foreground="White"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Amount -->
                            <DataGridTemplateColumn Header="AMOUNT" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="{Binding TotalAmount, StringFormat='KES {0:N0}'}"
                                                       FontSize="14" FontWeight="SemiBold" Foreground="White"/>
                                            <TextBlock Text="{Binding TaxAmount, StringFormat='Tax: {0:N0}'}"
                                                       FontSize="10" Foreground="#6B7280" Margin="0,2,0,0"
                                                       Visibility="{Binding TaxAmount, Converter={StaticResource BoolToVisibility}}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Status -->
                            <DataGridTemplateColumn Header="STATUS" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="6" Padding="10,5" HorizontalAlignment="Left">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#1F1F33"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="Pending">
                                                            <Setter Property="Background" Value="#1F1F33"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Approved">
                                                            <Setter Property="Background" Value="#0D2818"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Rejected">
                                                            <Setter Property="Background" Value="#1F1010"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Paid">
                                                            <Setter Property="Background" Value="#1F1F33"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock FontSize="11" FontWeight="SemiBold">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="#6B7280"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="Pending">
                                                                <Setter Property="Text" Value="Pending"/>
                                                                <Setter Property="Foreground" Value="#6B7280"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Approved">
                                                                <Setter Property="Text" Value="Approved"/>
                                                                <Setter Property="Foreground" Value="#10B981"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Rejected">
                                                                <Setter Property="Text" Value="Rejected"/>
                                                                <Setter Property="Foreground" Value="#EF4444"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Paid">
                                                                <Setter Property="Text" Value="Paid"/>
                                                                <Setter Property="Foreground" Value="#8B5CF6"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Empty State -->
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                                Visibility="{Binding Expenses.Count, Converter={StaticResource InverseBoolToVisibility}}">
                        <Border Width="80" Height="80" CornerRadius="40" Background="#1F1F33" Margin="0,0,0,16">
                            <TextBlock Text="&#xE7BF;" FontFamily="Segoe MDL2 Assets" FontSize="32"
                                       Foreground="#4B5563" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="No Expenses Found" FontSize="18" FontWeight="SemiBold"
                                   Foreground="White" HorizontalAlignment="Center"/>
                        <TextBlock Text="Create your first expense record to get started"
                                   FontSize="13" Foreground="#6B7280" HorizontalAlignment="Center" Margin="0,8,0,20"/>
                        <Button Style="{StaticResource ModernActionButton}"
                                Background="{StaticResource PrimaryGradient}"
                                Command="{Binding AddExpenseCommand}" HorizontalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="+" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Create Expense"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- Loading Overlay -->
                    <Border Background="#CC0F0F1A" CornerRadius="12"
                            Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibility}}">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <ProgressBar IsIndeterminate="True" Width="160" Height="4"
                                         Foreground="#F59E0B" Background="#1F1F33"/>
                            <TextBlock Text="{Binding BusyMessage}" Foreground="#9CA3AF"
                                       FontSize="13" HorizontalAlignment="Center" Margin="0,12,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Right Sidebar - Expense Details Panel -->
        <Border Grid.Column="1" Background="{StaticResource CardGradient}"
                BorderThickness="1,0,0,0" BorderBrush="#2D2D44">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Panel Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock Text="Expense Details" FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                    <TextBlock Text="View selected expense information"
                               FontSize="12" Foreground="#6B7280" Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Details Content -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- No Selection State -->
                        <StackPanel Visibility="{Binding SelectedExpense, Converter={StaticResource InverseBoolToVisibility}}"
                                    VerticalAlignment="Center" Margin="0,40,0,0">
                            <Border Width="64" Height="64" CornerRadius="32" Background="#1F1F33"
                                    Margin="0,0,0,16" HorizontalAlignment="Center">
                                <TextBlock Text="&#xE7BF;" FontFamily="Segoe MDL2 Assets" FontSize="24"
                                           Foreground="#4B5563" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="No Expense Selected" FontSize="14" Foreground="#6B7280" HorizontalAlignment="Center"/>
                            <TextBlock Text="Select an expense to view details"
                                       FontSize="12" Foreground="#4B5563" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                        </StackPanel>

                        <!-- Selected Expense Details -->
                        <StackPanel Visibility="{Binding SelectedExpense, Converter={StaticResource BoolToVisibility}}">
                            <!-- Amount Display -->
                            <Border Background="#1F1F33" CornerRadius="12" Padding="16" Margin="0,0,0,16">
                                <StackPanel>
                                    <TextBlock Text="TOTAL AMOUNT" FontSize="11" FontWeight="SemiBold"
                                               Foreground="#6B7280" Margin="0,0,0,4"/>
                                    <TextBlock Text="{Binding SelectedExpense.TotalAmount, StringFormat='KES {0:N2}'}"
                                               FontSize="28" FontWeight="Bold" Foreground="White"/>
                                    <TextBlock FontSize="12" Foreground="#6B7280" Margin="0,4,0,0">
                                        <Run Text="Base: KES "/>
                                        <Run Text="{Binding SelectedExpense.Amount, StringFormat='{}{0:N2}'}"/>
                                        <Run Text="  |  Tax: KES "/>
                                        <Run Text="{Binding SelectedExpense.TaxAmount, StringFormat='{}{0:N2}'}"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <!-- Details Grid -->
                            <Border Background="#1F1F33" CornerRadius="12" Padding="16" Margin="0,0,0,16">
                                <StackPanel>
                                    <TextBlock Text="DETAILS" FontSize="11" FontWeight="SemiBold"
                                               Foreground="#6B7280" Margin="0,0,0,12"/>

                                    <Grid Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Expense #" FontSize="12" Foreground="#6B7280" Width="90"/>
                                        <TextBlock Grid.Column="1" Text="{Binding SelectedExpense.ExpenseNumber}"
                                                   FontSize="13" Foreground="White"/>
                                    </Grid>

                                    <Grid Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Category" FontSize="12" Foreground="#6B7280" Width="90"/>
                                        <TextBlock Grid.Column="1" Text="{Binding SelectedExpense.ExpenseCategory.Name}"
                                                   FontSize="13" Foreground="White"/>
                                    </Grid>

                                    <Grid Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Vendor" FontSize="12" Foreground="#6B7280" Width="90"/>
                                        <TextBlock Grid.Column="1" Text="{Binding SelectedExpense.Supplier.Name, TargetNullValue='N/A'}"
                                                   FontSize="13" Foreground="White"/>
                                    </Grid>

                                    <Grid Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Date" FontSize="12" Foreground="#6B7280" Width="90"/>
                                        <TextBlock Grid.Column="1" Text="{Binding SelectedExpense.ExpenseDate, StringFormat='MMMM dd, yyyy'}"
                                                   FontSize="13" Foreground="White"/>
                                    </Grid>

                                    <Grid Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Payment" FontSize="12" Foreground="#6B7280" Width="90"/>
                                        <TextBlock Grid.Column="1" Text="{Binding SelectedExpense.PaymentMethod, TargetNullValue='N/A'}"
                                                   FontSize="13" Foreground="White"/>
                                    </Grid>

                                    <Grid Margin="0,0,0,10" Visibility="{Binding SelectedExpense.PaymentReference, Converter={StaticResource BoolToVisibility}}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Reference" FontSize="12" Foreground="#6B7280" Width="90"/>
                                        <TextBlock Grid.Column="1" Text="{Binding SelectedExpense.PaymentReference}"
                                                   FontSize="13" Foreground="White"/>
                                    </Grid>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Tax Deductible" FontSize="12" Foreground="#6B7280" Width="90"/>
                                        <TextBlock Grid.Column="1" FontSize="13">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="No"/>
                                                    <Setter Property="Foreground" Value="#6B7280"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding SelectedExpense.IsTaxDeductible}" Value="True">
                                                            <Setter Property="Text" Value="Yes"/>
                                                            <Setter Property="Foreground" Value="#10B981"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Notes Section -->
                            <Border Background="#1F1F33" CornerRadius="12" Padding="16" Margin="0,0,0,16"
                                    Visibility="{Binding SelectedExpense.Notes, Converter={StaticResource BoolToVisibility}}">
                                <StackPanel>
                                    <TextBlock Text="NOTES" FontSize="11" FontWeight="SemiBold"
                                               Foreground="#6B7280" Margin="0,0,0,8"/>
                                    <TextBlock Text="{Binding SelectedExpense.Notes}"
                                               FontSize="13" Foreground="#9CA3AF" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>

                            <!-- Quick Actions -->
                            <TextBlock Text="Quick Actions" FontSize="12" Foreground="#6B7280" Margin="0,0,0,12"/>

                            <Button Style="{StaticResource ModernActionButton}"
                                    Background="{StaticResource SuccessGradient}"
                                    HorizontalAlignment="Stretch"
                                    Margin="0,0,0,8"
                                    Command="{Binding ApproveExpenseCommand}"
                                    Visibility="{Binding CanApprove, Converter={StaticResource BoolToVisibility}}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets" FontSize="14"
                                               Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Approve"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource ModernActionButton}"
                                    Background="{StaticResource InfoGradient}"
                                    HorizontalAlignment="Stretch"
                                    Margin="0,0,0,8"
                                    Command="{Binding MarkAsPaidCommand}"
                                    Visibility="{Binding CanMarkPaid, Converter={StaticResource BoolToVisibility}}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE8C7;" FontFamily="Segoe MDL2 Assets" FontSize="14"
                                               Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Mark as Paid"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource ModernActionButton}"
                                    Background="#2563EB"
                                    HorizontalAlignment="Stretch"
                                    Margin="0,0,0,8"
                                    Command="{Binding EditExpenseCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE70F;" FontFamily="Segoe MDL2 Assets" FontSize="14"
                                               Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Edit Expense"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource ModernActionButton}"
                                    Background="{StaticResource DangerGradient}"
                                    HorizontalAlignment="Stretch"
                                    Command="{Binding DeleteExpenseCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE74D;" FontFamily="Segoe MDL2 Assets" FontSize="14"
                                               Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Delete Expense"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>
