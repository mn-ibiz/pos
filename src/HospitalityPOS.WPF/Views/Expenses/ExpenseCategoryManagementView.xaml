<UserControl x:Class="HospitalityPOS.WPF.Views.Expenses.ExpenseCategoryManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:HospitalityPOS.WPF.Converters"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="1400"
             Background="#0F0F1A">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility"/>

        <!-- Gradient Brushes -->
        <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#F59E0B" Offset="0"/>
            <GradientStop Color="#FBBF24" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="SuccessGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#10B981" Offset="0"/>
            <GradientStop Color="#34D399" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="DangerGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#EF4444" Offset="0"/>
            <GradientStop Color="#F87171" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="CardGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#1A1A2E" Offset="0"/>
            <GradientStop Color="#16162A" Offset="1"/>
        </LinearGradientBrush>

        <!-- Button Styles -->
        <Style x:Key="ModernActionButton" TargetType="Button">
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="10" Padding="16,10"
                                BorderThickness="1" BorderBrush="#2D2D44">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="-1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="#2D2D44"/>
        </Style>

        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="#9CA3AF"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2D2D44"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Category Card Style -->
        <Style x:Key="CategoryCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardGradient}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#2D2D44"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,12,12"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="380"/>
        </Grid.ColumnDefinitions>

        <!-- Main Content Area -->
        <Grid Grid.Column="0" Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Style="{StaticResource IconButton}"
                        Command="{Binding GoBackCommand}" ToolTip="Go Back">
                    <Path Data="M 12 0 L 0 10 L 12 20"
                          Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                          StrokeThickness="2" Width="12" Height="20"/>
                </Button>

                <StackPanel Grid.Column="1" Margin="16,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="Expense Categories" FontSize="26" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Organize expenses with hierarchical categories"
                               FontSize="13" Foreground="#6B7280" Margin="0,4,0,0"/>
                </StackPanel>

                <Button Grid.Column="2" Style="{StaticResource ModernActionButton}"
                        Background="{StaticResource SuccessGradient}"
                        Command="{Binding AddCategoryCommand}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="+" FontSize="18" FontWeight="Bold" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Add Category" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>

            <!-- Category Type Filter -->
            <Border Grid.Row="1" Background="{StaticResource CardGradient}" CornerRadius="10"
                    Padding="12" Margin="0,0,0,16" BorderThickness="1" BorderBrush="#2D2D44">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Type:" FontSize="13" Foreground="#9CA3AF"
                               VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <RadioButton Content="All" GroupName="Type" IsChecked="{Binding IsAllSelected}"
                                 Foreground="White" Margin="0,0,16,0"/>
                    <RadioButton Content="COGS" GroupName="Type" IsChecked="{Binding IsCOGSSelected}"
                                 Foreground="#F59E0B" Margin="0,0,16,0"/>
                    <RadioButton Content="Labor" GroupName="Type" IsChecked="{Binding IsLaborSelected}"
                                 Foreground="#3B82F6" Margin="0,0,16,0"/>
                    <RadioButton Content="Occupancy" GroupName="Type" IsChecked="{Binding IsOccupancySelected}"
                                 Foreground="#10B981" Margin="0,0,16,0"/>
                    <RadioButton Content="Operating" GroupName="Type" IsChecked="{Binding IsOperatingSelected}"
                                 Foreground="#8B5CF6" Margin="0,0,16,0"/>
                    <RadioButton Content="Marketing" GroupName="Type" IsChecked="{Binding IsMarketingSelected}"
                                 Foreground="#EF4444" Margin="0,0,16,0"/>
                    <RadioButton Content="Admin" GroupName="Type" IsChecked="{Binding IsAdminSelected}"
                                 Foreground="#06B6D4" Margin="0,0,16,0"/>
                </StackPanel>
            </Border>

            <!-- Categories Grid -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding FilteredCategories}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource CategoryCard}" Width="280">
                                <Border.InputBindings>
                                    <MouseBinding MouseAction="LeftClick"
                                                  Command="{Binding DataContext.SelectCategoryCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                  CommandParameter="{Binding}"/>
                                </Border.InputBindings>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Header -->
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Icon -->
                                        <Border Grid.Column="0" Width="44" Height="44" CornerRadius="10"
                                                Background="{Binding Color, FallbackValue='#2D2D44'}" Margin="0,0,12,0">
                                            <TextBlock Text="{Binding Icon, FallbackValue='&#xE7BF;'}"
                                                       FontFamily="Segoe MDL2 Assets" FontSize="18"
                                                       Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>

                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Name}" FontSize="15" FontWeight="SemiBold"
                                                       Foreground="White" TextTrimming="CharacterEllipsis"/>
                                            <TextBlock FontSize="11" Foreground="#6B7280" Margin="0,2,0,0">
                                                <Run Text="{Binding Type}"/>
                                            </TextBlock>
                                        </StackPanel>

                                        <!-- System Badge -->
                                        <Border Grid.Column="2" Visibility="{Binding IsSystemCategory, Converter={StaticResource BoolToVisibility}}"
                                                Background="#1F1F33" CornerRadius="6" Padding="8,4">
                                            <TextBlock Text="System" FontSize="10" Foreground="#6B7280"/>
                                        </Border>
                                    </Grid>

                                    <!-- Description -->
                                    <TextBlock Grid.Row="1" Text="{Binding Description}"
                                               FontSize="12" Foreground="#9CA3AF"
                                               TextWrapping="Wrap" MaxHeight="36"
                                               TextTrimming="CharacterEllipsis"
                                               Margin="0,12,0,0"
                                               Visibility="{Binding Description, Converter={StaticResource BoolToVisibility}}"/>

                                    <!-- Subcategories Count -->
                                    <Grid Grid.Row="2" Margin="0,12,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock FontSize="11" Foreground="#6B7280">
                                            <Run Text="{Binding SubCategories.Count, FallbackValue=0}"/>
                                            <Run Text=" subcategories"/>
                                        </TextBlock>

                                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                                            <Button Style="{StaticResource IconButton}" Width="32" Height="32"
                                                    Command="{Binding DataContext.EditCategoryCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                    CommandParameter="{Binding}"
                                                    ToolTip="Edit">
                                                <TextBlock Text="&#xE70F;" FontFamily="Segoe MDL2 Assets" FontSize="12"/>
                                            </Button>
                                            <Button Style="{StaticResource IconButton}" Width="32" Height="32"
                                                    Command="{Binding DataContext.DeleteCategoryCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                    CommandParameter="{Binding}"
                                                    ToolTip="Delete"
                                                    Visibility="{Binding IsSystemCategory, Converter={StaticResource InverseBoolToVisibility}}">
                                                <TextBlock Text="&#xE74D;" FontFamily="Segoe MDL2 Assets" FontSize="12" Foreground="#EF4444"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <!-- Right Sidebar - Selected Category Details -->
        <Border Grid.Column="1" Background="{StaticResource CardGradient}"
                BorderThickness="1,0,0,0" BorderBrush="#2D2D44">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock Text="Category Details" FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                    <TextBlock Text="View and manage subcategories"
                               FontSize="12" Foreground="#6B7280" Margin="0,4,0,0"/>
                </StackPanel>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- No Selection State -->
                        <StackPanel Visibility="{Binding SelectedCategory, Converter={StaticResource InverseBoolToVisibility}}"
                                    VerticalAlignment="Center" Margin="0,40,0,0">
                            <Border Width="64" Height="64" CornerRadius="32" Background="#1F1F33"
                                    Margin="0,0,0,16" HorizontalAlignment="Center">
                                <TextBlock Text="&#xE8EC;" FontFamily="Segoe MDL2 Assets" FontSize="24"
                                           Foreground="#4B5563" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="No Category Selected" FontSize="14" Foreground="#6B7280" HorizontalAlignment="Center"/>
                            <TextBlock Text="Select a category to view details"
                                       FontSize="12" Foreground="#4B5563" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                        </StackPanel>

                        <!-- Selected Category Details -->
                        <StackPanel Visibility="{Binding SelectedCategory, Converter={StaticResource BoolToVisibility}}">
                            <!-- Category Info -->
                            <Border Background="#1F1F33" CornerRadius="12" Padding="16" Margin="0,0,0,16">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Width="56" Height="56" CornerRadius="14"
                                            Background="{Binding SelectedCategory.Color, FallbackValue='#2D2D44'}" Margin="0,0,16,0">
                                        <TextBlock Text="{Binding SelectedCategory.Icon, FallbackValue='&#xE7BF;'}"
                                                   FontFamily="Segoe MDL2 Assets" FontSize="22"
                                                   Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>

                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding SelectedCategory.Name}" FontSize="18"
                                                   FontWeight="Bold" Foreground="White"/>
                                        <TextBlock FontSize="12" Foreground="#9CA3AF" Margin="0,4,0,0">
                                            <Run Text="Type: "/>
                                            <Run Text="{Binding SelectedCategory.Type}"/>
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Description -->
                            <Border Background="#1F1F33" CornerRadius="12" Padding="16" Margin="0,0,0,16"
                                    Visibility="{Binding SelectedCategory.Description, Converter={StaticResource BoolToVisibility}}">
                                <StackPanel>
                                    <TextBlock Text="DESCRIPTION" FontSize="11" FontWeight="SemiBold"
                                               Foreground="#6B7280" Margin="0,0,0,8"/>
                                    <TextBlock Text="{Binding SelectedCategory.Description}"
                                               FontSize="13" Foreground="#9CA3AF" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>

                            <!-- Subcategories -->
                            <Border Background="#1F1F33" CornerRadius="12" Padding="16">
                                <StackPanel>
                                    <Grid Margin="0,0,0,12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="SUBCATEGORIES" FontSize="11" FontWeight="SemiBold"
                                                   Foreground="#6B7280" VerticalAlignment="Center"/>
                                        <Button Grid.Column="1" Style="{StaticResource IconButton}"
                                                Width="28" Height="28"
                                                Command="{Binding AddSubcategoryCommand}" ToolTip="Add Subcategory">
                                            <TextBlock Text="+" FontSize="16" Foreground="#10B981"/>
                                        </Button>
                                    </Grid>

                                    <ItemsControl ItemsSource="{Binding SelectedCategory.SubCategories}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#2D2D44" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <Border Width="32" Height="32" CornerRadius="8"
                                                                Background="{Binding Color, FallbackValue='#3D3D54'}" Margin="0,0,10,0">
                                                            <TextBlock Text="{Binding Icon, FallbackValue='&#xE7BF;'}"
                                                                       FontFamily="Segoe MDL2 Assets" FontSize="12"
                                                                       Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>

                                                        <TextBlock Grid.Column="1" Text="{Binding Name}"
                                                                   FontSize="13" Foreground="White" VerticalAlignment="Center"/>

                                                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                                                            <Button Style="{StaticResource IconButton}" Width="28" Height="28"
                                                                    Command="{Binding DataContext.EditCategoryCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                                    CommandParameter="{Binding}">
                                                                <TextBlock Text="&#xE70F;" FontFamily="Segoe MDL2 Assets" FontSize="10"/>
                                                            </Button>
                                                            <Button Style="{StaticResource IconButton}" Width="28" Height="28"
                                                                    Command="{Binding DataContext.DeleteCategoryCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                                    CommandParameter="{Binding}"
                                                                    Visibility="{Binding IsSystemCategory, Converter={StaticResource InverseBoolToVisibility}}">
                                                                <TextBlock Text="&#xE74D;" FontFamily="Segoe MDL2 Assets" FontSize="10" Foreground="#EF4444"/>
                                                            </Button>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <!-- Empty Subcategories State -->
                                    <StackPanel Visibility="{Binding HasNoSubcategories, Converter={StaticResource BoolToVisibility}}"
                                                HorizontalAlignment="Center" Margin="0,16,0,0">
                                        <TextBlock Text="No subcategories" FontSize="12" Foreground="#6B7280"
                                                   HorizontalAlignment="Center"/>
                                        <Button Style="{StaticResource ModernActionButton}"
                                                Background="#2D2D44"
                                                Command="{Binding AddSubcategoryCommand}"
                                                Margin="0,12,0,0" HorizontalAlignment="Center">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="+" FontSize="14" Margin="0,0,8,0"/>
                                                <TextBlock Text="Add Subcategory"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.ColumnSpan="2" Background="#CC0F0F1A"
                Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibility}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="4"
                             Foreground="#F59E0B" Background="#1F1F33"/>
                <TextBlock Text="{Binding BusyMessage}" Foreground="#9CA3AF"
                           FontSize="14" HorizontalAlignment="Center" Margin="0,16,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
