<UserControl x:Class="HospitalityPOS.WPF.Views.Expenses.ExpenseBudgetView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:HospitalityPOS.WPF.Converters"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="1400"
             Background="#0F0F1A">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility"/>

        <!-- Gradient Brushes -->
        <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#F59E0B" Offset="0"/>
            <GradientStop Color="#FBBF24" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="SuccessGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#10B981" Offset="0"/>
            <GradientStop Color="#34D399" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="DangerGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#EF4444" Offset="0"/>
            <GradientStop Color="#F87171" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="CardGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#1A1A2E" Offset="0"/>
            <GradientStop Color="#16162A" Offset="1"/>
        </LinearGradientBrush>

        <!-- Modern Action Button Style -->
        <Style x:Key="ModernActionButton" TargetType="Button">
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="MinWidth" Value="110"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="16,10"
                                BorderThickness="1"
                                BorderBrush="#2D2D44">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="#2D2D44"/>
        </Style>

        <!-- Icon Button Style -->
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="#9CA3AF"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2D2D44"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Stat Card Style -->
        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardGradient}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16,14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#2D2D44"/>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="FilterComboBox" TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
            <Setter Property="Background" Value="#1A1A2E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#2D2D44"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="MinWidth" Value="160"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Back Button -->
            <Button Grid.Column="0" Style="{StaticResource IconButton}"
                    Command="{Binding GoBackCommand}" ToolTip="Go Back (Esc)">
                <Path Data="M 12 0 L 0 10 L 12 20"
                      Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                      StrokeThickness="2" Width="12" Height="20"/>
            </Button>

            <!-- Title and Subtitle -->
            <StackPanel Grid.Column="1" Margin="16,0,0,0" VerticalAlignment="Center">
                <TextBlock Text="Expense Budgets" FontSize="26" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Set spending limits and track utilization"
                           FontSize="13" Foreground="#6B7280" Margin="0,4,0,0"/>
            </StackPanel>

            <!-- Primary Action -->
            <Button Grid.Column="2" Style="{StaticResource ModernActionButton}"
                    Background="{StaticResource SuccessGradient}"
                    Command="{Binding AddBudgetCommand}" ToolTip="Create New Budget (Ctrl+N)">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="+" FontSize="18" FontWeight="Bold" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <TextBlock Text="New Budget" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- Stats Row -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total Budgeted -->
            <Border Grid.Column="0" Style="{StaticResource StatCard}" Margin="0,0,6,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Width="44" Height="44" CornerRadius="10" Background="#1F1F33" Margin="0,0,12,0">
                        <TextBlock Text="&#xE9D9;" FontFamily="Segoe MDL2 Assets" FontSize="18"
                                   Foreground="#3B82F6" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding TotalBudgeted, StringFormat='KES {0:N0}'}"
                                   FontSize="20" FontWeight="Bold" Foreground="White"/>
                        <TextBlock FontSize="11" Foreground="#6B7280">
                            <Run Text="{Binding TotalBudgetCount}"/>
                            <Run Text=" Budgets"/>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Total Spent -->
            <Border Grid.Column="1" Style="{StaticResource StatCard}" Margin="6,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Width="44" Height="44" CornerRadius="10" Background="#1F1A10" Margin="0,0,12,0">
                        <TextBlock Text="&#xE7BF;" FontFamily="Segoe MDL2 Assets" FontSize="18"
                                   Foreground="#F59E0B" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding TotalSpent, StringFormat='KES {0:N0}'}"
                                   FontSize="20" FontWeight="Bold" Foreground="#F59E0B"/>
                        <TextBlock Text="Spent" FontSize="11" Foreground="#6B7280"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Remaining -->
            <Border Grid.Column="2" Style="{StaticResource StatCard}" Margin="6,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Width="44" Height="44" CornerRadius="10" Background="#0D2818" Margin="0,0,12,0">
                        <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets" FontSize="18"
                                   Foreground="#10B981" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding TotalRemaining, StringFormat='KES {0:N0}'}"
                                   FontSize="20" FontWeight="Bold" Foreground="#10B981"/>
                        <TextBlock Text="Remaining" FontSize="11" Foreground="#6B7280"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Over Threshold / Exceeded -->
            <Border Grid.Column="3" Style="{StaticResource StatCard}" Margin="6,0,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Width="44" Height="44" CornerRadius="10" Background="#1F1010" Margin="0,0,12,0">
                        <TextBlock Text="&#xE7BA;" FontFamily="Segoe MDL2 Assets" FontSize="18"
                                   Foreground="#EF4444" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding BudgetsExceeded}" FontSize="20" FontWeight="Bold" Foreground="#EF4444"/>
                            <TextBlock Text=" / " FontSize="20" FontWeight="Bold" Foreground="#6B7280"/>
                            <TextBlock Text="{Binding BudgetsOverThreshold}" FontSize="20" FontWeight="Bold" Foreground="#F59E0B"/>
                        </StackPanel>
                        <TextBlock Text="Exceeded / Warning" FontSize="11" Foreground="#6B7280"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Filters and Actions Bar -->
        <Border Grid.Row="2" Background="{StaticResource CardGradient}" CornerRadius="12"
                Padding="16" Margin="0,0,0,16" BorderThickness="1" BorderBrush="#2D2D44">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Period Filter -->
                <ComboBox Grid.Column="0" Style="{StaticResource FilterComboBox}"
                          ItemsSource="{Binding PeriodOptions}"
                          SelectedItem="{Binding SelectedPeriod}"
                          DisplayMemberPath="Name"
                          Margin="0,0,16,0"/>

                <!-- Category Filter -->
                <ComboBox Grid.Column="1" Style="{StaticResource FilterComboBox}"
                          ItemsSource="{Binding Categories}"
                          SelectedItem="{Binding SelectedCategory}"
                          DisplayMemberPath="Name"
                          Margin="0,0,16,0">
                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Foreground" Value="White"/>
                        </Style>
                    </ComboBox.ItemContainerStyle>
                </ComboBox>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="3" Orientation="Horizontal">
                    <Button Style="{StaticResource ModernActionButton}"
                            Background="#2563EB"
                            Command="{Binding EditBudgetCommand}"
                            ToolTip="Edit Selected">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE70F;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Edit"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource ModernActionButton}"
                            Background="{StaticResource DangerGradient}"
                            Command="{Binding DeleteBudgetCommand}"
                            ToolTip="Delete Selected">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE74D;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Delete"/>
                        </StackPanel>
                    </Button>

                    <Rectangle Width="1" Fill="#2D2D44" Margin="8,4"/>

                    <Button Style="{StaticResource ModernActionButton}"
                            Background="#8B5CF6"
                            Command="{Binding RecalculateSpentCommand}"
                            ToolTip="Recalculate all spent amounts">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE72C;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Recalculate"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource IconButton}"
                            Command="{Binding RefreshCommand}" ToolTip="Refresh (F5)">
                        <TextBlock Text="&#xE72C;" FontFamily="Segoe MDL2 Assets" FontSize="16"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Budget Cards Grid -->
        <Border Grid.Row="3" Background="{StaticResource CardGradient}"
                CornerRadius="12" BorderThickness="1" BorderBrush="#2D2D44">
            <Grid>
                <!-- Budget Items -->
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16"
                              Visibility="{Binding Budgets.Count, Converter={StaticResource BoolToVisibility}}">
                    <ItemsControl ItemsSource="{Binding Budgets}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#1F1F33" CornerRadius="12" Padding="16" Margin="8"
                                        Width="320" Cursor="Hand"
                                        MouseLeftButtonDown="BudgetCard_MouseLeftButtonDown">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#252538"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <StackPanel>
                                        <!-- Header -->
                                        <Grid Margin="0,0,0,12">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel>
                                                <TextBlock Text="{Binding Budget.Name}" FontSize="16" FontWeight="SemiBold"
                                                           Foreground="White" TextTrimming="CharacterEllipsis"/>
                                                <TextBlock FontSize="12" Foreground="#6B7280" Margin="0,4,0,0">
                                                    <TextBlock.Text>
                                                        <MultiBinding StringFormat="{}{0:MMM yyyy}">
                                                            <Binding Path="Budget.StartDate"/>
                                                        </MultiBinding>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                            </StackPanel>

                                            <!-- Status Badge -->
                                            <Border Grid.Column="1" CornerRadius="6" Padding="8,4"
                                                    Background="{Binding StatusColor}" Opacity="0.2">
                                                <TextBlock Text="{Binding Status}" FontSize="10" FontWeight="Bold"
                                                           Foreground="{Binding StatusColor}"/>
                                            </Border>
                                        </Grid>

                                        <!-- Progress Bar -->
                                        <Grid Margin="0,0,0,12">
                                            <Border Background="#2D2D44" CornerRadius="4" Height="8"/>
                                            <Border Background="{Binding ProgressBarColor}" CornerRadius="4" Height="8"
                                                    Width="{Binding ProgressWidth}" HorizontalAlignment="Left"
                                                    MaxWidth="288"/>
                                        </Grid>

                                        <!-- Stats Grid -->
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="Budget" FontSize="10" Foreground="#6B7280"/>
                                                <TextBlock Text="{Binding Budget.Amount, StringFormat='KES {0:N0}'}"
                                                           FontSize="13" FontWeight="SemiBold" Foreground="White"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                                <TextBlock Text="Spent" FontSize="10" Foreground="#6B7280"/>
                                                <TextBlock Text="{Binding SpentAmount, StringFormat='KES {0:N0}'}"
                                                           FontSize="13" FontWeight="SemiBold" Foreground="#F59E0B"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                                                <TextBlock Text="Utilization" FontSize="10" Foreground="#6B7280"/>
                                                <TextBlock FontSize="13" FontWeight="SemiBold"
                                                           Foreground="{Binding StatusColor}">
                                                    <TextBlock.Text>
                                                        <Binding Path="UtilizationPercent" StringFormat="{}{0:N1}%"/>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                            </StackPanel>
                                        </Grid>

                                        <!-- Category Tag -->
                                        <Border Background="#2D2D44" CornerRadius="6" Padding="8,4" Margin="0,12,0,0"
                                                HorizontalAlignment="Left"
                                                Visibility="{Binding Budget.ExpenseCategory, Converter={StaticResource BoolToVisibility}}">
                                            <TextBlock Text="{Binding Budget.ExpenseCategory.Name}"
                                                       FontSize="11" Foreground="#9CA3AF"/>
                                        </Border>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Empty State -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                            Visibility="{Binding Budgets.Count, Converter={StaticResource InverseBoolToVisibility}}">
                    <Border Width="80" Height="80" CornerRadius="40" Background="#1F1F33" Margin="0,0,0,16">
                        <TextBlock Text="&#xE9D9;" FontFamily="Segoe MDL2 Assets" FontSize="32"
                                   Foreground="#4B5563" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="No Budgets Found" FontSize="18" FontWeight="SemiBold"
                               Foreground="White" HorizontalAlignment="Center"/>
                    <TextBlock Text="Create your first budget to start tracking spending"
                               FontSize="13" Foreground="#6B7280" HorizontalAlignment="Center" Margin="0,8,0,20"/>
                    <Button Style="{StaticResource ModernActionButton}"
                            Background="{StaticResource PrimaryGradient}"
                            Command="{Binding AddBudgetCommand}" HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="+" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Create First Budget"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Loading Overlay -->
                <Border Background="#CC0F0F1A" CornerRadius="12"
                        Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibility}}">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <ProgressBar IsIndeterminate="True" Width="160" Height="4"
                                     Foreground="#F59E0B" Background="#1F1F33"/>
                        <TextBlock Text="{Binding BusyMessage}" Foreground="#9CA3AF"
                                   FontSize="13" HorizontalAlignment="Center" Margin="0,12,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
