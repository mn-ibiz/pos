<UserControl x:Class="HospitalityPOS.WPF.Views.Analytics.MenuEngineeringView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:HospitalityPOS.WPF.Converters"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="1400"
             Background="#0F0F1A">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>

        <!-- Gradient Brushes -->
        <LinearGradientBrush x:Key="StarGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#10B981" Offset="0"/>
            <GradientStop Color="#34D399" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="PlowGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#F59E0B" Offset="0"/>
            <GradientStop Color="#FBBF24" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="PuzzleGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#6366F1" Offset="0"/>
            <GradientStop Color="#818CF8" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="DogGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#EF4444" Offset="0"/>
            <GradientStop Color="#F87171" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="CardGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#1A1A2E" Offset="0"/>
            <GradientStop Color="#16162A" Offset="1"/>
        </LinearGradientBrush>

        <!-- Card Style -->
        <Style x:Key="ModernCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardGradient}"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#2D2D44"/>
        </Style>

        <!-- Classification Card Style -->
        <Style x:Key="ClassificationCard" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Action Button Style -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Date Picker Style -->
        <Style x:Key="ModernDatePicker" TargetType="DatePicker">
            <Setter Property="Background" Value="#1F1F23"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#2D2D44"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <Border Width="48" Height="48" CornerRadius="12" Margin="0,0,16,0">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#6366F1" Offset="0"/>
                                    <GradientStop Color="#818CF8" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <TextBlock Text="&#xE9D9;" FontFamily="Segoe MDL2 Assets" FontSize="22"
                                       Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Menu Engineering Matrix" FontSize="28" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="Classify products by profitability and popularity"
                                       FontSize="14" Foreground="#9CA3AF"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <DatePicker Style="{StaticResource ModernDatePicker}"
                                SelectedDate="{Binding StartDate}" Width="140" Margin="0,0,8,0"/>
                    <TextBlock Text="to" Foreground="#9CA3AF" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <DatePicker Style="{StaticResource ModernDatePicker}"
                                SelectedDate="{Binding EndDate}" Width="140" Margin="0,0,16,0"/>
                    <Button Style="{StaticResource ActionButton}" Command="{Binding GenerateReportCommand}"
                            Background="{StaticResource PuzzleGradient}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE72C;" FontFamily="Segoe MDL2 Assets" FontSize="14"
                                       VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Analyze Menu"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Classification Cards -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Stars -->
                <Border Grid.Column="0" Style="{StaticResource ClassificationCard}"
                        Background="#0D2818" BorderBrush="#10B981">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                            <Border Width="40" Height="40" CornerRadius="10" Margin="0,0,12,0"
                                    Background="{StaticResource StarGradient}">
                                <TextBlock Text="â­" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="STARS" FontSize="16" FontWeight="Bold" Foreground="#10B981"/>
                                <TextBlock Text="High Profit â€¢ High Sales" FontSize="11" Foreground="#6B7280"/>
                            </StackPanel>
                        </StackPanel>

                        <TextBlock Grid.Row="1" Text="{Binding Report.StarCount, StringFormat='{}{0} items', FallbackValue='0 items'}"
                                   FontSize="32" FontWeight="Bold" Foreground="White" Margin="0,0,0,4"/>
                        <TextBlock Grid.Row="2" Foreground="#9CA3AF" FontSize="12">
                            <Run Text="{Binding Report.StarPercentage, StringFormat='{}{0:N0}%'}"/>
                            <Run Text=" of menu â€¢ KES "/>
                            <Run Text="{Binding Report.StarContribution, StringFormat='{}{0:N0}'}"/>
                        </TextBlock>
                    </Grid>
                </Border>

                <!-- Plows -->
                <Border Grid.Column="2" Style="{StaticResource ClassificationCard}"
                        Background="#261A03" BorderBrush="#F59E0B">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                            <Border Width="40" Height="40" CornerRadius="10" Margin="0,0,12,0"
                                    Background="{StaticResource PlowGradient}">
                                <TextBlock Text="ðŸ´" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="PLOWS" FontSize="16" FontWeight="Bold" Foreground="#F59E0B"/>
                                <TextBlock Text="Low Profit â€¢ High Sales" FontSize="11" Foreground="#6B7280"/>
                            </StackPanel>
                        </StackPanel>

                        <TextBlock Grid.Row="1" Text="{Binding Report.PlowCount, StringFormat='{}{0} items', FallbackValue='0 items'}"
                                   FontSize="32" FontWeight="Bold" Foreground="White" Margin="0,0,0,4"/>
                        <TextBlock Grid.Row="2" Foreground="#9CA3AF" FontSize="12">
                            <Run Text="{Binding Report.PlowPercentage, StringFormat='{}{0:N0}%'}"/>
                            <Run Text=" of menu â€¢ KES "/>
                            <Run Text="{Binding Report.PlowContribution, StringFormat='{}{0:N0}'}"/>
                        </TextBlock>
                    </Grid>
                </Border>

                <!-- Puzzles -->
                <Border Grid.Column="4" Style="{StaticResource ClassificationCard}"
                        Background="#1A1026" BorderBrush="#6366F1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                            <Border Width="40" Height="40" CornerRadius="10" Margin="0,0,12,0"
                                    Background="{StaticResource PuzzleGradient}">
                                <TextBlock Text="ðŸ§©" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="PUZZLES" FontSize="16" FontWeight="Bold" Foreground="#6366F1"/>
                                <TextBlock Text="High Profit â€¢ Low Sales" FontSize="11" Foreground="#6B7280"/>
                            </StackPanel>
                        </StackPanel>

                        <TextBlock Grid.Row="1" Text="{Binding Report.PuzzleCount, StringFormat='{}{0} items', FallbackValue='0 items'}"
                                   FontSize="32" FontWeight="Bold" Foreground="White" Margin="0,0,0,4"/>
                        <TextBlock Grid.Row="2" Foreground="#9CA3AF" FontSize="12">
                            <Run Text="{Binding Report.PuzzlePercentage, StringFormat='{}{0:N0}%'}"/>
                            <Run Text=" of menu â€¢ KES "/>
                            <Run Text="{Binding Report.PuzzleContribution, StringFormat='{}{0:N0}'}"/>
                        </TextBlock>
                    </Grid>
                </Border>

                <!-- Dogs -->
                <Border Grid.Column="6" Style="{StaticResource ClassificationCard}"
                        Background="#2D1515" BorderBrush="#EF4444">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                            <Border Width="40" Height="40" CornerRadius="10" Margin="0,0,12,0"
                                    Background="{StaticResource DogGradient}">
                                <TextBlock Text="ðŸ•" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="DOGS" FontSize="16" FontWeight="Bold" Foreground="#EF4444"/>
                                <TextBlock Text="Low Profit â€¢ Low Sales" FontSize="11" Foreground="#6B7280"/>
                            </StackPanel>
                        </StackPanel>

                        <TextBlock Grid.Row="1" Text="{Binding Report.DogCount, StringFormat='{}{0} items', FallbackValue='0 items'}"
                                   FontSize="32" FontWeight="Bold" Foreground="White" Margin="0,0,0,4"/>
                        <TextBlock Grid.Row="2" Foreground="#9CA3AF" FontSize="12">
                            <Run Text="{Binding Report.DogPercentage, StringFormat='{}{0:N0}%'}"/>
                            <Run Text=" of menu â€¢ KES "/>
                            <Run Text="{Binding Report.DogContribution, StringFormat='{}{0:N0}'}"/>
                        </TextBlock>
                    </Grid>
                </Border>
            </Grid>

            <!-- Menu Matrix Visualization & Items List -->
            <Grid Grid.Row="2" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="400"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Matrix Visualization -->
                <Border Grid.Column="0" Style="{StaticResource ModernCard}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Menu Engineering Matrix" FontSize="16" FontWeight="SemiBold"
                                   Foreground="White" Margin="0,0,0,16"/>

                        <!-- Matrix Grid -->
                        <Grid Grid.Row="1" MinHeight="280">
                            <!-- Y-Axis Label -->
                            <TextBlock Text="PROFITABILITY â†’" Foreground="#6B7280" FontSize="11" FontWeight="SemiBold"
                                       HorizontalAlignment="Left" VerticalAlignment="Center"
                                       RenderTransformOrigin="0.5,0.5">
                                <TextBlock.RenderTransform>
                                    <RotateTransform Angle="-90"/>
                                </TextBlock.RenderTransform>
                            </TextBlock>

                            <!-- X-Axis Label -->
                            <TextBlock Text="POPULARITY â†’" Foreground="#6B7280" FontSize="11" FontWeight="SemiBold"
                                       HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,4"/>

                            <!-- Matrix Quadrants -->
                            <Grid Margin="30,10,10,30">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Puzzles (High Profit, Low Pop) -->
                                <Border Grid.Row="0" Grid.Column="0" Background="#1A1026" CornerRadius="8" Margin="2">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock Text="ðŸ§©" FontSize="24" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding Report.PuzzleCount, FallbackValue='0'}"
                                                   FontSize="20" FontWeight="Bold" Foreground="#6366F1" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Puzzles" FontSize="10" Foreground="#9CA3AF" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <!-- Stars (High Profit, High Pop) -->
                                <Border Grid.Row="0" Grid.Column="1" Background="#0D2818" CornerRadius="8" Margin="2">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock Text="â­" FontSize="24" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding Report.StarCount, FallbackValue='0'}"
                                                   FontSize="20" FontWeight="Bold" Foreground="#10B981" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Stars" FontSize="10" Foreground="#9CA3AF" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <!-- Dogs (Low Profit, Low Pop) -->
                                <Border Grid.Row="1" Grid.Column="0" Background="#2D1515" CornerRadius="8" Margin="2">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock Text="ðŸ•" FontSize="24" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding Report.DogCount, FallbackValue='0'}"
                                                   FontSize="20" FontWeight="Bold" Foreground="#EF4444" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Dogs" FontSize="10" Foreground="#9CA3AF" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <!-- Plows (Low Profit, High Pop) -->
                                <Border Grid.Row="1" Grid.Column="1" Background="#261A03" CornerRadius="8" Margin="2">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock Text="ðŸ´" FontSize="24" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding Report.PlowCount, FallbackValue='0'}"
                                                   FontSize="20" FontWeight="Bold" Foreground="#F59E0B" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Plows" FontSize="10" Foreground="#9CA3AF" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Items List -->
                <Border Grid.Column="2" Style="{StaticResource ModernCard}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Text="Menu Items Analysis" FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                            <TextBlock Foreground="#6B7280" FontSize="14" Margin="12,0,0,0" VerticalAlignment="Center">
                                <Run Text="("/>
                                <Run Text="{Binding Report.TotalItems, FallbackValue='0'}"/>
                                <Run Text=" items)"/>
                            </TextBlock>
                        </StackPanel>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" MaxHeight="400">
                            <ItemsControl ItemsSource="{Binding Report.Items}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#1F1F23" CornerRadius="10" Padding="12" Margin="0,0,0,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Classification Badge -->
                                                <Border Grid.Column="0" Width="36" Height="36" CornerRadius="8" Margin="0,0,12,0"
                                                        Background="{Binding ClassificationColor, Converter={StaticResource ColorToBrushConverter}, FallbackValue='#6B7280'}">
                                                    <TextBlock FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Classification}" Value="Star">
                                                                        <Setter Property="Text" Value="â­"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Classification}" Value="Plow">
                                                                        <Setter Property="Text" Value="ðŸ´"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Classification}" Value="Puzzle">
                                                                        <Setter Property="Text" Value="ðŸ§©"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Classification}" Value="Dog">
                                                                        <Setter Property="Text" Value="ðŸ•"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </Border>

                                                <!-- Product Info -->
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding ProductName}" FontSize="13" FontWeight="SemiBold" Foreground="White"/>
                                                    <TextBlock Text="{Binding CategoryName}" FontSize="11" Foreground="#6B7280"/>
                                                </StackPanel>

                                                <!-- Quantity Sold -->
                                                <StackPanel Grid.Column="2" Margin="16,0" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding QuantitySold}" FontSize="14" FontWeight="SemiBold" Foreground="White" HorizontalAlignment="Right"/>
                                                    <TextBlock Text="sold" FontSize="10" Foreground="#6B7280" HorizontalAlignment="Right"/>
                                                </StackPanel>

                                                <!-- Margin -->
                                                <StackPanel Grid.Column="3" Margin="16,0" VerticalAlignment="Center" MinWidth="80">
                                                    <TextBlock Text="{Binding ContributionMarginPercentage, StringFormat='{}{0:N1}%'}"
                                                               FontSize="14" FontWeight="SemiBold" Foreground="White" HorizontalAlignment="Right"/>
                                                    <TextBlock Text="margin" FontSize="10" Foreground="#6B7280" HorizontalAlignment="Right"/>
                                                </StackPanel>

                                                <!-- Revenue -->
                                                <StackPanel Grid.Column="4" VerticalAlignment="Center" MinWidth="100">
                                                    <TextBlock Text="{Binding TotalRevenue, StringFormat='KES {0:N0}'}"
                                                               FontSize="14" FontWeight="SemiBold" Foreground="#10B981" HorizontalAlignment="Right"/>
                                                    <TextBlock Text="revenue" FontSize="10" Foreground="#6B7280" HorizontalAlignment="Right"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>

            <!-- Recommendations -->
            <Border Grid.Row="3" Style="{StaticResource ModernCard}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <Border Width="36" Height="36" CornerRadius="8" Background="#1A1026" Margin="0,0,12,0">
                            <TextBlock Text="&#xE82F;" FontFamily="Segoe MDL2 Assets" FontSize="16"
                                       Foreground="#8B5CF6" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="AI Recommendations" FontSize="16" FontWeight="SemiBold"
                                   Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>

                    <ItemsControl ItemsSource="{Binding Report.Recommendations}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="2"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#1F1F23" CornerRadius="12" Padding="16" Margin="0,0,8,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Title}" FontSize="14" FontWeight="SemiBold"
                                                       Foreground="White" Margin="0,0,0,4"/>
                                            <TextBlock Text="{Binding ProductName}" FontSize="12"
                                                       Foreground="#6B7280" Margin="0,0,0,8"/>
                                            <TextBlock Text="{Binding Description}" FontSize="12"
                                                       Foreground="#9CA3AF" TextWrapping="Wrap"/>
                                        </StackPanel>

                                        <Border Grid.Column="1" CornerRadius="6" Padding="8,4" VerticalAlignment="Top">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#2D2D44"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Priority}" Value="1">
                                                            <Setter Property="Background" Value="#451A03"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Priority}" Value="2">
                                                            <Setter Property="Background" Value="#1A1026"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding PriorityLabel}" FontSize="11" FontWeight="SemiBold">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="#9CA3AF"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Priority}" Value="1">
                                                                <Setter Property="Foreground" Value="#F59E0B"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Priority}" Value="2">
                                                                <Setter Property="Foreground" Value="#8B5CF6"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
