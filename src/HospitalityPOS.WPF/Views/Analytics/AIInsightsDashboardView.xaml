<UserControl x:Class="HospitalityPOS.WPF.Views.Analytics.AIInsightsDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:converters="clr-namespace:HospitalityPOS.WPF.Converters"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="1600"
             Background="#0F0F1A">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility"/>

        <!-- Gradient Brushes -->
        <LinearGradientBrush x:Key="AIGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#8B5CF6" Offset="0"/>
            <GradientStop Color="#A78BFA" Offset="0.5"/>
            <GradientStop Color="#C4B5FD" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="SuccessGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#10B981" Offset="0"/>
            <GradientStop Color="#34D399" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="DangerGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#EF4444" Offset="0"/>
            <GradientStop Color="#F87171" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="WarningGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#F59E0B" Offset="0"/>
            <GradientStop Color="#FBBF24" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="InfoGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#3B82F6" Offset="0"/>
            <GradientStop Color="#60A5FA" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="CardGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#1A1A2E" Offset="0"/>
            <GradientStop Color="#16162A" Offset="1"/>
        </LinearGradientBrush>

        <!-- Card Style -->
        <Style x:Key="ModernCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardGradient}"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#2D2D44"/>
        </Style>

        <!-- Action Button Style -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Chat Input Style -->
        <Style x:Key="ChatInput" TargetType="TextBox">
            <Setter Property="Background" Value="#1F1F23"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#2D2D44"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="4,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#8B5CF6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Quick Question Button Style -->
        <Style x:Key="QuickQuestionButton" TargetType="Button">
            <Setter Property="Background" Value="#1F1F23"/>
            <Setter Property="Foreground" Value="#9CA3AF"/>
            <Setter Property="BorderBrush" Value="#2D2D44"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2D2D44"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>

        <!-- Main Content Area -->
        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
            <Grid Margin="24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Grid.Row="0" Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <Border Width="48" Height="48" CornerRadius="12" Margin="0,0,16,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#8B5CF6" Offset="0"/>
                                        <GradientStop Color="#A78BFA" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <TextBlock Text="&#xE99A;" FontFamily="Segoe MDL2 Assets" FontSize="22"
                                           Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="AI Business Intelligence" FontSize="28" FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text="Powered by advanced analytics and machine learning" FontSize="14" Foreground="#9CA3AF"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <Button Grid.Column="1" Style="{StaticResource ActionButton}"
                            Command="{Binding RefreshCommand}"
                            Background="{StaticResource AIGradient}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE72C;" FontFamily="Segoe MDL2 Assets" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Refresh Insights"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <!-- Today's Forecast Card -->
                <Border Grid.Row="1" Style="{StaticResource ModernCard}" Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Forecast -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Today's Sales Forecast" FontSize="13" Foreground="#9CA3AF" Margin="0,0,0,8"/>
                            <TextBlock FontSize="32" FontWeight="Bold" Foreground="White">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="KES {0:N0}">
                                        <Binding Path="TodayForecast.PredictedSales" FallbackValue="0"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                            <TextBlock Text="Based on historical patterns" FontSize="12" Foreground="#6B7280" Margin="0,4,0,0"/>
                        </StackPanel>

                        <!-- Current Sales -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Current Day Sales" FontSize="13" Foreground="#9CA3AF" Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding CurrentDaySales, StringFormat='KES {0:N0}'}"
                                       FontSize="32" FontWeight="Bold" Foreground="White"/>
                            <TextBlock FontSize="12" Foreground="#6B7280" Margin="0,4,0,0">
                                <Run Text="As of"/>
                                <Run Text="{Binding Source={x:Static System:DateTime.Now}, StringFormat='{}{0:HH:mm}'}"/>
                            </TextBlock>
                        </StackPanel>

                        <!-- Variance -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Forecast Variance" FontSize="13" Foreground="#9CA3AF" Margin="0,0,0,8"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding ForecastVariance, StringFormat='{}{0:+0.0;-0.0;0.0}%'}"
                                           FontSize="32" FontWeight="Bold" Foreground="{Binding VarianceBrush}"/>
                            </StackPanel>
                            <Border Background="{Binding PerformanceStatusBackground}"
                                    CornerRadius="6" Padding="10,4" HorizontalAlignment="Left" Margin="0,8,0,0">
                                <TextBlock Text="{Binding PerformanceStatus}" Foreground="{Binding PerformanceStatusColor}"
                                           FontSize="12" FontWeight="SemiBold"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Alerts Row -->
                <Grid Grid.Row="2" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Critical Alerts -->
                    <Border Grid.Column="0" Style="{StaticResource ModernCard}"
                            Visibility="{Binding HasCriticalAlerts, Converter={StaticResource BoolToVisibility}}">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#2D1515" Offset="0"/>
                                <GradientStop Color="#1F0F0F" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <Border Width="36" Height="36" CornerRadius="8" Background="#451A03" Margin="0,0,12,0">
                                    <TextBlock Text="&#xE7BA;" FontFamily="Segoe MDL2 Assets" FontSize="16"
                                               Foreground="#EF4444" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="Critical Alerts" FontSize="16" FontWeight="SemiBold" Foreground="#EF4444"/>
                                    <TextBlock Foreground="#9CA3AF" FontSize="12">
                                        <Run Text="{Binding CriticalAlertCount}"/>
                                        <Run Text=" issues require immediate attention"/>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Warning Alerts -->
                    <Border Grid.Column="2" Style="{StaticResource ModernCard}"
                            Visibility="{Binding HasWarningAlerts, Converter={StaticResource BoolToVisibility}}">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#2D2215" Offset="0"/>
                                <GradientStop Color="#1F180F" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <Border Width="36" Height="36" CornerRadius="8" Background="#451A03" Margin="0,0,12,0">
                                    <TextBlock Text="&#xE7BA;" FontFamily="Segoe MDL2 Assets" FontSize="16"
                                               Foreground="#F59E0B" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="Warnings" FontSize="16" FontWeight="SemiBold" Foreground="#F59E0B"/>
                                    <TextBlock Foreground="#9CA3AF" FontSize="12">
                                        <Run Text="{Binding WarningAlertCount}"/>
                                        <Run Text=" items need review"/>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Alerts List -->
                <Border Grid.Row="3" Style="{StaticResource ModernCard}" Margin="0,0,0,20"
                        Visibility="{Binding Alerts.Count, Converter={StaticResource BoolToVisibility}}">
                    <StackPanel>
                        <TextBlock Text="Recent Alerts" FontSize="18" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,16"/>
                        <ItemsControl ItemsSource="{Binding Alerts}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{Binding BackgroundColor}" CornerRadius="10" Padding="16" Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Grid.Column="0" Width="40" Height="40" CornerRadius="10"
                                                    Background="{Binding IconBackground}" Margin="0,0,12,0">
                                                <TextBlock Text="{Binding Icon}" FontSize="18"
                                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>

                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Title}" FontSize="14" FontWeight="SemiBold" Foreground="White"/>
                                                <TextBlock Text="{Binding Description}" FontSize="12" Foreground="#9CA3AF"
                                                           TextWrapping="Wrap" MaxWidth="400"/>
                                            </StackPanel>

                                            <Border Grid.Column="2" Background="{Binding SeverityBackground}"
                                                    CornerRadius="6" Padding="10,4" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Severity}" Foreground="{Binding SeverityColor}"
                                                           FontSize="11" FontWeight="SemiBold"/>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Business Insights -->
                <Border Grid.Row="4" Style="{StaticResource ModernCard}">
                    <StackPanel>
                        <TextBlock Text="AI-Generated Insights" FontSize="18" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,16"/>
                        <ItemsControl ItemsSource="{Binding Insights}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#1F1F23" CornerRadius="12" Padding="16" Margin="0,0,0,12">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Grid.Column="0" Width="44" Height="44" CornerRadius="10"
                                                    Background="{Binding IconBackground}" Margin="0,0,16,0">
                                                <TextBlock Text="{Binding Icon}" FontSize="20"
                                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>

                                            <StackPanel Grid.Column="1">
                                                <Grid Margin="0,0,0,8">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="{Binding Title}" FontSize="15" FontWeight="SemiBold" Foreground="White"/>
                                                    <Border Grid.Column="1" Background="{Binding ImpactBackground}"
                                                            CornerRadius="6" Padding="8,3">
                                                        <TextBlock Text="{Binding Impact}" Foreground="{Binding ImpactColor}"
                                                                   FontSize="11" FontWeight="SemiBold"/>
                                                    </Border>
                                                </Grid>
                                                <TextBlock Text="{Binding Summary}" FontSize="13" Foreground="#D1D5DB"
                                                           TextWrapping="Wrap" Margin="0,0,0,8"/>
                                                <Border Background="#2D2D44" CornerRadius="8" Padding="12,8"
                                                        Visibility="{Binding HasRecommendation, Converter={StaticResource BoolToVisibility}}">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="&#xE7C1;" FontFamily="Segoe MDL2 Assets" FontSize="12"
                                                                   Foreground="#8B5CF6" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                        <TextBlock Text="{Binding Recommendation}" FontSize="12" Foreground="#A78BFA"
                                                                   FontStyle="Italic" TextWrapping="Wrap"/>
                                                    </StackPanel>
                                                </Border>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- Right Sidebar - AI Chat & Inventory -->
        <Grid Grid.Column="1" Background="#111118">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- AI Chat Section -->
            <Border Grid.Row="0" Margin="16" Style="{StaticResource ModernCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Chat Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                        <Border Width="36" Height="36" CornerRadius="8" Margin="0,0,12,0">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#8B5CF6" Offset="0"/>
                                    <GradientStop Color="#A78BFA" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <TextBlock Text="&#xE8D4;" FontFamily="Segoe MDL2 Assets" FontSize="16"
                                       Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Ask AI Assistant" FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                            <TextBlock Text="Natural language business queries" FontSize="11" Foreground="#6B7280"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Quick Questions -->
                    <WrapPanel Grid.Row="1" Margin="0,0,0,12">
                        <Button Style="{StaticResource QuickQuestionButton}" Content="Why were sales down?"
                                Command="{Binding AskQuestionCommand}" CommandParameter="Why were sales down yesterday?"
                                Margin="0,0,8,8"/>
                        <Button Style="{StaticResource QuickQuestionButton}" Content="Top products?"
                                Command="{Binding AskQuestionCommand}" CommandParameter="What are my top selling products this week?"
                                Margin="0,0,8,8"/>
                        <Button Style="{StaticResource QuickQuestionButton}" Content="Reorder suggestions"
                                Command="{Binding AskQuestionCommand}" CommandParameter="What items should I reorder soon?"
                                Margin="0,0,8,8"/>
                    </WrapPanel>

                    <!-- Chat Messages -->
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding ChatMessages}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{Binding Background}" CornerRadius="12"
                                            Padding="12,10" Margin="0,0,0,8" MaxWidth="320"
                                            HorizontalAlignment="{Binding Alignment}">
                                        <TextBlock Text="{Binding Message}" Foreground="White"
                                                   TextWrapping="Wrap" FontSize="13"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Chat Input -->
                    <Grid Grid.Row="3" Margin="0,12,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" Style="{StaticResource ChatInput}"
                                 Text="{Binding ChatInput, UpdateSourceTrigger=PropertyChanged}"
                                 Tag="Ask anything about your business...">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Return" Command="{Binding SendMessageCommand}"/>
                            </TextBox.InputBindings>
                        </TextBox>
                        <Button Grid.Column="1" Style="{StaticResource ActionButton}"
                                Background="{StaticResource AIGradient}"
                                Command="{Binding SendMessageCommand}"
                                Margin="8,0,0,0" Padding="12,10">
                            <TextBlock Text="&#xE724;" FontFamily="Segoe MDL2 Assets" FontSize="16"/>
                        </Button>
                    </Grid>
                </Grid>
            </Border>

            <!-- Inventory Recommendations -->
            <Border Grid.Row="1" Margin="16,0,16,16" Style="{StaticResource ModernCard}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <Border Width="32" Height="32" CornerRadius="8" Background="#0D2818" Margin="0,0,10,0">
                            <TextBlock Text="&#xE7BF;" FontFamily="Segoe MDL2 Assets" FontSize="14"
                                       Foreground="#10B981" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Smart Inventory Alerts" FontSize="14" FontWeight="SemiBold"
                                   Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>

                    <ItemsControl ItemsSource="{Binding InventoryRecommendations}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#1F1F23" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding ProductName}" FontSize="13" FontWeight="SemiBold" Foreground="White"/>
                                            <TextBlock FontSize="11" Foreground="#9CA3AF" Margin="0,2,0,0">
                                                <Run Text="{Binding DaysOfStockRemaining}"/>
                                                <Run Text=" days remaining"/>
                                            </TextBlock>
                                        </StackPanel>

                                        <Border Grid.Column="1" Background="{Binding UrgencyBackground}"
                                                CornerRadius="6" Padding="8,4" VerticalAlignment="Center">
                                            <TextBlock Foreground="{Binding UrgencyColor}" FontSize="11" FontWeight="SemiBold">
                                                <Run Text="Order "/>
                                                <Run Text="{Binding RecommendedQuantity, StringFormat=N0}"/>
                                            </TextBlock>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Loading Overlay -->
        <Border Grid.ColumnSpan="2" Background="#80000000"
                Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibility}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border Width="80" Height="80" CornerRadius="16" Background="#1A1A2E" Margin="0,0,0,16">
                    <TextBlock Text="&#xE99A;" FontFamily="Segoe MDL2 Assets" FontSize="36"
                               Foreground="#8B5CF6" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock.RenderTransform>
                            <RotateTransform x:Name="LoadingRotation" CenterX="18" CenterY="18"/>
                        </TextBlock.RenderTransform>
                        <TextBlock.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetName="LoadingRotation"
                                                         Storyboard.TargetProperty="Angle"
                                                         From="0" To="360" Duration="0:0:2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>
                    </TextBlock>
                </Border>
                <TextBlock Text="{Binding StatusMessage}" FontSize="16" Foreground="White" FontWeight="SemiBold"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
