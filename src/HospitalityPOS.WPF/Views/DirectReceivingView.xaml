<UserControl x:Class="HospitalityPOS.WPF.Views.DirectReceivingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:HospitalityPOS.WPF.Converters"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1200"
             Background="#1E1E2E">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility"/>

        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="MinHeight" Value="44"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="16,8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.7"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="#4E4E6E"/>
        </Style>

        <Style x:Key="FormTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="BorderBrush" Value="#4E4E6E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          VerticalAlignment="Center"
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#6E6EAE"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="FormComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#4E4E6E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="44"/>
        </Style>

        <Style x:Key="FormLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#A0A0B0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>

        <Style x:Key="QuantityTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#353550"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="BorderBrush" Value="#4E4E6E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Width" Value="80"/>
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="SearchResultItem" TargetType="Border">
            <Setter Property="Background" Value="#353550"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4E4E6E"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="RemoveButton" TargetType="Button">
            <Setter Property="Background" Value="#F44336"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4">
                            <TextBlock Text="X"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="Back"
                    Style="{StaticResource ActionButton}"
                    Background="#4E4E6E"
                    Command="{Binding GoBackCommand}"/>

            <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="{Binding Title}"
                           FontSize="28"
                           FontWeight="SemiBold"
                           Foreground="White"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Receive goods without a purchase order"
                           FontSize="12"
                           Foreground="#8888AA"
                           HorizontalAlignment="Center"
                           Margin="0,4,0,0"/>
            </StackPanel>

            <Button Grid.Column="2"
                    Content="Refresh"
                    Style="{StaticResource ActionButton}"
                    Background="#4E4E6E"
                    Command="{Binding LoadDataCommand}"/>
        </Grid>

        <!-- Supplier and Delivery Note -->
        <Border Grid.Row="1"
                Background="#2D2D44"
                CornerRadius="12"
                Padding="20"
                Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Supplier Selection -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Supplier (Optional)" Style="{StaticResource FormLabel}"/>
                    <ComboBox Style="{StaticResource FormComboBox}"
                              ItemsSource="{Binding Suppliers}"
                              SelectedItem="{Binding SelectedSupplier}"
                              DisplayMemberPath="Name"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="Clear"
                        Style="{StaticResource ActionButton}"
                        Background="#4E4E6E"
                        MinWidth="60"
                        VerticalAlignment="Bottom"
                        Margin="8,0,0,0"
                        Command="{Binding ClearSupplierCommand}"/>

                <!-- Delivery Note -->
                <StackPanel Grid.Column="3">
                    <TextBlock Text="Delivery Note # (Optional)" Style="{StaticResource FormLabel}"/>
                    <TextBox Style="{StaticResource FormTextBox}"
                             Text="{Binding DeliveryNoteNumber, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Product Search -->
        <Border Grid.Row="2"
                Background="#2D2D44"
                CornerRadius="12"
                Padding="20"
                Margin="0,0,0,16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <TextBlock Text="Add Product" Style="{StaticResource FormLabel}"/>
                    <TextBox Style="{StaticResource FormTextBox}"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged, Delay=300}"/>
                </StackPanel>

                <!-- Search Results Popup -->
                <Border Grid.Row="1"
                        Background="#353550"
                        CornerRadius="8"
                        Margin="0,8,0,0"
                        MaxHeight="300"
                        Visibility="{Binding ShowSearchResults, Converter={StaticResource BoolToVisibility}}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding SearchResults}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource SearchResultItem}"
                                            BorderBrush="#4E4E6E"
                                            BorderThickness="0,0,0,1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Name}"
                                                           FontWeight="SemiBold"
                                                           Foreground="White"
                                                           FontSize="14"/>
                                                <TextBlock Text="{Binding Code}"
                                                           FontSize="12"
                                                           Foreground="#8888AA"/>
                                            </StackPanel>

                                            <TextBlock Grid.Column="1"
                                                       VerticalAlignment="Center"
                                                       Foreground="#8888AA"
                                                       Margin="16,0">
                                                <Run Text="Stock: "/>
                                                <Run Text="{Binding Inventory.CurrentStock, StringFormat='{}{0:N0}', FallbackValue='0'}"/>
                                            </TextBlock>

                                            <Button Grid.Column="2"
                                                    Content="+ Add"
                                                    Style="{StaticResource ActionButton}"
                                                    Background="#4CAF50"
                                                    MinWidth="70"
                                                    MinHeight="36"
                                                    Command="{Binding DataContext.AddProductCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                    CommandParameter="{Binding}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Border>

        <!-- Items Grid -->
        <Border Grid.Row="3"
                Background="#2D2D44"
                CornerRadius="12"
                Padding="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Items to Receive"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="White"
                           Margin="20,16,20,8"/>

                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding Items}"
                          AutoGenerateColumns="False"
                          Background="Transparent"
                          BorderThickness="0"
                          RowBackground="#2D2D44"
                          AlternatingRowBackground="#353550"
                          Foreground="White"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="#3E3E5E"
                          HeadersVisibility="Column"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          SelectionMode="Single"
                          SelectionUnit="FullRow"
                          RowHeight="52"
                          FontSize="14">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#252538"/>
                            <Setter Property="Foreground" Value="#A0A0B0"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="FontSize" Value="13"/>
                            <Setter Property="Padding" Value="16,12"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="#3E3E5E"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="16,8"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.CellStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Code" Binding="{Binding ProductCode}" Width="100" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Product" Binding="{Binding ProductName}" Width="*" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Current Stock" Width="100" IsReadOnly="True">
                            <DataGridTextColumn.Binding>
                                <Binding Path="CurrentStock" StringFormat="{}{0:N0}"/>
                            </DataGridTextColumn.Binding>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Unit" Binding="{Binding UnitOfMeasure}" Width="80" IsReadOnly="True"/>
                        <DataGridTemplateColumn Header="Quantity" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Style="{StaticResource QuantityTextBox}"
                                             Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged, StringFormat=N0}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Unit Cost" Width="110">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Style="{StaticResource QuantityTextBox}"
                                             Text="{Binding UnitCost, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Total" Width="120" IsReadOnly="True">
                            <DataGridTextColumn.Binding>
                                <Binding Path="TotalCost" StringFormat="KSh {0:N2}"/>
                            </DataGridTextColumn.Binding>
                        </DataGridTextColumn>
                        <DataGridTemplateColumn Header="" Width="50">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Style="{StaticResource RemoveButton}"
                                            Command="{Binding DataContext.RemoveItemCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Empty State -->
                <StackPanel Grid.Row="1"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Visibility="{Binding ItemCount, Converter={StaticResource InverseBoolToVisibility}}">
                    <TextBlock Text="No items added"
                               FontSize="16"
                               Foreground="#8888AA"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Search for products above to add them"
                               FontSize="12"
                               Foreground="#555577"
                               HorizontalAlignment="Center"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Notes Section -->
        <Border Grid.Row="4"
                Background="#2D2D44"
                CornerRadius="12"
                Padding="20"
                Margin="0,16,0,0">
            <StackPanel>
                <TextBlock Text="Notes" Style="{StaticResource FormLabel}"/>
                <TextBox Style="{StaticResource FormTextBox}"
                         Height="60"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalContentAlignment="Top"
                         Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
        </Border>

        <!-- Footer -->
        <Border Grid.Row="5"
                Background="#252538"
                CornerRadius="12"
                Padding="20"
                Margin="0,16,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Total Items: " Foreground="#8888AA" FontSize="14"/>
                    <TextBlock Text="{Binding ItemCount}" Foreground="White" FontSize="14" FontWeight="SemiBold"/>
                    <TextBlock Text="     Total Value: " Foreground="#8888AA" FontSize="14" Margin="20,0,0,0"/>
                    <TextBlock Foreground="#4CAF50" FontSize="18" FontWeight="Bold">
                        <TextBlock.Text>
                            <Binding Path="TotalAmount" StringFormat="KSh {0:N2}"/>
                        </TextBlock.Text>
                    </TextBlock>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="Cancel"
                        Style="{StaticResource ActionButton}"
                        Background="#4E4E6E"
                        Command="{Binding GoBackCommand}"
                        Margin="0,0,8,0"/>

                <Button Grid.Column="2"
                        Content="Receive and Update Stock"
                        Style="{StaticResource ActionButton}"
                        Background="#4CAF50"
                        MinWidth="200"
                        Command="{Binding ReceiveGoodsCommand}"/>
            </Grid>
        </Border>

        <!-- Loading Indicator -->
        <Border Grid.Row="0" Grid.RowSpan="6"
                Background="#80000000"
                CornerRadius="12"
                Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibility}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True"
                             Width="200"
                             Height="4"
                             Foreground="#4CAF50"/>
                <TextBlock Text="{Binding BusyMessage}"
                           Foreground="White"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Margin="0,16,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
