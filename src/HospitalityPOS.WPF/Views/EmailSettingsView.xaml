<UserControl x:Class="HospitalityPOS.WPF.Views.EmailSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:HospitalityPOS.WPF.Converters"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="1400"
             Background="#1E1E2E">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility"/>
        <converters:StringEqualsToVisibilityConverter x:Key="StringEqualsToVisibility"/>

        <!-- Tab Button Style -->
        <Style x:Key="TabButton" TargetType="Button">
            <Setter Property="MinHeight" Value="44"/>
            <Setter Property="MinWidth" Value="140"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#3D3D5C"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8,8,0,0"
                                Padding="20,12">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4E4E6E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActiveTabButton" TargetType="Button" BasedOn="{StaticResource TabButton}">
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="Foreground" Value="#22C55E"/>
        </Style>

        <!-- Action Button Style -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="MinHeight" Value="44"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="16,8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.7"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="#4E4E6E"/>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="SettingsTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#3D3D5C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="BorderBrush" Value="#4E4E6E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          VerticalAlignment="Center"
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#22C55E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- PasswordBox Style -->
        <Style x:Key="SettingsPasswordBox" TargetType="PasswordBox">
            <Setter Property="Background" Value="#3D3D5C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="BorderBrush" Value="#4E4E6E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="SettingsComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#3D3D5C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#4E4E6E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="44"/>
        </Style>

        <!-- CheckBox Style -->
        <Style x:Key="SettingsCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border x:Name="checkBorder"
                                    Width="24" Height="24"
                                    Background="#3D3D5C"
                                    BorderBrush="#4E4E6E"
                                    BorderThickness="2"
                                    CornerRadius="4"
                                    VerticalAlignment="Center">
                                <TextBlock x:Name="checkMark"
                                           Text="&#x2713;"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Foreground="White"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Visibility="Collapsed"/>
                            </Border>
                            <ContentPresenter Grid.Column="1"
                                              Margin="12,0,0,0"
                                              VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="checkBorder" Property="Background" Value="#22C55E"/>
                                <Setter TargetName="checkBorder" Property="BorderBrush" Value="#16A34A"/>
                                <Setter TargetName="checkMark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="checkBorder" Property="BorderBrush" Value="#6E6EAE"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGrid Style -->
        <Style x:Key="SettingsDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#3D3D5C"/>
            <Setter Property="RowBackground" Value="Transparent"/>
            <Setter Property="AlternatingRowBackground" Value="#2D2D44"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#3D3D5C"/>
            <Setter Property="Foreground" Value="#22C55E"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#4E4E6E"/>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#3D3D5C"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGridRow">
            <Setter Property="MinHeight" Value="44"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#3D3D5C"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#353550"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="EMAIL SETTINGS"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#22C55E"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Tab Navigation -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,0">
            <Button Content="Configuration"
                    Command="{Binding SelectTabCommand}"
                    CommandParameter="Configuration">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource TabButton}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedTab}" Value="Configuration">
                                <Setter Property="Background" Value="#2D2D44"/>
                                <Setter Property="Foreground" Value="#22C55E"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="Recipients"
                    Command="{Binding SelectTabCommand}"
                    CommandParameter="Recipients">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource TabButton}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedTab}" Value="Recipients">
                                <Setter Property="Background" Value="#2D2D44"/>
                                <Setter Property="Foreground" Value="#22C55E"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="Schedules"
                    Command="{Binding SelectTabCommand}"
                    CommandParameter="Schedules">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource TabButton}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedTab}" Value="Schedules">
                                <Setter Property="Background" Value="#2D2D44"/>
                                <Setter Property="Foreground" Value="#22C55E"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="Alerts"
                    Command="{Binding SelectTabCommand}"
                    CommandParameter="Alerts">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource TabButton}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedTab}" Value="Alerts">
                                <Setter Property="Background" Value="#2D2D44"/>
                                <Setter Property="Foreground" Value="#22C55E"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="Logs"
                    Command="{Binding SelectTabCommand}"
                    CommandParameter="Logs">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource TabButton}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedTab}" Value="Logs">
                                <Setter Property="Background" Value="#2D2D44"/>
                                <Setter Property="Foreground" Value="#22C55E"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>

        <!-- Content Area -->
        <Border Grid.Row="2" Background="#2D2D44" CornerRadius="0,12,12,12" Padding="24">
            <Grid>
                <!-- Configuration Tab -->
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              Visibility="{Binding SelectedTab, Converter={StaticResource StringEqualsToVisibility}, ConverterParameter=Configuration}">
                    <StackPanel MaxWidth="800">
                        <!-- SMTP Server Settings -->
                        <TextBlock Text="SMTP SERVER SETTINGS"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="#22C55E"
                                   Margin="0,0,0,16"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="SMTP Host"
                                           Foreground="#9CA3AF"
                                           FontSize="12"
                                           Margin="0,0,0,6"/>
                                <TextBox Text="{Binding SmtpHost, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource SettingsTextBox}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Port"
                                           Foreground="#9CA3AF"
                                           FontSize="12"
                                           Margin="0,0,0,6"/>
                                <TextBox Text="{Binding SmtpPort, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource SettingsTextBox}"/>
                            </StackPanel>
                        </Grid>

                        <Grid Margin="0,16,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Username"
                                           Foreground="#9CA3AF"
                                           FontSize="12"
                                           Margin="0,0,0,6"/>
                                <TextBox Text="{Binding SmtpUsername, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource SettingsTextBox}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Password"
                                           Foreground="#9CA3AF"
                                           FontSize="12"
                                           Margin="0,0,0,6"/>
                                <PasswordBox x:Name="SmtpPasswordBox"
                                             Style="{StaticResource SettingsPasswordBox}"/>
                            </StackPanel>
                        </Grid>

                        <!-- Security Options -->
                        <TextBlock Text="SECURITY OPTIONS"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="#22C55E"
                                   Margin="0,24,0,16"/>

                        <StackPanel Orientation="Horizontal">
                            <CheckBox Content="Use SSL/TLS"
                                      Style="{StaticResource SettingsCheckBox}"
                                      IsChecked="{Binding UseSsl}"
                                      Margin="0,0,24,0"/>
                            <CheckBox Content="Use STARTTLS"
                                      Style="{StaticResource SettingsCheckBox}"
                                      IsChecked="{Binding UseStartTls}"/>
                        </StackPanel>

                        <!-- Sender Information -->
                        <TextBlock Text="SENDER INFORMATION"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="#22C55E"
                                   Margin="0,24,0,16"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="From Email"
                                           Foreground="#9CA3AF"
                                           FontSize="12"
                                           Margin="0,0,0,6"/>
                                <TextBox Text="{Binding FromEmail, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource SettingsTextBox}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="From Name"
                                           Foreground="#9CA3AF"
                                           FontSize="12"
                                           Margin="0,0,0,6"/>
                                <TextBox Text="{Binding FromName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource SettingsTextBox}"/>
                            </StackPanel>
                        </Grid>

                        <!-- Advanced Settings -->
                        <TextBlock Text="ADVANCED SETTINGS"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="#22C55E"
                                   Margin="0,24,0,16"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Timeout (seconds)"
                                           Foreground="#9CA3AF"
                                           FontSize="12"
                                           Margin="0,0,0,6"/>
                                <TextBox Text="{Binding TimeoutSeconds, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource SettingsTextBox}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Max Retry Attempts"
                                           Foreground="#9CA3AF"
                                           FontSize="12"
                                           Margin="0,0,0,6"/>
                                <TextBox Text="{Binding MaxRetryAttempts, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource SettingsTextBox}"/>
                            </StackPanel>
                        </Grid>

                        <CheckBox Content="Enable Email Sending"
                                  Style="{StaticResource SettingsCheckBox}"
                                  IsChecked="{Binding IsSmtpEnabled}"
                                  Margin="0,16,0,0"/>

                        <!-- Status Message -->
                        <Border CornerRadius="8"
                                Padding="16,12"
                                Margin="0,24,0,0"
                                Visibility="{Binding HasStatusMessage, Converter={StaticResource BoolToVisibility}}">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="#374151"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsStatusSuccess}" Value="True">
                                            <Setter Property="Background" Value="#166534"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsStatusSuccess}" Value="False">
                                            <Setter Property="Background" Value="#991B1B"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <TextBlock Text="{Binding StatusMessage}"
                                       Foreground="White"
                                       FontSize="14"
                                       TextWrapping="Wrap"/>
                        </Border>

                        <!-- Action Buttons -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,24,0,0">
                            <Button Content="Test Connection"
                                    Style="{StaticResource ActionButton}"
                                    Background="#6366F1"
                                    Command="{Binding TestConnectionCommand}"/>
                            <Button Content="Send Test Email"
                                    Style="{StaticResource ActionButton}"
                                    Background="#0891B2"
                                    Command="{Binding SendTestEmailCommand}"/>
                            <Button Content="Save Configuration"
                                    Style="{StaticResource ActionButton}"
                                    Background="#22C55E"
                                    Command="{Binding SaveConfigurationCommand}"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>

                <!-- Recipients Tab -->
                <Grid Visibility="{Binding SelectedTab, Converter={StaticResource StringEqualsToVisibility}, ConverterParameter=Recipients}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Add Recipient Form -->
                    <Border Grid.Row="0" Background="#3D3D5C" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="ADD NEW RECIPIENT"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="#22C55E"
                                       Margin="0,0,0,16"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Email Address"
                                               Foreground="#9CA3AF"
                                               FontSize="12"
                                               Margin="0,0,0,6"/>
                                    <TextBox Text="{Binding NewRecipientEmail, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource SettingsTextBox}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Name (Optional)"
                                               Foreground="#9CA3AF"
                                               FontSize="12"
                                               Margin="0,0,0,6"/>
                                    <TextBox Text="{Binding NewRecipientName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource SettingsTextBox}"/>
                                </StackPanel>
                            </Grid>

                            <TextBlock Text="Report Subscriptions"
                                       Foreground="#9CA3AF"
                                       FontSize="12"
                                       Margin="0,16,0,8"/>

                            <WrapPanel>
                                <CheckBox Content="Daily Sales"
                                          Style="{StaticResource SettingsCheckBox}"
                                          IsChecked="{Binding NewRecipientDailySales}"
                                          Margin="0,0,24,0"/>
                                <CheckBox Content="Weekly Report"
                                          Style="{StaticResource SettingsCheckBox}"
                                          IsChecked="{Binding NewRecipientWeeklyReport}"
                                          Margin="0,0,24,0"/>
                                <CheckBox Content="Low Stock Alert"
                                          Style="{StaticResource SettingsCheckBox}"
                                          IsChecked="{Binding NewRecipientLowStock}"
                                          Margin="0,0,24,0"/>
                                <CheckBox Content="Expiry Alert"
                                          Style="{StaticResource SettingsCheckBox}"
                                          IsChecked="{Binding NewRecipientExpiry}"
                                          Margin="0,0,24,0"/>
                                <CheckBox Content="CC"
                                          Style="{StaticResource SettingsCheckBox}"
                                          IsChecked="{Binding NewRecipientIsCc}"
                                          Margin="0,0,24,0"/>
                                <CheckBox Content="BCC"
                                          Style="{StaticResource SettingsCheckBox}"
                                          IsChecked="{Binding NewRecipientIsBcc}"/>
                            </WrapPanel>

                            <Button Content="Add Recipient"
                                    Style="{StaticResource ActionButton}"
                                    Background="#22C55E"
                                    HorizontalAlignment="Right"
                                    Margin="0,16,0,0"
                                    Command="{Binding AddRecipientCommand}"/>
                        </StackPanel>
                    </Border>

                    <!-- Recipients Grid -->
                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding Recipients}"
                              SelectedItem="{Binding SelectedRecipient, Mode=TwoWay}"
                              Style="{StaticResource SettingsDataGrid}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="2*"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                            <DataGridCheckBoxColumn Header="Daily" Binding="{Binding ReceivesDailySales, Mode=TwoWay}" Width="60"/>
                            <DataGridCheckBoxColumn Header="Weekly" Binding="{Binding ReceivesWeeklyReport, Mode=TwoWay}" Width="60"/>
                            <DataGridCheckBoxColumn Header="Low Stock" Binding="{Binding ReceivesLowStockAlert, Mode=TwoWay}" Width="80"/>
                            <DataGridCheckBoxColumn Header="Expiry" Binding="{Binding ReceivesExpiryAlert, Mode=TwoWay}" Width="60"/>
                            <DataGridCheckBoxColumn Header="CC" Binding="{Binding IsCc, Mode=TwoWay}" Width="50"/>
                            <DataGridCheckBoxColumn Header="BCC" Binding="{Binding IsBcc, Mode=TwoWay}" Width="50"/>
                            <DataGridCheckBoxColumn Header="Active" Binding="{Binding IsActive, Mode=TwoWay}" Width="60"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Recipient Actions -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                        <Button Content="Update Selected"
                                Style="{StaticResource ActionButton}"
                                Background="#3B82F6"
                                Command="{Binding UpdateRecipientCommand}"/>
                        <Button Content="Delete Selected"
                                Style="{StaticResource ActionButton}"
                                Background="#EF4444"
                                Command="{Binding DeleteRecipientCommand}"/>
                    </StackPanel>
                </Grid>

                <!-- Schedules Tab -->
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              Visibility="{Binding SelectedTab, Converter={StaticResource StringEqualsToVisibility}, ConverterParameter=Schedules}">
                    <StackPanel MaxWidth="800">
                        <!-- Timezone Selection -->
                        <TextBlock Text="TIMEZONE"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="#22C55E"
                                   Margin="0,0,0,16"/>

                        <StackPanel>
                            <TextBlock Text="Schedule Timezone"
                                       Foreground="#9CA3AF"
                                       FontSize="12"
                                       Margin="0,0,0,6"/>
                            <ComboBox ItemsSource="{Binding AvailableTimezones}"
                                      SelectedValue="{Binding SelectedTimezone, Mode=TwoWay}"
                                      Style="{StaticResource SettingsComboBox}"
                                      Width="300"
                                      HorizontalAlignment="Left"/>
                        </StackPanel>

                        <!-- Daily Sales Report -->
                        <TextBlock Text="DAILY SALES REPORT"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="#22C55E"
                                   Margin="0,24,0,16"/>

                        <Border Background="#3D3D5C" CornerRadius="8" Padding="16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <CheckBox Grid.Column="0"
                                          Content="Enable Daily Sales Report"
                                          Style="{StaticResource SettingsCheckBox}"
                                          IsChecked="{Binding DailySalesEnabled}"
                                          VerticalAlignment="Center"/>

                                <StackPanel Grid.Column="2" Orientation="Horizontal">
                                    <TextBlock Text="Send at:"
                                               Foreground="#9CA3AF"
                                               FontSize="14"
                                               VerticalAlignment="Center"
                                               Margin="0,0,12,0"/>
                                    <TextBox Text="{Binding DailySalesTime, StringFormat={}{0:hh\\:mm}}"
                                             Style="{StaticResource SettingsTextBox}"
                                             Width="100"/>
                                    <Button Content="Send Now"
                                            Style="{StaticResource ActionButton}"
                                            Background="#6366F1"
                                            Margin="16,0,0,0"
                                            Command="{Binding TriggerDailySalesReportCommand}"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Weekly Report -->
                        <TextBlock Text="WEEKLY REPORT"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="#22C55E"
                                   Margin="0,24,0,16"/>

                        <Border Background="#3D3D5C" CornerRadius="8" Padding="16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <CheckBox Grid.Column="0"
                                          Content="Enable Weekly Report"
                                          Style="{StaticResource SettingsCheckBox}"
                                          IsChecked="{Binding WeeklySalesEnabled}"
                                          VerticalAlignment="Center"/>

                                <StackPanel Grid.Column="2" Orientation="Horizontal">
                                    <TextBlock Text="Day:"
                                               Foreground="#9CA3AF"
                                               FontSize="14"
                                               VerticalAlignment="Center"
                                               Margin="0,0,12,0"/>
                                    <ComboBox ItemsSource="{Binding DaysOfWeek}"
                                              SelectedValue="{Binding WeeklySalesDay, Mode=TwoWay}"
                                              Style="{StaticResource SettingsComboBox}"
                                              Width="120"/>
                                    <TextBlock Text="at:"
                                               Foreground="#9CA3AF"
                                               FontSize="14"
                                               VerticalAlignment="Center"
                                               Margin="12,0,12,0"/>
                                    <TextBox Text="{Binding WeeklySalesTime, StringFormat={}{0:hh\\:mm}}"
                                             Style="{StaticResource SettingsTextBox}"
                                             Width="100"/>
                                    <Button Content="Send Now"
                                            Style="{StaticResource ActionButton}"
                                            Background="#6366F1"
                                            Margin="16,0,0,0"
                                            Command="{Binding TriggerWeeklyReportCommand}"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Low Stock Alert -->
                        <TextBlock Text="LOW STOCK ALERT"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="#22C55E"
                                   Margin="0,24,0,16"/>

                        <Border Background="#3D3D5C" CornerRadius="8" Padding="16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <CheckBox Grid.Column="0"
                                          Content="Enable Low Stock Alert"
                                          Style="{StaticResource SettingsCheckBox}"
                                          IsChecked="{Binding LowStockAlertEnabled}"
                                          VerticalAlignment="Center"/>

                                <StackPanel Grid.Column="2" Orientation="Horizontal">
                                    <TextBlock Text="Check at:"
                                               Foreground="#9CA3AF"
                                               FontSize="14"
                                               VerticalAlignment="Center"
                                               Margin="0,0,12,0"/>
                                    <TextBox Text="{Binding LowStockAlertTime, StringFormat={}{0:hh\\:mm}}"
                                             Style="{StaticResource SettingsTextBox}"
                                             Width="100"/>
                                    <Button Content="Send Now"
                                            Style="{StaticResource ActionButton}"
                                            Background="#F59E0B"
                                            Margin="16,0,0,0"
                                            Command="{Binding TriggerLowStockAlertCommand}"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Expiry Alert -->
                        <TextBlock Text="EXPIRY ALERT"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="#22C55E"
                                   Margin="0,24,0,16"/>

                        <Border Background="#3D3D5C" CornerRadius="8" Padding="16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <CheckBox Grid.Column="0"
                                          Content="Enable Expiry Alert"
                                          Style="{StaticResource SettingsCheckBox}"
                                          IsChecked="{Binding ExpiryAlertEnabled}"
                                          VerticalAlignment="Center"/>

                                <StackPanel Grid.Column="2" Orientation="Horizontal">
                                    <TextBlock Text="Check at:"
                                               Foreground="#9CA3AF"
                                               FontSize="14"
                                               VerticalAlignment="Center"
                                               Margin="0,0,12,0"/>
                                    <TextBox Text="{Binding ExpiryAlertTime, StringFormat={}{0:hh\\:mm}}"
                                             Style="{StaticResource SettingsTextBox}"
                                             Width="100"/>
                                    <Button Content="Send Now"
                                            Style="{StaticResource ActionButton}"
                                            Background="#F59E0B"
                                            Margin="16,0,0,0"
                                            Command="{Binding TriggerExpiryAlertCommand}"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Save Schedules Button -->
                        <Button Content="Save All Schedules"
                                Style="{StaticResource ActionButton}"
                                Background="#22C55E"
                                HorizontalAlignment="Right"
                                Margin="0,24,0,0"
                                Command="{Binding SaveSchedulesCommand}"/>
                    </StackPanel>
                </ScrollViewer>

                <!-- Alerts Tab -->
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              Visibility="{Binding SelectedTab, Converter={StaticResource StringEqualsToVisibility}, ConverterParameter=Alerts}">
                    <StackPanel MaxWidth="800">
                        <!-- Low Stock Alert Configuration -->
                        <TextBlock Text="LOW STOCK ALERT CONFIGURATION"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="#22C55E"
                                   Margin="0,0,0,16"/>

                        <Border Background="#3D3D5C" CornerRadius="8" Padding="16">
                            <StackPanel>
                                <TextBlock Text="Alert when stock quantity falls below:"
                                           Foreground="#9CA3AF"
                                           FontSize="14"
                                           Margin="0,0,0,8"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBox Text="{Binding LowStockThreshold, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource SettingsTextBox}"
                                             Width="100"/>
                                    <TextBlock Text="units"
                                               Foreground="White"
                                               FontSize="14"
                                               VerticalAlignment="Center"
                                               Margin="12,0,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Expiry Alert Configuration -->
                        <TextBlock Text="EXPIRY ALERT CONFIGURATION"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="#22C55E"
                                   Margin="0,24,0,16"/>

                        <Border Background="#3D3D5C" CornerRadius="8" Padding="16">
                            <StackPanel>
                                <TextBlock Text="Alert for items expiring within:"
                                           Foreground="#9CA3AF"
                                           FontSize="14"
                                           Margin="0,0,0,8"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBox Text="{Binding ExpiryDaysThreshold, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource SettingsTextBox}"
                                             Width="100"/>
                                    <TextBlock Text="days"
                                               Foreground="White"
                                               FontSize="14"
                                               VerticalAlignment="Center"
                                               Margin="12,0,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Save Alert Configs Button -->
                        <Button Content="Save Alert Configurations"
                                Style="{StaticResource ActionButton}"
                                Background="#22C55E"
                                HorizontalAlignment="Right"
                                Margin="0,24,0,0"
                                Command="{Binding SaveAlertConfigsCommand}"/>
                    </StackPanel>
                </ScrollViewer>

                <!-- Logs Tab -->
                <Grid Visibility="{Binding SelectedTab, Converter={StaticResource StringEqualsToVisibility}, ConverterParameter=Logs}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Log Actions -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                        <Button Content="Refresh"
                                Style="{StaticResource ActionButton}"
                                Background="#3B82F6"
                                Command="{Binding RefreshLogsCommand}"/>
                        <Button Content="Retry Selected"
                                Style="{StaticResource ActionButton}"
                                Background="#F59E0B"
                                Command="{Binding RetryEmailCommand}"/>
                    </StackPanel>

                    <!-- Logs Grid -->
                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding EmailLogs}"
                              SelectedItem="{Binding SelectedLog, Mode=TwoWay}"
                              Style="{StaticResource SettingsDataGrid}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date" Binding="{Binding SentAt, StringFormat={}{0:g}}" Width="140"/>
                            <DataGridTextColumn Header="To" Binding="{Binding ToAddresses}" Width="200"/>
                            <DataGridTextColumn Header="Subject" Binding="{Binding Subject}" Width="*"/>
                            <DataGridTextColumn Header="Report Type" Binding="{Binding ReportType}" Width="100"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="80"/>
                            <DataGridTextColumn Header="Attempts" Binding="{Binding AttemptCount}" Width="70"/>
                            <DataGridTextColumn Header="Error" Binding="{Binding ErrorMessage}" Width="200"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Pagination -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,16,0,0">
                        <Button Content="&lt; Previous"
                                Style="{StaticResource ActionButton}"
                                Background="#4E4E6E"
                                Command="{Binding PreviousPageCommand}"/>
                        <TextBlock Foreground="White"
                                   FontSize="14"
                                   VerticalAlignment="Center"
                                   Margin="16,0">
                            <Run Text="Page "/>
                            <Run Text="{Binding LogPageNumber}"/>
                            <Run Text=" of "/>
                            <Run Text="{Binding TotalLogCount}"/>
                            <Run Text=" records"/>
                        </TextBlock>
                        <Button Content="Next &gt;"
                                Style="{StaticResource ActionButton}"
                                Background="#4E4E6E"
                                Command="{Binding NextPageCommand}"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="3"
                Background="#80000000"
                CornerRadius="12"
                Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibility}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True"
                             Width="200"
                             Height="4"
                             Foreground="#22C55E"/>
                <TextBlock Text="{Binding BusyMessage}"
                           Foreground="White"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Margin="0,16,0,0"/>
            </StackPanel>
        </Border>

        <!-- Testing Overlay -->
        <Border Grid.RowSpan="3"
                Background="#80000000"
                CornerRadius="12"
                Visibility="{Binding IsTesting, Converter={StaticResource BoolToVisibility}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True"
                             Width="200"
                             Height="4"
                             Foreground="#6366F1"/>
                <TextBlock Text="Testing connection..."
                           Foreground="White"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Margin="0,16,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
