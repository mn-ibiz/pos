<UserControl x:Class="HospitalityPOS.WPF.Views.UserEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:HospitalityPOS.WPF.ViewModels"
             xmlns:converters="clr-namespace:HospitalityPOS.WPF.Converters"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1000"
             Background="#1E1E2E">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter" />
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisConverter" />

        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#3D3D5C" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#4A4A6A" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="12,10" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Height" Value="48" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>

        <Style x:Key="InputPasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Background" Value="#3D3D5C" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#4A4A6A" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="12,10" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Height" Value="48" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#AAAACC" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Margin" Value="0,0,0,8" />
        </Style>

        <Style x:Key="ErrorTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FF6B6B" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Margin" Value="0,4,0,0" />
        </Style>
    </UserControl.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="â† Cancel"
                    Command="{Binding CancelCommand}"
                    Background="#3D3D5C"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="16,12"
                    FontSize="14"
                    Cursor="Hand" />

            <TextBlock Grid.Column="1"
                       Text="{Binding Title}"
                       FontSize="28"
                       FontWeight="SemiBold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />
        </Grid>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="24" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Left Panel - User Details -->
                <Border Grid.Column="0"
                        Background="#2D2D44"
                        CornerRadius="12"
                        Padding="24">
                    <StackPanel>
                        <TextBlock Text="User Details"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   Margin="0,0,0,24" />

                        <!-- Username -->
                        <StackPanel Margin="0,0,0,16"
                                    Visibility="{Binding IsEditMode, Converter={StaticResource InverseBoolToVisConverter}}">
                            <TextBlock Text="Username *" Style="{StaticResource LabelStyle}" />
                            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource InputTextBoxStyle}" />
                            <TextBlock Text="{Binding UsernameError}"
                                       Style="{StaticResource ErrorTextStyle}"
                                       Visibility="{Binding UsernameError, Converter={StaticResource BoolToVisConverter}}" />
                        </StackPanel>

                        <!-- Username (Edit Mode - Read Only) -->
                        <StackPanel Margin="0,0,0,16"
                                    Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisConverter}}">
                            <TextBlock Text="Username" Style="{StaticResource LabelStyle}" />
                            <TextBox Text="{Binding Username}"
                                     Style="{StaticResource InputTextBoxStyle}"
                                     IsReadOnly="True"
                                     Opacity="0.6" />
                        </StackPanel>

                        <!-- Password (New User Only) -->
                        <StackPanel Margin="0,0,0,16"
                                    Visibility="{Binding IsEditMode, Converter={StaticResource InverseBoolToVisConverter}}">
                            <TextBlock Text="Password *" Style="{StaticResource LabelStyle}" />
                            <PasswordBox x:Name="PasswordBox"
                                         Style="{StaticResource InputPasswordBoxStyle}"
                                         PasswordChanged="PasswordBox_PasswordChanged" />
                            <TextBlock Text="{Binding PasswordError}"
                                       Style="{StaticResource ErrorTextStyle}"
                                       Visibility="{Binding PasswordError, Converter={StaticResource BoolToVisConverter}}" />
                        </StackPanel>

                        <!-- Confirm Password (New User Only) -->
                        <StackPanel Margin="0,0,0,16"
                                    Visibility="{Binding IsEditMode, Converter={StaticResource InverseBoolToVisConverter}}">
                            <TextBlock Text="Confirm Password *" Style="{StaticResource LabelStyle}" />
                            <PasswordBox x:Name="ConfirmPasswordBox"
                                         Style="{StaticResource InputPasswordBoxStyle}"
                                         PasswordChanged="ConfirmPasswordBox_PasswordChanged" />
                        </StackPanel>

                        <!-- Full Name -->
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Full Name *" Style="{StaticResource LabelStyle}" />
                            <TextBox Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource InputTextBoxStyle}" />
                            <TextBlock Text="{Binding FullNameError}"
                                       Style="{StaticResource ErrorTextStyle}"
                                       Visibility="{Binding FullNameError, Converter={StaticResource BoolToVisConverter}}" />
                        </StackPanel>

                        <!-- Email -->
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Email" Style="{StaticResource LabelStyle}" />
                            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource InputTextBoxStyle}" />
                        </StackPanel>

                        <!-- Phone -->
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Phone" Style="{StaticResource LabelStyle}" />
                            <TextBox Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource InputTextBoxStyle}" />
                        </StackPanel>

                        <!-- PIN -->
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="PIN (4-6 digits)" Style="{StaticResource LabelStyle}" />
                            <PasswordBox x:Name="PinBox"
                                         Style="{StaticResource InputPasswordBoxStyle}"
                                         MaxLength="6"
                                         PasswordChanged="PinBox_PasswordChanged" />
                            <TextBlock Text="{Binding PinError}"
                                       Style="{StaticResource ErrorTextStyle}"
                                       Visibility="{Binding PinError, Converter={StaticResource BoolToVisConverter}}" />
                        </StackPanel>

                        <!-- Active Status -->
                        <StackPanel Margin="0,0,0,16">
                            <CheckBox IsChecked="{Binding IsActive}"
                                      Foreground="White"
                                      FontSize="16">
                                <CheckBox.Content>
                                    <TextBlock Text="Active" Foreground="White" />
                                </CheckBox.Content>
                            </CheckBox>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Right Panel - Roles -->
                <Border Grid.Column="2"
                        Background="#2D2D44"
                        CornerRadius="12"
                        Padding="24">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Text="Roles *"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   Margin="0,0,0,16" />

                        <!-- Quick Actions -->
                        <StackPanel Grid.Row="1"
                                    Orientation="Horizontal"
                                    Margin="0,0,0,16">
                            <Button Content="Select All"
                                    Command="{Binding SelectAllRolesCommand}"
                                    Background="#3D3D5C"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Padding="12,8"
                                    FontSize="12"
                                    Cursor="Hand"
                                    Margin="0,0,8,0" />
                            <Button Content="Deselect All"
                                    Command="{Binding DeselectAllRolesCommand}"
                                    Background="#3D3D5C"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Padding="12,8"
                                    FontSize="12"
                                    Cursor="Hand" />
                        </StackPanel>

                        <!-- Role List -->
                        <ScrollViewer Grid.Row="2"
                                      VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding Roles}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#3D3D5C"
                                                CornerRadius="8"
                                                Padding="16"
                                                Margin="0,0,0,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <CheckBox Grid.Column="0"
                                                          IsChecked="{Binding IsSelected}"
                                                          VerticalAlignment="Center"
                                                          Margin="0,0,12,0" />

                                                <StackPanel Grid.Column="1"
                                                            VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Role.Name}"
                                                               FontSize="16"
                                                               FontWeight="SemiBold"
                                                               Foreground="White" />
                                                    <TextBlock Text="{Binding Role.Description}"
                                                               FontSize="12"
                                                               Foreground="#888888"
                                                               TextWrapping="Wrap"
                                                               Margin="0,4,0,0" />
                                                </StackPanel>

                                                <Border Grid.Column="2"
                                                        VerticalAlignment="Center"
                                                        Visibility="{Binding Role.IsSystem, Converter={StaticResource BoolToVisConverter}}">
                                                    <Border Background="#5A5A7A"
                                                            CornerRadius="4"
                                                            Padding="8,4">
                                                        <TextBlock Text="System"
                                                                   FontSize="10"
                                                                   Foreground="#AAAACC" />
                                                    </Border>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <!-- Roles Error -->
                        <TextBlock Grid.Row="3"
                                   Text="{Binding RolesError}"
                                   Style="{StaticResource ErrorTextStyle}"
                                   Visibility="{Binding RolesError, Converter={StaticResource BoolToVisConverter}}"
                                   Margin="0,8,0,0" />
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- Footer with Actions -->
        <Border Grid.Row="2"
                Background="#2D2D44"
                CornerRadius="8"
                Padding="24"
                Margin="0,24,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Error Message -->
                <TextBlock Grid.Column="0"
                           Text="{Binding ErrorMessage}"
                           Foreground="#FF6B6B"
                           FontSize="14"
                           VerticalAlignment="Center"
                           Visibility="{Binding ErrorMessage, Converter={StaticResource BoolToVisConverter}}" />

                <!-- Action Buttons -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button Content="Cancel"
                            Command="{Binding CancelCommand}"
                            Background="#3D3D5C"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="32,16"
                            FontSize="16"
                            Cursor="Hand"
                            Width="140"
                            Height="52"
                            Margin="0,0,16,0" />

                    <Button Content="Save User"
                            Command="{Binding SaveCommand}"
                            Background="#4CAF50"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="32,16"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            Width="160"
                            Height="52" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="3"
                Background="#80000000"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisConverter}}"
                Panel.ZIndex="100">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True"
                             Width="200"
                             Height="4"
                             Foreground="#4CAF50" />
                <TextBlock Text="Saving..."
                           Foreground="White"
                           FontSize="16"
                           Margin="0,16,0,0"
                           HorizontalAlignment="Center" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
