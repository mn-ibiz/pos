<UserControl x:Class="HospitalityPOS.WPF.Views.SuppliersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:HospitalityPOS.WPF.ViewModels"
             xmlns:local="clr-namespace:HospitalityPOS.WPF.Converters"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1200"
             Background="#1E1E2E">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter" />

        <!-- Greater Than Zero Converter -->
        <local:GreaterThanZeroConverter x:Key="GreaterThanZeroConverter" />

        <!-- Credit Usage Converter -->
        <local:CreditUsageConverter x:Key="CreditUsageConverter" />

        <!-- Status to Color Converter -->
        <Style x:Key="StatusBadgeStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="8,4" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsActive}" Value="True">
                    <Setter Property="Background" Value="#2D5A3D" />
                </DataTrigger>
                <DataTrigger Binding="{Binding IsActive}" Value="False">
                    <Setter Property="Background" Value="#5A2D2D" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="Back"
                    Command="{Binding GoBackCommand}"
                    Background="#3D3D5C"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="16,12"
                    FontSize="14"
                    Cursor="Hand" />

            <TextBlock Grid.Column="1"
                       Text="Supplier Management"
                       FontSize="28"
                       FontWeight="SemiBold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />

            <Button Grid.Column="2"
                    Content="+ New Supplier"
                    Command="{Binding CreateSupplierCommand}"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="24,12"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Cursor="Hand" />
        </Grid>

        <!-- Statistics Bar -->
        <Border Grid.Row="1" Background="#2D2D44" CornerRadius="8" Padding="16" Margin="0,0,0,16">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <StackPanel Margin="0,0,48,0">
                    <TextBlock Text="Total Suppliers"
                               FontSize="12"
                               Foreground="#8888AA"
                               HorizontalAlignment="Center" />
                    <TextBlock Text="{Binding TotalSupplierCount}"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center" />
                </StackPanel>
                <StackPanel Margin="0,0,48,0">
                    <TextBlock Text="Active Suppliers"
                               FontSize="12"
                               Foreground="#8888AA"
                               HorizontalAlignment="Center" />
                    <TextBlock Text="{Binding ActiveSupplierCount}"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#4CAF50"
                               HorizontalAlignment="Center" />
                </StackPanel>
                <StackPanel Margin="0,0,48,0">
                    <TextBlock Text="Total Outstanding"
                               FontSize="12"
                               Foreground="#8888AA"
                               HorizontalAlignment="Center" />
                    <TextBlock Text="{Binding TotalOutstandingBalance, StringFormat='KSh {0:N0}'}"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#FF9800"
                               HorizontalAlignment="Center" />
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Overdue Invoices"
                               FontSize="12"
                               Foreground="#8888AA"
                               HorizontalAlignment="Center" />
                    <TextBlock Text="{Binding OverdueInvoiceCount}"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#F44336"
                               HorizontalAlignment="Center" />
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Search and Filter Bar -->
        <Grid Grid.Row="2" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    Background="#2D2D44"
                    CornerRadius="8"
                    Padding="16,0"
                    Margin="0,0,16,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Search:"
                               FontSize="14"
                               Foreground="#888888"
                               VerticalAlignment="Center"
                               Margin="0,0,12,0" />

                    <TextBox Grid.Column="1"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             Background="Transparent"
                             Foreground="White"
                             BorderThickness="0"
                             FontSize="14"
                             VerticalAlignment="Center"
                             Height="48"
                             VerticalContentAlignment="Center" />
                </Grid>
            </Border>

            <CheckBox Grid.Column="1"
                      Content="Show Inactive"
                      IsChecked="{Binding ShowInactiveSuppliers}"
                      Foreground="White"
                      FontSize="14"
                      VerticalAlignment="Center"
                      VerticalContentAlignment="Center"
                      Margin="0,0,16,0"
                      Height="48" />

            <Button Grid.Column="2"
                    Content="Refresh"
                    Command="{Binding LoadSuppliersCommand}"
                    Background="#3D3D5C"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="16,12"
                    FontSize="14"
                    Cursor="Hand" />
        </Grid>

        <!-- Supplier List -->
        <Border Grid.Row="3"
                Background="#2D2D44"
                CornerRadius="12">
            <Grid>
                <!-- Loading Overlay -->
                <Border Background="#80000000"
                        CornerRadius="12"
                        Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisConverter}}"
                        Panel.ZIndex="10">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <ProgressBar IsIndeterminate="True"
                                     Width="150"
                                     Height="4"
                                     Foreground="#4CAF50" />
                        <TextBlock Text="Loading suppliers..."
                                   Foreground="White"
                                   FontSize="14"
                                   Margin="0,12,0,0"
                                   HorizontalAlignment="Center" />
                    </StackPanel>
                </Border>

                <DataGrid ItemsSource="{Binding Suppliers}"
                          SelectedItem="{Binding SelectedSupplier}"
                          AutoGenerateColumns="False"
                          Background="Transparent"
                          Foreground="White"
                          BorderThickness="0"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="#3D3D5C"
                          RowBackground="#2D2D44"
                          AlternatingRowBackground="#353550"
                          SelectionMode="Single"
                          SelectionUnit="FullRow"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          CanUserResizeRows="False"
                          HeadersVisibility="Column"
                          FontSize="14"
                          RowHeight="52"
                          IsReadOnly="True">

                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#3D3D5C" />
                            <Setter Property="Foreground" Value="#AAAACC" />
                            <Setter Property="FontWeight" Value="SemiBold" />
                            <Setter Property="FontSize" Value="14" />
                            <Setter Property="Padding" Value="16,12" />
                            <Setter Property="BorderThickness" Value="0" />
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="Padding" Value="16,0" />
                            <Setter Property="VerticalContentAlignment" Value="Center" />
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#4A4A6A" />
                                    <Setter Property="Foreground" Value="White" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Code"
                                            Binding="{Binding Code}"
                                            Width="80" />

                        <DataGridTextColumn Header="Name"
                                            Binding="{Binding Name}"
                                            Width="180" />

                        <DataGridTextColumn Header="Contact"
                                            Binding="{Binding ContactPerson}"
                                            Width="120" />

                        <DataGridTextColumn Header="Phone"
                                            Binding="{Binding Phone}"
                                            Width="100" />

                        <DataGridTextColumn Header="Terms"
                                            Binding="{Binding PaymentTermDays, StringFormat='{}{0} days'}"
                                            Width="70" />

                        <DataGridTemplateColumn Header="Credit Limit" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="Unlimited" />
                                                <Setter Property="Foreground" Value="#4CAF50" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding CreditLimit}" Value="0">
                                                        <Setter Property="Text" Value="Unlimited" />
                                                        <Setter Property="Foreground" Value="#4CAF50" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="Balance" Width="110">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding CurrentBalance, StringFormat='KSh {0:N0}'}"
                                               VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#8888AA" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding CurrentBalance, Converter={StaticResource GreaterThanZeroConverter}}" Value="True">
                                                        <Setter Property="Foreground" Value="#FF9800" />
                                                        <Setter Property="FontWeight" Value="SemiBold" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="Credit Used" Width="90">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#8888AA" />
                                            </Style>
                                        </TextBlock.Style>
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="{}{0:N0}%">
                                                <Binding Path="." Converter="{StaticResource CreditUsageConverter}" />
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="Status" Width="90">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource StatusBadgeStyle}">
                                        <TextBlock FontSize="12" Foreground="White">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                            <Setter Property="Text" Value="Active" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                            <Setter Property="Text" Value="Inactive" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Action Buttons -->
        <Border Grid.Row="4"
                Background="#2D2D44"
                CornerRadius="8"
                Padding="16"
                Margin="0,16,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Left Actions -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Content="Edit"
                            Command="{Binding EditSupplierCommand}"
                            IsEnabled="{Binding SelectedSupplier, Converter={StaticResource BoolToVisConverter}}"
                            Background="#3D3D5C"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="20,12"
                            FontSize="14"
                            Cursor="Hand"
                            Margin="0,0,8,0"
                            Height="44" />

                    <Button Content="Purchase Orders"
                            Command="{Binding ViewPurchaseOrdersCommand}"
                            IsEnabled="{Binding SelectedSupplier, Converter={StaticResource BoolToVisConverter}}"
                            Background="#2196F3"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="20,12"
                            FontSize="14"
                            Cursor="Hand"
                            Margin="0,0,8,0"
                            Height="44" />
                </StackPanel>

                <!-- Center Actions (Credit Management) -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Invoices"
                            Command="{Binding ViewInvoicesCommand}"
                            IsEnabled="{Binding SelectedSupplier, Converter={StaticResource BoolToVisConverter}}"
                            Background="#9C27B0"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="20,12"
                            FontSize="14"
                            Cursor="Hand"
                            Margin="0,0,8,0"
                            Height="44" />

                    <Button Content="Make Payment"
                            Command="{Binding MakePaymentCommand}"
                            IsEnabled="{Binding SelectedSupplier, Converter={StaticResource BoolToVisConverter}}"
                            Background="#4CAF50"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="20,12"
                            FontSize="14"
                            Cursor="Hand"
                            Margin="0,0,8,0"
                            Height="44" />

                    <Button Content="Statement"
                            Command="{Binding ViewStatementCommand}"
                            IsEnabled="{Binding SelectedSupplier, Converter={StaticResource BoolToVisConverter}}"
                            Background="#FF9800"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="20,12"
                            FontSize="14"
                            Cursor="Hand"
                            Margin="0,0,8,0"
                            Height="44" />
                </StackPanel>

                <!-- Right Actions -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Command="{Binding ToggleActiveStatusCommand}"
                            IsEnabled="{Binding SelectedSupplier, Converter={StaticResource BoolToVisConverter}}"
                            BorderThickness="0"
                            Padding="20,12"
                            FontSize="14"
                            Cursor="Hand"
                            Height="44">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#F44336" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="Content" Value="Deactivate" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedSupplier.IsActive}" Value="False">
                                        <Setter Property="Background" Value="#4CAF50" />
                                        <Setter Property="Content" Value="Activate" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
