<UserControl x:Class="HospitalityPOS.WPF.Views.OrganizationSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="900"
             Background="#1E1E2E">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>

        <!-- Section Header Style -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#22C55E"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <!-- Form Label Style -->
        <Style x:Key="FormLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#9CA3AF"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <!-- Form TextBox Style -->
        <Style x:Key="FormTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="BorderBrush" Value="#3D3D5C"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#22C55E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="FormComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#2D2D44"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3D3D5C"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#22C55E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#16A34A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#15803D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#374151"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4B5563"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#252538" Padding="24,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Organization Settings"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="White"/>
                    <TextBlock Text="Manage your business information and configuration"
                               FontSize="13"
                               Foreground="#9CA3AF"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Unsaved Changes Indicator -->
                <Border Grid.Column="1"
                        Background="#422006"
                        CornerRadius="4"
                        Padding="12,6"
                        VerticalAlignment="Center"
                        Visibility="{Binding HasUnsavedChanges, Converter={StaticResource BoolToVisibility}}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE7BA;" FontFamily="Segoe MDL2 Assets"
                                   Foreground="#F59E0B" FontSize="14" VerticalAlignment="Center"/>
                        <TextBlock Text="Unsaved Changes" Foreground="#F59E0B"
                                   FontSize="12" Margin="8,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <Grid Margin="24,24,24,0" MaxWidth="800" HorizontalAlignment="Left">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Business Information Section -->
                <StackPanel Grid.Column="0" Grid.Row="0">
                    <TextBlock Text="Business Information" Style="{StaticResource SectionHeaderStyle}"/>

                    <TextBlock Text="Business Name *" Style="{StaticResource FormLabelStyle}"/>
                    <TextBox Text="{Binding BusinessName, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource FormTextBoxStyle}"/>

                    <TextBlock Text="Address" Style="{StaticResource FormLabelStyle}"/>
                    <TextBox Text="{Binding BusinessAddress, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource FormTextBoxStyle}"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             MinHeight="60"/>

                    <TextBlock Text="Phone Number" Style="{StaticResource FormLabelStyle}"/>
                    <TextBox Text="{Binding BusinessPhone, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource FormTextBoxStyle}"/>

                    <TextBlock Text="Email" Style="{StaticResource FormLabelStyle}"/>
                    <TextBox Text="{Binding BusinessEmail, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource FormTextBoxStyle}"/>

                    <!-- Business Logo -->
                    <TextBlock Text="Business Logo" Style="{StaticResource FormLabelStyle}"/>
                    <Border Background="#2D2D44"
                            BorderBrush="#3D3D5C"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="12"
                            Margin="0,0,0,16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Logo Preview -->
                            <Border Grid.Column="0"
                                    Background="#1E1E2E"
                                    CornerRadius="4"
                                    Width="64"
                                    Height="64"
                                    HorizontalAlignment="Left">
                                <Grid>
                                    <!-- Placeholder when no logo -->
                                    <TextBlock Text="&#xE91B;"
                                               FontFamily="Segoe MDL2 Assets"
                                               FontSize="24"
                                               Foreground="#6B7280"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Visibility="{Binding HasNoLogo, Converter={StaticResource BoolToVisibility}}"/>
                                    <!-- Logo Image -->
                                    <Image Source="{Binding LogoPreview}"
                                           Stretch="Uniform"
                                           Margin="4"
                                           Visibility="{Binding HasLogo, Converter={StaticResource BoolToVisibility}}"/>
                                </Grid>
                            </Border>

                            <!-- Upload/Remove Buttons -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="12,0,0,0">
                                <Button Content="Upload Logo"
                                        Command="{Binding UploadLogoCommand}"
                                        Background="#374151"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Padding="12,6"
                                        Cursor="Hand"
                                        HorizontalAlignment="Left">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <Button Content="Remove"
                                        Command="{Binding RemoveLogoCommand}"
                                        Visibility="{Binding HasLogo, Converter={StaticResource BoolToVisibility}}"
                                        Background="Transparent"
                                        Foreground="#EF4444"
                                        BorderThickness="0"
                                        Padding="0,6"
                                        Cursor="Hand"
                                        HorizontalAlignment="Left"
                                        Margin="0,4,0,0">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <TextBlock Text="PNG or JPG, max 500KB"
                                           Foreground="#6B7280"
                                           FontSize="11"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Tax & Currency Section -->
                <StackPanel Grid.Column="2" Grid.Row="0">
                    <TextBlock Text="Tax &amp; Currency" Style="{StaticResource SectionHeaderStyle}"/>

                    <TextBlock Text="KRA PIN Number" Style="{StaticResource FormLabelStyle}"/>
                    <TextBox Text="{Binding KraPinNumber, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource FormTextBoxStyle}"/>

                    <TextBlock Text="VAT Registration Number" Style="{StaticResource FormLabelStyle}"/>
                    <TextBox Text="{Binding VatNumber, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource FormTextBoxStyle}"/>

                    <TextBlock Text="VAT Rate (%)" Style="{StaticResource FormLabelStyle}"/>
                    <TextBox Text="{Binding VatRate, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource FormTextBoxStyle}"/>

                    <TextBlock Text="Currency Code" Style="{StaticResource FormLabelStyle}"/>
                    <TextBox Text="{Binding CurrencyCode, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource FormTextBoxStyle}"/>

                    <TextBlock Text="Currency Symbol" Style="{StaticResource FormLabelStyle}"/>
                    <TextBox Text="{Binding CurrencySymbol, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource FormTextBoxStyle}"/>
                </StackPanel>

                <!-- Business Mode Section -->
                <Border Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1"
                        Background="#252538"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,8,0,24">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <TextBlock Text="Current Business Mode" Style="{StaticResource SectionHeaderStyle}" Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding ModeDisplayName}"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                            <TextBlock Text="{Binding ModeDescription}"
                                       FontSize="13"
                                       Foreground="#9CA3AF"
                                       TextWrapping="Wrap"
                                       Margin="0,8,0,0"/>
                        </StackPanel>

                        <!-- Mode Selection -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="24,0,0,0">
                            <TextBlock Text="Change Mode" Foreground="#9CA3AF" FontSize="11" Margin="0,0,0,8"/>
                            <ComboBox ItemsSource="{Binding ModeOptions}"
                                      SelectedValue="{Binding SelectedMode}"
                                      SelectedValuePath="Mode"
                                      DisplayMemberPath="Title"
                                      Width="200"
                                      Background="#2D2D44"
                                      Foreground="White"
                                      BorderBrush="#3D3D5C"
                                      Padding="12,8"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Last Saved Info -->
                <TextBlock Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="2"
                           Text="{Binding LastSavedInfo}"
                           Foreground="#6B7280"
                           FontSize="12"
                           Margin="0,0,0,16"/>
            </Grid>
        </ScrollViewer>

        <!-- Footer Actions -->
        <Border Grid.Row="2" Background="#252538" Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Content="Reload"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Command="{Binding ReloadSettingsCommand}"/>

                <Button Grid.Column="2"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Command="{Binding SaveSettingsCommand}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE74E;" FontFamily="Segoe MDL2 Assets"
                                   VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="Save Settings" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="3"
                Background="#80000000"
                Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibility}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="4" Foreground="#22C55E"/>
                <TextBlock Text="{Binding BusyMessage}"
                           Foreground="White"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Margin="0,16,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
