<UserControl x:Class="HospitalityPOS.WPF.Views.ProductManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:HospitalityPOS.WPF.Converters"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1400"
             Background="#0F0F1A">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility"/>
        <converters:StockStatusToTextConverter x:Key="StockStatusToText"/>
        <converters:StockStatusToColorConverter x:Key="StockStatusToColor"/>

        <!-- Gradient Brushes -->
        <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#6366F1" Offset="0"/>
            <GradientStop Color="#8B5CF6" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="SuccessGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#10B981" Offset="0"/>
            <GradientStop Color="#34D399" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="DangerGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#EF4444" Offset="0"/>
            <GradientStop Color="#F87171" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="WarningGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#F59E0B" Offset="0"/>
            <GradientStop Color="#FBBF24" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="CardGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#1A1A2E" Offset="0"/>
            <GradientStop Color="#16162A" Offset="1"/>
        </LinearGradientBrush>

        <!-- Modern Action Button Style -->
        <Style x:Key="ModernActionButton" TargetType="Button">
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="MinWidth" Value="110"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="16,10"
                                BorderThickness="1"
                                BorderBrush="#2D2D44">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="-1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="0"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="#2D2D44"/>
        </Style>

        <!-- Icon Button Style -->
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="#9CA3AF"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2D2D44"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3D3D54"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Search TextBox Style -->
        <Style x:Key="SearchTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#1A1A2E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="BorderBrush" Value="#2D2D44"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="40,12,12,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          VerticalAlignment="Center"
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#6366F1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Filter ComboBox Style -->
        <Style x:Key="FilterComboBox" TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
            <Setter Property="Background" Value="#1A1A2E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#2D2D44"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="44"/>
        </Style>

        <!-- Filter Tab Button Style -->
        <Style x:Key="FilterTabButton" TargetType="RadioButton">
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#6366F1"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                    <Condition Property="IsChecked" Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="border" Property="Background" Value="#1F1F33"/>
                                <Setter Property="Foreground" Value="White"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern CheckBox Style -->
        <Style x:Key="ModernCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#9CA3AF"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal">
                            <Border x:Name="checkBorder"
                                    Width="20" Height="20"
                                    CornerRadius="4"
                                    Background="#1F1F33"
                                    BorderBrush="#2D2D44"
                                    BorderThickness="1">
                                <Path x:Name="checkMark"
                                      Data="M 2 6 L 6 10 L 14 2"
                                      Stroke="White"
                                      StrokeThickness="2"
                                      Visibility="Collapsed"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Width="12" Height="12"
                                      Margin="2"/>
                            </Border>
                            <ContentPresenter Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="checkBorder" Property="Background" Value="#6366F1"/>
                                <Setter TargetName="checkBorder" Property="BorderBrush" Value="#6366F1"/>
                                <Setter TargetName="checkMark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="checkBorder" Property="BorderBrush" Value="#6366F1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Stat Card Style -->
        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardGradient}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16,14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#2D2D44"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="340"/>
        </Grid.ColumnDefinitions>

        <!-- Main Content Area -->
        <Grid Grid.Column="0" Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Back Button -->
                <Button Grid.Column="0"
                        Style="{StaticResource IconButton}"
                        Command="{Binding GoBackCommand}"
                        ToolTip="Go Back (Esc)">
                    <Path Data="M 12 0 L 0 10 L 12 20"
                          Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                          StrokeThickness="2"
                          Width="12" Height="20"/>
                </Button>

                <!-- Title and Subtitle -->
                <StackPanel Grid.Column="1" Margin="16,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="{Binding Title}"
                               FontSize="26"
                               FontWeight="Bold"
                               Foreground="White"/>
                    <TextBlock Text="Add, edit, and manage your product inventory"
                               FontSize="13"
                               Foreground="#6B7280"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Primary Action -->
                <Button Grid.Column="2"
                        Style="{StaticResource ModernActionButton}"
                        Background="{StaticResource SuccessGradient}"
                        Command="{Binding CreateProductCommand}"
                        ToolTip="Create New Product (Ctrl+N)">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="+" FontSize="18" FontWeight="Bold" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Text="New Product" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>

            <!-- Stats Row -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Products Card -->
                <Border Grid.Column="0" Style="{StaticResource StatCard}" Margin="0,0,6,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Width="44" Height="44" CornerRadius="10" Background="#1F1F33" Margin="0,0,12,0">
                            <TextBlock Text="&#xE719;" FontFamily="Segoe MDL2 Assets" FontSize="18"
                                       Foreground="#6366F1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding TotalProductCount}" FontSize="24" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="Total Products" FontSize="11" Foreground="#6B7280"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Active Products Card -->
                <Border Grid.Column="1" Style="{StaticResource StatCard}" Margin="6,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Width="44" Height="44" CornerRadius="10" Background="#0D2818" Margin="0,0,12,0">
                            <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets" FontSize="18"
                                       Foreground="#10B981" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding ActiveProductCount}" FontSize="24" FontWeight="Bold" Foreground="#10B981"/>
                            <TextBlock Text="Active" FontSize="11" Foreground="#6B7280"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Low Stock Card -->
                <Border Grid.Column="2" Style="{StaticResource StatCard}" Margin="6,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Width="44" Height="44" CornerRadius="10" Background="#1F1A10" Margin="0,0,12,0">
                            <TextBlock Text="&#xE7BA;" FontFamily="Segoe MDL2 Assets" FontSize="18"
                                       Foreground="#F59E0B" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding LowStockCount}" FontSize="24" FontWeight="Bold" Foreground="#F59E0B"/>
                            <TextBlock Text="Low Stock" FontSize="11" Foreground="#6B7280"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Out of Stock Card -->
                <Border Grid.Column="3" Style="{StaticResource StatCard}" Margin="6,0,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Width="44" Height="44" CornerRadius="10" Background="#1F1414" Margin="0,0,12,0">
                            <TextBlock Text="&#xE783;" FontFamily="Segoe MDL2 Assets" FontSize="18"
                                       Foreground="#EF4444" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding OutOfStockCount}" FontSize="24" FontWeight="Bold" Foreground="#EF4444"/>
                            <TextBlock Text="Out of Stock" FontSize="11" Foreground="#6B7280"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- Search, Filter and Action Bar -->
            <Border Grid.Row="2" Background="{StaticResource CardGradient}" CornerRadius="12"
                    Padding="16" Margin="0,0,0,16" BorderThickness="1" BorderBrush="#2D2D44">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Top Row: Search and Category Filter -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Search Box -->
                        <Grid Grid.Column="0" Margin="0,0,16,0">
                            <TextBox Style="{StaticResource SearchTextBox}"
                                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged, Delay=300}"/>
                            <TextBlock Text="&#xE721;" FontFamily="Segoe MDL2 Assets" FontSize="16"
                                       Foreground="#6B7280" IsHitTestVisible="False"
                                       VerticalAlignment="Center" Margin="14,0,0,0"/>
                            <TextBlock Text="Search products..."
                                       FontSize="14"
                                       Foreground="#4B5563"
                                       IsHitTestVisible="False"
                                       VerticalAlignment="Center"
                                       Margin="44,0,0,0"
                                       Visibility="{Binding SearchText.Length, Converter={StaticResource InverseBoolToVisibility}}"/>
                            <Button Content="&#xE711;"
                                    FontFamily="Segoe MDL2 Assets"
                                    Width="30"
                                    Height="30"
                                    HorizontalAlignment="Right"
                                    Margin="0,0,8,0"
                                    Style="{StaticResource IconButton}"
                                    Command="{Binding ClearSearchCommand}"
                                    Visibility="{Binding SearchText.Length, Converter={StaticResource BoolToVisibility}}"
                                    ToolTip="Clear search"/>
                        </Grid>

                        <!-- Category Filter -->
                        <TextBlock Grid.Column="1"
                                   Text="Category:"
                                   Foreground="#9CA3AF"
                                   FontSize="13"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>

                        <ComboBox Grid.Column="2"
                                  Style="{StaticResource FilterComboBox}"
                                  ItemsSource="{Binding Categories}"
                                  SelectedItem="{Binding SelectedCategory}"
                                  DisplayMemberPath="Name"/>

                        <Button Grid.Column="3"
                                Content="&#xE711;"
                                FontFamily="Segoe MDL2 Assets"
                                Style="{StaticResource IconButton}"
                                Command="{Binding ClearCategoryFilterCommand}"
                                ToolTip="Clear category filter"
                                Margin="4,0"/>

                        <!-- Show Inactive Checkbox -->
                        <CheckBox Grid.Column="4"
                                  Style="{StaticResource ModernCheckBox}"
                                  Content="Show Inactive"
                                  IsChecked="{Binding ShowInactiveProducts}"
                                  Margin="8,0,0,0"/>
                    </Grid>

                    <!-- Bottom Row: Action Buttons -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,12,0,0">
                        <Button Style="{StaticResource ModernActionButton}"
                                Background="#2563EB"
                                Command="{Binding EditProductCommand}"
                                ToolTip="Edit Selected (Enter)">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE70F;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Edit"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{Binding ToggleActiveCommand}" ToolTip="Toggle Active Status">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource ModernActionButton}">
                                    <Setter Property="Background" Value="#374151"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedProduct.IsActive}" Value="False">
                                            <Setter Property="Background" Value="{StaticResource SuccessGradient}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="&#xE711;"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedProduct.IsActive}" Value="False">
                                                    <Setter Property="Text" Value="&#xE73E;"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBlock>
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="Deactivate"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedProduct.IsActive}" Value="False">
                                                    <Setter Property="Text" Value="Activate"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource ModernActionButton}"
                                Background="{StaticResource DangerGradient}"
                                Command="{Binding DeleteProductCommand}"
                                ToolTip="Delete Selected (Del)">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE74D;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Delete"/>
                            </StackPanel>
                        </Button>

                        <Rectangle Width="1" Fill="#2D2D44" Margin="8,4"/>

                        <Button Style="{StaticResource IconButton}"
                                Command="{Binding LoadDataCommand}"
                                ToolTip="Refresh (F5)">
                            <TextBlock Text="&#xE72C;" FontFamily="Segoe MDL2 Assets" FontSize="16"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Product List DataGrid -->
            <Border Grid.Row="3"
                    Background="{StaticResource CardGradient}"
                    CornerRadius="12"
                    BorderThickness="1"
                    BorderBrush="#2D2D44">
                <Grid>
                    <DataGrid ItemsSource="{Binding Products}"
                              SelectedItem="{Binding SelectedProduct}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              Background="Transparent"
                              BorderThickness="0"
                              RowBackground="Transparent"
                              AlternatingRowBackground="#0A0A14"
                              Foreground="White"
                              GridLinesVisibility="None"
                              HeadersVisibility="Column"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              SelectionMode="Single"
                              SelectionUnit="FullRow"
                              RowHeight="60"
                              FontSize="13"
                              Visibility="{Binding Products.Count, Converter={StaticResource BoolToVisibility}}">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="#6B7280"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="FontSize" Value="12"/>
                                <Setter Property="Padding" Value="16,14"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="BorderBrush" Value="#2D2D44"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Padding" Value="16,8"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Focusable" Value="False"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGridCell">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#1E1E38"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.CellStyle>
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="BorderBrush" Value="#1A1A2E"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#141428"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#1E1E38"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.Columns>
                            <!-- Product with Image -->
                            <DataGridTemplateColumn Header="PRODUCT" Width="*" MinWidth="250">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <!-- Product Image/Placeholder -->
                                            <Border Grid.Column="0" Width="44" Height="44" CornerRadius="8" Margin="0,0,12,0">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="{StaticResource PrimaryGradient}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                                <Setter Property="Background" Value="#374151"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="{Binding Name[0]}" FontSize="16" FontWeight="Bold"
                                                           Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <!-- Product Info -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="SemiBold">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="White"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                                    <Setter Property="Foreground" Value="#6B7280"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <TextBlock Text="{Binding Code}" FontSize="11" Foreground="#6B7280" Margin="0,2,0,0"/>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Category -->
                            <DataGridTemplateColumn Header="CATEGORY" Width="140">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Background="#1F1F33" CornerRadius="6" Padding="8,4" HorizontalAlignment="Left">
                                            <TextBlock Text="{Binding Category.Name}" FontSize="12" Foreground="#9CA3AF"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Price -->
                            <DataGridTemplateColumn Header="PRICE" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock FontSize="14" FontWeight="SemiBold" Foreground="White">
                                            <Run Text="KSh "/>
                                            <Run Text="{Binding SellingPrice, StringFormat=N2}"/>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Stock with Progress Indicator -->
                            <DataGridTemplateColumn Header="STOCK" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel VerticalAlignment="Center">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Inventory.CurrentStock, StringFormat='{}{0:N0}'}"
                                                           FontSize="14" FontWeight="SemiBold" Foreground="White" Width="50"/>
                                                <Border CornerRadius="4" Padding="6,2"
                                                        Background="{Binding Converter={StaticResource StockStatusToColor}}"
                                                        HorizontalAlignment="Left">
                                                    <TextBlock Text="{Binding Converter={StaticResource StockStatusToText}}"
                                                               FontSize="10" FontWeight="SemiBold" Foreground="White"/>
                                                </Border>
                                            </StackPanel>
                                            <!-- Stock Level Bar -->
                                            <Border Height="4" CornerRadius="2" Background="#1F1F33" Margin="0,6,0,0" Width="100" HorizontalAlignment="Left">
                                                <Border CornerRadius="2" HorizontalAlignment="Left"
                                                        Background="{Binding Converter={StaticResource StockStatusToColor}}">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Width" Value="50"/>
                                                        </Style>
                                                    </Border.Style>
                                                </Border>
                                            </Border>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Status -->
                            <DataGridTemplateColumn Header="STATUS" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="6" Padding="10,5" HorizontalAlignment="Left">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#0D2818"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                            <Setter Property="Background" Value="#1F1F33"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock FontSize="11" FontWeight="SemiBold">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="Active"/>
                                                        <Setter Property="Foreground" Value="#10B981"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                                <Setter Property="Text" Value="Inactive"/>
                                                                <Setter Property="Foreground" Value="#6B7280"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Empty State -->
                    <StackPanel VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Visibility="{Binding Products.Count, Converter={StaticResource InverseBoolToVisibility}}">
                        <Border Width="80" Height="80" CornerRadius="40" Background="#1F1F33" Margin="0,0,0,16">
                            <TextBlock Text="&#xE719;" FontFamily="Segoe MDL2 Assets" FontSize="32"
                                       Foreground="#4B5563" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="No Products Found"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Create your first product or adjust your filters"
                                   FontSize="13"
                                   Foreground="#6B7280"
                                   HorizontalAlignment="Center"
                                   Margin="0,8,0,20"/>
                        <Button Style="{StaticResource ModernActionButton}"
                                Background="{StaticResource PrimaryGradient}"
                                Command="{Binding CreateProductCommand}"
                                HorizontalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="+" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Create Product"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- Loading Overlay -->
                    <Border Background="#CC0F0F1A"
                            CornerRadius="12"
                            Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibility}}">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <ProgressBar IsIndeterminate="True"
                                         Width="160"
                                         Height="4"
                                         Foreground="#6366F1"
                                         Background="#1F1F33"/>
                            <TextBlock Text="{Binding BusyMessage}"
                                       Foreground="#9CA3AF"
                                       FontSize="13"
                                       HorizontalAlignment="Center"
                                       Margin="0,12,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Right Sidebar - Product Details Panel -->
        <Border Grid.Column="1"
                Background="{StaticResource CardGradient}"
                BorderThickness="1,0,0,0"
                BorderBrush="#2D2D44">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Panel Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock Text="Product Details"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="White"/>
                    <TextBlock Text="View selected product information"
                               FontSize="12"
                               Foreground="#6B7280"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Product Details Content -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- No Selection State -->
                        <StackPanel Visibility="{Binding SelectedProduct, Converter={StaticResource InverseBoolToVisibility}}"
                                    VerticalAlignment="Center" Margin="0,40,0,0">
                            <Border Width="64" Height="64" CornerRadius="32" Background="#1F1F33" Margin="0,0,0,16" HorizontalAlignment="Center">
                                <TextBlock Text="&#xE719;" FontFamily="Segoe MDL2 Assets" FontSize="24"
                                           Foreground="#4B5563" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="No Product Selected"
                                       FontSize="14"
                                       Foreground="#6B7280"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Select a product to view details"
                                       FontSize="12"
                                       Foreground="#4B5563"
                                       HorizontalAlignment="Center"
                                       Margin="0,4,0,0"/>
                        </StackPanel>

                        <!-- Selected Product Details -->
                        <StackPanel Visibility="{Binding SelectedProduct, Converter={StaticResource BoolToVisibility}}">
                            <!-- Product Avatar -->
                            <Border Width="80" Height="80" CornerRadius="16" HorizontalAlignment="Center" Margin="0,0,0,16">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="{StaticResource PrimaryGradient}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedProduct.IsActive}" Value="False">
                                                <Setter Property="Background" Value="#374151"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock Text="{Binding SelectedProduct.Name[0]}"
                                           FontSize="32"
                                           FontWeight="Bold"
                                           Foreground="White"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>

                            <!-- Product Name -->
                            <TextBlock Text="{Binding SelectedProduct.Name}"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"/>

                            <!-- Product Code -->
                            <TextBlock Text="{Binding SelectedProduct.Code}"
                                       FontSize="12"
                                       Foreground="#6B7280"
                                       HorizontalAlignment="Center"
                                       Margin="0,4,0,0"/>

                            <!-- Status Badge -->
                            <Border CornerRadius="6" Padding="12,6" Margin="0,12,0,0" HorizontalAlignment="Center">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="#0D2818"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedProduct.IsActive}" Value="False">
                                                <Setter Property="Background" Value="#1F1F33"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock FontSize="12" FontWeight="SemiBold">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="Active"/>
                                            <Setter Property="Foreground" Value="#10B981"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedProduct.IsActive}" Value="False">
                                                    <Setter Property="Text" Value="Inactive"/>
                                                    <Setter Property="Foreground" Value="#6B7280"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Border>

                            <!-- Divider -->
                            <Rectangle Height="1" Fill="#2D2D44" Margin="0,20"/>

                            <!-- Price Card -->
                            <Border Background="#1F1F33" CornerRadius="10" Padding="16" Margin="0,0,0,12">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="Selling Price" FontSize="11" Foreground="#6B7280" HorizontalAlignment="Center"/>
                                    <TextBlock FontSize="28" FontWeight="Bold" Foreground="#10B981" HorizontalAlignment="Center" Margin="0,4,0,0">
                                        <Run Text="KSh "/>
                                        <Run Text="{Binding SelectedProduct.SellingPrice, StringFormat=N2}"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <!-- Info Cards -->
                            <StackPanel>
                                <!-- Category -->
                                <Border Background="#1F1F33" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="&#xE8B1;" FontFamily="Segoe MDL2 Assets" FontSize="14"
                                                   Foreground="#6B7280" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Category" FontSize="11" Foreground="#6B7280"/>
                                            <TextBlock Text="{Binding SelectedProduct.Category.Name}" FontSize="14" Foreground="White" FontWeight="SemiBold"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <!-- Stock -->
                                <Border Background="#1F1F33" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="&#xE7BF;" FontFamily="Segoe MDL2 Assets" FontSize="14"
                                                   Foreground="#6B7280" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Current Stock" FontSize="11" Foreground="#6B7280"/>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock FontSize="14" Foreground="White" FontWeight="SemiBold">
                                                    <Run Text="{Binding SelectedProduct.Inventory.CurrentStock, StringFormat='{}{0:N0}'}"/>
                                                    <Run Text=" units" Foreground="#6B7280" FontWeight="Normal"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <!-- Cost Price -->
                                <Border Background="#1F1F33" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="&#xE8EC;" FontFamily="Segoe MDL2 Assets" FontSize="14"
                                                   Foreground="#6B7280" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Cost Price" FontSize="11" Foreground="#6B7280"/>
                                            <TextBlock FontSize="14" Foreground="White" FontWeight="SemiBold">
                                                <Run Text="KSh "/>
                                                <Run Text="{Binding SelectedProduct.CostPrice, StringFormat=N2}"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <!-- Tax Rate -->
                                <Border Background="#1F1F33" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="&#xE912;" FontFamily="Segoe MDL2 Assets" FontSize="14"
                                                   Foreground="#6B7280" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Tax Rate" FontSize="11" Foreground="#6B7280"/>
                                            <TextBlock FontSize="14" Foreground="White" FontWeight="SemiBold">
                                                <Run Text="{Binding SelectedProduct.TaxRate, StringFormat=N1}"/>
                                                <Run Text="%"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </StackPanel>

                            <!-- Divider -->
                            <Rectangle Height="1" Fill="#2D2D44" Margin="0,12"/>

                            <!-- Quick Actions -->
                            <TextBlock Text="Quick Actions" FontSize="12" Foreground="#6B7280" Margin="0,0,0,12"/>

                            <Button Style="{StaticResource ModernActionButton}"
                                    Background="#2563EB"
                                    HorizontalAlignment="Stretch"
                                    Margin="0,0,0,8"
                                    Command="{Binding EditProductCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE70F;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Edit Product"/>
                                </StackPanel>
                            </Button>

                            <Button HorizontalAlignment="Stretch"
                                    Margin="0,0,0,8"
                                    Command="{Binding ToggleActiveCommand}">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource ModernActionButton}">
                                        <Setter Property="Background" Value="#374151"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedProduct.IsActive}" Value="False">
                                                <Setter Property="Background" Value="{StaticResource SuccessGradient}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="&#xE711;"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedProduct.IsActive}" Value="False">
                                                        <Setter Property="Text" Value="&#xE73E;"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock>
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="Deactivate"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedProduct.IsActive}" Value="False">
                                                        <Setter Property="Text" Value="Activate"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource ModernActionButton}"
                                    Background="{StaticResource DangerGradient}"
                                    HorizontalAlignment="Stretch"
                                    Command="{Binding DeleteProductCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE74D;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Delete Product"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>

                <!-- Keyboard Shortcuts Footer -->
                <Border Grid.Row="2" Background="#1F1F33" CornerRadius="8" Padding="12" Margin="0,16,0,0">
                    <StackPanel>
                        <TextBlock Text="Keyboard Shortcuts" FontSize="11" Foreground="#6B7280" Margin="0,0,0,8"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" Grid.Column="0" Background="#2D2D44" CornerRadius="4" Padding="4,2" Margin="0,2">
                                <TextBlock Text="Ctrl+N" FontSize="10" Foreground="#9CA3AF" FontFamily="Consolas"/>
                            </Border>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="New Product" FontSize="10" Foreground="#6B7280" VerticalAlignment="Center" Margin="8,2"/>

                            <Border Grid.Row="1" Grid.Column="0" Background="#2D2D44" CornerRadius="4" Padding="4,2" Margin="0,2">
                                <TextBlock Text="Enter" FontSize="10" Foreground="#9CA3AF" FontFamily="Consolas"/>
                            </Border>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="Edit Selected" FontSize="10" Foreground="#6B7280" VerticalAlignment="Center" Margin="8,2"/>

                            <Border Grid.Row="2" Grid.Column="0" Background="#2D2D44" CornerRadius="4" Padding="4,2" Margin="0,2">
                                <TextBlock Text="Del" FontSize="10" Foreground="#9CA3AF" FontFamily="Consolas"/>
                            </Border>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="Delete Selected" FontSize="10" Foreground="#6B7280" VerticalAlignment="Center" Margin="8,2"/>

                            <Border Grid.Row="3" Grid.Column="0" Background="#2D2D44" CornerRadius="4" Padding="4,2" Margin="0,2">
                                <TextBlock Text="F5" FontSize="10" Foreground="#9CA3AF" FontFamily="Consolas"/>
                            </Border>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="Refresh" FontSize="10" Foreground="#6B7280" VerticalAlignment="Center" Margin="8,2"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
