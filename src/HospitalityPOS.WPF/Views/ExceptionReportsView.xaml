<UserControl x:Class="HospitalityPOS.WPF.Views.ExceptionReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:HospitalityPOS.WPF.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1000"
             d:DataContext="{d:DesignInstance vm:ExceptionReportsViewModel}">

    <Grid Background="#1E1E2E">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Content="Back"
                        Command="{Binding GoBackCommand}"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Width="80"/>

                <TextBlock Grid.Column="1"
                           Text="{Binding Title}"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Report Selection and Filters -->
        <Border Grid.Row="1" Background="#2D2D44" Padding="20" BorderThickness="0,0,0,1" BorderBrush="#3D3D5C">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Report Type -->
                <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,20,0">
                    <TextBlock Text="Report Type" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding ReportTypes}"
                              SelectedItem="{Binding SelectedReportType}"
                              DisplayMemberPath="Name"
                              Width="180"
                              Height="35"/>
                </StackPanel>

                <!-- From Date -->
                <StackPanel Grid.Column="1" Grid.Row="0" Margin="0,0,20,0">
                    <TextBlock Text="From Date" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,5"/>
                    <DatePicker SelectedDate="{Binding FromDate}"
                                Width="140"
                                Height="35"/>
                </StackPanel>

                <!-- To Date -->
                <StackPanel Grid.Column="2" Grid.Row="0" Margin="0,0,20,0">
                    <TextBlock Text="To Date" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,5"/>
                    <DatePicker SelectedDate="{Binding ToDate}"
                                Width="140"
                                Height="35"/>
                </StackPanel>

                <!-- User Filter -->
                <StackPanel Grid.Column="3" Grid.Row="0" Margin="0,0,20,0">
                    <TextBlock Text="Filter by User" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <ComboBox Grid.Column="0"
                                  ItemsSource="{Binding Users}"
                                  SelectedItem="{Binding SelectedUser}"
                                  DisplayMemberPath="FullName"
                                  Width="160"
                                  Height="35"/>
                        <Button Grid.Column="1"
                                Content="X"
                                Command="{Binding ClearUserFilterCommand}"
                                Width="30"
                                Height="35"
                                Margin="5,0,0,0"
                                ToolTip="Clear user filter"/>
                    </Grid>
                </StackPanel>

                <!-- Generate Button -->
                <Button Grid.Column="5" Grid.Row="0"
                        Content="Generate Report"
                        Command="{Binding GenerateReportCommand}"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Width="140"
                        Height="40"
                        VerticalAlignment="Bottom"/>

                <!-- Quick Date Buttons -->
                <StackPanel Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="2" Orientation="Horizontal">
                    <Button Content="Today"
                            Command="{Binding SetTodayCommand}"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Width="80" Height="30" Margin="0,0,10,0"/>
                    <Button Content="Yesterday"
                            Command="{Binding SetYesterdayCommand}"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Width="80" Height="30" Margin="0,0,10,0"/>
                    <Button Content="This Week"
                            Command="{Binding SetThisWeekCommand}"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Width="80" Height="30" Margin="0,0,10,0"/>
                    <Button Content="This Month"
                            Command="{Binding SetThisMonthCommand}"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Width="90" Height="30"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Report Content -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <Grid Margin="20">
                <!-- No Report Message -->
                <TextBlock Text="Select a report type and date range, then click 'Generate Report'"
                           FontSize="16"
                           Foreground="#8888AA"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Visibility="{Binding HasReport, Converter={StaticResource BoolToInverseVisibilityConverter}}"/>

                <!-- Void Report Section -->
                <StackPanel Visibility="{Binding ShowVoidReport, Converter={StaticResource BoolToVisibilityConverter}}">
                    <!-- Void Report Header -->
                    <Border Background="{StaticResource ErrorBrush}" Padding="15" CornerRadius="4,4,0,0">
                        <TextBlock Text="VOID REPORT" FontSize="18" FontWeight="Bold" Foreground="White"/>
                    </Border>

                    <!-- Void Summary -->
                    <Border Background="#2D2D44" Padding="15" BorderBrush="#3D3D5C" BorderThickness="1,0,1,1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Total Voids" FontSize="12" Foreground="#8888AA"/>
                                <TextBlock Text="{Binding VoidReport.TotalCount}" FontSize="28" FontWeight="Bold" Foreground="{StaticResource ErrorBrush}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Total Amount" FontSize="12" Foreground="#8888AA"/>
                                <TextBlock Text="{Binding VoidReport.TotalAmount, StringFormat='KSh {0:N2}'}"
                                           FontSize="28" FontWeight="Bold" Foreground="{StaticResource ErrorBrush}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Average Void" FontSize="12" Foreground="#8888AA"/>
                                <TextBlock Text="{Binding VoidReport.AverageAmount, StringFormat='KSh {0:N2}'}"
                                           FontSize="28" FontWeight="Bold" Foreground="#8888AA"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Void Items Grid -->
                    <TextBlock Text="Void Details" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,20,0,10"/>
                    <DataGrid ItemsSource="{Binding VoidItems}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              MaxHeight="300"
                              Background="#2D2D44"
                              Foreground="White"
                              GridLinesVisibility="Horizontal"
                              HorizontalGridLinesBrush="#3D3D5C">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Receipt #" Binding="{Binding ReceiptNumber}" Width="100"/>
                            <DataGridTextColumn Header="Amount" Binding="{Binding VoidedAmount, StringFormat='KSh {0:N2}'}" Width="120"/>
                            <DataGridTextColumn Header="Time" Binding="{Binding TimeDisplay}" Width="60"/>
                            <DataGridTextColumn Header="Voided By" Binding="{Binding VoidedBy}" Width="120"/>
                            <DataGridTextColumn Header="Authorized By" Binding="{Binding AuthorizedBy}" Width="120"/>
                            <DataGridTextColumn Header="Reason" Binding="{Binding Reason}" Width="150"/>
                            <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Void by Reason Summary -->
                    <TextBlock Text="Summary by Reason" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,20,0,10"/>
                    <DataGrid ItemsSource="{Binding VoidByReason}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              MaxHeight="200"
                              Background="#2D2D44"
                              Foreground="White"
                              GridLinesVisibility="Horizontal"
                              HorizontalGridLinesBrush="#3D3D5C">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Reason" Binding="{Binding ReasonName}" Width="200"/>
                            <DataGridTextColumn Header="Count" Binding="{Binding Count}" Width="80"/>
                            <DataGridTextColumn Header="Total Amount" Binding="{Binding TotalAmount, StringFormat='KSh {0:N2}'}" Width="150"/>
                            <DataGridTextColumn Header="%" Binding="{Binding Percentage, StringFormat='{}{0:N1}%'}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>

                <!-- Discount Report Section -->
                <StackPanel Visibility="{Binding ShowDiscountReport, Converter={StaticResource BoolToVisibilityConverter}}">
                    <!-- Discount Report Header -->
                    <Border Background="{StaticResource WarningBrush}" Padding="15" CornerRadius="4,4,0,0">
                        <TextBlock Text="DISCOUNT REPORT" FontSize="18" FontWeight="Bold" Foreground="White"/>
                    </Border>

                    <!-- Discount Summary -->
                    <Border Background="#2D2D44" Padding="15" BorderBrush="#3D3D5C" BorderThickness="1,0,1,1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Total Discounts" FontSize="12" Foreground="#8888AA"/>
                                <TextBlock Text="{Binding DiscountReport.TotalDiscounts, StringFormat='KSh {0:N2}'}"
                                           FontSize="24" FontWeight="Bold" Foreground="{StaticResource WarningBrush}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Transactions" FontSize="12" Foreground="#8888AA"/>
                                <TextBlock Text="{Binding DiscountReport.DiscountTransactionCount}"
                                           FontSize="24" FontWeight="Bold" Foreground="#8888AA"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Average Discount" FontSize="12" Foreground="#8888AA"/>
                                <TextBlock Text="{Binding DiscountReport.AverageDiscount, StringFormat='KSh {0:N2}'}"
                                           FontSize="24" FontWeight="Bold" Foreground="#8888AA"/>
                            </StackPanel>

                            <StackPanel Grid.Column="3">
                                <TextBlock Text="Discount Rate" FontSize="12" Foreground="#8888AA"/>
                                <TextBlock Text="{Binding DiscountReport.DiscountRate, StringFormat='{}{0:N1}%'}"
                                           FontSize="24" FontWeight="Bold" Foreground="{StaticResource WarningBrush}"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Discount Items Grid -->
                    <TextBlock Text="Discount Details" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,20,0,10"/>
                    <DataGrid ItemsSource="{Binding DiscountItems}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              MaxHeight="250"
                              Background="#2D2D44"
                              Foreground="White"
                              GridLinesVisibility="Horizontal"
                              HorizontalGridLinesBrush="#3D3D5C">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Receipt #" Binding="{Binding ReceiptNumber}" Width="100"/>
                            <DataGridTextColumn Header="Item" Binding="{Binding ItemDescription}" Width="180"/>
                            <DataGridTextColumn Header="Original" Binding="{Binding OriginalAmount, StringFormat='KSh {0:N2}'}" Width="100"/>
                            <DataGridTextColumn Header="Discount" Binding="{Binding DiscountAmount, StringFormat='KSh {0:N2}'}" Width="100"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding DiscountType}" Width="80"/>
                            <DataGridTextColumn Header="Applied By" Binding="{Binding AppliedBy}" Width="120"/>
                            <DataGridTextColumn Header="Time" Binding="{Binding TimeDisplay}" Width="60"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Discount by Type Summary -->
                    <Grid Margin="0,20,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="By Discount Type" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,10"/>
                            <DataGrid ItemsSource="{Binding DiscountByType}"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      HeadersVisibility="Column"
                                      MaxHeight="150"
                                      Background="#2D2D44"
                                      Foreground="White"
                                      GridLinesVisibility="Horizontal"
                                      HorizontalGridLinesBrush="#3D3D5C">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Type" Binding="{Binding DiscountType}" Width="100"/>
                                    <DataGridTextColumn Header="Count" Binding="{Binding Count}" Width="60"/>
                                    <DataGridTextColumn Header="Total" Binding="{Binding TotalAmount, StringFormat='KSh {0:N2}'}" Width="120"/>
                                    <DataGridTextColumn Header="%" Binding="{Binding Percentage, StringFormat='{}{0:N1}%'}" Width="60"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="By User" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,10"/>
                            <DataGrid ItemsSource="{Binding DiscountByUser}"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      HeadersVisibility="Column"
                                      MaxHeight="150"
                                      Background="#2D2D44"
                                      Foreground="White"
                                      GridLinesVisibility="Horizontal"
                                      HorizontalGridLinesBrush="#3D3D5C">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="User" Binding="{Binding UserName}" Width="120"/>
                                    <DataGridTextColumn Header="Count" Binding="{Binding Count}" Width="60"/>
                                    <DataGridTextColumn Header="Total" Binding="{Binding TotalAmount, StringFormat='KSh {0:N2}'}" Width="120"/>
                                    <DataGridTextColumn Header="%" Binding="{Binding Percentage, StringFormat='{}{0:N1}%'}" Width="60"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Footer with Actions -->
        <Border Grid.Row="3" Background="#2D2D44" Padding="20" BorderThickness="0,1,0,0" BorderBrush="#3D3D5C"
                Visibility="{Binding HasReport, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding VoidReport.GeneratedAt, StringFormat='Generated: {0:yyyy-MM-dd HH:mm}'}"
                           VerticalAlignment="Center"
                           Foreground="#8888AA"
                           Visibility="{Binding ShowVoidReport, Converter={StaticResource BoolToVisibilityConverter}}"/>

                <TextBlock Grid.Column="0"
                           Text="{Binding DiscountReport.GeneratedAt, StringFormat='Generated: {0:yyyy-MM-dd HH:mm}'}"
                           VerticalAlignment="Center"
                           Foreground="#8888AA"
                           Visibility="{Binding ShowDiscountReport, Converter={StaticResource BoolToVisibilityConverter}}"/>

                <Button Grid.Column="1"
                        Content="Print Report"
                        Command="{Binding PrintReportCommand}"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Width="120"
                        Height="40"
                        Margin="0,0,10,0"/>

                <Button Grid.Column="2"
                        Content="Export CSV"
                        Command="{Binding ExportCsvCommand}"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Width="120"
                        Height="40"/>
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="4"
                Background="#80000000"
                Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="{Binding BusyMessage}" FontSize="18" Foreground="White"/>
            </StackPanel>
        </Border>

        <!-- Error Message -->
        <Border Grid.Row="2"
                Background="{StaticResource ErrorBrush}"
                Padding="10"
                Margin="20"
                CornerRadius="4"
                VerticalAlignment="Top"
                Visibility="{Binding HasError, Converter={StaticResource BoolToVisibilityConverter}}">
            <TextBlock Text="{Binding ErrorMessage}" Foreground="White" TextWrapping="Wrap"/>
        </Border>
    </Grid>
</UserControl>
