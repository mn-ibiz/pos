<UserControl x:Class="HospitalityPOS.WPF.Views.ComparativeAnalyticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:HospitalityPOS.WPF.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="1600"
             Background="#1E1E2E">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter" />

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#2D2D44" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="16" />
        </Style>

        <!-- Metric Card Style -->
        <Style x:Key="MetricCardStyle" TargetType="Border" BasedOn="{StaticResource CardStyle}">
            <Setter Property="MinWidth" Value="200" />
            <Setter Property="MinHeight" Value="120" />
        </Style>

        <!-- Section Header Style -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Margin" Value="0,0,0,12" />
        </Style>

        <!-- Label Style -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="#8888AA" />
        </Style>

        <!-- Value Style -->
        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="White" />
        </Style>

        <!-- Small Value Style -->
        <Style x:Key="SmallValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="White" />
        </Style>

        <!-- Positive Trend Style -->
        <Style x:Key="PositiveTrendStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="#4CAF50" />
        </Style>

        <!-- Negative Trend Style -->
        <Style x:Key="NegativeTrendStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="#F44336" />
        </Style>

        <!-- Quick Button Style -->
        <Style x:Key="QuickButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3D3D5C" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="16,8" />
            <Setter Property="Margin" Value="4,0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4D4D6C" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#5D5D7C" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource QuickButtonStyle}">
            <Setter Property="Background" Value="#6366F1" />
        </Style>

        <!-- Data Grid Style -->
        <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="GridLinesVisibility" Value="Horizontal" />
            <Setter Property="HorizontalGridLinesBrush" Value="#3D3D5C" />
            <Setter Property="RowBackground" Value="Transparent" />
            <Setter Property="AlternatingRowBackground" Value="#252538" />
            <Setter Property="AutoGenerateColumns" Value="False" />
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="SelectionMode" Value="Single" />
            <Setter Property="HeadersVisibility" Value="Column" />
        </Style>
    </UserControl.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header Row -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel>
                <TextBlock Text="Comparative Analytics"
                           FontSize="28" FontWeight="Bold" Foreground="White" />
                <TextBlock Text="{Binding LastRefreshDisplay, StringFormat='Last updated: {0}'}"
                           Style="{StaticResource LabelStyle}" Margin="0,4,0,0" />
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="Export to Excel"
                        Style="{StaticResource QuickButtonStyle}"
                        Command="{Binding ExportToExcelCommand}" />
                <Button Content="Refresh"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Command="{Binding RefreshCommand}"
                        Margin="8,0,0,0" />
            </StackPanel>
        </Grid>

        <!-- Period Selection Row -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Quick Period Buttons -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Compare:" Style="{StaticResource LabelStyle}"
                               VerticalAlignment="Center" Margin="0,0,12,0" />
                    <Button Content="Day" Style="{StaticResource QuickButtonStyle}"
                            Command="{Binding ApplyQuickComparisonCommand}"
                            CommandParameter="DayOverDay" />
                    <Button Content="Week" Style="{StaticResource QuickButtonStyle}"
                            Command="{Binding ApplyQuickComparisonCommand}"
                            CommandParameter="WeekOverWeek" />
                    <Button Content="Month" Style="{StaticResource QuickButtonStyle}"
                            Command="{Binding ApplyQuickComparisonCommand}"
                            CommandParameter="MonthOverMonth" />
                    <Button Content="Quarter" Style="{StaticResource QuickButtonStyle}"
                            Command="{Binding ApplyQuickComparisonCommand}"
                            CommandParameter="QuarterOverQuarter" />
                    <Button Content="Year" Style="{StaticResource QuickButtonStyle}"
                            Command="{Binding ApplyQuickComparisonCommand}"
                            CommandParameter="YearOverYear" />
                </StackPanel>

                <!-- Custom Date Selection -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right"
                            Visibility="{Binding IsCustomPeriod, Converter={StaticResource BoolToVisConverter}}">
                    <TextBlock Text="Current:" Style="{StaticResource LabelStyle}"
                               VerticalAlignment="Center" Margin="0,0,8,0" />
                    <DatePicker SelectedDate="{Binding CurrentPeriodStart}" Width="120" />
                    <TextBlock Text="to" Foreground="#8888AA" VerticalAlignment="Center" Margin="8,0" />
                    <DatePicker SelectedDate="{Binding CurrentPeriodEnd}" Width="120" />
                    <TextBlock Text="vs Previous:" Style="{StaticResource LabelStyle}"
                               VerticalAlignment="Center" Margin="16,0,8,0" />
                    <DatePicker SelectedDate="{Binding PreviousPeriodStart}" Width="120" />
                    <TextBlock Text="to" Foreground="#8888AA" VerticalAlignment="Center" Margin="8,0" />
                    <DatePicker SelectedDate="{Binding PreviousPeriodEnd}" Width="120" />
                    <Button Content="Apply" Style="{StaticResource PrimaryButtonStyle}"
                            Command="{Binding ApplyCustomDatesCommand}" Margin="12,0,0,0" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- KPI Metrics Row -->
                <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,24">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Period Labels -->
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="{Binding PeriodComparison.CurrentPeriodLabel}"
                                       FontSize="16" FontWeight="SemiBold" Foreground="White" />
                            <TextBlock Text="vs" Foreground="#8888AA" Margin="0,4" />
                            <TextBlock Text="{Binding PeriodComparison.PreviousPeriodLabel}"
                                       FontSize="16" FontWeight="SemiBold" Foreground="#8888AA" />
                        </StackPanel>

                        <!-- Sales Metric -->
                        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                            <TextBlock Text="SALES" Style="{StaticResource LabelStyle}" />
                            <TextBlock Text="{Binding PeriodComparison.Sales.CurrentPeriodValue, StringFormat='KSh {0:N0}'}"
                                       Style="{StaticResource ValueStyle}" />
                            <TextBlock Text="{Binding PeriodComparison.Sales.FormattedChange}"
                                       FontSize="14" FontWeight="SemiBold">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#4CAF50" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding PeriodComparison.Sales.IsPositive}" Value="False">
                                                <Setter Property="Foreground" Value="#F44336" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>

                        <!-- Transactions Metric -->
                        <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                            <TextBlock Text="TRANSACTIONS" Style="{StaticResource LabelStyle}" />
                            <TextBlock Text="{Binding PeriodComparison.Transactions.CurrentPeriodValue, StringFormat='{}{0:N0}'}"
                                       Style="{StaticResource ValueStyle}" />
                            <TextBlock Text="{Binding PeriodComparison.Transactions.FormattedChange}"
                                       FontSize="14" FontWeight="SemiBold">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#4CAF50" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding PeriodComparison.Transactions.IsPositive}" Value="False">
                                                <Setter Property="Foreground" Value="#F44336" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>

                        <!-- Average Ticket Metric -->
                        <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                            <TextBlock Text="AVG TICKET" Style="{StaticResource LabelStyle}" />
                            <TextBlock Text="{Binding PeriodComparison.AverageTicket.CurrentPeriodValue, StringFormat='KSh {0:N0}'}"
                                       Style="{StaticResource ValueStyle}" />
                            <TextBlock Text="{Binding PeriodComparison.AverageTicket.FormattedChange}"
                                       FontSize="14" FontWeight="SemiBold">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#4CAF50" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding PeriodComparison.AverageTicket.IsPositive}" Value="False">
                                                <Setter Property="Foreground" Value="#F44336" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>

                        <!-- Items Sold Metric -->
                        <StackPanel Grid.Column="4" HorizontalAlignment="Center">
                            <TextBlock Text="ITEMS SOLD" Style="{StaticResource LabelStyle}" />
                            <TextBlock Text="{Binding PeriodComparison.ItemsSold.CurrentPeriodValue, StringFormat='{}{0:N0}'}"
                                       Style="{StaticResource ValueStyle}" />
                            <TextBlock Text="{Binding PeriodComparison.ItemsSold.FormattedChange}"
                                       FontSize="14" FontWeight="SemiBold">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#4CAF50" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding PeriodComparison.ItemsSold.IsPositive}" Value="False">
                                                <Setter Property="Foreground" Value="#F44336" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Top Movers Row -->
                <Grid Grid.Row="1" Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="24" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Top Gainers -->
                    <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="Top Gainers" Style="{StaticResource SectionHeaderStyle}" />
                            <ItemsControl ItemsSource="{Binding TopMovers.TopGainers}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding GrowthRank, StringFormat='#{0}'}"
                                                       Foreground="#8888AA" Width="30" />
                                            <TextBlock Grid.Column="1" Text="{Binding ProductName}"
                                                       Foreground="White" TextTrimming="CharacterEllipsis" />
                                            <TextBlock Grid.Column="2" Text="{Binding SalesGrowth.FormattedChange}"
                                                       Foreground="#4CAF50" FontWeight="SemiBold" />
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- Top Losers -->
                    <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="Top Losers" Style="{StaticResource SectionHeaderStyle}" />
                            <ItemsControl ItemsSource="{Binding TopMovers.TopLosers}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding GrowthRank, StringFormat='#{0}'}"
                                                       Foreground="#8888AA" Width="30" />
                                            <TextBlock Grid.Column="1" Text="{Binding ProductName}"
                                                       Foreground="White" TextTrimming="CharacterEllipsis" />
                                            <TextBlock Grid.Column="2" Text="{Binding SalesGrowth.FormattedChange}"
                                                       Foreground="#F44336" FontWeight="SemiBold" />
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Category Performance -->
                <Border Grid.Row="2" Style="{StaticResource CardStyle}" Margin="0,0,0,24">
                    <StackPanel>
                        <TextBlock Text="Category Performance" Style="{StaticResource SectionHeaderStyle}" />
                        <DataGrid ItemsSource="{Binding CategoryComparisons}"
                                  Style="{StaticResource ModernDataGridStyle}"
                                  MaxHeight="300">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Category" Binding="{Binding CategoryName}" Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="White" />
                                            <Setter Property="VerticalAlignment" Value="Center" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Current Sales" Binding="{Binding CurrentPeriodSales, StringFormat='KSh {0:N0}'}" Width="120">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="White" />
                                            <Setter Property="HorizontalAlignment" Value="Right" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Previous Sales" Binding="{Binding PreviousPeriodSales, StringFormat='KSh {0:N0}'}" Width="120">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#8888AA" />
                                            <Setter Property="HorizontalAlignment" Value="Right" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Growth" Binding="{Binding SalesGrowth.FormattedChange}" Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right" />
                                            <Setter Property="FontWeight" Value="SemiBold" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SalesGrowth.IsPositive}" Value="True">
                                                    <Setter Property="Foreground" Value="#4CAF50" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding SalesGrowth.IsPositive}" Value="False">
                                                    <Setter Property="Foreground" Value="#F44336" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Contribution" Binding="{Binding CurrentContributionPercent, StringFormat='{}{0:N1}%'}" Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="White" />
                                            <Setter Property="HorizontalAlignment" Value="Right" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>

                <!-- Day of Week Pattern (Heat Map) -->
                <Border Grid.Row="3" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Day of Week Pattern" Style="{StaticResource SectionHeaderStyle}" />
                        <ItemsControl ItemsSource="{Binding DayOfWeekPatterns}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Width="100" Height="80" Margin="4"
                                            Background="{Binding ColorCode}"
                                            CornerRadius="4">
                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding ShortDayName}"
                                                       FontWeight="Bold" Foreground="White"
                                                       HorizontalAlignment="Center" />
                                            <TextBlock Text="{Binding AverageSales, StringFormat='KSh {0:N0}'}"
                                                       FontSize="12" Foreground="White"
                                                       HorizontalAlignment="Center" />
                                            <TextBlock Text="{Binding PercentOfWeek, StringFormat='{}{0:N1}%'}"
                                                       FontSize="10" Foreground="White" Opacity="0.8"
                                                       HorizontalAlignment="Center" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="3" Background="#80000000"
                Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="4" />
                <TextBlock Text="{Binding StatusMessage}" Foreground="White"
                           HorizontalAlignment="Center" Margin="0,12,0,0" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
