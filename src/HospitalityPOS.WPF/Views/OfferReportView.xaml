<UserControl x:Class="HospitalityPOS.WPF.Views.OfferReportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewmodels="clr-namespace:HospitalityPOS.WPF.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1200"
             Background="#1E1E2E">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="Offer Performance Report"
                       Foreground="White"
                       FontSize="28"
                       FontWeight="Bold"/>
            <TextBlock Text="Analyze promotional offer effectiveness"
                       Foreground="#9CA3AF"
                       FontSize="14"
                       Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Filters -->
        <Border Grid.Row="1" Background="#2D2D44" CornerRadius="8" Padding="16" Margin="0,20,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Start Date -->
                <StackPanel Grid.Column="0" Margin="0,0,20,0">
                    <TextBlock Text="Start Date" Foreground="#9CA3AF" FontSize="12" Margin="0,0,0,4"/>
                    <DatePicker SelectedDate="{Binding StartDate}"
                                Width="140"
                                Background="#3D3D5C"
                                Foreground="White"
                                BorderBrush="#4F46E5"/>
                </StackPanel>

                <!-- End Date -->
                <StackPanel Grid.Column="1" Margin="0,0,20,0">
                    <TextBlock Text="End Date" Foreground="#9CA3AF" FontSize="12" Margin="0,0,0,4"/>
                    <DatePicker SelectedDate="{Binding EndDate}"
                                Width="140"
                                Background="#3D3D5C"
                                Foreground="White"
                                BorderBrush="#4F46E5"/>
                </StackPanel>

                <!-- Status Filter -->
                <StackPanel Grid.Column="2" Margin="0,0,20,0">
                    <TextBlock Text="Status" Foreground="#9CA3AF" FontSize="12" Margin="0,0,0,4"/>
                    <ComboBox ItemsSource="{Binding StatusFilters}"
                              SelectedItem="{Binding SelectedStatusFilter}"
                              Width="120"
                              Background="#3D3D5C"
                              Foreground="White"/>
                </StackPanel>

                <!-- Generate Button -->
                <Button Grid.Column="3"
                        Content="Generate Report"
                        Command="{Binding GenerateReportAsyncCommand}"
                        Background="#4F46E5"
                        Foreground="White"
                        Padding="16,8"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        VerticalAlignment="Bottom">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="6"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#6366F1"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Export Buttons -->
                <StackPanel Grid.Column="6" Orientation="Horizontal" VerticalAlignment="Bottom">
                    <Button Content="Export PDF"
                            Command="{Binding ExportToPdfAsyncCommand}"
                            Background="#059669"
                            Foreground="White"
                            Padding="12,8"
                            Margin="0,0,8,0"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="6"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="Export CSV"
                            Command="{Binding ExportToExcelAsyncCommand}"
                            Background="#0284C7"
                            Foreground="White"
                            Padding="12,8"
                            Margin="0,0,8,0"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="6"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="Print"
                            Command="{Binding PrintReportAsyncCommand}"
                            Background="#6B7280"
                            Foreground="White"
                            Padding="12,8"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="6"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Report Data Grid -->
        <Border Grid.Row="2" Background="#2D2D44" CornerRadius="8" Margin="0,20,0,0">
            <Grid>
                <!-- Loading Overlay -->
                <Border Background="#80000000"
                        CornerRadius="8"
                        Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}"
                        Panel.ZIndex="100">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Generating Report..."
                                   Foreground="White"
                                   FontSize="16"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Data Grid -->
                <DataGrid ItemsSource="{Binding OfferPerformance}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          Background="Transparent"
                          RowBackground="#2D2D44"
                          AlternatingRowBackground="#3D3D5C"
                          BorderThickness="0"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="#4D4D6C"
                          HeadersVisibility="Column"
                          CanUserSortColumns="True"
                          CanUserResizeColumns="True">

                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#4F46E5"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Padding" Value="12,8"/>
                            <Setter Property="BorderThickness" Value="0,0,1,0"/>
                            <Setter Property="BorderBrush" Value="#6366F1"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Padding" Value="12,8"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <Border Background="{TemplateBinding Background}"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#4F46E5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Offer Name" Binding="{Binding OfferName}" Width="*"/>
                        <DataGridTextColumn Header="Product" Binding="{Binding ProductName}" Width="*"/>
                        <DataGridTextColumn Header="Original" Binding="{Binding OriginalPrice, StringFormat='KSh {0:N2}'}" Width="100"/>
                        <DataGridTextColumn Header="Offer" Binding="{Binding OfferPrice, StringFormat='KSh {0:N2}'}" Width="100"/>
                        <DataGridTextColumn Header="Discount %" Binding="{Binding DiscountPercent, StringFormat='{}{0:N1}%'}" Width="80"/>
                        <DataGridTextColumn Header="Redemptions" Binding="{Binding RedemptionCount}" Width="100"/>
                        <DataGridTextColumn Header="Revenue" Binding="{Binding TotalRevenue, StringFormat='KSh {0:N2}'}" Width="120"/>
                        <DataGridTextColumn Header="Discount Given" Binding="{Binding TotalDiscountGiven, StringFormat='KSh {0:N2}'}" Width="120"/>
                        <DataGridTemplateColumn Header="Status" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Padding="6,3" CornerRadius="4"
                                            HorizontalAlignment="Center">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#6B7280"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="Active">
                                                        <Setter Property="Background" Value="#22C55E"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Expired">
                                                        <Setter Property="Background" Value="#EF4444"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Upcoming">
                                                        <Setter Property="Background" Value="#F59E0B"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding Status}"
                                                   Foreground="White"
                                                   FontSize="11"
                                                   FontWeight="Medium"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Start Date" Binding="{Binding StartDate, StringFormat='dd/MM/yyyy'}" Width="100"/>
                        <DataGridTextColumn Header="End Date" Binding="{Binding EndDate, StringFormat='dd/MM/yyyy'}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Summary Footer -->
        <Border Grid.Row="3" Background="#2D2D44" CornerRadius="8" Padding="16" Margin="0,20,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Redemptions -->
                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="Total Redemptions"
                               Foreground="#9CA3AF"
                               FontSize="14"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding TotalRedemptions, StringFormat='{}{0:N0}'}"
                               Foreground="#4F46E5"
                               FontSize="28"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Total Revenue -->
                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="Total Revenue"
                               Foreground="#9CA3AF"
                               FontSize="14"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding TotalRevenue, StringFormat='KSh {0:N2}'}"
                               Foreground="#22C55E"
                               FontSize="28"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Total Discount Given -->
                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock Text="Total Discount Given"
                               Foreground="#9CA3AF"
                               FontSize="14"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding TotalDiscountGiven, StringFormat='KSh {0:N2}'}"
                               Foreground="#EF4444"
                               FontSize="28"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
