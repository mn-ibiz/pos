<UserControl x:Class="HospitalityPOS.WPF.Views.ModifierGroupsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:HospitalityPOS.WPF.Converters"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1400"
             Background="#0F0F1A">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility"/>

        <!-- Gradient Brushes -->
        <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#F59E0B" Offset="0"/>
            <GradientStop Color="#FBBF24" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="SuccessGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#10B981" Offset="0"/>
            <GradientStop Color="#34D399" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="DangerGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#EF4444" Offset="0"/>
            <GradientStop Color="#F87171" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="CardGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#1A1A2E" Offset="0"/>
            <GradientStop Color="#16162A" Offset="1"/>
        </LinearGradientBrush>

        <!-- Modern Action Button Style -->
        <Style x:Key="ModernActionButton" TargetType="Button">
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="MinWidth" Value="110"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="16,10"
                                BorderThickness="1"
                                BorderBrush="#2D2D44">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="-1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="#2D2D44"/>
        </Style>

        <!-- Icon Button Style -->
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="#9CA3AF"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2D2D44"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3D3D54"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Search TextBox Style -->
        <Style x:Key="SearchTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#1A1A2E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="BorderBrush" Value="#2D2D44"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="40,12,12,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          VerticalAlignment="Center"
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#F59E0B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Stat Card Style -->
        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardGradient}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16,14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#2D2D44"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="380"/>
        </Grid.ColumnDefinitions>

        <!-- Main Content Area -->
        <Grid Grid.Column="0" Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Back Button -->
                <Button Grid.Column="0"
                        Style="{StaticResource IconButton}"
                        Command="{Binding GoBackCommand}"
                        ToolTip="Go Back (Esc)">
                    <Path Data="M 12 0 L 0 10 L 12 20"
                          Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                          StrokeThickness="2"
                          Width="12" Height="20"/>
                </Button>

                <!-- Title and Subtitle -->
                <StackPanel Grid.Column="1" Margin="16,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="Modifier Groups"
                               FontSize="26"
                               FontWeight="Bold"
                               Foreground="White"/>
                    <TextBlock Text="Manage product modifiers for restaurant mode (Toppings, Extras, etc.)"
                               FontSize="13"
                               Foreground="#6B7280"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Primary Action -->
                <Button Grid.Column="2"
                        Style="{StaticResource ModernActionButton}"
                        Background="{StaticResource SuccessGradient}"
                        Command="{Binding CreateModifierGroupCommand}"
                        ToolTip="Create New Modifier Group (Ctrl+N)">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="+" FontSize="18" FontWeight="Bold" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Text="New Modifier Group" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>

            <!-- Stats Row -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Groups Card -->
                <Border Grid.Column="0" Style="{StaticResource StatCard}" Margin="0,0,6,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Width="44" Height="44" CornerRadius="10" Background="#1F1A10" Margin="0,0,12,0">
                            <TextBlock Text="&#xE8C8;" FontFamily="Segoe MDL2 Assets" FontSize="18"
                                       Foreground="#F59E0B" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding TotalGroupsCount}" FontSize="24" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="Total Groups" FontSize="11" Foreground="#6B7280"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Active Groups Card -->
                <Border Grid.Column="1" Style="{StaticResource StatCard}" Margin="6,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Width="44" Height="44" CornerRadius="10" Background="#0D2818" Margin="0,0,12,0">
                            <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets" FontSize="18"
                                       Foreground="#10B981" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding ActiveGroupsCount}" FontSize="24" FontWeight="Bold" Foreground="#10B981"/>
                            <TextBlock Text="Active" FontSize="11" Foreground="#6B7280"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Total Items Card -->
                <Border Grid.Column="2" Style="{StaticResource StatCard}" Margin="6,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Width="44" Height="44" CornerRadius="10" Background="#1F1F33" Margin="0,0,12,0">
                            <TextBlock Text="&#xE71D;" FontFamily="Segoe MDL2 Assets" FontSize="18"
                                       Foreground="#6366F1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding TotalItemsCount}" FontSize="24" FontWeight="Bold" Foreground="#6366F1"/>
                            <TextBlock Text="Total Items" FontSize="11" Foreground="#6B7280"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Products Using Card -->
                <Border Grid.Column="3" Style="{StaticResource StatCard}" Margin="6,0,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Width="44" Height="44" CornerRadius="10" Background="#1F1F33" Margin="0,0,12,0">
                            <TextBlock Text="&#xE719;" FontFamily="Segoe MDL2 Assets" FontSize="18"
                                       Foreground="#8B5CF6" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding ProductsUsingModifiersCount}" FontSize="24" FontWeight="Bold" Foreground="#8B5CF6"/>
                            <TextBlock Text="Products Using" FontSize="11" Foreground="#6B7280"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- Search and Action Bar -->
            <Border Grid.Row="2" Background="{StaticResource CardGradient}" CornerRadius="12"
                    Padding="16" Margin="0,0,0,16" BorderThickness="1" BorderBrush="#2D2D44">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Search Box -->
                    <Grid Grid.Column="0" Margin="0,0,16,0">
                        <TextBox Style="{StaticResource SearchTextBox}"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged, Delay=300}"/>
                        <TextBlock Text="&#xE721;" FontFamily="Segoe MDL2 Assets" FontSize="16"
                                   Foreground="#6B7280" IsHitTestVisible="False"
                                   VerticalAlignment="Center" Margin="14,0,0,0"/>
                        <TextBlock Text="Search modifier groups..."
                                   FontSize="14"
                                   Foreground="#4B5563"
                                   IsHitTestVisible="False"
                                   VerticalAlignment="Center"
                                   Margin="44,0,0,0"
                                   Visibility="{Binding SearchText.Length, Converter={StaticResource InverseBoolToVisibility}}"/>
                    </Grid>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Style="{StaticResource ModernActionButton}"
                                Background="#2563EB"
                                Command="{Binding EditModifierGroupCommand}"
                                ToolTip="Edit Selected (Enter)">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE70F;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Edit"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource ModernActionButton}"
                                Background="{StaticResource DangerGradient}"
                                Command="{Binding DeleteModifierGroupCommand}"
                                ToolTip="Delete Selected (Del)">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE74D;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Delete"/>
                            </StackPanel>
                        </Button>

                        <Rectangle Width="1" Fill="#2D2D44" Margin="8,4"/>

                        <Button Style="{StaticResource IconButton}"
                                Command="{Binding LoadDataCommand}"
                                ToolTip="Refresh (F5)">
                            <TextBlock Text="&#xE72C;" FontFamily="Segoe MDL2 Assets" FontSize="16"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Modifier Groups List -->
            <Border Grid.Row="3"
                    Background="{StaticResource CardGradient}"
                    CornerRadius="12"
                    BorderThickness="1"
                    BorderBrush="#2D2D44">
                <Grid>
                    <DataGrid ItemsSource="{Binding ModifierGroups}"
                              SelectedItem="{Binding SelectedGroup}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              Background="Transparent"
                              BorderThickness="0"
                              RowBackground="Transparent"
                              AlternatingRowBackground="#0A0A14"
                              Foreground="White"
                              GridLinesVisibility="None"
                              HeadersVisibility="Column"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              SelectionMode="Single"
                              SelectionUnit="FullRow"
                              RowHeight="60"
                              FontSize="13"
                              Visibility="{Binding ModifierGroups.Count, Converter={StaticResource BoolToVisibility}}">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="#6B7280"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="FontSize" Value="12"/>
                                <Setter Property="Padding" Value="16,14"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="BorderBrush" Value="#2D2D44"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Padding" Value="16,8"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Focusable" Value="False"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGridCell">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#1E1E38"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.CellStyle>
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="BorderBrush" Value="#1A1A2E"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#141428"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#1E1E38"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.Columns>
                            <!-- Group Name -->
                            <DataGridTemplateColumn Header="MODIFIER GROUP" Width="*" MinWidth="200">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Border Grid.Column="0" Width="44" Height="44" CornerRadius="8" Margin="0,0,12,0"
                                                    Background="{StaticResource PrimaryGradient}">
                                                <TextBlock Text="{Binding Name[0]}" FontSize="16" FontWeight="Bold"
                                                           Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="SemiBold" Foreground="White"/>
                                                <TextBlock Text="{Binding Description}" FontSize="11" Foreground="#6B7280" Margin="0,2,0,0"
                                                           TextTrimming="CharacterEllipsis" MaxWidth="250"/>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Selection Type -->
                            <DataGridTemplateColumn Header="TYPE" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Background="#1F1F33" CornerRadius="6" Padding="8,4" HorizontalAlignment="Left">
                                            <TextBlock Text="{Binding SelectionType}" FontSize="12" Foreground="#9CA3AF"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Items Count -->
                            <DataGridTemplateColumn Header="ITEMS" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock FontSize="14" FontWeight="SemiBold" Foreground="White">
                                            <Run Text="{Binding Items.Count, Mode=OneWay}"/>
                                            <Run Text=" items" FontWeight="Normal" Foreground="#6B7280"/>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Required -->
                            <DataGridTemplateColumn Header="REQUIRED" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="6" Padding="10,5" HorizontalAlignment="Left">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#1F1A10"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsRequired}" Value="False">
                                                            <Setter Property="Background" Value="#1F1F33"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock FontSize="11" FontWeight="SemiBold">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="Required"/>
                                                        <Setter Property="Foreground" Value="#F59E0B"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsRequired}" Value="False">
                                                                <Setter Property="Text" Value="Optional"/>
                                                                <Setter Property="Foreground" Value="#6B7280"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Status -->
                            <DataGridTemplateColumn Header="STATUS" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="6" Padding="10,5" HorizontalAlignment="Left">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#0D2818"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                            <Setter Property="Background" Value="#1F1F33"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock FontSize="11" FontWeight="SemiBold">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="Active"/>
                                                        <Setter Property="Foreground" Value="#10B981"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                                <Setter Property="Text" Value="Inactive"/>
                                                                <Setter Property="Foreground" Value="#6B7280"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Empty State -->
                    <StackPanel VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Visibility="{Binding ModifierGroups.Count, Converter={StaticResource InverseBoolToVisibility}}">
                        <Border Width="80" Height="80" CornerRadius="40" Background="#1F1F33" Margin="0,0,0,16">
                            <TextBlock Text="&#xE8C8;" FontFamily="Segoe MDL2 Assets" FontSize="32"
                                       Foreground="#4B5563" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="No Modifier Groups Found"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Create modifier groups like Toppings, Extras, or Cooking Preferences"
                                   FontSize="13"
                                   Foreground="#6B7280"
                                   HorizontalAlignment="Center"
                                   Margin="0,8,0,20"/>
                        <Button Style="{StaticResource ModernActionButton}"
                                Background="{StaticResource PrimaryGradient}"
                                Command="{Binding CreateModifierGroupCommand}"
                                HorizontalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="+" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Create Modifier Group"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- Loading Overlay -->
                    <Border Background="#CC0F0F1A"
                            CornerRadius="12"
                            Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibility}}">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <ProgressBar IsIndeterminate="True"
                                         Width="160"
                                         Height="4"
                                         Foreground="#F59E0B"
                                         Background="#1F1F33"/>
                            <TextBlock Text="{Binding BusyMessage}"
                                       Foreground="#9CA3AF"
                                       FontSize="13"
                                       HorizontalAlignment="Center"
                                       Margin="0,12,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Right Sidebar - Modifier Group Details Panel -->
        <Border Grid.Column="1"
                Background="{StaticResource CardGradient}"
                BorderThickness="1,0,0,0"
                BorderBrush="#2D2D44">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Panel Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock Text="Group Details"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="White"/>
                    <TextBlock Text="View items for selected group"
                               FontSize="12"
                               Foreground="#6B7280"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Details Content -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- No Selection State -->
                        <StackPanel Visibility="{Binding SelectedGroup, Converter={StaticResource InverseBoolToVisibility}}"
                                    VerticalAlignment="Center" Margin="0,40,0,0">
                            <Border Width="64" Height="64" CornerRadius="32" Background="#1F1F33" Margin="0,0,0,16" HorizontalAlignment="Center">
                                <TextBlock Text="&#xE8C8;" FontFamily="Segoe MDL2 Assets" FontSize="24"
                                           Foreground="#4B5563" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="No Group Selected"
                                       FontSize="14"
                                       Foreground="#6B7280"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Select a group to view its items"
                                       FontSize="12"
                                       Foreground="#4B5563"
                                       HorizontalAlignment="Center"
                                       Margin="0,4,0,0"/>
                        </StackPanel>

                        <!-- Selected Group Details -->
                        <StackPanel Visibility="{Binding SelectedGroup, Converter={StaticResource BoolToVisibility}}">
                            <!-- Group Avatar -->
                            <Border Width="80" Height="80" CornerRadius="16" HorizontalAlignment="Center" Margin="0,0,0,16"
                                    Background="{StaticResource PrimaryGradient}">
                                <TextBlock Text="{Binding SelectedGroup.Name[0]}"
                                           FontSize="32"
                                           FontWeight="Bold"
                                           Foreground="White"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>

                            <!-- Group Name -->
                            <TextBlock Text="{Binding SelectedGroup.Name}"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"/>

                            <!-- Group Type Badge -->
                            <Border CornerRadius="6" Padding="12,6" Margin="0,8,0,0" HorizontalAlignment="Center"
                                    Background="#1F1F33">
                                <TextBlock Text="{Binding SelectedGroup.SelectionType}"
                                           FontSize="12"
                                           Foreground="#9CA3AF"/>
                            </Border>

                            <!-- Divider -->
                            <Rectangle Height="1" Fill="#2D2D44" Margin="0,20"/>

                            <!-- Items Header -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Modifier Items" FontSize="14" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center"/>
                                <Button Grid.Column="1"
                                        Style="{StaticResource IconButton}"
                                        Command="{Binding AddItemCommand}"
                                        ToolTip="Add Item"
                                        Width="32" Height="32">
                                    <TextBlock Text="+" FontSize="18" FontWeight="Bold"/>
                                </Button>
                            </Grid>

                            <!-- Items List -->
                            <ItemsControl ItemsSource="{Binding SelectedGroup.Items}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#1F1F33" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Reorder Buttons -->
                                                <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,10,0" VerticalAlignment="Center">
                                                    <Button Style="{StaticResource IconButton}" Width="24" Height="20"
                                                            Command="{Binding DataContext.MoveItemUpCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}"
                                                            ToolTip="Move Up">
                                                        <TextBlock Text="&#xE70E;" FontFamily="Segoe MDL2 Assets" FontSize="10" Foreground="#9CA3AF"/>
                                                    </Button>
                                                    <Button Style="{StaticResource IconButton}" Width="24" Height="20"
                                                            Command="{Binding DataContext.MoveItemDownCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}"
                                                            ToolTip="Move Down">
                                                        <TextBlock Text="&#xE70D;" FontFamily="Segoe MDL2 Assets" FontSize="10" Foreground="#9CA3AF"/>
                                                    </Button>
                                                </StackPanel>

                                                <!-- Item Info -->
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Name}" FontSize="13" FontWeight="SemiBold" Foreground="White"/>
                                                    <TextBlock FontSize="11" Foreground="#6B7280" Margin="0,2,0,0">
                                                        <Run Text="KSh "/>
                                                        <Run Text="{Binding Price, StringFormat=N0}"/>
                                                    </TextBlock>
                                                </StackPanel>

                                                <!-- Default Badge -->
                                                <Border Grid.Column="2" CornerRadius="4" Padding="6,2" Margin="8,0"
                                                        Background="#0D2818"
                                                        Visibility="{Binding IsDefault, Converter={StaticResource BoolToVisibility}}">
                                                    <TextBlock Text="Default" FontSize="10" Foreground="#10B981"/>
                                                </Border>

                                                <!-- Edit/Delete Buttons -->
                                                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                                                    <Button Style="{StaticResource IconButton}" Width="28" Height="28"
                                                            Command="{Binding DataContext.EditItemCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}"
                                                            ToolTip="Edit Item">
                                                        <TextBlock Text="&#xE70F;" FontFamily="Segoe MDL2 Assets" FontSize="10"/>
                                                    </Button>
                                                    <Button Style="{StaticResource IconButton}" Width="28" Height="28"
                                                            Command="{Binding DataContext.DeleteItemCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}"
                                                            ToolTip="Delete Item">
                                                        <TextBlock Text="&#xE74D;" FontFamily="Segoe MDL2 Assets" FontSize="10" Foreground="#EF4444"/>
                                                    </Button>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Empty Items State -->
                            <Border Background="#1F1F33" CornerRadius="8" Padding="20" Margin="0,8,0,0"
                                    Visibility="{Binding SelectedGroup.Items.Count, Converter={StaticResource InverseBoolToVisibility}}">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="No items defined"
                                               FontSize="13"
                                               Foreground="#6B7280"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Add items like Extra Cheese, Well Done, etc."
                                               FontSize="11"
                                               Foreground="#4B5563"
                                               HorizontalAlignment="Center"
                                               Margin="0,4,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Divider -->
                            <Rectangle Height="1" Fill="#2D2D44" Margin="0,20"/>

                            <!-- Quick Actions -->
                            <TextBlock Text="Quick Actions" FontSize="12" Foreground="#6B7280" Margin="0,0,0,12"/>

                            <Button Style="{StaticResource ModernActionButton}"
                                    Background="#2563EB"
                                    HorizontalAlignment="Stretch"
                                    Margin="0,0,0,8"
                                    Command="{Binding EditModifierGroupCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE70F;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Edit Group"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource ModernActionButton}"
                                    Background="{StaticResource DangerGradient}"
                                    HorizontalAlignment="Stretch"
                                    Command="{Binding DeleteModifierGroupCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE74D;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Delete Group"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>
