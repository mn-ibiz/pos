<UserControl x:Class="HospitalityPOS.WPF.Views.SalesReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:HospitalityPOS.WPF.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1400"
             Background="#1E1E2E">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter" />

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#2D2D44" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="16" />
            <Setter Property="Margin" Value="0,0,0,16" />
        </Style>

        <!-- Summary Label Style -->
        <Style x:Key="SummaryLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="#8888AA" />
        </Style>

        <!-- Summary Value Style -->
        <Style x:Key="SummaryValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="White" />
        </Style>

        <!-- DataGrid Style -->
        <Style x:Key="ReportDataGridStyle" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="GridLinesVisibility" Value="Horizontal" />
            <Setter Property="HorizontalGridLinesBrush" Value="#3D3D5C" />
            <Setter Property="RowBackground" Value="#2D2D44" />
            <Setter Property="AlternatingRowBackground" Value="#353550" />
            <Setter Property="SelectionMode" Value="Single" />
            <Setter Property="CanUserAddRows" Value="False" />
            <Setter Property="CanUserDeleteRows" Value="False" />
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="RowHeight" Value="40" />
        </Style>
    </UserControl.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="Back"
                    Command="{Binding GoBackCommand}"
                    Background="#3D3D5C"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="16,12"
                    FontSize="14"
                    Cursor="Hand" />

            <TextBlock Grid.Column="1"
                       Text="Sales Reports"
                       FontSize="28"
                       FontWeight="SemiBold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />

            <Button Grid.Column="2"
                    Content="Export CSV"
                    Command="{Binding ExportCsvCommand}"
                    IsEnabled="{Binding HasReport}"
                    Background="#2196F3"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="16,12"
                    FontSize="14"
                    Cursor="Hand"
                    Margin="0,0,12,0" />

            <Button Grid.Column="3"
                    Content="Print"
                    Command="{Binding PrintReportCommand}"
                    IsEnabled="{Binding HasReport}"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="16,12"
                    FontSize="14"
                    Cursor="Hand" />
        </Grid>

        <!-- Controls Bar -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Report Type Selection -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Report Type:"
                               FontSize="14"
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="0,0,12,0" />
                    <ComboBox ItemsSource="{Binding ReportTypes}"
                              SelectedItem="{Binding SelectedReportType}"
                              DisplayMemberPath="Name"
                              Width="220"
                              Height="40"
                              FontSize="14"
                              Background="#3D3D5C"
                              Foreground="White"
                              BorderThickness="0" />
                </StackPanel>

                <!-- Date Range Selection -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="From:"
                               FontSize="14"
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0" />
                    <DatePicker SelectedDate="{Binding FromDate}"
                                Width="130"
                                Height="40"
                                FontSize="14"
                                Background="#3D3D5C"
                                Foreground="White" />

                    <TextBlock Text="To:"
                               FontSize="14"
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="16,0,8,0" />
                    <DatePicker SelectedDate="{Binding ToDate}"
                                Width="130"
                                Height="40"
                                FontSize="14"
                                Background="#3D3D5C"
                                Foreground="White" />

                    <!-- Quick Date Buttons -->
                    <Button Content="Today"
                            Command="{Binding SetTodayCommand}"
                            Background="#3D3D5C"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="12,8"
                            FontSize="12"
                            Cursor="Hand"
                            Margin="16,0,4,0" />
                    <Button Content="Yesterday"
                            Command="{Binding SetYesterdayCommand}"
                            Background="#3D3D5C"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="12,8"
                            FontSize="12"
                            Cursor="Hand"
                            Margin="0,0,4,0" />
                    <Button Content="This Week"
                            Command="{Binding SetThisWeekCommand}"
                            Background="#3D3D5C"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="12,8"
                            FontSize="12"
                            Cursor="Hand"
                            Margin="0,0,4,0" />
                    <Button Content="This Month"
                            Command="{Binding SetThisMonthCommand}"
                            Background="#3D3D5C"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="12,8"
                            FontSize="12"
                            Cursor="Hand" />
                </StackPanel>

                <!-- Generate Button -->
                <Button Grid.Column="2"
                        Content="Generate Report"
                        Command="{Binding GenerateReportCommand}"
                        Background="#FF9800"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="24,12"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand" />
            </Grid>
        </Border>

        <!-- Report Content -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Loading Indicator -->
                <Border Grid.Row="0" Grid.RowSpan="3"
                        Background="#80000000"
                        CornerRadius="12"
                        Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisConverter}}"
                        Panel.ZIndex="10">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <ProgressBar IsIndeterminate="True"
                                     Width="200"
                                     Height="4"
                                     Foreground="#FF9800" />
                        <TextBlock Text="{Binding BusyMessage}"
                                   Foreground="White"
                                   FontSize="14"
                                   Margin="0,12,0,0"
                                   HorizontalAlignment="Center" />
                    </StackPanel>
                </Border>

                <!-- Error Message -->
                <Border Grid.Row="0"
                        Background="#5A2D2D"
                        CornerRadius="8"
                        Padding="16"
                        Margin="0,0,0,16"
                        Visibility="{Binding HasError, Converter={StaticResource BoolToVisConverter}}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding ErrorMessage}"
                                   Foreground="White"
                                   FontSize="14"
                                   VerticalAlignment="Center" />
                        <Button Grid.Column="1"
                                Content="X"
                                Command="{Binding ClearErrorCommand}"
                                Background="Transparent"
                                Foreground="White"
                                BorderThickness="0"
                                FontSize="14"
                                Cursor="Hand" />
                    </Grid>
                </Border>

                <!-- Daily Summary Section (Always Visible when HasReport) -->
                <Border Grid.Row="1"
                        Style="{StaticResource CardStyle}"
                        Visibility="{Binding ShowDailySummary, Converter={StaticResource BoolToVisConverter}}">
                    <StackPanel>
                        <TextBlock Text="Sales Summary"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   Margin="0,0,0,16" />

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- Gross Sales -->
                            <StackPanel Grid.Column="0" Margin="0,0,16,0">
                                <TextBlock Text="Gross Sales" Style="{StaticResource SummaryLabelStyle}" />
                                <TextBlock Text="{Binding DailySummary.GrossSales, StringFormat='KSh {0:N2}'}"
                                           Style="{StaticResource SummaryValueStyle}" />
                            </StackPanel>

                            <!-- Discounts -->
                            <StackPanel Grid.Column="1" Margin="0,0,16,0">
                                <TextBlock Text="Discounts" Style="{StaticResource SummaryLabelStyle}" />
                                <TextBlock Text="{Binding DailySummary.Discounts, StringFormat='KSh {0:N2}'}"
                                           Style="{StaticResource SummaryValueStyle}"
                                           Foreground="#FF9800" />
                            </StackPanel>

                            <!-- Net Sales -->
                            <StackPanel Grid.Column="2" Margin="0,0,16,0">
                                <TextBlock Text="Net Sales" Style="{StaticResource SummaryLabelStyle}" />
                                <TextBlock Text="{Binding DailySummary.NetSales, StringFormat='KSh {0:N2}'}"
                                           Style="{StaticResource SummaryValueStyle}" />
                            </StackPanel>

                            <!-- Tax Collected -->
                            <StackPanel Grid.Column="3" Margin="0,0,16,0">
                                <TextBlock Text="Tax Collected" Style="{StaticResource SummaryLabelStyle}" />
                                <TextBlock Text="{Binding DailySummary.TaxCollected, StringFormat='KSh {0:N2}'}"
                                           Style="{StaticResource SummaryValueStyle}"
                                           Foreground="#2196F3" />
                            </StackPanel>

                            <!-- Total Revenue -->
                            <StackPanel Grid.Column="4" Margin="0,0,16,0">
                                <TextBlock Text="Total Revenue" Style="{StaticResource SummaryLabelStyle}" />
                                <TextBlock Text="{Binding DailySummary.TotalRevenue, StringFormat='KSh {0:N2}'}"
                                           Style="{StaticResource SummaryValueStyle}"
                                           Foreground="#4CAF50" />
                            </StackPanel>

                            <!-- Transactions -->
                            <StackPanel Grid.Column="5">
                                <TextBlock Text="Transactions" Style="{StaticResource SummaryLabelStyle}" />
                                <TextBlock Text="{Binding DailySummary.TransactionCount}"
                                           Style="{StaticResource SummaryValueStyle}" />
                            </StackPanel>
                        </Grid>

                        <!-- Second Row of Summary -->
                        <Grid Margin="0,16,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- Average Transaction -->
                            <StackPanel Grid.Column="0" Margin="0,0,16,0">
                                <TextBlock Text="Average Transaction" Style="{StaticResource SummaryLabelStyle}" />
                                <TextBlock Text="{Binding DailySummary.AverageTransaction, StringFormat='KSh {0:N2}'}"
                                           Style="{StaticResource SummaryValueStyle}" />
                            </StackPanel>

                            <!-- Largest Transaction -->
                            <StackPanel Grid.Column="1" Margin="0,0,16,0">
                                <TextBlock Text="Largest Transaction" Style="{StaticResource SummaryLabelStyle}" />
                                <TextBlock Text="{Binding DailySummary.LargestTransaction, StringFormat='KSh {0:N2}'}"
                                           Style="{StaticResource SummaryValueStyle}" />
                            </StackPanel>

                            <!-- Voided Count -->
                            <StackPanel Grid.Column="2" Margin="0,0,16,0">
                                <TextBlock Text="Voided Transactions" Style="{StaticResource SummaryLabelStyle}" />
                                <TextBlock Text="{Binding DailySummary.VoidedCount}"
                                           Style="{StaticResource SummaryValueStyle}"
                                           Foreground="#F44336" />
                            </StackPanel>

                            <!-- Voided Amount -->
                            <StackPanel Grid.Column="3">
                                <TextBlock Text="Voided Amount" Style="{StaticResource SummaryLabelStyle}" />
                                <TextBlock Text="{Binding DailySummary.VoidedAmount, StringFormat='KSh {0:N2}'}"
                                           Style="{StaticResource SummaryValueStyle}"
                                           Foreground="#F44336" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Report Data Grid Section -->
                <Border Grid.Row="2" Style="{StaticResource CardStyle}">
                    <Grid>
                        <!-- Product Sales Grid -->
                        <DataGrid ItemsSource="{Binding ProductSales}"
                                  Style="{StaticResource ReportDataGridStyle}"
                                  Visibility="{Binding ShowProductSales, Converter={StaticResource BoolToVisConverter}}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Product Code" Binding="{Binding ProductCode}" Width="100" />
                                <DataGridTextColumn Header="Product Name" Binding="{Binding ProductName}" Width="200" />
                                <DataGridTextColumn Header="Category" Binding="{Binding CategoryName}" Width="120" />
                                <DataGridTextColumn Header="Qty Sold" Binding="{Binding QuantitySold, StringFormat='{}{0:N0}'}" Width="80" />
                                <DataGridTextColumn Header="Gross Sales" Binding="{Binding GrossSales, StringFormat='KSh {0:N2}'}" Width="120" />
                                <DataGridTextColumn Header="Discounts" Binding="{Binding Discounts, StringFormat='KSh {0:N2}'}" Width="100" />
                                <DataGridTextColumn Header="Net Sales" Binding="{Binding NetSales, StringFormat='KSh {0:N2}'}" Width="120" />
                                <DataGridTextColumn Header="%" Binding="{Binding Percentage, StringFormat='{}{0:N1}%'}" Width="60" />
                                <DataGridTextColumn Header="COGS" Binding="{Binding CostOfGoodsSold, StringFormat='KSh {0:N2}'}" Width="100" />
                                <DataGridTextColumn Header="Gross Profit" Binding="{Binding GrossProfit, StringFormat='KSh {0:N2}'}" Width="120" />
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Category Sales Grid -->
                        <DataGrid ItemsSource="{Binding CategorySales}"
                                  Style="{StaticResource ReportDataGridStyle}"
                                  Visibility="{Binding ShowCategorySales, Converter={StaticResource BoolToVisConverter}}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Category" Binding="{Binding CategoryName}" Width="200" />
                                <DataGridTextColumn Header="Items" Binding="{Binding ItemCount}" Width="80" />
                                <DataGridTextColumn Header="Qty Sold" Binding="{Binding QuantitySold, StringFormat='{}{0:N0}'}" Width="100" />
                                <DataGridTextColumn Header="Gross Sales" Binding="{Binding GrossSales, StringFormat='KSh {0:N2}'}" Width="140" />
                                <DataGridTextColumn Header="Discounts" Binding="{Binding Discounts, StringFormat='KSh {0:N2}'}" Width="120" />
                                <DataGridTextColumn Header="Net Sales" Binding="{Binding NetSales, StringFormat='KSh {0:N2}'}" Width="140" />
                                <DataGridTextColumn Header="%" Binding="{Binding Percentage, StringFormat='{}{0:N1}%'}" Width="80" />
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Cashier Sales Grid -->
                        <DataGrid ItemsSource="{Binding CashierSales}"
                                  Style="{StaticResource ReportDataGridStyle}"
                                  Visibility="{Binding ShowCashierSales, Converter={StaticResource BoolToVisConverter}}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Cashier" Binding="{Binding CashierName}" Width="180" />
                                <DataGridTextColumn Header="Transactions" Binding="{Binding TransactionCount}" Width="100" />
                                <DataGridTextColumn Header="Total Sales" Binding="{Binding TotalSales, StringFormat='KSh {0:N2}'}" Width="140" />
                                <DataGridTextColumn Header="Average" Binding="{Binding AverageTransaction, StringFormat='KSh {0:N2}'}" Width="120" />
                                <DataGridTextColumn Header="Discounts Given" Binding="{Binding TotalDiscounts, StringFormat='KSh {0:N2}'}" Width="120" />
                                <DataGridTextColumn Header="Voids" Binding="{Binding VoidCount}" Width="80" />
                                <DataGridTextColumn Header="Void Amount" Binding="{Binding VoidAmount, StringFormat='KSh {0:N2}'}" Width="120" />
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Payment Method Sales Grid -->
                        <DataGrid ItemsSource="{Binding PaymentMethodSales}"
                                  Style="{StaticResource ReportDataGridStyle}"
                                  Visibility="{Binding ShowPaymentMethodSales, Converter={StaticResource BoolToVisConverter}}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Payment Method" Binding="{Binding PaymentMethodName}" Width="200" />
                                <DataGridTextColumn Header="Transactions" Binding="{Binding TransactionCount}" Width="120" />
                                <DataGridTextColumn Header="Total Amount" Binding="{Binding TotalAmount, StringFormat='KSh {0:N2}'}" Width="160" />
                                <DataGridTextColumn Header="%" Binding="{Binding Percentage, StringFormat='{}{0:N1}%'}" Width="100" />
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Hourly Sales Grid -->
                        <DataGrid ItemsSource="{Binding HourlySales}"
                                  Style="{StaticResource ReportDataGridStyle}"
                                  Visibility="{Binding ShowHourlySales, Converter={StaticResource BoolToVisConverter}}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Hour" Binding="{Binding HourDisplay}" Width="150" />
                                <DataGridTextColumn Header="Transactions" Binding="{Binding TransactionCount}" Width="120" />
                                <DataGridTextColumn Header="Total Sales" Binding="{Binding TotalSales, StringFormat='KSh {0:N2}'}" Width="160" />
                                <DataGridTextColumn Header="Average" Binding="{Binding AverageTransaction, StringFormat='KSh {0:N2}'}" Width="140" />
                                <DataGridTextColumn Header="% of Day" Binding="{Binding Percentage, StringFormat='{}{0:N1}%'}" Width="100" />
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- No Report Message -->
                        <TextBlock Text="Select a report type and date range, then click Generate Report"
                                   FontSize="16"
                                   Foreground="#8888AA"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Visibility="{Binding HasReport, Converter={StaticResource BoolToVisConverter}, ConverterParameter=Inverse}"
                                   Panel.ZIndex="-1" />
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
