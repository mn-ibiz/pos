<UserControl x:Class="HospitalityPOS.WPF.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:HospitalityPOS.WPF.ViewModels"
             xmlns:oxy="http://oxyplot.org/wpf"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="1600"
             Background="#1E1E2E">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter" />

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#2D2D44" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="16" />
        </Style>

        <!-- KPI Card Style -->
        <Style x:Key="KpiCardStyle" TargetType="Border" BasedOn="{StaticResource CardStyle}">
            <Setter Property="MinWidth" Value="200" />
            <Setter Property="MinHeight" Value="100" />
        </Style>

        <!-- Label Style -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="#8888AA" />
        </Style>

        <!-- Value Style -->
        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="White" />
        </Style>

        <!-- Small Value Style -->
        <Style x:Key="SmallValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="White" />
        </Style>

        <!-- Positive Trend Style -->
        <Style x:Key="PositiveTrendStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="#4CAF50" />
        </Style>

        <!-- Negative Trend Style -->
        <Style x:Key="NegativeTrendStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="#F44336" />
        </Style>

        <!-- Alert Badge Style -->
        <Style x:Key="AlertBadgeStyle" TargetType="Border">
            <Setter Property="Background" Value="#F44336" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Padding" Value="8,2" />
            <Setter Property="MinWidth" Value="20" />
        </Style>

        <!-- Warning Badge Style -->
        <Style x:Key="WarningBadgeStyle" TargetType="Border">
            <Setter Property="Background" Value="#FF9800" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Padding" Value="8,2" />
            <Setter Property="MinWidth" Value="20" />
        </Style>
    </UserControl.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="Back"
                    Command="{Binding GoBackCommand}"
                    Background="#3D3D5C"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="16,12"
                    FontSize="14"
                    Cursor="Hand" />

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Sales Dashboard"
                           FontSize="28"
                           FontWeight="SemiBold"
                           Foreground="White"
                           Margin="0,0,16,0" />
                <TextBlock Text="{Binding LastRefreshDisplay, StringFormat='Last updated: {0}'}"
                           FontSize="12"
                           Foreground="#8888AA"
                           VerticalAlignment="Center" />
            </StackPanel>

            <!-- Branch/Store Filter -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,16,0"
                        Visibility="{Binding IsMultiStoreEnabled, Converter={StaticResource BoolToVisConverter}}">
                <TextBlock Text="Branch:"
                           Foreground="#8888AA"
                           VerticalAlignment="Center"
                           Margin="0,0,8,0" />
                <ComboBox ItemsSource="{Binding AvailableStores}"
                          SelectedValue="{Binding SelectedStoreId}"
                          SelectedValuePath="StoreId"
                          DisplayMemberPath="StoreName"
                          Background="#3D3D5C"
                          Foreground="White"
                          MinWidth="150"
                          Padding="8,6">
                    <ComboBox.Style>
                        <Style TargetType="ComboBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ComboBox">
                                        <Grid>
                                            <ToggleButton x:Name="ToggleButton"
                                                          Background="#3D3D5C"
                                                          BorderThickness="0"
                                                          Focusable="False"
                                                          IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                          ClickMode="Press">
                                                <ToggleButton.Template>
                                                    <ControlTemplate TargetType="ToggleButton">
                                                        <Border Background="{TemplateBinding Background}"
                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                                CornerRadius="4"
                                                                Padding="8,6">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*" />
                                                                    <ColumnDefinition Width="Auto" />
                                                                </Grid.ColumnDefinitions>
                                                                <ContentPresenter Grid.Column="0"
                                                                                  Content="{Binding SelectedItem.StoreName, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                                                                  VerticalAlignment="Center"
                                                                                  TextBlock.Foreground="White" />
                                                                <Path Grid.Column="1"
                                                                      Data="M0,0 L4,4 L8,0"
                                                                      Fill="White"
                                                                      Stroke="White"
                                                                      StrokeThickness="1"
                                                                      VerticalAlignment="Center"
                                                                      Margin="8,0,0,0" />
                                                            </Grid>
                                                        </Border>
                                                    </ControlTemplate>
                                                </ToggleButton.Template>
                                            </ToggleButton>
                                            <Popup x:Name="Popup"
                                                   Placement="Bottom"
                                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                                   AllowsTransparency="True"
                                                   Focusable="False"
                                                   PopupAnimation="Slide">
                                                <Border Background="#2D2D44"
                                                        BorderBrush="#3D3D5C"
                                                        BorderThickness="1"
                                                        CornerRadius="4"
                                                        MaxHeight="300"
                                                        MinWidth="{TemplateBinding ActualWidth}">
                                                    <ScrollViewer Margin="4">
                                                        <StackPanel>
                                                            <!-- All Branches Option -->
                                                            <Border Background="Transparent"
                                                                    Padding="8,6"
                                                                    Cursor="Hand">
                                                                <Border.InputBindings>
                                                                    <MouseBinding MouseAction="LeftClick"
                                                                                  Command="{Binding FilterByStoreCommand}"
                                                                                  CommandParameter="{x:Null}" />
                                                                </Border.InputBindings>
                                                                <TextBlock Text="All Branches" Foreground="White" />
                                                            </Border>
                                                            <ItemsPresenter />
                                                        </StackPanel>
                                                    </ScrollViewer>
                                                </Border>
                                            </Popup>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="ItemContainerStyle">
                                <Setter.Value>
                                    <Style TargetType="ComboBoxItem">
                                        <Setter Property="Background" Value="Transparent" />
                                        <Setter Property="Foreground" Value="White" />
                                        <Setter Property="Padding" Value="8,6" />
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ComboBoxItem">
                                                    <Border Background="{TemplateBinding Background}"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter />
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsHighlighted" Value="True">
                                                            <Setter Property="Background" Value="#3D3D5C" />
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ComboBox.Style>
                </ComboBox>
            </StackPanel>

            <!-- Auto-refresh toggle -->
            <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="0,0,16,0">
                <TextBlock Text="Auto-refresh:"
                           Foreground="#8888AA"
                           VerticalAlignment="Center"
                           Margin="0,0,8,0" />
                <ToggleButton IsChecked="{Binding IsAutoRefreshEnabled}"
                              Command="{Binding ToggleAutoRefreshCommand}"
                              Background="#3D3D5C"
                              Foreground="White"
                              Padding="8,4">
                    <ToggleButton.Style>
                        <Style TargetType="ToggleButton">
                            <Setter Property="Content" Value="OFF" />
                            <Style.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter Property="Content" Value="ON" />
                                    <Setter Property="Background" Value="#4CAF50" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ToggleButton.Style>
                </ToggleButton>
                <TextBlock Text="{Binding RefreshCountdown, StringFormat='({0}s)'}"
                           Foreground="#8888AA"
                           VerticalAlignment="Center"
                           Margin="8,0,0,0"
                           Visibility="{Binding IsAutoRefreshEnabled, Converter={StaticResource BoolToVisConverter}}" />
            </StackPanel>

            <Button Grid.Column="4"
                    Content="Refresh Now"
                    Command="{Binding RefreshCommand}"
                    Background="#2196F3"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="16,12"
                    FontSize="14"
                    Cursor="Hand"
                    Margin="0,0,12,0" />

            <Button Grid.Column="5"
                    Content="View Reports"
                    Command="{Binding ViewSalesReportsCommand}"
                    Background="#9C27B0"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="16,12"
                    FontSize="14"
                    Cursor="Hand" />
        </Grid>

        <!-- KPI Cards Row -->
        <Grid Grid.Row="1" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Total Sales Card -->
            <Border Grid.Column="0" Style="{StaticResource KpiCardStyle}" Margin="0,0,12,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Today's Sales" Style="{StaticResource LabelStyle}" />
                    <TextBlock Grid.Row="1" Text="{Binding SalesSummary.TotalSales, StringFormat='KES {0:N0}'}"
                               Style="{StaticResource ValueStyle}" />
                    <!-- Sparkline -->
                    <oxy:PlotView Grid.Row="2"
                                  Model="{Binding SalesSparkline}"
                                  Height="40"
                                  Margin="0,4,0,0"
                                  Background="Transparent" />
                    <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,4,0,0">
                        <TextBlock Text="{Binding SalesTrendDisplay}"
                                   Foreground="{Binding IsSalesTrendPositive, Converter={StaticResource BoolToColorConverter}, FallbackValue=#4CAF50}" />
                        <TextBlock Text=" vs yesterday" Foreground="#8888AA" />
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Transactions Card -->
            <Border Grid.Column="1" Style="{StaticResource KpiCardStyle}" Margin="6,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Transactions" Style="{StaticResource LabelStyle}" />
                    <TextBlock Grid.Row="1" Text="{Binding SalesSummary.TransactionCount}"
                               Style="{StaticResource ValueStyle}" />
                    <!-- Sparkline -->
                    <oxy:PlotView Grid.Row="2"
                                  Model="{Binding OrdersSparkline}"
                                  Height="40"
                                  Margin="0,4,0,0"
                                  Background="Transparent" />
                    <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,4,0,0">
                        <TextBlock Text="{Binding Comparison.TransactionVsYesterdayPercent, StringFormat='{}{0:+0;-0}%'}"
                                   Foreground="#8888AA" />
                        <TextBlock Text=" vs yesterday" Foreground="#8888AA" />
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Average Ticket Card -->
            <Border Grid.Column="2" Style="{StaticResource KpiCardStyle}" Margin="6,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Avg Ticket" Style="{StaticResource LabelStyle}" />
                    <TextBlock Grid.Row="1" Text="{Binding SalesSummary.AverageTicket, StringFormat='KES {0:N0}'}"
                               Style="{StaticResource ValueStyle}" />
                    <!-- Sparkline -->
                    <oxy:PlotView Grid.Row="2"
                                  Model="{Binding AvgTicketSparkline}"
                                  Height="40"
                                  Margin="0,4,0,0"
                                  Background="Transparent" />
                    <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,4,0,0">
                        <TextBlock Text="{Binding Comparison.AvgTicketVsYesterdayPercent, StringFormat='{}{0:+0;-0}%'}"
                                   Foreground="#8888AA" />
                        <TextBlock Text=" vs yesterday" Foreground="#8888AA" />
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Low Stock Alert Card -->
            <Border Grid.Column="3" Style="{StaticResource KpiCardStyle}" Margin="6,0"
                    Cursor="Hand">
                <Border.InputBindings>
                    <MouseBinding MouseAction="LeftClick" Command="{Binding ViewInventoryCommand}" />
                </Border.InputBindings>
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Low Stock Items" Style="{StaticResource LabelStyle}" />
                        <Border Style="{StaticResource AlertBadgeStyle}"
                                Margin="8,0,0,0"
                                Visibility="{Binding LowStockAlerts.TotalCount, Converter={StaticResource GreaterThanZeroToVisibility}, FallbackValue=Collapsed}">
                            <TextBlock Text="{Binding LowStockAlerts.TotalCount}"
                                       Foreground="White"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center" />
                        </Border>
                    </StackPanel>
                    <TextBlock Text="{Binding LowStockAlerts.TotalCount}"
                               Style="{StaticResource ValueStyle}" />
                    <TextBlock Text="{Binding LowStockAlerts.OutOfStockCount, StringFormat='{}{0} out of stock'}"
                               Foreground="#F44336"
                               FontSize="12"
                               Margin="0,8,0,0" />
                </StackPanel>
            </Border>

            <!-- Items Sold Card -->
            <Border Grid.Column="4" Style="{StaticResource KpiCardStyle}" Margin="12,0,0,0">
                <StackPanel>
                    <TextBlock Text="Items Sold" Style="{StaticResource LabelStyle}" />
                    <TextBlock Text="{Binding SalesSummary.ItemsSold}"
                               Style="{StaticResource ValueStyle}" />
                    <TextBlock Text="{Binding SalesSummary.TaxCollected, StringFormat='Tax: KES {0:N0}'}"
                               Foreground="#8888AA"
                               FontSize="12"
                               Margin="0,8,0,0" />
                </StackPanel>
            </Border>
        </Grid>

        <!-- Main Content Area -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Hourly Sales Chart -->
            <Border Grid.Column="0" Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,12,12">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top"
                               Text="Hourly Sales Breakdown"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="White"
                               Margin="0,0,0,16" />

                    <!-- Simple bar chart using ItemsControl -->
                    <ItemsControl ItemsSource="{Binding HourlySales}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="24" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="1,0">
                                    <Border Background="{Binding IsCurrentHour, Converter={StaticResource CurrentHourBrushConverter}, FallbackValue=#4CAF50}"
                                            Height="{Binding Sales, Converter={StaticResource SalesToHeightConverter}}"
                                            VerticalAlignment="Bottom"
                                            CornerRadius="2,2,0,0"
                                            ToolTip="{Binding Sales, StringFormat='KES {0:N0}'}" />
                                    <TextBlock Text="{Binding Hour}"
                                               FontSize="8"
                                               Foreground="#8888AA"
                                               HorizontalAlignment="Center"
                                               Margin="0,4,0,0" />
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </DockPanel>
            </Border>

            <!-- Top Selling Products -->
            <Border Grid.Column="0" Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,12,12,0">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top"
                               Text="Top Selling Products"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="White"
                               Margin="0,0,0,16" />

                    <DataGrid ItemsSource="{Binding TopProducts}"
                              AutoGenerateColumns="False"
                              Background="Transparent"
                              Foreground="White"
                              BorderThickness="0"
                              GridLinesVisibility="Horizontal"
                              HorizontalGridLinesBrush="#3D3D5C"
                              RowBackground="#2D2D44"
                              AlternatingRowBackground="#353550"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              RowHeight="36"
                              SelectionMode="Single"
                              SelectionUnit="FullRow"
                              Cursor="Hand">
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="#2D2D44" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#3D3D5C" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.InputBindings>
                            <MouseBinding MouseAction="LeftDoubleClick"
                                          Command="{Binding ViewProductDetailsCommand}"
                                          CommandParameter="{Binding SelectedItem.ProductId, RelativeSource={RelativeSource AncestorType=DataGrid}}" />
                        </DataGrid.InputBindings>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="#" Binding="{Binding Rank}" Width="40" />
                            <DataGridTextColumn Header="Product" Binding="{Binding ProductName}" Width="*" />
                            <DataGridTextColumn Header="Category" Binding="{Binding CategoryName}" Width="120" />
                            <DataGridTextColumn Header="Qty" Binding="{Binding QuantitySold, StringFormat=N0}" Width="60" />
                            <DataGridTextColumn Header="Revenue" Binding="{Binding Revenue, StringFormat='KES {0:N0}'}" Width="120" />
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </Border>

            <!-- Right Sidebar -->
            <StackPanel Grid.Column="1" Grid.RowSpan="2">
                <!-- Payment Method Breakdown -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock Text="Payment Methods"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   Margin="0,0,0,16" />

                        <ItemsControl ItemsSource="{Binding PaymentBreakdown}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,0,0,12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <Ellipse Grid.Column="0" Grid.RowSpan="2"
                                                 Width="12" Height="12"
                                                 Fill="{Binding ColorCode}"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,8,0" />

                                        <TextBlock Grid.Column="1" Grid.Row="0"
                                                   Text="{Binding PaymentMethodName}"
                                                   Foreground="White"
                                                   FontWeight="SemiBold" />

                                        <TextBlock Grid.Column="2" Grid.Row="0"
                                                   Text="{Binding Amount, StringFormat='KES {0:N0}'}"
                                                   Foreground="White"
                                                   HorizontalAlignment="Right" />

                                        <ProgressBar Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2"
                                                     Value="{Binding Percentage}"
                                                     Maximum="100"
                                                     Height="4"
                                                     Margin="0,4,0,0"
                                                     Background="#3D3D5C"
                                                     Foreground="{Binding ColorCode}" />
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Comparison Metrics -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock Text="Performance Comparison"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   Margin="0,0,0,16" />

                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="vs Yesterday" Foreground="#8888AA" FontSize="12" />
                                <TextBlock Text="{Binding Comparison.YesterdaySales, StringFormat='KES {0:N0}'}"
                                           Foreground="White" FontSize="14" />
                            </StackPanel>
                            <TextBlock Grid.Column="1"
                                       Text="{Binding Comparison.VsYesterdayPercent, StringFormat='{}{0:+0;-0}%'}"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#4CAF50" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Comparison.IsBetterThanYesterday}" Value="False">
                                                <Setter Property="Foreground" Value="#F44336" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="vs Last Week (same day)" Foreground="#8888AA" FontSize="12" />
                                <TextBlock Text="{Binding Comparison.LastWeekSameDaySales, StringFormat='KES {0:N0}'}"
                                           Foreground="White" FontSize="14" />
                            </StackPanel>
                            <TextBlock Grid.Column="1"
                                       Text="{Binding Comparison.VsLastWeekPercent, StringFormat='{}{0:+0;-0}%'}"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#4CAF50" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Comparison.IsBetterThanLastWeek}" Value="False">
                                                <Setter Property="Foreground" Value="#F44336" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Alerts Summary -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Alerts"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   Margin="0,0,0,16" />

                        <!-- Low Stock Alert -->
                        <Border Background="#3D3D5C" CornerRadius="4" Padding="12" Margin="0,0,0,8"
                                Cursor="Hand">
                            <Border.InputBindings>
                                <MouseBinding MouseAction="LeftClick" Command="{Binding ViewInventoryCommand}" />
                            </Border.InputBindings>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="0" Background="#F44336" CornerRadius="4"
                                        Width="40" Height="40" Margin="0,0,12,0">
                                    <TextBlock Text="!" FontSize="24" FontWeight="Bold"
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center" />
                                </Border>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Low Stock" Foreground="White" FontWeight="SemiBold" />
                                    <TextBlock Text="{Binding LowStockAlerts.OutOfStockCount, StringFormat='{}{0} out of stock'}"
                                               Foreground="#8888AA" FontSize="12" />
                                </StackPanel>
                                <TextBlock Grid.Column="2"
                                           Text="{Binding LowStockAlerts.TotalCount}"
                                           FontSize="24"
                                           FontWeight="Bold"
                                           Foreground="#F44336"
                                           VerticalAlignment="Center" />
                            </Grid>
                        </Border>

                        <!-- Low Stock Items List (Top 5) -->
                        <Border Background="#2D2D44" CornerRadius="4" Padding="8" Margin="0,0,0,8"
                                Visibility="{Binding LowStockAlerts.TotalCount, Converter={StaticResource GreaterThanZeroToVisibility}, FallbackValue=Collapsed}">
                            <StackPanel>
                                <TextBlock Text="Items Needing Attention" Foreground="#9CA3AF" FontSize="11" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                <ItemsControl ItemsSource="{Binding LowStockAlerts.Items}" MaxHeight="150">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#252538" CornerRadius="4" Padding="8,6" Margin="0,0,0,4"
                                                    Cursor="Hand">
                                                <Border.InputBindings>
                                                    <MouseBinding MouseAction="LeftClick"
                                                                  Command="{Binding DataContext.ViewProductDetailsCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                                  CommandParameter="{Binding ProductId}" />
                                                </Border.InputBindings>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>
                                                    <TextBlock Text="{Binding ProductName}" Foreground="White" FontSize="12"
                                                               TextTrimming="CharacterEllipsis" ToolTip="{Binding ProductName}"/>
                                                    <!-- Stock Level Indicator -->
                                                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding CurrentStock, StringFormat='{}{0:N0}'}"
                                                                   FontSize="12" FontWeight="Bold" VerticalAlignment="Center">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Foreground" Value="#F59E0B"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsOutOfStock}" Value="True">
                                                                            <Setter Property="Foreground" Value="#EF4444"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                        <TextBlock Text=" / " Foreground="#6B7280" FontSize="10" VerticalAlignment="Center"/>
                                                        <TextBlock Text="{Binding MinimumStock, StringFormat='{}{0:N0}'}"
                                                                   Foreground="#6B7280" FontSize="10" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                    <!-- Out of Stock Badge -->
                                                    <Border Grid.Row="1" Grid.ColumnSpan="2"
                                                            Visibility="{Binding IsOutOfStock, Converter={StaticResource BoolToVisConverter}}"
                                                            Background="#EF4444" CornerRadius="2" Padding="4,1" HorizontalAlignment="Left" Margin="0,4,0,0">
                                                        <TextBlock Text="OUT OF STOCK" Foreground="White" FontSize="8" FontWeight="Bold"/>
                                                    </Border>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                <!-- View All Button -->
                                <Button Content="View All Low Stock Items" Margin="0,8,0,0"
                                        Background="#3D3D5C" Foreground="#9CA3AF" FontSize="11" Height="28"
                                        BorderThickness="0" Cursor="Hand"
                                        Command="{Binding ViewInventoryCommand}">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#4B5563"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </StackPanel>
                        </Border>

                        <!-- Expiry Alert (only if batch tracking enabled) -->
                        <Border Background="#3D3D5C" CornerRadius="4" Padding="12"
                                Visibility="{Binding ExpiryAlerts.IsBatchTrackingEnabled, Converter={StaticResource BoolToVisConverter}, FallbackValue=Collapsed}"
                                Cursor="Hand">
                            <Border.InputBindings>
                                <MouseBinding MouseAction="LeftClick" Command="{Binding ViewExpiryAlertsCommand}" />
                            </Border.InputBindings>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="0" Background="#FF9800" CornerRadius="4"
                                        Width="40" Height="40" Margin="0,0,12,0">
                                    <TextBlock Text="!" FontSize="24" FontWeight="Bold"
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center" />
                                </Border>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Expiring Soon" Foreground="White" FontWeight="SemiBold" />
                                    <TextBlock Text="{Binding ExpiryAlerts.ExpiredCount, StringFormat='{}{0} already expired'}"
                                               Foreground="#8888AA" FontSize="12" />
                                </StackPanel>
                                <TextBlock Grid.Column="2"
                                           Text="{Binding ExpiryAlerts.TotalCount}"
                                           FontSize="24"
                                           FontWeight="Bold"
                                           Foreground="#FF9800"
                                           VerticalAlignment="Center" />
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Sync Status Widget -->
                <Border Style="{StaticResource CardStyle}" Margin="0,12,0,0">
                    <StackPanel>
                        <TextBlock Text="Sync Status"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   Margin="0,0,0,16" />

                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Ellipse Grid.Column="0" Width="12" Height="12" Margin="0,0,8,0" VerticalAlignment="Center">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="#4CAF50" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SyncStatus.IsOnline}" Value="False">
                                                <Setter Property="Fill" Value="#F44336" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                            <TextBlock Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="Online" />
                                        <Setter Property="Foreground" Value="#4CAF50" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SyncStatus.IsOnline}" Value="False">
                                                <Setter Property="Text" Value="Offline" />
                                                <Setter Property="Foreground" Value="#F44336" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="Pending: " Foreground="#8888AA" FontSize="12" />
                            <TextBlock Text="{Binding SyncStatus.PendingSyncCount, FallbackValue=0}"
                                       Foreground="White" FontSize="12" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Last sync: " Foreground="#8888AA" FontSize="12" />
                            <TextBlock Text="{Binding SyncStatus.LastSyncTime, StringFormat='HH:mm:ss', FallbackValue='Never'}"
                                       Foreground="White" FontSize="12" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="3"
                Background="#80000000"
                Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="4" />
                <TextBlock Text="{Binding BusyMessage}"
                           Foreground="White"
                           FontSize="14"
                           Margin="0,16,0,0"
                           HorizontalAlignment="Center" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
