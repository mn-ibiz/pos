<UserControl x:Class="HospitalityPOS.WPF.Views.TableMapView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:HospitalityPOS.WPF.Converters"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="#1E1E2E">

    <UserControl.Resources>
        <converters:TableStatusColorConverter x:Key="TableStatusColor"/>
        <converters:TableShapeRadiusConverter x:Key="TableShapeRadius"/>
        <converters:GridCellSizeConverter x:Key="GridCellSize"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibility"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2D2D44" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Content="Back"
                            Command="{Binding GoBackCommand}"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Width="80"
                            Margin="0,0,16,0"/>

                    <TextBlock Text="Table Map"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="Manage Floors"
                            Command="{Binding ManageFloorsCommand}"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Width="120"
                            Margin="0,0,8,0"/>

                    <ToggleButton IsChecked="{Binding AutoRefreshEnabled}"
                                  Content="Auto Refresh"
                                  Style="{StaticResource ToggleButtonStyle}"
                                  Width="110"
                                  Margin="0,0,8,0"/>

                    <Button Content="Refresh"
                            Command="{Binding RefreshCommand}"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Width="100"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Filters Bar -->
        <Border Grid.Row="1" Background="#252545" Padding="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Floor Selector -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,24,0">
                    <TextBlock Text="Floor:"
                               Foreground="#AAAACC"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <ComboBox ItemsSource="{Binding Floors}"
                              SelectedItem="{Binding SelectedFloor}"
                              DisplayMemberPath="Name"
                              Width="180"
                              Style="{StaticResource ComboBoxStyle}"/>
                </StackPanel>

                <!-- Status Filter -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,24,0">
                    <TextBlock Text="Status:"
                               Foreground="#AAAACC"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <ComboBox ItemsSource="{Binding StatusFilters}"
                              SelectedItem="{Binding SelectedStatusFilter}"
                              DisplayMemberPath="DisplayName"
                              Width="150"
                              Style="{StaticResource ComboBoxStyle}"/>
                </StackPanel>

                <!-- Waiter Filter -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,24,0">
                    <TextBlock Text="Waiter:"
                               Foreground="#AAAACC"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <ComboBox ItemsSource="{Binding Waiters}"
                              SelectedItem="{Binding SelectedWaiterFilter}"
                              DisplayMemberPath="FullName"
                              Width="180"
                              Style="{StaticResource ComboBoxStyle}"/>
                </StackPanel>

                <!-- Last Refresh Time -->
                <TextBlock Grid.Column="4"
                           Foreground="#8888AA"
                           VerticalAlignment="Center">
                    <Run Text="Last updated: "/>
                    <Run Text="{Binding LastRefreshTime, StringFormat='{}{0:HH:mm:ss}'}"/>
                </TextBlock>
            </Grid>
        </Border>

        <!-- Table Grid -->
        <Border Grid.Row="2" Background="#1E1E2E" Margin="16">
            <ScrollViewer HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <Grid>
                    <!-- Empty State -->
                    <TextBlock Text="No tables found. Add tables in Floor Management."
                               FontSize="16"
                               Foreground="#8888AA"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Visibility="{Binding Tables.Count, Converter={StaticResource ZeroToVisibilityConverter}, FallbackValue=Collapsed}"/>

                    <!-- Tables Canvas -->
                    <ItemsControl ItemsSource="{Binding Tables}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas Width="{Binding GridWidth, Converter={StaticResource GridCellSize}, ConverterParameter=60}"
                                        Height="{Binding GridHeight, Converter={StaticResource GridCellSize}, ConverterParameter=60}"
                                        Background="Transparent"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemContainerStyle>
                            <Style>
                                <Setter Property="Canvas.Left" Value="{Binding GridX, Converter={StaticResource GridCellSize}}"/>
                                <Setter Property="Canvas.Top" Value="{Binding GridY, Converter={StaticResource GridCellSize}}"/>
                            </Style>
                        </ItemsControl.ItemContainerStyle>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border x:Name="TableCard"
                                        Width="{Binding Width, Converter={StaticResource GridCellSize}}"
                                        Height="{Binding Height, Converter={StaticResource GridCellSize}}"
                                        Background="{Binding Status, Converter={StaticResource TableStatusColor}}"
                                        BorderBrush="#333333"
                                        BorderThickness="2"
                                        CornerRadius="{Binding Shape, Converter={StaticResource TableShapeRadius}}"
                                        Cursor="Hand"
                                        Margin="2">
                                    <Border.InputBindings>
                                        <MouseBinding MouseAction="LeftClick"
                                                      Command="{Binding DataContext.TableTappedCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                      CommandParameter="{Binding}"/>
                                        <MouseBinding MouseAction="LeftDoubleClick"
                                                      Command="{Binding DataContext.TableDoubleTappedCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                      CommandParameter="{Binding}"/>
                                        <MouseBinding MouseAction="RightClick"
                                                      Command="{Binding DataContext.TableContextMenuCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                      CommandParameter="{Binding}"/>
                                    </Border.InputBindings>
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="2" BlurRadius="4" Opacity="0.3"/>
                                    </Border.Effect>

                                    <Grid Margin="6">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Table Number -->
                                        <TextBlock Grid.Row="0"
                                                   Text="{Binding TableNumber}"
                                                   FontSize="20"
                                                   FontWeight="Bold"
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"/>

                                        <!-- Details -->
                                        <StackPanel Grid.Row="1" VerticalAlignment="Center">
                                            <!-- Waiter Name -->
                                            <TextBlock Text="{Binding WaiterName}"
                                                       FontSize="11"
                                                       Foreground="#EEEEEE"
                                                       HorizontalAlignment="Center"
                                                       TextTrimming="CharacterEllipsis"
                                                       Visibility="{Binding WaiterName, Converter={StaticResource StringToVisibility}}"/>

                                            <!-- Bill Amount -->
                                            <TextBlock Text="{Binding BillAmountDisplay}"
                                                       FontSize="13"
                                                       FontWeight="SemiBold"
                                                       Foreground="White"
                                                       HorizontalAlignment="Center"
                                                       Visibility="{Binding BillAmountDisplay, Converter={StaticResource StringToVisibility}}"/>

                                            <!-- Reservation Info -->
                                            <TextBlock Text="{Binding ReservationTime}"
                                                       FontSize="11"
                                                       Foreground="#FFEB3B"
                                                       HorizontalAlignment="Center"
                                                       Visibility="{Binding ReservationTime, Converter={StaticResource StringToVisibility}}"/>
                                        </StackPanel>

                                        <!-- Footer -->
                                        <StackPanel Grid.Row="2" Orientation="Horizontal"
                                                    HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding OccupiedDuration}"
                                                       FontSize="10"
                                                       Foreground="#DDDDDD"
                                                       Margin="0,0,6,0"
                                                       Visibility="{Binding OccupiedDuration, Converter={StaticResource StringToVisibility}}"/>
                                            <TextBlock Text="{Binding GuestDisplay}"
                                                       FontSize="10"
                                                       Foreground="#DDDDDD"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                        <Setter TargetName="TableCard" Property="BorderBrush" Value="White"/>
                                        <Setter TargetName="TableCard" Property="BorderThickness" Value="3"/>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </ScrollViewer>
        </Border>

        <!-- Status Summary and Legend -->
        <Border Grid.Row="3" Background="#252545" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Status Counts -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <!-- Available -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,32,0">
                        <Border Width="20" Height="20" Background="#4CAF50"
                                CornerRadius="4" Margin="0,0,8,0"/>
                        <TextBlock Foreground="White" VerticalAlignment="Center">
                            <Run Text="Available: "/>
                            <Run Text="{Binding AvailableCount}" FontWeight="Bold"/>
                        </TextBlock>
                    </StackPanel>

                    <!-- Occupied -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,32,0">
                        <Border Width="20" Height="20" Background="#F44336"
                                CornerRadius="4" Margin="0,0,8,0"/>
                        <TextBlock Foreground="White" VerticalAlignment="Center">
                            <Run Text="Occupied: "/>
                            <Run Text="{Binding OccupiedCount}" FontWeight="Bold"/>
                        </TextBlock>
                    </StackPanel>

                    <!-- Reserved -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,32,0">
                        <Border Width="20" Height="20" Background="#FFC107"
                                CornerRadius="4" Margin="0,0,8,0"/>
                        <TextBlock Foreground="White" VerticalAlignment="Center">
                            <Run Text="Reserved: "/>
                            <Run Text="{Binding ReservedCount}" FontWeight="Bold"/>
                        </TextBlock>
                    </StackPanel>

                    <!-- Unavailable -->
                    <StackPanel Orientation="Horizontal">
                        <Border Width="20" Height="20" Background="#9E9E9E"
                                CornerRadius="4" Margin="0,0,8,0"/>
                        <TextBlock Foreground="White" VerticalAlignment="Center">
                            <Run Text="Unavailable: "/>
                            <Run Text="{Binding UnavailableCount}" FontWeight="Bold"/>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>

                <!-- Total Bill Amount -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="Total Open Bills:"
                               Foreground="#AAAACC"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <TextBlock Foreground="#4CAF50"
                               FontWeight="Bold"
                               FontSize="16"
                               VerticalAlignment="Center">
                        <Run Text="KSh "/>
                        <Run Text="{Binding TotalBillAmount, StringFormat='{}{0:N0}'}"/>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Busy Overlay -->
        <Border Grid.RowSpan="4"
                Background="#80000000"
                Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibility}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="4"/>
                <TextBlock Text="{Binding BusyMessage}"
                           Foreground="White"
                           Margin="0,16,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
